<%= render partial: "shared/top_menu", locals: {
  breadcrumbs: [
    ["Settings", "#"]
  ],
  text: "Ticketing Integrations",
  links: [
    { text: "Connect Platform", path: manage_new_ticketing_provider_path }
  ]
} %>

<div class="max-w-4xl mx-auto px-4 py-6">
  <% if @ticketing_providers.any? %>
    <div class="bg-white shadow rounded-lg divide-y divide-gray-200">
      <% @ticketing_providers.each do |provider| %>
        <div class="px-6 py-4">
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-4">
              <div class="w-10 h-10 bg-gray-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z" />
                </svg>
              </div>
              <div>
                <h3 class="font-medium text-gray-900"><%= provider.name %></h3>
                <p class="text-sm text-gray-500">
                  <%= provider.provider_display_name %>
                  <% if provider.provider_account_name.present? %>
                    &middot; <%= provider.provider_account_name %>
                  <% end %>
                </p>
              </div>
            </div>

            <div class="flex items-center space-x-4">
              <% if provider.last_sync_status == "success" %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  Connected
                </span>
              <% elsif provider.last_sync_status == "failed" %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                  Error
                </span>
              <% elsif !provider.has_credentials? %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                  Setup Required
                </span>
              <% end %>

              <%= link_to "Manage", manage_ticketing_provider_path(provider),
                          class: "text-sm text-pink-600 hover:text-pink-800" %>
            </div>
          </div>

          <% if provider.last_synced_at.present? %>
            <p class="mt-2 text-xs text-gray-400">
              Last synced <%= time_ago_in_words(provider.last_synced_at) %> ago
              &middot;
              <%= provider.ticketing_production_links.count %> productions linked
            </p>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12 bg-white shadow rounded-lg">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z" />
      </svg>
      <h3 class="mt-2 text-sm font-semibold text-gray-900">No ticketing platforms connected</h3>
      <p class="mt-1 text-sm text-gray-500">
        Connect your ticketing platform to automatically sync ticket sales data.
      </p>
      <div class="mt-6">
        <%= link_to manage_new_ticketing_provider_path do %>
          <%= render "shared/button", text: "Connect Platform", variant: "primary", size: "medium" %>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="mt-8 bg-blue-50 border border-blue-200 rounded-lg p-4">
    <h4 class="text-sm font-medium text-blue-800">Supported Platforms</h4>
    <p class="mt-1 text-sm text-blue-700">
      Ticket Tailor, Eventbrite, Wix Events, and more. Each production can use a different platform.
    </p>
  </div>
</div>
