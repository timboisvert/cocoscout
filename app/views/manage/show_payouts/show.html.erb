<% content_for :title, "Payout: #{show_display_name(@show)} - #{@production.name}" %>

<%
  has_financials = @show_financials&.complete?
  has_line_items = @line_items.any?
  is_calculated = @show_payout.calculated_at.present?

  # Determine payout status with new terminology
  if @show_payout.paid?
    payout_status = :paid
    payout_label = "Paid"
    payout_class = "bg-pink-100 text-pink-700"
  elsif is_calculated
    payout_status = :awaiting_payout
    payout_label = "Awaiting Payout"
    payout_class = "bg-pink-100 text-pink-700"
  elsif has_financials
    payout_status = :ready
    payout_label = "Ready to Calculate"
    payout_class = "bg-gray-100 text-gray-700"
  else
    payout_status = :awaiting_calculation
    payout_label = "Awaiting Calculation"
    payout_class = "bg-pink-100 text-pink-700"
  end
%>

<div class="w-full mb-10">
  <%= render partial: "shared/notice", locals: { notice: notice, alert: alert } %>
  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Money", manage_production_money_index_path(@production)]
    ],
    text: "Payouts",
    links: []
  } %>

  <!-- Show Summary Row - uses same partial as money index -->
  <div class="mb-6">
    <%= render partial: "manage/payouts/money_show_row", locals: { show: @show, production: @production } %>
  </div>

  <%
    # Prepare payee data for the walkthrough (available to both main content and sidebar)
    unpaid_line_items = @line_items.reject(&:paid?)
    payees_for_js = unpaid_line_items.map.with_index do |item, idx|
      {
        id: item.id,
        name: item.payee_name,
        amount: item.amount,
        venmo_handle: item.payee.respond_to?(:formatted_venmo_identifier) ? item.payee.formatted_venmo_identifier : nil,
        venmo_ready: item.payee_venmo_ready?
      }
    end
  %>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6"
       data-controller="payment-actions"
       data-payment-actions-payees-value="<%= payees_for_js.to_json %>">

    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">

      <% if @show.canceled? && !@show_payout.paid? %>
        <!-- Canceled Show Notice -->
        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
          <div class="flex gap-3">
            <svg class="w-5 h-5 text-red-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd"/>
            </svg>
            <div>
              <p class="text-sm text-red-800 font-medium">This show was canceled</p>
              <p class="text-sm text-red-700 mt-1">You can still process payouts for this show. Choose how you'd like to handle compensation:</p>
              <div class="mt-3 flex flex-wrap gap-2">
                <% if @show_payout.payout_scheme || @show_payout.has_overrides? %>
                  <%= form_with url: manage_production_calculate_money_show_payout_path(@production, @show), method: :post, local: true do %>
                    <%= render "shared/button", text: "Pay as Originally Planned", variant: "secondary", size: "small", type: :submit %>
                  <% end %>
                <% end %>
                <%= link_to manage_production_override_money_show_payout_path(@production, @show) do %>
                  <%= render "shared/button", text: "Set Custom Amounts", variant: "secondary", size: "small" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <% unless has_financials %>
        <!-- Need Financial Data Notice -->
        <div class="bg-pink-50 border border-pink-200 rounded-lg p-4">
          <div class="flex gap-3">
            <svg class="w-5 h-5 text-pink-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <div>
              <p class="text-sm text-pink-800 font-medium">Financial data needed</p>
              <p class="text-sm text-pink-700 mt-1">Enter ticket sales and revenue data to calculate payouts for this show.</p>
              <div class="mt-3">
                <%= link_to manage_production_edit_money_show_financials_path(@production, @show) do %>
                  <%= render "shared/button", text: "Enter Financial Data", variant: "primary", size: "small" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Payout Scheme Info -->
      <div class="bg-white rounded-lg border border-gray-200 p-5">
        <div class="flex items-center justify-between mb-3">
          <h3 class="font-semibold text-gray-900">Payout Scheme</h3>
          <%= link_to manage_production_money_payout_schemes_path(@production), class: "text-sm text-pink-600 hover:text-pink-700" do %>
            Manage Schemes
          <% end %>
        </div>
        <% if @show_payout.has_overrides? %>
          <div class="flex items-center gap-2 text-pink-600 mb-2">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a.75.75 0 000 1.5h.253a.25.25 0 01.244.304l-.459 2.066A1.75 1.75 0 0010.747 15H11a.75.75 0 000-1.5h-.253a.25.25 0 01-.244-.304l.459-2.066A1.75 1.75 0 009.253 9H9z" clip-rule="evenodd"/>
            </svg>
            <span class="text-sm font-medium">Custom Rules</span>
          </div>
          <p class="text-sm text-gray-600 mb-3">This show has custom payout rules.</p>
          <% if @show_payout.can_edit? %>
            <div class="flex flex-wrap gap-2">
              <%= link_to manage_production_override_money_show_payout_path(@production, @show), data: { turbo_frame: "customize_modal" } do %>
                <%= render "shared/button", text: "Edit Custom Rules", variant: "secondary", size: "small" %>
              <% end %>
              <%= form_with url: manage_production_clear_override_money_show_payout_path(@production, @show), method: :delete, local: true, class: "inline" do %>
                <%= render "shared/button", text: "Use Default Scheme", variant: "ghost", size: "small", type: :submit %>
              <% end %>
            </div>
          <% end %>
        <% elsif @show_payout.payout_scheme %>
          <div class="font-medium text-gray-900"><%= @show_payout.payout_scheme.name %></div>
          <p class="text-sm text-gray-500 mt-1"><%= @show_payout.payout_scheme.rules_summary %></p>
          <% if @show_payout.can_edit? %>
            <div class="mt-3 flex flex-wrap gap-2">
              <%= link_to manage_production_override_money_show_payout_path(@production, @show), data: { turbo_frame: "customize_modal" } do %>
                <%= render "shared/button", text: "Customize", variant: "secondary", size: "small" %>
              <% end %>
              <%= link_to manage_production_change_scheme_money_show_payout_path(@production, @show), data: { turbo_frame: "change_scheme_modal" } do %>
                <%= render "shared/button", text: "Change Scheme", variant: "ghost", size: "small" %>
              <% end %>
            </div>
          <% end %>
        <% else %>
          <% available_schemes = @production.payout_schemes.order(:name) %>
          <% if available_schemes.any? %>
            <p class="text-sm text-gray-500 mb-3">Select a scheme to use for this show's payouts.</p>
            <%= form_with model: @show_payout, url: manage_production_money_show_payout_path(@production, @show), method: :patch, local: true do |f| %>
              <div class="flex flex-wrap gap-2">
                <%= f.select :payout_scheme_id,
                    options_from_collection_for_select(available_schemes, :id, :name),
                    { prompt: "Choose a scheme..." },
                    class: "flex-1 min-w-[200px] rounded-lg border border-gray-300 px-3 py-2 text-sm focus:border-pink-500 focus:ring-pink-500" %>
                <%= render "shared/button", text: "Set Scheme", variant: "primary", size: "small", type: :submit %>
              </div>
            <% end %>
          <% else %>
            <p class="text-sm text-gray-500 mb-3">No payout schemes available. Create one to calculate payouts.</p>
            <%= link_to manage_production_presets_money_payout_schemes_path(@production) do %>
              <%= render "shared/button", text: "Create a Scheme", variant: "primary", size: "small" %>
            <% end %>
          <% end %>
        <% end %>
      </div>

      <!-- Payout Breakdown -->
      <div class="bg-white rounded-lg border border-gray-200 p-5">
        <div class="flex items-center justify-between mb-4">
          <h3 class="font-semibold text-gray-900">Payout Breakdown</h3>
          <% if @show_payout.total_payout %>
            <span class="text-lg font-semibold text-pink-600">Total: <%= number_to_currency(@show_payout.total_payout) %></span>
          <% end %>
        </div>

        <% if has_line_items %>
          <%
            unpaid_count = @line_items.count { |li| !li.paid? }
            paid_count = @line_items.count { |li| li.paid? }
            payment_ready_count = @line_items.count { |li| li.payee_has_payment_method? && !li.paid? }
            needs_setup_count = @line_items.count { |li| !li.payee_has_payment_method? && !li.paid? }
            pending_payout_count = @line_items.count { |li| li.payout_pending? }
          %>

          <!-- Payment Summary Bar -->
          <% if is_calculated && unpaid_count > 0 %>
            <%
              # Get unpaid items for the walkthrough
              unpaid_items = @line_items.reject(&:paid?)
              unpaid_total = unpaid_items.sum(&:amount)
            %>
            <div class="bg-gray-50 rounded-lg p-4 mb-4">
              <div class="flex items-center justify-between flex-wrap gap-3">
                <div class="flex items-center gap-4 text-sm">
                  <span class="text-gray-600">
                    <span class="font-semibold text-pink-600"><%= paid_count %></span> paid
                  </span>
                  <span class="text-gray-600">
                    <span class="font-semibold text-pink-600"><%= unpaid_count %></span> awaiting payout
                  </span>
                  <% if needs_setup_count > 0 %>
                    <span class="text-gray-600">
                      <span class="font-semibold text-pink-600"><%= needs_setup_count %></span> need payment setup
                    </span>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>

          <div class="overflow-x-auto">
            <table class="w-full">
              <thead>
                <tr class="border-b border-gray-200">
                  <th class="text-left text-xs font-medium text-gray-500 uppercase tracking-wide py-2">Payee</th>
                  <th class="text-right text-xs font-medium text-gray-500 uppercase tracking-wide py-2">Amount</th>
                  <th class="text-left text-xs font-medium text-gray-500 uppercase tracking-wide py-2 pl-4">Calculation</th>
                  <% if is_calculated || @show_payout.paid? %>
                    <th class="text-right text-xs font-medium text-gray-500 uppercase tracking-wide py-2">Status</th>
                  <% end %>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-100">
                <% @line_items.each do |item| %>
                  <tr class="<%= item.manually_paid? ? 'bg-green-50' : '' %>">
                    <td class="py-3">
                      <div class="flex items-center gap-2">
                        <% headshot_variant = item.payee.respond_to?(:safe_headshot_variant) ? item.payee.safe_headshot_variant(:thumb) : nil %>
                        <% if headshot_variant %>
                          <%= image_tag headshot_variant, alt: item.payee_name, class: "w-8 h-8 rounded-lg object-cover" %>
                        <% else %>
                          <div class="w-8 h-8 rounded-lg bg-pink-100 flex items-center justify-center text-pink-600 font-medium text-sm">
                            <%= item.payee_name[0].upcase %>
                          </div>
                        <% end %>
                        <div>
                          <div class="font-medium text-gray-900"><%= item.payee_name %></div>
                          <div class="text-xs flex items-center gap-1.5 flex-wrap">
                            <span class="text-gray-500"><%= item.payee_type_label %></span>
                            <% payment_info = item.payee_preferred_payment %>
                            <% if payment_info %>
                              <% if payment_info[:method] == "venmo" %>
                                <span class="inline-flex items-center gap-0.5 text-blue-600">
                                  <svg class="w-3 h-3" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M19.5 3c.9 1.5 1.3 3.1 1.3 5.1 0 5.6-4.8 12.9-8.7 18H4.8L2.2 3.8l6.3-.6 1.5 12c1.4-2.3 3.1-5.9 3.1-8.4 0-1.9-.3-3.2-.9-4.3L19.5 3z"/>
                                  </svg>
                                  <span><%= payment_info[:identifier] %></span>
                                </span>
                              <% elsif payment_info[:method] == "zelle" %>
                                <span class="inline-flex items-center gap-0.5 text-purple-600">
                                  <svg class="w-3 h-3" viewBox="0 0 50 50" fill="currentColor">
                                    <path d="M25 50c13.807 0 25-11.193 25-25S38.807 0 25 0 0 11.193 0 25s11.193 25 25 25z"/>
                                  </svg>
                                  <span><%= payment_info[:identifier] %></span>
                                </span>
                              <% end %>
                            <% elsif !item.paid? %>
                              <span class="text-gray-400">(no payment method)</span>
                            <% end %>
                          </div>
                        </div>
                      </div>
                    </td>
                    <td class="py-3 text-right">
                      <span class="font-semibold <%= item.manually_paid? ? 'text-green-700' : 'text-gray-900' %>"><%= number_to_currency(item.amount) %></span>
                    </td>
                    <td class="py-3 pl-4">
                      <span class="text-sm text-gray-500"><%= item.calculation_explanation %></span>
                    </td>
                    <% if @show_payout.approved? || @show_payout.paid? %>
                      <td class="py-3 text-right">
                        <% if item.paid? %>
                          <div class="flex items-center justify-end gap-2">
                            <div class="text-right">
                              <span class="inline-flex items-center rounded-md px-2 py-0.5 text-xs font-medium bg-green-100 text-green-700">
                                <%= item.payment_method_label || "Paid" %>
                              </span>
                              <% if item.paid_at %>
                                <div class="text-xs text-gray-400 mt-0.5"><%= item.paid_at.strftime("%b %-d") %></div>
                              <% end %>
                            </div>
                            <% unless @show_payout.paid? %>
                              <%= button_to manage_production_unmark_line_item_paid_money_show_payout_path(@production, @show, item),
                                  method: :delete,
                                  class: "text-gray-400 hover:text-gray-600",
                                  title: "Unmark as paid",
                                  data: { turbo_confirm: "Unmark #{item.payee_name} as paid?" } do %>
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                                </svg>
                              <% end %>
                            <% end %>
                          </div>
                        <% elsif item.payout_pending? %>
                          <div class="text-right">
                            <span class="inline-flex items-center rounded-md px-2 py-0.5 text-xs font-medium bg-gray-100 text-gray-700">
                              Processing
                            </span>
                            <div class="text-xs text-gray-400 mt-0.5">via <%= item.payment_method_label || "Venmo" %></div>
                          </div>
                        <% elsif item.payout_failed? %>
                          <div class="text-right">
                            <span class="inline-flex items-center rounded-md px-2 py-0.5 text-xs font-medium bg-red-100 text-red-700">
                              Failed
                            </span>
                            <% if item.payout_error.present? %>
                              <div class="text-xs text-red-500 mt-0.5" title="<%= item.payout_error %>">Error</div>
                            <% end %>
                          </div>
                        <% else %>
                          <button type="button"
                                  data-action="click->payment-actions#showMarkPaidModal"
                                  data-item-id="<%= item.id %>"
                                  data-item-name="<%= item.payee_name %>"
                                  class="inline-flex items-center gap-1 px-2 py-1 text-xs font-medium text-gray-600 bg-gray-100 rounded hover:bg-gray-200 transition-colors">
                            Mark as paid
                          </button>
                        <% end %>
                      </td>
                    <% end %>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>

          <!-- Individual Mark Paid Modal -->
          <div data-payment-actions-target="markPaidModal"
               class="hidden fixed inset-0 bg-black/50 z-50 flex items-center justify-center"
               data-action="click->payment-actions#closeOnBackdrop">
            <div class="bg-white rounded-lg shadow-xl max-w-sm w-full mx-4 p-6">
              <h3 class="text-lg font-semibold text-gray-900 mb-2">Mark as Paid</h3>
              <p class="text-sm text-gray-600 mb-4">Recording payment for <span data-payment-actions-target="markPaidName" class="font-medium"></span></p>
              <div class="space-y-2">
                <% ShowPayoutLineItem::PAYMENT_METHODS.each do |method| %>
                  <%= form_with url: "#", method: :post, local: true, class: "mark-paid-form", data: { "payment-actions-target": "markPaidForm", method: method } do %>
                    <%= render "shared/button", text: method.titleize, variant: "secondary", size: "small", classes: "w-full", type: :submit %>
                  <% end %>
                <% end %>
              </div>
              <div class="mt-4 pt-4 border-t border-gray-200">
                <%= render "shared/button", text: "Cancel", variant: "ghost", size: "small", classes: "w-full", type: :button, data: { action: "click->payment-actions#hideMarkPaidModal" } %>
              </div>
            </div>
          </div>

          <!-- Bulk Mark Offline Modal -->
          <div data-payment-actions-target="bulkModal"
               class="hidden fixed inset-0 bg-black/50 z-50 flex items-center justify-center"
               data-action="click->payment-actions#closeOnBackdrop">
            <div class="bg-white rounded-lg shadow-xl max-w-md w-full mx-4 p-6">
              <h3 class="text-lg font-semibold text-gray-900 mb-4">Mark All as Paid</h3>
              <p class="text-sm text-gray-600 mb-4">This will mark all unpaid performers as paid via the selected method. Use this for historical records or when payments were made outside of CocoScout.</p>
              <%= form_with url: manage_production_mark_all_offline_money_show_payout_path(@production, @show), method: :post, local: true do |f| %>
                <div class="mb-4">
                  <label class="block text-sm font-medium text-gray-700 mb-1">Payment Method</label>
                  <select name="payment_method" class="w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500">
                    <option value="venmo">Venmo</option>
                    <option value="cash">Cash</option>
                    <option value="zelle">Zelle</option>
                    <option value="paypal">PayPal</option>
                    <option value="check">Check</option>
                    <option value="historical">Historical (pre-CocoScout)</option>
                    <option value="other">Other</option>
                  </select>
                </div>
                <div class="mb-4">
                  <label class="block text-sm font-medium text-gray-700 mb-1">Notes (optional)</label>
                  <input type="text" name="payment_notes" class="w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500" placeholder="e.g., Paid at venue after show">
                </div>
                <div class="flex items-center justify-end gap-3">
                  <%= render "shared/button", text: "Cancel", variant: "ghost", size: "medium", type: :button, data: { action: "click->payment-actions#hideBulkModal" } %>
                  <%= render "shared/button", text: "Mark All Paid", variant: "primary", size: "medium", type: :submit %>
                </div>
              <% end %>
            </div>
          </div>

          <!-- Pay Everyone Walkthrough Modal -->
          <% if unpaid_line_items.any? %>
            <div data-payment-actions-target="payEveryoneModal"
                 class="hidden fixed inset-0 bg-black/50 z-50 flex items-center justify-center"
                 data-action="click->payment-actions#closeOnBackdrop">
              <div class="bg-white rounded-xl shadow-2xl max-w-lg w-full mx-4 overflow-hidden">
                <!-- Header -->
                <div class="bg-gradient-to-r from-pink-500 to-pink-600 px-6 py-4">
                  <div class="flex items-center justify-between">
                    <h3 class="text-lg font-semibold text-white">Pay Your Performers</h3>
                    <button type="button"
                            data-action="click->payment-actions#hidePayEveryoneModal"
                            class="text-white/80 hover:text-white">
                      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                      </svg>
                    </button>
                  </div>
                  <!-- Progress -->
                  <div class="mt-3">
                    <div class="flex items-center justify-between text-sm text-white/80 mb-1">
                      <span>Progress</span>
                      <span data-payment-actions-target="progressText">1 of <%= unpaid_line_items.count %></span>
                    </div>
                    <div class="w-full bg-white/20 rounded-full h-2">
                      <div data-payment-actions-target="progressBar"
                           class="bg-white rounded-full h-2 transition-all duration-300"
                           style="width: <%= (1.0 / unpaid_line_items.count * 100).round %>%"></div>
                    </div>
                  </div>
                </div>

                <!-- Payee Cards (one for each unpaid person) -->
                <% unpaid_line_items.each_with_index do |item, index| %>
                  <div data-payment-actions-target="payeeCard" class="<%= index > 0 ? 'hidden' : '' %>">
                    <div class="px-6 py-6">
                      <!-- Person Info -->
                      <div class="flex items-center gap-4 mb-6">
                        <% headshot_variant = item.payee.respond_to?(:safe_headshot_variant) ? item.payee.safe_headshot_variant(:thumb) : nil %>
                        <% if headshot_variant %>
                          <%= image_tag headshot_variant, alt: item.payee_name, class: "w-16 h-16 rounded-xl object-cover" %>
                        <% else %>
                          <div class="w-16 h-16 rounded-xl bg-pink-100 flex items-center justify-center text-pink-600 font-bold text-xl">
                            <%= item.payee_name[0].upcase %>
                          </div>
                        <% end %>
                        <div>
                          <div class="text-xl font-semibold text-gray-900"><%= item.payee_name %></div>
                          <div class="text-sm text-gray-500"><%= item.payee_type_label %></div>
                        </div>
                      </div>

                      <!-- Amount -->
                      <div class="bg-gray-50 rounded-xl p-4 mb-6 text-center">
                        <div class="text-sm text-gray-500 mb-1">Amount to Pay</div>
                        <div class="text-4xl font-bold text-gray-900"><%= number_to_currency(item.amount) %></div>
                      </div>

                      <!-- Payment Info or Setup Needed -->
                      <% payment_info = item.payee_preferred_payment %>
                      <% if payment_info %>
                        <div class="mb-6">
                          <div class="text-sm text-gray-500 mb-2 text-center">Pay with <%= payment_info[:method].titleize %></div>
                          <% if payment_info[:method] == "venmo" %>
                            <div class="bg-blue-50 border border-blue-200 rounded-xl p-4">
                              <div class="flex items-center justify-center gap-3">
                                <svg class="w-8 h-8 text-blue-500" viewBox="0 0 24 24" fill="currentColor">
                                  <path d="M19.5 3c.9 1.5 1.3 3.1 1.3 5.1 0 5.6-4.8 12.9-8.7 18H4.8L2.2 3.8l6.3-.6 1.5 12c1.4-2.3 3.1-5.9 3.1-8.4 0-1.9-.3-3.2-.9-4.3L19.5 3z"/>
                                </svg>
                                <span class="text-2xl font-semibold text-blue-700"><%= payment_info[:identifier] %></span>
                              </div>
                            </div>
                          <% elsif payment_info[:method] == "zelle" %>
                            <div class="bg-purple-50 border border-purple-200 rounded-xl p-4">
                              <div class="flex items-center justify-center gap-3">
                                <svg class="w-8 h-8" viewBox="0 0 50 50" fill="none">
                                  <path d="M25 50c13.807 0 25-11.193 25-25S38.807 0 25 0 0 11.193 0 25s11.193 25 25 25z" fill="#6D1ED4"/>
                                  <path d="M32.5 14H19.8l-.3 3.2h8.3L17 32.5v3.5h13.2l.3-3.2h-8.8L32.5 17.5V14z" fill="white"/>
                                </svg>
                                <span class="text-2xl font-semibold text-purple-700"><%= payment_info[:identifier] %></span>
                              </div>
                            </div>
                          <% end %>
                        </div>

                        <!-- Instructions -->
                        <div class="bg-gray-50 border border-gray-200 rounded-lg p-3 mb-6">
                          <div class="flex items-start gap-2">
                            <svg class="w-5 h-5 text-gray-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a.75.75 0 000 1.5h.253a.25.25 0 01.244.304l-.459 2.066A1.75 1.75 0 0010.747 15H11a.75.75 0 000-1.5h-.253a.25.25 0 01-.244-.304l.459-2.066A1.75 1.75 0 009.253 9H9z" clip-rule="evenodd"/>
                            </svg>
                            <% if payment_info[:method] == "venmo" %>
                              <p class="text-sm text-gray-700">Open Venmo on your phone, send <strong><%= number_to_currency(item.amount) %></strong> to <strong><%= payment_info[:identifier] %></strong>, then mark as paid below.</p>
                            <% elsif payment_info[:method] == "zelle" %>
                              <p class="text-sm text-gray-700">Open your bank's Zelle, send <strong><%= number_to_currency(item.amount) %></strong> to <strong><%= payment_info[:identifier] %></strong>, then mark as paid below.</p>
                            <% end %>
                          </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="space-y-3">
                          <% if payment_info[:method] == "venmo" && item.payee.respond_to?(:venmo_identifier) %>
                            <button type="button"
                                    data-action="click->payment-actions#openVenmo"
                                    data-venmo-handle="<%= item.payee.venmo_identifier %>"
                                    data-venmo-amount="<%= item.amount %>"
                                    data-venmo-note="<%= @production.name %> - <%= @show.date_and_time.strftime('%b %-d') %>"
                                    class="w-full flex items-center justify-center gap-2 px-4 py-3 text-base font-semibold text-white bg-blue-500 rounded-xl hover:bg-blue-600 transition-colors">
                              <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M19.5 3c.9 1.5 1.3 3.1 1.3 5.1 0 5.6-4.8 12.9-8.7 18H4.8L2.2 3.8l6.3-.6 1.5 12c1.4-2.3 3.1-5.9 3.1-8.4 0-1.9-.3-3.2-.9-4.3L19.5 3z"/>
                              </svg>
                              Open Venmo
                            </button>
                          <% end %>

                          <%= form_with url: manage_production_mark_line_item_paid_money_show_payout_path(@production, @show, item, payment_method: payment_info[:method]), method: :post, local: true, data: { action: "submit->payment-actions#nextPayee" } do |_f| %>
                            <button type="submit" class="w-full flex items-center justify-center gap-2 px-4 py-3 text-base font-semibold text-white bg-green-600 rounded-xl hover:bg-green-700 transition-colors">
                              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                              </svg>
                              I Paid via <%= payment_info[:method].titleize %>
                            </button>
                          <% end %>
                        </div>
                      <% else %>
                        <!-- No payment method configured -->
                        <div class="mb-6">
                          <div class="bg-gray-100 border border-gray-200 rounded-xl p-4 text-center">
                            <svg class="w-10 h-10 text-gray-400 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                            </svg>
                            <p class="text-gray-600 font-medium">No payment info on file</p>
                            <p class="text-sm text-gray-500 mt-1">Ask <%= item.payee_name.split.first %> to add their Venmo or Zelle in CocoScout, or pay them another way.</p>
                          </div>
                        </div>

                        <!-- Alternative Payment Methods -->
                        <div class="space-y-3">
                          <p class="text-sm text-gray-500 text-center">Mark as paid via:</p>
                          <div class="grid grid-cols-2 gap-2">
                            <% %w[venmo zelle cash check].each do |method| %>
                              <%= form_with url: manage_production_mark_line_item_paid_money_show_payout_path(@production, @show, item, payment_method: method), method: :post, local: true, data: { action: "submit->payment-actions#nextPayee" } do |_f| %>
                                <button type="submit" class="w-full px-3 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
                                  <%= method.titleize %>
                                </button>
                              <% end %>
                            <% end %>
                          </div>
                        </div>
                      <% end %>
                    </div>

                    <!-- Footer Navigation -->
                    <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 flex items-center justify-between">
                      <% if index > 0 %>
                        <button type="button"
                                data-action="click->payment-actions#previousPayee"
                                class="text-sm text-gray-600 hover:text-gray-900">
                          &larr; Previous
                        </button>
                      <% else %>
                        <div></div>
                      <% end %>

                      <button type="button"
                              data-action="click->payment-actions#nextPayee"
                              class="text-sm text-gray-600 hover:text-gray-900">
                        Skip for now &rarr;
                      </button>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        <% elsif has_financials %>
          <div class="text-center py-6">
            <p class="text-gray-500 mb-3">Ready to calculate payouts based on the financial data.</p>
            <%= form_with url: manage_production_calculate_money_show_payout_path(@production, @show), method: :post, local: true do %>
              <%= render "shared/button", text: "Calculate Payouts", variant: "primary", size: "medium", type: :submit %>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-6">
            <p class="text-gray-500">Enter financial data first to calculate payouts.</p>
          </div>
        <% end %>
      </div>

    </div>

    <!-- Sidebar -->
    <div class="space-y-4">

      <!-- Actions -->
      <div class="bg-white rounded-lg border border-gray-200 p-5">
        <h3 class="font-semibold text-gray-900 mb-4">Actions</h3>
        <div class="space-y-3">
          <% if @show_payout.paid? %>
            <div class="flex items-center gap-3 p-3 bg-pink-50 rounded-lg">
              <div class="w-10 h-10 rounded-lg bg-pink-100 flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-pink-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div class="flex-1">
                <div class="font-medium text-pink-600">All Paid</div>
                <% if @show_payout.paid_at %>
                  <div class="text-xs text-gray-500">Paid <%= time_ago_in_words(@show_payout.paid_at) %> ago</div>
                <% end %>
              </div>
            </div>
          <% elsif is_calculated %>
            <%# Awaiting Payout - has been calculated %>
            <% unpaid_total = @line_items.reject(&:paid?).sum(&:amount) %>
            <% if unpaid_total > 0 %>
              <button type="button"
                      data-action="click->payment-actions#showPayEveryoneModal"
                      class="flex items-center gap-3 p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors w-full text-left cursor-pointer">
                <div class="w-10 h-10 rounded-lg bg-pink-100 flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
                <div class="flex-1">
                  <div class="font-medium text-gray-900">Pay Everyone</div>
                  <div class="text-xs text-gray-500"><%= number_to_currency(unpaid_total) %> total</div>
                </div>
                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </button>
            <% end %>

            <button type="button"
                    data-action="click->payment-actions#showBulkModal"
                    class="flex items-center gap-3 p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors w-full text-left cursor-pointer">
              <div class="w-10 h-10 rounded-lg bg-gray-100 flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
              </div>
              <div class="flex-1">
                <div class="font-medium text-gray-900">Mark All Paid</div>
                <div class="text-xs text-gray-500">Record payments as complete</div>
              </div>
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </button>

            <%= form_with url: manage_production_calculate_money_show_payout_path(@production, @show), method: :post, local: true, class: "block" do %>
              <button type="submit"
                      class="flex items-center gap-3 p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors w-full text-left cursor-pointer">
                <div class="w-10 h-10 rounded-lg bg-gray-100 flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                  </svg>
                </div>
                <div class="flex-1">
                  <div class="font-medium text-gray-900">Recalculate</div>
                  <div class="text-xs text-gray-500">Update payout amounts</div>
                </div>
                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </button>
            <% end %>
          <% elsif has_financials %>
            <%# Ready to calculate %>
            <%= form_with url: manage_production_calculate_money_show_payout_path(@production, @show), method: :post, local: true, class: "block" do %>
              <button type="submit"
                      class="flex items-center gap-3 p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors w-full text-left cursor-pointer">
                <div class="w-10 h-10 rounded-lg bg-pink-100 flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                  </svg>
                </div>
                <div class="flex-1">
                  <div class="font-medium text-gray-900">Calculate Payouts</div>
                  <div class="text-xs text-gray-500">Generate payout amounts from financials</div>
                </div>
                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </button>
            <% end %>
          <% else %>
            <%# Awaiting calculation - needs financial data %>
            <%= link_to manage_production_edit_money_show_financials_path(@production, @show), class: "flex items-center gap-3 p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors" do %>
              <div class="w-10 h-10 rounded-lg bg-pink-100 flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
              </div>
              <div class="flex-1">
                <div class="font-medium text-gray-900">Enter Financials</div>
                <div class="text-xs text-gray-500">Add financial data to calculate payouts</div>
              </div>
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            <% end %>
          <% end %>

          <!-- View Financials -->
          <%= link_to manage_production_money_show_financials_path(@production, @show), class: "flex items-center gap-3 p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors" do %>
            <div class="w-10 h-10 rounded-lg bg-gray-100 flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
            </div>
            <div class="flex-1">
              <div class="font-medium text-gray-900">View Financials</div>
              <div class="text-xs text-gray-500">Revenue, expenses & summary</div>
            </div>
            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          <% end %>
        </div>
      </div>

    </div>

  </div>
</div>

<%# Modal containers for turbo frames %>
<%= turbo_frame_tag "change_scheme_modal" %>
<%= turbo_frame_tag "customize_modal" %>
