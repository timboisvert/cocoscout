<%#
  Announcement Bar - Displays dismissible announcements

  Parameters:
    - announcements: Array of announcement hashes from AnnouncementService
%>
<% announcements.each do |announcement| %>
  <div class="border rounded-lg overflow-hidden mb-4 <%= announcement[:style] == 'warning' ? 'border-amber-200 bg-amber-50' : 'border-blue-200 bg-blue-50' %>">
    <div class="px-4 py-3 flex items-start gap-3">
      <% if announcement[:style] == 'warning' %>
        <svg class="w-5 h-5 text-amber-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
      <% else %>
        <svg class="w-5 h-5 text-blue-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      <% end %>

      <div class="flex-1">
        <p class="text-sm font-medium <%= announcement[:style] == 'warning' ? 'text-amber-900' : 'text-blue-900' %>">
          <%= announcement[:title] %>
        </p>
        <p class="text-sm <%= announcement[:style] == 'warning' ? 'text-amber-700' : 'text-blue-700' %> mt-1">
          <%= announcement[:message] %>
        </p>
        <% if announcement[:link_path].present? %>
          <%= link_to announcement[:link_text] || "Learn more",
                      announcement[:link_path],
                      class: "text-sm font-medium #{announcement[:style] == 'warning' ? 'text-amber-600 hover:text-amber-800' : 'text-blue-600 hover:text-blue-800'} underline mt-2 inline-block" %>
        <% end %>
      </div>

      <%= button_to my_dismiss_announcement_path(announcement_id: announcement[:id]),
                    method: :post,
                    class: "text-gray-400 hover:text-gray-600 p-1 -mr-1 flex-shrink-0 cursor-pointer",
                    title: "Dismiss",
                    data: { turbo_method: :post } do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      <% end %>
    </div>
  </div>
<% end %>
