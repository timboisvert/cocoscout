<% content_for :title, "Auditions" %>

<div class="w-full mb-10">
  <%= render partial: "shared/notice", locals: { notice: notice } %>
  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [],
    text: "Auditions",
    links: []
  } %>

  <% if @production.call_to_audition.present? %>
    <div class="mb-6 bg-white border border-gray-200 rounded-lg shadow-sm overflow-hidden">
      <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900 coustard-regular">Audition Process</h3>
      </div>

      <div class="p-8">
        <div class="relative">
          <div class="grid grid-cols-1 gap-12">

            <!-- Step 1: Prepare -->
            <%= link_to manage_production_auditions_prepare_path(@production), class: "no-underline" do %>
              <div class="relative flex flex-col items-start text-left group">
                <div class="flex items-start gap-6">
                  <div class="flex-shrink-0 w-16 h-16 rounded-lg flex items-center justify-center z-10 ring-4 ring-white transition-all bg-pink-100">
                    <svg class="w-8 h-8 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                  </div>
                  <div class="flex-1">
                    <h4 class="text-lg font-semibold text-gray-900 group-hover:text-pink-500 transition-colors">Prepare</h4>
                    <p class="text-gray-600 text-sm mt-1">Configure settings, plan sessions, and customize sign-up form</p>
                  </div>
                </div>
              </div>
            <% end %>

            <!-- Step 2: Publicize -->
            <%= link_to manage_production_auditions_publicize_path(@production), class: "no-underline" do %>
              <div class="relative flex flex-col items-start text-left group">
                <div class="flex items-start gap-6">
                  <div class="flex-shrink-0 w-16 h-16 rounded-lg flex items-center justify-center z-10 ring-4 ring-white transition-all bg-pink-100">
                    <svg class="w-8 h-8 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z" />
                    </svg>
                  </div>
                  <div class="flex-1">
                    <h4 class="text-lg font-semibold text-gray-900 group-hover:text-pink-500 transition-colors">Publicize</h4>
                    <p class="text-gray-600 text-sm mt-1">Share sign-up link and collect applications</p>
                  </div>
                </div>
              </div>
            <% end %>

            <!-- Step 3: Review -->
            <%= link_to manage_production_auditions_review_path(@production), class: "no-underline" do %>
              <div class="relative flex flex-col items-start text-left group">
                <div class="flex items-start gap-6">
                  <div class="flex-shrink-0 w-16 h-16 rounded-lg flex items-center justify-center z-10 ring-4 ring-white transition-all bg-pink-100">
                    <svg class="w-8 h-8 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
                    </svg>
                  </div>
                  <div class="flex-1">
                    <h4 class="text-lg font-semibold text-gray-900 group-hover:text-pink-500 transition-colors">Review</h4>
                    <p class="text-gray-600 text-sm mt-1">Accept or decline applications and schedule auditions</p>
                  </div>
                </div>
              </div>
            <% end %>

            <!-- Step 4: Run Auditions -->
            <%= link_to manage_production_auditions_run_path(@production), class: "no-underline" do %>
              <div class="relative flex flex-col items-start text-left group">
                <div class="flex items-start gap-6">
                  <div class="flex-shrink-0 w-16 h-16 rounded-lg flex items-center justify-center z-10 ring-4 ring-white transition-all bg-pink-100">
                    <svg class="w-8 h-8 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                    </svg>
                  </div>
                  <div class="flex-1">
                    <h4 class="text-lg font-semibold text-gray-900 group-hover:text-pink-500 transition-colors">Run Auditions</h4>
                    <p class="text-gray-600 text-sm mt-1">Conduct sessions and evaluate performances</p>
                  </div>
                </div>
              </div>
            <% end %>

            <!-- Step 5: Casting -->
            <%= link_to manage_production_auditions_casting_path(@production), class: "no-underline" do %>
              <div class="relative flex flex-col items-start text-left group">
                <div class="flex items-start gap-6">
                  <div class="flex-shrink-0 w-16 h-16 rounded-lg flex items-center justify-center z-10 ring-4 ring-white transition-all bg-pink-100">
                    <svg class="w-8 h-8 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                  </div>
                  <div class="flex-1">
                    <h4 class="text-lg font-semibold text-gray-900 group-hover:text-pink-500 transition-colors">Casting</h4>
                    <p class="text-gray-600 text-sm mt-1">Send decisions and add people to cast</p>
                  </div>
                </div>
              </div>
            <% end %>

          </div>
        </div>
            </div>
    </div>
  <% else %>
    <div class="mb-5 text-gray-500 text-sm">
      You aren't currently offering auditions for <%= @production.name %>
    </div>

    <% if current_user_can_manage?(@production) %>
      <%= render partial: "shared/link_button", locals: {text: "Offer Auditions", path: new_manage_production_call_to_audition_path(@production)} %>
    <% end %>
  <% end %>
</div>
