<%
  # Parameters:
  # - production: the Production object
%>

<% cache ["production_info_card_v1", production.id, production.updated_at.to_i, production.posters.maximum(:updated_at)&.to_i] do %>
<div class="border border-gray-200 rounded-lg overflow-hidden bg-white mb-6">
  <div class="flex flex-col sm:flex-row">
    <!-- Poster/Logo Section -->
    <div class="flex-shrink-0 bg-gray-50 flex items-center justify-center p-4">
      <% primary_poster = production.primary_poster %>
      <% logo_variant = production.safe_logo_variant(:small) %>
      <% if primary_poster %>
        <% image_variant = primary_poster.safe_image_variant(:small) %>
        <% if image_variant %>
          <%= image_tag image_variant, alt: "#{production.name} Poster", class: "rounded shadow-sm object-contain max-h-[180px] max-w-[200px] border border-gray-200" %>
        <% end %>
      <% elsif logo_variant %>
        <%= image_tag logo_variant, alt: "#{production.name} Logo", class: "rounded shadow-sm object-contain max-h-[180px] max-w-[200px] border border-gray-200" %>
      <% else %>
        <div class="w-[120px] h-[120px] rounded bg-gray-200 flex items-center justify-center border border-gray-300">
          <span class="text-3xl font-bold text-gray-400"><%= production.initials %></span>
        </div>
      <% end %>
    </div>

    <!-- Details Section -->
    <div class="flex-1 p-6">
      <div class="space-y-4">
        <!-- Title -->
        <div>
          <h2 class="text-2xl font-bold text-gray-900 coustard-regular">
            <%= production.name %>
          </h2>
        </div>

        <!-- Production Details -->
        <div class="space-y-2 text-sm">
          <% if production.description.present? %>
            <div class="flex items-start gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-gray-400 flex-shrink-0 mt-0.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z" />
              </svg>
              <span class="text-gray-600 line-clamp-2"><%= production.description %></span>
            </div>
          <% end %>

          <% if production.contact_email.present? %>
            <div class="flex items-start gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-gray-400 flex-shrink-0 mt-0.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75" />
              </svg>
              <span class="text-gray-600"><%= production.contact_email %></span>
            </div>
          <% end %>

          <!-- Stats row -->
          <div class="flex items-center gap-4 pt-2">
            <div class="flex items-center gap-1 text-gray-500">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 0 1 2.25-2.25h13.5A2.25 2.25 0 0 1 21 7.5v11.25m-18 0A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75m-18 0v-7.5A2.25 2.25 0 0 1 5.25 9h13.5A2.25 2.25 0 0 1 21 11.25v7.5" />
              </svg>
              <span class="text-xs"><%= production.shows.count %> shows</span>
            </div>
            <div class="flex items-center gap-1 text-gray-500">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 0 0 2.625.372 9.337 9.337 0 0 0 4.121-.952 4.125 4.125 0 0 0-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 0 1 8.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0 1 11.964-3.07M12 6.375a3.375 3.375 0 1 1-6.75 0 3.375 3.375 0 0 1 6.75 0Zm8.25 2.25a2.625 2.625 0 1 1-5.25 0 2.625 2.625 0 0 1 5.25 0Z" />
              </svg>
              <span class="text-xs"><%= production.roles.count %> roles</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
