<% content_for :title, "New audition cycle" %>

<div class="w-full">
  <%= render partial: "shared/notice", locals: { notice: notice } %>
  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Productions", manage_productions_path],
      [@production.name, manage_production_path(@production)]
    ],
    text: "Offer Auditions",
    links: []
  } %>

  <%= form_with(model: [:manage, @production, @audition_cycle], class: "contents") do |form| %>
    <div class="mt-5 mb-7">
      <%= form.label :audition_type, "Audition Type:" %>
      <p class="text-sm text-gray-500">Choosing "In-Person" auditions will enable people to sign up for an audition, while "Video Upload" auditions will allow them to submit a video during the sign-up process.</p>
      <%= form.select :audition_type, [["In-person", "in_person"], ["Video Upload", "video_upload"]], {}, class: "block shadow-sm rounded-lg border px-3 py-2 mt-2 w-64 border-gray-400" %>
    </div>

    <%= render partial: "shared/top_menu", locals: {
      breadcrumbs: [],
      text: "Sign-up Window",
      links: []
    } %>

    <p class="text-sm text-gray-500 mb-5">When should the Sign-up window open? You can optionally set a close date, or leave it open-ended to keep accepting sign-ups indefinitely.</p>

    <div class="flex">
      <div class="w-1/2 mr-5">
        <%= form.label :opens_at, "Open At:" %>
        <%= form.datetime_field :opens_at, class: ["block shadow-sm rounded-lg border px-3 py-2 mt-2 w-full", {"border-gray-400": @audition_cycle.errors[:opens_at].none?, "border-pink-500": @audition_cycle.errors[:opens_at].any?}] %>
      </div>
      <div class="w-1/2 ml-5" data-controller="date-field-toggle">
        <div class="flex items-center justify-between mb-2">
          <%= form.label :closes_at, "Close At (Optional):" %>
          <label class="flex items-center text-xs text-gray-600 cursor-pointer">
            <input type="checkbox" <%= @audition_cycle.closes_at.nil? ? 'checked' : '' %> data-action="change->date-field-toggle#toggle" data-date-field-toggle-target="checkbox" class="rounded accent-pink-500 border-gray-300 text-pink-600 focus:ring-pink-500 mr-1">
            Open-ended
          </label>
        </div>
        <%= form.datetime_field :closes_at, class: ["block shadow-sm rounded-lg border px-3 py-2 mt-2 w-full", {"border-gray-400": @audition_cycle.errors[:closes_at].none?, "border-pink-500": @audition_cycle.errors[:closes_at].any?}], data: { date_field_toggle_target: "field" } %>
      </div>
    </div>

    <div class="w-full border-t border-gray-200 pt-5 my-5">
      <%= form.submit "Open", class: "w-full sm:w-auto rounded-lg px-3.5 py-2.5 bg-pink-500 hover:bg-pink-600 text-white inline-block font-medium cursor-pointer" %>
      <%= link_to "Back", "javascript:history.back()", class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-lg px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
    </div>
  <% end %>

</div>
