<%# Financial Worksheet Modal - for entering/editing financial data %>
<%
  # Use normalized methods that always return arrays
  other_revenue_items = @show_financials.normalized_other_revenue_details
  has_other_revenue_details = other_revenue_items.any?

  # Prefer ExpenseItem records over legacy JSONB
  use_expense_items = @show_financials.expense_items.any?
  expense_item_records = @show_financials.expense_items.ordered
  legacy_expense_items = @show_financials.normalized_expense_details
  has_expense_details = use_expense_items || legacy_expense_items.any?
%>

<div id="financialWorksheet"
     class="hidden fixed inset-0 bg-black/60 backdrop-blur-sm z-50 overflow-y-auto"
     data-controller="financials-form"
     data-action="click->financials-form#closeWorksheet keydown.esc@window->financials-form#closeWorksheet">

  <div class="min-h-screen flex items-start justify-center p-4 pt-12 pb-20">
    <div class="bg-white w-full max-w-2xl rounded-lg shadow-xl" data-action="click->financials-form#stopPropagation">

      <!-- Header -->
      <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between sticky top-0 bg-white rounded-t-lg z-10">
        <div>
          <h2 class="text-lg font-semibold text-gray-900">Financial Data Worksheet</h2>
          <p class="text-sm text-gray-500"><%= show_display_name(@show) %></p>
        </div>
        <button type="button" data-action="click->financials-form#closeWorksheet" class="text-gray-400 hover:text-gray-600 p-2 -mr-2 cursor-pointer">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>

      <!-- Form Content -->
      <%= form_with model: @show_financials, url: manage_update_money_show_financials_path(@show), method: :patch, data: { turbo: false, financials_form_target: "form" } do |form| %>

        <div class="p-6 space-y-6 max-h-[70vh] overflow-y-auto">

          <% if @show_financials.errors.any? %>
            <div class="bg-red-50 border border-red-200 rounded-lg p-4">
              <ul class="text-sm text-red-700 list-disc list-inside">
                <% @show_financials.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <!-- Revenue Type Selector -->
          <div class="bg-gray-50 rounded-lg p-4">
            <h3 class="font-semibold text-gray-900 mb-3 flex items-center gap-2">
              <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              Primary Revenue
            </h3>

            <!-- Revenue Type Toggle -->
            <div class="flex gap-2 mb-4">
              <label class="flex-1">
                <input type="radio" name="show_financials[revenue_type]" value="ticket_sales"
                       <%= @show_financials.ticket_sales? ? "checked" : "" %>
                       data-action="change->financials-form#toggleRevenueType"
                       class="sr-only peer">
                <div class="cursor-pointer rounded-lg border-2 border-gray-200 bg-white p-3 text-center transition-all peer-checked:border-pink-500 peer-checked:bg-pink-50">
                  <div class="font-medium text-gray-900">Ticket Sales</div>
                  <div class="text-xs text-gray-500">Revenue from selling tickets</div>
                </div>
              </label>
              <label class="flex-1">
                <input type="radio" name="show_financials[revenue_type]" value="flat_fee"
                       <%= @show_financials.flat_fee? ? "checked" : "" %>
                       data-action="change->financials-form#toggleRevenueType"
                       class="sr-only peer">
                <div class="cursor-pointer rounded-lg border-2 border-gray-200 bg-white p-3 text-center transition-all peer-checked:border-pink-500 peer-checked:bg-pink-50">
                  <div class="font-medium text-gray-900">Flat Fee</div>
                  <div class="text-xs text-gray-500">Paid a set amount for the show</div>
                </div>
              </label>
            </div>

            <!-- Ticket Sales Fields -->
            <div data-financials-form-target="ticketSalesFields" class="<%= @show_financials.flat_fee? ? 'hidden' : '' %>">
              <div class="grid grid-cols-2 gap-4">
                <div>
                  <%= form.label :ticket_count, "Tickets Sold", class: "block text-sm font-medium text-gray-700 mb-1" %>
                  <%= form.number_field :ticket_count, min: 0, class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500", placeholder: "0" %>
                </div>
                <div>
                  <%= form.label :ticket_revenue, "Ticket Revenue", class: "block text-sm font-medium text-gray-700 mb-1" %>
                  <div class="relative">
                    <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-500">$</span>
                    <%= form.number_field :ticket_revenue, min: 0, step: 0.01, class: "w-full rounded-lg border border-gray-300 pl-7 pr-3 py-2 focus:border-pink-500 focus:ring-pink-500", placeholder: "0.00" %>
                  </div>
                </div>
              </div>
            </div>

            <!-- Flat Fee Field -->
            <div data-financials-form-target="flatFeeFields" class="<%= @show_financials.ticket_sales? ? 'hidden' : '' %>">
              <%= form.label :flat_fee, "Flat Fee Amount", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <div class="relative">
                <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-500">$</span>
                <%= form.number_field :flat_fee, min: 0, step: 0.01, class: "w-full rounded-lg border border-gray-300 pl-7 pr-3 py-2 focus:border-pink-500 focus:ring-pink-500", placeholder: "0.00" %>
              </div>
              <p class="text-xs text-gray-500 mt-1">The guaranteed amount you were paid for this performance</p>
            </div>
          </div>

          <!-- Other Revenue -->
          <div class="bg-gray-50 rounded-lg p-4">
            <div class="flex items-center justify-between mb-3">
              <h3 class="font-semibold text-gray-900 flex items-center gap-2">
                <svg class="w-5 h-5 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                </svg>
                Other Revenue
              </h3>
              <%= render "shared/button", text: "Add Item", variant: "ghost", size: "small", icon: "plus", type: :button, data: { action: "click->financials-form#openOtherRevenueModal" } %>
            </div>

            <% if has_other_revenue_details %>
              <div data-financials-form-target="otherRevenueItems" class="space-y-2 mb-3">
                <% other_revenue_items.each_with_index do |item, index| %>
                  <div class="flex items-center justify-between bg-white rounded-lg px-3 py-2" data-line-item data-index="<%= index %>">
                    <span class="text-sm text-gray-900"><%= item["description"].presence || "Item #{index + 1}" %></span>
                    <div class="flex items-center gap-2">
                      <span class="text-sm font-medium text-gray-900"><%= number_to_currency(item["amount"]) %></span>
                      <button type="button" class="text-gray-400 hover:text-red-500 p-1"
                              data-action="click->financials-form#removeOtherRevenueItem" data-index="<%= index %>">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                        </svg>
                      </button>
                    </div>
                    <input type="hidden" name="show_financials[other_revenue_details][<%= index %>][description]" value="<%= item["description"] %>">
                    <input type="hidden" name="show_financials[other_revenue_details][<%= index %>][amount]" value="<%= item["amount"] %>">
                  </div>
                <% end %>
              </div>
              <div class="flex items-center justify-between pt-2 border-t border-gray-200">
                <span class="text-sm font-medium text-gray-700">Total</span>
                <span data-financials-form-target="otherRevenueTotal" class="text-sm font-semibold text-gray-900"><%= number_to_currency(@show_financials.calculated_other_revenue) %></span>
              </div>
            <% else %>
              <div data-financials-form-target="otherRevenueItems"></div>
              <div data-financials-form-target="otherRevenueEmpty">
                <div class="relative">
                  <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-500">$</span>
                  <%= form.number_field :other_revenue, min: 0, step: 0.01, class: "w-full rounded-lg border border-gray-300 pl-7 pr-3 py-2 focus:border-pink-500 focus:ring-pink-500 bg-white", placeholder: "0.00" %>
                </div>
                <p class="text-xs text-gray-500 mt-1">Merchandise, concessions, donations, tips, etc.</p>
              </div>
              <div data-financials-form-target="otherRevenueTotalRow" class="hidden flex items-center justify-between pt-2 border-t border-gray-200">
                <span class="text-sm font-medium text-gray-700">Total</span>
                <span data-financials-form-target="otherRevenueTotal" class="text-sm font-semibold text-gray-900">$0.00</span>
              </div>
            <% end %>
          </div>

          <!-- Expenses -->
          <div class="bg-gray-50 rounded-lg p-4">
            <div class="flex items-center justify-between mb-3">
              <h3 class="font-semibold text-gray-900 flex items-center gap-2">
                <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"/>
                </svg>
                Expenses
              </h3>
              <%= render "shared/button", text: "Add Item", variant: "ghost", size: "small", icon: "plus", type: :button, data: { action: "click->financials-form#openExpenseModal" } %>
            </div>

            <% if has_expense_details %>
              <div data-financials-form-target="expenseItems" class="space-y-2 mb-3">
                <% if use_expense_items %>
                  <%# Use ExpenseItem records %>
                  <% expense_item_records.each_with_index do |item, index| %>
                    <%
                      category_label = ExpenseCategories.label_for(item.category)
                      display_text = item.description.present? ? "#{category_label}: #{item.description}" : category_label
                    %>
                    <div class="flex items-center justify-between bg-white rounded-lg px-3 py-2" data-line-item data-index="<%= index %>" data-expense-item-id="<%= item.id %>">
                      <div class="flex items-center gap-2 flex-1 min-w-0">
                        <span class="text-sm text-gray-900 truncate"><%= display_text %></span>
                        <% if item.receipt.attached? %>
                          <a href="<%= url_for(item.receipt) %>" target="_blank" class="text-pink-500 hover:text-pink-600" title="View receipt">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                            </svg>
                          </a>
                        <% end %>
                      </div>
                      <div class="flex items-center gap-2">
                        <span class="text-sm font-medium text-red-600"><%= number_to_currency(item.amount) %></span>
                        <%# Receipt upload button - only for persisted items %>
                        <button type="button" class="text-gray-400 hover:text-blue-600 p-1"
                                data-action="click->financials-form#openReceiptModal"
                                data-expense-item-id="<%= item.id %>"
                                data-has-receipt="<%= item.receipt.attached? %>"
                                title="<%= item.receipt.attached? ? 'Change receipt' : 'Add receipt' %>">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13"/>
                          </svg>
                        </button>
                        <button type="button" class="text-gray-400 hover:text-pink-600 p-1"
                                data-action="click->financials-form#editExpenseItem"
                                data-index="<%= index %>"
                                data-expense-item-id="<%= item.id %>"
                                data-category="<%= item.category %>"
                                data-description="<%= item.description %>"
                                data-amount="<%= item.amount %>">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
                          </svg>
                        </button>
                        <button type="button" class="text-gray-400 hover:text-red-500 p-1"
                                data-action="click->financials-form#removeExpenseItem"
                                data-index="<%= index %>"
                                data-expense-item-id="<%= item.id %>">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                          </svg>
                        </button>
                      </div>
                      <input type="hidden" name="show_financials[expense_items_attributes][<%= index %>][id]" value="<%= item.id %>">
                      <input type="hidden" name="show_financials[expense_items_attributes][<%= index %>][category]" value="<%= item.category %>">
                      <input type="hidden" name="show_financials[expense_items_attributes][<%= index %>][description]" value="<%= item.description %>">
                      <input type="hidden" name="show_financials[expense_items_attributes][<%= index %>][amount]" value="<%= item.amount %>">
                      <input type="hidden" name="show_financials[expense_items_attributes][<%= index %>][position]" value="<%= index %>">
                    </div>
                  <% end %>
                <% else %>
                  <%# Legacy JSONB format - will be converted on save %>
                  <% legacy_expense_items.each_with_index do |item, index| %>
                    <%
                      category = item["category"].presence || "other"
                      category_label = ExpenseCategories.label_for(category)
                      description = item["description"].presence
                      display_text = description.present? ? "#{category_label}: #{description}" : category_label
                    %>
                    <div class="flex items-center justify-between bg-white rounded-lg px-3 py-2" data-line-item data-index="<%= index %>">
                      <span class="text-sm text-gray-900"><%= display_text %></span>
                      <div class="flex items-center gap-2">
                        <span class="text-sm font-medium text-red-600"><%= number_to_currency(item["amount"]) %></span>
                        <button type="button" class="text-gray-400 hover:text-pink-600 p-1"
                                data-action="click->financials-form#editExpenseItem"
                                data-index="<%= index %>"
                                data-category="<%= category %>"
                                data-description="<%= item["description"] %>"
                                data-amount="<%= item["amount"] %>">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
                          </svg>
                        </button>
                        <button type="button" class="text-gray-400 hover:text-red-500 p-1"
                                data-action="click->financials-form#removeExpenseItem" data-index="<%= index %>">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                          </svg>
                        </button>
                      </div>
                      <input type="hidden" name="show_financials[expense_items_attributes][<%= index %>][category]" value="<%= category %>">
                      <input type="hidden" name="show_financials[expense_items_attributes][<%= index %>][description]" value="<%= item["description"] %>">
                      <input type="hidden" name="show_financials[expense_items_attributes][<%= index %>][amount]" value="<%= item["amount"] %>">
                      <input type="hidden" name="show_financials[expense_items_attributes][<%= index %>][position]" value="<%= index %>">
                    </div>
                  <% end %>
                <% end %>
              </div>
              <div class="flex items-center justify-between pt-2 border-t border-gray-200">
                <span class="text-sm font-medium text-gray-700">Total</span>
                <span data-financials-form-target="expensesTotal" class="text-sm font-semibold text-red-600"><%= number_to_currency(@show_financials.calculated_expenses) %></span>
              </div>
            <% else %>
              <div data-financials-form-target="expenseItems"></div>
              <div data-financials-form-target="expensesEmpty">
                <div class="relative">
                  <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-500">$</span>
                  <%= form.number_field :expenses, min: 0, step: 0.01, class: "w-full rounded-lg border border-gray-300 pl-7 pr-3 py-2 focus:border-pink-500 focus:ring-pink-500 bg-white", placeholder: "0.00" %>
                </div>
                <p class="text-xs text-gray-500 mt-1">Venue rental, supplies, etc.</p>
              </div>
              <div data-financials-form-target="expensesTotalRow" class="hidden flex items-center justify-between pt-2 border-t border-gray-200">
                <span class="text-sm font-medium text-gray-700">Total</span>
                <span data-financials-form-target="expensesTotal" class="text-sm font-semibold text-red-600">$0.00</span>
              </div>
            <% end %>
          </div>

          <!-- Notes -->
          <div class="bg-gray-50 rounded-lg p-4">
            <h3 class="font-semibold text-gray-900 mb-3 flex items-center gap-2">
              <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
              </svg>
              Notes
            </h3>
            <%= form.text_area :notes, rows: 2, class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500 bg-white", placeholder: "Any notes about this show's finances..." %>
          </div>

          <!-- Confirm Data Complete -->
          <div class="bg-gray-50 rounded-lg p-4">
            <label class="flex items-start gap-3 cursor-pointer">
              <%= form.check_box :data_confirmed, class: "mt-1 h-4 w-4 text-pink-600 border-gray-300 rounded focus:ring-pink-500 accent-pink-600" %>
              <div>
                <span class="font-medium text-gray-900">Confirm data is complete</span>
                <p class="text-sm text-gray-500 mt-0.5">Check this box if the data above is correct, even if revenue is $0.</p>
              </div>
            </label>
          </div>
        </div>

        <!-- Footer -->
        <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 flex items-center justify-between rounded-b-lg sticky bottom-0">
          <%= render "shared/button", text: "Cancel", variant: "ghost", size: "medium", type: :button, data: { action: "click->financials-form#closeWorksheet" } %>
          <%= render "shared/button", text: "Save Financial Data", variant: "primary", size: "medium", type: :submit %>
        </div>
      <% end %>

    </div>
  </div>

  <!-- Nested Modals for Line Items -->
  <!-- Other Revenue Modal -->
  <div data-financials-form-target="otherRevenueModal"
       class="hidden fixed inset-0 bg-black/60 backdrop-blur-sm z-[60] flex items-center justify-center p-4"
       data-action="click->financials-form#closeOtherRevenueModal">
    <div class="bg-white w-full max-w-md rounded-lg shadow-xl" data-action="click->financials-form#stopPropagation">
      <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
        <h2 data-financials-form-target="otherRevenueModalTitle" class="text-lg font-semibold text-gray-900">Add Revenue Item</h2>
        <button type="button" data-action="click->financials-form#closeOtherRevenueModal" class="text-gray-400 hover:text-gray-600 p-1 cursor-pointer">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>
      <div class="p-6 space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Description</label>
          <input type="text" data-financials-form-target="otherRevenueDescription"
                 class="w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500"
                 placeholder="e.g., Merchandise sales, Tips">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Amount</label>
          <div class="relative">
            <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-500">$</span>
            <input type="number" data-financials-form-target="otherRevenueAmount" min="0" step="0.01"
                   class="w-full rounded-lg border border-gray-300 pl-7 pr-3 py-2 focus:border-pink-500 focus:ring-pink-500"
                   placeholder="0.00">
          </div>
        </div>
        <input type="hidden" data-financials-form-target="otherRevenueEditIndex" value="">
      </div>
      <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 flex justify-end gap-3">
        <%= render "shared/button", text: "Cancel", variant: "ghost", size: "medium", type: :button, data: { action: "click->financials-form#closeOtherRevenueModal" } %>
        <%= render "shared/button", text: "Save", variant: "primary", size: "medium", type: :button, data: { action: "click->financials-form#saveOtherRevenueItem" } %>
      </div>
    </div>
  </div>

  <!-- Expense Modal -->
  <div data-financials-form-target="expenseModal"
       class="hidden fixed inset-0 bg-black/60 backdrop-blur-sm z-[60] flex items-center justify-center p-4"
       data-action="click->financials-form#closeExpenseModal">
    <div class="bg-white w-full max-w-md rounded-lg shadow-xl" data-action="click->financials-form#stopPropagation">
      <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
        <h2 data-financials-form-target="expenseModalTitle" class="text-lg font-semibold text-gray-900">Add Expense Item</h2>
        <button type="button" data-action="click->financials-form#closeExpenseModal" class="text-gray-400 hover:text-gray-600 p-1 cursor-pointer">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>
      <div class="p-6 space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Category</label>
          <select data-financials-form-target="expenseCategory"
                  class="w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500">
            <% ExpenseCategories.options_for_select.each do |label, key| %>
              <option value="<%= key %>"><%= label %></option>
            <% end %>
          </select>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Description <span class="text-gray-400 font-normal">(optional)</span></label>
          <input type="text" data-financials-form-target="expenseDescription"
                 class="w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500"
                 placeholder="e.g., Venue rental, Equipment">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Amount</label>
          <div class="relative">
            <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-500">$</span>
            <input type="number" data-financials-form-target="expenseAmount" min="0" step="0.01"
                   class="w-full rounded-lg border border-gray-300 pl-7 pr-3 py-2 focus:border-pink-500 focus:ring-pink-500"
                   placeholder="0.00">
          </div>
        </div>
        <input type="hidden" data-financials-form-target="expenseEditIndex" value="">
      </div>
      <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 flex justify-end gap-3">
        <%= render "shared/button", text: "Cancel", variant: "ghost", size: "medium", type: :button, data: { action: "click->financials-form#closeExpenseModal" } %>
        <%= render "shared/button", text: "Save", variant: "primary", size: "medium", type: :button, data: { action: "click->financials-form#saveExpenseItem" } %>
      </div>
    </div>
  </div>

  <!-- Receipt Upload Modal -->
  <div data-financials-form-target="receiptModal"
       class="hidden fixed inset-0 bg-black/60 backdrop-blur-sm z-[60] flex items-center justify-center p-4"
       data-action="click->financials-form#closeReceiptModal">
    <div class="bg-white w-full max-w-md rounded-lg shadow-xl" data-action="click->financials-form#stopPropagation">
      <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
        <h2 class="text-lg font-semibold text-gray-900">Upload Receipt</h2>
        <button type="button" data-action="click->financials-form#closeReceiptModal" class="text-gray-400 hover:text-gray-600 p-1 cursor-pointer">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>
      <div class="p-6 space-y-4">
        <div data-financials-form-target="receiptCurrentSection" class="hidden">
          <label class="block text-sm font-medium text-gray-700 mb-2">Current Receipt</label>
          <div class="flex items-center justify-between bg-gray-50 rounded-lg p-3">
            <a data-financials-form-target="receiptCurrentLink" href="#" target="_blank" class="text-pink-600 hover:text-pink-700 text-sm font-medium flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
              View Receipt
            </a>
            <button type="button" class="text-red-500 hover:text-red-600 text-sm font-medium"
                    data-action="click->financials-form#removeReceipt">
              Remove
            </button>
          </div>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">
            <span data-financials-form-target="receiptUploadLabel">Upload Receipt</span>
          </label>
          <div class="border-2 border-dashed border-gray-300 rounded-lg p-6 text-center hover:border-pink-400 transition-colors">
            <input type="file" data-financials-form-target="receiptFile"
                   accept=".pdf,.jpg,.jpeg,.png"
                   class="hidden"
                   data-action="change->financials-form#handleReceiptSelect">
            <button type="button" class="cursor-pointer" data-action="click->financials-form#triggerReceiptFileInput">
              <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
              </svg>
              <p class="mt-2 text-sm text-gray-600">Click to upload or drag and drop</p>
              <p class="mt-1 text-xs text-gray-500">PDF, JPG, or PNG up to 10MB</p>
            </button>
          </div>
          <div data-financials-form-target="receiptFileName" class="hidden mt-2 text-sm text-gray-600 flex items-center gap-2">
            <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            <span data-financials-form-target="receiptFileNameText"></span>
          </div>
        </div>
        <input type="hidden" data-financials-form-target="receiptExpenseItemId" value="">
      </div>
      <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 flex justify-end gap-3">
        <%= render "shared/button", text: "Cancel", variant: "ghost", size: "medium", type: :button, data: { action: "click->financials-form#closeReceiptModal" } %>
        <%= render "shared/button", text: "Upload", variant: "primary", size: "medium", type: :button, data: { action: "click->financials-form#uploadReceipt", financials_form_target: "receiptUploadButton" } %>
      </div>
    </div>
  </div>
</div>
