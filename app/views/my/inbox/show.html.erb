<% content_for :title, @message.subject %>

<div class="w-full">
  <%= render partial: "shared/notice", locals: { notice: notice } %>

  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Inbox", my_inbox_index_path]
    ],
    text: @message.subject,
    links: [
      { icon: "archive", text: "Archive", path: archive_my_inbox_path(@message), method: :post }
    ]
  } %>

  <div class="mt-4 max-w-4xl">
    <%# Message header %>
    <div class="bg-white rounded-lg border border-gray-200 p-6 mb-4">
      <div class="flex items-start gap-4">
        <%# Sender headshot %>
        <% sender_person = @message.sender.is_a?(Person) ? @message.sender : @message.sender.person %>
        <% if sender_person %>
          <% headshot_variant = sender_person.safe_headshot_variant(:thumb) %>
          <% if headshot_variant %>
            <%= image_tag headshot_variant, alt: sender_person.name, class: "w-12 h-12 rounded-lg object-cover flex-shrink-0" %>
          <% else %>
            <div class="w-12 h-12 rounded-lg bg-gray-200 flex items-center justify-center text-gray-600 font-bold flex-shrink-0">
              <%= sender_person.initials %>
            </div>
          <% end %>
        <% else %>
          <div class="w-12 h-12 rounded-lg bg-pink-100 flex items-center justify-center flex-shrink-0">
            <svg class="w-6 h-6 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
          </div>
        <% end %>

        <div class="flex-1">
          <div class="flex items-start justify-between">
            <div>
              <h3 class="text-lg font-semibold text-gray-900"><%= @message.sender_name %></h3>
              <p class="text-sm text-gray-500">To: <%= @message.recipient_name %></p>
              <p class="text-sm text-gray-500"><%= @message.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
              <% if @batch %>
                <p class="text-xs text-gray-500 mt-1">Sent to <%= @batch.recipient_count %> recipient<%= "s" if @batch.recipient_count > 1 %></p>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <%# Regarding context card %>
      <% if @message.regarding.present? && @message.regarding_context %>
        <% context = @message.regarding_context %>
        <div class="mt-4 flex items-center gap-3 p-3 bg-gray-50 rounded-lg border border-gray-200">
          <% if context[:image] %>
            <%= image_tag context[:image], class: "w-12 h-12 rounded-lg object-cover" %>
          <% else %>
            <div class="w-12 h-12 rounded-lg bg-pink-100 flex items-center justify-center">
              <svg class="w-6 h-6 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14"/>
              </svg>
            </div>
          <% end %>
          <div>
            <p class="font-medium text-gray-900"><%= context[:title] %></p>
            <% if context[:subtitle] %>
              <p class="text-sm text-gray-500"><%= context[:subtitle] %></p>
            <% end %>
            <% if context[:location] %>
              <p class="text-xs text-gray-400"><%= context[:location] %></p>
            <% end %>
          </div>
        </div>
      <% end %>

      <%# Message body %>
      <div class="mt-6 prose max-w-none">
        <%= @message.body %>
      </div>
    </div>

    <%# Replies %>
    <% if @replies.any? %>
      <div class="space-y-4">
        <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide">Replies</h3>
        <% @replies.each do |reply| %>
          <%= render "my/inbox/reply", message: reply %>
        <% end %>
      </div>
    <% end %>

    <%# Reply form %>
    <div class="mt-6 bg-white rounded-lg border border-gray-200 p-6">
      <h3 class="text-sm font-medium text-gray-700 mb-4">Reply</h3>
      <%= form_with url: reply_my_inbox_path(@message), method: :post do |f| %>
        <%= f.rich_text_area :body, class: "w-full" %>
        <div class="mt-4 flex justify-end">
          <%= render "shared/button", text: "Send Reply", variant: "primary", size: "medium", type: :submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>
