<% content_for :title, @production.name %>

<div class="w-full mb-10">
  <%= render partial: "shared/notice", locals: { notice: notice } %>
  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [],
    text: @production.name,
    links: []
  } %>

  <!-- Open Calls with Auditionees -->
    <% if @dashboard[:open_calls][:with_auditionees].any? %>
    <div class="border border-gray-200 rounded-lg overflow-hidden mb-8">
      <div class="bg-gray-50 px-4 py-3 border-b border-gray-200 flex items-center justify-between">
        <h3 class="text-md font-semibold text-gray-900 coustard-regular">Audition Cycle</h3>
      </div>
      <div class="p-4 space-y-3">
        <% @dashboard[:open_calls][:with_auditionees].each do |call_data| %>
          <%= link_to manage_production_auditions_path(@production, call_data[:call]), class: "flex items-center justify-between p-3 bg-pink-50 border border-pink-100 rounded-lg hover:bg-pink-100 transition-colors no-underline" do %>
            <div>
              <p class="font-bold text-sm">
                <%= call_data[:call].opens_at.strftime("%b %d, %Y") %> - <%= call_data[:call].closes_at.strftime("%b %d, %Y") %>
              </p>
              <div class="text-xs text-gray-600 mt-2 space-x-3">
                <span><span class="font-semibold text-gray-900"><%= call_data[:call].counts[:unreviewed] %></span> Unreviewed</span>
                <span><span class="font-semibold text-gray-900"><%= call_data[:call].counts[:undecided] %></span> Revisit</span>
                <span><span class="font-semibold text-green-600"><%= call_data[:call].counts[:accepted] %></span> Yes</span>
                <span><span class="font-semibold text-green-600"><%= call_data[:call].counts[:passed] %></span> No</span>
              </div>
            </div>
            <span class="inline-block bg-pink-100 text-pink-800 text-sm font-semibold px-4 py-2 rounded-lg">
              <%= pluralize(call_data[:auditionee_count], "auditionee") %>
            </span>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Upcoming Shows & Availability -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
    <!-- Upcoming Shows -->
    <div class="border border-gray-200 rounded-lg overflow-hidden">
      <div class="bg-gray-50 px-4 py-3 border-b border-gray-200 flex items-center justify-between">
        <h3 class="text-md font-semibold text-gray-900 coustard-regular">Upcoming Shows & Events</h3>
        <% if current_user_can_manage?(@production) %>
          <div class="flex gap-2">
            <%= link_to "All Shows & Events", manage_production_shows_path(@production), class: "text-pink-500 text-xs underline" %>
          </div>
        <% end %>
      </div>
      <div class="p-4">
        <% if @dashboard[:upcoming_shows].any? %>
          <div class="space-y-3">
            <% @dashboard[:upcoming_shows].each do |show_data| %>
              <%= link_to cast_manage_production_show_path(@production, show_data[:show]), class: "flex flex-col sm:flex-row sm:items-start sm:justify-between p-3 bg-gray-50 border border-gray-200 rounded-lg hover:bg-gray-100 transition-colors no-underline gap-2" do %>
                <div class="flex-1 min-w-0">
                  <div class="flex flex-col sm:flex-row sm:items-center sm:gap-2">
                    <p class="font-bold text-sm whitespace-normal">
                      <%= show_data[:show].date_and_time&.strftime("%b %d, %Y at %l:%M %p") %>
                    </p>
                    <% if show_data[:show].date_and_time %>
                      <span class="text-xs text-gray-500 sm:whitespace-nowrap">(<%= show_data[:days_until] %>)</span>
                    <% end %>
                  </div>
                  <div class="flex items-center gap-2 mt-2 flex-wrap">
                    <% event_type_badge_classes = case show_data[:show].event_type
                      when "rehearsal" then "bg-blue-50 text-blue-700 ring-blue-600/10"
                      when "meeting" then "bg-green-50 text-green-700 ring-green-600/10"
                      else "bg-pink-50 text-pink-700 ring-pink-600/10"
                    end %>
                    <span class="inline-flex items-center rounded-md px-1.5 py-0.5 text-xs font-medium ring-1 ring-inset <%= event_type_badge_classes %>">
                      <%= show_data[:show].event_type.titleize %>
                    </span>

                    <% if show_data[:show].secondary_name.present? %>
                      <span class="text-xs text-gray-900 font-medium"><%= show_data[:show].secondary_name %></span>
                    <% end %>

                    <% if show_data[:show].location.present? %>
                      <span class="inline-flex items-center gap-1 rounded-md px-1.5 py-0.5 text-xs font-medium ring-1 ring-inset bg-gray-50 text-gray-700 ring-gray-600/10">
                        <svg class="w-3 h-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" /></svg>
                        <span class="truncate"><%= show_data[:show].location.name %></span>
                      </span>
                    <% end %>
                  </div>
                  <div class="text-xs text-gray-500 mt-3">
                    <div class="w-full bg-gray-200 rounded-full h-2">
                      <div class="bg-pink-500 h-2 rounded-full" style="width: <%= show_data[:cast_percentage] %>%"></div>
                    </div>
                    <span><%= show_data[:cast_percentage] %>% cast</span>
                  </div>
                </div>
                <div class="flex-shrink-0 sm:ml-2">
                  <% if show_data[:uncast_count] > 0 %>
                    <span class="inline-block bg-orange-100 text-orange-800 text-xs font-semibold px-3 py-1 rounded-full w-full sm:w-auto text-center">
                      <%= show_data[:uncast_count] %> uncast
                    </span>
                  <% else %>
                    <span class="inline-block bg-green-100 text-green-800 text-xs font-semibold px-3 py-1 rounded-full w-full sm:w-auto text-center">
                      Fully Cast
                    </span>
                  <% end %>
                </div>
              <% end %>
            <% end %>
          </div>
        <% else %>
          <p class="text-sm text-gray-500">No upcoming shows in the next 30 days</p>
        <% end %>
      </div>
    </div>

    <!-- Availability Status -->
    <div class="border border-gray-200 rounded-lg overflow-hidden">
      <div class="bg-gray-50 px-4 py-3 border-b border-gray-200 flex items-center justify-between">
        <h3 class="text-md font-semibold text-gray-900 coustard-regular">Upcoming Availability</h3>
      </div>
      <div class="p-4">
        <% if @dashboard[:availability_summary][:shows_with_availability].any? %>
          <div class="space-y-3">
            <% @dashboard[:availability_summary][:shows_with_availability].each do |show_data| %>
              <%= link_to manage_production_availability_path(@production, show_data[:show]), class: "flex flex-col sm:flex-row sm:items-start sm:justify-between p-3 bg-gray-50 border border-gray-200 rounded-lg hover:bg-gray-100 transition-colors no-underline gap-2" do %>
                <div class="flex-1 min-w-0">
                  <p class="font-bold text-sm">
                    <%= show_data[:show].date_and_time&.strftime("%b %d, %Y at %l:%M %p") %>
                  </p>
                  <div class="text-sm text-gray-600 mt-1">
                    <span class="font-medium text-gray-900"><%= show_data[:with_availability] %></span> of <span class="font-medium text-gray-900"><%= show_data[:total_cast_people] %></span> cast members have provided availability
                  </div>
                  <% if show_data[:without_availability] > 0 %>
                    <div class="text-xs mt-2">
                        <span class="font-semibold text-amber-700"><%= pluralize(show_data[:without_availability], "still needs", "still need") %> to respond</span>
                    </div>
                  <% end %>
                </div>
                <div class="flex-shrink-0 sm:ml-2">
                  <% if show_data[:percentage_responded] == 100 %>
                    <span class="inline-block text-sm font-semibold px-3 py-1 rounded-full bg-green-100 text-green-800 w-full sm:w-auto text-center">
                      <%= show_data[:percentage_responded] %>% responded
                    </span>
                  <% elsif show_data[:percentage_responded] >= 75 %>
                    <span class="inline-block text-sm font-semibold px-3 py-1 rounded-full bg-yellow-100 text-yellow-800 w-full sm:w-auto text-center">
                      <%= show_data[:percentage_responded] %>% responded
                    </span>
                  <% else %>
                    <span class="inline-block text-sm font-semibold px-3 py-1 rounded-full bg-red-100 text-red-800 w-full sm:w-auto text-center">
                      <%= show_data[:percentage_responded] %>% responded
                    </span>
                  <% end %>
                </div>
              <% end %>
            <% end %>
          </div>
        <% else %>
          <p class="text-sm text-gray-500">No upcoming shows scheduled</p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Production Info & Recent Activity -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Description & Contact -->
    <div class="border border-gray-200 rounded-lg overflow-hidden">
      <div class="bg-gray-50 px-4 py-3 border-b border-gray-200 flex items-center justify-between">
        <h3 class="text-md font-semibold text-gray-900 coustard-regular">Production Info</h3>
        <% if current_user_can_manage?(@production) %>
          <div class="flex gap-2">
            <%= link_to "Edit Production", edit_manage_production_path(@production), class: "text-pink-500 text-xs underline" %>
          </div>
        <% end %>
      </div>
      <div class="p-4 space-y-4">
        <div>
          <h4 class="text-sm font-semibold text-gray-700 mb-2">Description</h4>
          <% if @production.description.present? %>
            <p class="text-sm text-gray-600"><%= @production.description %></p>
          <% else %>
            <p class="text-sm text-gray-500">
              No description yet.
              <% if current_user_can_manage?(@production) %>
                <%= link_to "Add one", edit_manage_production_path(@production), class: "text-pink-500 hover:text-pink-600 underline" %>
              <% end %>
            </p>
          <% end %>
        </div>
        <div>
          <h4 class="text-sm font-semibold text-gray-700 mb-2">Contact Email</h4>
          <% if @production.contact_email.present? %>
            <%= mail_to @production.contact_email, @production.contact_email, class: "text-sm text-pink-500 hover:text-pink-600 underline" %>
          <% else %>
            <p class="text-sm text-gray-500">
              No contact email yet.
              <% if current_user_can_manage?(@production) %>
                <%= link_to "Add one", edit_manage_production_path(@production), class: "text-sm text-pink-500 hover:text-pink-600 underline" %>
              <% end %>
            </p>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Quick Links -->
    <div class="border border-gray-200 rounded-lg overflow-hidden">
      <div class="bg-gray-50 px-4 py-3 border-b border-gray-200 flex items-center justify-between">
        <h3 class="text-md font-semibold text-gray-900 coustard-regular">Quick Links</h3>
      </div>
      <div class="p-4">
        <% links = [
          { name: "Manage Shows & Events", path: manage_production_shows_path(@production) },
          { name: "Manage Availability", path: manage_production_availability_index_path(@production) },
          { name: "Manage Cast Membership", path: manage_production_casts_path(@production) },
          { name: "Manage Roles", path: manage_production_roles_path(@production) },
          { name: "Manage Auditions & Sign-ups", path: manage_production_auditions_path(@production) },
          { name: "View and Manage Visual Assets", path: manage_production_visual_assets_path(@production) },
          { name: "Production Settings", path: edit_manage_production_path(@production) }
        ] %>
        <% links.each do |link| %>
          <div>
            <%= link_to link[:name], link[:path], class: "text-pink-500 hover:text-pink-600 underline block py-1 text-sm" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

</div>
