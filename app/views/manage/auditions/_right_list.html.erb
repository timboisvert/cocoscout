<div id="right_list" class="p-4 space-y-2 overflow-y-auto flex-1">
  <% if available_people.any? %>
    <% available_people.each do |request| %>
      <% requestable = request.requestable %>
      <% scheduled = scheduled_auditionables&.include?([request.requestable_type, request.requestable_id]) %>
      <div class="bg-white p-3 rounded border border-gray-300 shadow-sm cursor-move hover:shadow-md transition text-sm flex items-center gap-3 <%= 'opacity-40' if scheduled %>"
           draggable="true"
           data-id="<%= request.id %>"
           data-action="dragstart->drag-audition#dragStart dragend->drag-audition#dragEnd">
        <% headshot_url = safe_headshot_url(requestable) %>
        <% if headshot_url %>
          <%= image_tag headshot_url, alt: requestable.name, class: "w-10 h-10 rounded object-cover pointer-events-none" %>
        <% else %>
          <div class="w-10 h-10 rounded bg-gray-200 flex items-center justify-center text-xs font-bold pointer-events-none">
            <% if requestable.is_a?(Person) %>
              <%= requestable.initials %>
            <% else %>
              <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z"></path>
              </svg>
            <% end %>
          </div>
        <% end %>
        <div class="font-medium <%= scheduled ? 'text-gray-400' : 'text-gray-900' %> pointer-events-none"><%= requestable.name %></div>
      </div>
    <% end %>
  <% else %>
    <% if filter.blank? || filter == "to_be_scheduled" %>
      <p class="text-gray-500 text-sm">All accepted sign-ups have been scheduled</p>
    <% else %>
      <p class="text-gray-500 text-sm">No sign-ups</p>
    <% end %>
  <% end %>
</div>
