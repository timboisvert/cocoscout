<%

    classes = "font-medium rounded-lg text-xs px-3 py-1.5 sm:text-sm sm:px-5 sm:h-10 sm:py-2.5 text-center mb-0"

    if defined?(color)
        if color == "white"
            classes += " text-black bg-white hover:bg-gray-100"
        elsif color == "pink"
            classes += " text-white bg-pink-500 hover:bg-pink-600"
        end
    else
        classes += " text-white bg-pink-500 hover:bg-pink-600"
    end

    # Add flex classes if icon is present
    if defined?(icon) && icon.present?
        classes += " inline-flex items-center space-x-2"
    else
        classes += " inline-block"
    end

%>

<%= link_to path, class:"#{classes}" do %>
  <% if defined?(icon) && icon.present? %>
    <%= icon.html_safe %>
  <% end %>
  <span><%= text %></span>
<% end %>
