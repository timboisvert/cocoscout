<%= form_with model: rule, url: rule.persisted? ? manage_ticket_sync_rule_path(rule) : manage_ticket_sync_rules_path, class: "space-y-6" do |form| %>
  <% if rule.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <ul class="list-disc list-inside text-red-700 text-sm">
        <% rule.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="bg-white rounded-lg border border-gray-200 p-6 space-y-4">
    <h3 class="font-medium text-gray-900 mb-4">Rule Details</h3>

    <div>
      <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :name, class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500", placeholder: "e.g., Eventbrite - All Events" %>
    </div>

    <div>
      <%= form.label :ticketing_provider_id, "Provider", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.collection_select :ticketing_provider_id, @providers, :id, :name, { prompt: "Select provider..." }, class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500" %>
    </div>

    <div>
      <%= form.label :rule_type, "Sync Type", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.select :rule_type, [["All Events", "sync_all"], ["Specific Production", "sync_production"], ["Specific Venue", "sync_venue"]], {}, class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500" %>
    </div>

    <div>
      <%= form.label :sync_interval_minutes, "Sync Interval (minutes)", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.select :sync_interval_minutes, [[5, 5], [10, 10], [15, 15], [30, 30], [60, 60], [120, 120]], {}, class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500" %>
    </div>

    <div class="flex items-center gap-2">
      <%= form.check_box :active, class: "h-4 w-4 text-pink-600 border-gray-300 rounded focus:ring-pink-500 accent-pink-500" %>
      <%= form.label :active, "Active", class: "text-sm text-gray-700" %>
    </div>
  </div>

  <div class="flex justify-between items-center">
    <% if rule.persisted? %>
      <%= link_to manage_ticket_sync_rule_path(rule) do %>
        <%= render "shared/button", text: "Cancel", variant: "ghost-cancel", type: :button %>
      <% end %>
    <% else %>
      <%= link_to manage_ticket_sync_rules_path do %>
        <%= render "shared/button", text: "Cancel", variant: "ghost-cancel", type: :button %>
      <% end %>
    <% end %>

    <%= render "shared/button", text: rule.persisted? ? "Update Rule" : "Create Rule", variant: "primary", type: :submit %>
  </div>
<% end %>
