<% content_for :title, @production.name %>

<div class="w-full mb-10">
  <%= render partial: "shared/notice", locals: { notice: notice } %>
  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [],
    text: @production.name,
    links: []
  } %>

  <!-- Open Calls with Auditionees -->
    <% if @dashboard[:open_calls][:with_auditionees].any? %>
    <div class="border border-gray-200 rounded-lg overflow-hidden mb-8">
      <div class="bg-gray-50 px-4 py-3 border-b border-gray-200 flex items-center justify-between">
        <h3 class="text-md font-semibold text-gray-900 coustard-regular">Audition Cycle</h3>
      </div>
      <div class="p-4 space-y-3">
        <% @dashboard[:open_calls][:with_auditionees].each do |call_data| %>
          <%= link_to manage_production_auditions_path(@production, call_data[:call]), class: "flex items-center justify-between p-3 bg-pink-50 border border-pink-100 rounded-lg hover:bg-pink-100 transition-colors no-underline" do %>
            <div>
              <p class="font-bold text-sm">
                <%= call_data[:call].opens_at.strftime("%b %d, %Y") %><% if call_data[:call].closes_at.present? %> - <%= call_data[:call].closes_at.strftime("%b %d, %Y") %><% else %> (open-ended)<% end %>
              </p>
              <div class="text-xs text-gray-600 mt-2 space-x-3">
                <span><span class="font-semibold text-gray-900"><%= call_data[:call].counts[:unreviewed] %></span> Unreviewed</span>
                <span><span class="font-semibold text-gray-900"><%= call_data[:call].counts[:undecided] %></span> Revisit</span>
                <span><span class="font-semibold text-green-600"><%= call_data[:call].counts[:accepted] %></span> Yes</span>
                <span><span class="font-semibold text-green-600"><%= call_data[:call].counts[:passed] %></span> No</span>
              </div>
            </div>
            <span class="inline-block bg-pink-100 text-pink-800 text-sm font-semibold px-4 py-2 rounded-lg">
              <%= pluralize(call_data[:auditionee_count], "auditionee") %>
            </span>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Upcoming Shows & Availability -->
  <div class="border border-gray-200 rounded-lg overflow-hidden mb-8">
    <div class="bg-gray-50 px-4 py-3 border-b border-gray-200 flex items-center justify-between">
      <h3 class="text-md font-semibold text-gray-900 coustard-regular">Upcoming Shows & Events</h3>
      <% if current_user_can_manage?(@production) %>
        <div class="flex gap-4">
          <%= link_to "All Shows", manage_production_shows_path(@production), class: "text-pink-500 text-xs underline" %>
          <%= link_to "Availability", manage_production_availability_index_path(@production), class: "text-pink-500 text-xs underline" %>
        </div>
      <% end %>
    </div>
    <div class="p-4">
      <% if @dashboard[:upcoming_shows].any? %>
        <div class="space-y-3">
          <% @dashboard[:upcoming_shows].each do |show_data| %>
            <% show = show_data[:show] %>
            <%= link_to manage_production_show_path(@production, show), class: "block no-underline" do %>
              <div class="flex items-center gap-4 px-3 py-2 border border-gray-200 rounded-lg hover:border-gray-400 transition-all bg-white">
                <%# Date Box %>
                <div class="flex-shrink-0 w-14 text-center">
                  <div class="text-xs font-semibold text-pink-600 uppercase"><%= show.date_and_time.strftime("%b") %></div>
                  <div class="text-2xl font-bold text-gray-900"><%= show.date_and_time.strftime("%-d") %></div>
                  <div class="text-xs text-gray-500"><%= show.date_and_time.strftime("%a") %></div>
                </div>

                <%# Show Details %>
                <div class="flex-1 min-w-0">
                  <div class="flex items-center gap-2 flex-wrap">
                    <span class="font-medium text-gray-900">
                      <%= show.secondary_name.presence || show.event_type.titleize %>
                    </span>
                    <span class="inline-flex items-center rounded-md px-1.5 py-0.5 text-xs font-medium ring-1 ring-inset <%= event_type_badge_classes(show.event_type) %>">
                      <%= show.event_type.titleize %>
                    </span>
                  </div>
                  <div class="text-sm text-gray-600">
                    <%= show.date_and_time.strftime("%l:%M %p").strip %>
                    <% if show.location.present? %>
                      · <%= show.location.name %>
                    <% end %>
                    · <span class="text-gray-500"><%= show_data[:days_until] %></span>
                  </div>
                </div>

                <%# Status Badges %>
                <div class="flex-shrink-0 flex flex-col sm:flex-row gap-2">
                  <%# Casting Status %>
                  <% if show_data[:cast_percentage] == 100 %>
                    <span class="inline-flex items-center gap-1 text-xs font-semibold px-2.5 py-1 rounded-full bg-green-100 text-green-800">
                      <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg>
                      Cast
                    </span>
                  <% else %>
                    <span class="inline-flex items-center gap-1 text-xs font-semibold px-2.5 py-1 rounded-full bg-orange-100 text-orange-800">
                      <%= show_data[:cast_percentage] %>% cast
                    </span>
                  <% end %>

                  <%# Availability Status %>
                  <% if show_data[:total_cast_count] > 0 %>
                    <% if show_data[:availability_percentage] == 100 %>
                      <span class="inline-flex items-center gap-1 text-xs font-semibold px-2.5 py-1 rounded-full bg-green-100 text-green-800">
                        <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg>
                        Avail
                      </span>
                    <% elsif show_data[:availability_percentage] >= 75 %>
                      <span class="inline-flex items-center gap-1 text-xs font-semibold px-2.5 py-1 rounded-full bg-yellow-100 text-yellow-800">
                        <%= show_data[:availability_percentage] %>% avail
                      </span>
                    <% else %>
                      <span class="inline-flex items-center gap-1 text-xs font-semibold px-2.5 py-1 rounded-full bg-red-100 text-red-800">
                        <%= show_data[:availability_percentage] %>% avail
                      </span>
                    <% end %>
                  <% end %>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <p class="text-sm text-gray-500">No upcoming shows in the next 6 weeks</p>
      <% end %>
    </div>
  </div>

  <!-- Production Info & Recent Activity -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Description & Contact -->
    <div class="border border-gray-200 rounded-lg overflow-hidden">
      <div class="bg-gray-50 px-4 py-3 border-b border-gray-200 flex items-center justify-between">
        <h3 class="text-md font-semibold text-gray-900 coustard-regular">Production Info</h3>
        <% if current_user_can_manage?(@production) %>
          <div class="flex gap-2">
            <%= link_to "Production Settings", edit_manage_production_path(@production), class: "text-pink-500 text-xs underline" %>
          </div>
        <% end %>
      </div>
      <div class="p-4 space-y-4">
        <div>
          <h4 class="text-sm font-semibold text-gray-700 mb-2">Description</h4>
          <% if @production.description.present? %>
            <p class="text-sm text-gray-600"><%= @production.description %></p>
          <% else %>
            <p class="text-sm text-gray-500">
              No description yet.
              <% if current_user_can_manage?(@production) %>
                <%= link_to "Add one", edit_manage_production_path(@production), class: "text-pink-500 hover:text-pink-600 underline" %>
              <% end %>
            </p>
          <% end %>
        </div>
        <div>
          <h4 class="text-sm font-semibold text-gray-700 mb-2">Contact Email</h4>
          <% if @production.contact_email.present? %>
            <%= mail_to @production.contact_email, @production.contact_email, class: "text-sm text-pink-500 hover:text-pink-600 underline" %>
          <% else %>
            <p class="text-sm text-gray-500">
              No contact email yet.
              <% if current_user_can_manage?(@production) %>
                <%= link_to "Add one", edit_manage_production_path(@production), class: "text-sm text-pink-500 hover:text-pink-600 underline" %>
              <% end %>
            </p>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Quick Links -->
    <div class="border border-gray-200 rounded-lg overflow-hidden">
      <div class="bg-gray-50 px-4 py-3 border-b border-gray-200 flex items-center justify-between">
        <h3 class="text-md font-semibold text-gray-900 coustard-regular">Quick Links</h3>
      </div>
      <div class="p-4">
        <% links = [
          { name: "Manage Shows & Events", path: manage_production_shows_path(@production) },
          { name: "Manage Availability", path: manage_production_availability_index_path(@production) },
          { name: "Manage Casting & Roles", path: manage_production_casting_path(@production) },
          { name: "Manage Auditions & Sign-ups", path: manage_production_auditions_path(@production) },
          { name: "View and Manage Visual Assets", path: manage_production_visual_assets_path(@production) },
          { name: "Production Settings", path: edit_manage_production_path(@production) }
        ] %>
        <% links.each do |link| %>
          <div>
            <%= link_to link[:name], link[:path], class: "text-pink-500 hover:text-pink-600 underline block py-1 text-sm" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

</div>
