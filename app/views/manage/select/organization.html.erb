<% content_for :title, "Select Organization" %>

<div class="min-h-screen bg-white">
  <!-- Header -->
  <div class="flex flex-col items-center pt-6 sm:pt-10 pb-4">
    <img src="<%= asset_path('cocoscout.png') %>" alt="CocoScout" class="w-20 sm:w-28 object-contain select-none pointer-events-none" />
    <h1 class="mt-3 text-3xl sm:text-4xl coustard-regular text-pink-500">CocoScout</h1>
  </div>

  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 pb-12">

    <% if @organizations.any? %>
      <!-- Organization Selection -->
      <div class="text-center mb-8">
        <h2 class="text-2xl sm:text-3xl font-bold text-slate-900 mb-2">Select an organization</h2>
        <p class="text-slate-600">Choose which organization you'd like to work with</p>
      </div>

      <div class="flex flex-wrap justify-center gap-6 max-w-5xl mx-auto">
        <% @organizations.each do |org| %>
          <% role = @organization_roles[org.id] %>
          <% is_owner = org.owned_by?(Current.user) %>
          <%= form_with url: set_organization_path(id: org.id), method: :post, class: "w-full sm:w-80" do |form| %>
            <button type="submit" class="block text-left w-full group">
              <div class="<%= is_owner ? 'border-2 border-pink-200 bg-gradient-to-br from-pink-50 to-white hover:border-pink-400' : 'border border-slate-200 bg-white hover:border-slate-400' %> rounded-lg p-6 hover:shadow-lg transition-all cursor-pointer">
                <!-- Logo Area -->
                <div class="aspect-video bg-gradient-to-br <%= is_owner ? 'from-pink-100 to-pink-50' : 'from-slate-50 to-slate-100' %> rounded-lg mb-4 flex items-center justify-center overflow-hidden">
                  <% if org.logo.attached? %>
                    <%= image_tag org.logo, class: "w-full h-full object-cover" %>
                  <% else %>
                    <svg class="w-16 h-16 <%= is_owner ? 'text-pink-300' : 'text-slate-300' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                    </svg>
                  <% end %>
                </div>

                <div class="flex-grow">
                  <h3 class="text-lg font-bold text-slate-900 mb-1 group-hover:text-pink-600 transition-colors">
                    <%= org.name %>
                  </h3>
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium <%= is_owner ? 'bg-pink-100 text-pink-800' : role == 'manager' ? 'bg-blue-100 text-blue-800' : 'bg-slate-100 text-slate-800' %> mb-3">
                    <%= is_owner ? 'ðŸ‘‘ Owner' : role.titleize %>
                  </span>

                  <!-- Stats -->
                  <div class="flex items-center gap-4 text-xs text-slate-500 mt-3">
                    <div class="flex items-center gap-1">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z" />
                      </svg>
                      <%= pluralize(org.productions.count, 'production') %>
                    </div>
                    <div class="flex items-center gap-1">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                      </svg>
                      <%= pluralize(org.team_size, 'team member') %>
                    </div>
                  </div>
                </div>
              </div>
            </button>
          <% end %>
        <% end %>
      </div>

      <!-- Create New Organization Button -->
      <div class="text-center mt-8">
        <p class="text-sm text-slate-600 mb-3">Ready to create another organization?</p>
        <%= link_to new_manage_organization_path, class: "inline-flex items-center justify-center gap-2 px-6 py-3 bg-pink-600 hover:bg-pink-700 text-white font-semibold rounded-lg shadow-sm transition-colors" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
          </svg>
          Create another organization
        <% end %>
      </div>

    <% else %>
      <!-- Empty State - No Organizations -->
      <div class="text-center py-12">
        <div class="w-16 h-16 bg-pink-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-slate-900 mb-2 coustard-regular">No Organizations Yet</h3>
        <p class="text-slate-600 mb-6 max-w-md mx-auto">
          Create your first organization to start managing productions, casting calls, and your team.
        </p>
        <%= link_to new_manage_organization_path, class: "inline-flex items-center justify-center gap-2 px-6 py-3 bg-pink-600 hover:bg-pink-700 text-white font-semibold rounded-lg shadow-sm transition-colors" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
          </svg>
          Create Your First Organization
        <% end %>
      </div>
    <% end %>

  </div>
</div>
