<% content_for :title, "Rake Tasks" %>

<div class="w-full px-5 pt-5">
  <%= render partial: "shared/notice", locals: { notice: notice, alert: alert } %>

  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Superadmin", superadmin_path]
    ],
    text: "Rake Tasks",
    links: []
  } %>

  <p class="text-sm text-gray-600 mt-4 mb-6">
    All available rake tasks with descriptions. Run with <code class="bg-gray-100 px-1.5 py-0.5 rounded text-pink-600">bin/rails task_name</code> or <code class="bg-gray-100 px-1.5 py-0.5 rounded text-pink-600">bin/rake task_name</code>.
  </p>

  <div class="space-y-6">
    <% @tasks.each do |namespace, tasks| %>
      <div class="bg-white border border-gray-200 rounded-lg overflow-hidden">
        <div class="px-4 py-3 bg-gray-50 border-b border-gray-200">
          <h2 class="text-sm font-semibold text-gray-900">
            <% if namespace == "default" %>
              General Tasks
            <% else %>
              <%= namespace %>
            <% end %>
          </h2>
          <p class="text-xs text-gray-500"><%= tasks.size %> task<%= tasks.size == 1 ? '' : 's' %></p>
        </div>
        <div class="divide-y divide-gray-100">
          <% tasks.each do |task| %>
            <div class="px-4 py-3 group">
              <div class="flex items-start gap-3">
                <div class="flex-shrink-0 mt-0.5">
                  <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                  </svg>
                </div>
                <div class="flex-1 min-w-0">
                  <div class="flex items-center gap-2">
                    <code class="text-sm font-mono text-pink-600 bg-pink-50 px-1.5 py-0.5 rounded"><%= task[:name] %></code>
                    <button type="button"
                            onclick="navigator.clipboard.writeText('bin/rails <%= task[:name] %>'); this.querySelector('.copy-icon').classList.add('hidden'); this.querySelector('.check-icon').classList.remove('hidden'); setTimeout(() => { this.querySelector('.copy-icon').classList.remove('hidden'); this.querySelector('.check-icon').classList.add('hidden'); }, 1500);"
                            class="opacity-0 group-hover:opacity-100 transition-opacity p-1 hover:bg-gray-100 rounded"
                            title="Copy command">
                      <svg class="w-4 h-4 text-gray-400 hover:text-gray-600 copy-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                      </svg>
                      <svg class="w-4 h-4 text-green-500 check-icon hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                      </svg>
                    </button>
                  </div>
                  <p class="text-sm text-gray-600 mt-1"><%= task[:description] %></p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
