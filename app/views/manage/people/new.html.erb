<% content_for :title, "Invite People" %>

<div class="w-full">

  <%= render partial: "shared/notice", locals: { notice: notice } %>

  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Directory", manage_directory_path]
    ],
    text: "Invite People",
    links: []
  } %>

  <div class="w-full" data-controller="tabs">

    <nav class="flex space-x-2 border-b border-gray-200 mb-4">
      <button type="button" data-tabs-target="tab" data-index="0" data-action="tabs#select" class="px-4 py-2 text-sm font-medium border-b-2 cursor-pointer">Get Invite Link</button>
      <button type="button" data-tabs-target="tab" data-index="1" data-action="tabs#select" class="px-4 py-2 text-sm font-medium border-b-2 cursor-pointer">Invite Directly</button>
    </nav>

    <!-- Get Invite Link tab -->
    <div data-tabs-target="panel">
      <div class="bg-gradient-to-r from-pink-50 to-white border border-pink-100 rounded-lg p-6 mb-6">
        <div class="flex items-start gap-4">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 rounded-full bg-pink-100 flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-pink-600">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13.19 8.688a4.5 4.5 0 011.242 7.244l-4.5 4.5a4.5 4.5 0 01-6.364-6.364l1.757-1.757m13.35-.622l1.757-1.757a4.5 4.5 0 00-6.364-6.364l-4.5 4.5a4.5 4.5 0 001.242 7.244" />
              </svg>
            </div>
          </div>
          <div>
            <h3 class="text-lg font-semibold text-gray-900 mb-1">Share your invite link</h3>
            <p class="text-gray-600 text-sm">
              Copy this link and send it through your own email, Slack, or any messaging app.
              Anyone who clicks it will be able to join <%= Current.organization.name %> on CocoScout.
            </p>
          </div>
        </div>
      </div>

      <% invite_url = join_organization_url(Current.organization.ensure_invite_token!) %>
      <%= render "shared/copy_url",
          url: invite_url,
          label: "Your organization's invite link",
          help_text: "This link never expires and can be used by anyone. Share it with your cast, crew, or team members." %>

      <div class="mt-8 border border-gray-200 rounded-lg overflow-hidden">
        <%= render "shared/card_header", title: "Sample Email Template" %>
        <div class="p-4 bg-gray-50">
          <p class="text-sm text-gray-600 mb-3">Here's a template you can copy and paste into your email:</p>
          <div class="bg-white border border-gray-200 rounded-lg p-4 text-sm text-gray-700 font-mono whitespace-pre-wrap" id="email-template">Subject: Join <%= Current.organization.name %> on CocoScout

Hi there,

I'm inviting you to join <%= Current.organization.name %> on CocoScout, the platform we use to manage our productions, auditions, and casting.

Click this link to get started:
<%= invite_url %>

If you already have a CocoScout account, just sign in and you'll be added automatically.

Looking forward to working with you!
          </div>
          <div class="mt-3 flex justify-end" data-controller="copy-url">
            <div data-copy-url-target="button" data-url="Subject: Join <%= Current.organization.name %> on CocoScout&#10;&#10;Hi there,&#10;&#10;I'm inviting you to join <%= Current.organization.name %> on CocoScout, the platform we use to manage our productions, auditions, and casting.&#10;&#10;Click this link to get started:&#10;<%= invite_url %>&#10;&#10;If you already have a CocoScout account, just sign in and you'll be added automatically.&#10;&#10;Looking forward to working with you!">
              <%= render "shared/button",
                text: "Copy Template",
                variant: "outline-pink",
                size: "small",
                type: :button,
                icon: "clipboard",
                data: { action: "click->copy-url#copy" } %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Single person form (Invite Directly) -->
    <div data-tabs-target="panel" data-controller="invite-search" data-invite-search-url-value="<%= search_for_invite_manage_people_path %>">

      <%# Step 1: Search Section %>
      <div data-invite-search-target="searchSection">
        <div class="border border-gray-200 rounded-lg overflow-hidden">
          <div class="bg-gray-50 px-4 py-3 border-b border-gray-200">
            <div class="flex items-center gap-2">
              <span class="flex items-center justify-center w-6 h-6 rounded-full bg-pink-500 text-white text-xs font-bold">1</span>
              <h3 class="font-medium text-gray-900">Find someone to invite</h3>
            </div>
          </div>
          <div class="p-4">
            <p class="text-gray-600 text-sm mb-4">
              Search by name or email. If they're already on CocoScout, you can invite them directly.
              If not, enter their email to send an invitation.
            </p>

            <div class="mb-4">
              <label class="text-sm font-medium text-gray-700">Search for a person</label>
              <input type="text"
                     data-invite-search-target="input"
                     data-action="input->invite-search#search"
                     placeholder="Search by name or email..."
                     class="block shadow-sm rounded-lg border border-gray-400 px-3 py-2 mt-2 w-full focus:border-pink-500 focus:ring-pink-500">
            </div>

            <div data-invite-search-target="results" class="mb-4">
              <%# Search results will be loaded here %>
            </div>

            <div class="border-t border-gray-200 pt-4 mt-4">
              <p class="text-sm text-gray-500 mb-3">Can't find who you're looking for?</p>
              <button type="button"
                      class="text-pink-600 hover:text-pink-700 text-sm font-medium"
                      data-action="invite-search#showInviteForm">
                <%= icon("user-plus", class: "w-4 h-4 inline mr-1") %>
                Enter their details manually
              </button>
            </div>
          </div>
        </div>
      </div>

      <%# Selected Person Display (shown when selecting an existing CocoScout user) %>
      <div data-invite-search-target="selectedPerson" class="hidden mb-4">
        <div class="border border-gray-200 rounded-lg overflow-hidden">
          <div class="bg-gray-50 px-4 py-3 border-b border-gray-200">
            <div class="flex items-center gap-2">
              <span class="flex items-center justify-center w-6 h-6 rounded-full bg-pink-500 text-white text-xs font-bold">1</span>
              <h3 class="font-medium text-gray-900">Who are you inviting?</h3>
            </div>
          </div>
          <div class="p-4">
            <div class="flex items-center justify-between">
              <div>
                <p class="font-medium text-gray-900" data-invite-search-target="selectedPersonName"></p>
                <p class="text-sm text-gray-500" data-invite-search-target="selectedPersonEmail"></p>
              </div>
              <button type="button"
                      class="text-sm text-pink-600 hover:text-pink-700 font-medium"
                      data-action="invite-search#backToSearch">
                Change
              </button>
            </div>
          </div>
        </div>
      </div>

      <%# Invite Form (shown when inviting) %>
      <div data-invite-search-target="inviteForm" class="hidden">
        <%= form_with(model: [:manage, @person], class: "contents") do |person_form| %>

          <%# Hidden field for existing person ID %>
          <input type="hidden" name="selected_profile_ids[]" value="" data-invite-search-target="selectedPersonIdInput">

          <%# Step 1: Who are you inviting? %>
          <div class="border border-gray-200 rounded-lg overflow-hidden mb-4" data-invite-search-target="personDetailsSection">
            <div class="bg-gray-50 px-4 py-3 border-b border-gray-200">
              <div class="flex items-center gap-2">
                <span class="flex items-center justify-center w-6 h-6 rounded-full bg-pink-500 text-white text-xs font-bold">1</span>
                <h3 class="font-medium text-gray-900">Who are you inviting?</h3>
              </div>
            </div>
            <div class="p-4">
              <div class="flex flex-col sm:flex-row sm:gap-4">
                <div class="w-full sm:w-1/2">
                  <% if @person.errors[:name].none? %>
                      <%= person_form.label :name, "Name", class: "text-sm font-medium text-gray-700" %>
                  <% else %>
                      <%= person_form.label :name, "Name is required", class: "text-sm text-pink-600"  %>
                  <% end %>
                  <%= person_form.text_field :name,
                      data: { "invite-search-target": "inviteName" },
                      class: ["block shadow-sm rounded-lg border px-3 py-2 mt-2 w-full", {"border-gray-400": @person.errors[:name].none?, "border-pink-500": @person.errors[:name].any?}] %>
                </div>

                <div class="w-full sm:w-1/2">
                  <% if @user_exists_error %>
                      <%= person_form.label :email, "A user with this email already exists", class: "text-sm text-pink-600" %>
                  <% elsif @person.errors[:email].none? %>
                      <%= person_form.label :email, "Email Address", class: "text-sm font-medium text-gray-700" %>
                  <% else %>
                      <%= person_form.label :email, "Email Address is required", class: "text-sm text-pink-600"  %>
                  <% end %>
                  <%= person_form.email_field :email,
                      autocapitalize: "none",
                      data: { "invite-search-target": "inviteEmail" },
                      class: ["block shadow-sm rounded-lg border px-3 py-2 mt-2 w-full", {"border-gray-400": @person.errors[:email].none? && !@user_exists_error, "border-pink-500": @person.errors[:email].any? || @user_exists_error}] %>
                </div>
              </div>
            </div>
          </div>

          <%# Step 2: Talent Pool (optional) %>
          <% if @talent_pools.any? %>
            <div class="border border-gray-200 rounded-lg overflow-hidden mb-4" data-controller="toggle-section">
              <div class="bg-gray-50 px-4 py-3 border-b border-gray-200">
                <div class="flex items-center justify-between">
                  <div class="flex items-center gap-2">
                    <span class="flex items-center justify-center w-6 h-6 rounded-full bg-pink-500 text-white text-xs font-bold">2</span>
                    <h3 class="font-medium text-gray-900">Add to a talent pool?</h3>
                    <span class="text-sm text-gray-500">(optional)</span>
                  </div>
                  <label class="relative inline-flex items-center cursor-pointer">
                    <input type="checkbox"
                           name="invite_to_pool"
                           value="yes"
                           class="sr-only peer"
                           data-action="change->toggle-section#toggle"
                           data-toggle-section-target="toggle">
                    <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-pink-100 rounded-full peer peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-pink-500"></div>
                  </label>
                </div>
              </div>
              <div class="p-4 hidden" data-toggle-section-target="content">
                <p class="text-sm text-gray-600 mb-3">Select which talent pool to add this person to when they accept the invitation.</p>
                <% if @talent_pool_options.size == 1 %>
                  <div class="flex items-center gap-2 p-3 bg-pink-50 border border-pink-200 rounded-lg">
                    <%= icon("users", class: "w-5 h-5 text-pink-600") %>
                    <span class="font-medium text-gray-900"><%= @talent_pool_options.first[:display_name] %></span>
                    <input type="hidden" name="talent_pool_id" value="<%= @talent_pool_options.first[:pool].id %>">
                  </div>
                <% else %>
                  <select name="talent_pool_id" class="block w-full rounded-lg border border-gray-300 px-3 py-2 text-sm focus:border-pink-500 focus:ring-pink-500 bg-white">
                    <% @talent_pool_options.each do |opt| %>
                      <option value="<%= opt[:pool].id %>"><%= opt[:display_name] %></option>
                    <% end %>
                  </select>
                <% end %>
              </div>
            </div>
          <% end %>

          <%# Step 3: Review & Send Email %>
          <div class="border border-gray-200 rounded-lg overflow-hidden">
            <div class="bg-gray-50 px-4 py-3 border-b border-gray-200">
              <div class="flex items-center gap-2">
                <span class="flex items-center justify-center w-6 h-6 rounded-full bg-pink-500 text-white text-xs font-bold">3</span>
                <h3 class="font-medium text-gray-900">Review & send invitation</h3>
              </div>
            </div>
            <div class="p-4 space-y-4">
              <% rendered_email = ContentTemplateService.render("person_invitation", { organization_name: Current.organization.name, setup_url: "{{setup_url}}" }) %>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Subject</label>
                <%= text_field_tag :invitation_subject, rendered_email[:subject], class: "block w-full rounded-lg border border-gray-300 px-3 py-2 text-sm focus:border-pink-500 focus:ring-pink-500" %>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Message</label>
                <%= rich_text_area_tag :invitation_body, rendered_email[:body], class: "w-full rounded-lg border border-gray-300 focus:ring-2 focus:ring-pink-500 focus:border-transparent" %>
                <p class="mt-1 text-xs text-gray-500">
                  <code class="bg-gray-100 px-1 rounded">{{setup_url}}</code> will be replaced with the invitation link when sent.
                </p>
              </div>
            </div>
          </div>

          <div class="flex items-center gap-3 pt-2">
            <%= render "shared/button", text: "Send Invitation", variant: "primary", size: "medium", type: :submit, icon: "paper-airplane" %>
            <button type="button"
                    class="px-4 py-2 text-gray-600 hover:text-gray-900 text-sm font-medium"
                    data-action="invite-search#backToSearch">
              Back to Search
            </button>
          </div>

        <% end %>
      </div>
    </div>

  </div>

</div>
