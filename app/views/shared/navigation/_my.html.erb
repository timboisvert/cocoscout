    <div class="p-5 pb-4 border-t-4 border-pink-500 transition-all flex flex-col">
      <% if Current.user %>
        <div class="font-bold text-sm"><%= Current.user.email_address %></div>
        <div>
          <%= link_to "Sign out", signout_path, class: "text-pink-500 font-bold underline text-xs inline-block", data: { turbo_prefetch: false } %>
        </div>
      <% end  %>
