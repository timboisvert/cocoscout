<%= render partial: "shared/top_menu", locals: {
  breadcrumbs: [
    ["Ticketing", manage_ticketing_index_path],
    [@production.name, manage_ticketing_production_path(@production)]
  ],
  text: @ticketing_production_link.provider_event_name || "Ticketing Link",
  links: [
    { text: "Sync Now", path: manage_sync_ticketing_production_link_path(@production, @ticketing_production_link), data: { turbo_method: :post } },
    { text: "Match Shows", path: manage_match_ticketing_production_link_path(@production, @ticketing_production_link) },
    { text: "Edit", path: manage_edit_ticketing_production_link_path(@production, @ticketing_production_link) }
  ]
} %>

<div class="max-w-4xl mx-auto px-4 py-6 space-y-6">
  <% if flash[:alert] %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4 text-red-700">
      <%= flash[:alert] %>
    </div>
  <% end %>
  <% if flash[:notice] %>
    <div class="bg-green-50 border border-green-200 rounded-lg p-4 text-green-700">
      <%= flash[:notice] %>
    </div>
  <% end %>
  <%# Status Card %>
  <div class="bg-white shadow rounded-lg p-6">
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-4">
        <div class="w-12 h-12 bg-gray-100 rounded-lg flex items-center justify-center">
          <svg class="w-7 h-7 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z" />
          </svg>
        </div>
        <div>
          <h2 class="text-lg font-semibold text-gray-900">
            <%= @ticketing_production_link.provider_event_name || @ticketing_production_link.provider_event_id %>
          </h2>
          <p class="text-sm text-gray-500">
            via <%= @ticketing_production_link.ticketing_provider.name %>
          </p>
        </div>
      </div>

      <div class="text-right">
        <% if @ticketing_production_link.sync_enabled? %>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
            Syncing
          </span>
        <% else %>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800">
            Paused
          </span>
        <% end %>

        <% if @ticketing_production_link.last_synced_at.present? %>
          <p class="mt-1 text-xs text-gray-500">
            Last synced <%= time_ago_in_words(@ticketing_production_link.last_synced_at) %> ago
          </p>
        <% end %>
      </div>
    </div>

    <% safe_url = @ticketing_production_link.safe_provider_event_url %>
    <% if safe_url.present? %>
      <div class="mt-4">
        <%= link_to safe_url, safe_url,
                   target: "_blank", rel: "noopener noreferrer", class: "text-sm text-pink-600 hover:text-pink-800" %>
      </div>
    <% end %>
  </div>

  <%# Summary Stats %>
  <div class="grid grid-cols-3 gap-4">
    <div class="bg-white shadow rounded-lg p-4">
      <p class="text-sm text-gray-500">Linked Shows</p>
      <p class="text-2xl font-bold text-gray-900"><%= @show_links.count %></p>
    </div>
    <div class="bg-white shadow rounded-lg p-4">
      <p class="text-sm text-gray-500">Total Tickets Sold</p>
      <p class="text-2xl font-bold text-gray-900"><%= @show_links.sum(:tickets_sold) %></p>
    </div>
    <div class="bg-white shadow rounded-lg p-4">
      <p class="text-sm text-gray-500">Total Revenue</p>
      <p class="text-2xl font-bold text-gray-900"><%= number_to_currency(@show_links.sum(:net_revenue)) %></p>
    </div>
  </div>

  <%# Linked Shows %>
  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">Linked Shows</h3>
    </div>

    <% if @show_links.any? %>
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Show</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Tickets</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Revenue</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% @show_links.each do |link| %>
            <tr>
              <td class="px-6 py-4">
                <%= link_to manage_show_path(link.show) do %>
                  <span class="font-medium text-gray-900"><%= link.show.event_type.titleize %></span>
                  <span class="text-sm text-gray-500 block">
                    <%= link.show.date_and_time.strftime("%b %-d, %Y at %-I:%M %p") %>
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4 text-sm text-gray-900">
                <%= link.tickets_sold %>
                <% if link.tickets_capacity.present? %>
                  <span class="text-gray-500">/ <%= link.tickets_capacity %></span>
                <% end %>
              </td>
              <td class="px-6 py-4 text-sm text-gray-900">
                <%= number_to_currency(link.net_revenue || link.gross_revenue || 0) %>
              </td>
              <td class="px-6 py-4">
                <% case link.sync_status %>
                <% when "synced" %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
                    Synced
                  </span>
                <% when "pending" %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-pink-100 text-pink-800">
                    Pending
                  </span>
                <% when "error" %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800">
                    Error
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
                    Unknown
                  </span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="px-6 py-8 text-center text-gray-500">
        <p>No shows linked yet</p>
        <%= link_to "Match shows", manage_match_ticketing_production_link_path(@production, @ticketing_production_link),
                   class: "text-pink-600 hover:text-pink-800" %>
      </div>
    <% end %>
  </div>

  <%# Unlinked Shows %>
  <% if @unlinked_shows.any? %>
    <div class="bg-pink-50 border border-pink-200 rounded-lg p-4">
      <div class="flex items-center justify-between">
        <div>
          <h4 class="text-sm font-medium text-pink-800">
            <%= @unlinked_shows.count %> shows not linked
          </h4>
          <p class="text-sm text-pink-700 mt-1">
            These shows don't have a matching ticketing event
          </p>
        </div>
        <%= link_to "Match Shows", manage_match_ticketing_production_link_path(@production, @ticketing_production_link),
                   class: "text-sm font-medium text-pink-800 hover:text-pink-900 underline" %>
      </div>
    </div>
  <% end %>

  <%# Danger Zone %>
  <div class="bg-white shadow rounded-lg border border-red-200">
    <div class="px-6 py-4">
      <h3 class="text-lg font-medium text-red-900">Remove Integration</h3>
      <p class="text-sm text-gray-500 mt-1">
        This will stop syncing and remove all show links. Existing financial data will remain.
      </p>
      <div class="mt-4">
        <%= button_to "Remove Ticketing Link",
                     manage_destroy_ticketing_production_link_path(@production, @ticketing_production_link),
                     method: :delete,
                     data: { turbo_confirm: "Are you sure? Existing financial data will remain, but syncing will stop." },
                     class: "inline-flex items-center px-4 py-2 border border-red-300 text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50" %>
      </div>
    </div>
  </div>
</div>
