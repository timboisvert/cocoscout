<% content_for :title, "My Profile" %>

<div class="w-full">

  <%= render partial: "shared/notice", locals: { notice: notice } %>

  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [],
    text: "My Profile",
    links: [
        {
          text: "Edit My Profile",
          path: my_edit_profile_path
        }
      ]
  } %>


    <div class="flex flex-wrap border border-gray-200 rounded-lg hover:border-gray-400 transition-all items-top">
        <div class="w-full md:w-1/2 flex p-4">
            <% if Current.user.person.headshot.attached? %>
                <%= image_tag url_for(Current.user.person.headshot), class: "relative inline-block w-full rounded-lg" %>
            <% else %>
                <div class="w-12 h-12 rounded-lg bg-gray-100 flex items-center justify-center mb-1 text-black font-bold">
                    <%= Current.user.person.initials %>
                </div>
            <% end %>
        </div>
        <div class="w-full md:w-1/2 flex flex-col p-4">
            <h2 class="text-2xl font-bold"><%= Current.user.person.name %></h2>
            <p class="text-gray-500 mb-4"><%= Current.user.person.pronouns %></p>
            <div class="space-y-2">
                <%= Current.user.person.socials %>
            </div>
        </div>
    </div>

</div>