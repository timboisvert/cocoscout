      <%= link_to "Shows & Events", my_shows_path, class: "flex items-center gap-3 px-4 py-2 transition-all font-medium #{'bg-pink-500 text-white' if current_page?(my_shows_path)} hover:bg-pink-500 hover:text-white" %>
      <%#= link_to "Availability", my_availability_path, class: "flex items-center gap-3 px-4 py-2 transition-all font-medium #{'bg-pink-500 text-white' if current_page?(my_availability_path)} hover:bg-pink-500 hover:text-white" %>
