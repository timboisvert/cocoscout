<% content_for :title, "Questionnaires" %>

<div class="w-full mb-10">
  <%= render partial: "shared/notice", locals: { notice: notice } %>

  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Casting", manage_casting_path]
    ],
    text: "Questionnaires",
    links: [
      { text: "Create Questionnaire", path: manage_select_production_casting_questionnaires_path, icon: "plus" }
    ]
  } %>

  <%= render "shared/filters/filter_bar", filter_groups: [
    {
      label: "View",
      filters: [
        { text: "All", path: manage_casting_questionnaires_index_path(filter: "all"), active: @filter == "all" },
        { text: "Accepting Responses", path: manage_casting_questionnaires_index_path(filter: "accepting"), active: @filter == "accepting" },
        { text: "Archived", path: manage_casting_questionnaires_index_path(filter: "archived"), active: @filter == "archived" }
      ]
    },
    { separator: true }
  ] %>

  <% if @questionnaires_by_production.any? %>
    <div class="space-y-6">
      <% @questionnaires_by_production.each do |production, questionnaires| %>
        <div>
          <h2 class="text-lg font-semibold text-gray-900 mb-2"><%= production.name %></h2>
          <div class="space-y-1">
            <% questionnaires.each do |questionnaire| %>
              <%= link_to manage_casting_questionnaire_path(production, questionnaire), class: "block p-4 border border-gray-200 rounded-lg hover:bg-gray-50 bg-white transition-colors no-underline" do %>
                <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-2">
                  <div class="flex-1 min-w-0">
                    <h3 class="text-md font-semibold text-gray-900 truncate"><%= questionnaire.title %></h3>
                    <div class="flex flex-wrap items-center gap-x-3 gap-y-1 mt-1 text-sm text-gray-600">
                      <span>
                        <%= questionnaire.questionnaire_responses.count %> response<%= questionnaire.questionnaire_responses.count == 1 ? '' : 's' %>
                      </span>
                      <span>
                        <%= questionnaire.questionnaire_invitations.count %> invited
                      </span>
                    </div>
                  </div>
                  <div class="flex items-center gap-2">
                    <% if questionnaire.archived_at.present? %>
                      <span class="inline-flex items-center rounded-md px-2 py-1 text-xs font-medium bg-gray-100 text-gray-700 ring-1 ring-inset ring-gray-600/20">
                        Archived
                      </span>
                    <% else %>
                      <span class="inline-flex items-center rounded-md px-2 py-1 text-xs font-medium <%= questionnaire.accepting_responses ? 'bg-pink-50 text-pink-700 ring-1 ring-inset ring-pink-600/20' : 'bg-gray-50 text-gray-600 ring-1 ring-inset ring-gray-500/10' %>">
                        <%= questionnaire.accepting_responses ? 'Accepting' : 'Not Accepting' %>
                      </span>
                    <% end %>
                    <svg class="w-5 h-5 text-gray-400 hidden sm:block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-500 text-sm">
      <% if @filter == "all" %>
        You haven't created any questionnaires. <%= link_to "Create a questionnaire", manage_select_production_casting_questionnaires_path, class: "text-pink-500 underline" %>
      <% elsif @filter == "accepting" %>
        None of your questionnaires are currently accepting responses.
      <% elsif @filter == "archived" %>
        None of your questionnaires have been archived.
      <% end %>
    </p>
  <% end %>
</div>
