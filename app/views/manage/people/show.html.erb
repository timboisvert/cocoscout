<% content_for :title, @person.name %>

<div class="w-full">

  <%= render partial: "shared/notice", locals: { notice: notice } %>

  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Directory", manage_directory_path]
    ],
    text: @person.name,
    links: []
  } %>

  <%# Hero Section with Headshot, Name, Email, Profile Link %>
  <div class="flex items-center gap-4 mb-6">
    <% headshot_variant = @person.safe_headshot_variant(:thumb) %>
    <% if headshot_variant %>
      <%= image_tag headshot_variant, class: "w-12 h-12 rounded-lg object-cover flex-shrink-0" %>
    <% else %>
      <div class="w-12 h-12 rounded-lg bg-gray-100 flex items-center justify-center text-black font-bold flex-shrink-0">
        <%= @person.initials %>
      </div>
    <% end %>
    <div class="flex-1 min-w-0">
      <div class="flex items-baseline gap-2 min-w-0">
        <div class="font-bold text-xl text-gray-900 truncate flex-shrink"><%= @person.name %></div>
        <% if @person.pronouns.present? %>
          <div class="text-sm text-gray-500 flex-shrink-0">(<%= @person.pronouns %>)</div>
        <% end %>
      </div>
      <div class="flex flex-wrap items-center gap-x-3 gap-y-1 text-sm text-gray-500">
        <% if @person.email.present? %>
          <%= link_to @person.email, "mailto:#{@person.email}", class: "text-pink-500 hover:underline" %>
        <% end %>
      </div>
    </div>
    <% if @person.public_key.present? %>
      <div class="flex-shrink-0">
        <%= render partial: "shared/button", locals: { text: "Public Profile", path: public_profile_path(@person.public_key), variant: "primary", target: "_blank" } %>
      </div>
    <% end %>
  </div>

  <div class="w-full" data-controller="tabs">
    <nav class="flex space-x-2 border-b border-gray-200 mb-4">
      <button type="button" data-tabs-target="tab" data-index="0" data-action="tabs#select" class="px-4 py-2 text-sm font-medium bg-white border-b-2 text-pink-600 cursor-pointer">Profile</button>
      <button type="button" data-tabs-target="tab" data-index="1" data-action="tabs#select" class="px-4 py-2 text-sm font-medium bg-gray-50 border-b-2 text-gray-500 cursor-pointer">Headshots</button>
      <button type="button" data-tabs-target="tab" data-index="2" data-action="tabs#select" class="px-4 py-2 text-sm font-medium bg-gray-50 border-b-2 text-gray-500 cursor-pointer">Resume</button>
      <button type="button" data-tabs-target="tab" data-index="3" data-action="tabs#select" class="px-4 py-2 text-sm font-medium bg-gray-50 border-b-2 text-gray-500 cursor-pointer">Availability</button>
      <button type="button" data-tabs-target="tab" data-index="4" data-action="tabs#select" class="px-4 py-2 text-sm font-medium bg-gray-50 border-b-2 text-gray-500 cursor-pointer">Messages</button>
    </nav>

    <%# Profile Tab %>
    <div data-tabs-target="panel">
      <%= render "manage/people/profile_tab", person: @person %>
    </div>

    <%# Headshots Tab %>
    <div data-tabs-target="panel" class="hidden">
      <%= render "shared/image_gallery", items: @person.profile_headshots, type: "headshot", empty_message: "No headshots uploaded" %>
    </div>

    <%# Resume Tab %>
    <div data-tabs-target="panel" class="hidden">
      <%= render "shared/image_gallery", items: @person.profile_resumes, type: "resume", empty_message: "No resume found" %>
    </div>

    <%# Availability Tab %>
    <div data-tabs-target="panel" class="hidden">
      <% if @shows.empty? %>
        <p class="text-left text-gray-500 text-sm">No upcoming shows found for this person's productions.</p>
      <% else %>
        <div class="space-y-4">
          <% @shows.group_by(&:production).each do |production, shows| %>
            <div class="border border-gray-200 rounded-lg overflow-hidden">
              <div class="bg-gray-50 px-4 py-3 border-b border-gray-200">
                <h3 class="text-md font-semibold text-gray-900 coustard-regular"><%= production.name %></h3>
              </div>
              <div class="p-2">
                <%= render "shared/availability_list",
                           shows: shows,
                           entity_key: "person",
                           entity: @person,
                           availabilities: @availabilities,
                           show_production: false,
                           show_location: true,
                           has_groups: false %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <%# Messages Tab %>
    <div data-tabs-target="panel" class="hidden">
      <%= render "shared/email_inbox", email_logs: @email_logs, email_logs_pagy: @email_logs_pagy, entity: @person, search_query: @search_messages_query %>
    </div>

  </div>

</div>
