<!-- Headshots Section -->
<div id="headshots" class="bg-white border border-gray-200 rounded-lg overflow-hidden mb-6">
  <div class="bg-gray-50 px-4 py-3 border-b border-gray-200">
    <h3 class="text-md font-semibold text-gray-900 coustard-regular">Headshots</h3>
  </div>
  <div class="p-6">
    <p class="text-sm text-gray-600 mb-4">Upload multiple headshots for different looks and styles.</p>

    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4" id="headshots-container" data-controller="profile-files">
      <%= person_form.fields_for :profile_headshots do |headshot_form| %>
        <div class="headshot-item">
          <%= headshot_form.hidden_field :id %>
          <%= headshot_form.hidden_field :position %>
          <%= headshot_form.hidden_field :category, value: 'theatrical' %>
          <%= headshot_form.hidden_field :_destroy, value: "0", class: "destroy-field" %>

          <div class="relative group">
            <div class="aspect-[3/4] rounded-lg overflow-hidden border-2 border-gray-200 bg-gray-50 relative">
              <% if headshot_form.object.image.attached? %>
                <%= image_tag headshot_form.object.image.variant(resize_to_limit: [300, 400]),
                    class: "w-full h-full object-cover cursor-pointer transition-opacity group-hover:opacity-75",
                    data: { action: "click->modal#open", modal_image_param: url_for(headshot_form.object.image) } %>
                <div class="absolute inset-0 bg-gradient-to-t from-pink-500/20 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none"></div>
                <% if headshot_form.object.is_primary %>
                  <span class="absolute top-2 right-2 bg-pink-500 text-white text-xs font-medium px-2 py-1 rounded">Primary</span>
                <% end %>
              <% end %>
            </div>

            <div class="mt-2 flex items-center justify-between gap-2">
              <label class="flex items-center text-xs text-gray-600 cursor-pointer">
                <%= headshot_form.check_box :is_primary, class: "rounded border-gray-300 text-pink-500 focus:ring-pink-500 mr-1" %>
                Set as Primary
              </label>
              <button type="button"
                      class="text-xs text-pink-500 hover:text-pink-700 font-medium"
                      onclick="if(confirm('Remove this headshot?')) { this.closest('.headshot-item').querySelector('.destroy-field').value = '1'; this.closest('.headshot-item').style.display = 'none'; }">
                Remove
              </button>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Add new headshot button -->
      <div class="aspect-[3/4] rounded-lg border-2 border-dashed border-gray-300 bg-gray-50 flex flex-col items-center justify-center cursor-pointer hover:border-pink-400 hover:bg-pink-50 transition-all" onclick="document.getElementById('headshot-file-input').click()">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10 text-gray-400 mb-2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
        </svg>
        <p class="text-xs font-medium text-gray-600">Add Headshot</p>
      </div>
    </div>

    <input type="file"
           id="headshot-file-input"
           class="hidden"
           accept="image/*"
           data-action="change->profile-files#addHeadshot">

    <template id="headshot-template">
      <div class="headshot-item">
        <input type="hidden" name="person[profile_headshots_attributes][NEW_RECORD][position]" value="">
        <input type="hidden" name="person[profile_headshots_attributes][NEW_RECORD][category]" value="theatrical">
        <input type="hidden" name="person[profile_headshots_attributes][NEW_RECORD][_destroy]" value="0" class="destroy-field">

        <div class="relative group">
          <div class="aspect-[3/4] rounded-lg overflow-hidden border-2 border-gray-200 bg-gray-50">
            <img src="" class="w-full h-full object-cover new-headshot-preview">
          </div>

          <div class="mt-2 flex items-center justify-between gap-2">
            <label class="flex items-center text-xs text-gray-600 cursor-pointer">
              <input type="checkbox" name="person[profile_headshots_attributes][NEW_RECORD][is_primary]" value="1" class="rounded border-gray-300 text-pink-500 focus:ring-pink-500 mr-1">
              Set as Primary
            </label>
            <button type="button"
                    class="text-xs text-pink-500 hover:text-pink-700 font-medium"
                    onclick="if(confirm('Remove this headshot?')) { this.closest('.headshot-item').remove(); }">
              Remove
            </button>
          </div>
        </div>
      </div>
    </template>
  </div>
</div>

<!-- Resumes Section -->
<div id="resumes" class="bg-white border border-gray-200 rounded-lg overflow-hidden mb-6">
  <div class="bg-gray-50 px-4 py-3 border-b border-gray-200">
    <h3 class="text-md font-semibold text-gray-900 coustard-regular">Resumes</h3>
  </div>
  <div class="p-6" data-controller="profile-files">
    <p class="text-sm text-gray-600 mb-4">Upload your performance resume. PDF or image format.</p>

    <% if @person.resume.attached? %>
      <div class="relative group inline-block">
        <div class="w-48 aspect-[8.5/11] rounded-lg overflow-hidden border-2 border-gray-200 bg-gray-50 cursor-pointer"
             data-action="click->modal#open"
             data-modal-image-param="<%= @person.resume.content_type == 'application/pdf' ? url_for(@person.safe_resume_preview(resize_to_limit: [1224, 1584])) : url_for(@person.resume) %>">
          <% if @person.resume.content_type == "application/pdf" %>
            <% resume_preview = @person.safe_resume_preview(resize_to_limit: [300, 388]) %>
            <% if resume_preview %>
              <%= image_tag resume_preview, class: "w-full h-full object-cover transition-opacity group-hover:opacity-75" %>
            <% else %>
              <div class="w-full h-full flex flex-col items-center justify-center p-4">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12 text-red-500 mb-2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m2.25 0H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
                </svg>
                <p class="text-xs text-center font-medium text-gray-700"><%= @person.resume.filename %></p>
              </div>
            <% end %>
          <% else %>
            <%= image_tag @person.resume.variant(resize_to_limit: [300, 388]), class: "w-full h-full object-cover transition-opacity group-hover:opacity-75" %>
          <% end %>
          <div class="absolute inset-0 bg-gradient-to-t from-pink-500/20 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none"></div>
        </div>

        <button type="button"
                onclick="document.getElementById('person_resume').click()"
                class="mt-2 text-xs text-pink-500 hover:text-pink-700 underline font-medium">
          Replace Resume
        </button>
      </div>
    <% else %>
      <div class="w-48 aspect-[8.5/11] rounded-lg border-2 border-dashed border-gray-300 bg-gray-50 flex flex-col items-center justify-center cursor-pointer hover:border-pink-400 hover:bg-pink-50 transition-all" onclick="document.getElementById('person_resume').click()">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12 text-gray-400 mb-2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
        </svg>
        <p class="text-sm font-medium text-gray-600">Upload Resume</p>
        <p class="text-xs text-gray-500 mt-1">PDF, JPG, PNG</p>
      </div>
    <% end %>

    <%= person_form.file_field :resume, id: "person_resume", class: "hidden", accept: "application/pdf,image/*", data: { action: "change->profile-files#addResume" } %>
  </div>
</div>

<!-- Image Modal -->
<div id="imageModal" class="hidden fixed inset-0 bg-black/60 backdrop-blur-sm z-50 flex items-center justify-center p-4" data-controller="modal" data-action="click->modal#close">
  <div class="relative max-w-6xl max-h-full" data-action="click->modal#stopPropagation">
    <button type="button" data-action="click->modal#close" class="absolute -top-12 right-0 text-white hover:text-pink-300 transition-colors">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-8 h-8">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
    <img id="modalImage" src="" alt="Full size" class="max-w-full max-h-[90vh] object-contain rounded-lg shadow-2xl">
  </div>
</div>
