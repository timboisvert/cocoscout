<% content_for :title, "Ticketing Providers" %>

<%= render partial: "shared/top_menu", locals: {
  breadcrumbs: [
    ["Ticketing", manage_ticketing_index_path]
  ],
  text: "Providers",
  links: [
    { text: "Add Provider", path: manage_new_ticketing_provider_path }
  ]
} %>

<div class="w-full">
  <%= render partial: "shared/notice", locals: { notice: notice, alert: alert } %>

  <% if @providers.any? %>
    <div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Provider</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Listings</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Last Sync</th>
            <th class="px-6 py-3"></th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @providers.each do |provider| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4">
                <div class="font-medium text-gray-900"><%= provider.name %></div>
              </td>
              <td class="px-6 py-4">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  <%= provider.provider_type.titleize %>
                </span>
              </td>
              <td class="px-6 py-4">
                <% if provider.status_active? %>
                  <span class="inline-flex items-center text-green-600">
                    <span class="w-2 h-2 rounded-full bg-green-500 mr-2"></span>
                    Active
                  </span>
                <% else %>
                  <span class="inline-flex items-center text-gray-400">
                    <span class="w-2 h-2 rounded-full bg-gray-400 mr-2"></span>
                    Inactive
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4 text-gray-500">
                <%= provider.ticket_listings.count %>
              </td>
              <td class="px-6 py-4 text-gray-500">
                <% if provider.last_synced_at %>
                  <%= time_ago_in_words(provider.last_synced_at) %> ago
                <% else %>
                  Never
                <% end %>
              </td>
              <td class="px-6 py-4 text-right">
                <%= link_to "View", manage_ticketing_provider_path(provider), class: "text-pink-600 hover:text-pink-800" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="bg-gray-50 rounded-lg border border-dashed border-gray-300 p-8 text-center">
      <p class="text-gray-600 mb-4">No ticketing providers configured yet.</p>
      <%= link_to manage_new_ticketing_provider_path do %>
        <%= render "shared/button", text: "Add Provider", variant: "primary", size: "medium" %>
      <% end %>
    </div>
  <% end %>
</div>
