<% content_for :title, "Archive" %>

<div class="w-full mb-10">
  <%= render partial: "shared/notice", locals: { notice: notice } %>
  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Sign-ups", manage_production_signups_path(@production)],
      ["Auditions", manage_production_signups_auditions_path(@production)]
    ],
    text: "Archive",
    links: []
  } %>

  <% if @past_audition_cycles.any? %>
    <div class="bg-white border border-gray-200 rounded-lg shadow-sm overflow-hidden">
      <%= render "shared/card_header", title: "Archived Audition Cycles" %>
      <div class="divide-y divide-gray-200">
        <% @past_audition_cycles.each do |audition_cycle| %>
          <%= link_to manage_production_signups_auditions_cycle_path(@production, audition_cycle), class: "block p-4 hover:bg-gray-50 transition-colors group" do %>
            <div class="flex justify-between items-start">
              <div>
                <h4 class="font-semibold text-gray-900 group-hover:text-pink-500 transition-colors">
                  <% formats = [] %>
                  <% formats << "Video" if audition_cycle.accepts_video_submissions? %>
                  <% formats << "In-Person" if audition_cycle.accepts_in_person_auditions? %>
                  <%= formats.join(" + ") %> Auditions
                </h4>
                <p class="text-sm text-gray-600 mt-1">
                  <%= audition_cycle.opens_at&.strftime("%b %d, %Y") %><% if audition_cycle.closes_at.present? %> - <%= audition_cycle.closes_at.strftime("%b %d, %Y") %><% else %> (open-ended)<% end %>
                </p>
              </div>
              <div class="text-sm text-gray-500">
                <%= audition_cycle.audition_requests.count %> audition requests
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="bg-white border border-gray-200 rounded-lg shadow-sm overflow-hidden">
      <div class="p-6 text-center text-gray-500 text-sm">
        No archived audition cycles yet.
      </div>
    </div>
  <% end %>
</div>
