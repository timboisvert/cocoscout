<% content_for :title, "#{@show.display_name} - Ticket Sales" %>

<%= render partial: "shared/top_menu", locals: {
  breadcrumbs: [
    ["Ticketing", manage_ticketing_index_path],
    ["Sales", manage_ticket_sales_path],
    [@production.name, manage_production_ticket_sales_path(@production)]
  ],
  text: @show.display_name,
  links: []
} %>

<div class="w-full">
  <%= render partial: "shared/notice", locals: { notice: notice, alert: alert } %>

  <%# Show Stats %>
  <div class="grid grid-cols-2 gap-4 mb-6">
    <div class="bg-white rounded-lg border border-gray-200 p-4">
      <div class="text-sm text-gray-500">Total Seats Sold</div>
      <div class="text-2xl font-bold"><%= number_with_delimiter(@total_seats) %></div>
    </div>
    <div class="bg-white rounded-lg border border-gray-200 p-4">
      <div class="text-sm text-gray-500">Total Revenue</div>
      <div class="text-2xl font-bold text-green-600"><%= number_to_currency(@total_revenue / 100.0) %></div>
    </div>
  </div>

  <%# Sales by Tier %>
  <% if @sales_by_tier.present? && @sales_by_tier.any? %>
    <div class="bg-white rounded-lg border border-gray-200 overflow-hidden mb-6">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="font-medium text-gray-900">Sales by Tier</h3>
      </div>
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tier</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Seats</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Revenue</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @sales_by_tier.each do |row| %>
            <tr>
              <td class="px-6 py-4 font-medium text-gray-900"><%= row.name %></td>
              <td class="px-6 py-4 text-right"><%= row.seats %></td>
              <td class="px-6 py-4 text-right text-green-600 font-medium"><%= number_to_currency(row.revenue / 100.0) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>

  <%# All Sales %>
  <div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="font-medium text-gray-900">All Sales</h3>
    </div>

    <% if @sales.any? %>
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Customer</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tickets</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Provider</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Total</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">When</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @sales.each do |sale| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4">
                <div class="font-medium text-gray-900"><%= sale.customer_name || "Anonymous" %></div>
                <% if sale.customer_email.present? %>
                  <div class="text-sm text-gray-500"><%= sale.customer_email %></div>
                <% end %>
                <% if sale.customer_phone.present? %>
                  <div class="text-sm text-gray-500"><%= sale.customer_phone %></div>
                <% end %>
              </td>
              <td class="px-6 py-4 text-gray-500"><%= sale.display_info %></td>
              <td class="px-6 py-4 text-gray-500"><%= sale.provider_name %></td>
              <td class="px-6 py-4 text-right font-medium"><%= number_to_currency(sale.total) %></td>
              <td class="px-6 py-4 text-gray-500"><%= sale.purchased_at.strftime("%b %d, %I:%M %p") %></td>
              <td class="px-6 py-4">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                  <%= case sale.status
                      when 'confirmed' then 'bg-green-100 text-green-800'
                      when 'refunded' then 'bg-red-100 text-red-800'
                      else 'bg-gray-100 text-gray-600'
                      end %>">
                  <%= sale.status.titleize %>
                </span>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="p-8 text-center text-gray-500">
        No sales yet for this show.
      </div>
    <% end %>
  </div>
</div>
