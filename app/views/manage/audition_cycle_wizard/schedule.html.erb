<%= render layout: "manage/audition_cycle_wizard/wizard_layout", locals: { current_step: 2, step_name: "Sign-up Window" } do %>
  <h2 class="text-xl font-bold text-gray-900 mb-2 coustard-regular">When can people sign up?</h2>
  <p class="text-gray-600 mb-6">Set when the sign-up form opens and when it closes.</p>

  <%= form_with url: manage_audition_wizard_production_save_schedule_path(@production), method: :post, local: true,
      data: { controller: "audition-schedule" } do |form| %>
    <div class="space-y-6">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Starting at</label>
        <%= datetime_field_tag :opens_at, @wizard_state[:opens_at],
            class: "block w-full shadow-sm rounded-lg border border-gray-300 px-3 py-2 focus:ring-pink-500 focus:border-pink-500",
            data: { audition_schedule_target: "opensAt", action: "change->audition-schedule#updateClosesAt" } %>
      </div>

      <div data-controller="date-field-toggle" data-date-field-toggle-default-value="show">
        <div class="flex items-center justify-between mb-2">
          <label class="block text-sm font-medium text-gray-700">Ending at</label>
          <a href="#" class="text-sm text-pink-500 hover:text-pink-600" data-action="click->date-field-toggle#toggle" data-date-field-toggle-target="link"></a>
        </div>
        <%= hidden_field_tag :closes_at, @wizard_state[:closes_at], data: { date_field_toggle_target: "hiddenField", audition_schedule_target: "closesAt" } %>
        <%= datetime_field_tag "", @wizard_state[:closes_at].presence || 1.week.from_now.end_of_day,
            class: "block w-full shadow-sm rounded-lg border border-gray-300 px-3 py-2 focus:ring-pink-500 focus:border-pink-500",
            data: { date_field_toggle_target: "field", audition_schedule_target: "closesAtField" } %>
      </div>

      <!-- Tip -->
      <div class="flex items-start gap-2 p-3 bg-pink-50 border border-pink-100 rounded-lg">
        <svg class="w-5 h-5 text-pink-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <p class="text-sm text-pink-700">We recommend keeping the sign-up window open for at least a week to give people time to submit.</p>
      </div>
    </div>

    <div class="mt-8 flex justify-between">
      <%= link_to manage_audition_wizard_production_format_path(@production), class: "inline-flex items-center text-gray-600 hover:text-gray-900" do %>
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back
      <% end %>
      <%= render "shared/button", text: "Next", variant: "primary", size: "medium", type: :submit %>
    </div>
  <% end %>
<% end %>
