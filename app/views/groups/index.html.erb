<% content_for :title, "My Groups" %>

<div class="min-h-screen bg-white">
  <%= render partial: "shared/notice", locals: { notice: notice } %>

  <!-- Header -->
  <div class="flex flex-col items-center pt-6 sm:pt-10 pb-4">
    <img src="<%= asset_path('cocoscout.png') %>" alt="CocoScout" class="w-20 sm:w-28 object-contain select-none pointer-events-none" />
    <h1 class="mt-3 text-3xl sm:text-4xl coustard-regular text-pink-500">CocoScout</h1>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-12">

  <% if @groups.any? %>
    <!-- Groups Section -->
    <div class="text-center mb-8">
      <h2 class="text-2xl sm:text-3xl font-bold text-slate-900 mb-2">My Groups</h2>
      <p class="text-slate-600">Manage your groups and collaborate with other performers</p>
    </div>

    <div class="flex flex-wrap <%= @groups.count <= 2 ? 'justify-center' : 'justify-start' %> gap-6 max-w-5xl mx-auto mb-12">
      <% @groups.each do |group| %>
        <% membership = group.group_memberships.find_by(person: Current.user.person) %>
        <% is_owner = membership&.owner? %>
        <div class="bg-white <%= is_owner ? 'border-2 border-pink-200' : 'border border-gray-300' %> rounded-lg p-6 hover:shadow-lg transition-shadow w-full sm:w-80">
          <div class="mb-4">
            <div class="flex items-center gap-3 mb-3">
              <% if group.headshot&.attached? %>
                <%= image_tag group.headshot.variant(:thumb), class: "w-16 h-16 rounded-lg object-cover" %>
              <% else %>
                <div class="w-16 h-16 rounded-lg bg-pink-100 flex items-center justify-center text-pink-600 font-bold text-xl">
                  <%= group.initials %>
                </div>
              <% end %>
              <div class="flex-1 min-w-0">
                <h3 class="text-xl font-bold text-gray-900 truncate"><%= group.name %></h3>
                <% if membership %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded text-xs font-semibold <%= is_owner ? 'bg-pink-500 text-white' : membership.write? ? 'bg-blue-600 text-white' : 'bg-gray-600 text-white' %>">
                    <%= membership.permission_level.titleize %>
                  </span>
                <% end %>
              </div>
            </div>
          </div>

          <div class="space-y-2 text-sm text-gray-600 mb-4">
            <div class="flex justify-between">
              <span class="font-medium">Members:</span>
              <span><%= pluralize(group.members.count, 'member') %></span>
            </div>
            <% if group.bio.present? %>
              <p class="text-sm text-gray-600 line-clamp-2"><%= group.bio %></p>
            <% end %>
          </div>

          <%= link_to "Manage", edit_group_path(group), class: "block w-full text-center px-4 py-2.5 text-sm bg-pink-500 hover:bg-pink-600 text-white rounded-lg font-semibold transition-colors" %>
        </div>
      <% end %>
    </div>

    <!-- Create Another Group Link -->
    <div class="text-center mt-6">
      <%= link_to "Create another group", new_group_path, class: "text-sm text-pink-600 hover:text-pink-700 underline" %>
    </div>

  <% else %>
    <!-- Empty State - No Groups -->
    <div class="text-center py-12">
      <div class="w-16 h-16 bg-pink-100 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-8 h-8 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
        </svg>
      </div>
      <h3 class="text-2xl font-bold text-slate-900 mb-2 coustard-regular">No Groups Yet</h3>
      <p class="text-slate-600 mb-6 max-w-md mx-auto">
        Create your first group to collaborate with other performers and manage your ensemble.
      </p>
      <%= link_to new_group_path, class: "inline-flex items-center justify-center gap-2 px-6 py-3 bg-pink-600 hover:bg-pink-700 text-white font-semibold rounded-lg shadow-sm transition-colors" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg>
        Create your first group
      <% end %>
    </div>
  <% end %>

  </div>
</div>
