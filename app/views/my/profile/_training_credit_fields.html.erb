<div class="border border-gray-200 rounded-lg p-4 training-credit-item">
  <%= training_form.hidden_field :id %>
  <%= training_form.hidden_field :position %>
  <%= training_form.hidden_field :_destroy, value: "0", class: "destroy-field" %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div class="md:col-span-2">
      <%= training_form.label :institution, "Institution *", class: "block text-sm font-medium text-gray-700" %>
      <%= training_form.text_field :institution,
          placeholder: "e.g., Juilliard School",
          class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-pink-500 focus:ring-pink-500" %>
    </div>

    <div>
      <%= training_form.label :program, "Program/Degree", class: "block text-sm font-medium text-gray-700" %>
      <%= training_form.text_field :program,
          placeholder: "e.g., BFA Acting",
          class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-pink-500 focus:ring-pink-500" %>
    </div>

    <div>
      <%= training_form.label :location, class: "block text-sm font-medium text-gray-700" %>
      <%= training_form.text_field :location,
          placeholder: "e.g., New York, NY",
          class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-pink-500 focus:ring-pink-500" %>
    </div>

    <div class="grid grid-cols-2 gap-2">
      <div>
        <%= training_form.label :year_start, class: "block text-sm font-medium text-gray-700" %>
        <%= training_form.number_field :year_start,
            placeholder: "2019",
            min: 1900,
            max: 2100,
            class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-pink-500 focus:ring-pink-500" %>
      </div>
      <div>
        <%= training_form.label :year_end, class: "block text-sm font-medium text-gray-700" %>
        <%= training_form.number_field :year_end,
            placeholder: "2023",
            min: 1900,
            max: 2100,
            class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-pink-500 focus:ring-pink-500" %>
      </div>
    </div>

    <div class="md:col-span-2">
      <%= training_form.label :notes, "Notes (optional)", class: "block text-sm font-medium text-gray-700" %>
      <%= training_form.text_area :notes,
          rows: 2,
          placeholder: "Additional details...",
          class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-pink-500 focus:ring-pink-500" %>
    </div>
  </div>

  <div class="mt-3 flex justify-end">
    <button type="button"
            class="text-red-600 hover:text-red-800 text-sm"
            onclick="this.closest('.training-credit-item').querySelector('.destroy-field').value = '1'; this.closest('.training-credit-item').style.display = 'none';">
      Remove
    </button>
  </div>
</div>
