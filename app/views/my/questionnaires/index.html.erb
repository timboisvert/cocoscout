<% content_for :title, "My Questionnaires" %>

<div class="w-full">
  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [],
    text: "My Questionnaires",
    links: []
  } %>

  <div class="pb-10">
    <!-- Filter Buttons -->
    <div class="flex gap-2 mb-5">
      <%= link_to "Awaiting My Response", my_questionnaires_path(filter: 'awaiting'), class: "px-3 py-1 rounded-md border text-sm #{@filter == 'awaiting' ? 'bg-pink-500 text-white border-pink-500' : 'bg-white text-gray-700 border-gray-200'}" %>
      <%= link_to "All", my_questionnaires_path(filter: 'all'), class: "px-3 py-1 rounded-md border text-sm #{@filter == 'all' ? 'bg-pink-500 text-white border-pink-500' : 'bg-white text-gray-700 border-gray-200'}" %>
    </div>

    <% if @questionnaires.any? %>
      <div class="space-y-4">
        <% @questionnaires.each do |questionnaire| %>
          <%= link_to my_questionnaire_form_path(token: questionnaire.token), class: "block p-4 bg-white border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors no-underline" do %>
            <div class="flex items-center justify-between">
              <div class="flex-1">
                <h3 class="text-md font-semibold text-gray-900"><%= questionnaire.title %></h3>
                <p class="text-sm text-gray-600 mt-1"><%= questionnaire.production.name %></p>
                <div class="flex items-center gap-3 mt-2">
                  <% if questionnaire.questionnaire_responses.exists?(respondent: Current.user.person) %>
                    <span class="inline-flex items-center rounded-md px-2 py-1 text-xs font-medium bg-pink-50 text-pink-700 ring-1 ring-inset ring-pink-600/20">
                      Responded
                    </span>
                  <% else %>
                    <span class="inline-flex items-center rounded-md px-2 py-1 text-xs font-medium bg-yellow-50 text-yellow-700 ring-1 ring-inset ring-yellow-600/20">
                      Not Responded
                    </span>
                  <% end %>
                  <% unless questionnaire.accepting_responses %>
                    <span class="inline-flex items-center rounded-md px-2 py-1 text-xs font-medium bg-gray-50 text-gray-600 ring-1 ring-inset ring-gray-500/10">
                      Closed
                    </span>
                  <% end %>
                </div>
              </div>
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500 text-sm pt-2">
        <% if @filter == 'awaiting' %>
          You're caught up on responding to questionnaires.
        <% else %>
          You haven't been assigned any questionnaires.
        <% end %>
      </p>
    <% end %>
  </div>
</div>
