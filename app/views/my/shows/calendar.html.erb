<% content_for :title, "Shows & Events Calendar" %>

<div class="w-full mb-10">
  <%= render partial: "shared/notice", locals: { notice: notice } %>
  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
        ["My Shows & Events", my_shows_path]
    ],
    text: "Calendar",
    links: []
  } %>

  <!-- Filters -->
  <div class="flex items-center justify-between mb-4 gap-4">
    <!-- Left: Event Type Filter -->
    <div class="flex flex-wrap gap-1">
      <%
        # Build toggle URL for show
        current_types = @event_type_filter.dup
        show_url_types = if current_types.include?('show')
          current_types - ['show']
        else
          current_types + ['show']
        end
        show_url_types = ['show'] if show_url_types.empty? # Keep at least one
      %>
      <%= link_to my_shows_calendar_path(event_type: show_url_types.join(","), entity: @entity_filter.join(","), month: params[:month]),
              data: { turbo_prefetch: false },
              class: "inline-flex items-center gap-1.5 px-3 py-1 rounded-lg border text-sm font-normal transition-all #{@event_type_filter.include?("show") ? "bg-pink-500 text-white border-pink-500" : "bg-white text-gray-700 border-gray-300 hover:border-pink-300 hover:bg-pink-50"}" do %>
        <svg class="w-3.5 h-3.5 <%= @event_type_filter.include?("show") ? "" : "opacity-20" %>" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" /></svg>
        Shows
      <% end %>

      <%
        # Build toggle URL for rehearsal
        current_types = @event_type_filter.dup
        rehearsal_url_types = if current_types.include?('rehearsal')
          current_types - ['rehearsal']
        else
          current_types + ['rehearsal']
        end
        rehearsal_url_types = ['rehearsal'] if rehearsal_url_types.empty?
      %>
      <%= link_to my_shows_calendar_path(event_type: rehearsal_url_types.join(','), entity: @entity_filter.join(','), month: params[:month]),
              data: { turbo_prefetch: false },
              class: "inline-flex items-center gap-1.5 px-3 py-1 rounded-lg border text-sm font-normal transition-all #{@event_type_filter.include?('rehearsal') ? 'bg-pink-500 text-white border-pink-500' : 'bg-white text-gray-700 border-gray-300 hover:border-pink-300 hover:bg-pink-50'}" do %>
        <svg class="w-3.5 h-3.5 <%= @event_type_filter.include?('rehearsal') ? '' : 'opacity-20' %>" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" /></svg>
        Rehearsals
      <% end %>

      <%
        # Build toggle URL for meeting
        current_types = @event_type_filter.dup
        meeting_url_types = if current_types.include?('meeting')
          current_types - ['meeting']
        else
          current_types + ['meeting']
        end
        meeting_url_types = ['meeting'] if meeting_url_types.empty?
      %>
      <%= link_to my_shows_calendar_path(event_type: meeting_url_types.join(','), entity: @entity_filter.join(','), month: params[:month]),
              data: { turbo_prefetch: false },
              class: "inline-flex items-center gap-1.5 px-3 py-1 rounded-lg border text-sm font-normal transition-all #{@event_type_filter.include?('meeting') ? 'bg-pink-500 text-white border-pink-500' : 'bg-white text-gray-700 border-gray-300 hover:border-pink-300 hover:bg-pink-50'}" do %>
        <svg class="w-3.5 h-3.5 <%= @event_type_filter.include?('meeting') ? '' : 'opacity-20' %>" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" /></svg>
        Meetings
      <% end %>
    </div>

    <% if @groups.any? %>
    <!-- Right: Entity Filter -->
    <div class="flex flex-wrap gap-1 justify-end">
      <%
        # Build the toggle URL for person
        current_entities = @entity_filter.dup
        person_url_entities = if current_entities.include?('person')
          current_entities - ['person']
        else
          current_entities + ['person']
        end
        person_url_entities = ['person'] if person_url_entities.empty? # Keep at least one
      %>
      <%= link_to my_shows_calendar_path(event_type: @event_type_filter.join(","), entity: person_url_entities.join(","), month: params[:month]),
              data: { turbo_prefetch: false },
              class: "inline-flex items-center gap-1.5 px-3 py-1 rounded-lg border text-sm font-normal transition-all #{@entity_filter.include?("person") ? "bg-pink-500 text-white border-pink-500" : "bg-white text-gray-700 border-gray-300 hover:border-pink-300 hover:bg-pink-50"}" do %>
        <svg class="w-3.5 h-3.5 <%= @entity_filter.include?("person") ? "" : "opacity-20" %>" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" /></svg>
        <%= @person.name %>
      <% end %>

      <% @groups.each do |group| %>
        <%
          # Build the toggle URL for this group
          group_key = "group_#{group.id}"
          current_entities = @entity_filter.dup
          group_url_entities = if current_entities.include?(group_key)
            current_entities - [group_key]
          else
            current_entities + [group_key]
          end
          group_url_entities = ['person'] if group_url_entities.empty? # Keep at least one
        %>
        <%= link_to my_shows_calendar_path(event_type: @event_type_filter.join(","), entity: group_url_entities.join(","), month: params[:month]),
                data: { turbo_prefetch: false },
                class: "inline-flex items-center gap-1.5 px-3 py-1 rounded-lg border text-sm font-normal transition-all #{@entity_filter.include?(group_key) ? "bg-pink-500 text-white border-pink-500" : "bg-white text-gray-700 border-gray-300 hover:border-pink-300 hover:bg-pink-50"}" do %>
          <svg class="w-3.5 h-3.5 <%= @entity_filter.include?(group_key) ? "" : "opacity-20" %>" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" /></svg>
          <%= group.name %>
        <% end %>
      <% end %>
    </div>
    <% end %>
  </div>

  <% if @shows.any? %>
    <% # Desktop: Show selected month only; Mobile: Show all months %>
    <% current_month_param = params[:month] ? Date.parse(params[:month]).to_time.beginning_of_month : nil %>
    <% desktop_month = current_month_param || Time.current.beginning_of_month %>
    <% desktop_shows = @shows_by_month[desktop_month] || [] %>

    <% # Calculate valid month range %>
    <% first_month = @shows_by_month.keys.sort.first %>
    <% last_month = @shows_by_month.keys.sort.last %>
    <% prev_month = desktop_month - 1.month %>
    <% next_month = desktop_month + 1.month %>
    <% can_go_prev = prev_month >= Time.current.beginning_of_month %>
    <% can_go_next = next_month <= last_month %>

    <!-- Separator -->
    <div class="border-t border-gray-200 my-4"></div>

    <!-- Month Navigation (Desktop Only) -->
    <div class="hidden md:flex items-center justify-between mb-4">
      <% if can_go_prev %>
        <%= link_to my_shows_calendar_path(event_type: @event_type_filter.join(","), entity: @entity_filter.join(","), month: prev_month.strftime("%Y-%m-01")),
                data: { turbo_prefetch: false },
                class: "inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          <%= prev_month.strftime("%B %Y") %>
        <% end %>
      <% else %>
        <div class="inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-gray-400 bg-gray-100 border border-gray-200 rounded-lg cursor-not-allowed">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          <%= prev_month.strftime("%B %Y") %>
        </div>
      <% end %>

      <div class="flex items-center gap-3">
        <h2 class="text-2xl font-bold text-gray-900"><%= desktop_month.strftime("%B %Y") %></h2>
        <% if desktop_month != Time.current.beginning_of_month %>
          <%= link_to my_shows_calendar_path(event_type: @event_type_filter.join(","), entity: @entity_filter.join(",")),
                  data: { turbo_prefetch: false },
                  class: "inline-flex items-center gap-1.5 px-3 py-1.5 text-xs font-medium text-pink-700 bg-pink-50 border border-pink-200 rounded-lg hover:bg-pink-100 transition-colors" do %>
            <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            Today
          <% end %>
        <% end %>
      </div>

      <% if can_go_next %>
        <%= link_to my_shows_calendar_path(event_type: @event_type_filter.join(","), entity: @entity_filter.join(","), month: next_month.strftime("%Y-%m-01")),
                data: { turbo_prefetch: false },
                class: "inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors" do %>
          <%= next_month.strftime("%B %Y") %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        <% end %>
      <% else %>
        <div class="inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-gray-400 bg-gray-100 border border-gray-200 rounded-lg cursor-not-allowed">
          <%= next_month.strftime("%B %Y") %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </div>
      <% end %>
    </div>

    <!-- Desktop: Single Month Calendar -->
    <div class="hidden md:block border border-gray-200 rounded-lg p-4 mb-8">
      <div class="grid grid-cols-7 gap-1">
        <!-- Day headers -->
        <% %w[Sun Mon Tue Wed Thu Fri Sat].each do |day| %>
          <div class="text-center text-xs font-semibold text-gray-600 p-2">
            <%= day %>
          </div>
        <% end %>

        <!-- Empty cells for days before month starts -->
        <% (desktop_month.wday).times do %>
          <div class="border border-gray-100 bg-gray-50 min-h-[80px] p-1"></div>
        <% end %>

        <!-- Calendar days -->
        <% current_date = desktop_month %>
        <% while current_date.month == desktop_month.month %>
          <% day_shows = desktop_shows.select { |s| s.date_and_time.to_date == current_date.to_date } %>
          <% is_past = current_date.to_date < Date.current %>
          <% is_today = current_date.to_date == Date.current %>
          <div class="border border-gray-200 min-h-[80px] p-1 <%= 'bg-blue-50' if is_today %> <%= 'opacity-50 bg-gray-50' if is_past %>">
            <div class="text-xs font-semibold mb-1 <%= is_past ? 'text-gray-400' : 'text-gray-700' %>">
              <%= current_date.day %>
            </div>

            <% day_shows.each do |show| %>
              <%= link_to my_show_path(show), class: "block mb-2" do %>
                <% event_type_badge_classes = if is_past
                  "bg-gray-100 text-gray-600 border-gray-300 hover:bg-gray-200"
                else
                  case show.event_type
                    when "rehearsal" then "bg-blue-100 text-blue-800 border-blue-300 hover:bg-blue-200"
                    when "meeting" then "bg-green-100 text-green-800 border-green-300 hover:bg-green-200"
                    else "bg-pink-100 text-pink-800 border-pink-300 hover:bg-pink-200"
                  end
                end %>
                <div class="text-xs p-2 rounded border <%= event_type_badge_classes %> transition-colors relative">
                  <% if @groups.any? && @show_assignments[show.id].present? %>
                    <div class="absolute top-1 right-1 flex gap-0.5">
                      <% @show_assignments[show.id].each do |entity_info| %>
                        <%= image_tag entity_info[:entity].safe_headshot_variant(:thumb), class: "w-5 h-5 rounded object-cover" %>
                      <% end %>
                    </div>
                  <% end %>
                  <div class="font-semibold mb-1"><%= show.date_and_time.strftime("%l:%M %p").strip %></div>
                  <div class="text-[10px] mb-1"><%= show.production.name %></div>
                  <% if show.secondary_name.present? %>
                    <div class="truncate text-[10px]"><%= show.secondary_name %></div>
                  <% end %>
                  <% if @entity_type == "group" %>
                    <div class="text-[10px] text-purple-700 mt-1">
                      <%= @selected_group.name %>
                    </div>
                  <% end %>
                  <% assignment = @assignments_by_show[show.id] %>
                  <% if assignment %>
                    <div class="text-[10px] font-semibold text-pink-600 mt-1">
                      <%= assignment.role.name %>
                    </div>
                  <% end %>
                </div>
              <% end %>
            <% end %>
          </div>
          <% current_date = current_date + 1.day %>
        <% end %>

        <!-- Empty cells to complete the week -->
        <% remaining_cells = (7 - current_date.wday) % 7 %>
        <% remaining_cells.times do %>
          <div class="border border-gray-100 bg-gray-50 min-h-[80px] p-1"></div>
        <% end %>
      </div>
    </div>

    <!-- Mobile: All Months List View -->
    <div class="md:hidden space-y-8">
      <% @shows_by_month.sort.each do |month_start, shows| %>
        <% next if month_start < Time.current.beginning_of_month %>
        <div class="border border-gray-200 rounded-lg p-4">
          <h2 class="text-xl font-bold mb-4"><%= month_start.strftime("%B %Y") %></h2>

          <!-- Desktop Calendar Grid -->
          <div class="hidden md:grid grid-cols-7 gap-1">
            <!-- This section intentionally left empty for mobile-only view -->
          </div>

          <!-- Mobile List View -->
          <div class="md:hidden space-y-2">
            <% current_date = month_start %>
            <% while current_date.month == month_start.month %>
              <% day_shows = shows.select { |s| s.date_and_time.to_date == current_date.to_date } %>
              <% if day_shows.any? %>
                <% is_past = current_date.to_date < Date.current %>
                <% is_today = current_date.to_date == Date.current %>
                <div class="border border-gray-200 rounded-lg p-3 <%= 'bg-blue-50' if is_today %> <%= 'opacity-50 bg-gray-50' if is_past %>">
                  <div class="text-sm font-semibold mb-2 <%= is_past ? 'text-gray-500' : 'text-gray-700' %>">
                    <%= current_date.strftime("%A, %B %-d") %>
                  </div>

                  <div class="space-y-2">
                    <% day_shows.each do |show| %>
                      <%= link_to my_show_path(show), class: "block" do %>
                        <% event_type_badge_classes = if is_past
                          "bg-gray-100 text-gray-600 border-gray-300 hover:bg-gray-200"
                        else
                          case show.event_type
                            when "rehearsal" then "bg-blue-100 text-blue-800 border-blue-300 hover:bg-blue-200"
                            when "meeting" then "bg-green-100 text-green-800 border-green-300 hover:bg-green-200"
                            else "bg-pink-100 text-pink-800 border-pink-300 hover:bg-pink-200"
                          end
                        end %>
                        <div class="text-sm p-3 rounded border <%= event_type_badge_classes %> transition-colors relative">
                          <% if @groups.any? && @show_assignments[show.id].present? %>
                            <div class="absolute top-2 right-2 flex gap-0.5">
                              <% @show_assignments[show.id].each do |entity_info| %>
                                <%= image_tag entity_info[:entity].safe_headshot_variant(:thumb), class: "w-6 h-6 rounded object-cover" %>
                              <% end %>
                            </div>
                          <% end %>
                          <div class="flex items-center justify-between mb-1 pr-8">
                            <div class="font-semibold"><%= show.date_and_time.strftime("%l:%M %p").strip %></div>
                            <% event_badge_classes = if is_past
                              "bg-gray-50 text-gray-600 ring-gray-600/10"
                            else
                              case show.event_type
                                when "rehearsal" then "bg-blue-50 text-blue-700 ring-blue-600/10"
                                when "meeting" then "bg-green-50 text-green-700 ring-green-600/10"
                                else "bg-pink-50 text-pink-700 ring-pink-600/10"
                              end
                            end %>
                            <span class="inline-flex items-center rounded-md px-1.5 py-0.5 text-[10px] font-medium ring-1 ring-inset <%= event_badge_classes %>">
                              <%= show.event_type.titleize %>
                            </span>
                          </div>
                          <div class="text-xs text-gray-700 mb-1"><%= show.production.name %></div>
                          <% if show.secondary_name.present? %>
                            <div class="text-xs text-gray-600"><%= show.secondary_name %></div>
                          <% end %>
                          <% if @entity_type == "group" %>
                            <div class="text-xs text-purple-700 mt-1">
                              <%= @selected_group.name %>
                            </div>
                          <% end %>
                          <% assignment = @assignments_by_show[show.id] %>
                          <% if assignment %>
                            <div class="text-xs font-semibold <%= is_past ? 'text-gray-500' : 'text-pink-600' %> mt-1">
                              Role: <%= assignment.role.name %>
                            </div>
                          <% end %>
                        </div>
                      <% end %>
                    <% end %>
                  </div>
                </div>
              <% end %>
              <% current_date = current_date + 1.day %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-sm text-gray-500">
      No upcoming shows or events found.
    </div>
  <% end %>
</div>
