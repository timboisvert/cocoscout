<div class="mb-6 bg-white border border-gray-200 rounded-lg shadow-sm overflow-hidden">
  <% if !defined?(current_step) || current_step.nil? %>
    <div class="bg-gray-50 px-4 py-3 border-b border-gray-200">
      <h3 class="text-md font-semibold text-gray-900 coustard-regular">Audition Process</h3>
    </div>
  <% end %>

  <div class="p-6">
    <div class="relative">
      <!-- Timeline line (hidden on mobile, shown on larger screens) -->
      <div class="hidden md:block absolute top-6 left-0 right-0 h-0.5 bg-gray-200" aria-hidden="true" style="left: 3rem; right: 3rem;"></div>

      <div class="grid grid-cols-1 <%= !defined?(current_step) || current_step.nil? ? (@production.call_to_audition&.audition_type == 'in_person' ? 'md:grid-cols-5' : 'md:grid-cols-4') : (@production.call_to_audition&.audition_type == 'in_person' ? 'md:grid-cols-5' : 'md:grid-cols-4') %> gap-8">

        <!-- Step 1: Prepare -->
        <%= link_to manage_production_auditions_prepare_path(@production), class: "no-underline" do %>
          <div class="relative flex flex-col items-center text-center group <%= 'current-step' if defined?(current_step) && current_step == :prepare %>" style="<%= 'opacity: 1;' if defined?(current_step) && current_step == :prepare %>">
            <div class="flex-shrink-0 w-12 h-12 rounded-full flex items-center justify-center z-10 ring-4 mb-3 transition-all <%= defined?(current_step) && current_step == :prepare ? 'bg-pink-500 ring-pink-500 shadow-lg shadow-pink-500/50' : 'bg-pink-100 ring-white group-hover:ring-pink-500' %>">
              <svg class="w-6 h-6 <%= defined?(current_step) && current_step == :prepare ? 'text-white' : 'text-pink-500' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <h4 class="text-sm font-semibold mb-2 <%= defined?(current_step) && current_step == :prepare ? 'text-pink-600' : 'text-gray-900 group-hover:text-pink-500' %>">Prepare</h4>
            <p class="text-xs text-gray-500">Configure settings, plan sessions, and customize sign-up form</p>
          </div>
        <% end %>

        <!-- Step 2: Publicize -->
        <%= link_to manage_production_auditions_publicize_path(@production), class: "no-underline" do %>
          <div class="relative flex flex-col items-center text-center group <%= 'current-step' if defined?(current_step) && current_step == :publicize %>" style="<%= 'opacity: 1;' if defined?(current_step) && current_step == :publicize %>">
            <div class="flex-shrink-0 w-12 h-12 rounded-full flex items-center justify-center z-10 ring-4 mb-3 transition-all <%= defined?(current_step) && current_step == :publicize ? 'bg-pink-500 ring-pink-500 shadow-lg shadow-pink-500/50' : 'bg-pink-100 ring-white group-hover:ring-pink-500' %>">
              <svg class="w-6 h-6 <%= defined?(current_step) && current_step == :publicize ? 'text-white' : 'text-pink-500' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z" />
              </svg>
            </div>
            <h4 class="text-sm font-semibold mb-2 <%= defined?(current_step) && current_step == :publicize ? 'text-pink-600' : 'text-gray-900 group-hover:text-pink-500' %>">Publicize</h4>
            <p class="text-xs text-gray-500">Share sign-up link and collect applications</p>
          </div>
        <% end %>

        <!-- Step 3: Review -->
        <%= link_to manage_production_auditions_review_path(@production), class: "no-underline" do %>
          <div class="relative flex flex-col items-center text-center group <%= 'current-step' if defined?(current_step) && current_step == :review %>" style="<%= 'opacity: 1;' if defined?(current_step) && current_step == :review %>">
            <div class="flex-shrink-0 w-12 h-12 rounded-full flex items-center justify-center z-10 ring-4 mb-3 transition-all <%= defined?(current_step) && current_step == :review ? 'bg-pink-500 ring-pink-500 shadow-lg shadow-pink-500/50' : 'bg-pink-100 ring-white group-hover:ring-pink-500' %>">
              <svg class="w-6 h-6 <%= defined?(current_step) && current_step == :review ? 'text-white' : 'text-pink-500' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
              </svg>
            </div>
            <h4 class="text-sm font-semibold mb-2 <%= defined?(current_step) && current_step == :review ? 'text-pink-600' : 'text-gray-900 group-hover:text-pink-500' %>">Review</h4>
            <p class="text-xs text-gray-500">Accept or decline applications and schedule auditions</p>
          </div>
        <% end %>

        <!-- Step 4: Run Auditions (In-Person Only) -->
        <% if @production.call_to_audition&.audition_type == 'in_person' %>
          <%= link_to manage_production_auditions_run_path(@production), class: "no-underline" do %>
            <div class="relative flex flex-col items-center text-center group <%= 'current-step' if defined?(current_step) && current_step == :run %>" style="<%= 'opacity: 1;' if defined?(current_step) && current_step == :run %>">
              <div class="flex-shrink-0 w-12 h-12 rounded-full flex items-center justify-center z-10 ring-4 mb-3 transition-all <%= defined?(current_step) && current_step == :run ? 'bg-pink-500 ring-pink-500 shadow-lg shadow-pink-500/50' : 'bg-pink-100 ring-white group-hover:ring-pink-500' %>">
                <svg class="w-6 h-6 <%= defined?(current_step) && current_step == :run ? 'text-white' : 'text-pink-500' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
              </svg>
            </div>
              <h4 class="text-sm font-semibold mb-2 <%= defined?(current_step) && current_step == :run ? 'text-pink-600' : 'text-gray-900 group-hover:text-pink-500' %>">Run Auditions</h4>
              <p class="text-xs text-gray-500">Conduct sessions and evaluate performances</p>
            </div>
          <% end %>
        <% end %>

        <!-- Step 5: Communicate -->
        <%= link_to manage_production_auditions_communicate_path(@production), class: "no-underline" do %>
          <div class="relative flex flex-col items-center text-center group <%= 'current-step' if defined?(current_step) && current_step == :communicate %>" style="<%= 'opacity: 1;' if defined?(current_step) && current_step == :communicate %>">
            <div class="flex-shrink-0 w-12 h-12 rounded-full flex items-center justify-center z-10 ring-4 mb-3 transition-all <%= defined?(current_step) && current_step == :communicate ? 'bg-pink-500 ring-pink-500 shadow-lg shadow-pink-500/50' : 'bg-pink-100 ring-white group-hover:ring-pink-500' %>">
              <svg class="w-6 h-6 <%= defined?(current_step) && current_step == :communicate ? 'text-white' : 'text-pink-500' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
            </div>
            <h4 class="text-sm font-semibold mb-2 <%= defined?(current_step) && current_step == :communicate ? 'text-pink-600' : 'text-gray-900 group-hover:text-pink-500' %>">Communicate</h4>
            <p class="text-xs text-gray-500">Send decisions and add people to cast</p>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
