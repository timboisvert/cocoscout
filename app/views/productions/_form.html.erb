<%= form_with(model: production, class: "contents") do |form| %>
  <% if production.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(production.errors.count, "error") %> prohibited this production from being saved:</h2>

      <ul class="list-disc ml-6">
        <% production.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-lg border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": production.errors[:name].none?, "border-red-400 focus:outline-red-600": production.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.textarea :description, rows: 4, class: ["block shadow-sm rounded-lg border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": production.errors[:description].none?, "border-red-400 focus:outline-red-600": production.errors[:description].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :production_company %>
    <%= form.collection_select :production_company_id, ProductionCompany.all, :id, :name, prompt: "Select a Production Company" %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-lg px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
