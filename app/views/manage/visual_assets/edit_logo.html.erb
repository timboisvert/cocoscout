<% content_for :title, "Edit Logo - #{@production.name}" %>

<div class="w-full mb-10">
  <%= render partial: "shared/notice", locals: { notice: notice } %>
  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Visual Assets", manage_production_visual_assets_path(@production)]
    ],
    text: "Edit Logo",
    links: []
  } %>

  <div class="bg-white border border-gray-200 rounded-lg shadow-sm overflow-hidden max-w-2xl">
    <div class="bg-gray-50 px-4 py-3 border-b border-gray-200">
      <h3 class="text-md font-semibold text-gray-900 coustard-regular">Edit Logo</h3>
    </div>
    <div class="p-6">
      <% if @production.logo.attached? %>
        <div class="mb-6">
          <h4 class="text-sm font-semibold text-gray-900 mb-3">Current Logo</h4>
          <div class="bg-gray-50 rounded-lg p-4 inline-block">
            <%= image_tag @production.logo, alt: "Current logo", class: "h-20 object-contain" %>
          </div>
        </div>
      <% end %>

      <%= form_with model: [ :manage, @production ], url: update_logo_manage_production_visual_asset_path(@production, :logo), method: :patch, local: true do |f| %>
        <div class="mb-4">
          <%= f.label :logo, "New Logo Image", class: "block text-sm font-semibold text-gray-900 mb-2" %>
          <span class="text-sm text-gray-500">(PNG, JPG, or GIF)</span>

          <div class="block shadow-sm rounded-lg border px-3 py-2 mt-2 border-gray-400">
            <%= f.file_field :logo, class: "w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded file:border-0 file:text-sm file:font-semibold file:text-white file:bg-pink-500 hover:file:bg-pink-600", accept: "image/*" %>
          </div>
        </div>

        <div class="flex gap-2">
          <%= f.submit "Update Logo", class: "font-medium rounded-lg text-sm px-5 h-10 py-2.5 text-center inline-block text-white bg-pink-500 hover:bg-pink-600 cursor-pointer" %>
          <%= link_to "Cancel", manage_production_visual_assets_path(@production), class: "font-medium rounded-lg text-sm px-5 h-10 py-2.5 text-center inline-block text-gray-700 bg-gray-100 hover:bg-gray-200 cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
