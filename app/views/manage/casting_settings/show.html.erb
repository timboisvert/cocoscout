<% content_for :title, "Casting Settings" %>

<div class="w-full">
  <%= render partial: "shared/notice", locals: { notice: notice } %>
  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Casting", manage_casting_path],
      [@production.name, manage_casting_production_path(@production)]
    ],
    text: "Casting Settings",
    links: []
  } %>

  <!-- Tabs Section -->
  <div class="w-full" data-controller="tabs casting-source" data-casting-source-update-url-value="<%= manage_casting_settings_path(@production) %>">
    <nav class="flex space-x-2 border-b border-gray-200 mb-4 overflow-x-auto">
      <button type="button" data-tabs-target="tab" data-index="0" data-action="tabs#select" class="px-4 py-2 text-sm font-medium bg-white border-b-2 text-pink-600 cursor-pointer whitespace-nowrap">Casting Source</button>
      <button type="button" data-tabs-target="tab" data-index="1" data-action="tabs#select" class="px-4 py-2 text-sm font-medium bg-gray-50 border-b-2 text-gray-500 cursor-pointer whitespace-nowrap">Roles</button>
    </nav>

    <!-- Tab 1: Casting Source -->
    <div data-tabs-target="panel">
      <div class="max-w-3xl">
        <p class="text-sm text-gray-600 mb-4">
          Choose where cast members for this production come from. Individual events can override this setting if needed.
        </p>

        <div class="space-y-3">
          <label data-casting-source-target="option" class="flex items-start gap-3 p-4 border rounded-lg cursor-pointer hover:bg-gray-50 transition-colors <%= @production.casting_talent_pool? ? 'border-pink-500 bg-pink-50' : 'border-gray-200' %>">
            <input type="radio"
                   name="casting_source"
                   value="talent_pool"
                   <%= 'checked' if @production.casting_talent_pool? %>
                   data-casting-source-target="radio"
                   data-action="change->casting-source#select"
                   class="h-4 w-4 mt-0.5 accent-pink-500 cursor-pointer">
            <div class="flex-1">
              <span class="block font-medium text-gray-900">Talent Pool</span>
              <span class="block text-sm text-gray-500 mt-0.5">Cast from your production's talent pool members. Best for traditional casting workflows.</span>
            </div>
          </label>

          <label data-casting-source-target="option" class="flex items-start gap-3 p-4 border rounded-lg cursor-pointer hover:bg-gray-50 transition-colors <%= @production.casting_manual? ? 'border-pink-500 bg-pink-50' : 'border-gray-200' %>">
            <input type="radio"
                   name="casting_source"
                   value="manual"
                   <%= 'checked' if @production.casting_manual? %>
                   data-casting-source-target="radio"
                   data-action="change->casting-source#select"
                   class="h-4 w-4 mt-0.5 accent-pink-500 cursor-pointer">
            <div class="flex-1">
              <span class="block font-medium text-gray-900">Manual Entry</span>
              <span class="block text-sm text-gray-500 mt-0.5">Manually add anyone by name or email. Flexible for one-off events or guest performers.</span>
            </div>
          </label>
        </div>

        <!-- Event Defaults Section -->
        <div class="mt-8 pt-6 border-t border-gray-200">
          <h3 class="text-sm font-semibold text-gray-900 mb-4">Event Defaults</h3>
          <p class="text-sm text-gray-600 mb-4">
            These defaults apply when creating new events. Individual events can override these settings.
          </p>

          <div class="space-y-4">
            <div class="flex items-center justify-between p-4 border border-gray-200 rounded-lg">
              <div>
                <p class="font-medium text-gray-900">Enable Attendance Tracking</p>
                <p class="text-sm text-gray-500 mt-0.5">New events will have attendance tracking enabled by default</p>
              </div>
              <label class="relative inline-flex items-center cursor-pointer">
                <input type="checkbox"
                       name="production[default_attendance_enabled]"
                       value="1"
                       <%= 'checked' if @production.default_attendance_enabled? %>
                       data-casting-source-target="attendanceToggle"
                       data-action="change->casting-source#updateSetting"
                       class="sr-only peer">
                <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-pink-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-pink-500"></div>
              </label>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Tab 2: Roles -->
    <div data-tabs-target="panel" class="hidden">
      <%= render "manage/casting_settings/roles_tab" %>
    </div>
  </div>
</div>