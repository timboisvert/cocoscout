<%
  # Parameters:
  # - title: string (required) - The title of the help section
  # - steps: array of hashes (required) - Each hash should have :text key
  #   Example: [{ text: "Step 1 description" }, { text: "Step 2 description" }]
  # - initial_state: string (optional) - "open" or "closed", defaults to "closed"
  # - storage_key: string (optional) - localStorage key to remember user's preference
%>

<% initial_state ||= "closed" %>

<div class="bg-gray-50 border border-gray-200 rounded-lg overflow-hidden mb-6"
     data-controller="toggle"
     data-toggle-initial-state-value="<%= initial_state %>"
     <%= "data-toggle-storage-key-value=\"#{storage_key}\"" if defined?(storage_key) && storage_key.present? %>>
  <button type="button"
          class="w-full px-4 py-3 flex items-center justify-between text-left hover:bg-gray-100 transition-colors cursor-pointer"
          data-action="click->toggle#toggle">
    <div class="flex items-center gap-2">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-gray-600">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9.879 7.519c1.171-1.025 3.071-1.025 4.242 0 1.172 1.025 1.172 2.687 0 3.712-.203.179-.43.326-.67.442-.745.361-1.45.999-1.45 1.827v.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9 5.25h.008v.008H12v-.008Z" />
      </svg>
      <span class="text-sm font-semibold text-gray-900"><%= title %></span>
    </div>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-gray-600 transition-transform" data-toggle-target="icon">
      <path stroke-linecap="round" stroke-linejoin="round" d="m19.5 8.25-7.5 7.5-7.5-7.5" />
    </svg>
  </button>
  <div class="hidden px-4 py-4" data-toggle-target="content">
    <div class="space-y-3 text-sm text-gray-700">
      <% steps.each_with_index do |step, index| %>
        <div class="flex gap-3">
          <div class="flex-shrink-0 w-6 h-6 rounded-full bg-pink-500 text-white flex items-center justify-center text-xs font-bold"><%= index + 1 %></div>
          <p><%= step[:text].html_safe %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
