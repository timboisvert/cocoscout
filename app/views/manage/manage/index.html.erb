<div class="min-h-screen bg-white">
  <!-- Header -->
  <div class="flex flex-col items-center pt-6 sm:pt-10 pb-4">
    <%= render "shared/cocoscout_logo", size: :medium %>
    <h1 class="mt-3 text-3xl sm:text-4xl coustard-regular text-pink-500">CocoScout</h1>
  </div>

  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 pb-12">

    <% if @productions.any? %>
      <!-- Production Selection -->
      <div class="text-center mb-8">
        <h2 class="text-2xl sm:text-3xl font-bold text-slate-900 mb-2">Select a production</h2>
        <p class="text-slate-600">Choose which production you'd like to work on</p>
      </div>

      <div class="flex flex-wrap justify-center gap-6 max-w-5xl mx-auto">
        <% @productions.each do |production| %>
          <%= form_with url: set_current_manage_productions_path, method: :post, class: "w-full sm:w-80" do |form| %>
            <%= hidden_field_tag :id, production.id %>
            <button type="submit" class="group relative bg-white border-2 border-slate-200 rounded-lg p-6 hover:border-pink-500 hover:shadow-lg transition-all duration-200 text-left w-full cursor-pointer">
              <!-- Production Logo/Image -->
              <div class="aspect-video bg-gradient-to-br from-slate-50 to-slate-100 rounded-lg mb-4 flex items-center justify-center overflow-hidden">
                <% if production.logo.attached? %>
                  <%= image_tag production.logo, class: "w-full h-full object-cover" %>
                <% else %>
                  <div class="text-center">
                    <svg class="w-16 h-16 text-slate-300 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z" />
                    </svg>
                  </div>
                <% end %>
              </div>

              <!-- Production Info -->
              <div class="flex-grow">
                <h3 class="text-lg font-bold text-slate-900 mb-3 group-hover:text-pink-600 transition-colors">
                  <%= production.name %>
                </h3>

                <!-- Stats -->
                <div class="flex items-center gap-4 text-xs text-slate-500">
                  <div class="flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    <%= pluralize(production.shows.count, 'show & event') %>
                  </div>
                  <div class="flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                    <%= pluralize(production.effective_talent_pool&.people&.count || 0, 'cast member') %>
                  </div>
                </div>
              </div>
            </button>
          <% end %>
        <% end %>
      </div>

      <!-- Create New Production Link -->
      <% if Current.user.manager? %>
        <div class="text-center mt-8">
          <p class="text-sm text-slate-600 mb-3">Looking to start another production?</p>
          <%= link_to new_manage_production_path, class: "inline-flex items-center justify-center gap-2 px-6 py-3 bg-pink-600 hover:bg-pink-700 text-white font-semibold rounded-lg shadow-sm transition-colors" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
            Create another production
          <% end %>
        </div>
      <% end %>

    <% else %>
      <!-- No Productions - Create First One -->
      <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-start">

        <!-- Left Column: Value Proposition -->
        <div class="order-2 lg:order-1">
          <div class="lg:sticky lg:top-8">
            <div class="bg-gradient-to-br from-pink-50 to-white border border-pink-200 rounded-lg p-6 sm:p-8 shadow-sm">
              <div class="inline-block bg-pink-100 text-pink-700 text-xs font-semibold px-3 py-1 rounded-full mb-3">
                GET STARTED
              </div>
              <h2 class="text-2xl sm:text-3xl font-bold text-slate-900 mb-3">Create your first production</h2>
              <p class="text-slate-600 mb-6">Start organizing your show with everything you need in one place.</p>

              <ul class="space-y-3 mb-6">
                <li class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-pink-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-sm text-slate-700"><strong>Manage auditions</strong> with online sign-ups and scheduling</span>
                </li>
                <li class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-pink-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-sm text-slate-700"><strong>Build your cast</strong> from your talent database</span>
                </li>
                <li class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-pink-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-sm text-slate-700"><strong>Schedule performances</strong> and track attendance</span>
                </li>
                <li class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-pink-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-sm text-slate-700"><strong>Communicate with your team</strong> instantly</span>
                </li>
                <li class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-pink-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-sm text-slate-700"><strong>Track availability</strong> and make informed decisions</span>
                </li>
              </ul>

              <div class="bg-white border border-pink-200 rounded-lg p-4">
                <p class="text-xs text-slate-600">
                  <strong>Everything you need.</strong> From auditions to opening night, CocoScout keeps your production organized and your team connected.
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Right Column: Call to Action -->
        <div class="order-1 lg:order-2">
          <div class="bg-white border border-slate-200 rounded-lg p-6 sm:p-8 shadow-sm">
            <% if Current.user.manager? %>
              <!-- Manager/Owner: Can Create Production -->
              <div class="text-center mb-6">
                <div class="w-16 h-16 bg-pink-100 rounded-full flex items-center justify-center mx-auto mb-4">
                  <svg class="w-8 h-8 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z" />
                  </svg>
                </div>

                <h2 class="text-xl sm:text-2xl font-bold text-slate-900 mb-2">Create your first production</h2>
                <p class="text-sm text-slate-600 mb-6">Give your production a name to get started.</p>
              </div>

              <%= form_with(model: [:manage, Production.new], class: "space-y-5") do |form| %>
                <!-- Production Name -->
                <div>
                  <%= form.label :name, class: "block text-sm font-medium text-slate-900 mb-1.5" do %>
                    Production Name
                    <span class="text-pink-500">*</span>
                  <% end %>
                  <%= form.text_field :name,
                    placeholder: "e.g., Hamlet, Into the Woods",
                    autofocus: true,
                    required: true,
                    class: "block w-full px-3 py-2.5 bg-white border border-slate-300 focus:ring-pink-500 focus:border-pink-500 rounded-lg shadow-sm text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 transition" %>
                  <p class="mt-1.5 text-xs text-slate-500">
                    The name of your show or production
                  </p>
                </div>

                <!-- Submit Button -->
                <div class="pt-2">
                  <%= render "shared/button", text: "Create production", variant: "primary", size: "medium", type: :submit, class: "w-full" %>
                </div>
              <% end %>

              <div class="mt-6 pt-6 border-t border-slate-200">
                <p class="text-xs text-slate-500 text-center">
                  Need help getting started? <%= link_to "View our setup guide", setup_guide_manage_organizations_path, class: "text-pink-600 hover:text-pink-700 font-medium" %>
                </p>
              </div>
              </div>

            <% else %>
              <!-- Non-Manager: Cannot Create Production -->
              <div class="text-center">
                <div class="w-16 h-16 bg-slate-100 rounded-full flex items-center justify-center mx-auto mb-4">
                  <svg class="w-8 h-8 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>

                <h2 class="text-xl sm:text-2xl font-bold text-slate-900 mb-2">No productions yet</h2>
                <p class="text-sm text-slate-600 mb-6">You don't have access to any productions in <%= Current.organization.name %>.</p>

                <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 text-left">
                  <p class="text-sm text-slate-700 mb-2">
                    <strong>What you can do:</strong>
                  </p>
                  <ul class="text-sm text-slate-600 space-y-1 list-disc list-inside">
                    <li>Ask a manager to create a production</li>
                    <li>Wait to be added to an existing production</li>
                    <li>Contact your organization owner for help</li>
                  </ul>
                </div>

                <div class="mt-6">
                  <%= link_to manage_organizations_path, class: "text-sm text-pink-600 hover:text-pink-700 font-medium" do %>
                    ‚Üê Back to organizations
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>

      </div>
    <% end %>

  </div>
</div>
