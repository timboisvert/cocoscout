<% content_for :title, "My Payments" %>

<div class="w-full">
  <%= render partial: "shared/notice", locals: { notice: notice, alert: alert } %>

  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [],
    text: "My Payments",
    links: [
      { text: "Payment Settings", path: my_payments_setup_path }
    ]
  } %>

  <!-- Payment Account Status -->
  <div class="bg-white rounded-lg border border-gray-200 p-5 mb-6">
    <div class="flex items-center justify-between mb-4">
      <h3 class="font-semibold text-gray-900">Payment Accounts</h3>
      <%= link_to my_payments_setup_path do %>
        <%= render "shared/button", text: "Manage", variant: "secondary", size: "small" %>
      <% end %>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      <!-- Venmo Status -->
      <div class="flex items-center gap-3 p-3 bg-gray-50 rounded-lg">
        <div class="w-10 h-10 rounded-lg bg-<%= @person.venmo_configured? ? "green" : "gray" %>-100 flex items-center justify-center flex-shrink-0">
          <% if @person.venmo_configured? %>
            <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
          <% else %>
            <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19.5 3c.9 1.5 1.3 3.1 1.3 5.1 0 5.6-4.8 12.9-8.7 18H4.8L2.2 3.8l6.3-.6 1.5 12c1.4-2.3 3.1-5.9 3.1-8.4 0-1.9-.3-3.2-.9-4.3L19.5 3z"/>
            </svg>
          <% end %>
        </div>
        <div>
          <div class="font-medium text-gray-900">Venmo</div>
          <% if @person.venmo_configured? %>
            <div class="text-sm text-green-600"><%= @person.formatted_venmo_identifier %></div>
          <% else %>
            <div class="text-sm text-gray-500">Not configured</div>
          <% end %>
        </div>
      </div>

      <!-- Zelle Status -->
      <div class="flex items-center gap-3 p-3 bg-gray-50 rounded-lg">
        <div class="w-10 h-10 rounded-lg bg-<%= @person.zelle_configured? ? "green" : "gray" %>-100 flex items-center justify-center flex-shrink-0">
          <% if @person.zelle_configured? %>
            <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
          <% else %>
            <svg class="w-5 h-5 text-gray-400" viewBox="0 0 50 50" fill="currentColor">
              <circle cx="25" cy="25" r="23" fill="none" stroke="currentColor" stroke-width="3"/>
              <path d="M32 15H20l10 10H18l12 10" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          <% end %>
        </div>
        <div>
          <div class="font-medium text-gray-900">Zelle</div>
          <% if @person.zelle_configured? %>
            <div class="text-sm text-green-600"><%= @person.zelle_identifier %></div>
          <% else %>
            <div class="text-sm text-gray-500">Not configured</div>
          <% end %>
        </div>
      </div>
    </div>

    <% unless @person.venmo_configured? || @person.zelle_configured? %>
      <p class="text-sm text-gray-500 mt-4">Set up Venmo or Zelle to receive payments directly from productions.</p>
    <% end %>
  </div>

  <!-- Summary Stats -->
  <div class="grid grid-cols-2 sm:grid-cols-4 gap-4 mb-6">
    <div class="bg-white rounded-lg border border-gray-200 p-4">
      <div class="text-xs text-gray-500 uppercase tracking-wide mb-1">Total Received</div>
      <div class="text-2xl font-semibold text-gray-900"><%= number_to_currency(@total_received) %></div>
    </div>
    <div class="bg-white rounded-lg border border-gray-200 p-4">
      <div class="text-xs text-gray-500 uppercase tracking-wide mb-1">Via Venmo</div>
      <div class="text-2xl font-semibold text-gray-900"><%= number_to_currency(@venmo_total) %></div>
    </div>
    <div class="bg-white rounded-lg border border-gray-200 p-4">
      <div class="text-xs text-gray-500 uppercase tracking-wide mb-1">Via Zelle</div>
      <div class="text-2xl font-semibold text-gray-900"><%= number_to_currency(@zelle_total) %></div>
    </div>
    <div class="bg-white rounded-lg border border-gray-200 p-4">
      <div class="text-xs text-gray-500 uppercase tracking-wide mb-1">Cash/Other</div>
      <div class="text-2xl font-semibold text-gray-900"><%= number_to_currency(@offline_total) %></div>
    </div>
  </div>

  <!-- Pending Payouts -->
  <% if @pending_payouts.any? %>
    <div class="bg-amber-50 border border-amber-200 rounded-lg p-5 mb-6">
      <h3 class="font-semibold text-amber-800 mb-3 flex items-center gap-2">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        Pending Payouts
      </h3>
      <div class="space-y-2">
        <% @pending_payouts.each do |line_item| %>
          <div class="flex items-center justify-between bg-white rounded px-3 py-2">
            <div>
              <span class="text-sm font-medium text-gray-900"><%= line_item.show_payout.show.production.name %></span>
              <span class="text-sm text-gray-500">- <%= line_item.show_payout.show.date_and_time.strftime("%b %-d, %Y") %></span>
            </div>
            <span class="font-semibold text-amber-700"><%= number_to_currency(line_item.amount) %></span>
          </div>
        <% end %>
      </div>
      <p class="text-xs text-amber-700 mt-3">These payouts have been approved and are awaiting payment.</p>
    </div>
  <% end %>

  <!-- Payment History -->
  <div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
    <div class="px-5 py-4 border-b border-gray-200">
      <h3 class="font-semibold text-gray-900">Payment History</h3>
    </div>

    <% if @payment_history.any? %>
      <div class="divide-y divide-gray-100">
        <% @payment_history.each do |line_item| %>
          <div class="px-5 py-4">
            <div class="flex items-center justify-between">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-lg bg-green-100 flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
                <div>
                  <div class="font-medium text-gray-900"><%= line_item.show_payout.show.production.name %></div>
                  <div class="text-sm text-gray-500">
                    <%= line_item.show_payout.show.date_and_time.strftime("%B %-d, %Y") %>
                    <% if line_item.payment_method_label %>
                      <span class="text-gray-400 mx-1">Â·</span>
                      <span class="text-gray-500"><%= line_item.payment_method_label %></span>
                    <% end %>
                  </div>
                </div>
              </div>
              <div class="text-right">
                <div class="font-semibold text-green-600"><%= number_to_currency(line_item.amount) %></div>
                <% if line_item.paid_at %>
                  <div class="text-xs text-gray-500"><%= line_item.paid_at.strftime("%b %-d, %Y") %></div>
                <% end %>
              </div>
            </div>
            <% if line_item.payment_notes.present? %>
              <div class="mt-2 text-sm text-gray-500 bg-gray-50 rounded px-3 py-2">
                <%= line_item.payment_notes %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12 text-gray-500">
        <svg class="w-12 h-12 mx-auto mb-3 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <p>No payments yet.</p>
        <p class="text-sm mt-1">Payments from shows will appear here once they're processed.</p>
      </div>
    <% end %>
  </div>
</div>
