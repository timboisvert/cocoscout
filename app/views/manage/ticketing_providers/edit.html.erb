<%= render partial: "shared/top_menu", locals: {
  breadcrumbs: [
    ["Organizations", manage_organizations_path],
    [@organization.name, manage_organization_path(@organization, anchor: "tab-4")],
    [@ticketing_provider.name, manage_ticketing_provider_path(@organization, @ticketing_provider)]
  ],
  text: "Edit Connection"
} %>

<div class="max-w-2xl mx-auto px-4 py-6">
  <div class="bg-white shadow rounded-lg p-6">
    <%= form_with model: @ticketing_provider, url: manage_ticketing_provider_path(@organization, @ticketing_provider), method: :patch, class: "space-y-6" do |f| %>
      <% if @ticketing_provider.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
          <h3 class="text-sm font-medium text-red-800">Please fix the following errors:</h3>
          <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
            <% @ticketing_provider.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <label class="block text-sm font-medium text-gray-700">Platform</label>
        <p class="text-sm text-gray-900 mt-1"><%= @ticketing_provider.provider_display_name %></p>
        <p class="text-xs text-gray-500">Cannot be changed after creation</p>
      </div>

      <div>
        <label for="ticketing_provider_name" class="block text-sm font-medium text-gray-700">
          Display Name
        </label>
        <%= f.text_field :name,
                        class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-pink-500 focus:ring-pink-500" %>
      </div>

      <div>
        <label for="ticketing_provider_api_key" class="block text-sm font-medium text-gray-700">
          API Key
        </label>
        <p class="text-sm text-gray-500">Leave blank to keep existing key</p>
        <%= f.password_field :api_key,
                            placeholder: "••••••••••••",
                            autocomplete: "off",
                            class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-pink-500 focus:ring-pink-500 font-mono" %>
      </div>

      <div class="border-t pt-6">
        <h4 class="text-sm font-medium text-gray-700 mb-3">Sync Settings</h4>

        <div class="space-y-3">
          <label class="flex items-center">
            <%= f.check_box :auto_sync_enabled,
                           class: "h-4 w-4 text-pink-600 border-gray-300 rounded focus:ring-pink-500 accent-pink-600" %>
            <span class="ml-2 text-sm text-gray-700">Enable automatic sync</span>
          </label>

          <div class="flex items-center space-x-2">
            <span class="text-sm text-gray-700">Sync every</span>
            <%= f.select :sync_interval_minutes,
                        [[15, 15], [30, 30], [60, 60], [120, 120]].map { |label, val| ["#{label} minutes", val] },
                        {},
                        class: "rounded-lg border border-gray-300 text-sm focus:border-pink-500 focus:ring-pink-500" %>
          </div>
        </div>
      </div>

      <div class="flex items-center justify-end space-x-3 pt-4 border-t">
        <%= link_to "Cancel", manage_ticketing_provider_path(@organization, @ticketing_provider), class: "text-sm text-gray-500 hover:text-gray-700" %>
        <%= f.submit "Save Changes", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-pink-600 hover:bg-pink-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-pink-500 cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
