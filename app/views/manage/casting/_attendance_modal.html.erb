<%#
  Attendance Modal - For taking attendance for a show's cast members

  Parameters:
    - show: The Show object
    - attendance_records: Array of { assignment:, record:, person: } hashes
    - summary: Hash with :present, :absent, :late, :excused, :unknown counts
%>

<div class="fixed inset-0 bg-black/60 backdrop-blur-sm z-50 flex items-center justify-center p-4"
     data-controller="attendance-modal"
     data-attendance-modal-update-url-value="<%= update_manage_attendance_show_path(show.production, show) %>">
  <div class="bg-white rounded-xl shadow-xl max-w-2xl w-full max-h-[90vh] flex flex-col" data-action="click->attendance-modal#stopPropagation">
    <%# Header %>
    <div class="flex items-center justify-between px-6 py-4 border-b border-gray-200">
      <div>
        <h2 class="text-lg font-semibold text-gray-900">Take Attendance</h2>
        <p class="text-sm text-gray-500 mt-0.5">
          <%= show.event_type.humanize %> Â· <%= show.date_and_time.strftime("%B %d, %Y at %I:%M %p") %>
        </p>
      </div>
      <%= link_to manage_edit_show_path(show.production, show), class: "text-gray-400 hover:text-gray-600 transition-colors" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      <% end %>
    </div>

    <%# Summary Stats %>
    <div class="px-6 py-3 bg-gray-50 border-b border-gray-200 flex items-center gap-4 text-sm">
      <div class="flex items-center gap-1.5">
        <span class="w-2 h-2 rounded-full bg-green-500"></span>
        <span class="text-gray-600">Present: <span class="font-medium text-gray-900" data-attendance-modal-target="presentCount"><%= summary[:present] %></span></span>
      </div>
      <div class="flex items-center gap-1.5">
        <span class="w-2 h-2 rounded-full bg-red-500"></span>
        <span class="text-gray-600">Absent: <span class="font-medium text-gray-900" data-attendance-modal-target="absentCount"><%= summary[:absent] %></span></span>
      </div>
      <div class="flex items-center gap-1.5">
        <span class="w-2 h-2 rounded-full bg-yellow-500"></span>
        <span class="text-gray-600">Late: <span class="font-medium text-gray-900" data-attendance-modal-target="lateCount"><%= summary[:late] %></span></span>
      </div>
      <div class="flex items-center gap-1.5">
        <span class="w-2 h-2 rounded-full bg-blue-500"></span>
        <span class="text-gray-600">Excused: <span class="font-medium text-gray-900" data-attendance-modal-target="excusedCount"><%= summary[:excused] %></span></span>
      </div>
    </div>

    <%# Cast List %>
    <div class="flex-1 overflow-y-auto px-6 py-4">
      <% if attendance_records.any? %>
        <div class="space-y-2">
          <% attendance_records.each do |record_data| %>
            <% assignment = record_data[:assignment] %>
            <% record = record_data[:record] %>
            <% person = record_data[:person] %>
            <div class="flex items-center justify-between py-3 px-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
              <div class="flex items-center gap-3">
                <%# Avatar %>
                <div class="w-10 h-10 rounded-full bg-gradient-to-br from-pink-400 to-purple-500 flex items-center justify-center text-white font-medium text-sm">
                  <% if person&.profile&.avatar&.attached? %>
                    <%= image_tag person.profile.avatar.variant(resize_to_fill: [40, 40]), class: "w-10 h-10 rounded-full object-cover" %>
                  <% else %>
                    <%= person&.name&.first&.upcase || "?" %>
                  <% end %>
                </div>
                <div>
                  <p class="text-sm font-medium text-gray-900"><%= person&.name || "Unknown" %></p>
                  <p class="text-xs text-gray-500"><%= assignment.role.name %></p>
                </div>
              </div>

              <%# Status Buttons %>
              <div class="flex items-center gap-1" data-attendance-modal-target="statusButtons" data-assignment-id="<%= assignment.id %>">
                <button type="button"
                        data-status="present"
                        data-action="click->attendance-modal#setStatus"
                        class="px-2.5 py-1 text-xs font-medium rounded-md transition-colors <%= record.present? ? 'bg-green-500 text-white' : 'bg-white text-gray-600 border border-gray-300 hover:border-green-400 hover:text-green-600' %>">
                  Present
                </button>
                <button type="button"
                        data-status="absent"
                        data-action="click->attendance-modal#setStatus"
                        class="px-2.5 py-1 text-xs font-medium rounded-md transition-colors <%= record.absent? ? 'bg-red-500 text-white' : 'bg-white text-gray-600 border border-gray-300 hover:border-red-400 hover:text-red-600' %>">
                  Absent
                </button>
                <button type="button"
                        data-status="late"
                        data-action="click->attendance-modal#setStatus"
                        class="px-2.5 py-1 text-xs font-medium rounded-md transition-colors <%= record.late? ? 'bg-yellow-500 text-white' : 'bg-white text-gray-600 border border-gray-300 hover:border-yellow-400 hover:text-yellow-600' %>">
                  Late
                </button>
                <button type="button"
                        data-status="excused"
                        data-action="click->attendance-modal#setStatus"
                        class="px-2.5 py-1 text-xs font-medium rounded-md transition-colors <%= record.excused? ? 'bg-blue-500 text-white' : 'bg-white text-gray-600 border border-gray-300 hover:border-blue-400 hover:text-blue-600' %>">
                  Excused
                </button>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-12">
          <svg class="w-12 h-12 mx-auto text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
          <p class="mt-4 text-sm text-gray-500">No cast members assigned yet</p>
          <p class="mt-1 text-xs text-gray-400">Add cast members to this event to take attendance</p>
        </div>
      <% end %>
    </div>

    <%# Footer %>
    <div class="px-6 py-4 border-t border-gray-200 flex items-center justify-between">
      <div class="flex items-center gap-2">
        <button type="button"
                data-action="click->attendance-modal#markAllPresent"
                class="px-3 py-1.5 text-xs font-medium text-green-700 bg-green-50 border border-green-200 rounded-md hover:bg-green-100 transition-colors">
          Mark All Present
        </button>
        <button type="button"
                data-action="click->attendance-modal#clearAll"
                class="px-3 py-1.5 text-xs font-medium text-gray-600 bg-gray-50 border border-gray-200 rounded-md hover:bg-gray-100 transition-colors">
          Clear All
        </button>
      </div>
      <div class="flex items-center gap-2">
        <%= link_to "Cancel", manage_edit_show_path(show.production, show),
                    class: "px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors" %>
        <button type="button"
                data-action="click->attendance-modal#save"
                class="px-4 py-2 text-sm font-medium text-white bg-pink-500 rounded-lg hover:bg-pink-600 transition-colors">
          Save Attendance
        </button>
      </div>
    </div>
  </div>
</div>
