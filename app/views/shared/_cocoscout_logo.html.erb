<%#
  CocoScout Logo partial

  Parameters:
    size: Symbol - Size of the logo
          - :tiny   -> w-6 h-6 (footer badges, inline icons)
          - :small  -> w-16 (fixed corner links)
          - :medium -> w-20 sm:w-24 (welcome headers, default)
          - :large  -> w-32 (navigation sidebars)
    class: String - Additional CSS classes to add
%>
<%
  size ||= :medium
  extra_class = local_assigns[:class] || ""

  size_classes = case size
    when :tiny then "w-6 h-6"
    when :small then "w-16"
    when :medium then "w-20 sm:w-24"
    when :large then "w-32"
    else "w-20 sm:w-24"
  end

  base_classes = "object-contain select-none pointer-events-none drop-shadow-lg"
  all_classes = [size_classes, base_classes, extra_class].reject(&:blank?).join(" ")
%>
<img src="<%= asset_path('cocoscout.png') %>" alt="CocoScout" class="<%= all_classes %>" />
