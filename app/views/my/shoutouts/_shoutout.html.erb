<%# Shoutout partial for consistent rendering across all views
    Local variables:
    - shoutout: The shoutout object to render
    - context: "received", "given", or "public" - determines which person to highlight
%>

<% cache ["shoutout_v2", shoutout.id, shoutout.updated_at.to_i, context] do %>
<div class="bg-white rounded-lg border border-gray-200 p-4 sm:p-6" data-controller="expand-shoutout">
  <div class="flex items-center gap-3 sm:gap-4">
    <!-- Person headshot (author for received/public, recipient for given) -->
    <% display_person = context == "given" ? shoutout.shoutee : shoutout.author %>
    <% headshot = display_person.safe_headshot_variant(:thumb) %>
    <% if headshot %>
      <%= link_to public_profile_path(display_person.public_key) do %>
        <%= image_tag headshot, class: "w-10 h-10 sm:w-12 sm:h-12 rounded-lg object-cover flex-shrink-0", alt: display_person.name %>
      <% end %>
    <% else %>
      <%= link_to public_profile_path(display_person.public_key), class: "w-10 h-10 sm:w-12 sm:h-12 rounded-lg bg-gradient-to-br from-pink-400 to-purple-500 flex items-center justify-center text-white font-bold text-sm flex-shrink-0" do %>
        <%= display_person.initials %>
      <% end %>
    <% end %>

    <div class="flex-1 min-w-0">
      <div class="flex flex-wrap items-center gap-x-1.5 gap-y-0.5">
        <% if context == "given" %>
          <span class="text-xs text-gray-500">To</span>
        <% else %>
          <span class="text-xs text-gray-500">From</span>
        <% end %>
        <%= link_to display_person.name, public_profile_path(display_person.public_key), class: "font-semibold text-gray-900 hover:text-pink-600" %>
        <span class="text-xs text-gray-400">&middot;</span>
        <span class="text-xs text-gray-500">
         <%= time_ago_in_words(shoutout.created_at) %> ago
        </span>
      </div>
    </div>
  </div>

  <!-- Shoutout content - full width below header -->
  <div class="mt-3 pt-3 border-t border-gray-100">
    <div class="text-sm sm:text-base text-gray-700">
      <div data-expand-shoutout-target="preview">
        <div class="[&>p]:mb-3 [&>p:last-child]:mb-0">
          <%= simple_format(shoutout.content.length > 300 ? shoutout.preview(length: 300).strip : shoutout.content.strip, {}, sanitize: false) %>
        </div>
        <% if shoutout.content.length > 300 || shoutout.previous_versions.any? %>
          <button data-action="click->expand-shoutout#expand" class="text-xs text-pink-500 underline cursor-pointer">Show more</button>
        <% end %>
      </div>
      <div data-expand-shoutout-target="full" class="hidden">
        <div class="[&>p]:mb-3 [&>p:last-child]:mb-0">
          <%= simple_format(shoutout.content.strip, {}, sanitize: false) %>
        </div>

        <%# Show previous versions if any %>
        <% if shoutout.previous_versions.any? %>
          <div class="mt-4 pt-4 border-t border-gray-200">
            <p class="text-xs text-gray-500 font-semibold mb-3">Previous versions:</p>
            <% shoutout.previous_versions.each do |prev| %>
              <div class="mb-3 pl-4 border-l-2 border-gray-200 [&>div>p]:mb-3 [&>div>p:last-child]:mb-0">
                <p class="text-xs text-gray-400 mb-1"><%= time_ago_in_words(prev.created_at) %> ago</p>
                <div class="text-sm text-gray-600"><%= simple_format(prev.content.strip, {}, sanitize: false) %></div>
              </div>
            <% end %>
          </div>
        <% end %>

        <button data-action="click->expand-shoutout#collapse" class="text-xs text-pink-500 underline cursor-pointer">Show less</button>
      </div>
    </div>
  </div>
</div>
<% end %>
