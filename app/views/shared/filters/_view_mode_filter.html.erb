<%
# Shared view mode filter component (tiles vs list view)
#
# Parameters:
#   path_helper: Method - Method that generates the path
#   current_mode: String - Currently selected view mode ("tiles" or "list")
#   label: String (optional) - Label for the filter (default: "View")
#   Additional params: Any other params to pass to path_helper (as keyword arguments)
#
# Example usage:
#   render "shared/filters/view_mode_filter",
#     path_helper: method(:manage_directory_path),
#     current_mode: @show,
#     label: "View",
#     q: @search,
#     sort: @sort,
#     filter: @filter,
#     type: @type
%>
<%
label ||= "View"

# Extract path helper params
path_params = local_assigns.except(:path_helper, :current_mode, :label)
%>

<div class="flex items-center gap-2">
  <span class="text-xs font-medium text-gray-500 uppercase tracking-wide"><%= label %></span>
  <div class="flex gap-1">
    <%= link_to path_helper.call(**path_params, show: "tiles"),
            class: "px-3 py-2 rounded text-xs font-medium transition #{current_mode == 'tiles' ? 'bg-pink-500 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-3 h-3">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
      </svg>
    <% end %>
    <%= link_to path_helper.call(**path_params, show: "list"),
            class: "px-3 py-2 rounded text-xs font-medium transition #{current_mode == 'list' ? 'bg-pink-500 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-3 h-3">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
      </svg>
    <% end %>
  </div>
</div>
