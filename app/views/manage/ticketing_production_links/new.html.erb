<%= render partial: "shared/top_menu", locals: {
  breadcrumbs: [
    ["Ticketing", manage_ticketing_index_path],
    [@production.name, manage_ticketing_production_path(@production)]
  ],
  text: "Link Ticketing Event"
} %>

<div class="max-w-2xl mx-auto px-4 py-6">
  <div class="bg-white shadow rounded-lg p-6">
    <% if @available_events.present? %>
      <%# Step 2: Select an event from the list %>
      <div class="mb-6">
        <div class="flex items-center gap-3 text-sm text-gray-500">
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-pink-100 text-pink-800">
            <%= @provider.name %>
          </span>
          <%= link_to "Change", manage_new_ticketing_production_link_path(@production), class: "text-pink-600 hover:text-pink-800" %>
        </div>
      </div>

      <h3 class="text-lg font-medium text-gray-900 mb-2">Select an Event</h3>
      <p class="text-sm text-gray-500 mb-4">Choose which <%= @provider.provider_display_name %> event to link to "<%= @production.name %>"</p>

      <%= form_with model: @ticketing_production_link, url: manage_ticketing_production_links_path(@production), class: "space-y-4", data: { controller: "ticketing-event-select" } do |f| %>
        <%= f.hidden_field :ticketing_provider_id, value: @provider.id %>
        <%= f.hidden_field :provider_event_name, data: { ticketing_event_select_target: "eventName" } %>

        <% if @ticketing_production_link.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-lg p-4">
            <ul class="text-sm text-red-700 list-disc list-inside">
              <% @ticketing_production_link.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="space-y-2">
          <% @available_events.each do |event| %>
            <label class="flex items-center p-4 border rounded-lg cursor-pointer hover:border-pink-300 transition-colors has-[:checked]:border-pink-500 has-[:checked]:bg-pink-50">
              <input type="radio" name="ticketing_production_link[provider_event_id]" value="<%= event[:id] %>"
                     data-event-name="<%= event[:name] %>"
                     data-action="change->ticketing-event-select#select"
                     class="h-4 w-4 text-pink-600 border-gray-300 focus:ring-pink-500 accent-pink-600">
              <div class="ml-3 flex-1">
                <div class="font-medium text-gray-900"><%= event[:name] %></div>
                <div class="text-sm text-gray-500">
                  <% if event[:occurrence_count] && event[:occurrence_count] > 0 %>
                    <%= pluralize(event[:occurrence_count], "occurrence") %>
                  <% end %>
                  <% if event[:status].present? %>
                    &middot; <%= event[:status].titleize %>
                  <% end %>
                </div>
              </div>
            </label>
          <% end %>
        </div>

        <% if @available_events.empty? %>
          <div class="text-center py-8 text-gray-500">
            <p>No events found in your <%= @provider.provider_display_name %> account.</p>
            <p class="text-sm mt-1">Create an event in <%= @provider.provider_display_name %> first, then come back here.</p>
          </div>
        <% end %>

        <div class="border-t pt-4">
          <div class="space-y-3">
            <label class="flex items-center">
              <%= f.check_box :sync_ticket_sales, checked: true,
                             class: "h-4 w-4 text-pink-600 border-gray-300 rounded focus:ring-pink-500 accent-pink-600" %>
              <span class="ml-2 text-sm text-gray-700">Sync ticket sales data</span>
            </label>

            <label class="flex items-center">
              <%= f.check_box :sync_enabled, checked: true,
                             class: "h-4 w-4 text-pink-600 border-gray-300 rounded focus:ring-pink-500 accent-pink-600" %>
              <span class="ml-2 text-sm text-gray-700">Enable automatic sync</span>
            </label>
          </div>
        </div>

        <div class="flex items-center justify-end space-x-3 pt-4 border-t">
          <%= link_to "Cancel", manage_ticketing_production_path(@production),
                     class: "text-sm text-gray-500 hover:text-gray-700" %>
          <%= f.submit "Link Event", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-pink-600 hover:bg-pink-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-pink-500 cursor-pointer", disabled: @available_events.empty? %>
        </div>
      <% end %>

    <% else %>
      <%# Step 1: Select a provider %>
      <h3 class="text-lg font-medium text-gray-900 mb-2">Select a Platform</h3>
      <p class="text-sm text-gray-500 mb-4">Choose which ticketing platform to link for "<%= @production.name %>"</p>

      <div class="space-y-3">
        <% @providers.each do |provider| %>
          <%= link_to manage_new_ticketing_production_link_path(@production, provider_id: provider.id),
                      class: "flex items-center p-4 border rounded-lg hover:border-pink-300 transition-colors" do %>
            <div class="w-10 h-10 bg-gray-100 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z" />
              </svg>
            </div>
            <div class="ml-3 flex-1">
              <div class="font-medium text-gray-900"><%= provider.name %></div>
              <div class="text-sm text-gray-500"><%= provider.provider_display_name %></div>
            </div>
            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>

  <% if @provider.present? && @available_events.present? %>
    <div class="mt-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
      <div class="flex">
        <svg class="w-5 h-5 text-blue-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <div class="ml-3 text-sm text-blue-700">
          <p class="font-medium">What happens next?</p>
          <p class="mt-1">After linking, we'll automatically match your shows with <%= @provider.provider_display_name %> occurrences by date and time. You can review and adjust the matches before syncing.</p>
        </div>
      </div>
    </div>
  <% end %>
</div>
