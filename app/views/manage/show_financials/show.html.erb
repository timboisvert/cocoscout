<% content_for :title, "#{@show.secondary_name.presence || @show.event_type.titleize} - #{show_display_name(@show)}" %>

<%
  has_data = @show_financials.has_data?
  is_revenue_event = @show.revenue_event?
  payout_status = @show_payout&.status || "none"
  payout_calculated = @show_payout&.calculated_at.present?

  # Calculate payout totals
  total_payouts = @show_payout&.total_payout || 0
  paid_payouts = @show_payout&.line_items&.select(&:paid?)&.sum(&:amount) || 0
  unpaid_payouts = total_payouts - paid_payouts

  # Proper accounting calculations
  gross_revenue = @show_financials.total_revenue
  show_expenses = @show_financials.calculated_expenses

  # Cost of Show = Show Expenses + Performer Payouts
  cost_of_show = show_expenses + total_payouts

  # Gross Profit = Revenue - Cost of Show (including payouts as direct cost)
  gross_profit = gross_revenue - cost_of_show
  gross_margin = gross_revenue > 0 ? (gross_profit / gross_revenue * 100).round(1) : 0

  # Net Income (same as Gross Profit until we add operating expenses)
  net_income = gross_profit

  # Page title: secondary_name if present, otherwise "[event type]: [full date] at [time]"
  page_title = @show.secondary_name.presence || "#{@show.event_type.titleize}: #{@show.date_and_time.strftime('%B %-d, %Y')} at #{@show.date_and_time.strftime('%-I:%M %p')}"
%>

<div class="w-full mb-10">
  <%= render partial: "shared/notice", locals: { notice: notice, alert: alert } %>
  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Money", manage_money_index_path],
      ["Financials", manage_money_financials_path],
      [@production.name, manage_money_production_financials_path(@production)]
    ],
    text: page_title,
    links: []
  } %>

  <!-- Show Summary Row - uses same partial as money index -->
  <div class="mb-6">
    <%= render partial: "manage/payouts/money_show_row", locals: { show: @show, production: @production } %>
  </div>

  <% if is_revenue_event %>
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Main Financial Summary -->
      <div class="lg:col-span-2 space-y-6">

        <!-- Revenue & Profit Summary -->
        <div class="bg-white rounded-lg border border-gray-200 p-5">
          <h3 class="font-semibold text-gray-900 mb-4">Financial Summary</h3>

          <% if has_data %>
            <!-- Financial metrics grid -->
            <div class="grid grid-cols-2 sm:grid-cols-4 gap-4 mb-6">
              <div class="bg-gray-50 rounded-lg p-3">
                <div class="text-xs text-gray-500 uppercase tracking-wide mb-1">Gross Revenue</div>
                <div class="text-xl font-semibold text-gray-900"><%= number_to_currency(gross_revenue) %></div>
              </div>
              <% if payout_calculated && total_payouts > 0 %>
                <div class="bg-gray-50 rounded-lg p-3">
                  <div class="text-xs text-gray-500 uppercase tracking-wide mb-1">Cost of Show</div>
                  <div class="text-xl font-semibold text-red-600"><%= number_to_currency(cost_of_show) %></div>
                  <div class="text-xs text-gray-500">expenses + payouts</div>
                </div>
                <div class="bg-gray-50 rounded-lg p-3">
                  <div class="text-xs text-gray-500 uppercase tracking-wide mb-1">Gross Profit</div>
                  <div class="text-xl font-semibold <%= gross_profit >= 0 ? 'text-green-600' : 'text-red-600' %>">
                    <%= number_to_currency(gross_profit) %>
                  </div>
                  <div class="text-xs text-gray-500"><%= gross_margin %>% margin</div>
                </div>
                <% if @show_financials.ticket_sales? && @show_financials.ticket_count.to_i > 0 %>
                  <div class="bg-gray-50 rounded-lg p-3">
                    <div class="text-xs text-gray-500 uppercase tracking-wide mb-1">Tickets Sold</div>
                    <div class="text-xl font-semibold text-gray-900"><%= @show_financials.ticket_count %></div>
                  </div>
                <% else %>
                  <div class="bg-gray-50 rounded-lg p-3">
                    <div class="text-xs text-gray-500 uppercase tracking-wide mb-1">Net Income</div>
                    <div class="text-xl font-semibold <%= net_income >= 0 ? 'text-green-600' : 'text-red-600' %>">
                      <%= number_to_currency(net_income) %>
                    </div>
                  </div>
                <% end %>
              <% else %>
                <div class="bg-gray-50 rounded-lg p-3">
                  <div class="text-xs text-gray-500 uppercase tracking-wide mb-1">Show Expenses</div>
                  <div class="text-xl font-semibold text-red-600"><%= number_to_currency(show_expenses) %></div>
                </div>
                <div class="bg-gray-50 rounded-lg p-3">
                  <div class="text-xs text-gray-500 uppercase tracking-wide mb-1">Net Before Payouts</div>
                  <div class="text-xl font-semibold <%= @show_financials.net_revenue >= 0 ? 'text-green-600' : 'text-red-600' %>">
                    <%= number_to_currency(@show_financials.net_revenue) %>
                  </div>
                </div>
                <% if @show_financials.ticket_sales? && @show_financials.ticket_count.to_i > 0 %>
                  <div class="bg-gray-50 rounded-lg p-3">
                    <div class="text-xs text-gray-500 uppercase tracking-wide mb-1">Tickets Sold</div>
                    <div class="text-xl font-semibold text-gray-900"><%= @show_financials.ticket_count %></div>
                  </div>
                <% else %>
                  <div class="bg-gray-50 rounded-lg p-3">
                    <div class="text-xs text-gray-500 uppercase tracking-wide mb-1">Revenue Type</div>
                    <div class="text-xl font-semibold text-gray-900"><%= @show_financials.flat_fee? ? "Flat Fee" : "Ticket Sales" %></div>
                  </div>
                <% end %>
              <% end %>
            </div>

            <!-- Revenue Breakdown -->
            <div class="border-t border-gray-200 pt-4">
              <h4 class="text-sm font-medium text-gray-700 mb-3">Revenue</h4>
              <div class="space-y-2">
                <div class="flex justify-between text-sm">
                  <span class="text-gray-600"><%= @show_financials.flat_fee? ? "Flat Fee" : "Ticket Revenue" %></span>
                  <span class="font-medium text-gray-900"><%= number_to_currency(@show_financials.primary_revenue) %></span>
                </div>
                <% if @show_financials.calculated_other_revenue > 0 %>
                  <div class="flex justify-between text-sm">
                    <span class="text-gray-600">Other Revenue</span>
                    <span class="font-medium text-gray-900"><%= number_to_currency(@show_financials.calculated_other_revenue) %></span>
                  </div>
                  <% if @show_financials.normalized_other_revenue_details.any? %>
                    <% @show_financials.normalized_other_revenue_details.each do |item| %>
                      <div class="flex justify-between text-sm pl-4">
                        <span class="text-gray-500"><%= item["description"] %></span>
                        <span class="text-gray-600"><%= number_to_currency(item["amount"]) %></span>
                      </div>
                    <% end %>
                  <% end %>
                <% end %>
                <div class="flex justify-between text-sm pt-2 border-t border-gray-100">
                  <span class="font-medium text-gray-700">Gross Revenue</span>
                  <span class="font-semibold text-gray-900"><%= number_to_currency(gross_revenue) %></span>
                </div>
              </div>
            </div>

            <% if @show_financials.calculated_expenses > 0 %>
              <!-- Show Expenses -->
              <div class="border-t border-gray-200 pt-4 mt-4">
                <h4 class="text-sm font-medium text-gray-700 mb-3">Show Expenses</h4>
                <div class="space-y-2">
                  <% if @show_financials.normalized_expense_details.any? %>
                    <%
                      # Group expenses by category
                      grouped_expenses = @show_financials.normalized_expense_details.group_by { |item| item["category"].presence || "other" }
                      category_order = ExpenseCategories.keys
                      sorted_categories = grouped_expenses.keys.sort_by { |cat| category_order.index(cat) || 999 }
                    %>
                    <% sorted_categories.each do |category| %>
                      <%
                        items = grouped_expenses[category]
                        category_total = items.sum { |i| i["amount"].to_f }
                        category_label = ExpenseCategories.label_for(category)
                      %>
                      <div class="flex justify-between text-sm">
                        <span class="text-gray-600">
                          <%= category_label %>
                          <% if items.size > 1 %>
                            <span class="text-gray-400">(<%= items.size %> items)</span>
                          <% elsif items.first["description"].present? %>
                            <span class="text-gray-400">– <%= items.first["description"] %></span>
                          <% end %>
                        </span>
                        <span class="text-red-600"><%= number_to_currency(category_total) %></span>
                      </div>
                    <% end %>
                  <% else %>
                    <div class="flex justify-between text-sm">
                      <span class="text-gray-600">Expenses</span>
                      <span class="text-red-600"><%= number_to_currency(@show_financials.expenses) %></span>
                    </div>
                  <% end %>
                  <div class="flex justify-between text-sm pt-2 border-t border-gray-100">
                    <span class="font-medium text-gray-700">Total Show Expenses</span>
                    <span class="font-semibold text-red-600"><%= number_to_currency(@show_financials.calculated_expenses) %></span>
                  </div>
                </div>
              </div>
            <% end %>

            <% if payout_calculated && total_payouts > 0 %>
              <!-- Talent Payouts (part of Cost of Show) -->
              <div class="border-t border-gray-200 pt-4 mt-4">
                <h4 class="text-sm font-medium text-gray-700 mb-3">Talent Payouts</h4>
                <div class="space-y-2">
                  <div class="flex justify-between text-sm">
                    <span class="text-gray-600 flex items-center gap-2">
                      Performer Payouts
                      <span class="text-xs text-gray-400">(<%= @show_payout.line_items.count %> performers)</span>
                    </span>
                    <%= link_to manage_money_show_payout_path(@show), class: "font-medium text-pink-600 hover:text-pink-700" do %>
                      <%= number_to_currency(total_payouts) %> →
                    <% end %>
                  </div>
                  <% if paid_payouts > 0 && unpaid_payouts > 0 %>
                    <div class="text-xs text-gray-500 pl-2">
                      <%= number_to_currency(paid_payouts) %> paid · <%= number_to_currency(unpaid_payouts) %> pending
                    </div>
                  <% end %>
                </div>
              </div>

              <!-- Profit & Loss Summary -->
              <div class="border-t-2 border-gray-300 pt-4 mt-4 bg-gray-50 -mx-5 px-5 pb-5 rounded-b-lg">
                <h4 class="text-sm font-semibold text-gray-900 mb-3">Profit & Loss</h4>
                <div class="space-y-2">
                  <div class="flex justify-between text-sm">
                    <span class="text-gray-600">Gross Revenue</span>
                    <span class="font-medium text-gray-900"><%= number_to_currency(gross_revenue) %></span>
                  </div>
                  <div class="flex justify-between text-sm text-gray-500">
                    <span class="pl-2">Less: Show Expenses</span>
                    <span class="text-red-600">(<%= number_to_currency(show_expenses) %>)</span>
                  </div>
                  <div class="flex justify-between text-sm text-gray-500">
                    <span class="pl-2">Less: Performer Payouts</span>
                    <span class="text-pink-600">(<%= number_to_currency(total_payouts) %>)</span>
                  </div>
                  <div class="flex justify-between text-sm pt-2 border-t border-gray-200">
                    <span class="font-medium text-gray-700">Cost of Show</span>
                    <span class="font-medium text-red-600"><%= number_to_currency(cost_of_show) %></span>
                  </div>
                  <div class="flex justify-between text-base pt-3 border-t-2 border-gray-300">
                    <span class="font-bold text-gray-900">Gross Profit</span>
                    <span class="font-bold text-lg <%= gross_profit >= 0 ? 'text-green-600' : 'text-red-600' %>">
                      <%= number_to_currency(gross_profit) %>
                    </span>
                  </div>
                  <div class="text-xs text-gray-500 text-right">
                    <%= gross_margin %>% gross margin
                  </div>
                </div>
              </div>
            <% end %>

          <% else %>
            <!-- No data yet -->
            <div class="text-center py-8">
              <svg class="w-12 h-12 mx-auto mb-3 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <p class="text-gray-500 mb-4">No financial data entered yet</p>
              <%= render "shared/button",
                  text: "Enter Financial Data",
                  variant: "primary",
                  size: "medium",
                  icon: "plus",
                  type: :button,
                  onclick: "document.getElementById('financialWorksheet').classList.remove('hidden')" %>
            </div>
          <% end %>
        </div>

        <!-- Performance Comparison -->
        <% if @comparison_data && @comparison_data[:count] > 0 && has_data %>
          <div class="bg-white rounded-lg border border-gray-200 p-5">
            <h3 class="font-semibold text-gray-900 mb-4">Performance vs. Similar Shows</h3>
            <p class="text-sm text-gray-500 mb-4">Compared to <%= @comparison_data[:count] %> other <%= @show.event_type.titleize.downcase.pluralize %></p>

            <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
              <div class="bg-gray-50 rounded-lg p-3">
                <div class="text-xs text-gray-500 uppercase tracking-wide mb-1">Your Revenue</div>
                <div class="text-lg font-semibold text-gray-900"><%= number_to_currency(@show_financials.total_revenue) %></div>
                <div class="text-xs text-gray-500 mt-1">Avg: <%= number_to_currency(@comparison_data[:avg_revenue]) %></div>
              </div>
              <div class="bg-gray-50 rounded-lg p-3">
                <div class="text-xs text-gray-500 uppercase tracking-wide mb-1">Your Profit</div>
                <div class="text-lg font-semibold <%= @show_financials.net_revenue >= 0 ? 'text-green-600' : 'text-red-600' %>">
                  <%= number_to_currency(@show_financials.net_revenue) %>
                </div>
                <div class="text-xs text-gray-500 mt-1">Avg: <%= number_to_currency(@comparison_data[:avg_profit]) %></div>
              </div>
              <% if @comparison_data[:performance_vs_avg] %>
                <div class="bg-gray-50 rounded-lg p-3">
                  <div class="text-xs text-gray-500 uppercase tracking-wide mb-1">vs. Average</div>
                  <div class="text-lg font-semibold <%= @comparison_data[:performance_vs_avg] >= 0 ? 'text-green-600' : 'text-red-600' %>">
                    <%= @comparison_data[:performance_vs_avg] >= 0 ? '+' : '' %><%= @comparison_data[:performance_vs_avg] %>%
                  </div>
                  <div class="text-xs text-gray-500 mt-1">
                    <%= @comparison_data[:performance_vs_avg] >= 0 ? 'Above' : 'Below' %> average profit
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>


      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Quick Actions -->
        <div class="bg-white rounded-lg border border-gray-200 p-5">
          <h3 class="font-semibold text-gray-900 mb-4">Actions</h3>
          <div class="space-y-3">
            <%= link_to manage_money_show_payout_path(@show), class: "flex items-center gap-3 p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors" do %>
              <div class="w-10 h-10 rounded-lg bg-pink-100 flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div class="flex-1">
                <div class="font-medium text-gray-900">Manage Payouts</div>
                <div class="text-xs text-gray-500">
                  <% if @show_payout&.paid? %>
                    All payouts complete
                  <% elsif payout_calculated %>
                    Ready for payout
                  <% elsif has_data %>
                    Calculate payouts
                  <% else %>
                    Enter financials first
                  <% end %>
                </div>
              </div>
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            <% end %>

            <button type="button"
                    onclick="document.getElementById('financialWorksheet').classList.remove('hidden')"
                    class="flex items-center gap-3 p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors w-full text-left cursor-pointer">
              <div class="w-10 h-10 rounded-lg bg-gray-100 flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
              </div>
              <div class="flex-1">
                <div class="font-medium text-gray-900"><%= has_data ? "Edit Financial Data" : "Enter Financial Data" %></div>
                <div class="text-xs text-gray-500">Ticket sales, expenses, other revenue</div>
              </div>
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </button>
          </div>
        </div>

        <!-- Notes -->
        <% if @show_financials.notes.present? %>
          <div class="bg-white rounded-lg border border-gray-200 p-5">
            <h3 class="font-semibold text-gray-900 mb-3">Notes</h3>
            <p class="text-sm text-gray-600 whitespace-pre-wrap"><%= @show_financials.notes %></p>
          </div>
        <% end %>

        <!-- Mark as Non-Revenue -->
        <div class="bg-gray-50 rounded-lg border border-gray-200 p-4">
          <% if @show_financials.non_revenue_override? %>
            <%= button_to manage_unmark_non_revenue_money_show_financials_path(@show),
                method: :post,
                form: { data: { turbo_confirm: "Restore this as a revenue event?" } } do %>
              <%= render "shared/button", text: "Restore as Revenue Event", variant: "secondary", size: "small", classes: "w-full" %>
            <% end %>
            <div class="text-xs text-gray-500 mt-2 text-center">This event is marked as non-revenue</div>
          <% else %>
            <%= button_to manage_mark_non_revenue_money_show_financials_path(@show),
                method: :post,
                form: { data: { turbo_confirm: "Mark this as a non-revenue event? This will remove any payout calculations." } } do %>
              <%= render "shared/button", text: "Mark as Non-Revenue", variant: "ghost", size: "small", classes: "w-full" %>
            <% end %>
            <div class="text-xs text-gray-500 mt-2 text-center">If this event didn't generate revenue</div>
          <% end %>
        </div>
      </div>
    </div>
  <% else %>
    <!-- Non-revenue event view -->
    <div class="bg-white rounded-lg border border-gray-200 p-5">
      <div class="text-center py-8">
        <svg class="w-12 h-12 mx-auto mb-3 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        <h3 class="font-medium text-gray-900 mb-2">Non-Revenue Event</h3>
        <p class="text-gray-500 mb-4">This <%= @show.event_type.titleize.downcase %> is not tracked for revenue.</p>

        <% if @show_financials.non_revenue_override? %>
          <%= button_to manage_unmark_non_revenue_money_show_financials_path(@show),
              method: :post,
              form: { data: { turbo_confirm: "Restore this as a revenue event?" } } do %>
            <%= render "shared/button", text: "Restore as Revenue Event", variant: "outline-pink", size: "medium" %>
          <% end %>
        <% else %>
          <button type="button" onclick="document.getElementById('financialWorksheet').classList.remove('hidden')">
            <%= render "shared/button", text: "Add Financial Data (Make Revenue Event)", variant: "outline-pink", size: "medium" %>
          </button>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<!-- Financial Worksheet Modal -->
<%= render "manage/show_financials/worksheet_modal" %>
