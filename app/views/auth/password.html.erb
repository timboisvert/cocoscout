<div class="min-h-screen bg-white">
  <!-- Header -->
  <div class="flex flex-col items-center pt-6 sm:pt-10 pb-4">
    <img src="<%= asset_path('cocoscout.png') %>" alt="CocoScout" class="w-20 sm:w-28 object-contain select-none pointer-events-none" />
    <h1 class="mt-3 text-3xl sm:text-4xl coustard-regular text-pink-500">CocoScout</h1>
  </div>

  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 pb-12">
    <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-start">

      <!-- Left Column: Help Information -->
      <div class="order-2 lg:order-1">
        <div class="lg:sticky lg:top-8">
          <div class="bg-gradient-to-br from-pink-50 to-white border border-pink-200 rounded-lg p-6 sm:p-8 shadow-sm">
            <h2 class="text-2xl sm:text-3xl font-bold text-slate-900 mb-3">Reset your password</h2>
            <p class="text-slate-600 mb-6">No worries! We'll send you instructions to reset your password.</p>

            <!-- How it works -->
            <div class="space-y-4 mb-6">
              <div class="flex items-start gap-3">
                <div class="flex-shrink-0 w-8 h-8 rounded-full bg-pink-100 flex items-center justify-center text-pink-600 font-semibold text-sm">
                  1
                </div>
                <div>
                  <h3 class="text-sm font-semibold text-slate-900">Enter your email</h3>
                  <p class="text-sm text-slate-600">Provide the email address associated with your account</p>
                </div>
              </div>

              <div class="flex items-start gap-3">
                <div class="flex-shrink-0 w-8 h-8 rounded-full bg-pink-100 flex items-center justify-center text-pink-600 font-semibold text-sm">
                  2
                </div>
                <div>
                  <h3 class="text-sm font-semibold text-slate-900">Check your inbox</h3>
                  <p class="text-sm text-slate-600">We'll send you a secure link to reset your password</p>
                </div>
              </div>

              <div class="flex items-start gap-3">
                <div class="flex-shrink-0 w-8 h-8 rounded-full bg-pink-100 flex items-center justify-center text-pink-600 font-semibold text-sm">
                  3
                </div>
                <div>
                  <h3 class="text-sm font-semibold text-slate-900">Create new password</h3>
                  <p class="text-sm text-slate-600">Click the link and choose a new secure password</p>
                </div>
              </div>
            </div>

            <!-- Divider -->
            <div class="my-6 border-t border-pink-200"></div>

            <!-- Help Section -->
            <div class="bg-white rounded-lg border border-slate-200 p-5">
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-slate-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <div>
                  <h3 class="text-base font-semibold text-slate-900 mb-1">Need help?</h3>
                  <p class="text-sm text-slate-600 mb-3">If you don't receive an email within a few minutes, check your spam folder or try again.</p>
                  <p class="text-sm text-slate-600">
                    Still having trouble? Contact us at <a href="mailto:support@cocoscout.com" class="text-pink-600 hover:text-pink-700 underline font-medium">support@cocoscout.com</a>
                  </p>
                </div>
              </div>
            </div>

            <!-- Back to sign in -->
            <div class="mt-6 text-center">
              <%= link_to signin_path, class: "inline-flex items-center justify-center text-sm font-medium text-slate-600 hover:text-slate-900 transition" do %>
                <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
                Back to sign in
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- Right Column: Reset Form -->
      <div class="order-1 lg:order-2">
        <div class="bg-white border border-slate-200 rounded-lg p-6 sm:p-8 shadow-sm">
          <h2 class="text-2xl font-bold text-slate-900 mb-2 text-center">Forgot your password?</h2>
          <p class="text-sm text-slate-600 mb-6 text-center">Enter your email to receive reset instructions</p>

          <!-- Error Messages -->
          <% if @reset_link_expired_or_invalid %>
            <div class="mb-4 p-3 bg-pink-50 border border-pink-200 rounded-md text-sm text-pink-700">
              Reset link expired or invalid. Please try again.
            </div>
          <% end %>

          <%= form_with url: handle_password_path, class: "space-y-5" do |form| %>
            <div>
              <label for="email_address" class="block text-sm font-medium text-slate-700 mb-1">Email address</label>
              <%= form.email_field :email_address,
                  required: true,
                  autofocus: true,
                  autocomplete: "username",
                  autocapitalize: "none",
                  placeholder: "you@example.com",
                  value: params[:email_address],
                class: "block shadow-sm rounded-md border border-gray-300 px-3 py-2.5 w-full focus:border-pink-500 focus:ring-pink-500" %>
            <p class="mt-1.5 text-xs text-slate-500">We'll send password reset instructions to this address</p>
          </div>

          <div class="pt-2 space-y-3">
            <%= render "shared/button", text: "Email reset instructions", variant: "primary", size: "medium", type: :submit %>

            <%= link_to "Cancel", "javascript:window.history.back()", class: "w-full text-center rounded-md px-4 py-2.5 bg-slate-100 hover:bg-slate-200 text-slate-700 font-medium inline-block transition" %>
          </div>

          <div class="text-center text-sm text-slate-600 pt-4">
              Remember your password? <%= link_to "Sign in", signin_path, class: "text-pink-600 hover:text-pink-700 font-medium underline" %>
            </div>
          <% end %>
        </div>

        <!-- Security note -->
        <div class="mt-6 text-center">
          <p class="text-xs text-slate-500 flex items-center justify-center gap-1.5">
            <svg class="w-3.5 h-3.5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
            Reset links expire after 24 hours for security
          </p>
        </div>
      </div>

    </div>
  </div>
</div>