<% content_for :title, "Select Organization" %>

<div class="max-w-md mx-auto py-8">

  <% if @organizations.any? %>
    <!-- Organization Selection -->
    <div class="mb-6">
      <h2 class="text-xl font-bold text-gray-900 mb-1">Select an organization</h2>
      <p class="text-sm text-gray-600">Choose which organization you'd like to work with</p>
    </div>

    <div class="bg-white border border-gray-200 rounded-lg overflow-hidden">
      <% @organizations.each_with_index do |org, index| %>
        <%= form_with url: set_organization_path(id: org.id), method: :post do |form| %>
          <button type="submit" class="w-full flex items-center gap-3 hover:bg-slate-50 px-4 py-3 transition cursor-pointer text-left <%= index > 0 ? 'border-t border-gray-200' : '' %>">
            <% if org.logo.attached? %>
              <div class="w-16 h-8 flex items-center justify-center flex-shrink-0 rounded">
                <%= image_tag org.logo, alt: "#{org.name} logo", class: "w-16 h-8 object-cover rounded" %>
              </div>
            <% else %>
              <div class="w-16 h-8 flex items-center justify-center flex-shrink-0 rounded bg-gray-100 text-gray-600 font-bold text-xs">
                <%= org.name[0..1].upcase %>
              </div>
            <% end %>
            <span class="text-sm font-medium text-slate-700 truncate flex-1"><%= org.name %></span>
            <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </button>
        <% end %>
      <% end %>

      <!-- Create New Organization Button -->
      <%= link_to new_manage_organization_path, data: { turbo: false }, class: "flex items-center gap-3 px-4 py-3 text-sm text-pink-500 hover:bg-slate-50 transition cursor-pointer font-medium border-t border-gray-200" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        Create an Organization
      <% end %>
    </div>

  <% else %>
    <!-- Empty State - No Organizations -->
    <div class="bg-white border border-gray-200 rounded-lg p-8 text-center">
      <div class="w-12 h-12 bg-pink-100 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-6 h-6 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
        </svg>
      </div>
      <h3 class="text-lg font-bold text-gray-900 mb-2">No Organizations Yet</h3>
      <p class="text-sm text-gray-600 mb-6 max-w-md mx-auto">
        Create your first organization to start managing productions, casting calls, and your team.
      </p>
      <%= link_to new_manage_organization_path, class: "inline-flex items-center justify-center gap-2 px-4 py-2 bg-pink-600 hover:bg-pink-700 text-white font-medium rounded-lg text-sm transition-colors" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg>
        Create Your First Organization
      <% end %>
    </div>
  <% end %>

</div>
