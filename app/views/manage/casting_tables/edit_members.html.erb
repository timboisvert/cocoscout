<% content_for :title, "Edit Talent Pool - #{@casting_table.name}" %>

<div class="w-full mb-10">
  <%= render partial: "shared/notice", locals: { notice: notice, alert: alert } %>

  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Casting", manage_casting_path],
      ["Casting Tables", manage_casting_tables_path],
      [@casting_table.name, manage_casting_table_path(@casting_table)]
    ],
    text: "Edit Casting Table",
    links: []
  } %>

  <!-- Name Editing -->
  <div class="mb-6">
    <%= form_with model: @casting_table, url: manage_update_casting_table_path(@casting_table), method: :patch, class: "flex items-center gap-3" do |form| %>
      <%= form.text_field :name, class: "text-lg font-semibold text-gray-900 border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-pink-500 focus:border-pink-500", style: "width: 300px;" %>
      <%= render "shared/button", text: "Save Name", variant: "primary", size: "small" %>
    <% end %>
  </div>

  <!-- Tab Navigation -->
  <div class="border-b border-gray-200 mb-6">
    <nav class="-mb-px flex space-x-8">
      <%= link_to manage_edit_casting_table_path(@casting_table),
          class: "border-b-2 border-transparent py-4 px-1 text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300" do %>
        Events
      <% end %>
      <%= link_to manage_casting_table_edit_members_path(@casting_table),
          class: "border-b-2 border-pink-500 py-4 px-1 text-sm font-medium text-pink-600" do %>
        Talent Pool
        <span class="ml-2 py-0.5 px-2 text-xs rounded-full bg-pink-100 text-pink-600"><%= @people.count + @groups.count %></span>
      <% end %>
    </nav>
  </div>

  <% unless @casting_table.draft? %>
    <div class="mb-4 p-3 bg-amber-50 border border-amber-200 rounded-lg">
      <div class="flex items-center gap-2">
        <svg class="w-5 h-5 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
        </svg>
        <span class="text-sm font-medium text-amber-800">This casting table is finalized</span>
        <span class="text-sm text-amber-700">â€” You can remove members, but cannot add new ones.</span>
      </div>
    </div>
  <% end %>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Current Members -->
    <div class="bg-white rounded-lg border border-gray-200 shadow-sm">
      <div class="px-5 py-4 border-b border-gray-200">
        <h3 class="text-base font-semibold text-gray-900">Current Talent Pool (<%= @people.count + @groups.count %>)</h3>
      </div>
      <div class="divide-y divide-gray-200 max-h-[500px] overflow-y-auto">
        <% if @people.any? || @groups.any? %>
          <!-- People -->
          <% @people.each do |person| %>
            <% draft_count = @draft_counts_by_member[["Person", person.id]] || 0 %>
            <div class="px-5 py-3 flex items-center justify-between hover:bg-gray-50">
              <div class="flex items-center gap-3">
                <% headshot = person.safe_headshot_variant(:thumb) %>
                <% if headshot %>
                  <%= image_tag headshot, alt: person.name, class: "w-10 h-10 rounded-lg object-cover" %>
                <% else %>
                  <div class="w-10 h-10 rounded-lg bg-gray-200 flex items-center justify-center">
                    <span class="text-sm font-medium text-gray-500"><%= person.initials[0..1] %></span>
                  </div>
                <% end %>
                <div>
                  <div class="font-medium text-gray-900 text-sm"><%= person.name %></div>
                  <div class="text-xs text-gray-500">Person</div>
                </div>
              </div>
              <div class="flex items-center gap-2">
                <% if draft_count > 0 && @casting_table.draft? %>
                  <span class="text-xs text-amber-600 font-medium"><%= draft_count %> draft<%= draft_count > 1 ? 's' : '' %></span>
                <% end %>
                <%= form_with url: manage_casting_table_remove_member_path(@casting_table, memberable_type: "Person", memberable_id: person.id),
                    method: :delete,
                    data: {
                      turbo_confirm: draft_count > 0 && @casting_table.draft? ?
                        "Remove \"#{person.name}\" from this casting table?\n\nThis will also delete #{draft_count} draft assignment(s)." :
                        "Remove \"#{person.name}\" from this casting table?"
                    } do %>
                  <%= render "shared/button", text: "Remove", variant: "danger", size: "small", icon: "trash" %>
                <% end %>
              </div>
            </div>
          <% end %>

          <!-- Groups -->
          <% @groups.each do |group| %>
            <% draft_count = @draft_counts_by_member[["Group", group.id]] || 0 %>
            <div class="px-5 py-3 flex items-center justify-between hover:bg-gray-50">
              <div class="flex items-center gap-3">
                <% headshot = group.safe_headshot_variant(:thumb) %>
                <% if headshot %>
                  <%= image_tag headshot, alt: group.name, class: "w-10 h-10 rounded-lg object-cover" %>
                <% else %>
                  <div class="w-10 h-10 rounded-lg bg-purple-100 flex items-center justify-center">
                    <span class="text-sm font-medium text-purple-500"><%= group.name[0..1].upcase %></span>
                  </div>
                <% end %>
                <div>
                  <div class="font-medium text-gray-900 text-sm"><%= group.name %></div>
                  <div class="text-xs text-gray-500">Group</div>
                </div>
              </div>
              <div class="flex items-center gap-2">
                <% if draft_count > 0 && @casting_table.draft? %>
                  <span class="text-xs text-amber-600 font-medium"><%= draft_count %> draft<%= draft_count > 1 ? 's' : '' %></span>
                <% end %>
                <%= form_with url: manage_casting_table_remove_member_path(@casting_table, memberable_type: "Group", memberable_id: group.id),
                    method: :delete,
                    data: {
                      turbo_confirm: draft_count > 0 && @casting_table.draft? ?
                        "Remove \"#{group.name}\" from this casting table?\n\nThis will also delete #{draft_count} draft assignment(s)." :
                        "Remove \"#{group.name}\" from this casting table?"
                    } do %>
                  <%= render "shared/button", text: "Remove", variant: "danger", size: "small", icon: "trash" %>
                <% end %>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="px-5 py-8 text-center text-gray-500">
            No members in this casting table
          </div>
        <% end %>
      </div>
    </div>

    <!-- Add Members (only for draft) -->
    <% if @casting_table.draft? %>
      <div class="bg-white rounded-lg border border-gray-200 shadow-sm">
        <div class="px-5 py-4 border-b border-gray-200">
          <h3 class="text-base font-semibold text-gray-900">Add Members</h3>
          <p class="text-sm text-gray-500 mt-1">People and groups from your organization</p>
        </div>
        <div class="divide-y divide-gray-200 max-h-[500px] overflow-y-auto">
          <% if @available_people.any? || @available_groups.any? %>
            <!-- Available People -->
            <% @available_people.each do |person| %>
              <div class="px-5 py-3 flex items-center justify-between hover:bg-gray-50">
                <div class="flex items-center gap-3">
                  <% headshot = person.safe_headshot_variant(:thumb) %>
                  <% if headshot %>
                    <%= image_tag headshot, alt: person.name, class: "w-10 h-10 rounded-lg object-cover opacity-60" %>
                  <% else %>
                    <div class="w-10 h-10 rounded-lg bg-gray-100 flex items-center justify-center">
                      <span class="text-sm font-medium text-gray-400"><%= person.initials[0..1] %></span>
                    </div>
                  <% end %>
                  <div>
                    <div class="font-medium text-gray-700 text-sm"><%= person.name %></div>
                    <div class="text-xs text-gray-400">Person</div>
                  </div>
                </div>
                <%= form_with url: manage_casting_table_add_member_path(@casting_table, memberable_type: "Person", memberable_id: person.id), method: :post do %>
                  <%= render "shared/button", text: "Add", variant: "primary", size: "small", icon: "plus" %>
                <% end %>
              </div>
            <% end %>

            <!-- Available Groups -->
            <% @available_groups.each do |group| %>
              <div class="px-5 py-3 flex items-center justify-between hover:bg-gray-50">
                <div class="flex items-center gap-3">
                  <% headshot = group.safe_headshot_variant(:thumb) %>
                  <% if headshot %>
                    <%= image_tag headshot, alt: group.name, class: "w-10 h-10 rounded-lg object-cover opacity-60" %>
                  <% else %>
                    <div class="w-10 h-10 rounded-lg bg-purple-50 flex items-center justify-center">
                      <span class="text-sm font-medium text-purple-400"><%= group.name[0..1].upcase %></span>
                    </div>
                  <% end %>
                  <div>
                    <div class="font-medium text-gray-700 text-sm"><%= group.name %></div>
                    <div class="text-xs text-gray-400">Group</div>
                  </div>
                </div>
                <%= form_with url: manage_casting_table_add_member_path(@casting_table, memberable_type: "Group", memberable_id: group.id), method: :post do %>
                  <%= render "shared/button", text: "Add", variant: "primary", size: "small", icon: "plus" %>
                <% end %>
              </div>
            <% end %>
          <% else %>
            <div class="px-5 py-8 text-center text-gray-500">
              No available members to add
            </div>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="bg-gray-50 rounded-lg border border-gray-200 border-dashed p-8 flex items-center justify-center">
        <p class="text-gray-500 text-center">
          Adding members is disabled for finalized casting tables.
        </p>
      </div>
    <% end %>
  </div>

  <div class="mt-6">
    <%= render "shared/button", text: "Back to Casting Table", variant: "secondary", size: "small", icon: "arrow-left", path: manage_casting_table_path(@casting_table) %>
  </div>
</div>
