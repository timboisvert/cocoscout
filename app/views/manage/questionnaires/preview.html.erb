<div class="fixed top-0 left-0 h-16 w-full bg-pink-500 text-pink-500 p-3 z-10">
  <div class="flex justify-between items-center h-full mx-auto content-center">
    <%= render partial: "shared/link_button", locals: {text: "Close Preview", color: "white", path: "javascript:history.back()" } %>
    <p class="text-white text-2xl font-medium">Preview</p>
    <%= render partial: "shared/link_button", locals: {text: "Edit Form", color: "white", path: form_manage_production_questionnaire_path(@production, @questionnaire)} %>
  </div>
</div>

<div class="fixed bottom-0 left-0 h-16 w-full bg-pink-500 text-pink-500 p-3 z-10">
  <div class="w-full md:w-1/2 flex items-center mx-auto" data-controller="clipboard">
    <p class="text-nowrap text-white text-sm mr-2">Shareable Link:</p>
    <%= text_field_tag "", @questionnaire.respond_url, class: "block w-64 text-sm text-black bg-white shadow-sm rounded-lg border px-3 py-2 w-full border-gray-400", disabled: true, data: { clipboard_target: "textField" }  %>
    <p class="ml-1 font-medium rounded-lg text-sm px-2 py-1 h-9 text-center mb-0 inline-block bg-white-500 text-white hover:bg-gray-100 hover:text-pink-500 cursor-pointer" data-action="click->clipboard#copy" data-clipboard-target: "button">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 0 0 2.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 0 0-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 0 0 .75-.75 2.25 2.25 0 0 0-.1-.664m-5.8 0A2.251 2.251 0 0 1 13.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25ZM6.75 12h.008v.008H6.75V12Zm0 3h.008v.008H6.75V15Zm0 3h.008v.008H6.75V18Z" />
      </svg>
    </p>
  </div>
</div>

<div class="min-h-screen bg-white">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12 mt-16 mb-20">

    <!-- Full-Width Header -->
    <div class="mb-8 sm:mb-10">
      <h1 class="text-3xl sm:text-4xl font-bold text-slate-900 mb-3 coustard-regular"><%= @production.name %></h1>
      <p class="text-lg text-slate-600"><%= @questionnaire.title %></p>
    </div>

    <!-- Two Column Layout: Header Text & Form -->
    <div class="grid lg:grid-cols-2 gap-8 lg:gap-12">

      <!-- Left Column: Header Text -->
      <div class="space-y-6">
        <% if @questionnaire.header_text.present? %>
          <div class="bg-gradient-to-br from-slate-50 to-white border border-slate-200 rounded-lg p-6 sm:p-8 shadow-sm">
            <div class="prose prose-slate max-w-none text-slate-700">
              <%= @questionnaire.header_text %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Right Column: Form -->
      <div>
        <div class="space-y-4">

          <!-- Questions Section -->
          <% if @questions.any? %>
            <div class="bg-white border border-slate-200 rounded-lg shadow-sm p-5 space-y-5">
              <% @questions.each do |question| %>
                <div class="">
                  <label>
                    <%= question.text %>
                    <% if question.required %>
                      <span class="text-pink-500 text-sm">(required)</span>
                    <% end %>
                  </label>

                  <div class="mt-2">
                    <% type_class = question.question_type_class %>
                    <% if type_class %>
                      <% case type_class.key %>
                      <% when "text", "email", "phone", "url" %>
                        <input type="text" disabled class="block shadow-sm rounded-lg border px-3 py-2 w-full border-gray-300 bg-gray-50" placeholder="Answer...">
                      <% when "textarea" %>
                        <textarea disabled class="block shadow-sm rounded-lg border px-3 py-2 w-full border-gray-300 bg-gray-50" rows="4" placeholder="Answer..."></textarea>
                      <% when "yesno" %>
                        <div class="space-y-2">
                          <div class="flex items-center">
                            <input type="radio" disabled class="border-gray-300 text-pink-600">
                            <label class="ml-2 text-sm text-gray-700">Yes</label>
                          </div>
                          <div class="flex items-center">
                            <input type="radio" disabled class="border-gray-300 text-pink-600">
                            <label class="ml-2 text-sm text-gray-700">No</label>
                          </div>
                        </div>
                      <% when "multiple-single" %>
                        <div class="space-y-2">
                          <% question.question_options.each do |option| %>
                            <div class="flex items-center">
                              <input type="radio" disabled class="border-gray-300 text-pink-600">
                              <label class="ml-2 text-sm text-gray-700"><%= option.text %></label>
                            </div>
                          <% end %>
                        </div>
                      <% when "multiple-multiple" %>
                        <div class="space-y-2">
                          <% question.question_options.each do |option| %>
                            <div class="flex items-center">
                              <input type="checkbox" disabled class="rounded border-gray-300 text-pink-600">
                              <label class="ml-2 text-sm text-gray-700"><%= option.text %></label>
                            </div>
                          <% end %>
                        </div>
                      <% when "ranking" %>
                        <div class="space-y-2">
                          <p class="text-xs text-gray-500 mb-2">Drag to rank (disabled in preview)</p>
                          <% question.question_options.each_with_index do |option, index| %>
                            <div class="flex items-center p-2 bg-gray-50 rounded border border-gray-300">
                              <span class="text-gray-400 mr-2">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8h16M4 16h16"/>
                                </svg>
                              </span>
                              <span class="text-sm text-gray-700"><%= index + 1 %>. <%= option.text %></span>
                            </div>
                          <% end %>
                        </div>
                      <% end %>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>

          <!-- Submit Button (disabled in preview) -->
          <button disabled class="w-full rounded-lg px-4 py-3 text-white bg-pink-300 font-semibold cursor-not-allowed">
            Submit (Preview Mode)
          </button>
        </div>
      </div>

    </div>
  </div>
</div>
