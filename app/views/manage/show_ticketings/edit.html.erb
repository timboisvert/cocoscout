<% content_for :title, "Edit Ticketing - #{@show.display_name}" %>

<div class="w-full mb-10">
  <%= render partial: "shared/notice", locals: { notice: notice, alert: alert } %>
  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Ticketing", manage_ticketing_index_path],
      ["Shows", manage_show_ticketings_path],
      [@production.name, manage_production_show_ticketings_path(@production)],
      [@show.display_name, manage_show_ticketing_path(@production, @show)]
    ],
    text: "Edit",
    links: []
  } %>

  <div class="max-w-3xl">
    <%= form_with model: @show_ticketing, url: manage_show_ticketing_path(@production, @show), method: :patch, class: "space-y-6" do |form| %>
      <% if @show_ticketing.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
          <ul class="list-disc list-inside text-red-700 text-sm">
            <% @show_ticketing.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

    <div class="bg-white rounded-lg border border-gray-200 p-6">
      <h3 class="font-medium text-gray-900 mb-4">Capacity</h3>

      <div>
        <%= form.label :total_capacity, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.number_field :total_capacity, min: 1, class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500" %>
      </div>
    </div>

    <div class="bg-white rounded-lg border border-gray-200 p-6">
      <h3 class="font-medium text-gray-900 mb-4">Sales Window</h3>

      <div class="grid grid-cols-2 gap-4">
        <div>
          <%= form.label :sales_open_at, "Sales Open At (optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.datetime_local_field :sales_open_at, class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500" %>
        </div>
        <div>
          <%= form.label :sales_close_at, "Sales Close At (optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.datetime_local_field :sales_close_at, class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500" %>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg border border-gray-200 p-6">
      <h3 class="font-medium text-gray-900 mb-4">Ticket Tiers</h3>

      <div id="show-ticket-tiers" class="space-y-4">
        <%= form.fields_for :show_ticket_tiers do |tier_form| %>
          <div class="flex items-start gap-4 p-4 bg-gray-50 rounded-lg tier-row">
            <div class="flex-1 grid grid-cols-5 gap-3">
              <div>
                <%= tier_form.text_field :name, class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500 text-sm", placeholder: "Tier name" %>
              </div>
              <div>
                <%= tier_form.number_field :capacity, min: 1, class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500 text-sm", placeholder: "Capacity" %>
              </div>
              <div>
                <%= tier_form.number_field :available, min: 0, class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500 text-sm", placeholder: "Available" %>
              </div>
              <div>
                <%= tier_form.number_field :default_price_cents, min: 0, step: 100, class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500 text-sm", placeholder: "Price (cents)" %>
              </div>
              <div class="text-sm text-gray-500 pt-2">
                Sold: <%= tier_form.object.sold %>
              </div>
            </div>
            <%= tier_form.hidden_field :position %>
            <%= tier_form.hidden_field :id %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="bg-white rounded-lg border border-gray-200 p-6">
      <h3 class="font-medium text-gray-900 mb-4">Notes</h3>
      <%= form.text_area :notes, rows: 3, class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500", placeholder: "Internal notes about ticketing for this show..." %>
    </div>

    <div class="flex justify-between items-center">
      <%= link_to manage_show_ticketing_path(@production, @show) do %>
        <%= render "shared/button", text: "Cancel", variant: "ghost-cancel", type: :button %>
      <% end %>
      <%= render "shared/button", text: "Update Ticketing", variant: "primary", type: :submit %>
    </div>
    <% end %>
  </div>
</div>
