<%= form_with model: post, url: my_create_message_path(production_id: production.id, parent_id: parent_id), method: :post, local: false, class: "space-y-2" do |f| %>
  <input type="hidden" name="parent_id" value="<%= parent_id %>">
  <div>
    <%= f.text_area :body,
        placeholder: "Write a reply...",
        rows: 3,
        class: "block w-full rounded-lg border border-gray-300 text-gray-900 placeholder:text-gray-400 focus:border-pink-500 focus:ring-pink-500 text-sm p-3" %>
  </div>
  <% if post.errors.any? %>
    <div class="text-pink-600 text-sm">
      <% post.errors.full_messages.each do |message| %>
        <p><%= message %></p>
      <% end %>
    </div>
  <% end %>
  <div class="flex justify-end gap-2">
    <button type="button" data-action="click->post-replies#hideReplyForm" class="px-3 py-1.5 text-sm text-gray-600 hover:text-gray-800 cursor-pointer">Cancel</button>
    <%= render "shared/button", text: "Reply", variant: "primary", size: "small", type: :submit %>
  </div>
<% end %>
