<div data-controller="mobile-nav" class="fixed inset-x-0 top-0 z-30 border-b border-pink-100 bg-white lg:hidden">
  <div class="flex items-center justify-between px-4 py-3">
    <button type="button" data-action="mobile-nav#toggle" class="flex items-center gap-3">
      <%= image_tag "/icon.png", alt: "CocoScout", class: "h-10 w-10" %>
      <span class="text-xl text-pink-500 coustard-regular">CocoScout</span>
    </button>
  </div>
  <div data-mobile-nav-target="panel" class="hidden border-t border-pink-100 bg-white px-4 pb-4">
    <% if Current.production.present? && !Current.production.new_record? %>
      <div class="py-4">
        <div class="text-xs uppercase tracking-wide text-slate-400">Current production</div>
        <%= link_to manage_production_path(Current.production), class: "mt-2 block rounded-lg border border-pink-100 bg-pink-50 px-4 py-3 text-sm font-semibold text-pink-600" do %>
          <div class="truncate"><%= Current.production.name %></div>
          <span class="text-xs font-medium text-pink-400">View dashboard</span>
        <% end %>
      </div>
      <div class="grid gap-2">
        <%= link_to "Shows", manage_production_shows_path(Current.production), class: "rounded-md border border-slate-200 px-4 py-2 text-sm font-medium text-slate-700 hover:border-pink-300 hover:text-pink-600" %>
        <%= link_to "Casting", manage_production_casts_path(Current.production), class: "rounded-md border border-slate-200 px-4 py-2 text-sm font-medium text-slate-700 hover:border-pink-300 hover:text-pink-600" %>
        <%= link_to "Roles", manage_production_roles_path(Current.production), class: "rounded-md border border-slate-200 px-4 py-2 text-sm font-medium text-slate-700 hover:border-pink-300 hover:text-pink-600" %>
        <%= link_to "Auditions", manage_production_auditions_path(Current.production), class: "rounded-md border border-slate-200 px-4 py-2 text-sm font-medium text-slate-700 hover:border-pink-300 hover:text-pink-600" %>
      </div>
    <% else %>
      <div class="py-4">
        <%= link_to "Productions", manage_productions_path, class: "block rounded-md border border-slate-200 px-4 py-3 text-sm font-medium text-slate-700 hover:border-pink-300 hover:text-pink-600" %>
      </div>
    <% end %>

    <div class="mt-6 grid gap-2">
      <%= link_to "People", manage_people_path, class: "rounded-md border border-slate-200 px-4 py-2 text-sm font-medium text-slate-700 hover:border-pink-300 hover:text-pink-600" %>
      <%= link_to "Team", manage_team_index_path, class: "rounded-md border border-slate-200 px-4 py-2 text-sm font-medium text-slate-700 hover:border-pink-300 hover:text-pink-600" %>
      <%= link_to "Locations", manage_locations_path, class: "rounded-md border border-slate-200 px-4 py-2 text-sm font-medium text-slate-700 hover:border-pink-300 hover:text-pink-600" %>
    </div>

    <div class="mt-2">
        <%= link_to "Switch production", manage_productions_path, class: "text-sm font-medium text-pink-500 underline" %>
    </div>

    <div class="mt-4 flex items-center justify-between rounded-md bg-pink-500 px-4 py-3">
        <%= link_to "Exit Dashboard", my_dashboard_path, class: "text-sm font-medium text-white" %>
        <%= link_to "Sign Out", signout_path, class: "text-sm font-medium text-white" %>
    </div>
  </div>
</div>
