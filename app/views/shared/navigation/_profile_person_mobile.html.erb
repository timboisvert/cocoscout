<div data-controller="mobile-nav" class="fixed inset-x-0 top-0 z-30 border-b border-pink-100 bg-white lg:hidden">
  <div class="flex items-center justify-between px-3 py-2">
    <button type="button" data-action="mobile-nav#toggle" class="flex items-center">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5 text-pink-500">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
      </svg>
    </button>
    <div class="absolute left-1/2 transform -translate-x-1/2 flex items-center gap-1.5">
      <%= link_to my_dashboard_path, class: "flex items-center gap-1.5" do %>
        <%= image_tag "/icon.png", alt: "CocoScout", class: "h-5 w-5" %>
        <span class="text-lg text-pink-500 coustard-regular">CocoScout</span>
      <% end %>
    </div>
    <div class="w-5"></div>
  </div>

  <div data-mobile-nav-target="panel" class="hidden fixed inset-0 top-[44px] bg-white overflow-y-auto">
    <div class="flex flex-col min-h-full">
      <div class="flex-1 px-3 py-3">

        <!-- Impersonation Banner -->
        <% if impersonating? %>
          <div class="mb-3 rounded-lg border border-yellow-300 bg-yellow-50 px-3 py-2">
            <div class="flex items-center justify-between">
              <div>
                <span class="text-[10px] font-semibold text-yellow-800 uppercase">Impersonating:</span>
                <span class="text-xs font-medium text-yellow-900 ml-1"><%= Current.user.person&.name || Current.user.email_address %></span>
              </div>
              <%= link_to "Stop", stop_impersonating_user_path, data: { turbo_method: :post }, class: "text-xs font-semibold text-yellow-800 underline" %>
            </div>
          </div>
        <% end %>

        <!-- Dashboard Switcher Dropdown -->
        <div data-controller="dropdown" class="mb-3">
          <button type="button" data-action="dropdown#toggle" class="w-full flex items-center justify-between px-3 py-2 rounded border border-gray-200 bg-white">
            <span class="text-sm font-semibold text-gray-900">My Profile</span>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4 text-gray-400">
              <path stroke-linecap="round" stroke-linejoin="round" d="m19.5 8.25-7.5 7.5-7.5-7.5" />
            </svg>
          </button>
          <div data-dropdown-target="menu" class="hidden mt-1 rounded border border-gray-200 bg-white shadow-lg overflow-hidden">
            <%= link_to my_dashboard_path, class: "flex items-center gap-2 px-3 py-2 hover:bg-gray-50 text-sm font-medium text-gray-700" do %>
              Talent Dashboard
            <% end %>
            <%= link_to manage_path, data: { turbo: false }, class: "flex items-center gap-2 px-3 py-2 hover:bg-gray-50 border-t border-gray-100 text-sm font-medium text-gray-700" do %>
              Production Dashboard
            <% end %>
          </div>
        </div>

        <!-- Profile Selector (Accordion) -->
        <%
          all_profiles = Current.user.people.active.includes(:profile_headshots).order(:created_at)
          group_memberships = Current.user.person&.groups&.active || []
          has_multiple_options = all_profiles.count > 1 || group_memberships.any?
          current_person = @person || Current.user.person
          other_profiles = all_profiles.reject { |p| p.id == current_person&.id }
        %>
        <% if has_multiple_options %>
          <div data-controller="dropdown" class="mb-3">
            <button type="button" data-action="dropdown#toggle" class="w-full flex items-center justify-between px-3 py-2 rounded border border-gray-200 bg-white">
              <div class="flex items-center gap-2 min-w-0 flex-1">
                <% headshot = current_person&.primary_headshot&.image %>
                <% if headshot&.attached? %>
                  <%= image_tag headshot.variant(resize_to_fill: [28, 28]), class: "w-7 h-7 rounded object-cover flex-shrink-0" %>
                <% else %>
                  <div class="w-7 h-7 rounded bg-pink-100 flex items-center justify-center text-pink-600 font-bold text-[10px] flex-shrink-0">
                    <%= current_person&.initials || "?" %>
                  </div>
                <% end %>
                <span class="text-xs font-semibold text-gray-900 truncate"><%= current_person&.name || "My Profile" %></span>
              </div>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4 text-gray-400 flex-shrink-0">
                <path stroke-linecap="round" stroke-linejoin="round" d="m19.5 8.25-7.5 7.5-7.5-7.5" />
              </svg>
            </button>
            <div data-dropdown-target="menu" class="hidden mt-1 rounded border border-gray-200 bg-white shadow-lg overflow-hidden">
              <% other_profiles.each do |profile| %>
                <%= link_to edit_profile_path(profile), data: { turbo: false }, class: "flex items-center gap-2 px-3 py-2 hover:bg-gray-50 border-b border-gray-100 last:border-b-0" do %>
                  <% profile_headshot = profile.primary_headshot&.image %>
                  <% if profile_headshot&.attached? %>
                    <%= image_tag profile_headshot.variant(resize_to_fill: [24, 24]), class: "w-6 h-6 rounded object-cover flex-shrink-0" %>
                  <% else %>
                    <div class="w-6 h-6 rounded bg-pink-100 flex items-center justify-center text-pink-600 font-bold text-[9px] flex-shrink-0">
                      <%= profile.initials %>
                    </div>
                  <% end %>
                  <span class="text-xs font-medium text-gray-700"><%= profile.name %></span>
                <% end %>
              <% end %>
              <% group_memberships.each do |group| %>
                <%= link_to edit_group_path(group), data: { turbo: false }, class: "flex items-center gap-2 px-3 py-2 hover:bg-gray-50 border-b border-gray-100 last:border-b-0" do %>
                  <div class="w-6 h-6 rounded bg-blue-100 flex items-center justify-center text-blue-600 font-bold text-[9px] flex-shrink-0">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-3"><path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 0 0 3.741-.479 3 3 0 0 0-4.682-2.72m.94 3.198.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0 1 12 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 0 1 6 18.719m12 0a5.971 5.971 0 0 0-.941-3.197m0 0A5.995 5.995 0 0 0 12 12.75a5.995 5.995 0 0 0-5.058 2.772m0 0a3 3 0 0 0-4.681 2.72 8.986 8.986 0 0 0 3.74.477m.94-3.197a5.971 5.971 0 0 0-.94 3.197M15 6.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm6 3a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Zm-13.5 0a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Z" /></svg>
                  </div>
                  <span class="text-xs font-medium text-gray-700"><%= group.name %></span>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>

        <!-- Profile Section Links -->
        <div class="space-y-1 mb-3">
          <a href="#basic-info" data-action="click->mobile-nav#toggle" class="block px-2 py-2 rounded hover:bg-gray-50 text-sm font-medium text-gray-700">
            Basic Info
          </a>
          <a href="#bio" data-action="click->mobile-nav#toggle" class="block px-2 py-2 rounded hover:bg-gray-50 text-sm font-medium text-gray-700">
            Bio
          </a>
          <a href="#social-media" data-action="click->mobile-nav#toggle" class="block px-2 py-2 rounded hover:bg-gray-50 text-sm font-medium text-gray-700">
            Links
          </a>
          <a href="#headshots" data-action="click->mobile-nav#toggle" class="block px-2 py-2 rounded hover:bg-gray-50 text-sm font-medium text-gray-700">
            Headshots
          </a>
          <a href="#videos" data-action="click->mobile-nav#toggle" class="block px-2 py-2 rounded hover:bg-gray-50 text-sm font-medium text-gray-700">
            Videos
          </a>
          <a href="#performance-history" data-action="click->mobile-nav#toggle" class="block px-2 py-2 rounded hover:bg-gray-50 text-sm font-medium text-gray-700">
            History
          </a>
          <a href="#training" data-action="click->mobile-nav#toggle" class="block px-2 py-2 rounded hover:bg-gray-50 text-sm font-medium text-gray-700">
            Training
          </a>
          <a href="#skills" data-action="click->mobile-nav#toggle" class="block px-2 py-2 rounded hover:bg-gray-50 text-sm font-medium text-gray-700">
            Skills
          </a>
          <a href="#resumes" data-action="click->mobile-nav#toggle" class="block px-2 py-2 rounded hover:bg-gray-50 text-sm font-medium text-gray-700">
            Resumes
          </a>
          <a href="#groups" data-action="click->mobile-nav#toggle" class="block px-2 py-2 rounded hover:bg-gray-50 text-sm font-medium text-gray-700">
            Groups
          </a>
        </div>

      </div>

      <!-- Footer Bar -->
      <div class="border-t border-gray-200 bg-gray-50 px-3 py-2">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-2 min-w-0 flex-1">
            <% if Current.user.person&.headshot&.attached? %>
              <%= image_tag Current.user.person.headshot, class: "w-7 h-7 rounded object-cover flex-shrink-0" %>
            <% else %>
              <div class="w-7 h-7 rounded bg-pink-100 text-pink-500 flex items-center justify-center font-semibold text-xs flex-shrink-0">
                <%= Current.user.person&.name&.split&.map(&:first)&.join&.upcase || Current.user.email_address[0].upcase %>
              </div>
            <% end %>
            <div class="text-xs font-medium text-gray-700 truncate"><%= Current.user.person&.name || Current.user.email_address %></div>
          </div>
          <div class="flex items-center gap-2">
            <% if Current.user.superadmin? %>
              <%= link_to "Superadmin", superadmin_path, class: "text-[10px] font-semibold text-purple-600 bg-purple-100 px-2 py-1 rounded" %>
            <% end %>
            <%= link_to signout_path, data: { turbo_prefetch: false }, class: "text-xs font-semibold text-pink-600" do %>
              Sign Out
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Smooth scroll to sections with offset for fixed header on mobile
  document.addEventListener('DOMContentLoaded', function() {
    const mobileNav = document.querySelector('[data-controller="mobile-nav"]');
    if (mobileNav) {
      mobileNav.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
          e.preventDefault();
          const targetId = this.getAttribute('href');
          const target = document.querySelector(targetId);
          if (target) {
            const headerOffset = 60;
            const elementPosition = target.getBoundingClientRect().top;
            const offsetPosition = elementPosition + window.pageYOffset - headerOffset;

            window.scrollTo({
              top: offsetPosition,
              behavior: 'smooth'
            });
          }
        });
      });
    }
  });
</script>
