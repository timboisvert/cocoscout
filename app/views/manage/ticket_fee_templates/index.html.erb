<%= render partial: "shared/top_menu", locals: {
  breadcrumbs: [
    ["Money", manage_money_index_path]
  ],
  text: "Ticket Fee Templates",
  links: []
} %>

<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="mb-8">
    <h1 class="text-2xl font-bold text-gray-900 mb-2">Ticket Fee Templates</h1>
    <p class="text-gray-600">
      Create reusable fee templates for ticket sales (e.g., Eventbrite fees, credit card processing).
      These can be applied to shows in the financial worksheet.
    </p>
  </div>

  <%# New Template Form %>
  <div class="bg-white rounded-lg border border-gray-200 p-6 mb-8">
    <h2 class="text-lg font-semibold text-gray-900 mb-4">Add New Template</h2>
    <%= form_with model: [:manage, TicketFeeTemplate.new], local: true, class: "space-y-4" do |form| %>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div class="md:col-span-1">
          <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :name, class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500", placeholder: "e.g., Eventbrite" %>
        </div>
        <div>
          <%= form.label :flat_per_ticket, "Flat Fee / Ticket", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <div class="relative">
            <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-500">$</span>
            <%= form.number_field :flat_per_ticket, step: 0.01, min: 0, class: "w-full rounded-lg border border-gray-300 pl-7 pr-3 py-2 focus:border-pink-500 focus:ring-pink-500", placeholder: "0.00" %>
          </div>
        </div>
        <div>
          <%= form.label :percentage, "Percentage", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <div class="relative">
            <%= form.number_field :percentage, step: 0.01, min: 0, max: 100, class: "w-full rounded-lg border border-gray-300 px-3 pr-8 py-2 focus:border-pink-500 focus:ring-pink-500", placeholder: "0.00" %>
            <span class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-500">%</span>
          </div>
        </div>
        <div class="flex items-end">
          <%= render "shared/button", text: "Add Template", variant: "primary", size: "medium", type: :submit %>
        </div>
      </div>
      <p class="text-xs text-gray-500">
        Example: For Eventbrite's standard fee of $0.68 + 3.7%, enter 0.68 for flat fee and 3.7 for percentage.
      </p>
    <% end %>
  </div>

  <%# Existing Templates %>
  <% if @ticket_fee_templates.any? %>
    <div class="bg-white rounded-lg border border-gray-200">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">Your Templates</h2>
      </div>
      <div class="divide-y divide-gray-200">
        <% @ticket_fee_templates.each do |template| %>
          <div class="px-6 py-4" data-controller="inline-edit">
            <div data-inline-edit-target="display" class="flex items-center justify-between">
              <div class="flex items-center gap-4">
                <div>
                  <div class="font-medium text-gray-900 flex items-center gap-2">
                    <%= template.name %>
                    <% if template.is_default? %>
                      <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-pink-100 text-pink-800">
                        Default
                      </span>
                    <% end %>
                  </div>
                  <div class="text-sm text-gray-500"><%= template.fee_description %></div>
                </div>
              </div>
              <div class="flex items-center gap-2">
                <button type="button" data-action="click->inline-edit#showEdit" class="text-gray-400 hover:text-pink-600 p-1 cursor-pointer">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
                  </svg>
                </button>
                <%= button_to manage_ticket_fee_template_path(template), method: :delete, data: { turbo_confirm: "Delete this template?" }, class: "text-gray-400 hover:text-red-500 p-1 cursor-pointer" do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                  </svg>
                <% end %>
              </div>
            </div>

            <%# Edit Form (hidden by default) %>
            <div data-inline-edit-target="form" class="hidden">
              <%= form_with model: [:manage, template], local: true, class: "space-y-4" do |form| %>
                <div class="grid grid-cols-1 md:grid-cols-5 gap-4">
                  <div>
                    <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
                    <%= form.text_field :name, class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500" %>
                  </div>
                  <div>
                    <%= form.label :flat_per_ticket, "Flat / Ticket", class: "block text-sm font-medium text-gray-700 mb-1" %>
                    <div class="relative">
                      <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-500">$</span>
                      <%= form.number_field :flat_per_ticket, step: 0.01, min: 0, class: "w-full rounded-lg border border-gray-300 pl-7 pr-3 py-2 focus:border-pink-500 focus:ring-pink-500" %>
                    </div>
                  </div>
                  <div>
                    <%= form.label :percentage, class: "block text-sm font-medium text-gray-700 mb-1" %>
                    <div class="relative">
                      <%= form.number_field :percentage, step: 0.01, min: 0, max: 100, class: "w-full rounded-lg border border-gray-300 px-3 pr-8 py-2 focus:border-pink-500 focus:ring-pink-500" %>
                      <span class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-500">%</span>
                    </div>
                  </div>
                  <div class="flex items-center gap-2 pt-6">
                    <%= form.check_box :is_default, class: "h-4 w-4 text-pink-600 border-gray-300 rounded focus:ring-pink-500 accent-pink-600" %>
                    <%= form.label :is_default, "Default", class: "text-sm text-gray-700" %>
                  </div>
                  <div class="flex items-end gap-2">
                    <%= render "shared/button", text: "Save", variant: "primary", size: "small", type: :submit %>
                    <button type="button" data-action="click->inline-edit#hideEdit" class="text-gray-500 hover:text-gray-700 px-3 py-1.5 text-sm cursor-pointer">
                      Cancel
                    </button>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="bg-gray-50 rounded-lg border border-gray-200 p-8 text-center">
      <svg class="w-12 h-12 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      <p class="text-gray-600">No fee templates yet. Add one above to get started.</p>
    </div>
  <% end %>
</div>
