<%= form_with model: provider, url: provider.persisted? ? manage_ticketing_provider_path(provider) : manage_create_ticketing_provider_path, class: "space-y-6" do |form| %>
  <% if provider.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <ul class="list-disc list-inside text-red-700 text-sm">
        <% provider.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="bg-white rounded-lg border border-gray-200 p-6 space-y-4">
    <h3 class="font-medium text-gray-900 mb-4">Provider Details</h3>

    <div>
      <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :name, class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500", placeholder: "e.g., Eventbrite - Main Account" %>
    </div>

    <div>
      <%= form.label :provider_type, "Platform", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.select :provider_type, [["Eventbrite", "eventbrite"], ["Ticket Tailor", "ticket_tailor"]], {}, class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500" %>
    </div>

    <div>
      <%= form.label :status, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.select :status, [["Active", "active"], ["Inactive", "inactive"]], {}, class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500" %>
    </div>
  </div>

  <div class="bg-white rounded-lg border border-gray-200 p-6 space-y-4">
    <h3 class="font-medium text-gray-900 mb-4">API Credentials</h3>
    <p class="text-sm text-gray-500 mb-4">Enter your API credentials from your ticketing platform. These are encrypted and stored securely.</p>

    <div>
      <%= form.label :api_key, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :api_key, class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500 font-mono text-sm", placeholder: "Your API key" %>
    </div>

    <div>
      <%= form.label :api_secret, "API Secret (optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :api_secret, class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500 font-mono text-sm", placeholder: "Your API secret" %>
    </div>

    <div>
      <%= form.label :webhook_secret, "Webhook Secret (optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :webhook_secret, class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500 font-mono text-sm", placeholder: "For receiving real-time updates" %>
      <p class="text-xs text-gray-500 mt-1">Used to verify incoming webhook requests from the provider.</p>
    </div>
  </div>

  <div class="flex justify-between items-center">
    <% if provider.persisted? %>
      <%= link_to manage_ticketing_provider_path(provider) do %>
        <%= render "shared/button", text: "Cancel", variant: "ghost-cancel", type: :button %>
      <% end %>
    <% else %>
      <%= link_to manage_ticketing_providers_path do %>
        <%= render "shared/button", text: "Cancel", variant: "ghost-cancel", type: :button %>
      <% end %>
    <% end %>

    <%= render "shared/button", text: provider.persisted? ? "Update Provider" : "Add Provider", variant: "primary", type: :submit %>
  </div>
<% end %>
