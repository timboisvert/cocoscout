<%#
  Nested Reply Partial - Renders a reply and its children recursively
  with visual tree lines showing the threading structure

  depth: Current nesting level (0 = top level reply)
  reply: The message to render
%>

<%
  sender_person = reply.sender.is_a?(Person) ? reply.sender : reply.sender&.person
  nested_replies = reply.child_messages.includes(:sender, :child_messages).order(:created_at)
  max_depth = 4  # Maximum visual nesting before we stop indenting
  visual_depth = [depth, max_depth].min

  # Get the root message for the reply form
  root_message = reply
  root_message = root_message.parent_message while root_message.parent_message.present?

  # Determine the reply path based on current context
  is_manage = controller.controller_path.start_with?("manage")
  reply_path = is_manage ? reply_manage_message_path(root_message) : reply_my_message_path(root_message)

  # Check if this is the last item in the collection
  is_last = local_assigns[:reply_counter] == (local_assigns[:reply_iteration] || 1) - 1 rescue false

  # Check if sender identity selector should be shown (in /manage with production context)
  show_sender_selector = is_manage && root_message.production.present?
%>

<div class="relative" data-controller="reply-form" data-reply-form-parent-id-value="<%= reply.id %>" data-message-id="<%= reply.id %>">
  <% if depth > 0 %>
    <%# Tree connector: vertical line + horizontal branch %>
    <div class="absolute left-0 top-0 bottom-0" style="width: 20px;">
      <%# Vertical line - full height unless last item %>
      <div class="absolute left-2 top-0 w-0.5 bg-gray-300 <%= is_last ? 'h-5' : 'h-full' %>"></div>
      <%# Horizontal branch to the card %>
      <div class="absolute left-2 top-5 h-0.5 bg-gray-300" style="width: 14px;"></div>
    </div>
  <% end %>

  <div class="<%= 'ml-6' if depth > 0 %>">
    <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
      <div class="p-4">
        <div class="flex items-start gap-3">
          <%# Avatar - uses shared partial for production team vs personal avatar %>
          <%= render "shared/messages/message_avatar", message: reply, sender_person: sender_person, size: :reply %>

          <div class="flex-1 min-w-0">
            <div class="flex items-center justify-between">
              <div class="flex items-center gap-2 flex-wrap">
                <span class="font-semibold text-gray-900 text-sm"><%= reply.sender_name %></span>
                <span class="text-xs text-gray-500"><%= time_ago_in_words(reply.created_at) %> ago</span>
                <% if depth > 0 %>
                  <span class="text-xs text-gray-400">
                    Â· replying to <%= reply.parent_message&.sender_name %>
                  </span>
                <% end %>
              </div>

              <%# Actions menu - only show if user can delete %>
              <% if !reply.deleted? && reply.can_be_deleted_by?(Current.user) %>
                <div class="relative" data-controller="dropdown">
                  <button
                    type="button"
                    class="p-1 text-gray-400 hover:text-gray-600 rounded hover:bg-gray-100 transition-colors cursor-pointer"
                    data-action="click->dropdown#toggle"
                    title="More options">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"/>
                    </svg>
                  </button>
                  <div
                    data-dropdown-target="menu"
                    class="hidden absolute right-0 top-full mt-1 w-32 bg-white rounded-lg shadow-lg border border-gray-200 py-1 z-50">
                    <%= link_to (is_manage ? manage_message_path(reply) : my_message_path(reply)),
                        method: :delete,
                        data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this reply?" },
                        class: "flex items-center gap-2 px-3 py-2 text-sm text-red-600 hover:bg-red-50 transition-colors cursor-pointer" do %>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                      </svg>
                      Delete
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>

            <% if reply.deleted? %>
              <div class="mt-1 text-sm text-gray-400 italic">
                This message was deleted
              </div>
            <% else %>
              <div class="mt-1 prose prose-sm max-w-none text-gray-800">
                <%= auto_link_content(reply.body) %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <%# Action Bar: Reactions only for deleted, Reactions + Reply for active %>
      <% if reply.deleted? %>
        <div class="px-3 py-1.5 bg-gray-50 border-t border-gray-100">
          <%= render "shared/messages/reactions", message: reply %>
        </div>
      <% else %>
        <div class="px-3 py-1.5 bg-gray-50 border-t border-gray-100 flex items-center justify-between">
          <%= render "shared/messages/reactions", message: reply %>
          <button
            type="button"
            class="text-sm font-medium text-gray-500 hover:text-pink-600 transition-colors cursor-pointer"
            data-action="click->reply-form#toggle">
            Reply
          </button>
        </div>
      <% end %>

      <%# Images if any (hide for deleted) %>
      <% if !reply.deleted? && reply.images.attached? %>
        <%= render "shared/messages/image_gallery", message: reply, style: :lightbox %>
      <% end %>

      <%# Inline Reply Form (hidden by default, hide for deleted) %>
      <% unless reply.deleted? %>
      <div data-reply-form-target="form" class="hidden border-t border-gray-100 p-4 bg-gray-50" data-controller="reply-sender">
        <%= form_with url: reply_path, method: :post, class: "space-y-3", data: { turbo: false, action: "turbo:submit-end->reply-form#submitted" }, id: "nested-reply-form-#{reply.id}" do %>
          <%= hidden_field_tag :parent_message_id, reply.id %>

          <% if show_sender_selector %>
            <%# Sender Identity Selector %>
            <div class="pb-3 mb-3 border-b border-gray-200">
              <div class="flex items-center gap-2">
                <span class="text-xs font-medium text-gray-500">From:</span>
                <div class="relative flex-1" data-controller="dropdown">
                  <input type="hidden" name="sender_identity" value="production_team" data-reply-sender-target="input">
                  <button type="button"
                          data-action="click->dropdown#toggle"
                          data-reply-sender-target="button"
                          class="flex items-center justify-between gap-2 w-full text-left px-2 py-1.5 rounded-lg border border-gray-200 hover:border-gray-300 hover:bg-white transition-colors cursor-pointer text-sm">
                    <div class="flex items-center gap-2">
                      <div data-reply-sender-target="icon" class="flex-shrink-0">
                        <% if root_message.production %>
                          <% nested_prod_logo = root_message.production.safe_logo_variant(:small) %>
                          <% if nested_prod_logo %>
                            <%= image_tag nested_prod_logo, alt: root_message.production.name, class: "w-5 h-5 rounded object-cover" %>
                          <% else %>
                            <div class="w-5 h-5 rounded bg-gradient-to-br from-pink-100 to-pink-50 flex items-center justify-center border border-pink-200">
                              <span class="text-[9px] font-bold text-pink-600"><%= root_message.production.initials %></span>
                            </div>
                          <% end %>
                        <% else %>
                          <div class="w-5 h-5 rounded bg-pink-500 flex items-center justify-center">
                            <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                          </div>
                        <% end %>
                      </div>
                      <span data-reply-sender-target="label" class="font-medium text-gray-900"><%= root_message.production&.name || "Production Team" %></span>
                    </div>
                    <svg class="w-3.5 h-3.5 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                    </svg>
                  </button>
                  <div data-dropdown-target="menu" class="hidden absolute left-0 right-0 mt-1 bg-white rounded-lg shadow-lg border border-gray-200 py-1 z-50">
                    <button type="button"
                            data-action="click->reply-sender#select click->dropdown#close"
                            data-value="production_team"
                            data-label="<%= root_message.production&.name || 'Production Team' %>"
                            class="w-full flex items-center gap-2 px-3 py-2 hover:bg-pink-50 transition-colors cursor-pointer text-left">
                      <% if root_message.production %>
                        <% nested_prod_logo2 = root_message.production.safe_logo_variant(:small) %>
                        <% if nested_prod_logo2 %>
                          <%= image_tag nested_prod_logo2, alt: root_message.production.name, class: "w-5 h-5 rounded object-cover flex-shrink-0" %>
                        <% else %>
                          <div class="w-5 h-5 rounded bg-gradient-to-br from-pink-100 to-pink-50 flex items-center justify-center flex-shrink-0 border border-pink-200">
                            <span class="text-[9px] font-bold text-pink-600"><%= root_message.production.initials %></span>
                          </div>
                        <% end %>
                      <% else %>
                        <div class="w-5 h-5 rounded bg-pink-500 flex items-center justify-center flex-shrink-0">
                          <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z" />
                          </svg>
                        </div>
                      <% end %>
                      <div>
                        <div class="text-sm font-medium text-gray-900"><%= root_message.production&.name || "Production Team" %></div>
                        <div class="text-xs text-gray-500">Visible to team</div>
                      </div>
                    </button>
                    <button type="button"
                            data-action="click->reply-sender#select click->dropdown#close"
                            data-value="personal"
                            data-label="<%= Current.user&.person&.name || 'Just Me' %>"
                            class="w-full flex items-center gap-2 px-3 py-2 hover:bg-pink-50 transition-colors cursor-pointer text-left border-t border-gray-100">
                      <% nested_current_person = Current.user&.person %>
                      <% if nested_current_person %>
                        <% nested_sender_headshot = nested_current_person.safe_headshot_variant(:thumb) %>
                        <% if nested_sender_headshot %>
                          <%= image_tag nested_sender_headshot, alt: nested_current_person.name, class: "w-5 h-5 rounded object-cover flex-shrink-0" %>
                        <% else %>
                          <div class="w-5 h-5 rounded bg-gray-200 flex items-center justify-center flex-shrink-0">
                            <span class="text-[9px] font-bold text-gray-600"><%= nested_current_person.initials %></span>
                          </div>
                        <% end %>
                      <% else %>
                        <div class="w-5 h-5 rounded bg-gray-400 flex items-center justify-center flex-shrink-0">
                          <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                          </svg>
                        </div>
                      <% end %>
                      <div>
                        <div class="text-sm font-medium text-gray-900"><%= Current.user&.person&.name || "Just Me" %></div>
                        <div class="text-xs text-gray-500">Private reply</div>
                      </div>
                    </button>
                  </div>
                </div>
              </div>
            </div>
          <% end %>

          <div class="flex items-start gap-3">
            <% current_person = Current.user&.person %>
            <% if current_person && !show_sender_selector %>
              <%# Only show headshot when no sender identity selector (personal messages) %>
              <% headshot_variant = current_person.safe_headshot_variant(:thumb) %>
              <% if headshot_variant %>
                <%= image_tag headshot_variant, alt: current_person.name, class: "w-8 h-8 rounded-lg object-cover flex-shrink-0" %>
              <% else %>
                <div class="w-8 h-8 rounded-lg bg-gray-200 flex items-center justify-center text-gray-600 font-bold text-xs flex-shrink-0">
                  <%= current_person.initials %>
                </div>
              <% end %>
            <% end %>
            <div class="flex-1">
              <%= rich_text_area_tag :body, nil, class: "w-full min-h-[80px] text-sm", placeholder: "Write a reply to #{reply.sender_name}...", data: { reply_form_target: "body", action: "trix-change->reply-form#typing" } %>
            </div>
          </div>
          <div class="flex justify-end gap-2">
            <button type="button" class="px-3 py-1.5 text-sm text-gray-600 hover:text-gray-800 cursor-pointer" data-action="click->reply-form#cancel">
              Cancel
            </button>
            <%= render "shared/button", text: "Reply", variant: "primary", size: "small", type: :submit %>
          </div>
        <% end %>
      </div>
      <% end %>
    </div>

    <%# Nested replies - wrap in relative container for tree lines %>
    <% if nested_replies.any? %>
      <div class="relative mt-3 space-y-3" data-nested-replies="true">
        <%= render partial: "shared/messages/nested_reply", collection: nested_replies, as: :reply, locals: { depth: [depth + 1, max_depth].min } %>
      </div>
    <% end %>
  </div>
</div>
