<%= render layout: "manage/contract_wizard/wizard_layout", locals: { step_name: "Documents" } do %>
  <h2 class="text-xl font-bold text-gray-900 mb-2 coustard-regular">Contract Documents</h2>
  <p class="text-gray-600 mb-6">Upload a copy of the signed contract or any related documents.</p>

  <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
    <div class="flex items-start">
      <%= icon("info", class: "w-5 h-5 text-blue-600 mt-0.5 mr-3") %>
      <div class="text-sm text-blue-800">
        <p class="font-medium">This step is optional</p>
        <p class="mt-1">If you have a signed contract PDF or other documents, you can upload them here for your records. You can also add documents later.</p>
      </div>
    </div>
  </div>

  <%# Existing documents %>
  <% if @documents.any? %>
    <div class="mb-6">
      <h3 class="text-sm font-medium text-gray-700 mb-3">Uploaded Documents</h3>
      <div class="space-y-2">
        <% @documents.each do |doc| %>
          <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg border border-gray-200">
            <div class="flex items-center gap-3">
              <%= icon("file-text", class: "w-5 h-5 text-gray-400") %>
              <div>
                <div class="font-medium text-gray-900"><%= doc.name %></div>
                <div class="text-xs text-gray-500">
                  Uploaded <%= time_ago_in_words(doc.created_at) %> ago
                  <% if doc.file.attached? %>
                    Â· <%= number_to_human_size(doc.file.byte_size) %>
                  <% end %>
                </div>
              </div>
            </div>
            <div class="flex items-center gap-2">
              <% if doc.file.attached? %>
                <%= link_to rails_blob_path(doc.file, disposition: "attachment"), class: "text-pink-600 hover:text-pink-700" do %>
                  <%= icon("download", class: "w-4 h-4") %>
                <% end %>
              <% end %>
              <%= button_to manage_delete_document_contract_wizard_path(@contract, document_id: doc.id),
                method: :delete,
                data: { turbo_confirm: "Delete this document?" },
                class: "text-gray-400 hover:text-red-600" do %>
                <%= icon("trash", class: "w-4 h-4") %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <%# Upload form %>
  <%= form_with url: manage_documents_contract_wizard_path(@contract), method: :post, multipart: true, local: true, data: { controller: "file-upload" } do |form| %>
    <div class="border-2 border-dashed border-gray-300 rounded-lg p-6 text-center hover:border-pink-400 transition-colors"
         data-file-upload-target="dropzone">
      <div class="space-y-4">
        <%= icon("upload", class: "w-10 h-10 text-gray-400 mx-auto") %>
        <div>
          <label class="text-pink-600 hover:text-pink-700 cursor-pointer font-medium">
            Choose a file to upload
            <%= file_field_tag "contract_document[file]",
              accept: ".pdf,.doc,.docx,.jpg,.jpeg,.png",
              class: "sr-only",
              data: { file_upload_target: "input", action: "change->file-upload#fileSelected" } %>
          </label>
          <p class="text-sm text-gray-500 mt-1">PDF, DOC, DOCX, or images up to 10MB</p>
        </div>
        <div class="max-w-xs mx-auto space-y-3">
          <div data-file-upload-target="filename" class="hidden text-sm font-medium text-gray-900 bg-gray-100 rounded-lg px-3 py-2"></div>
          <%= text_field_tag "contract_document[name]", nil,
            placeholder: "Document name (optional)",
            class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-pink-500" %>
        </div>
      </div>
    </div>

    <div class="mt-8 flex justify-between">
      <%= render "shared/button", text: "Back", variant: "secondary", size: "medium", icon: "arrow-left", path: manage_payments_contract_wizard_path(@contract) %>
      <div class="flex items-center gap-3">
        <%= render "shared/button", text: "Skip", variant: "ghost", size: "medium", path: manage_review_contract_wizard_path(@contract) %>
        <%= render "shared/button", text: "Upload & Continue", variant: "primary", size: "medium", type: :submit %>
      </div>
    </div>
  <% end %>
<% end %>
