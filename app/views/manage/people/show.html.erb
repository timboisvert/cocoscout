<% content_for :title, @person.name %>

<div class="w-full">

  <%= render partial: "shared/notice", locals: { notice: notice } %>

  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["People", manage_people_path]
    ],
    text: @person.name,
    links: []
  } %>

  <div id="<%= dom_id @person %>" class="w-full sm:w-auto my-5 space-y-5 mb-30">
    <div class="flex flex-col sm:flex-row w-full gap-6">
      <div class="w-full sm:w-[60%] h-screen bg-gray-100">
        <% if @person.resume.attached? %>
          <embed src="<%= url_for(@person.resume) %>" type="application/pdf" width="100%" height="100%" />
        <% else %>
          <p class="text-center mt-10">No resume found</p>
        <% end %>
      </div>
      <div class="w-full sm:w-[40%] flex flex-col">

        <%= render "shared/person_card", person: @person, show_delete: true %>

        <div class="mt-2 p-3 border border-gray-200 rounded-lg hover:border-gray-400 transition-all">

          <div class="text-xl font-bold text-gray-900">Audition Requests</div>

          <% if @person.audition_requests.any? %>
            <% @person.audition_requests.each do |audition_request| %>
              <div class="my-2">
                <% if audition_request.call_to_audition %>
                  <% if audition_request.call_to_audition.production %>
                    <%= link_to audition_request.call_to_audition.production.name,
                          manage_production_call_to_audition_audition_request_path(
                            audition_request.call_to_audition.production, audition_request.call_to_audition, audition_request),
                          class: "text-pink-500 hover:underline" %>
                  <% end %>
                <% end %>
              </div>
            <% end %>
          <% else %>
            <p class="mt-2">No audition requests found.</p>
          <% end %>

        </div>


      </div>

    </div>


</div>
