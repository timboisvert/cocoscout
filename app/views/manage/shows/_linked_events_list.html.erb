<%# List of linked events for the main tab - refreshable via Turbo %>
<% other_linked_shows = show.linked? ? show.event_linkage.shows.where.not(id: show.id).order(:date_and_time) : [] %>

<%= turbo_frame_tag "linked-events-list", target: "_top" do %>
  <% if other_linked_shows.any? %>
    <div class="space-y-1 mb-4">
      <% other_linked_shows.each do |linked_show| %>
        <%= render partial: "shared/show_row", locals: {
          show: linked_show,
          link_path: manage_edit_show_path(production, linked_show),
          show_location: true,
          show_production: false,
          right_panel: nil
        } %>
      <% end %>
    </div>
  <% else %>
    <p class="text-sm text-gray-500 mb-4">No other events linked yet.</p>
  <% end %>
<% end %>
