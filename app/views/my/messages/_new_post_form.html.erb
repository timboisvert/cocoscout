<%= form_with url: my_create_message_path(production_id: production.id), method: :post, local: false, class: "space-y-3" do |f| %>
  <div>
    <%= f.text_area :body,
        placeholder: "Share something with #{production.name}...",
        rows: 2,
        class: "block w-full rounded-lg border border-gray-300 px-3 py-2 text-gray-900 placeholder:text-gray-400 focus:border-pink-500 focus:ring-pink-500 resize-none",
        required: true %>
  </div>
  <div class="flex justify-end">
    <%= render "shared/button", text: "Post", variant: "primary", size: "small", type: :submit %>
  </div>
<% end %>
