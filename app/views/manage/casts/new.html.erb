<% content_for :title, "Casting" %>

<div class="w-full">
  <%= render partial: "shared/notice", locals: { notice: notice } %>
  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Casting", manage_production_casts_path(@production)]
    ],
    text: "Create a Cast",
    links: []
  } %>

  <%= form_with(model: [:manage, @production, @cast], class: "contents") do |form| %>

    <div class="my-5">
        <% if @cast.errors[:name].none? %>
            <%= form.label :name, "Cast Name" %>
        <% else %>
            <%= form.label :name, "Cast Name is required", class: "text-pink-600"  %>
        <% end %>
      <span class="text-sm text-gray-500"> (e.g. "Main Cast", "Understudies")</span>
     <%= form.text_field :name, class: ["block shadow-sm rounded-lg border px-3 py-2 mt-2 w-full", {"border-gray-400": @cast.errors[:name].none?, "border-pink-500": @cast.errors[:name].any?}] %>
    </div>

    <div class="w-full border-t border-gray-200 pt-5 my-5">
      <%= form.submit "Create Cast", class: "sm:w-auto rounded-lg px-3.5 py-2.5 text-white bg-pink-500 hover:bg-pink-600 inline-block font-medium cursor-pointer" %>
      <%= link_to "Back", 'javascript:history.back()', class: "sm:w-auto rounded-lg px-3.5 py-2.5 text-pink-500 bg-gray-200 hover:bg-pink-600 hover:text-white inline-block font-medium cursor-pointer" %>
    </div>

  <% end %>


</div>
