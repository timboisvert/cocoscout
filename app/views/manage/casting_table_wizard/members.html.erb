<% content_for :title, "Create Casting Table - Select Members" %>

<div class="w-full">
  <%= render partial: "shared/notice", locals: { notice: notice, alert: alert } %>
  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Casting", manage_casting_path],
      ["Casting Tables", manage_casting_tables_path]
    ],
    text: "Create Casting Table",
    links: []
  } %>

  <div class="max-w-2xl mx-auto mt-8">
    <!-- Progress Steps -->
    <div class="mb-8">
      <div class="flex items-center justify-center">
        <div class="flex items-center">
          <div class="w-8 h-8 rounded-full flex items-center justify-center text-sm font-medium bg-pink-500 text-white">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          <span class="ml-2 text-sm font-medium text-pink-500 hidden sm:inline">Productions</span>
        </div>
        <div class="flex-1 h-0.5 mx-2 bg-pink-500"></div>
        <div class="flex items-center">
          <div class="w-8 h-8 rounded-full flex items-center justify-center text-sm font-medium bg-pink-500 text-white">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          <span class="ml-2 text-sm font-medium text-pink-500 hidden sm:inline">Events</span>
        </div>
        <div class="flex-1 h-0.5 mx-2 bg-pink-500"></div>
        <div class="flex items-center">
          <div class="w-8 h-8 rounded-full flex items-center justify-center text-sm font-medium bg-pink-500 text-white">3</div>
          <span class="ml-2 text-sm font-medium text-pink-600 hidden sm:inline">Members</span>
        </div>
        <div class="flex-1 h-0.5 mx-2 bg-gray-200"></div>
        <div class="flex items-center">
          <div class="w-8 h-8 rounded-full flex items-center justify-center text-sm font-medium bg-gray-200 text-gray-600">4</div>
          <span class="ml-2 text-sm font-medium text-gray-500 hidden sm:inline">Review</span>
        </div>
      </div>
    </div>

    <!-- Step Content -->
    <div class="bg-white rounded-lg border border-gray-200 shadow-sm p-6 sm:p-8">
      <h2 class="text-xl font-bold text-gray-900 mb-2 coustard-regular">Who's being cast?</h2>
      <p class="text-gray-600 mb-6">Choose which people and groups to include in the casting table.</p>

      <%= form_with url: manage_casting_tables_members_path, method: :post, local: true, data: { controller: "option-select", "option-select-selected-value": @member_source } do |form| %>

        <!-- Member Source Selection -->
        <div class="space-y-3 mb-6">
          <div class="block cursor-pointer p-4 rounded-lg border-2 transition-colors border-gray-200 bg-gray-50 hover:border-pink-300"
               data-option-select-target="option"
               data-value="talent_pool"
               data-action="click->option-select#select">
            <input type="radio" name="member_source" value="talent_pool"
                   class="sr-only"
                   data-option-select-target="input"
                   <%= "checked" if @member_source == "talent_pool" %>>
            <div class="flex items-center gap-3">
              <div class="flex-shrink-0">
                <svg class="w-6 h-6 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
              </div>
              <div class="flex-1">
                <p class="font-medium text-gray-900">Use Talent Pool</p>
                <p class="text-sm text-gray-500 mt-0.5">
                  Include everyone from the talent pools of selected productions
                  (<%= @talent_pool_people.count + @talent_pool_groups.count %> members)
                </p>
              </div>
            </div>
          </div>

          <div class="block cursor-pointer p-4 rounded-lg border-2 transition-colors border-gray-200 bg-gray-50 hover:border-pink-300"
               data-option-select-target="option"
               data-value="manual"
               data-action="click->option-select#select">
            <input type="radio" name="member_source" value="manual"
                   class="sr-only"
                   data-option-select-target="input"
                   <%= "checked" if @member_source == "manual" %>>
            <div class="flex items-center gap-3">
              <div class="flex-shrink-0">
                <svg class="w-6 h-6 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
                </svg>
              </div>
              <div class="flex-1">
                <p class="font-medium text-gray-900">Manual Selection</p>
                <p class="text-sm text-gray-500 mt-0.5">Choose specific people and groups to include</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Manual Selection (shown when manual is selected) -->
        <div id="manual-selection" class="hidden mt-6" data-option-select-target="conditionalManual">
          <% if @talent_pool_people.any? %>
            <div class="mb-4">
              <h4 class="text-sm font-medium text-gray-700 mb-2">People</h4>
              <div class="grid grid-cols-2 sm:grid-cols-3 gap-2 max-h-60 overflow-y-auto">
                <% @talent_pool_people.each do |person| %>
                  <label class="flex items-center gap-2 p-2 rounded border border-gray-200 hover:bg-gray-50 cursor-pointer">
                    <input type="checkbox" name="person_ids[]" value="<%= person.id %>"
                           class="h-4 w-4 rounded border-gray-300 text-pink-600 focus:ring-pink-500 accent-pink-500"
                           <%= "checked" if @selected_member_ids.include?("person_#{person.id}") %>>
                    <% headshot = person.safe_headshot_variant(:thumb) %>
                    <% if headshot %>
                      <%= image_tag headshot, alt: person.name, class: "w-6 h-6 rounded-lg object-cover" %>
                    <% else %>
                      <div class="w-6 h-6 rounded-lg bg-gray-200 flex items-center justify-center">
                        <span class="text-xs font-medium text-gray-500"><%= person.initials[0] %></span>
                      </div>
                    <% end %>
                    <span class="text-sm text-gray-900 truncate"><%= person.name %></span>
                  </label>
                <% end %>
              </div>
            </div>
          <% end %>

          <% if @talent_pool_groups.any? %>
            <div>
              <h4 class="text-sm font-medium text-gray-700 mb-2">Groups</h4>
              <div class="grid grid-cols-2 sm:grid-cols-3 gap-2 max-h-40 overflow-y-auto">
                <% @talent_pool_groups.each do |group| %>
                  <label class="flex items-center gap-2 p-2 rounded border border-gray-200 hover:bg-gray-50 cursor-pointer">
                    <input type="checkbox" name="group_ids[]" value="<%= group.id %>"
                           class="h-4 w-4 rounded border-gray-300 text-pink-600 focus:ring-pink-500 accent-pink-500"
                           <%= "checked" if @selected_member_ids.include?("group_#{group.id}") %>>
                    <span class="text-sm text-gray-900 truncate"><%= group.name %></span>
                  </label>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>

        <div class="mt-8 flex justify-between">
          <%= link_to "Back", manage_casting_tables_events_path, class: "text-gray-500 hover:text-gray-700 text-sm py-2" %>
          <%= render "shared/button", text: "Next", variant: "primary", size: "medium", type: :submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>
