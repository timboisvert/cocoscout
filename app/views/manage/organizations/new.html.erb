<div class="min-h-screen bg-white">
  <!-- Header -->
  <div class="flex flex-col items-center pt-6 sm:pt-10 pb-4">
    <%= render "shared/cocoscout_logo", size: :medium %>
    <h1 class="mt-3 text-3xl sm:text-4xl coustard-regular text-pink-500">CocoScout</h1>
  </div>

  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 pb-12">
    <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-start">

      <!-- Left Column: Value Proposition -->
      <div class="order-2 lg:order-1">
        <div class="lg:sticky lg:top-8">
          <div class="bg-gradient-to-br from-pink-50 to-white border border-pink-200 rounded-lg p-6 sm:p-8 shadow-sm">
            <div class="inline-block bg-pink-100 text-pink-700 text-xs font-semibold px-3 py-1 rounded-full mb-3">
              FOR PRODUCERS, THEATER OWNERS, AND FESTIVAL ORGANIZERS
            </div>
            <h2 class="text-2xl sm:text-3xl font-bold text-slate-900 mb-3">Create your organization</h2>
            <p class="text-slate-600 mb-6">Start managing your productions, casting, and team all in one place.</p>

            <!-- For Organizations -->
            <div class="mb-6">
              <ul class="space-y-3">
                <li class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-pink-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-sm text-slate-700"><strong>Manage multiple productions</strong> with dedicated workspaces</span>
                </li>
                <li class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-pink-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-sm text-slate-700"><strong>Streamline auditions</strong> with online sign-ups and scheduling</span>
                </li>
                <li class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-pink-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-sm text-slate-700"><strong>Organize your cast & crew</strong> with built-in talent database</span>
                </li>
                <li class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-pink-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-sm text-slate-700"><strong>Schedule shows & manage calendars</strong> for your entire team</span>
                </li>
                <li class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-pink-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-sm text-slate-700"><strong>Track availability</strong> and communicate with your cast instantly</span>
                </li>
              </ul>
            </div>

            <div class="bg-white border border-pink-200 rounded-lg p-4 mt-6">
              <p class="text-xs text-slate-600">
                <strong>You're in control.</strong> As the organization owner, you can invite team members, manage permissions, and keep all your production data organized.
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Right Column: Form -->
      <div class="order-1 lg:order-2">
        <div class="bg-white border border-slate-200 rounded-lg p-6 sm:p-8 shadow-sm">
          <h2 class="text-xl sm:text-2xl font-bold text-slate-900 mb-2">Create your organization</h2>
          <p class="text-sm text-slate-600 mb-6">This will be your workspace for managing productions, casting, and your team.</p>

          <%= form_with(model: [:manage, @organization], class: "space-y-5") do |form| %>

            <!-- Organization Name -->
            <div>
              <%= form.label :name, class: "block text-sm font-medium text-slate-900 mb-1.5" do %>
                Organization Name
                <span class="text-pink-500">*</span>
              <% end %>
              <%= form.text_field :name,
                placeholder: "e.g., Acme Theater Company",
                class: "block w-full px-3 py-2.5 bg-white border #{@organization.errors[:name].any? ? 'border-pink-500 focus:ring-pink-500 focus:border-pink-500' : 'border-slate-300 focus:ring-pink-500 focus:border-pink-500'} rounded-lg shadow-sm text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 transition" %>
              <% if @organization.errors[:name].any? %>
                <p class="mt-1.5 text-sm text-pink-600">
                  <%= @organization.errors[:name].first %>
                </p>
              <% else %>
                <p class="mt-1.5 text-xs text-slate-500">
                  Your theater company, production company, or organization name
                </p>
              <% end %>
            </div>

            <!-- Info Box -->
            <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-blue-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <div>
                  <p class="text-sm font-medium text-blue-900 mb-1">What happens next?</p>
                  <p class="text-xs text-blue-700">
                    You'll become the owner of this organization and can immediately start creating productions, inviting team members, and organizing auditions.
                  </p>
                </div>
              </div>
            </div>

            <!-- Submit Buttons -->
            <div class="flex flex-col sm:flex-row gap-3 pt-2">
              <%= render "shared/button", text: "Create Organization", variant: "primary", size: "medium", type: :submit, class: "flex-1" %>
              <%= render "shared/button", text: "Cancel", variant: "ghost-cancel", size: "medium", path: "javascript:history.back()", type: :button, class: "flex-1" %>
            </div>

          <% end %>
        </div>

        <!-- Additional Help -->
        <div class="mt-4 text-center">
          <p class="text-xs text-slate-500">
            Need help getting started?
            <%= link_to "View setup guide", setup_guide_manage_organizations_path, class: "text-pink-500 hover:text-pink-600 underline" %>
          </p>
        </div>
      </div>

    </div>
  </div>
</div>
