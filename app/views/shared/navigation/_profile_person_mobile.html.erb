<div data-controller="mobile-nav" class="fixed inset-x-0 top-0 z-30 border-b border-pink-100 bg-white lg:hidden">
  <div class="flex items-center justify-between px-4 py-3">
    <button type="button" data-action="mobile-nav#toggle" class="flex items-center">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 text-pink-500">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
      </svg>
    </button>
    <div class="absolute left-1/2 transform -translate-x-1/2 flex items-center gap-2">
      <%= link_to my_dashboard_path, class: "flex items-center gap-2" do %>
        <%= image_tag "/icon.png", alt: "CocoScout", class: "h-6 w-6" %>
        <span class="mt-1 text-xl text-pink-500 coustard-regular">CocoScout</span>
      <% end %>
    </div>
    <div class="w-6"></div>
  </div>

  <div data-mobile-nav-target="panel" class="hidden fixed inset-0 top-[50px] bg-white overflow-y-auto">
    <div class="px-4 py-4">

      <!-- Impersonation Banner -->
      <% if impersonating? %>
        <div class="mb-4 rounded-lg border border-yellow-300 bg-yellow-50 p-4">
          <div class="text-xs font-semibold text-yellow-800 uppercase mb-1">Impersonating</div>
          <div class="text-sm font-medium text-yellow-900 mb-3"><%= Current.user.person&.name || Current.user.email_address %></div>
          <%= button_to "Stop Impersonating", stop_impersonating_user_path, method: :post, class: "w-full rounded-lg bg-yellow-600 px-4 py-2 text-sm font-semibold text-white hover:bg-yellow-700" %>
        </div>
      <% end %>

      <!-- Profile Sections -->
      <div class="mb-6">
        <div class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-3">Edit Profile</div>
        <div class="space-y-2">
          <a href="#basic-info" data-action="click->mobile-nav#toggle" class="block px-4 py-2.5 rounded-lg border border-gray-200 bg-white hover:bg-gray-50 transition text-sm font-medium text-gray-700">Basic Information</a>
          <a href="#bio" data-action="click->mobile-nav#toggle" class="block px-4 py-2.5 rounded-lg border border-gray-200 bg-white hover:bg-gray-50 transition text-sm font-medium text-gray-700">Bio</a>
          <a href="#social-media" data-action="click->mobile-nav#toggle" class="block px-4 py-2.5 rounded-lg border border-gray-200 bg-white hover:bg-gray-50 transition text-sm font-medium text-gray-700">Social Media & Links</a>
          <a href="#headshots" data-action="click->mobile-nav#toggle" class="block px-4 py-2.5 rounded-lg border border-gray-200 bg-white hover:bg-gray-50 transition text-sm font-medium text-gray-700">Headshots</a>
          <a href="#videos" data-action="click->mobile-nav#toggle" class="block px-4 py-2.5 rounded-lg border border-gray-200 bg-white hover:bg-gray-50 transition text-sm font-medium text-gray-700">Videos & Reels</a>
          <a href="#performance-history" data-action="click->mobile-nav#toggle" class="block px-4 py-2.5 rounded-lg border border-gray-200 bg-white hover:bg-gray-50 transition text-sm font-medium text-gray-700">Performance History</a>
          <a href="#training" data-action="click->mobile-nav#toggle" class="block px-4 py-2.5 rounded-lg border border-gray-200 bg-white hover:bg-gray-50 transition text-sm font-medium text-gray-700">Training & Education</a>
          <a href="#skills" data-action="click->mobile-nav#toggle" class="block px-4 py-2.5 rounded-lg border border-gray-200 bg-white hover:bg-gray-50 transition text-sm font-medium text-gray-700">Skills & Talents</a>
          <a href="#resumes" data-action="click->mobile-nav#toggle" class="block px-4 py-2.5 rounded-lg border border-gray-200 bg-white hover:bg-gray-50 transition text-sm font-medium text-gray-700">Resumes</a>
          <a href="#groups" data-action="click->mobile-nav#toggle" class="block px-4 py-2.5 rounded-lg border border-gray-200 bg-white hover:bg-gray-50 transition text-sm font-medium text-gray-700">Groups</a>
        </div>
      </div>

      <!-- User Profile Section -->
      <div class="mb-6 pb-6 border-b border-gray-200">
        <div class="flex items-center gap-3">
          <% if Current.user.person&.headshot&.attached? %>
            <%= image_tag Current.user.person.headshot, class: "w-12 h-12 rounded-lg object-cover flex-shrink-0" %>
          <% else %>
            <div class="w-12 h-12 rounded-lg bg-pink-100 text-pink-500 flex items-center justify-center font-semibold text-lg flex-shrink-0">
              <%= Current.user.person&.name&.split&.map(&:first)&.join&.upcase || Current.user.email_address[0].upcase %>
            </div>
          <% end %>
          <div class="flex-1 min-w-0">
            <div class="text-sm font-semibold text-gray-900 truncate"><%= Current.user.person&.name || Current.user.email_address %></div>
            <div class="text-xs text-gray-500 truncate"><%= Current.user.email_address %></div>
          </div>
        </div>
      </div>

      <!-- Dashboard Links -->
      <div class="mb-6">
        <div class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-3">Navigate To</div>
        <div class="space-y-2">
          <%= link_to "Talent Dashboard", my_dashboard_path, class: "block px-4 py-2.5 rounded-lg border border-gray-200 bg-white hover:bg-gray-50 transition text-sm font-medium text-gray-700" %>
          <%= link_to "Production Dashboard", manage_path, data: { turbo: false }, class: "block px-4 py-2.5 rounded-lg border border-gray-200 bg-white hover:bg-gray-50 transition text-sm font-medium text-gray-700" %>
        </div>
      </div>

      <!-- Footer Actions -->
      <div class="space-y-2">
        <% if Current.user.superadmin? %>
          <%= link_to "Superadmin", superadmin_path, class: "block text-center w-full px-4 py-3 rounded-lg bg-purple-100 hover:bg-purple-200 text-purple-700 font-semibold transition" %>
        <% end %>

        <%= link_to "Sign Out", signout_path, data: { turbo_prefetch: false }, class: "block text-center w-full px-4 py-3 rounded-lg bg-pink-500 hover:bg-pink-600 text-white font-semibold transition" %>
      </div>
    </div>
  </div>
</div>

<script>
  // Smooth scroll to sections with offset for fixed header on mobile
  document.addEventListener('DOMContentLoaded', function() {
    const mobileNav = document.querySelector('[data-controller="mobile-nav"]');
    if (mobileNav) {
      mobileNav.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
          e.preventDefault();
          const targetId = this.getAttribute('href');
          const target = document.querySelector(targetId);
          if (target) {
            const headerOffset = 60; // Mobile header height
            const elementPosition = target.getBoundingClientRect().top;
            const offsetPosition = elementPosition + window.pageYOffset - headerOffset;

            window.scrollTo({
              top: offsetPosition,
              behavior: 'smooth'
            });
          }
        });
      });
    }
  });
</script>
