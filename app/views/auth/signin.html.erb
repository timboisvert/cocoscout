<div class="min-h-screen bg-white">
  <!-- Header -->
  <div class="flex flex-col items-center pt-6 sm:pt-10 pb-4">
    <%= render "shared/cocoscout_logo" %>
    <h1 class="mt-3 text-3xl sm:text-4xl coustard-regular text-pink-500">CocoScout</h1>
  </div>

  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 pb-12">
    <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-start">

      <!-- Left Column: Welcome Message -->
      <div class="order-2 lg:order-1">
        <div class="lg:sticky lg:top-8">
          <div class="bg-gradient-to-br from-pink-50 to-white border border-pink-200 rounded-lg p-6 sm:p-8 shadow-sm">
            <h2 class="text-2xl sm:text-3xl font-bold text-slate-900 mb-3">Welcome back</h2>
            <p class="text-slate-600 mb-6">Sign in to access your productions, auditions, and show schedules.</p>

            <!-- Quick Features -->
            <div class="space-y-4">
              <div class="flex items-start gap-3">
                <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-pink-100 flex items-center justify-center">
                  <svg class="w-5 h-5 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-sm font-semibold text-slate-900">Your dashboard awaits</h3>
                  <p class="text-sm text-slate-600">View all your upcoming auditions, rehearsals, and performances</p>
                </div>
              </div>

              <div class="flex items-start gap-3">
                <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-pink-100 flex items-center justify-center">
                  <svg class="w-5 h-5 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-sm font-semibold text-slate-900">Stay connected</h3>
                  <p class="text-sm text-slate-600">Communicate with your castmates and production teams</p>
                </div>
              </div>

              <div class="flex items-start gap-3">
                <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-pink-100 flex items-center justify-center">
                  <svg class="w-5 h-5 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-sm font-semibold text-slate-900">Manage everything</h3>
                  <p class="text-sm text-slate-600">Track your history and manage your profile in one place</p>
                </div>
              </div>
            </div>

            <!-- Divider -->
            <div class="my-6 border-t border-pink-200"></div>

            <!-- Don't have account -->
            <div class="text-center">
              <p class="text-sm text-slate-600 mb-2">Don't have an account yet?</p>
              <%= link_to signup_path, class: "inline-flex items-center justify-center px-4 py-2 text-sm font-medium text-pink-600 hover:text-pink-700 border border-pink-300 hover:border-pink-400 rounded-md transition" do %>
                Create a free account
                <svg class="w-4 h-4 ml-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- Right Column: Sign In Form -->
      <div class="order-1 lg:order-2">
        <div class="bg-white border border-slate-200 rounded-lg p-6 sm:p-8 shadow-sm">
          <h2 class="text-2xl font-bold text-slate-900 mb-2 text-center">Sign in to your account</h2>
          <p class="text-sm text-slate-600 mb-6 text-center">Enter your credentials to continue</p>

          <!-- Success Messages -->
          <% if @password_reset_instructions_sent %>
            <div class="mb-4 p-3 bg-green-50 border border-green-200 rounded-md text-sm text-green-700">
              Password reset instructions have been sent to your email address.
            </div>
          <% end %>

          <% if @password_successfully_reset %>
            <div class="mb-4 p-3 bg-green-50 border border-green-200 rounded-md text-sm text-green-700">
              Password has been successfully reset. You can now sign in with your new password.
            </div>
          <% end %>

          <!-- Error Messages -->
          <% if @error %>
            <div class="mb-4 p-3 bg-pink-50 border border-pink-200 rounded-md text-sm text-pink-700">
              Please enter a valid email address and password.
            </div>
          <% end %>

          <% if @user_exists_error %>
            <div class="mb-4 p-3 bg-pink-50 border border-pink-200 rounded-md text-sm text-pink-700">
              You already have a CocoScout account. Please sign in to continue.
            </div>
          <% end %>

          <% if @invitation_link_invalid %>
            <div class="mb-4 p-3 bg-pink-50 border border-pink-200 rounded-md text-sm text-pink-700">
              Your invitation link is invalid.
            </div>
          <% end %>

          <%= form_with url: handle_signin_path, class: "space-y-5" do |form| %>
            <div>
              <label for="email_address" class="block text-sm font-medium text-slate-700 mb-1">Email address</label>
              <%= form.email_field :email_address,
                  required: true,
                  autofocus: true,
                  autocomplete: "email",
                  autocapitalize: "none",
                  placeholder: "you@example.com",
                  value: (@email_address || params[:email_address]),
                  class: "block shadow-sm rounded-md border border-gray-300 px-3 py-2.5 w-full focus:border-pink-500 focus:ring-pink-500" %>
            </div>

            <div data-controller="password-visibility">
              <div class="flex items-center justify-between mb-1">
                <label for="password" class="block text-sm font-medium text-slate-700">Password</label>
                <%= link_to "Forgot password?", password_path, tabindex: -1, class: "text-xs text-pink-600 hover:text-pink-700 font-medium" %>
              </div>
              <div class="relative">
                <%= form.password_field :password,
                    required: true,
                    autocomplete: "current-password",
                    placeholder: "Enter your password",
                    maxlength: 72,
                    class: "block shadow-sm rounded-md border border-gray-300 px-3 py-2.5 w-full pr-10 focus:border-pink-500 focus:ring-pink-500",
                    data: { password_visibility_target: "input" } %>
                <button type="button"
                        data-action="password-visibility#toggle"
                        class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-500 hover:text-gray-700 focus:outline-none">
                  <span data-password-visibility-target="icon">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                      <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                  </span>
                </button>
              </div>
            </div>

            <div class="pt-2">
              <%= render "shared/button", text: "Sign In", variant: "primary", size: "jumbo", type: :submit %>
            </div>

            <div class="text-center text-sm text-slate-600 pt-4">
              New to CocoScout? <%= link_to "Create an account", signup_path, class: "text-pink-600 hover:text-pink-700 font-medium underline" %>
            </div>
          <% end %>
        </div>

        <!-- Help text -->
        <div class="mt-6 text-center">
          <p class="text-xs text-slate-500">
            By signing in, you agree to our <%= link_to "Terms of Service", terms_path, class: "text-pink-600 hover:text-pink-700 underline", target: "_blank" %> and <%= link_to "Privacy Policy", privacy_path, class: "text-pink-600 hover:text-pink-700 underline", target: "_blank" %>
          </p>
        </div>
      </div>

    </div>
  </div>
</div>