<div class="max-w-md mx-auto mt-10 p-6 bg-white rounded shadow">
  <h1 class="text-xl font-bold mb-4">Join <%= @invitation.production_company.name %></h1>
  <p class="mb-4">You're invited to join <strong><%= @invitation.production_company.name %></strong> as <strong><%= @invitation.email %></strong>.</p>
  <%= form_with url: do_accept_invitations_path(token: @invitation.token), method: :post, local: true do |f| %>
    <% if User.exists?(email_address: @invitation.email.downcase) %>
      <div class="mb-4">
        <label class="block mb-1 font-medium">Password</label>
        <%= f.password_field :password, class: "border rounded px-2 py-1 w-full" %>
      </div>
    <% else %>
      <div class="mb-4">
        <label class="block mb-1 font-medium">Set a Password</label>
        <%= f.password_field :password, class: "border rounded px-2 py-1 w-full" %>
      </div>
      <div class="mb-4">
        <label class="block mb-1 font-medium">Confirm Password</label>
        <%= f.password_field :password_confirmation, class: "border rounded px-2 py-1 w-full" %>
      </div>
    <% end %>
    <%= f.submit "Join Company", class: "px-4 py-2 rounded bg-pink-500 text-white font-bold hover:bg-pink-600" %>
  <% end %>
</div>
