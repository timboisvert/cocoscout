<% content_for :title, @production.name %>

<div class="w-full">

  <%= render partial: "shared/notice", locals: { notice: notice } %>

  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Productions", productions_path],
      [@production.name, production_path(@production)]
    ],
    text: "Call to Audition",
    links: []
  } %>

  <div id="<%= dom_id @call_to_audition %>" class="w-full sm:w-auto my-5 space-y-5">
    <div>
      <span>Opens: </span>
      <span><%= @call_to_audition.opens_at %></span>
    </div>
    <div>
      <span>Closes:</span>
      <span><%= @call_to_audition.closes_at %></span>
    </div>
    <div>
      <span>Header Text: </span>
      <span><%= @call_to_audition.header_text %></span>
    </div>
    <div>
      <span>Use built-in Person System:</span>
      <span><%= @call_to_audition.use_person_object %></span>
    </div>

  </div>


  <%= link_to "Edit", edit_production_call_to_audition_path(@production, @call_to_audition), class: "w-full sm:w-auto text-center mt-2 sm:mt-0 rounded-lg px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <%= button_to "Delete", [@production, @call_to_audition], method: :delete, form_class: "sm:inline-block mt-2 sm:mt-0 sm:ml-2", class: "w-full rounded-lg px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>

</div>
