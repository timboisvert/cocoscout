<%
  # Performance credits form section with modal-based management
  # Parameters:
  # - person_form: the form builder
%>

<div id="performance-history" class="bg-white border border-gray-200 rounded-lg overflow-hidden mb-6" data-controller="performance-credits profile-section">
  <%= render "shared/section_header",
    title: "Performance History",
    collapsible: true,
    visibility_toggle: true,
    visibility_field_name: "person[profile_visibility_settings][performance_history_visible]",
    visibility_checked: @person.performance_credits_visible? %>

  <div class="p-6 space-y-4" data-profile-section-target="content">
    <p class="text-sm text-gray-600 mb-4">
      Organize your performance credits into sections (Improv, TV, Dance, Sketch, etc.), then add credits within each section.
    </p>

    <div id="performance-sections-container" data-performance-credits-target="sectionsList">
      <%= person_form.fields_for :performance_sections do |section_form| %>
        <div class="border border-gray-200 rounded-lg p-4 mb-4" data-section-id="<%= section_form.object.id || "new-#{section_form.object.object_id}" %>">
          <%= section_form.hidden_field :id %>
          <%= section_form.hidden_field :name %>
          <%= section_form.hidden_field :position %>
          <%= section_form.hidden_field :_destroy, value: "0", class: "section-destroy-field" %>

          <div class="flex items-center justify-between mb-4">
            <h4 class="text-lg font-semibold text-gray-900 coustard-regular"><%= section_form.object.name %></h4>
            <div class="flex gap-2">
              <button type="button"
                      class="text-xs text-pink-500 hover:text-pink-700 underline cursor-pointer"
                      data-action="click->performance-credits#editSection"
                      data-section-id="<%= section_form.object.id || "new-#{section_form.object.object_id}" %>"
                      data-section-name="<%= section_form.object.name %>">
                Edit Section
              </button>
              <button type="button"
                      class="text-xs text-pink-500 hover:text-pink-700 cursor-pointer"
                      data-action="click->performance-credits#removeSection"
                      data-section-id="<%= section_form.object.id || "new-#{section_form.object.object_id}" %>">
                Remove
              </button>
            </div>
          </div>

          <div class="space-y-2 credits-list" data-section-id="<%= section_form.object.id || "new-#{section_form.object.object_id}" %>">
            <%= section_form.fields_for :performance_credits do |credit_form| %>
              <div class="flex items-center justify-between py-2 px-3 bg-gray-50 rounded credit-item"
                   data-credit-id="<%= credit_form.object.id || "new-#{credit_form.object.object_id}" %>"
                   data-venue="<%= credit_form.object.venue %>"
                   data-role="<%= credit_form.object.role %>"
                   data-title="<%= credit_form.object.title %>"
                   data-year-start="<%= credit_form.object.year_start %>"
                   data-year-end="<%= credit_form.object.year_end %>"
                   data-link-url="<%= credit_form.object.link_url %>"
                   data-notes="<%= credit_form.object.notes %>">
                <%= credit_form.hidden_field :id %>
                <%= credit_form.hidden_field :title %>
                <%= credit_form.hidden_field :role %>
                <%= credit_form.hidden_field :venue %>
                <%= credit_form.hidden_field :year_start %>
                <%= credit_form.hidden_field :year_end %>
                <%= credit_form.hidden_field :link_url %>
                <%= credit_form.hidden_field :notes %>
                <%= credit_form.hidden_field :position %>
                <%= credit_form.hidden_field :_destroy, value: "0", class: "credit-destroy-field" %>

                <div class="flex-1">
                  <div class="text-sm font-medium text-gray-900">
                    <%= [credit_form.object.venue, credit_form.object.role, credit_form.object.title].compact.join(' â€¢ ') %>
                  </div>
                  <% if credit_form.object.year_start %>
                    <div class="text-xs text-gray-600">
                      <%= credit_form.object.display_year_range_with_present %>
                    </div>
                  <% end %>
                </div>

                <div class="flex gap-2">
                  <button type="button"
                          class="text-xs text-pink-500 hover:text-pink-700 underline cursor-pointer"
                          data-action="click->performance-credits#editCredit"
                          data-credit-id="<%= credit_form.object.id || "new-#{credit_form.object.object_id}" %>"
                          data-section-id="<%= section_form.object.id || "new-#{section_form.object.object_id}" %>">
                    Edit
                  </button>
                  <button type="button"
                          class="text-xs text-pink-500 hover:text-pink-700 cursor-pointer"
                          data-action="click->performance-credits#removeCredit"
                          data-credit-id="<%= credit_form.object.id || "new-#{credit_form.object.object_id}" %>">
                    Remove
                  </button>
                </div>
              </div>
            <% end %>
          </div>

          <button type="button"
                  class="mt-2 text-sm text-pink-500 hover:text-pink-700 underline font-medium cursor-pointer"
                  data-action="click->performance-credits#openCreditModal"
                  data-section-id="<%= section_form.object.id || "new-#{section_form.object.object_id}" %>">
            + Add Credit
          </button>
        </div>
      <% end %>
    </div>

    <button type="button"
            class="inline-flex items-center gap-2 px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg text-sm font-medium transition-colors cursor-pointer"
            data-action="click->performance-credits#openSectionModal">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
      </svg>
      Add Section
    </button>
  </div>

  <!-- Section Modal -->
  <div class="hidden fixed inset-0 bg-black/60 backdrop-blur-sm z-50 flex items-center justify-center p-4"
       data-performance-credits-target="sectionModal"
       data-action="click->performance-credits#closeSectionModal">
    <div class="bg-white rounded-lg shadow-xl max-w-md w-full p-6"
         data-action="click->performance-credits#stopPropagation">
      <h3 class="text-lg font-semibold text-gray-900 mb-4 coustard-regular">Add/Edit Section</h3>

      <form data-performance-credits-target="sectionForm" data-action="submit->performance-credits#saveSection">
        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-700 mb-2">Section Name</label>
          <input type="text"
                 name="name"
                 data-field="name"
                 placeholder="e.g., Theatre, Film, TV, Comedy"
                 class="w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500">
          <p class="mt-2 text-xs text-gray-500">
            Suggested: Improv, TV, Dance, Sketch
          </p>
        </div>

        <div class="flex justify-end gap-2">
          <button type="button"
                  class="px-4 py-2 text-gray-700 hover:bg-gray-100 rounded-lg text-sm font-medium cursor-pointer"
                  data-action="click->performance-credits#closeSectionModal">
            Cancel
          </button>
          <button type="submit"
                  class="px-4 py-2 bg-pink-500 hover:bg-pink-600 text-white rounded-lg text-sm font-medium cursor-pointer">
            Save Section
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Credit Modal -->
  <div class="hidden fixed inset-0 bg-black/60 backdrop-blur-sm z-50 flex items-center justify-center p-4"
       data-performance-credits-target="creditModal"
       data-action="click->performance-credits#closeCreditModal">
    <div class="bg-white rounded-lg shadow-xl max-w-2xl w-full p-6 max-h-[90vh] overflow-y-auto"
         data-action="click->performance-credits#stopPropagation">
      <h3 class="text-lg font-semibold text-gray-900 mb-4 coustard-regular">Add/Edit Performance Credit</h3>

      <form data-performance-credits-target="creditForm" data-action="submit->performance-credits#saveCredit">
        <div class="space-y-4">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Venue / Company / Theater</label>
              <input type="text"
                     name="venue"
                     data-field="venue"
                     placeholder="e.g., Shakespeare Theatre Company"
                     class="w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500">
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Role / Character</label>
              <input type="text"
                     name="role"
                     data-field="role"
                     placeholder="e.g., Hamlet"
                     class="w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500">
            </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Production Title</label>
              <input type="text"
                     name="title"
                     data-field="title"
                     placeholder="e.g., Hamlet"
                     class="w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500">
            </div>

            <div class="grid grid-cols-2 gap-2">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Year</label>
                <input type="number"
                       name="year_start"
                       data-field="year_start"
                       placeholder="2024"
                       min="1900"
                       max="2100"
                       class="w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500">
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">To</label>
                <input type="number"
                       name="year_end"
                       data-field="year_end"
                       placeholder="2025"
                       min="1900"
                       max="2100"
                       class="w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500">
              </div>
            </div>
          </div>

          <div class="pt-4 border-t border-gray-200">
            <p class="text-xs text-gray-500 mb-3">Optional Information</p>

            <div class="space-y-3">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Link (optional)</label>
                <input type="text"
                       name="link_url"
                       data-field="link_url"
                       placeholder="https://..."
                       class="w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500">
              </div>

              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Notes (optional)</label>
                <textarea name="notes"
                          data-field="notes"
                          rows="2"
                          placeholder="Additional details..."
                          class="w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500"></textarea>
              </div>
            </div>
          </div>
        </div>

        <div class="flex justify-end gap-2 mt-6">
          <button type="button"
                  class="px-4 py-2 text-gray-700 hover:bg-gray-100 rounded-lg text-sm font-medium cursor-pointer"
                  data-action="click->performance-credits#closeCreditModal">
            Cancel
          </button>
          <button type="submit"
                  class="px-4 py-2 bg-pink-500 hover:bg-pink-600 text-white rounded-lg text-sm font-medium cursor-pointer">
            Save Credit
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
