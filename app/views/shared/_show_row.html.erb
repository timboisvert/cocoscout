<%#
  Shared Show Row Component

  Required params:
    - show: Show object

  Optional params:
    - link_path: Path to link to (if nil, renders as div)
    - show_canceled: Show canceled badge and strikethrough date (default: false)
    - show_recurring: Show recurring event indicator (default: false)
    - show_linked: Show linked event indicator with tooltip (default: false)
    - show_production: Show production name in details line (default: false)
    - show_location: Show location/online indicator (default: true)
    - roles: Array of role names to display (default: nil) - legacy, use role_assignments instead
    - role_assignments: Array of hashes with {role_name:, entity_type:, entity_id:, entity_name:} for detailed display
    - entity: Single entity (Person/Group) for right panel display
    - availability: Availability object for buttons (default: nil)
    - entity_key: Entity key for Stimulus data attribute (default: nil)
    - show_cant_make_it: Whether to show "Can't make it" link (default: false)
    - cant_make_it_person: Person to generate vacancy token for (default: nil)
    - my_vacancies: Array of vacancies user created for this show (default: [])
    - has_groups: Whether the user has any groups (used to determine if headshot should be shown)
    - right_panel: Type of right panel content (:cast_assignment, :availability, :cast_summary, :countdown, or nil for no panel)
    - entity_assignments: Array of {entity:, role_assignments:} for multiple stacked cast assignment panels
    - cast_summary: Hash with {assignments_count:, roles_count:, vacancies:} for cast summary panel
    - closes_at: DateTime for countdown right panel (when right_panel: :countdown)
%>

<%
  # Set defaults for optional params
  show_canceled = local_assigns.fetch(:show_canceled, false)
  show_recurring = local_assigns.fetch(:show_recurring, false)
  show_linked = local_assigns.fetch(:show_linked, false)
  show_production = local_assigns.fetch(:show_production, false)
  show_location = local_assigns.fetch(:show_location, true)
  show_cant_make_it = local_assigns.fetch(:show_cant_make_it, false)
  cant_make_it_person = local_assigns.fetch(:cant_make_it_person, nil)
  my_vacancies = local_assigns.fetch(:my_vacancies, [])
  has_groups = local_assigns.fetch(:has_groups, false)
  role_assignments = local_assigns.fetch(:role_assignments, [])
  entity_assignments = local_assigns.fetch(:entity_assignments, [])
  right_panel = local_assigns.fetch(:right_panel, nil)
  wrapper_classes = local_assigns.fetch(:wrapper_classes, nil)
  cast_summary = local_assigns.fetch(:cast_summary, nil)

  is_canceled = show_canceled && show.canceled
  has_link = local_assigns[:link_path].present?
  has_availability = local_assigns[:entity_key].present?
  current_status = local_assigns[:availability]&.status || 'unset'
  # Don't show "Can't make it" button if user already has a vacancy for this show
  can_show_vacancy = show_cant_make_it && cant_make_it_person.present? && !is_canceled && show.date_and_time > Time.current && my_vacancies.empty?
  has_right_panel = right_panel.present?

  # Check if user has notified they can't make it
  # For linked shows, person stays on cast but vacancy indicates replacement is being sought
  # For non-linked shows, person was removed from cast but we show them as having a vacancy
  # Show for: open, finding_replacement, not_filling (person still can't make it)
  # Don't show for: filled (someone took the role), cancelled (person reclaimed their spot)
  is_linked_event = show.linked?
  my_unresolved_vacancies = my_vacancies.select { |v| !v.filled? && !v.cancelled? }
  show_vacancy_indicator = my_unresolved_vacancies.any?
  is_vacancy_only = !is_linked_event && my_unresolved_vacancies.any? && entity_assignments.empty?
%>

<%# Build data attributes for availability rows %>
<%
  data_attrs = {}
  if has_availability
    data_attrs["controller"] = "availability"
    data_attrs["availability-show-id-value"] = show.id
    data_attrs["availability-status-value"] = current_status
    data_attrs["availability-entity-key"] = local_assigns[:entity_key]

    # For manage context, use the manage endpoint
    if local_assigns[:manage_context] && local_assigns[:entity].is_a?(Person)
      data_attrs["availability-person-id-value"] = local_assigns[:entity].id
      data_attrs["availability-entity-type-value"] = local_assigns[:entity].class.name
      data_attrs["availability-update-url-value"] = update_availability_manage_person_path(local_assigns[:entity])
    else
      # For user's own availability, still need entity type
      data_attrs["availability-entity-type-value"] = local_assigns[:entity]&.class&.name || "Person"
    end
  end

  # Add linkage data for linked highlight feature
  if show.linked?
    data_attrs["linked-highlight-target"] = "row"
    data_attrs["linkage-id"] = show.event_linkage_id
  end
%>

<%# Row wrapper - either link or div %>
<%
  base_row_classes = "flex items-stretch px-3 py-2 border rounded-lg hover:border-gray-400 transition-all group"
  default_classes = "bg-white border-gray-200"
  row_classes = "#{base_row_classes} #{wrapper_classes.present? ? wrapper_classes : default_classes}"
%>

<% content = capture do %>
  <% if has_right_panel %>
  <div class="flex flex-col md:flex-row md:items-center gap-2 md:gap-0 w-full">
  <% end %>
  <%# Left Section: Date & Show Details %>
  <div class="<%= has_right_panel ? 'w-full md:w-1/2' : 'flex-1' %> flex items-center gap-4">
    <%# Date Box %>
    <div class="flex-shrink-0 w-14 text-center">
      <div class="text-xs font-semibold text-pink-600 uppercase"><%= show.date_and_time.strftime("%b") %></div>
      <div class="text-2xl font-bold text-gray-900 <%= 'line-through text-red-400' if is_canceled %>"><%= show.date_and_time.strftime("%-d") %></div>
      <div class="text-xs text-gray-500"><%= show.date_and_time.strftime("%a") %></div>
    </div>

    <%# Show Details %>
    <div class="flex-1 min-w-0">
      <div class="flex items-center gap-2 flex-wrap">
        <% if is_canceled %>
          <span class="inline-flex items-center rounded-md bg-red-50 px-2 py-1 text-xs font-medium text-red-700 ring-1 ring-inset ring-red-600/10">Canceled</span>
        <% end %>
        <span class="font-medium text-gray-900">
          <%= show.secondary_name.presence || show.event_type.titleize %>
        </span>
        <% if show_recurring && show.recurring? %>
          <span data-controller="tooltip" data-tooltip-text="This is a recurring event">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="text-pink-500 size-4">
              <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0 3.181 3.183a8.25 8.25 0 0 0 13.803-3.7M4.031 9.865a8.25 8.25 0 0 1 13.803-3.7l3.181 3.182m0-4.991v4.99" />
            </svg>
          </span>
        <% end %>
        <% if show_linked && show.linked? %>
          <%
            other_shows = show.event_linkage.shows.where.not(id: show.id).order(:date_and_time)
            linked_tooltip = "Linked with: " + other_shows.map { |s|
              name = s.secondary_name.presence || s.event_type.titleize
              "#{s.date_and_time.strftime('%b %-d')} #{name}"
            }.join(", ")
          %>
          <span data-controller="tooltip" data-tooltip-text="<%= linked_tooltip %>">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="text-pink-500 size-4">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.19 8.688a4.5 4.5 0 0 1 1.242 7.244l-4.5 4.5a4.5 4.5 0 0 1-6.364-6.364l1.757-1.757m13.35-.622 1.757-1.757a4.5 4.5 0 0 0-6.364-6.364l-4.5 4.5a4.5 4.5 0 0 0 1.242 7.244" />
            </svg>
          </span>
        <% end %>
        <% if show_production %>
          <span class="text-sm text-gray-600"><%= show.production.name %></span>
        <% end %>
      </div>
      <div class="text-sm text-gray-600">
        <%= show.date_and_time.strftime("%l:%M %p") %>
        <% if show.call_time_enabled? && show.call_time.present? %>
          · Call <%= show.call_time.strftime("%l:%M %p") %>
        <% end %>
        <% if show_location %>
          <% if show.is_online %>
            · Online
          <% elsif show.location.present? %>
            · <%= show.location.name %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <% if right_panel == :cast_assignment && local_assigns[:entity_assignments].present? %>
    <%# Right Section: Cast Assignments - stacked panels for multiple entities %>
    <div class="w-full md:w-1/2 flex flex-col border-t border-gray-100 md:border-t-0 mt-2 md:mt-0 pt-2 md:pt-0 relative" data-cant-make-it-hover-zone>
      <% entity_assignments.each_with_index do |ea, idx| %>
        <% entity = ea[:entity] %>
        <% role_assigns = ea[:role_assignments] %>
        <div class="flex-1 md:border-l border-gray-200 md:pl-4 py-2 flex items-center gap-3">
          <% headshot_variant = entity.safe_headshot_variant(:thumb) %>
          <% if headshot_variant %>
            <%= image_tag headshot_variant, class: "w-10 h-10 rounded-lg object-cover flex-shrink-0" %>
          <% else %>
            <div class="w-10 h-10 rounded-lg bg-gray-200 flex items-center justify-center text-gray-700 font-bold text-sm flex-shrink-0">
              <%= entity.respond_to?(:initials) ? entity.initials : entity.name[0..1].upcase %>
            </div>
          <% end %>
          <div class="flex-1 min-w-0">
            <div class="text-[10px] text-gray-400 uppercase tracking-wide">Cast assignment</div>
            <% role_assigns.each do |ra| %>
              <div class="text-sm flex items-center gap-1">
                <span class="text-gray-700"><%= ra[:entity_name] %></span>
                <span class="text-gray-400">as</span>
                <strong class="text-pink-500"><%= ra[:role_name] %></strong>
              </div>
            <% end %>
            <% if show_vacancy_indicator %>
              <div class="flex items-center gap-1 mt-1">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-3.5 h-3.5 text-amber-600">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
                </svg>
                <span class="text-xs text-amber-600 font-medium">
                  You've indicated that you can't make it
                </span>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

  <% elsif right_panel == :cast_assignment && local_assigns[:entity].present? %>
    <%# Right Section: Cast Assignment (legacy single entity support) %>
    <div class="w-1/2 border-l border-gray-200 pl-4 flex items-center gap-3">
      <% headshot_variant = entity.safe_headshot_variant(:thumb) %>
      <% if headshot_variant %>
        <%= image_tag headshot_variant, class: "w-10 h-10 rounded-lg object-cover flex-shrink-0" %>
      <% else %>
        <div class="w-10 h-10 rounded-lg bg-gray-200 flex items-center justify-center text-gray-700 font-bold text-sm flex-shrink-0">
          <%= entity.respond_to?(:initials) ? entity.initials : entity.name[0..1].upcase %>
        </div>
      <% end %>
      <div class="flex-1 min-w-0">
        <div class="text-[10px] text-gray-400 uppercase tracking-wide">Cast assignment</div>
        <% role_assignments.each do |ra| %>
          <div class="text-sm flex items-center gap-1">
            <span class="text-gray-700"><%= ra[:entity_name] %></span>
            <span class="text-gray-400">as</span>
            <strong class="text-pink-500"><%= ra[:role_name] %></strong>
          </div>
        <% end %>
        <% if show_vacancy_indicator %>
          <div class="flex items-center gap-1 mt-1">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-3.5 h-3.5 text-amber-600">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
            </svg>
            <span class="text-xs text-amber-600 font-medium">
              You've indicated that you can't make it
            </span>
          </div>
        <% end %>
      </div>
    </div>

  <% elsif is_vacancy_only %>
    <%# Right Section: Vacancy only (no assignment, user was removed from cast) %>
    <div class="w-full md:w-1/2 md:border-l border-gray-200 md:pl-4 flex items-center border-t md:border-t-0 mt-2 md:mt-0 pt-2 md:pt-0">
      <div class="flex items-center gap-1">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 text-amber-600">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
        </svg>
        <span class="text-xs text-amber-600 font-medium">
          You've indicated you can't make it
        </span>
      </div>
    </div>

  <% elsif right_panel == :availability_status %>
    <%# Right Section: Availability Status (read-only text display) %>
    <% availability_obj = local_assigns[:availability] %>
    <div class="flex-shrink-0 ml-4">
      <% if availability_obj %>
        <% if availability_obj.available? %>
          <span class="text-sm font-medium text-pink-500">Available</span>
        <% elsif availability_obj.unavailable? %>
          <span class="text-sm font-medium text-gray-900">Unavailable</span>
        <% else %>
          <span class="text-sm text-gray-400">No response</span>
        <% end %>
      <% else %>
        <span class="text-sm text-gray-400">No response</span>
      <% end %>
    </div>

  <% elsif right_panel == :cast_summary && cast_summary.present? %>
    <%# Right Section: Cast Summary (for shows list) - headshots with tooltips %>
    <div class="w-full md:w-1/2 md:border-l border-gray-200 md:pl-4 flex items-center border-t md:border-t-0 mt-2 md:mt-0 pt-2 md:pt-0">
      <div class="flex-1 min-w-0 flex items-center gap-1 flex-wrap">
        <%
          roles = cast_summary[:roles] || []
          assignments_by_role = cast_summary[:assignments_by_role] || {}
          cant_make_it_by_assignment = cast_summary[:cant_make_it_by_assignment] || {}
        %>
        <% roles.each do |role| %>
          <%
            role_quantity = role.quantity || 1
            role_assignments = (assignments_by_role[role.id] || []).sort_by { |a| a.position || 0 }

            # Build a hash of slot_position => assignment for multi-slot roles
            assignments_by_slot = {}
            legacy_assignments = []

            role_assignments.each do |a|
              if a.position.present? && a.position > 0
                assignments_by_slot[a.position] = a
              else
                legacy_assignments << a
              end
            end

            # Assign legacy (position=0) assignments to available slots
            next_slot = 1
            legacy_assignments.each do |a|
              while assignments_by_slot[next_slot] && next_slot <= role_quantity
                next_slot += 1
              end
              if next_slot <= role_quantity
                assignments_by_slot[next_slot] = a
                next_slot += 1
              end
            end
          %>
          <% (1..role_quantity).each do |slot_position| %>
            <% assignment = assignments_by_slot[slot_position] %>
            <% if assignment %>
              <%
                assignable = assignment.assignable
                cant_make_it = cant_make_it_by_assignment[[assignable.class.name, assignable.id]].present?
                headshot = assignable.safe_headshot_variant(:thumb)
                slot_label = role_quantity > 1 ? " (slot #{slot_position})" : ""
                tooltip_text = "#{assignable.name} - #{role.name}#{slot_label}"
                tooltip_text += " (Can't make it)" if cant_make_it
              %>
              <div class="relative">
                <% if headshot %>
                  <%= image_tag headshot, class: "w-10 h-10 rounded-md object-cover #{cant_make_it ? 'ring-2 ring-amber-400' : ''}", data: { controller: "tooltip", tooltip_text: tooltip_text } %>
                <% else %>
                  <div class="w-10 h-10 rounded-md <%= cant_make_it ? 'bg-amber-100 text-amber-700 ring-2 ring-amber-400' : 'bg-gray-200 text-gray-700' %> flex items-center justify-center font-bold text-xs"
                       data-controller="tooltip"
                       data-tooltip-text="<%= tooltip_text %>">
                    <%= assignable.initials %>
                  </div>
                <% end %>
                <% if cant_make_it %>
                  <div class="absolute -bottom-0.5 -right-0.5 w-3.5 h-3.5 bg-amber-500 rounded-full flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="white" class="w-2.5 h-2.5">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 11-18 0 9 9 0 0118 0zm-9 3.75h.008v.008H12v-.008z" />
                    </svg>
                  </div>
                <% end %>
              </div>
            <% else %>
              <%# Empty slot - show placeholder %>
              <%
                slot_label = role_quantity > 1 ? " (slot #{slot_position})" : ""
              %>
              <div data-controller="tooltip" data-tooltip-text="<%= role.name %><%= slot_label %> (not assigned)" class="w-10 h-10 rounded-md bg-gray-100 border border-dashed border-gray-300 flex items-center justify-center text-gray-400">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" />
                </svg>
              </div>
            <% end %>
          <% end %>
        <% end %>
        <% if roles.empty? %>
          <span class="text-sm text-gray-400 pl-2">No roles</span>
        <% end %>
      </div>
    </div>

  <% elsif right_panel == :countdown && local_assigns[:closes_at].present? && local_assigns[:closes_at] > Time.current %>
    <%# Right Section: Countdown timer for closing time %>
    <div class="flex-shrink-0 w-32 sm:w-40 md:border-l border-gray-200 md:pl-4 flex flex-col items-center justify-center border-t md:border-t-0 mt-2 md:mt-0 pt-2 md:pt-0"
         data-controller="countdown"
         data-countdown-until-value="<%= local_assigns[:closes_at].iso8601 %>">
      <span class="text-xs text-gray-500 uppercase tracking-wide">Closes</span>
      <span class="text-sm font-semibold text-gray-700 tabular-nums" data-countdown-target="clock">--</span>
    </div>

  <% elsif right_panel == :availability && local_assigns[:entity].present? %>
    <%# Right Section: Availability %>
    <div class="w-full md:w-1/2 md:border-l border-gray-200 md:pl-4 flex items-center gap-3 border-t md:border-t-0 mt-2 md:mt-0 pt-2 md:pt-0">
      <% headshot_variant = entity.safe_headshot_variant(:thumb) %>
      <% if headshot_variant %>
        <%= image_tag headshot_variant, class: "w-10 h-10 rounded-lg object-cover flex-shrink-0" %>
      <% else %>
        <div class="w-10 h-10 rounded-lg bg-gray-200 flex items-center justify-center text-gray-700 font-bold text-sm flex-shrink-0">
          <%= entity.respond_to?(:initials) ? entity.initials : entity.name[0..1].upcase %>
        </div>
      <% end %>
      <div class="flex-1 min-w-0">
        <div class="text-[10px] text-gray-400 uppercase tracking-wide mb-1">Availability</div>
        <div class="flex gap-0">
          <%
            [:available, :unavailable].each do |status|
              classes = "w-8 sm:w-20 text-xs py-1 sm:py-1.5 text-center border border-gray-200 cursor-pointer flex items-center justify-center"

              if status == :available
                classes += " rounded-l border-r-0"
              elsif status == :unavailable
                classes += " rounded-r"
              end

              if current_status == status.to_s
                classes += " bg-pink-500 text-white"
              else
                classes += " bg-white text-gray-700 hover:bg-gray-50"
              end
          %>
            <%= link_to "#", class: classes, data: { action: "click->availability#setStatus", availability_status: status, availability_target: "#{status}Btn" } do %>
              <%# Check icon - shown temporarily after selection %>
              <span data-availability-target="<%= status %>Check" class="hidden">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4">
                  <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 0 1 .143 1.052l-8 10.5a.75.75 0 0 1-1.127.075l-4.5-4.5a.75.75 0 0 1 1.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 0 1 1.05-.143Z" clip-rule="evenodd" />
                </svg>
              </span>
              <%# Normal content %>
              <span data-availability-target="<%= status %>Text">
                <span class="sm:hidden">
                  <% if status == :available %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6.633 10.25c.806 0 1.533-.446 2.031-1.08a9.041 9.041 0 0 1 2.861-2.4c.723-.384 1.35-.956 1.653-1.715a4.498 4.498 0 0 0 .322-1.672V2.75a.75.75 0 0 1 .75-.75 2.25 2.25 0 0 1 2.25 2.25c0 1.152-.26 2.243-.723 3.218-.266.558.107 1.282.725 1.282m0 0h3.126c1.026 0 1.945.694 2.054 1.715.045.422.068.85.068 1.285a11.95 11.95 0 0 1-2.649 7.521c-.388.482-.987.729-1.605.729H13.48c-.483 0-.964-.078-1.423-.23l-3.114-1.04a4.501 4.501 0 0 0-1.423-.23H5.904m10.598-9.75H14.25M5.904 18.5c.083.205.173.405.27.602.197.4-.078.898-.523.898h-.908c-.889 0-1.713-.518-1.972-1.368a12 12 0 0 1-.521-3.507c0-1.553.295-3.036.831-4.398C3.387 9.953 4.167 9.5 5 9.5h1.053c.472 0 .745.556.5.96a8.958 8.958 0 0 0-1.302 4.665c0 1.194.232 2.333.654 3.375Z"/></svg>
                <% else %>
