<% content_for :title, "New Questionnaire - #{@production.name}" %>

<div class="w-full mb-10">
  <%= render partial: "shared/notice", locals: { notice: notice } %>
  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Questionnaires", manage_production_questionnaires_path(@production)]
    ],
    text: "New Questionnaire",
    links: []
  } %>

  <div class="bg-white border border-gray-200 rounded-lg shadow-sm p-6">
    <%= form_with(model: @questionnaire, url: manage_production_questionnaires_path(@production), method: :post, data: { turbo: false }) do |form| %>
      <div class="space-y-6">
        <div>
          <%= form.label :title, "Questionnaire Title", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :title, class: "block w-full rounded-lg border border-gray-300 px-3 py-2", placeholder: "e.g., Actor Information Form" %>
          <% if @questionnaire.errors[:title].any? %>
            <p class="mt-1 text-sm text-red-600"><%= @questionnaire.errors[:title].first %></p>
          <% end %>
        </div>

        <div>
          <%= form.label :header_text, "Header Text (optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.rich_text_area :header_text, class: "block w-full rounded-lg border border-gray-300" %>
          <p class="mt-1 text-sm text-gray-500">This text will appear at the top of the questionnaire form</p>
        </div>

        <div>
          <%= form.label :success_text, "Success Text (optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.rich_text_area :success_text, class: "block w-full rounded-lg border border-gray-300" %>
          <p class="mt-1 text-sm text-gray-500">This text will appear after someone submits the questionnaire</p>
        </div>

        <div class="flex items-center">
          <%= form.check_box :accepting_responses, class: "h-4 w-4 rounded border-gray-300 text-pink-600 focus:ring-pink-500" %>
          <%= form.label :accepting_responses, "Accepting Responses", class: "ml-2 text-sm text-gray-700" %>
        </div>

        <div class="flex justify-end gap-3">
          <%= link_to "Cancel", manage_production_questionnaires_path(@production), class: "px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition" %>
          <%= form.submit "Create Questionnaire", class: "px-4 py-2 bg-pink-500 text-white rounded-lg hover:bg-pink-600 transition cursor-pointer" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
