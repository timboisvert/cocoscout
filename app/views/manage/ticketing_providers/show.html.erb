<%= render partial: "shared/top_menu", locals: {
  breadcrumbs: [
    ["Organizations", manage_organizations_path],
    [@organization.name, manage_organization_path(@organization, anchor: "tab-4")]
  ],
  text: @ticketing_provider.name,
  links: [
    { text: "Test Connection", path: manage_test_ticketing_provider_path(@organization, @ticketing_provider), data: { turbo_method: :post } },
    { text: "Sync Now", path: manage_sync_ticketing_provider_path(@organization, @ticketing_provider), data: { turbo_method: :post } },
    { text: "Edit", path: manage_edit_ticketing_provider_path(@organization, @ticketing_provider) }
  ]
} %>

<div class="max-w-4xl mx-auto px-4 py-6 space-y-6">
  <%# Status Card %>
  <div class="bg-white shadow rounded-lg p-6">
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-4">
        <div class="w-12 h-12 bg-gray-100 rounded-lg flex items-center justify-center">
          <svg class="w-7 h-7 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z" />
          </svg>
        </div>
        <div>
          <h2 class="text-lg font-semibold text-gray-900"><%= @ticketing_provider.provider_display_name %></h2>
          <% if @ticketing_provider.provider_account_name.present? %>
            <p class="text-sm text-gray-500"><%= @ticketing_provider.provider_account_name %></p>
          <% end %>
        </div>
      </div>

      <div class="text-right">
        <% if @ticketing_provider.last_sync_status == "success" %>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
            <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            Connected
          </span>
        <% elsif @ticketing_provider.last_sync_status == "failed" %>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-100 text-red-800">
            <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
            Error
          </span>
        <% elsif !@ticketing_provider.has_credentials? %>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">
            Setup Required
          </span>
        <% else %>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800">
            Not synced yet
          </span>
        <% end %>

        <% if @ticketing_provider.last_synced_at.present? %>
          <p class="mt-1 text-xs text-gray-500">
            Last synced <%= time_ago_in_words(@ticketing_provider.last_synced_at) %> ago
          </p>
        <% end %>
      </div>
    </div>

    <% if @ticketing_provider.last_sync_error.present? %>
      <div class="mt-4 bg-red-50 border border-red-200 rounded-lg p-3">
        <p class="text-sm text-red-700"><%= @ticketing_provider.last_sync_error %></p>
      </div>
    <% end %>
  </div>

  <%# Linked Productions %>
  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">Linked Productions</h3>
      <p class="text-sm text-gray-500">Productions syncing ticket data from this platform</p>
    </div>

    <% if @production_links.any? %>
      <ul class="divide-y divide-gray-200">
        <% @production_links.each do |link| %>
          <li class="px-6 py-4">
            <div class="flex items-center justify-between">
              <div>
                <h4 class="font-medium text-gray-900"><%= link.production.name %></h4>
                <p class="text-sm text-gray-500">
                  <%= link.provider_event_name || link.provider_event_id %>
                  &middot;
                  <%= link.ticketing_show_links.count %> shows linked
                </p>
              </div>
              <div class="flex items-center space-x-3">
                <% if link.last_synced_at.present? %>
                  <span class="text-xs text-gray-400">
                    Synced <%= time_ago_in_words(link.last_synced_at) %> ago
                  </span>
                <% end %>
                <%= link_to "View", manage_money_ticketing_production_link_path(link.production, link),
                            class: "text-sm text-pink-600 hover:text-pink-800" %>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    <% else %>
      <div class="px-6 py-8 text-center text-gray-500">
        <p>No productions linked yet</p>
        <p class="text-sm mt-1">Link a production from its Money &gt; Ticketing page</p>
      </div>
    <% end %>
  </div>

  <%# Recent Sync Logs %>
  <% if @sync_logs.any? %>
    <div class="bg-white shadow rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Recent Activity</h3>
      </div>
      <ul class="divide-y divide-gray-200">
        <% @sync_logs.each do |log| %>
          <li class="px-6 py-3">
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-3">
                <% case log.status %>
                <% when "success" %>
                  <span class="w-2 h-2 bg-green-500 rounded-full"></span>
                <% when "failed" %>
                  <span class="w-2 h-2 bg-red-500 rounded-full"></span>
                <% when "partial" %>
                  <span class="w-2 h-2 bg-yellow-500 rounded-full"></span>
                <% else %>
                  <span class="w-2 h-2 bg-gray-400 rounded-full"></span>
                <% end %>
                <span class="text-sm text-gray-900">
                  <%= log.sync_type.titleize %> sync
                  <% if log.ticketing_production_link %>
                    for <%= log.ticketing_production_link.production.name %>
                  <% end %>
                </span>
              </div>
              <div class="text-sm text-gray-500">
                <%= log.summary %>
                &middot;
                <%= time_ago_in_words(log.created_at) %> ago
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%# Danger Zone %>
  <div class="bg-white shadow rounded-lg border border-red-200">
    <div class="px-6 py-4">
      <h3 class="text-lg font-medium text-red-900">Danger Zone</h3>
      <p class="text-sm text-gray-500 mt-1">
        Disconnecting will stop syncing and remove all production links.
      </p>
      <div class="mt-4">
        <%= button_to "Disconnect #{@ticketing_provider.provider_display_name}",
                     manage_ticketing_provider_path(@organization, @ticketing_provider),
                     method: :delete,
                     data: { turbo_confirm: "Are you sure you want to disconnect #{@ticketing_provider.name}? This will stop syncing for all linked productions." },
                     class: "inline-flex items-center px-4 py-2 border border-red-300 text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50" %>
      </div>
    </div>
  </div>
</div>
