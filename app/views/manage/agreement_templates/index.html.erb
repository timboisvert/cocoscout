<% content_for :title, "Agreement Templates" %>

<div class="w-full mb-10">
  <%= render partial: "shared/notice", locals: { notice: notice, alert: alert } %>
  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Organizations", manage_organizations_path],
      [@organization.name, manage_organization_path(@organization)]
    ],
    text: "Agreement Templates",
    links: [
      { text: "New Template", path: new_manage_agreement_template_path }
    ]
  } %>

  <% if @agreement_templates.any? %>
    <div class="space-y-2">
      <% @agreement_templates.each do |template| %>
        <%= link_to edit_manage_agreement_template_path(template), class: "block bg-white rounded-lg border border-gray-200 p-5 hover:bg-gray-50 transition-colors" do %>
          <div class="flex items-center justify-between">
            <div class="flex-1">
              <div class="flex items-center gap-2">
                <h3 class="font-semibold text-gray-900"><%= template.name %></h3>
                <% unless template.active? %>
                  <span class="inline-flex items-center rounded-md px-2 py-0.5 text-xs font-medium bg-gray-100 text-gray-600">Inactive</span>
                <% end %>
                <span class="text-xs text-gray-500">Version <%= template.version %></span>
              </div>
              <% if template.description.present? %>
                <p class="text-sm text-gray-600 mt-1"><%= template.description %></p>
              <% end %>
              <div class="flex items-center gap-4 mt-2 text-sm text-gray-500">
                <span>
                  <% production_count = template.productions.count %>
                  <%= production_count %> <%= "production".pluralize(production_count) %>
                </span>
                <span>
                  <% signature_count = template.total_signatures %>
                  <%= signature_count %> <%= "signature".pluralize(signature_count) %>
                </span>
                <span>Updated <%= time_ago_in_words(template.updated_at) %> ago</span>
              </div>
            </div>
            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="bg-gray-50 rounded-lg border border-dashed border-gray-300 p-8 text-center">
      <svg class="w-12 h-12 text-gray-400 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
      </svg>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No agreement templates yet</h3>
      <p class="text-gray-600 mb-4">Create templates for performer agreements that can be used across your productions.</p>
      <%= link_to new_manage_agreement_template_path do %>
        <%= render "shared/button", text: "Create First Template", variant: "primary", size: "medium" %>
      <% end %>
    </div>
  <% end %>
</div>
