<% if local_assigns[:type] && local_assigns[:message] %>
  <div class="mb-4 rounded-lg px-4 py-3 <%= type == 'success' ? 'bg-green-50 text-green-800 border border-green-200' : 'bg-pink-50 text-pink-800 border border-pink-200' %>" data-controller="auto-hide">
    <div class="flex items-center gap-2">
      <% if type == 'success' %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      <% else %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 11-18 0 9 9 0 0118 0zm-9 3.75h.008v.008H12v-.008z" />
        </svg>
      <% end %>
      <span class="text-sm font-medium"><%= message %></span>
    </div>
  </div>
<% end %>
