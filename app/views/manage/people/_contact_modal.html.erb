<%= turbo_frame_tag "contact_modal" do %>
  <div class="fixed inset-0 bg-black/60 backdrop-blur-sm overflow-y-auto h-full w-full z-50 flex items-center justify-center p-4"
       data-controller="contact-modal"
       data-action="click->contact-modal#closeOnBackdrop keydown.esc@window->contact-modal#close">
    <div class="relative w-full max-w-2xl bg-white rounded-lg shadow-lg" data-action="click->contact-modal#stopPropagation">
      <div class="flex items-center justify-between px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900">Send Message to <%= @person.name %></h3>
        <button type="button" class="text-gray-400 hover:text-gray-600 cursor-pointer" data-action="click->contact-modal#close">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>

      <div class="p-6">
        <p class="text-sm text-gray-600 mb-4">
          <strong>Recipient:</strong> <%= @person.name %> (<%= @person.email %>)
        </p>

        <%= form_with url: send_contact_message_manage_person_path(@person), method: :post, data: { turbo_frame: "_top" } do |f| %>
          <% if @productions.any? %>
            <div class="mb-4">
              <label class="block text-sm font-semibold text-gray-900 mb-2">Regarding Production <span class="font-normal text-gray-500">(optional)</span></label>
              <select name="production_id"
                      class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-500">
                <option value="">None</option>
                <% @productions.each do |production| %>
                  <option value="<%= production.id %>">
                    <%= production.name %>
                  </option>
                <% end %>
              </select>
            </div>
          <% end %>

          <div class="mb-4">
            <label class="block text-sm font-semibold text-gray-900 mb-2">Subject</label>
            <%= text_field_tag :subject, nil,
                class: "block w-full rounded-lg border border-gray-300 px-3 py-2 text-gray-900 placeholder:text-gray-400 focus:border-pink-500 focus:ring-pink-500 text-sm",
                placeholder: "Message subject...",
                required: true %>
          </div>

          <div class="mb-4">
            <label class="block text-sm font-semibold text-gray-900 mb-2">Message</label>
            <%= rich_text_area_tag :body, nil, class: "block w-full rounded-lg border border-gray-300 px-3 py-2 text-gray-900 placeholder:text-gray-400 focus:border-pink-500 focus:ring-pink-500" %>
          </div>

          <div class="flex justify-end gap-2">
            <%= render "shared/button", text: "Cancel", variant: "secondary", type: :button, data: { action: "click->contact-modal#close" } %>
            <%= render "shared/button", text: "Send Message", variant: "primary", type: :submit %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
