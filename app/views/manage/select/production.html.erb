<% content_for :title, "Select Production" %>

<div class="max-w-md mx-auto pt-4 pb-8 px-4">

  <% if @productions.any? %>
    <!-- Production Selection -->
    <div class="mb-4">
      <h2 class="text-xl text-gray-900 mb-1 coustard-regular">Select a Production</h2>
      <p class="text-sm text-gray-600">Choose which production you'd like to work on</p>
    </div>

    <div class="bg-white border border-gray-200 rounded-lg overflow-hidden">
      <% @productions.each_with_index do |production, index| %>
        <%= form_with url: set_production_path, method: :post do |form| %>
          <%= hidden_field_tag :id, production.id %>
          <button type="submit" class="w-full flex items-center gap-3 hover:bg-slate-50 px-4 py-3 transition cursor-pointer text-left <%= index > 0 ? 'border-t border-gray-200' : '' %>">
            <% logo_variant = production.safe_logo_variant(:small) %>
            <% if logo_variant %>
              <div class="w-16 h-8 flex items-center justify-center flex-shrink-0 rounded">
                <%= image_tag logo_variant, alt: "#{production.name} logo", class: "w-16 h-8 object-cover rounded" %>
              </div>
            <% else %>
              <div class="w-16 h-8 flex items-center justify-center flex-shrink-0 rounded bg-gray-100 text-gray-600 font-bold text-xs">
                <%= production.initials %>
              </div>
            <% end %>
            <span class="text-sm font-medium text-slate-700 truncate flex-1"><%= production.name %></span>
            <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </button>
        <% end %>
      <% end %>

      <!-- Create New Production Button -->
      <% if current_user_is_global_manager? %>
        <%= link_to manage_productions_wizard_path, data: { turbo: false }, class: "flex items-center gap-3 px-4 py-3 text-sm text-pink-500 hover:bg-slate-50 transition cursor-pointer font-medium border-t border-gray-200" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Create a Production
        <% end %>
      <% end %>
    </div>

  <% else %>
    <!-- No Productions - Empty State -->
    <div class="bg-white border border-gray-200 rounded-lg p-8 text-center">
      <div class="w-12 h-12 bg-pink-100 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-6 h-6 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z" />
        </svg>
      </div>

      <h2 class="text-lg font-bold text-gray-900 mb-2">No productions yet</h2>
      <p class="text-sm text-gray-600 mb-6">You don't have access to any productions in <%= Current.organization.name %>.</p>

      <% if current_user_is_global_manager? %>
        <%= link_to manage_productions_wizard_path, class: "inline-flex items-center justify-center gap-2 px-4 py-2 bg-pink-600 hover:bg-pink-700 text-white font-medium rounded-lg text-sm transition-colors" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
          </svg>
          Create your first production
        <% end %>
      <% else %>
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 text-left max-w-sm mx-auto">
          <p class="text-sm text-gray-700 mb-2">
            <strong>What you can do:</strong>
          </p>
          <ul class="text-sm text-gray-600 space-y-1 list-disc list-inside">
            <li>Ask a manager to create a production</li>
            <li>Wait to be added to an existing production</li>
            <li>Contact your organization owner for help</li>
          </ul>
        </div>

        <% if Current.user.organizations.count > 1 %>
          <div class="mt-6">
            <p class="text-sm text-gray-600 mb-3">Or switch to a different organization:</p>
            <%= link_to select_organization_path, class: "inline-flex items-center justify-center gap-2 px-4 py-2 bg-gray-600 hover:bg-gray-700 text-white font-medium rounded-lg text-sm transition-colors" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
              </svg>
              Switch organization
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>

</div>
