<%= render layout: "manage/ticketing_setup_wizard/wizard_layout", locals: { current_step: 4, step_name: "Event Info" } do %>
  <div class="text-center mb-6">
    <div class="w-16 h-16 bg-pink-100 rounded-full flex items-center justify-center mx-auto mb-4">
      <svg class="w-8 h-8 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
      </svg>
    </div>
    <h2 class="text-xl font-bold text-gray-900 coustard-regular">Event details</h2>
    <p class="text-gray-600 mt-2">How should your events appear on ticketing sites?</p>
  </div>

  <%= form_with url: manage_ticketing_setup_wizard_save_eventinfo_path, method: :post, local: true do |form| %>
    <div class="space-y-5">
      <div>
        <label for="title_template" class="block text-sm font-medium text-gray-900 mb-1.5">
          Event Title Template
        </label>
        <input type="text"
               name="title_template"
               id="title_template"
               value="<%= @wizard_state[:title_template] %>"
               placeholder="{production_name}"
               class="block w-full px-3 py-2.5 bg-white border border-gray-300 rounded-lg shadow-sm text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-pink-500 transition">
        <div class="mt-1.5 text-xs text-gray-500">
          Available variables: <code class="bg-gray-100 px-1 rounded">{production_name}</code>,
          <code class="bg-gray-100 px-1 rounded">{show_date}</code>,
          <code class="bg-gray-100 px-1 rounded">{show_time}</code>
        </div>
        <% if @production %>
          <div class="mt-2 p-2 bg-gray-50 rounded text-sm">
            Preview: <span class="font-medium text-gray-700">
              <%= (@wizard_state[:title_template] || "{production_name}")
                    .gsub("{production_name}", @production.name)
                    .gsub("{show_date}", "January 15, 2026")
                    .gsub("{show_time}", "7:30 PM") %>
            </span>
          </div>
        <% end %>
      </div>

      <div>
        <label for="description" class="block text-sm font-medium text-gray-900 mb-1.5">
          Event Description
          <span class="text-pink-500">*</span>
        </label>
        <textarea name="description"
                  id="description"
                  rows="6"
                  required
                  placeholder="Describe your event for ticket buyers..."
                  class="block w-full px-3 py-2.5 bg-white border border-gray-300 rounded-lg shadow-sm text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-pink-500 transition"><%= @wizard_state[:description] %></textarea>
        <p class="mt-1.5 text-xs text-gray-500">This appears on all your event listings. You can override per-show later.</p>
      </div>

      <div>
        <label for="short_description" class="block text-sm font-medium text-gray-900 mb-1.5">
          Short Description
          <span class="text-gray-400 font-normal">(optional)</span>
        </label>
        <input type="text"
               name="short_description"
               id="short_description"
               value="<%= @wizard_state[:short_description] %>"
               maxlength="140"
               placeholder="A one-liner for social sharing..."
               class="block w-full px-3 py-2.5 bg-white border border-gray-300 rounded-lg shadow-sm text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-pink-500 transition">
        <p class="mt-1.5 text-xs text-gray-500">Used for social media previews. Max 140 characters.</p>
      </div>
    </div>

    <div class="mt-8 flex justify-between">
      <%= link_to manage_ticketing_setup_wizard_strategy_path do %>
        <%= render "shared/button", text: "Back", variant: "secondary", size: "medium" %>
      <% end %>
      <%= render "shared/button", text: "Next", variant: "primary", size: "medium", type: :submit %>
    </div>
  <% end %>
<% end %>
