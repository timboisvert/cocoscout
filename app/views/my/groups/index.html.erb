<% content_for :title, "My Groups" %>

<div class="w-full">

  <%= render partial: "shared/notice", locals: { notice: notice } %>

  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [],
    text: "My Groups",
    links: [
      { text: "Create New Group", path: my_new_group_path }
    ]
  } %>

  <% if @groups.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mt-4">
      <% @groups.each do |group| %>
        <%= link_to my_edit_group_path(group), class: "block bg-white border border-gray-200 rounded-lg p-4 hover:border-pink-400 hover:shadow-md transition" do %>
          <div class="flex items-center gap-3 mb-3">
            <% if group.headshot.attached? %>
              <%= image_tag group.headshot.variant(:thumb), class: "w-16 h-16 rounded-lg object-cover" %>
            <% else %>
              <div class="w-16 h-16 rounded-lg bg-pink-100 flex items-center justify-center text-pink-600 font-bold text-xl">
                <%= group.initials %>
              </div>
            <% end %>
            <div class="flex-1 min-w-0">
              <h3 class="text-lg font-semibold text-gray-900 truncate"><%= group.name %></h3>
              <p class="text-sm text-gray-500"><%= pluralize(group.members.count, 'member') %></p>
            </div>
          </div>

          <% if group.bio.present? %>
            <p class="text-sm text-gray-600 line-clamp-2"><%= group.bio %></p>
          <% end %>

          <% membership = group.group_memberships.find_by(person: Current.user.person) %>
          <% if membership %>
            <div class="mt-3 pt-3 border-t border-gray-100">
              <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium <%= membership.owner? ? 'bg-pink-100 text-pink-700' : membership.write? ? 'bg-blue-100 text-blue-700' : 'bg-gray-100 text-gray-700' %>">
                <%= membership.permission_level.titleize %>
              </span>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="mt-8 text-center">
      <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-gray-100 mb-4">
        <span class="text-3xl">ðŸŽ­</span>
      </div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">You're not part of any groups yet</h3>
      <p class="text-sm text-gray-500 mb-4">Create your first group to collaborate with other performers</p>
      <%= link_to my_new_group_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-pink-600 hover:bg-pink-700" do %>
        Create Your First Group
      <% end %>
    </div>
  <% end %>

</div>
