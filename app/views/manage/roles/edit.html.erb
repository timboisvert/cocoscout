<% content_for :title, "Roles" %>

<div class="w-full">
  <%= render partial: "shared/notice", locals: { notice: notice } %>
  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Casting & Roles", manage_production_casting_path(@production)],
      ["Roles", manage_production_roles_path(@production)]
    ],
    text: "Edit Role: #{@role.name}",
    links: []
  } %>

<%= form_with(model: [:manage, @production, @role], class: "contents") do |form| %>
    <div class="mb-5">
      <% if @role.errors[:name].none? %>
          <%= form.label :name, "Role Name:" %>
      <% else %>
          <%= form.label :name, "Role Name is required:", class: "text-pink-600"  %>
      <% end %>
      <%= form.text_field :name, class: ["inline-block shadow-sm rounded-lg border px-3 py-2 mt-2 w-full sm:w-96 sm:ml-2", {"border-gray-400": @role.errors[:name].none?, "border-pink-500": @role.errors[:name].any?}] %>
      <%= render "shared/button", text: "Update Role", variant: "primary", size: "medium", type: :submit, class: "mt-2 sm:mt-0" %>

    </div>

  <% end %>

</div>
