<div class="text-center max-w-md">
  <%# Logo %>
  <div class="flex items-center justify-center gap-3 mb-8">
    <img src="/icon.png" alt="CocoScout" class="h-12 w-12">
    <span class="text-3xl coustard-regular text-pink-500">CocoScout</span>
  </div>

  <%# Title %>
  <h1 class="text-2xl font-semibold text-slate-900 mb-3"><%= @title %></h1>

  <%# Message %>
  <p class="text-slate-600 mb-8"><%= @message %></p>

  <%# Navigation links %>
  <div class="flex flex-col sm:flex-row items-center justify-center gap-3">
    <% if Current.user.present? %>
      <%= link_to my_requests_path do %>
        <%= render "shared/button", text: "Go to Dashboard", variant: "primary", size: "medium" %>
      <% end %>
    <% else %>
      <%= link_to root_path do %>
        <%= render "shared/button", text: "Go to Home", variant: "primary", size: "medium" %>
      <% end %>
      <%= link_to signin_path do %>
        <%= render "shared/button", text: "Sign In", variant: "secondary", size: "medium" %>
      <% end %>
    <% end %>
  </div>

  <% if @sentry_event_id.present? %>
    <p class="mt-8 text-xs text-slate-400">
      Error reference: <code class="bg-slate-100 px-1.5 py-0.5 rounded"><%= @sentry_event_id %></code>
    </p>
  <% end %>
</div>
