<%
  is_queued = @my_registrations&.any?(&:queued?)
  page_title = is_queued ? "Joined Queue" : "Sign-up Confirmed"
%>
<% content_for :title, page_title %>

<div class="min-h-screen bg-gray-50 py-12">
  <div class="max-w-2xl mx-auto px-4">
    <!-- Success Header -->
    <div class="mb-8">
      <div class="flex items-center gap-4 mb-3">
        <div class="flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full <%= is_queued ? 'bg-amber-100' : 'bg-pink-100' %>">
          <svg class="h-6 w-6 <%= is_queued ? 'text-amber-600' : 'text-pink-600' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7"/>
          </svg>
        </div>
        <h1 class="text-2xl font-bold text-gray-900 coustard-regular"><%= is_queued ? "You're in the Queue!" : "You're Signed Up!" %></h1>
      </div>
      <% if @sign_up_form.success_text.present? %>
        <p class="text-gray-600"><%= @sign_up_form.success_text %></p>
      <% elsif is_queued %>
        <p class="text-gray-600">The organizer will assign you to a slot.</p>
      <% else %>
        <p class="text-gray-600">Your registration has been confirmed.</p>
      <% end %>
    </div>

    <!-- Registration Details Card -->
    <div class="bg-white rounded-xl border border-gray-200 shadow-sm p-6">
      <% if @instance&.show %>
        <div class="mb-5">
          <%= render "shared/show_row", show: @instance.show, show_location: true %>
        </div>
      <% end %>

      <% if @my_registrations.present? %>
        <%
          queued_regs = @my_registrations.select(&:queued?)
          assigned_regs = @my_registrations.reject(&:queued?)
        %>
        <% if queued_regs.any? %>
          <%# Queued registration (admin_assigns mode) %>
          <div class="bg-amber-50 rounded-lg p-4 mb-5 border border-amber-100">
            <p class="text-xs font-medium text-amber-600 uppercase tracking-wide mb-1">Queue Position</p>
            <p class="text-lg font-semibold text-gray-900">#<%= queued_regs.first.position %></p>
            <p class="text-sm text-amber-700 mt-2">The organizer will assign you to a slot. You'll be notified when that happens.</p>
          </div>
        <% elsif assigned_regs.any? %>
          <div class="bg-pink-50 rounded-lg p-4 mb-5 border border-pink-100">
            <p class="text-xs font-medium text-pink-500 uppercase tracking-wide mb-1">
              Your Position<%= assigned_regs.count > 1 ? 's' : '' %>
            </p>
            <% if assigned_regs.count == 1 %>
              <p class="text-lg font-semibold text-gray-900"><%= assigned_regs.first.sign_up_slot.display_name %></p>
            <% else %>
              <ul class="space-y-1">
                <% assigned_regs.each do |reg| %>
                  <li class="text-lg font-semibold text-gray-900"><%= reg.sign_up_slot.display_name %></li>
                <% end %>
              </ul>
            <% end %>
          </div>
        <% end %>

        <% if @can_register_more %>
          <div class="mb-5 p-3 bg-blue-50 border border-blue-100 rounded-lg">
            <p class="text-sm text-blue-800">
              You can register for <%= @registrations_remaining %> more slot<%= @registrations_remaining == 1 ? '' : 's' %>.
            </p>
          </div>
        <% end %>
      <% end %>

      <!-- Action Buttons -->
      <div class="flex flex-wrap gap-3">
        <% if @can_register_more || @sign_up_form.allow_edit %>
          <%= render "shared/button",
            text: @can_register_more ? "Add Another Position" : "View Registration",
            path: my_sign_up_form_path(@code),
            variant: "outline",
            icon: "eye"
          %>
        <% end %>

        <% if @sign_up_form.allow_cancel %>
          <%= render "shared/button",
            text: "Cancel Registration#{@my_registrations.count > 1 ? 's' : ''}",
            path: my_cancel_sign_up_registration_path(@code),
            method: :post,
            variant: "outline",
            icon: "x-mark",
            data: { turbo_confirm: "Are you sure? This will cancel all your registrations." }
          %>
        <% end %>
      </div>
    </div>

    <% if authenticated? %>
      <!-- Profile CTA -->
      <%= link_to edit_profile_path(Current.user.person), class: "block mt-6 group" do %>
        <div class="bg-white rounded-xl border border-gray-200 p-5 hover:border-pink-300 hover:shadow-sm transition-all">
          <div class="flex items-center gap-4">
            <div class="flex-shrink-0 h-10 w-10 rounded-full bg-pink-100 flex items-center justify-center group-hover:bg-pink-200 transition-colors">
              <svg class="h-5 w-5 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
            </div>
            <div class="flex-1">
              <p class="font-medium text-gray-900 group-hover:text-pink-600 transition-colors">While you're here, polish your profile</p>
              <p class="text-gray-500 text-sm mt-0.5">Fresh headshots and an updated bio help you stand out</p>
            </div>
            <svg class="h-5 w-5 text-gray-300 group-hover:text-pink-400 group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </div>
        </div>
      <% end %>
    <% else %>
      <!-- Sign Up CTA for unauthenticated users -->
      <%= link_to signup_path, class: "block mt-6 group" do %>
        <div class="bg-white rounded-xl border border-gray-200 p-5 hover:border-pink-300 hover:shadow-sm transition-all">
          <div class="flex items-center gap-4">
            <div class="flex-shrink-0 h-10 w-10 rounded-full bg-pink-100 flex items-center justify-center group-hover:bg-pink-200 transition-colors">
              <svg class="h-5 w-5 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
              </svg>
            </div>
            <div class="flex-1">
              <p class="font-medium text-gray-900 group-hover:text-pink-600 transition-colors">Create your free CocoScout account</p>
              <p class="text-gray-500 text-sm mt-0.5">Track auditions, manage availability, and get discovered</p>
            </div>
            <svg class="h-5 w-5 text-gray-300 group-hover:text-pink-400 group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </div>
        </div>
      <% end %>
    <% end %>

    <!-- CocoScout Footer -->
    <div class="mt-8 pb-8 text-center">
      <%= link_to root_path, class: "inline-flex items-center gap-2 text-gray-400 hover:text-pink-500 transition-colors" do %>
        <%= image_tag "cocoscoutsmall.png", class: "h-5 w-5", alt: "CocoScout" %>
        <span class="text-sm font-medium">CocoScout</span>
      <% end %>
    </div>
  </div>
</div>
