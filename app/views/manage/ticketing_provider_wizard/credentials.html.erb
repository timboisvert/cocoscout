<%= render layout: "manage/ticketing_provider_wizard/wizard_layout", locals: { current_step: 2, step_name: "Credentials" } do %>
  <h2 class="text-xl font-semibold text-gray-900 mb-2">Enter Your <%= @provider_info[:name] %> Credentials</h2>
  <p class="text-sm text-gray-600 mb-6">
    <% case @provider_type %>
    <% when "ticket_tailor" %>
      You can find your API key in your Ticket Tailor dashboard under Box Office &rarr; API Keys.
    <% when "eventbrite" %>
      You can find your Private Token in Eventbrite under Account Settings &rarr; Developer Links &rarr; API Keys.
    <% else %>
      Enter your API credentials to connect your account.
    <% end %>
  </p>

  <%# Permission requirements %>
  <% if @provider_info[:required_permissions].present? %>
    <div class="bg-amber-50 border border-amber-200 rounded-lg p-4 mb-6">
      <div class="flex">
        <svg class="w-5 h-5 text-amber-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
        <div class="ml-3">
          <p class="text-sm font-medium text-amber-800">Required API Permissions</p>
          <p class="text-sm text-amber-700 mt-1"><%= @provider_info[:required_permissions] %></p>
        </div>
      </div>
    </div>
  <% end %>

  <%= form_with url: manage_ticketing_wizard_save_credentials_path(@organization), method: :post, class: "space-y-6" do |f| %>
    <div>
      <label for="name" class="block text-sm font-medium text-gray-700">
        Display Name
      </label>
      <input type="text" name="name" id="name"
             value="<%= @wizard_state[:name] || @provider_info[:name] %>"
             placeholder="<%= @provider_info[:name] %>"
             class="mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-pink-500 focus:ring-pink-500">
      <p class="mt-1 text-xs text-gray-500">A friendly name to identify this connection</p>
    </div>

    <div>
      <label for="api_key" class="block text-sm font-medium text-gray-700">
        API Key
      </label>
      <input type="password" name="api_key" id="api_key"
             value="<%= @wizard_state[:api_key] %>"
             placeholder="Enter your API key"
             autocomplete="off"
             class="mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-pink-500 focus:ring-pink-500 font-mono">
    </div>

    <% if @provider_info[:help_url].present? %>
      <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
        <div class="flex">
          <svg class="w-5 h-5 text-blue-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <div class="ml-3">
            <p class="text-sm text-blue-700">
              Need help finding your API key?
              <%= link_to "View instructions", @provider_info[:help_url], target: "_blank", class: "font-medium underline" %>
            </p>
          </div>
        </div>
      </div>
    <% end %>

    <div class="flex justify-between pt-4 border-t border-gray-200">
      <%= link_to manage_ticketing_wizard_path(@organization), class: "text-sm text-gray-500 hover:text-gray-700 flex items-center" do %>
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back
      <% end %>
      <%= render "shared/button", text: "Test Connection", variant: "primary", size: "medium", type: :submit %>
    </div>
  <% end %>
<% end %>
