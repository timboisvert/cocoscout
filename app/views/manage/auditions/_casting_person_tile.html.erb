<%# Person/Group tile for casting selection buckets
  Parameters:
    assignable: Person or Group being displayed
    stage: CastAssignmentStage for this assignable
    talent_pool: TalentPool the stage belongs to
    decision_type: "cast" or "rejected"
%>
<div class="flex flex-col items-center relative group cursor-grab active:cursor-grabbing w-18"
    draggable="true"
    data-casting-drag-target="person"
    data-auditionee-type="<%= assignable.class.name %>"
    data-auditionee-id="<%= assignable.id %>"
    data-auditionee-name="<%= assignable.name %>"
    data-source-talent-pool-id="<%= talent_pool.id %>"
    data-decision-type="<%= decision_type %>"
    data-action="dragstart->casting-drag#dragStartPerson dragend->casting-drag#dragEnd">
  <% headshot_variant = assignable.safe_headshot_variant(:thumb) %>
  <% if headshot_variant %>
    <%= image_tag headshot_variant, alt: assignable.name, class: "w-16 h-16 rounded-md object-cover pointer-events-none", draggable: false %>
  <% elsif assignable.is_a?(Person) %>
    <div class="w-16 h-16 rounded-md <%= decision_type == 'rejected' ? 'bg-red-100' : 'bg-pink-100' %> flex items-center justify-center <%= decision_type == 'rejected' ? 'text-red-600' : 'text-pink-600' %> font-bold text-sm pointer-events-none">
      <%= assignable.initials %>
    </div>
  <% else %>
    <div class="w-16 h-16 rounded-md <%= decision_type == 'rejected' ? 'bg-red-100' : 'bg-pink-100' %> flex items-center justify-center <%= decision_type == 'rejected' ? 'text-red-600' : 'text-pink-600' %> pointer-events-none">
      <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
      </svg>
    </div>
  <% end %>
  <span class="text-[10px] text-gray-700 font-medium mt-1 text-center pointer-events-none truncate w-full"><%= assignable.name %></span>
  <button type="button"
    class="absolute bottom-4 left-0 right-0 z-20 <%= decision_type == 'rejected' ? 'text-red-500 border-red-200 hover:bg-red-100' : 'text-pink-500 border-pink-200 hover:bg-pink-100' %> bg-white rounded-md px-1 py-0.5 text-[10px] font-bold shadow transition-all border md:opacity-0 md:group-hover:opacity-100 cursor-pointer"
    data-action="click->casting-drag#removePerson"
    data-talent-pool-id="<%= talent_pool.id %>"
    data-auditionee-type="<%= assignable.class.name %>"
    data-auditionee-id="<%= assignable.id %>">
    Remove
  </button>
</div>
