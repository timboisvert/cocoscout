<% content_for :title, "Edit - #{@casting_table.name}" %>

<div class="w-full mb-10">
  <%= render partial: "shared/notice", locals: { notice: notice } %>

  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Casting", manage_casting_path],
      ["Casting Tables", manage_casting_tables_path],
      [@casting_table.name, manage_casting_table_path(@casting_table)]
    ],
    text: "Edit Casting Table",
    links: []
  } %>

  <div class="max-w-lg mx-auto mt-8">
    <div class="bg-white rounded-lg border border-gray-200 shadow-sm p-6">
      <%= form_with model: @casting_table, url: manage_update_casting_table_path(@casting_table), method: :patch, local: true do |form| %>
        <div class="mb-6">
          <label for="casting_table_name" class="block text-sm font-medium text-gray-700 mb-1">Name</label>
          <%= form.text_field :name, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-pink-500 focus:ring-pink-500 sm:text-sm" %>
        </div>

        <div class="flex items-center justify-between">
          <%= link_to "Cancel", manage_casting_table_path(@casting_table), class: "text-gray-500 hover:text-gray-700" %>
          <%= render "shared/button", text: "Save", variant: "primary", size: "medium", type: :submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>
