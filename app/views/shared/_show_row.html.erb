<%#
  Shared Show Row Component

  Required params:
    - show: Show object

  Optional params:
    - link_path: Path to link to (if nil, renders as div)
    - show_canceled: Show canceled badge and strikethrough date (default: false)
    - show_recurring: Show recurring event indicator (default: false)
    - show_production: Show production name in details line (default: false)
    - show_location: Show location/online indicator (default: true)
    - roles: Array of role names to display (default: nil) - legacy, use role_assignments instead
    - role_assignments: Array of hashes with {role_name:, entity_type:, entity_id:, entity_name:} for detailed display
    - entity: Single entity (Person/Group) for right panel display
    - availability: Availability object for buttons (default: nil)
    - entity_key: Entity key for Stimulus data attribute (default: nil)
    - show_cant_make_it: Whether to show "Can't make it" link (default: false)
    - cant_make_it_person: Person to generate vacancy token for (default: nil)
    - has_groups: Whether the user has any groups (used to determine if headshot should be shown)
    - right_panel: Type of right panel content (:cast_assignment, :availability, or nil for no panel)
%>

<%
  # Set defaults for optional params
  show_canceled = local_assigns.fetch(:show_canceled, false)
  show_recurring = local_assigns.fetch(:show_recurring, false)
  show_production = local_assigns.fetch(:show_production, false)
  show_location = local_assigns.fetch(:show_location, true)
  show_cant_make_it = local_assigns.fetch(:show_cant_make_it, false)
  cant_make_it_person = local_assigns.fetch(:cant_make_it_person, nil)
  has_groups = local_assigns.fetch(:has_groups, false)
  role_assignments = local_assigns.fetch(:role_assignments, [])
  right_panel = local_assigns.fetch(:right_panel, nil)

  is_canceled = show_canceled && show.canceled
  has_link = local_assigns[:link_path].present?
  has_availability = local_assigns[:entity_key].present?
  current_status = local_assigns[:availability]&.status || 'unset'
  can_show_vacancy = show_cant_make_it && cant_make_it_person.present? && !is_canceled && show.date_and_time > Time.current
  has_right_panel = right_panel.present?
%>

<%# Build data attributes for availability rows %>
<%
  data_attrs = {}
  if has_availability
    data_attrs["controller"] = "availability"
    data_attrs["availability-show-id-value"] = show.id
    data_attrs["availability-status-value"] = current_status
    data_attrs["availability-entity-key"] = local_assigns[:entity_key]

    # For manage context (when entity is a Person but not the current user), use the manage endpoint
    if local_assigns[:entity].is_a?(Person) && local_assigns[:entity] != Current.user&.person
      data_attrs["availability-person-id-value"] = local_assigns[:entity].id
      data_attrs["availability-update-url-value"] = update_availability_manage_person_path(local_assigns[:entity])
    end
  end
%>

<%# Row wrapper - either link or div %>
<% row_classes = "flex bg-white items-stretch px-3 py-2 border border-gray-200 rounded-lg hover:border-gray-400 transition-all group" %>

<% content = capture do %>
  <%# Left Section: Date & Show Details %>
  <div class="<%= has_right_panel ? 'flex-1' : 'flex-1' %> flex items-center gap-4">
    <%# Date Box %>
    <div class="flex-shrink-0 w-14 text-center">
      <div class="text-xs font-semibold text-pink-600 uppercase"><%= show.date_and_time.strftime("%b") %></div>
      <div class="text-2xl font-bold text-gray-900 <%= 'line-through text-red-400' if is_canceled %>"><%= show.date_and_time.strftime("%-d") %></div>
      <div class="text-xs text-gray-500"><%= show.date_and_time.strftime("%a") %></div>
    </div>

    <%# Show Details %>
    <div class="flex-1 min-w-0">
      <div class="flex items-center gap-2 flex-wrap">
        <% if is_canceled %>
          <span class="inline-flex items-center rounded-md bg-red-50 px-2 py-1 text-xs font-medium text-red-700 ring-1 ring-inset ring-red-600/10">Canceled</span>
        <% end %>
        <span class="font-medium text-gray-900">
          <%= show.secondary_name.presence || show.event_type.titleize %>
        </span>
        <% if show_recurring && show.recurring? %>
          <span data-controller="tooltip" data-tooltip-text="This is a recurring event">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="text-pink-500 size-4">
              <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0 3.181 3.183a8.25 8.25 0 0 0 13.803-3.7M4.031 9.865a8.25 8.25 0 0 1 13.803-3.7l3.181 3.182m0-4.991v4.99" />
            </svg>
          </span>
        <% end %>
        <% if show_production %>
          <span class="text-sm text-gray-600"><%= show.production.name %></span>
        <% end %>
      </div>
      <div class="text-sm text-gray-600">
        <%= show.date_and_time.strftime("%l:%M %p") %>
        <% if show_location %>
          <% if show.is_online %>
            · Online
          <% elsif show.location.present? %>
            · <%= show.location.name %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <% if right_panel == :cast_assignment && local_assigns[:entity].present? %>
    <%# Right Section: Cast Assignment %>
    <div class="flex-1 border-l border-gray-200 pl-4 flex items-center gap-3">
      <% headshot_variant = entity.safe_headshot_variant(:thumb) %>
      <% if headshot_variant %>
        <%= image_tag headshot_variant, class: "w-10 h-10 rounded-lg object-cover flex-shrink-0" %>
      <% else %>
        <div class="w-10 h-10 rounded-lg bg-gray-200 flex items-center justify-center text-gray-700 font-bold text-sm flex-shrink-0">
          <%= entity.respond_to?(:initials) ? entity.initials : entity.name[0..1].upcase %>
        </div>
      <% end %>
      <div class="flex-1 min-w-0">
        <div class="text-[10px] text-gray-400 uppercase tracking-wide">Cast assignment</div>
        <% role_assignments.each do |ra| %>
          <div class="text-sm flex items-center gap-1">
            <span class="text-gray-700"><%= ra[:entity_name] %></span>
            <span class="text-gray-400">as</span>
            <strong class="text-pink-500"><%= ra[:role_name] %></strong>
            <% if can_show_vacancy %>
              <span class="text-xs text-pink-500 underline cursor-pointer whitespace-nowrap hidden group-hover:inline"
                    onclick="event.stopPropagation(); event.preventDefault(); window.location.href='<%= vacancy_link_for(cant_make_it_person, show) %>';">
                Can't make it?
              </span>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

  <% elsif right_panel == :availability_status %>
    <%# Right Section: Availability Status (read-only text display) %>
    <% availability_obj = local_assigns[:availability] %>
    <div class="flex-shrink-0 ml-4">
      <% if availability_obj %>
        <% if availability_obj.available? %>
          <span class="text-sm font-medium text-pink-500">Available</span>
        <% elsif availability_obj.unavailable? %>
          <span class="text-sm font-medium text-gray-900">Unavailable</span>
        <% else %>
          <span class="text-sm text-gray-400">No response</span>
        <% end %>
      <% else %>
        <span class="text-sm text-gray-400">No response</span>
      <% end %>
    </div>

  <% elsif right_panel == :availability && local_assigns[:entity].present? %>
    <%# Right Section: Availability %>
    <div class="flex-1 border-l border-gray-200 pl-4 flex items-center gap-3">
      <% headshot_variant = entity.safe_headshot_variant(:thumb) %>
      <% if headshot_variant %>
        <%= image_tag headshot_variant, class: "w-10 h-10 rounded-lg object-cover flex-shrink-0" %>
      <% else %>
        <div class="w-10 h-10 rounded-lg bg-gray-200 flex items-center justify-center text-gray-700 font-bold text-sm flex-shrink-0">
          <%= entity.respond_to?(:initials) ? entity.initials : entity.name[0..1].upcase %>
        </div>
      <% end %>
      <div class="flex-1 min-w-0">
        <div class="text-[10px] text-gray-400 uppercase tracking-wide mb-1">Availability</div>
        <div class="flex gap-0">
          <%
            [:available, :unavailable].each do |status|
              classes = "w-8 sm:w-20 text-xs py-1 sm:py-1.5 text-center border border-gray-200 cursor-pointer flex items-center justify-center"

              if status == :available
                classes += " rounded-l border-r-0"
              elsif status == :unavailable
                classes += " rounded-r"
              end

              if current_status == status.to_s
                classes += " bg-pink-500 text-white"
              else
                classes += " bg-white text-gray-700 hover:bg-gray-50"
              end
          %>
            <%= link_to "#", class: classes, data: { action: "click->availability#setStatus", availability_status: status, availability_target: "#{status}Btn" } do %>
              <%# Check icon - shown temporarily after selection %>
              <span data-availability-target="<%= status %>Check" class="hidden">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4">
                  <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 0 1 .143 1.052l-8 10.5a.75.75 0 0 1-1.127.075l-4.5-4.5a.75.75 0 0 1 1.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 0 1 1.05-.143Z" clip-rule="evenodd" />
                </svg>
              </span>
              <%# Normal content %>
              <span data-availability-target="<%= status %>Text">
                <span class="sm:hidden">
                  <% if status == :available %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6.633 10.25c.806 0 1.533-.446 2.031-1.08a9.041 9.041 0 0 1 2.861-2.4c.723-.384 1.35-.956 1.653-1.715a4.498 4.498 0 0 0 .322-1.672V2.75a.75.75 0 0 1 .75-.75 2.25 2.25 0 0 1 2.25 2.25c0 1.152-.26 2.243-.723 3.218-.266.558.107 1.282.725 1.282m0 0h3.126c1.026 0 1.945.694 2.054 1.715.045.422.068.85.068 1.285a11.95 11.95 0 0 1-2.649 7.521c-.388.482-.987.729-1.605.729H13.48c-.483 0-.964-.078-1.423-.23l-3.114-1.04a4.501 4.501 0 0 0-1.423-.23H5.904m10.598-9.75H14.25M5.904 18.5c.083.205.173.405.27.602.197.4-.078.898-.523.898h-.908c-.889 0-1.713-.518-1.972-1.368a12 12 0 0 1-.521-3.507c0-1.553.295-3.036.831-4.398C3.387 9.953 4.167 9.5 5 9.5h1.053c.472 0 .745.556.5.96a8.958 8.958 0 0 0-1.302 4.665c0 1.194.232 2.333.654 3.375Z"/></svg>
                <% else %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7.498 15.25H4.372c-1.026 0-1.945-.694-2.054-1.715a12.137 12.137 0 0 1-.068-1.285c0-2.848.992-5.464 2.649-7.521C5.287 4.247 5.886 4 6.504 4h4.016a4.5 4.5 0 0 1 1.423.23l3.114 1.04a4.5 4.5 0 0 0 1.423.23h1.294M7.498 15.25c.618 0 .991.724.725 1.282A7.471 7.471 0 0 0 7.5 19.75 2.25 2.25 0 0 0 9.75 22a.75.75 0 0 0 .75-.75v-.633c0-.573.11-1.14.322-1.672.304-.76.93-1.33 1.653-1.715a9.04 9.04 0 0 0 2.86-2.4c.498-.634 1.226-1.08 2.032-1.08h.384m-10.253 1.5H9.7m8.075-9.75c.01.05.027.1.05.148.593 1.2.925 2.55.925 3.977 0 1.487-.36 2.89-.999 4.125m.023-8.25c-.076-.365.183-.75.575-.75h.908c.889 0 1.713.518 1.972 1.368.339 1.11.521 2.287.521 3.507 0 1.553-.295 3.036-.831 4.398-.306.774-1.086 1.227-1.918 1.227h-1.053c-.472 0-.745-.556-.5-.96a8.95 8.95 0 0 0 .303-.54"/></svg>
                <% end %>
                </span>
                <span class="hidden sm:inline"><%= status.to_s.humanize %></span>
              </span>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

  <% elsif !has_right_panel %>
    <%# Legacy: No right panel - show role assignments inline and availability buttons on far right %>
    <% if role_assignments.any? %>
      <div class="flex-shrink-0 ml-4">
        <% role_assignments.each do |ra| %>
          <div class="flex items-center gap-2 text-xs">
            <span class="text-gray-500">Role:</span>
            <strong class="text-pink-500"><%= ra[:role_name] %></strong>
            <% if ra[:entity_type] == "Group" %>
              <span class="text-gray-400">(as <%= ra[:entity_name] %>)</span>
            <% end %>
            <% if can_show_vacancy %>
              <span class="hidden group-hover:inline-block text-pink-500 underline cursor-pointer whitespace-nowrap"
                    onclick="event.stopPropagation(); event.preventDefault(); window.location.href='<%= vacancy_link_for(cant_make_it_person, show) %>';">
                Can't make it?
              </span>
            <% end %>
          </div>
        <% end %>
      </div>
    <% elsif local_assigns[:roles].present? %>
      <%# Legacy support for simple role names array %>
      <div class="flex-shrink-0 ml-4">
        <% roles.each do |role_name| %>
          <span class="text-xs text-gray-500">Role:</span>
          <strong class="text-xs text-pink-500"><%= role_name %></strong>
        <% end %>
      </div>
    <% end %>

    <% if has_availability %>
      <%# Legacy Availability Buttons %>
      <div class="flex items-center gap-2 flex-shrink-0 ml-4">
        <div class="w-6 flex justify-center">
          <span data-availability-target="success" class="hidden text-green-600">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
              <path fill-rule="evenodd" d="M8.603 3.799A4.49 4.49 0 0 1 12 2.25c1.357 0 2.573.6 3.397 1.549a4.49 4.49 0 0 1 3.498 1.307 4.491 4.491 0 0 1 1.307 3.497A4.49 4.49 0 0 1 21.75 12a4.49 4.49 0 0 1-1.549 3.397 4.491 4.491 0 0 1-1.307 3.497 4.491 4.491 0 0 1-3.497 1.307A4.49 4.49 0 0 1 12 21.75a4.49 4.49 0 0 1-3.397-1.549 4.49 4.49 0 0 1-3.498-1.306 4.491 4.491 0 0 1-1.307-3.498A4.49 4.49 0 0 1 2.25 12c0-1.357.6-2.573 1.549-3.397a4.49 4.49 0 0 1 1.307-3.497 4.49 4.49 0 0 1 3.497-1.307Zm7.007 6.387a.75.75 0 1 0-1.22-.872l-3.236 4.53L9.53 12.22a.75.75 0 0 0-1.06 1.06l2.25 2.25a.75.75 0 0 0 1.14-.094l3.75-5.25Z" clip-rule="evenodd" />
            </svg>
          </span>
        </div>
        <div class="flex gap-0">
        <%
          [:available, :unavailable].each do |status|
            classes = "w-10 sm:w-24 text-xs sm:text-sm px-2 py-1.5 sm:px-3 sm:py-2 text-center border border-gray-200 cursor-pointer flex items-center justify-center"

            if status == :available
              classes += " rounded-l-lg border-r-0"
            elsif status == :unavailable
              classes += " rounded-r-lg"
            end

            if current_status == status.to_s
              classes += " bg-pink-500 text-white"
            else
              classes += " bg-white text-gray-700 hover:bg-gray-50"
            end

            desktop_content = status.to_s.humanize
        %>
          <%= link_to "#", class: classes, data: { action: "click->availability#setStatus", availability_status: status } do %>
            <span class="sm:hidden">
              <% if status == :available %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6.633 10.25c.806 0 1.533-.446 2.031-1.08a9.041 9.041 0 0 1 2.861-2.4c.723-.384 1.35-.956 1.653-1.715a4.498 4.498 0 0 0 .322-1.672V2.75a.75.75 0 0 1 .75-.75 2.25 2.25 0 0 1 2.25 2.25c0 1.152-.26 2.243-.723 3.218-.266.558.107 1.282.725 1.282m0 0h3.126c1.026 0 1.945.694 2.054 1.715.045.422.068.85.068 1.285a11.95 11.95 0 0 1-2.649 7.521c-.388.482-.987.729-1.605.729H13.48c-.483 0-.964-.078-1.423-.23l-3.114-1.04a4.501 4.501 0 0 0-1.423-.23H5.904m10.598-9.75H14.25M5.904 18.5c.083.205.173.405.27.602.197.4-.078.898-.523.898h-.908c-.889 0-1.713-.518-1.972-1.368a12 12 0 0 1-.521-3.507c0-1.553.295-3.036.831-4.398C3.387 9.953 4.167 9.5 5 9.5h1.053c.472 0 .745.556.5.96a8.958 8.958 0 0 0-1.302 4.665c0 1.194.232 2.333.654 3.375Z"/></svg>
              <% else %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7.498 15.25H4.372c-1.026 0-1.945-.694-2.054-1.715a12.137 12.137 0 0 1-.068-1.285c0-2.848.992-5.464 2.649-7.521C5.287 4.247 5.886 4 6.504 4h4.016a4.5 4.5 0 0 1 1.423.23l3.114 1.04a4.5 4.5 0 0 0 1.423.23h1.294M7.498 15.25c.618 0 .991.724.725 1.282A7.471 7.471 0 0 0 7.5 19.75 2.25 2.25 0 0 0 9.75 22a.75.75 0 0 0 .75-.75v-.633c0-.573.11-1.14.322-1.672.304-.76.93-1.33 1.653-1.715a9.04 9.04 0 0 0 2.86-2.4c.498-.634 1.226-1.08 2.032-1.08h.384m-10.253 1.5H9.7m8.075-9.75c.01.05.027.1.05.148.593 1.2.925 2.55.925 3.977 0 1.487-.36 2.89-.999 4.125m.023-8.25c-.076-.365.183-.75.575-.75h.908c.889 0 1.713.518 1.972 1.368.339 1.11.521 2.287.521 3.507 0 1.553-.295 3.036-.831 4.398-.306.774-1.086 1.227-1.918 1.227h-1.053c-.472 0-.745-.556-.5-.96a8.95 8.95 0 0 0 .303-.54"/></svg>
              <% end %>
            </span>
            <span class="hidden sm:inline"><%= desktop_content %></span>
          <% end %>
        <% end %>
        </div>
      </div>
    <% end %>

    <% if local_assigns[:entity_headshots].present? %>
      <div class="flex-shrink-0 flex gap-1 ml-4">
        <% entity_headshots.each do |ent| %>
          <% headshot_var = ent.safe_headshot_variant(:thumb) %>
          <% if headshot_var %>
            <%= image_tag headshot_var, class: "w-10 h-10 rounded-lg object-cover" %>
          <% else %>
            <div class="w-10 h-10 rounded-lg bg-gray-200 flex items-center justify-center text-gray-700 font-bold text-sm">
              <%= ent.respond_to?(:initials) ? ent.initials : ent.name[0..1].upcase %>
            </div>
          <% end %>
        <% end %>
      </div>
    <% elsif local_assigns[:show_entity_headshots] && local_assigns[:entity].present? %>
      <div class="flex-shrink-0 ml-2">
        <% headshot_var = entity.safe_headshot_variant(:thumb) %>
        <% if headshot_var %>
          <%= image_tag headshot_var, class: "w-10 h-10 rounded-lg object-cover" %>
        <% else %>
          <div class="w-10 h-10 rounded-lg bg-gray-200 flex items-center justify-center text-gray-700 font-bold text-sm">
            <%= entity.respond_to?(:initials) ? entity.initials : entity.name[0..1].upcase %>
          </div>
        <% end %>
      </div>
    <% end %>
  <% end %>
<% end %>

<% if has_link %>
  <%= link_to link_path, class: "block" do %>
    <div class="<%= row_classes %>">
      <%= content %>
    </div>
  <% end %>
<% else %>
  <div class="<%= row_classes %>" <%= data_attrs.map { |k, v| "data-#{k}=\"#{v}\"" }.join(" ").html_safe %>>
    <%= content %>
  </div>
<% end %>
