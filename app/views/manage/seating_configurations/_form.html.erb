<%= form_with model: configuration, url: configuration.persisted? ? manage_seating_configuration_path(configuration) : manage_seating_configurations_path, class: "space-y-6" do |form| %>
  <% if configuration.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <ul class="list-disc list-inside text-red-700 text-sm">
        <% configuration.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="bg-white rounded-lg border border-gray-200 p-6 space-y-4">
    <h3 class="font-medium text-gray-900 mb-4">Configuration Details</h3>

    <div>
      <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :name, class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500", placeholder: "e.g., Main Theater - Standard Layout" %>
    </div>

    <div>
      <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_area :description, rows: 2, class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500", placeholder: "Optional description of this seating arrangement" %>
    </div>

    <div class="grid grid-cols-2 gap-4">
      <div>
        <%= form.label :location_id, "Location (optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.collection_select :location_id, Current.organization.locations.order(:name), :id, :name, { include_blank: "Select location..." }, class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500" %>
      </div>
      <div>
        <%= form.label :location_space_id, "Space / Room (optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%
          # Get all spaces from all locations the org has
          all_spaces = LocationSpace.where(location_id: Current.organization.locations.pluck(:id)).includes(:location).order(:name)
          space_options = all_spaces.map { |s| ["#{s.location.name} - #{s.name}", s.id] }
        %>
        <%= form.select :location_space_id, space_options, { include_blank: "Select space..." }, class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500" %>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg border border-gray-200 p-6">
    <h3 class="font-medium text-gray-900 mb-4">Seating Zones</h3>
    <p class="text-sm text-gray-500 mb-4">Define the different seating areas for this configuration.</p>

    <div id="seating-zones" class="space-y-4">
      <%= form.fields_for :seating_zones do |zone_form| %>
        <div class="p-4 bg-gray-50 rounded-lg zone-row">
          <div class="grid grid-cols-2 gap-4 mb-3">
            <div>
              <label class="block text-xs font-medium text-gray-500 mb-1">Zone Name</label>
              <%= zone_form.text_field :name, class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500 text-sm", placeholder: "e.g., Front Section" %>
            </div>
            <div>
              <label class="block text-xs font-medium text-gray-500 mb-1">Type</label>
              <%= zone_form.select :zone_type, SeatingZone::ZONE_TYPES.map { |k, v| [k.to_s.titleize.gsub('_', ' '), v] }, {}, class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500 text-sm" %>
            </div>
          </div>
          <div class="grid grid-cols-2 gap-4 mb-3">
            <div>
              <label class="block text-xs font-medium text-gray-500 mb-1">Count (# of units)</label>
              <%= zone_form.number_field :unit_count, min: 1, class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500 text-sm", placeholder: "e.g., 10 tables" %>
            </div>
            <div>
              <label class="block text-xs font-medium text-gray-500 mb-1">Capacity Per Unit</label>
              <%= zone_form.number_field :capacity_per_unit, min: 1, class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500 text-sm", placeholder: "e.g., 4 seats each" %>
            </div>
          </div>
          <%= zone_form.hidden_field :position %>
          <% if zone_form.object.persisted? %>
            <div class="flex items-center gap-2">
              <%= zone_form.check_box :_destroy, class: "hidden", id: "zone_destroy_#{zone_form.object.id}" %>
              <%= render "shared/button", text: "Delete Zone", variant: "danger", size: "small", type: :button, classes: "zone-delete-btn", onclick: "document.getElementById('zone_destroy_#{zone_form.object.id}').checked = true; this.closest('.zone-row').classList.add('opacity-50', 'bg-red-50'); this.closest('.zone-row').querySelector('.zone-delete-btn').remove();" %>
            </div>
          <% else %>
            <%= render "shared/button", text: "Remove Zone", variant: "danger", size: "small", type: :button, onclick: "this.closest('.zone-row').remove()" %>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="mt-4">
      <%= render "shared/button", text: "+ Add another zone", variant: "ghost", type: :button, size: "small", onclick: "addZoneRow()" %>
    </div>
  </div>

  <div class="flex justify-between items-center">
    <% if configuration.persisted? %>
      <%= link_to manage_seating_configuration_path(configuration) do %>
        <%= render "shared/button", text: "Cancel", variant: "ghost-cancel", type: :button %>
      <% end %>
    <% else %>
      <%= link_to manage_seating_configurations_path do %>
        <%= render "shared/button", text: "Cancel", variant: "ghost-cancel", type: :button %>
      <% end %>
    <% end %>

    <%= render "shared/button", text: configuration.persisted? ? "Update Configuration" : "Create Configuration", variant: "primary", type: :submit %>
  </div>
<% end %>

<script>
  let zoneIndex = <%= configuration.seating_zones.size %>;

  function addZoneRow() {
    const container = document.getElementById('seating-zones');
    const html = `
      <div class="p-4 bg-gray-50 rounded-lg zone-row">
        <div class="grid grid-cols-2 gap-4 mb-3">
          <div>
            <label class="block text-xs font-medium text-gray-500 mb-1">Zone Name</label>
            <input type="text" name="seating_configuration[seating_zones_attributes][${zoneIndex}][name]" class="w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500 text-sm" placeholder="e.g., Front Section">
          </div>
          <div>
            <label class="block text-xs font-medium text-gray-500 mb-1">Type</label>
            <select name="seating_configuration[seating_zones_attributes][${zoneIndex}][zone_type]" class="w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500 text-sm">
              <option value="individual_seats">Individual Seats</option>
              <option value="tables">Tables</option>
              <option value="rows">Rows</option>
              <option value="booths">Booths</option>
              <option value="standing">Standing</option>
            </select>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-4 mb-3">
          <div>
            <label class="block text-xs font-medium text-gray-500 mb-1">Count (# of units)</label>
            <input type="number" name="seating_configuration[seating_zones_attributes][${zoneIndex}][unit_count]" min="1" class="w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500 text-sm" placeholder="e.g., 10 tables">
          </div>
          <div>
            <label class="block text-xs font-medium text-gray-500 mb-1">Capacity Per Unit</label>
            <input type="number" name="seating_configuration[seating_zones_attributes][${zoneIndex}][capacity_per_unit]" min="1" class="w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500 text-sm" placeholder="e.g., 4 seats each">
          </div>
        </div>
        <input type="hidden" name="seating_configuration[seating_zones_attributes][${zoneIndex}][position]" value="${zoneIndex}">
        <button type="button" onclick="this.closest('.zone-row').remove()" class="inline-flex items-center px-3 py-1.5 text-sm font-medium text-red-600 bg-white border border-red-300 rounded-lg hover:bg-red-50 transition-colors">Remove Zone</button>
      </div>
    `;
    container.insertAdjacentHTML('beforeend', html);
    zoneIndex++;
  }
</script>
