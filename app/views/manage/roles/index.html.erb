<% content_for :title, "Roles" %>

<div class="w-full" data-controller="role-modal" data-create-path="<%= manage_production_roles_path(@production) %>">
  <%= render partial: "shared/notice", locals: { notice: notice } %>
  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Casting & Roles", manage_production_casting_path(@production)]
    ],
    text: "Roles",
    links: current_user_can_manage?(@production) ? [
      { text: "Add Role", path: "#", data_action: "role-modal#openForNew" }
    ] : []
  } %>

  <p class="text-sm text-gray-500 pb-4">Roles represent the parts within your production. For example, "Host" or "Comic 1"</p>

  <div class="space-y-2">
    <% if @roles.any? %>
      <div data-controller="role-order" data-role-order-url-value="<%= reorder_manage_production_roles_path(@production) %>">
        <% @roles.each do |role| %>
          <div class="p-4 bg-white border border-gray-200 rounded-lg hover:border-gray-400 transition-all flex cursor-move mb-2 group" draggable="true" data-role-order-target="item" data-id="<%= role.id %>" data-action="dragstart->role-order#startDrag dragend->role-order#endDrag dragover->role-order#dragOver drop->role-order#drop touchstart->role-order#touchStart touchmove->role-order#touchMove touchend->role-order#touchEnd">
            <div class="flex items-center gap-4 w-full">
              <span class="text-gray-400 cursor-move" title="Drag to reorder">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 9h16.5m-16.5 6.75h16.5" />
                </svg>
              </span>
              <div class="flex-1">
                <div class="font-bold text-md flex items-center gap-2">
                  <%= role.name %>
                </div>
                <% if role.restricted? %>
                  <div class="flex items-center gap-1 mt-2">
                    <span class="text-gray-400 mr-1" title="Restricted role">
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 1 0-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 0 0 2.25-2.25v-6.75a2.25 2.25 0 0 0-2.25-2.25H6.75a2.25 2.25 0 0 0-2.25 2.25v6.75a2.25 2.25 0 0 0 2.25 2.25Z" />
                      </svg>
                    </span>
                    <% role.eligible_members.first(5).each do |member| %>
                      <% headshot_variant = member.safe_headshot_variant(:thumb) %>
                      <% if headshot_variant %>
                        <%= image_tag headshot_variant, alt: member.name, title: member.name, class: "w-8 h-8 rounded-lg object-cover" %>
                      <% else %>
                        <div class="w-8 h-8 rounded-lg bg-gray-200 flex items-center justify-center text-gray-700 font-bold text-xs" title="<%= member.name %>">
                          <%= member.initials %>
                        </div>
                      <% end %>
                    <% end %>
                    <% if role.eligible_members.count > 5 %>
                      <span class="text-xs text-gray-500">+<%= role.eligible_members.count - 5 %> more</span>
                    <% end %>
                  </div>
                <% else %>
                  <p class="text-xs text-gray-500 mt-1">Available to all talent pool members</p>
                <% end %>
              </div>
              <% if current_user_can_manage?(@production) %>
                <%
                  eligible_member_keys = role.role_eligibilities.map { |e| "#{e.member_type}_#{e.member_id}" }
                %>
                <div class="flex gap-2 items-center opacity-0 group-hover:opacity-100 transition-opacity">
                  <button data-action="role-modal#openForEdit" data-role-name="<%= role.name %>" data-role-restricted="<%= role.restricted? %>" data-eligible-member-keys="<%= eligible_member_keys.to_json %>" data-update-path="<%= manage_production_role_path(@production, role) %>" class="text-xs text-pink-500 hover:text-pink-600 underline cursor-pointer">
                    Edit
                  </button>
                  <%= link_to "Delete",
                      manage_production_role_path(@production, role),
                      class: "text-xs text-pink-500 hover:text-pink-600 underline cursor-pointer",
                      data: {
                        turbo_method: :delete,
                        turbo_confirm: "Are you sure you want to delete this role?"
                      }
                  %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500 text-sm">
        No roles have been added.
      </p>
    <% end %>
  </div>

  <!-- Modal for adding/editing roles -->
  <% if current_user_can_manage?(@production) %>
    <div data-role-modal-target="modal" class="<%= @role.errors.any? ? '' : 'hidden' %> fixed inset-0 bg-black/60 backdrop-blur-sm overflow-y-auto h-full w-full z-50" data-action="click->role-modal#close">
      <div class="relative top-20 mx-auto p-5 border w-full max-w-md shadow-lg rounded-md bg-white" data-action="click->role-modal#stopPropagation">
        <div class="flex items-center justify-between pb-3 border-b border-gray-200">
          <h3 class="text-lg font-semibold text-gray-900" data-role-modal-target="title"><%= @role.persisted? ? 'Edit Role' : 'Add Role' %></h3>
          <button type="button" class="text-gray-400 hover:text-gray-600 cursor-pointer" data-action="role-modal#close">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </button>
      </div>
      <div class="mt-4">
        <%= form_with(model: [:manage, @production, @role], data: { role_modal_target: "form" }) do |form| %>
          <input type="hidden" name="_method" value="<%= @role.persisted? ? 'patch' : 'post' %>" data-role-modal-target="methodInput">
          <div class="mb-4">
            <%= form.label :name, "Role Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <% if @role.errors[:name].any? %>
              <p class="text-sm text-pink-600 mb-2"><%= @role.errors[:name].first %></p>
            <% end %>
            <%= form.text_field :name, data: { role_modal_target: "nameInput" }, placeholder: "e.g., Host, Comic 1", class: ["w-full px-3 py-2 border rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-pink-500", @role.errors[:name].any? ? "border-pink-500" : "border-gray-300"] %>
          </div>

          <!-- Restricted toggle -->
          <div class="mb-4">
            <label class="flex items-center gap-3 cursor-pointer">
              <%= form.check_box :restricted,
                  class: "sr-only peer",
                  data: { role_modal_target: "restrictedCheckbox", action: "change->role-modal#toggleRestricted" } %>
              <div class="relative w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-pink-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-pink-500"></div>
              <span class="text-sm font-medium text-gray-700">Restrict who can be cast</span>
            </label>
            <p class="text-xs text-gray-500 mt-1 ml-14">When enabled, only selected cast members will be eligible for this role</p>
          </div>

          <!-- Eligible cast members section (hidden when not restricted) -->
          <div data-role-modal-target="eligiblePeopleSection" class="hidden mb-4">
            <label class="block text-sm font-medium text-gray-700 mb-2">Eligible Cast Members</label>
            <% if @talent_pool_members.present? %>
              <!-- Search input -->
              <input type="text"
                     placeholder="Search cast members..."
                     class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-pink-500 mb-2"
                     data-role-modal-target="searchInput"
                     data-action="input->role-modal#filterPeople">
              <div class="max-h-48 overflow-y-auto border border-gray-200 rounded-md">
                <% @talent_pool_members.each do |member| %>
                  <label class="flex items-center gap-2 px-3 py-2 hover:bg-gray-50 cursor-pointer" data-person-name="<%= member.name %>">
                    <input type="checkbox"
                           name="role[eligible_member_ids][]"
                           value="<%= "#{member.class.name}_#{member.id}" %>"
                           class="accent-pink-500 cursor-pointer"
                           data-role-modal-target="personCheckbox">
                    <% headshot_variant = member.safe_headshot_variant(:thumb) %>
                    <% if headshot_variant %>
                      <%= image_tag headshot_variant, alt: member.name, class: "w-6 h-6 rounded-full object-cover flex-shrink-0" %>
                    <% else %>
                      <div class="w-6 h-6 rounded-full bg-gray-200 flex items-center justify-center text-gray-700 font-bold text-[10px] flex-shrink-0">
                        <%= member.initials %>
                      </div>
                    <% end %>
                    <span class="text-sm text-gray-700"><%= member.name %></span>
                  </label>
                <% end %>
              </div>
            <% else %>
              <p class="text-sm text-gray-500 italic">No cast members in talent pools yet. Add people or groups to talent pools first.</p>
            <% end %>
          </div>

          <div class="flex justify-end gap-2">
            <%= render "shared/button", text: "Cancel", variant: "ghost-cancel", size: "small", type: :button, data: { action: "role-modal#close" } %>
            <%= render "shared/button", text: (@role.persisted? ? "Update Role" : "Add Role"), variant: "primary", size: "small", type: :submit, data: { role_modal_target: "submitButton" } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>

</div>
