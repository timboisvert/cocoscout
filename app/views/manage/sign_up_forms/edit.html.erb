<% content_for :title, "Edit - #{@sign_up_form.name}" %>

<div class="w-full pb-16" data-controller="question-modal tabs"
     data-create-path="<%= create_question_manage_production_sign_up_form_path(@production, @sign_up_form) %>"
     data-new-description="Custom Questions are shown on the sign-up form."
     data-has-errors="<%= @question.errors.any? %>"
     data-tabs-initial-tab-value="<%= params[:tab].to_i %>">
  <%= render partial: "shared/notice", locals: { notice: notice } %>
  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Sign-ups", manage_production_sign_up_forms_path(@production)],
      [@sign_up_form.name, manage_production_sign_up_form_path(@production, @sign_up_form)]
    ],
    text: "Edit Form",
    links: [
      { text: "Settings", path: settings_manage_production_sign_up_form_path(@production, @sign_up_form) },
      { text: "Preview Form", path: preview_manage_production_sign_up_form_path(@production, @sign_up_form), target: "_blank" }
    ]
  } %>

  <%# Tab Navigation %>
  <nav class="flex space-x-2 border-b border-gray-200 mb-6 overflow-x-auto">
    <button type="button" data-tabs-target="tab" data-index="0" data-action="tabs#select" class="px-4 py-2 text-sm font-medium border-b-2 cursor-pointer whitespace-nowrap">Basic Info</button>
    <button type="button" data-tabs-target="tab" data-index="1" data-action="tabs#select" class="px-4 py-2 text-sm font-medium border-b-2 cursor-pointer whitespace-nowrap">Instructions</button>
    <button type="button" data-tabs-target="tab" data-index="2" data-action="tabs#select" class="px-4 py-2 text-sm font-medium border-b-2 cursor-pointer whitespace-nowrap">Questions</button>
  </nav>

  <%# ==================== TAB 0: BASIC INFO ==================== %>
  <div data-tabs-target="panel">
    <%= form_with model: [:manage, @production, @sign_up_form], method: :patch, local: true, class: "space-y-6" do |form| %>
      <%= hidden_field_tag :tab, "0" %>

      <div class="bg-white border border-gray-200 rounded-lg shadow-sm overflow-hidden">
        <%= render "shared/card_header", title: "Form Name" %>
        <div class="p-5 space-y-6">
          <div>
            <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <p class="text-xs text-gray-500 mb-2">This is the name shown to people signing up</p>
            <%= form.text_field :name, class: "block w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-pink-500 focus:ring-pink-500", placeholder: "e.g., Open Mic Night Sign-ups" %>
            <% if @sign_up_form.errors[:name].any? %>
              <p class="mt-1 text-sm text-pink-600"><%= @sign_up_form.errors[:name].first %></p>
            <% end %>
          </div>
        </div>
      </div>

      <div>
        <%= render partial: "shared/button", locals: { text: "Save Name", variant: "primary", type: "submit" } %>
      </div>
    <% end %>
  </div>

  <%# ==================== TAB 1: INSTRUCTIONS ==================== %>
  <div data-tabs-target="panel" class="hidden">
    <%= form_with model: [:manage, @production, @sign_up_form], method: :patch, local: true, class: "space-y-6" do |form| %>
      <%= hidden_field_tag :tab, "1" %>

      <%# Introduction Instructions %>
      <div class="bg-white border border-gray-200 rounded-lg shadow-sm overflow-hidden">
        <%= render "shared/card_header", title: "Introduction Instructions" %>
        <div class="p-5">
          <p class="text-sm text-gray-600 mb-4">This text appears at the top of the sign-up form, before any questions.</p>
          <%= form.rich_text_area :instruction_text,
                                  class: "w-full prose max-w-none",
                                  data: { controller: "trix-no-files" } %>
        </div>
      </div>

      <%# Success Message %>
      <div class="bg-white border border-gray-200 rounded-lg shadow-sm overflow-hidden">
        <%= render "shared/card_header", title: "Success Message" %>
        <div class="p-5">
          <p class="text-sm text-gray-600 mb-4">This text is shown after someone successfully submits the sign-up form.</p>
          <%= form.rich_text_area :success_text,
                                  class: "w-full prose max-w-none",
                                  data: { controller: "trix-no-files" } %>
        </div>
      </div>

      <div>
        <%= render partial: "shared/button", locals: { text: "Save Instructions", variant: "primary", type: "submit" } %>
      </div>
    <% end %>
  </div>

  <%# ==================== TAB 2: QUESTIONS ==================== %>
  <div data-tabs-target="panel" class="hidden">
    <p class="text-sm text-gray-600 mb-5">Add custom questions to collect additional information. Questions appear on the sign-up form.</p>
    <%= render partial: "questions" %>
  </div>

  <!-- Question Modal -->
  <%= render "shared/question_modal" %>
</div>

<%# Sticky Action Bar %>
<div class="fixed bottom-4 left-4 right-4 lg:left-60 lg:right-4 bg-white rounded-lg shadow-lg border border-gray-200 z-20">
  <div class="px-4 py-3 flex items-center justify-between gap-4">
    <%# Status %>
    <div class="flex items-center gap-3">
      <% color = @sign_up_form.registration_status_color %>
      <span class="inline-flex items-center gap-1.5 rounded-full px-2.5 py-1 text-xs font-medium bg-<%= color %>-100 text-<%= color %>-800">
        <span class="w-1.5 h-1.5 rounded-full bg-<%= color %>-500"></span>
        <%= @sign_up_form.registration_status_label %>
      </span>
      <% if @sign_up_form.short_code.present? %>
        <span class="text-xs text-gray-500 hidden sm:inline">Code: <span class="font-mono font-medium"><%= @sign_up_form.short_code %></span></span>
      <% end %>
    </div>
    
    <%# Actions %>
    <div class="flex items-center gap-2">
      <%= link_to manage_production_sign_up_form_path(@production, @sign_up_form), class: "inline-flex items-center gap-1.5 px-3 py-1.5 text-xs font-medium rounded-lg text-gray-700 bg-gray-100 hover:bg-gray-200" do %>
        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/></svg>
        View Registrations
      <% end %>
      <%= link_to preview_manage_production_sign_up_form_path(@production, @sign_up_form), target: "_blank", class: "inline-flex items-center gap-1.5 px-3 py-1.5 text-xs font-medium rounded-lg text-pink-700 bg-pink-100 hover:bg-pink-200" do %>
        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
        Preview
      <% end %>
    </div>
  </div>
</div>
