<% content_for :title, "Editing audition cycle" %>

<div class="w-full">
  <%= render partial: "shared/notice", locals: { notice: notice } %>
  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Auditions", manage_production_auditions_path(@production)],
      ["Prepare", prepare_manage_production_audition_cycle_path(@production, @audition_cycle)]
    ],
    text: "Sign-up Form",
    links: [
      { text: "Preview Form", path: preview_manage_production_audition_cycle_path(@production, @audition_cycle), target: "_blank" }
    ]
  } %>

  <%= render partial: "manage/auditions/lifecycle_panel", locals: { current_step: :prepare } %>

  <!-- Section 1: Availability -->
  <div class="mb-4 border border-gray-200 rounded-lg overflow-hidden" data-controller="show-toggle" data-show-toggle-initial-open-value="<%= params[:question_id].blank? && params[:questions_open].blank? && @question_error.blank? %>">
    <div class="bg-gray-50 px-4 py-3 border-b border-gray-200 flex items-center justify-between cursor-pointer" data-action="click->show-toggle#toggle">
      <h3 class="text-md font-semibold text-gray-900 coustard-regular">Availability</h3>
      <div data-show-toggle-target="icon"></div>
    </div>
    <div data-show-toggle-target="content">
      <%= form_with(model: [:manage, @production, @audition_cycle], class: "contents") do |form| %>
        <div class="p-4" data-controller="availability-filter">
          <p class="text-sm text-gray-500 mb-4">Include a section on the sign-up form where auditionees can indicate their availability for scheduled events.</p>

          <div class="mb-1">
            <%= form.check_box :include_availability_section, class: "rounded accent-pink-500 border-gray-300 text-pink-600 focus:ring-pink-500", data: { action: "change->availability-filter#toggleSection", availability_filter_target: "enableCheckbox" } %>
            <%= form.label :include_availability_section, "Request availability in sign-up form", class: "ml-2 text-sm text-gray-700" %>
          </div>

          <div class="<%= @audition_cycle.include_availability_section == true ? '' : 'hidden' %>" data-availability-filter-target="eventSection">
            <div class="mb-4">
              <%= form.check_box :require_all_availability, class: "rounded accent-pink-500 border-gray-300 text-pink-600 focus:ring-pink-500" %>
              <%= form.label :require_all_availability, "Require auditionees to enter availability in order to submit sign-up form", class: "ml-2 text-sm text-gray-700" %>
            </div>

          <div class="flex flex-col md:flex-row gap-6">
            <!-- Left side: Event type selection -->
            <div class="flex-1">
              <label class="text-sm font-medium text-gray-700 block mb-2">Include:</label>
              <div class="space-y-2">
                <div>
                  <%= radio_button_tag "event_filter_mode", "all", @audition_cycle.availability_event_types.blank?, class: "rounded-full accent-pink-500 border-gray-300 text-pink-600 focus:ring-pink-500", data: { action: "change->availability-filter#updateFilter" } %>
                  <%= label_tag "event_filter_mode_all", "All Shows & Events", class: "ml-2 text-sm text-gray-700" %>
                </div>
                <div>
                  <%= radio_button_tag "event_filter_mode", "specific", @audition_cycle.availability_event_types.present?, class: "rounded-full accent-pink-500 border-gray-300 text-pink-600 focus:ring-pink-500", data: { action: "change->availability-filter#updateFilter" } %>
                  <%= label_tag "event_filter_mode_specific", "Only specific show & event types", class: "ml-2 text-sm text-gray-700" %>
                </div>
              </div>

              <%= hidden_field_tag "audition_cycle[availability_event_types][]", "" %>
              <div class="ml-6 mt-2 space-y-1 <%= @audition_cycle.availability_event_types.present? ? '' : 'hidden' %>" data-availability-filter-target="checkboxes">
                <% Show.event_types.keys.each do |event_type| %>
                  <div>
                    <%= check_box_tag "audition_cycle[availability_event_types][]", event_type, @audition_cycle.availability_event_types&.include?(event_type), id: "audition_cycle_availability_event_types_#{event_type}", class: "rounded accent-pink-500 border-gray-300 text-pink-600 focus:ring-pink-500", data: { action: "change->availability-filter#updateEventList", availability_filter_target: "checkbox" } %>
                    <%= label_tag "audition_cycle_availability_event_types_#{event_type}", event_type.titleize.pluralize, class: "ml-2 text-sm text-gray-700 cursor-pointer" %>
                  </div>
                <% end %>
              </div>

              <div class="mt-2">
                <%= link_to "Manage Shows & Events", manage_production_shows_path(@production, first_closed: true), class: "text-xs text-pink-500 underline" %>
              </div>
            </div>

            <!-- Right side: Events list -->
            <div class="flex-1">
              <% if @production.shows.any? %>
                <%
                  selected_count = if @audition_cycle.availability_event_types.present?
                    @production.shows.where(event_type: @audition_cycle.availability_event_types).count
                  else
                    @production.shows.count
                  end
                %>
                <h4 class="text-sm font-medium text-gray-700 mb-2">Selected Shows & Events (<span data-availability-filter-target="count"><%= selected_count %></span>):</h4>
                <div class="bg-gray-50 rounded-lg p-3 max-h-40 overflow-y-auto">
                  <ul class="space-y-1 text-sm" data-availability-filter-target="eventList">
                    <% @production.shows.order(:date_and_time).each do |show| %>
                      <li class="flex justify-between" data-event-type="<%= show.event_type %>">
                        <span class="text-gray-900">
                          <%= show.event_type.titleize %>
                          <% if show.secondary_name.present? %>
                            - <%= show.secondary_name %>
                          <% end %>
                        </span>
                        <span class="text-gray-500 text-xs"><%= show.date_and_time.strftime("%b %d") %></span>
                      </li>
                    <% end %>
                  </ul>
                </div>
              <% else %>
                <h4 class="text-sm font-medium text-gray-700 mb-2">Selected Shows & Events:</h4>
                <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-3">
                  <p class="text-sm text-yellow-800">No shows or events have been scheduled. <%= link_to "Schedule Shows & Events", new_manage_production_show_path(@production), class: "font-medium text-yellow-600 hover:text-yellow-500" %></p>
                </div>
              <% end %>
            </div>
            </div>
          </div>

          <div class="border-t border-gray-200 pt-4 mt-4">
            <%= form.submit "Save Availability Settings", class: "w-full sm:w-auto rounded-lg px-3.5 py-2.5 bg-pink-500 hover:bg-pink-600 text-white inline-block font-medium text-sm cursor-pointer" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Section 2: Custom Questions -->
  <div class="mb-4 border border-gray-200 rounded-lg overflow-hidden" data-controller="show-toggle" data-show-toggle-initial-open-value="<%= params[:question_id].present? || params[:questions_open].present? || @question_error.present? %>">
    <div class="bg-gray-50 px-4 py-3 border-b border-gray-200 flex items-center justify-between cursor-pointer" data-action="click->show-toggle#toggle">
      <h3 class="text-md font-semibold text-gray-900 coustard-regular">Custom Questions</h3>
      <div data-show-toggle-target="icon"></div>
    </div>
    <div data-show-toggle-target="content">
      <div class="p-4">
        <p class="text-sm text-gray-500 mb-4">Add custom questions to your sign-up form.</p>
        <%= render partial: "questions" %>
      </div>
    </div>
  </div>

  <!-- Section 3: Text and Instructions -->
  <div class="mb-4 border border-gray-200 rounded-lg overflow-hidden" data-controller="show-toggle">
    <div class="bg-gray-50 px-4 py-3 border-b border-gray-200 flex items-center justify-between cursor-pointer" data-action="click->show-toggle#toggle">
      <h3 class="text-md font-semibold text-gray-900 coustard-regular">Text and Instructions</h3>
      <div data-show-toggle-target="icon"></div>
    </div>
    <div data-show-toggle-target="content" class="hidden">
      <%= form_with(model: [:manage, @production, @audition_cycle], class: "contents") do |form| %>
        <div class="p-4 overflow-x-hidden">
          <div class="w-full max-w-4xl overflow-x-auto" data-controller="tabs">
      <nav class="flex space-x-2 border-b border-gray-200 mb-4">
        <% idx = 0 %>
        <button type="button" data-tabs-target="tab" data-index="<%= idx %>" data-action="tabs#select" class="px-4 py-2 text-sm font-medium bg-white border-b-2 text-pink-600 cursor-pointer">Header Text</button>
        <% idx += 1 %>
        <% if @audition_cycle.audition_type == "video_upload" %>
          <button type="button" data-tabs-target="tab" data-index="<%= idx %>" data-action="tabs#select" class="px-4 py-2 text-sm font-medium bg-gray-50 border-b-2 text-gray-500 cursor-pointer">Video Field Text</button>
          <% idx += 1 %>
        <% end %>
        <button type="button" data-tabs-target="tab" data-index="<%= idx %>" data-action="tabs#select" class="px-4 py-2 text-sm font-medium bg-gray-50 border-b-2 text-gray-500 cursor-pointer">Success Text</button>
      </nav>

      <%= hidden_field_tag :active_tab, params[:tab] || 0, data: { tabs_target: "hiddenField" } %>
      <div data-tabs-target="panel">
        <div class="my-5">
          <p class="text-sm text-gray-500 pb-5">At the top of the Sign-up form you can add text to describe the production, the audition process, cast expectations, etc.</p>
          <%= form.rich_text_area :header_text, class: ["block shadow-sm rounded-lg border px-3 py-2 mt-2 w-full max-h-96 overflow-auto min-w-0", {"border-gray-400": @audition_cycle.errors[:header_text].none?, "border-pink-500": @audition_cycle.errors[:header_text].any?}] %>
        </div>

        <div class="w-full border-t border-gray-200 pt-5 my-5">
          <%= form.submit "Update", class: "w-full sm:w-auto rounded-lg px-3.5 py-2.5 bg-pink-500 hover:bg-pink-600 text-white inline-block font-medium cursor-pointer" %>
          <%= link_to "Back", "javascript:history.back()", class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-lg px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
        </div>
      </div>

      <% if @audition_cycle.audition_type == "video_upload" %>
        <div data-tabs-target="panel" class="hidden">
          <div class="my-5">
            <p class="text-sm text-gray-500 pb-5">Add text that gets shown with the video upload URL, which can be used to provide instructions on what the video should be, how it should be uploaded, etc.</p>
            <%= form.rich_text_area :video_field_text, class: ["block shadow-sm rounded-lg border px-3 py-2 mt-2 w-full max-h-96 overflow-auto min-w-0", {"border-gray-400": @audition_cycle.errors[:video_field_text].none?, "border-pink-500": @audition_cycle.errors[:video_field_text].any?}] %>
          </div>

          <div class="w-full border-t border-gray-200 pt-5 my-5">
            <%= form.submit "Update", class: "w-full sm:w-auto rounded-lg px-3.5 py-2.5 bg-pink-500 hover:bg-pink-600 text-white inline-block font-medium cursor-pointer" %>
            <%= link_to "Back", "javascript:history.back()", class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-lg px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
          </div>
        </div>
      <% end %>

      <div data-tabs-target="panel" class="hidden">
        <div class="my-5">
          <p class="text-sm text-gray-500 pb-5">After an auditionee submits the Sign-up form, they're shown text that you can customize here.</p>
          <%= form.rich_text_area :success_text, class: ["block shadow-sm rounded-lg border px-3 py-2 mt-2 w-full max-h-96 overflow-auto min-w-0", {"border-gray-400": @audition_cycle.errors[:success_text].none?, "border-pink-500": @audition_cycle.errors[:success_text].any?}] %>
        </div>

        <div class="w-full border-t border-gray-200 pt-5 my-5">
          <%= form.submit "Update Text", class: "w-full sm:w-auto rounded-lg px-3.5 py-2.5 bg-pink-500 hover:bg-pink-600 text-white inline-block font-medium cursor-pointer" %>
          <%= link_to "Back", "javascript:history.back()", class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-lg px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
        </div>
      </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Section 4: Form Review Status -->
  <div class="mb-4 border border-gray-200 rounded-lg overflow-hidden">
    <div class="bg-gray-50 px-4 py-3 border-b border-gray-200">
      <h3 class="text-md font-semibold text-gray-900 coustard-regular">Form Review Status</h3>
    </div>
    <div class="p-4">
      <p class="text-sm text-gray-500 mb-4">Mark the sign-up form as reviewed once you've confirmed all questions and settings are correct. This helps you keep track of what's ready to be shared.</p>
      <%= form_with url: manage_production_audition_cycle_path(@production, @audition_cycle), method: :patch, class: "contents", data: { turbo: false } do |form| %>
        <div class="flex items-center mb-4">
          <input type="hidden" name="audition_cycle[form_reviewed]" value="0" />
          <input type="checkbox" id="form_reviewed" name="audition_cycle[form_reviewed]" value="1" <%= @audition_cycle.form_reviewed ? 'checked' : '' %> class="rounded accent-pink-500 border-gray-300 text-pink-600 focus:ring-pink-500" />
          <label for="form_reviewed" class="ml-2 text-sm text-gray-700 cursor-pointer">I have reviewed the sign-up form and it's ready to be shared</label>
        </div>
        <div class="w-full border-t border-gray-200 pt-4">
          <button type="submit" class="rounded-lg px-3.5 py-2.5 bg-pink-500 hover:bg-pink-600 text-white font-medium text-sm cursor-pointer">Save Review Status</button>
        </div>
      <% end %>
    </div>
  </div>

</div>

