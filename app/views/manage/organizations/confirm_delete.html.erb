<% content_for :title, "Delete #{@organization.name}" %>

<div class="w-full">
  <%= render partial: "shared/notice", locals: { notice: notice } %>

  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Organizations", manage_organizations_path],
      [@organization.name, manage_organization_path(@organization)]
    ],
    text: "Delete Organization",
    links: []
  } %>

    <div class="bg-white border border-red-200 rounded-lg shadow-sm overflow-hidden mt-6">
      <!-- Warning Header -->
      <div class="bg-red-50 px-6 py-4 border-b border-red-200">
        <div class="flex items-center gap-3">
          <svg class="w-8 h-8 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
          </svg>
          <div>
            <h1 class="text-xl font-bold text-red-800 coustard-regular">Delete "<%= @organization.name %>"</h1>
            <p class="text-sm text-red-600">This action is permanent and cannot be undone.</p>
          </div>
        </div>
      </div>

      <!-- What Will Be Deleted -->
      <div class="px-6 py-5">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">The following will be permanently deleted:</h2>

        <ul class="space-y-2 text-sm text-gray-700">
          <li class="flex items-center gap-2">
            <svg class="w-4 h-4 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            <span><strong><%= @stats[:productions] %></strong> production(s) and all their data</span>
          </li>
          <li class="flex items-center gap-2">
            <svg class="w-4 h-4 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            <span><strong><%= @stats[:shows] %></strong> show(s) with availability, casting, and attendance data</span>
          </li>
          <li class="flex items-center gap-2">
            <svg class="w-4 h-4 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            <span><strong><%= @stats[:people] %></strong> people in the talent pool</span>
          </li>
          <li class="flex items-center gap-2">
            <svg class="w-4 h-4 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            <span><strong><%= @stats[:groups] %></strong> group(s)</span>
          </li>
          <li class="flex items-center gap-2">
            <svg class="w-4 h-4 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            <span><strong><%= @stats[:locations] %></strong> location(s)</span>
          </li>
          <li class="flex items-center gap-2">
            <svg class="w-4 h-4 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            <span>All audition requests, questionnaire responses, and session data</span>
          </li>
          <li class="flex items-center gap-2">
            <svg class="w-4 h-4 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            <span>All uploaded files (logos, posters, headshots, etc.)</span>
          </li>
          <li class="flex items-center gap-2">
            <svg class="w-4 h-4 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            <span><strong><%= @stats[:team_members] %></strong> team member access(es) will be revoked</span>
          </li>
        </ul>

        <div class="mt-6 p-4 bg-yellow-50 border border-yellow-200 rounded-lg">
          <p class="text-sm text-yellow-800">
            <strong>Note:</strong> User accounts will not be deleted. Team members and talent will still have their CocoScout accounts, but they will no longer be associated with this organization.
          </p>
        </div>
      </div>

      <!-- Confirmation Form -->
      <div class="px-6 py-5 bg-gray-50 border-t border-gray-200" data-controller="confirm-delete" data-confirm-delete-expected-phrase-value="DELETE">
        <p class="text-sm text-gray-700 mb-3">
          To confirm deletion, type <strong class="text-red-600 font-mono">DELETE</strong> in the field below:
        </p>

        <%= form_with url: manage_organization_path(@organization), method: :delete, local: true, class: "space-y-4" do |f| %>
          <div>
            <input type="text"
                   data-confirm-delete-target="input"
                   data-action="input->confirm-delete#validate"
                   class="block w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-red-500 focus:ring-red-500"
                   placeholder="Type DELETE to confirm"
                   autocomplete="off">
          </div>

          <div class="flex items-center gap-3">
            <%= render "shared/button", text: "Cancel", variant: "secondary", size: "medium", path: manage_organization_path(@organization) %>
            <%= render "shared/button",
                text: "Permanently Delete Organization",
                variant: "danger",
                size: "medium",
                type: :submit,
                data: { "confirm-delete-target": "button" },
                disabled: true %>
          </div>
        <% end %>
      </div>
    </div>
</div>
