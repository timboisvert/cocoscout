<%= render partial: "shared/top_menu", locals: {
  breadcrumbs: [
    ["Money", manage_money_index_path],
    ["Financials", manage_money_production_financials_path(@production)],
    [@production.name, manage_money_production_financials_path(@production)],
    ["Ticketing", manage_money_ticketing_production_links_path(@production)],
    [@ticketing_production_link.provider_event_name || "Link", manage_money_ticketing_production_link_path(@production, @ticketing_production_link)]
  ],
  text: "Match Shows"
} %>

<div class="max-w-4xl mx-auto px-4 py-6">
  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">Match Shows to Ticketing Events</h3>
      <p class="text-sm text-gray-500 mt-1">
        Link your CocoScout shows to their corresponding ticketing events
      </p>
    </div>

    <% if @analysis[:matches].any? || @analysis[:unmatched_shows].any? %>
      <%= form_with url: manage_apply_matches_money_ticketing_production_link_path(@production, @ticketing_production_link), method: :post do |f| %>
        <div class="divide-y divide-gray-200">
          <%# Auto-matched shows %>
          <% @analysis[:matches].each_with_index do |match, index| %>
            <div class="px-6 py-4 bg-green-50">
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-4">
                  <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  <div>
                    <p class="font-medium text-gray-900">
                      <%= match[:show].event_type.titleize %>
                    </p>
                    <p class="text-sm text-gray-500">
                      <%= match[:show].date_and_time.strftime("%b %-d, %Y at %-I:%M %p") %>
                    </p>
                  </div>
                </div>
                <div class="flex items-center space-x-4">
                  <div class="text-right">
                    <p class="text-sm font-medium text-green-700">Auto-matched</p>
                    <p class="text-xs text-gray-500">
                      <%= match[:occurrence_time]&.strftime("%b %-d at %-I:%M %p") %>
                    </p>
                  </div>
                  <input type="hidden" name="matches[][show_id]" value="<%= match[:show].id %>">
                  <input type="hidden" name="matches[][occurrence_id]" value="<%= match[:occurrence_id] %>">
                  <label class="flex items-center">
                    <input type="checkbox" checked class="h-4 w-4 text-pink-600 border-gray-300 rounded focus:ring-pink-500 accent-pink-600"
                           onchange="this.previousElementSibling.disabled = !this.checked">
                    <span class="ml-2 text-sm text-gray-700">Link</span>
                  </label>
                </div>
              </div>
            </div>
          <% end %>

          <%# Unmatched shows %>
          <% @analysis[:unmatched_shows].each do |show| %>
            <div class="px-6 py-4">
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-4">
                  <svg class="w-5 h-5 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                  </svg>
                  <div>
                    <p class="font-medium text-gray-900">
                      <%= show.event_type.titleize %>
                    </p>
                    <p class="text-sm text-gray-500">
                      <%= show.date_and_time.strftime("%b %-d, %Y at %-I:%M %p") %>
                    </p>
                  </div>
                </div>
                <div class="flex items-center space-x-4">
                  <input type="hidden" name="matches[][show_id]" value="<%= show.id %>">
                  <% if @analysis[:unmatched_occurrences].any? %>
                    <select name="matches[][occurrence_id]" class="rounded-md border-gray-300 text-sm focus:border-pink-500 focus:ring-pink-500">
                      <option value="">-- Select event --</option>
                      <% @analysis[:unmatched_occurrences].each do |occ| %>
                        <option value="<%= occ[:id] %>">
                          <%= occ[:time]&.strftime("%b %-d at %-I:%M %p") || occ[:id] %>
                        </option>
                      <% end %>
                    </select>
                  <% else %>
                    <span class="text-sm text-gray-500">No matching events available</span>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 flex justify-end space-x-3">
          <%= link_to "Cancel", manage_money_ticketing_production_link_path(@production, @ticketing_production_link),
                     class: "text-sm text-gray-500 hover:text-gray-700" %>
          <%= f.submit "Apply Matches", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-pink-600 hover:bg-pink-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-pink-500 cursor-pointer" %>
        </div>
      <% end %>
    <% else %>
      <div class="px-6 py-8 text-center text-gray-500">
        <p>All shows are already matched!</p>
        <%= link_to "Back to overview", manage_money_ticketing_production_link_path(@production, @ticketing_production_link),
                   class: "text-pink-600 hover:text-pink-800 mt-2 inline-block" %>
      </div>
    <% end %>
  </div>

  <% if @analysis[:unmatched_occurrences].any? %>
    <div class="mt-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
      <h4 class="text-sm font-medium text-blue-800">
        <%= @analysis[:unmatched_occurrences].count %> unmatched ticketing events
      </h4>
      <p class="text-sm text-blue-700 mt-1">
        These events exist in your ticketing platform but don't match any shows:
      </p>
      <ul class="mt-2 text-sm text-blue-700">
        <% @analysis[:unmatched_occurrences].first(5).each do |occ| %>
          <li><%= occ[:time]&.strftime("%b %-d, %Y at %-I:%M %p") || occ[:id] %></li>
        <% end %>
        <% if @analysis[:unmatched_occurrences].count > 5 %>
          <li class="text-blue-500">... and <%= @analysis[:unmatched_occurrences].count - 5 %> more</li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
