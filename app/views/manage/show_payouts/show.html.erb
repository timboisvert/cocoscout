<% content_for :title, "Payout: #{show_display_name(@show)} - #{@production.name}" %>

<%
  has_financials = @show_financials&.complete?
  has_line_items = @line_items&.any? || false
  is_calculated = @show_payout.calculated_at.present?

  # Determine payout status with new terminology
  if @show_payout.paid?
    payout_status = :paid
    payout_label = "Paid"
    payout_class = "bg-pink-100 text-pink-700"
  elsif is_calculated
    payout_status = :awaiting_payout
    payout_label = "Awaiting Payout"
    payout_class = "bg-pink-100 text-pink-700"
  elsif has_financials
    payout_status = :ready
    payout_label = "Ready to Calculate"
    payout_class = "bg-gray-100 text-gray-700"
  else
    payout_status = :awaiting_calculation
    payout_label = "Awaiting Calculation"
    payout_class = "bg-pink-100 text-pink-700"
  end

  # Check for missing cast (non-guest people in show who aren't in payout)
  non_guest_assignments = @show.show_person_role_assignments.where.not(assignable_id: nil)
  current_cast_ids = non_guest_assignments.pluck(:assignable_id).compact
  payout_payee_ids = @show_payout.line_items.where(payee_type: "Person").where(is_guest: false).pluck(:payee_id)
  missing_cast_count = (current_cast_ids - payout_payee_ids).size
  has_missing_cast = is_calculated && missing_cast_count > 0

  # Check for stale cast (people in payout who are no longer in the show's cast)
  stale_cast_ids = payout_payee_ids - current_cast_ids
  stale_cast_count = stale_cast_ids.size
  has_stale_cast = is_calculated && stale_cast_count > 0

  # Check for guests in cast who aren't in payout yet
  guest_assignments = @show.show_person_role_assignments.where(assignable_id: nil).where.not(guest_name: nil)
  current_guest_names = guest_assignments.pluck(:guest_name).compact
  payout_guest_names = @show_payout.line_items.where(is_guest: true).pluck(:guest_name).compact
  missing_guests_count = (current_guest_names - payout_guest_names).size
  has_missing_guests = is_calculated && missing_guests_count > 0

  # Check for guests in payout who need payment info
  guest_line_items = @show_payout.line_items.where(is_guest: true)
  guests_without_payment = guest_line_items.reject(&:paid?).select { |li| !li.guest_has_payment_method? }
  has_guests_needing_payment = guests_without_payment.any?

  # Check for regular performers (non-guests) who need payment info
  regular_line_items = @show_payout.line_items.where(payee_type: "Person").where(is_guest: [false, nil])
  performers_without_payment = regular_line_items.reject(&:paid?).select { |li| li.payee && !li.payee.venmo_configured? && !li.payee.zelle_configured? }

  # Check for people with unpaid advances who need payment info
  show_advances_for_setup = @production.person_advances.for_show(@show).unpaid.includes(:person)
  people_with_advances_needing_setup = show_advances_for_setup.select { |a| !a.person.venmo_configured? && !a.person.zelle_configured? }.map(&:person).uniq

  # Combine: performers from payout + people with unpaid advances, without duplication
  payout_people_ids = performers_without_payment.map { |li| li.payee&.id }.compact
  all_people_needing_payment_setup = performers_without_payment.map(&:payee).compact +
    people_with_advances_needing_setup.reject { |p| payout_people_ids.include?(p.id) }
  has_people_needing_payment = all_people_needing_payment_setup.any?

  # Get list of people in production for add person dropdown
  production_people = @production.effective_talent_pool&.people&.order(:name) || []

  # Page title: secondary_name if present, otherwise "[event type]: [full date] at [time]"
  page_title = @show.secondary_name.presence || "#{@show.event_type.titleize}: #{@show.date_and_time.strftime('%B %-d, %Y')} at #{@show.date_and_time.strftime('%-I:%M %p')}"
%>

<div class="w-full mb-10">
  <%= render partial: "shared/notice", locals: { notice: notice, alert: alert } %>
  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Money", manage_money_index_path],
      ["Payouts", manage_money_payouts_path],
      [@production.name, manage_money_production_payouts_path(@production)]
    ],
    text: page_title,
    links: []
  } %>

  <!-- Show Summary Row - uses same partial as money index -->
  <div class="mb-6">
    <%= render partial: "manage/payouts/money_show_row", locals: { show: @show, production: @production } %>
  </div>

  <%
    # Prepare payee data for the walkthrough (available to both main content and sidebar)
    line_items = @line_items || []
    unpaid_line_items = line_items.reject(&:paid?)

    # Group unpaid line items by payee for the walkthrough
    grouped_unpaid_payees = unpaid_line_items.group_by do |item|
      if item.is_guest?
        [:guest, item.guest_name]
      else
        [item.payee_type, item.payee_id]
      end
    end.values

    payees_for_js = grouped_unpaid_payees.map.with_index do |items, idx|
      item = items.first
      total_net = items.sum(&:net_amount)
      {
        id: items.map(&:id).join(","),
        name: item.payee_name,
        amount: total_net,
        venmo_handle: item.payee.respond_to?(:formatted_venmo_identifier) ? item.payee.formatted_venmo_identifier : nil,
        venmo_ready: item.payee_venmo_ready?
      }
    end
  %>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6"
       data-controller="payment-actions"
       data-payment-actions-payees-value="<%= payees_for_js.to_json %>">

    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">

      <% if has_stale_cast || has_missing_guests %>
        <!-- Cast Has Changed Alert - needs recalculation -->
        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
          <div class="flex gap-3">
            <svg class="w-5 h-5 text-red-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
            </svg>
            <div class="flex-1">
              <p class="text-sm text-red-800 font-medium">
                Cast has changed since this payout was calculated
              </p>
              <p class="text-sm text-red-700 mt-1">
                <% if has_stale_cast && has_missing_guests %>
                  <%= stale_cast_count %> performer<%= stale_cast_count == 1 ? " is" : "s are" %> no longer in the cast, and <%= missing_guests_count %> guest<%= missing_guests_count == 1 ? " is" : "s are" %> missing from this payout.
                <% elsif has_stale_cast %>
                  <%= stale_cast_count %> performer<%= stale_cast_count == 1 ? " is" : "s are" %> no longer in the show's cast.
                <% else %>
                  <%= missing_guests_count %> guest<%= missing_guests_count == 1 ? " is" : "s are" %> missing from this payout.
                <% end %>
                Recalculate to update the payout.
              </p>
              <div class="mt-3">
                <%= render "shared/button",
                      text: "Recalculate Payout",
                      variant: "secondary",
                      size: "small",
                      icon: "arrow-path",
                      path: manage_calculate_money_show_payout_path(@show),
                      method: :post %>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <% if has_missing_cast %>
        <!-- Missing Cast Alert -->
        <div class="bg-amber-50 border border-amber-200 rounded-lg p-4">
          <div class="flex gap-3">
            <svg class="w-5 h-5 text-amber-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
            </svg>
            <div class="flex-1">
              <p class="text-sm text-amber-800 font-medium">
                <%= missing_cast_count %> cast member<%= missing_cast_count == 1 ? " is" : "s are" %> not in this payout
              </p>
              <p class="text-sm text-amber-700 mt-1">
                The show's cast has changed since this payout was calculated. You can add the missing people now.
              </p>
              <div class="mt-3 flex flex-wrap gap-2">
                <button type="button"
                        data-action="click->payment-actions#showAddMissingCastModal"
                        class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg text-sm font-medium bg-amber-100 text-amber-800 hover:bg-amber-200 transition-colors">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
                  </svg>
                  Add Missing Cast
                </button>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <% if has_guests_needing_payment %>
        <!-- Guest Payment Info Needed -->
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
          <div class="flex gap-3">
            <svg class="w-5 h-5 text-blue-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
            <div class="flex-1">
              <p class="text-sm text-blue-800 font-medium">
                <%= guests_without_payment.size %> guest<%= guests_without_payment.size == 1 ? " needs" : "s need" %> payment info
              </p>
              <p class="text-sm text-blue-700 mt-1">
                Add Venmo or Zelle details for guest performers so you can pay them.
              </p>
              <div class="mt-3">
                <button type="button"
                        data-action="click->payment-actions#showGuestPaymentModal"
                        class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg text-sm font-medium bg-blue-100 text-blue-800 hover:bg-blue-200 transition-colors">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"/>
                  </svg>
                  Add Guest Payment Info
                </button>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <% if has_people_needing_payment %>
        <!-- Payment Setup Section (matches /manage/money/payouts style) -->
        <div class="bg-white rounded-lg border border-gray-200 p-5" data-controller="show-toggle qr-code" data-qr-code-url-value="<%= my_payments_setup_url %>">
          <div class="flex items-center justify-between mb-3">
            <div>
              <h3 class="font-semibold text-gray-900">Payment Setup</h3>
              <p class="text-sm text-gray-500 mt-0.5">
                <%= all_people_needing_payment_setup.size %> <%= all_people_needing_payment_setup.size == 1 ? "person hasn't" : "people haven't" %> set up their payment info
              </p>
            </div>
            <div class="flex items-center gap-2">
              <%= render "shared/button", text: "QR Code", variant: "outline", size: "small", icon: "qr-code", data: { action: "click->qr-code#open" } %>
              <%= render "shared/button", text: "Send Reminders", variant: "primary", size: "small", icon: "paper-airplane", path: manage_send_payment_reminders_money_show_payout_path(@show), method: :post %>
            </div>
          </div>

          <button type="button" data-action="click->show-toggle#toggle" class="flex items-center gap-1 text-xs text-gray-500 hover:text-gray-700 cursor-pointer">
            <svg data-show-toggle-target="icon" class="w-3 h-3 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
            Show names
          </button>
          <div data-show-toggle-target="content" class="hidden mt-3 pt-3 border-t border-gray-100">
            <div class="flex flex-wrap gap-1.5">
              <% all_people_needing_payment_setup.each do |person| %>
                <span class="inline-flex items-center px-2 py-0.5 bg-gray-100 text-gray-600 rounded text-xs">
                  <%= person.name %>
                </span>
              <% end %>
            </div>
          </div>

          <%# QR Code Modal %>
          <div data-qr-code-target="modal" class="hidden fixed inset-0 bg-black/50 z-50 flex items-center justify-center" data-action="click->qr-code#closeOnBackdrop keydown.esc@window->qr-code#closeOnEscape">
            <div class="bg-white rounded-lg shadow-xl max-w-md w-full mx-4" data-action="click->qr-code#stopPropagation">
              <div class="flex items-center justify-between px-6 py-4 border-b border-gray-200">
                <h3 class="text-lg font-semibold text-gray-900">Payment Setup QR Code</h3>
                <button type="button" data-action="click->qr-code#close" class="text-gray-400 hover:text-gray-600 cursor-pointer">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                  </svg>
                </button>
              </div>
              <div class="p-6 text-center">
                <p class="text-sm text-gray-600 mb-4">Show this QR code at your venue. When scanned, it takes performers to their payment setup page.</p>
                <div class="inline-block p-4 bg-white border-2 border-gray-200 rounded-lg">
                  <canvas data-qr-code-target="canvas" width="200" height="200"></canvas>
                </div>
                <p class="text-xs text-gray-500 mt-4"><%= my_payments_setup_url %></p>
                <button type="button" data-action="click->qr-code#download" class="mt-4 inline-flex items-center gap-1.5 px-4 py-2 bg-gray-100 text-gray-700 rounded-lg text-sm font-medium hover:bg-gray-200 transition cursor-pointer">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
                  </svg>
                  Download
                </button>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <% if @show.canceled? && !@show_payout.paid? %>
        <!-- Canceled Show Notice -->
        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
          <div class="flex gap-3">
            <svg class="w-5 h-5 text-red-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd"/>
            </svg>
            <div>
              <p class="text-sm text-red-800 font-medium">This show was canceled</p>
              <p class="text-sm text-red-700 mt-1">You can still process payouts for this show. Choose how you'd like to handle compensation:</p>
              <div class="mt-3 flex flex-wrap gap-2">
                <%= form_with url: manage_close_as_non_paying_money_show_payout_path(@show), method: :post, local: true do %>
                  <%= render "shared/button", text: "Close as Non-Paying", variant: "secondary", size: "small", type: :submit %>
                <% end %>
                <% if @show_payout.payout_scheme || @show_payout.has_overrides? %>
                  <%= form_with url: manage_calculate_money_show_payout_path(@show), method: :post, local: true do %>
                    <%= render "shared/button", text: "Pay as Originally Planned", variant: "secondary", size: "small", type: :submit %>
                  <% end %>
                <% end %>
                <%= link_to manage_override_money_show_payout_path(@show), data: { turbo_frame: "customize_modal" } do %>
                  <%= render "shared/button", text: "Set Custom Amounts", variant: "secondary", size: "small" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <% unless has_financials %>
        <!-- Need Financial Data Notice -->
        <div class="bg-pink-50 border border-pink-200 rounded-lg p-4">
          <div class="flex gap-3">
            <svg class="w-5 h-5 text-pink-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <div>
              <% if @show_financials&.has_data? %>
                <p class="text-sm text-pink-800 font-medium">Financial data needs confirmation</p>
                <p class="text-sm text-pink-700 mt-1">Review and confirm your financial data to calculate payouts.</p>
                <div class="mt-3">
                  <%= link_to manage_money_show_financials_path(@show) do %>
                    <%= render "shared/button", text: "View & Confirm Financials", variant: "primary", size: "small" %>
                  <% end %>
                </div>
              <% else %>
                <p class="text-sm text-pink-800 font-medium">Financial data needed</p>
                <p class="text-sm text-pink-700 mt-1">Enter ticket sales and revenue data to calculate payouts for this show.</p>
                <div class="mt-3">
                  <%= link_to manage_money_show_financials_path(@show) do %>
                    <%= render "shared/button", text: "Enter Financial Data", variant: "primary", size: "small" %>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Payout Scheme Info -->
      <div class="bg-white rounded-lg border border-gray-200 p-5">
        <div class="flex items-center justify-between mb-3">
          <h3 class="font-semibold text-gray-900">Payout Scheme</h3>
          <%= link_to manage_money_payout_schemes_path, class: "text-sm text-pink-600 hover:text-pink-700" do %>
            Manage Schemes
          <% end %>
        </div>
        <% if @show_payout.has_overrides? %>
          <div class="flex items-center gap-2 text-pink-600 mb-2">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a.75.75 0 000 1.5h.253a.25.25 0 01.244.304l-.459 2.066A1.75 1.75 0 0010.747 15H11a.75.75 0 000-1.5h-.253a.25.25 0 01-.244-.304l.459-2.066A1.75 1.75 0 009.253 9H9z" clip-rule="evenodd"/>
            </svg>
            <span class="text-sm font-medium">Custom Rules</span>
          </div>
          <p class="text-sm text-gray-600 mb-3">This show has custom payout rules.</p>
          <% if @show_payout.can_edit? %>
            <div class="flex flex-wrap gap-2">
              <%= link_to manage_override_money_show_payout_path(@show), data: { turbo_frame: "customize_modal" } do %>
                <%= render "shared/button", text: "Edit Custom Rules", variant: "secondary", size: "small" %>
              <% end %>
              <%= form_with url: manage_clear_override_money_show_payout_path(@show), method: :delete, local: true, class: "inline" do %>
                <%= render "shared/button", text: "Use Default Scheme", variant: "ghost", size: "small", type: :submit %>
              <% end %>
            </div>
          <% end %>
        <% elsif @show_payout.payout_scheme %>
          <div class="font-medium text-gray-900"><%= @show_payout.payout_scheme.name %></div>
          <p class="text-sm text-gray-500 mt-1"><%= @show_payout.payout_scheme.rules_summary %></p>
          <% if @show_payout.can_edit? %>
            <div class="mt-3 flex flex-wrap gap-2">
              <%= link_to manage_override_money_show_payout_path(@show), data: { turbo_frame: "customize_modal" } do %>
                <%= render "shared/button", text: "Customize", variant: "secondary", size: "small" %>
              <% end %>
              <%= link_to manage_change_scheme_money_show_payout_path(@show), data: { turbo_frame: "change_scheme_modal" } do %>
                <%= render "shared/button", text: "Change Scheme", variant: "ghost", size: "small" %>
              <% end %>
            </div>
          <% end %>
        <% else %>
          <% available_schemes = PayoutScheme.where(organization: Current.organization).order(:name) %>
          <% if available_schemes.any? %>
            <p class="text-sm text-gray-500 mb-3">Select a scheme to use for this show's payouts.</p>
            <%= form_with model: @show_payout, url: manage_money_show_payout_path(@show), method: :patch, local: true do |f| %>
              <div class="flex flex-wrap gap-2">
                <%= f.select :payout_scheme_id,
                    options_from_collection_for_select(available_schemes, :id, :name),
                    { prompt: "Choose a scheme..." },
                    class: "flex-1 min-w-[200px] rounded-lg border border-gray-300 px-3 py-2 text-sm focus:border-pink-500 focus:ring-pink-500" %>
                <%= render "shared/button", text: "Set Scheme", variant: "primary", size: "small", type: :submit %>
              </div>
            <% end %>
          <% else %>
            <p class="text-sm text-gray-500 mb-3">No payout schemes available. Create one to calculate payouts.</p>
            <%= link_to manage_presets_money_payout_schemes_path do %>
              <%= render "shared/button", text: "Create a Scheme", variant: "primary", size: "small" %>
            <% end %>
          <% end %>
        <% end %>
      </div>

      <!-- Advances for This Show -->
      <% show_advances = @production.person_advances.for_show(@show).includes(:person).by_issued_at %>
      <% if show_advances.any? %>
        <%
          unpaid_advances = show_advances.unpaid
          paid_advances = show_advances.paid
          total_amount = show_advances.sum(:original_amount)
          unpaid_amount = unpaid_advances.sum(:original_amount)
        %>
        <div class="bg-white rounded-lg border border-gray-200 p-5"
             data-controller="advance-payments"
             data-advance-payments-advances-value="<%= unpaid_advances.map { |a| { id: a.id, name: a.person.name, amount: a.original_amount, venmo: a.person.formatted_venmo_identifier } }.to_json %>">

          <div class="flex items-center justify-between mb-4">
            <h3 class="font-semibold text-gray-900">Advances</h3>
            <span class="text-lg font-semibold text-pink-600">
              <%= number_to_currency(total_amount) %>
            </span>
          </div>

          <% if unpaid_advances.any? %>
            <!-- Pay Advances Button -->
            <div class="bg-pink-50 rounded-lg p-4 mb-4">
              <div class="flex items-center justify-between flex-wrap gap-3">
