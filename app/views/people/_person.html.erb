<div id="<%= dom_id person %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Stage name:</strong>
    <%= person.stage_name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Email:</strong>
    <%= person.email %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Pronouns:</strong>
    <%= person.pronouns %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Socials:</strong>
    <%= person.socials %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Resume:</strong>
    <% if person.resume.attached? %>
      <%= link_to "Click to download", url_for(person.resume) %>
    <% else %>
      No resume uploaded
    <% end %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Headshot:</strong>
    <% if person.headshot.attached? %>
      <%= image_tag url_for(person.headshot) %>
    <% else %>
      No headshot uploaded
    <% end %>
  </div>
  
</div>
