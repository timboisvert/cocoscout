<%#
  Financials Show Row - Three Panel Layout for Revenue Events

  Required:
    - show: Show object
    - production: Production object

  Panels (revenue events):
    1. Date/Time box + Show info
    2. Revenue panel
    3. Expenses panel
    4. Status panel
%>

<%
  financials = show.show_financials
  has_data = financials&.has_data?
  data_confirmed = financials&.data_confirmed?
  is_revenue_event = show.revenue_event?
  is_canceled = show.canceled?
  is_overridden_non_revenue = financials&.non_revenue_override? && EventTypes.revenue_event_default(show.event_type)

  # Determine status
  if is_canceled
    status_label = "Canceled"
    status_class = "text-red-600"
  elsif !is_revenue_event
    status_label = "Non-revenue"
    status_class = "text-gray-500"
  elsif data_confirmed
    status_label = "Complete"
    status_class = "text-green-600"
  elsif has_data
    status_label = "Needs Review"
    status_class = "text-amber-600"
  else
    status_label = "Needs Data"
    status_class = "text-pink-600"
  end

  total_revenue = financials&.total_revenue || 0
  total_expenses = financials&.calculated_expenses || 0
  production_expenses = financials&.calculated_production_expenses || 0
  all_expenses = total_expenses + production_expenses
%>

<div class="bg-white rounded-lg border border-gray-200 hover:border-gray-300 transition-all <%= is_revenue_event ? '' : 'opacity-60' %> <%= 'opacity-60' if is_canceled %>"
     data-money-filter-target="showRow"
     data-non-revenue="<%= !is_revenue_event %>">

  <%= link_to manage_money_show_financials_path(show), class: "block" do %>
    <div class="flex flex-col lg:flex-row lg:items-stretch">

      <%# Panel 1: Date + Show Info %>
      <div class="flex-1 flex items-center gap-4 px-4 py-3 rounded-t-lg lg:rounded-l-lg lg:rounded-tr-none">
        <%# Date Box %>
        <div class="flex-shrink-0 w-14 text-center <%= 'line-through' if is_canceled %>">
          <div class="text-xs font-semibold text-pink-600 uppercase"><%= show.date_and_time.strftime("%b") %></div>
          <div class="text-2xl font-bold text-gray-900"><%= show.date_and_time.strftime("%-d") %></div>
          <div class="text-xs text-gray-500"><%= show.date_and_time.strftime("%a") %></div>
        </div>

        <%# Show Details %>
        <div class="flex-1 min-w-0">
          <div class="flex items-center gap-2 flex-wrap">
            <span class="font-medium text-gray-900 <%= 'line-through' if is_canceled %>">
              <%= show.display_name %>
            </span>
            <% if is_canceled %>
              <span class="inline-flex items-center rounded-md bg-red-50 px-2 py-0.5 text-xs font-medium text-red-700 ring-1 ring-inset ring-red-600/10">Canceled</span>
            <% end %>
            <% unless is_revenue_event %>
              <span class="inline-flex items-center rounded-md px-2 py-0.5 text-xs font-medium bg-gray-100 text-gray-500">
                Non-revenue
              </span>
            <% end %>
          </div>
          <div class="text-sm text-gray-600 <%= 'line-through' if is_canceled %>">
            <%= show.date_and_time.strftime("%l:%M %p").strip %>
            <% if show.location.present? %>
              &middot; <%= show.location.name %>
            <% elsif show.is_online %>
              &middot; Online
            <% end %>
          </div>
        </div>
      </div>

      <% if is_revenue_event %>
        <%# Panel 2: Revenue %>
        <div class="w-full lg:w-1/6 px-4 py-3 border-t lg:border-t-0 lg:border-l border-gray-200 flex flex-col justify-center">
          <div class="text-[10px] text-gray-400 uppercase tracking-wide mb-1">Revenue</div>
          <% if has_data %>
            <div class="text-sm font-medium text-gray-900"><%= number_to_currency(total_revenue) %></div>
          <% else %>
            <div class="text-sm text-gray-400">—</div>
          <% end %>
        </div>

        <%# Panel 3: Expenses %>
        <div class="w-full lg:w-1/6 px-4 py-3 border-t lg:border-t-0 lg:border-l border-gray-200 flex flex-col justify-center">
          <div class="text-[10px] text-gray-400 uppercase tracking-wide mb-1">Expenses</div>
          <% if has_data || production_expenses > 0 %>
            <div class="text-sm font-medium text-red-600"><%= number_to_currency(all_expenses) %></div>
            <% if production_expenses > 0 && total_expenses > 0 %>
              <div class="text-xs text-gray-400">incl. allocated</div>
            <% elsif production_expenses > 0 %>
              <div class="text-xs text-gray-400">allocated only</div>
            <% end %>
          <% else %>
            <div class="text-sm text-gray-400">—</div>
          <% end %>
        </div>

        <%# Panel 4: Status %>
        <div class="w-full lg:w-1/6 px-4 py-3 border-t lg:border-t-0 lg:border-l border-gray-200 rounded-b-lg lg:rounded-r-lg lg:rounded-bl-none flex flex-col justify-center">
          <div class="text-[10px] text-gray-400 uppercase tracking-wide mb-1 flex items-center gap-1">
            Status
            <% if data_confirmed %>
              <svg class="w-3.5 h-3.5 text-green-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd"/>
              </svg>
            <% end %>
          </div>
          <div class="text-sm font-medium <%= status_class %>"><%= status_label %></div>
        </div>
      <% else %>
        <%# Single panel for non-revenue events %>
        <div class="w-full lg:w-1/2 px-4 py-3 border-t lg:border-t-0 lg:border-l border-gray-200 rounded-b-lg lg:rounded-r-lg lg:rounded-bl-none flex items-center">
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="text-sm text-gray-500">
              <% if is_overridden_non_revenue %>
                Marked as non-revenue
              <% else %>
                No financial tracking for this event type
              <% end %>
            </span>
          </div>
        </div>
      <% end %>

    </div>
  <% end %>
</div>
