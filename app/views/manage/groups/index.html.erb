<% content_for :title, "Groups" %>

<div class="w-full">

  <%= render partial: "shared/notice", locals: { notice: notice } %>

  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [],
    text: "Groups & Ensembles",
    links: [
      { text: "Create New Group", path: new_manage_group_path }
    ]
  } %>

  <% if @groups.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mt-4">
      <% @groups.each do |group| %>
        <%= link_to manage_group_path(group) do %>
          <div class="bg-white border border-gray-200 rounded-lg p-4 hover:border-pink-400 hover:shadow-md transition-all">
            <div class="flex items-start gap-3">
              <% if group.headshot.attached? %>
                <%= image_tag group.headshot.variant(:thumb), class: "w-16 h-16 rounded-lg object-cover" %>
              <% else %>
                <div class="w-16 h-16 rounded-lg bg-pink-100 flex items-center justify-center text-pink-600 font-bold text-lg">
                  <%= group.initials %>
                </div>
              <% end %>

              <div class="flex-1 min-w-0">
                <h3 class="font-semibold text-gray-900 truncate"><%= group.name %></h3>
                <p class="text-sm text-gray-500"><%= pluralize(group.group_memberships.count, "member") %></p>
                <% if group.bio.present? %>
                  <p class="text-sm text-gray-600 mt-1 line-clamp-2"><%= group.bio %></p>
                <% end %>
              </div>
            </div>

            <% if group.archived_at.present? %>
              <div class="mt-3 pt-3 border-t border-gray-200">
                <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-gray-100 text-gray-700">
                  Archived
                </span>
              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <div class="text-6xl mb-4">ðŸŽ­</div>
      <h3 class="text-lg font-semibold text-gray-900 mb-2">No Groups Yet</h3>
      <p class="text-gray-600 mb-6">Create your first group or ensemble to get started.</p>
      <%= link_to "Create New Group", new_manage_group_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-pink-600 hover:bg-pink-700" %>
    </div>
  <% end %>

</div>
