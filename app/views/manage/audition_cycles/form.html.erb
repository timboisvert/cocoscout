<% content_for :title, "Sign-up Form" %>

<div class="w-full" data-controller="question-modal tabs availability-wizard"
     data-create-path="<%= create_question_manage_production_audition_cycle_path(@production, @audition_cycle) %>"
     data-new-description="Custom Questions are shown at the bottom of the Audition sign-up form."
     data-has-errors="<%= @question.errors.any? %>"
     data-tabs-initial-tab-value="<%= params[:tab].to_i %>">
  <%= render partial: "shared/notice", locals: { notice: notice } %>
  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Auditions", manage_production_auditions_path(@production)],
      ["Prepare", prepare_manage_production_audition_cycle_path(@production, @audition_cycle)]
    ],
    text: "Sign-up Form",
    links: [
      { text: "Preview Form", path: preview_manage_production_audition_cycle_path(@production, @audition_cycle), icon: "eye", target: "_blank" }
    ]
  } %>

  <% if flash[:notice]&.include?("Audition cycle created") %>
    <!-- Welcome box after wizard completion -->
    <div class="mb-6 p-5 bg-gradient-to-r from-pink-50 to-rose-50 border border-pink-200 rounded-lg">
      <div class="flex items-start gap-4">
        <div class="flex-shrink-0 w-10 h-10 bg-pink-100 rounded-full flex items-center justify-center">
          <svg class="w-5 h-5 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div>
          <h3 class="font-semibold text-pink-900 mb-1">Your audition cycle is set up!</h3>
          <p class="text-sm text-pink-700">Now customize what information you collect on the sign-up form. Add custom questions, configure availability options, and preview how it will look to auditionees.</p>
        </div>
      </div>
    </div>
  <% end %>

  <%# Tab Navigation - Order: Instructions, Availability, Custom Questions %>
  <nav class="flex space-x-2 border-b border-gray-200 mb-6 overflow-x-auto">
    <button type="button" data-tabs-target="tab" data-index="0" data-action="tabs#select" class="px-4 py-2 text-sm font-medium border-b-2 cursor-pointer whitespace-nowrap">Instructions</button>
    <button type="button" data-tabs-target="tab" data-index="1" data-action="tabs#select" class="px-4 py-2 text-sm font-medium border-b-2 cursor-pointer whitespace-nowrap">Availability</button>
    <button type="button" data-tabs-target="tab" data-index="2" data-action="tabs#select" class="px-4 py-2 text-sm font-medium border-b-2 cursor-pointer whitespace-nowrap">Custom Questions</button>
  </nav>

  <%# ==================== TAB 0: INSTRUCTIONS ==================== %>
  <div data-tabs-target="panel">
    <%= form_with model: [:manage, @production, @audition_cycle], url: manage_production_audition_cycle_path(@production, @audition_cycle), method: :patch, local: true, class: "space-y-6" do |form| %>
      <%= hidden_field_tag :redirect_to, "form" %>
      <%= hidden_field_tag :tab, "0" %>

      <%# Introduction Instructions %>
      <div class="bg-white border border-gray-200 rounded-lg shadow-sm overflow-hidden">
        <div class="bg-gray-50 px-4 py-3 border-b border-gray-200">
          <h3 class="text-md font-semibold text-gray-900 coustard-regular">Introduction Instructions</h3>
        </div>
        <div class="p-5">
          <p class="text-sm text-gray-600 mb-4">This text appears at the top of the sign-up form, before any questions.</p>
          <%= form.rich_text_area :instruction_text,
                                  class: "w-full prose max-w-none",
                                  data: { controller: "trix-no-files" } %>
        </div>
      </div>

      <%# Video Upload Instructions - only shown when video submissions enabled %>
      <% if @audition_cycle.accepts_video_submissions? %>
        <div class="bg-white border border-gray-200 rounded-lg shadow-sm overflow-hidden">
          <div class="bg-gray-50 px-4 py-3 border-b border-gray-200">
            <h3 class="text-md font-semibold text-gray-900 coustard-regular">Video Upload Instructions</h3>
          </div>
          <div class="p-5">
            <p class="text-sm text-gray-600 mb-4">This text appears above the video upload section.</p>
            <%= form.rich_text_area :video_field_text,
                                    class: "w-full prose max-w-none",
                                    data: { controller: "trix-no-files" } %>
          </div>
        </div>
      <% end %>

      <%# Success Message %>
      <div class="bg-white border border-gray-200 rounded-lg shadow-sm overflow-hidden">
        <div class="bg-gray-50 px-4 py-3 border-b border-gray-200">
          <h3 class="text-md font-semibold text-gray-900 coustard-regular">Success Message</h3>
        </div>
        <div class="p-5">
          <p class="text-sm text-gray-600 mb-4">This text is shown after someone successfully submits the sign-up form.</p>
          <%= form.rich_text_area :success_text,
                                  class: "w-full prose max-w-none",
                                  data: { controller: "trix-no-files" } %>
        </div>
      </div>

      <div>
        <%= render partial: "shared/button", locals: { text: "Save Instructions", variant: "primary", type: "submit" } %>
      </div>
    <% end %>
  </div>

  <%# ==================== TAB 1: AVAILABILITY ==================== %>
  <div data-tabs-target="panel" class="hidden">
    <%= form_with model: [:manage, @production, @audition_cycle], url: manage_production_audition_cycle_path(@production, @audition_cycle), method: :patch, local: true do |form| %>
      <%= hidden_field_tag :redirect_to, "form" %>
      <%= hidden_field_tag :tab, "1" %>

      <div class="space-y-6">
        <%# Show & Event Availability %>
        <div class="p-4 bg-gray-50 rounded-lg border border-gray-200">
          <div class="flex items-center justify-between">
            <div class="flex-1 mr-4">
              <p class="font-medium text-gray-900">Show & Event Availability</p>
              <p class="text-sm text-gray-500 mt-1">Ask if they're available for upcoming shows and events</p>
            </div>
            <label class="relative inline-flex items-center cursor-pointer">
              <input type="hidden" name="audition_cycle[include_availability_section]" value="0">
              <input type="checkbox" name="audition_cycle[include_availability_section]" value="1"
                     <%= "checked" if @audition_cycle.include_availability_section %>
                     class="sr-only peer"
                     data-action="change->availability-wizard#toggleSection"
                     data-availability-wizard-target="showAvailabilityToggle">
              <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-pink-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-pink-500"></div>
            </label>
          </div>

          <div data-availability-wizard-target="showAvailabilitySection" class="<%= 'hidden' unless @audition_cycle.include_availability_section %> mt-4 pt-4 border-t border-gray-200">
            <div class="flex items-center justify-between mb-3">
              <p class="text-sm font-medium text-gray-700">Select shows & events to ask about:</p>
              <%= link_to "Manage shows", manage_production_shows_path(@production), target: "_blank", class: "text-sm text-pink-500 hover:text-pink-600" %>
            </div>

            <% if @shows.any? %>
              <%
                # Convert availability_show_ids to integers for comparison
                selected_show_ids = (@audition_cycle.availability_show_ids || []).map { |id| id.to_i }
                # If blank, all shows are selected by default
                all_selected = selected_show_ids.empty?
              %>
              <div class="bg-white border border-gray-200 rounded-lg p-3 max-h-64 overflow-y-auto" data-availability-wizard-target="showList">
                <%= hidden_field_tag "audition_cycle[availability_show_ids][]", "" %>
                <div class="space-y-2">
                  <% @shows.each do |show| %>
                    <label class="flex items-center cursor-pointer hover:bg-gray-50 p-2 rounded -m-2">
                      <%= check_box_tag "audition_cycle[availability_show_ids][]", show.id,
                                        all_selected || selected_show_ids.include?(show.id),
                                        id: "availability_show_#{show.id}",
                                        class: "w-4 h-4 rounded border-gray-300 text-pink-600 focus:ring-pink-500 accent-pink-500",
                                        data: { "availability-wizard-target": "showCheckbox" } %>
                      <span class="ml-3 text-sm text-gray-700">
                        <span class="font-medium"><%= show.event_type.titleize %></span>
                        <% if show.secondary_name.present? %>
                          <span class="text-gray-500">: <%= show.secondary_name %></span>
                        <% end %>
                        <span class="text-gray-400 ml-2"><%= show.date_and_time.strftime("%b %-d, %Y at %-I:%M %p") %></span>
                      </span>
                    </label>
                  <% end %>
                </div>
              </div>
              <button type="button" class="mt-2 text-sm text-pink-500 hover:text-pink-600 font-medium" data-action="click->availability-wizard#selectAllShows">Select All Shows</button>
            <% else %>
              <div class="bg-white border border-gray-200 rounded-lg p-4 text-center">
                <p class="text-sm text-gray-500">No upcoming shows scheduled yet.</p>
                <%= link_to "Schedule a show", new_manage_production_show_path(@production), target: "_blank", class: "text-sm text-pink-500 hover:text-pink-600 font-medium" %>
              </div>
            <% end %>

            <%# Require toggle %>
            <div class="mt-4 pt-4 border-t border-gray-200">
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-700">Require show & event availability when signing up</span>
                <label class="relative inline-flex items-center cursor-pointer">
                  <input type="hidden" name="audition_cycle[require_all_availability]" value="0">
                  <input type="checkbox" name="audition_cycle[require_all_availability]" value="1"
                         <%= "checked" if @audition_cycle.require_all_availability %>
                         class="sr-only peer">
                  <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-pink-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-pink-500"></div>
                </label>
              </div>
            </div>
          </div>
        </div>

        <%# Audition Session Availability (only if in-person auditions enabled) %>
        <% if @audition_cycle.accepts_in_person_auditions? %>
          <div class="p-4 bg-gray-50 rounded-lg border border-gray-200">
            <div class="flex items-center justify-between">
              <div class="flex-1 mr-4">
                <p class="font-medium text-gray-900">Audition Session Availability</p>
                <p class="text-sm text-gray-500 mt-1">Ask which audition times work for them</p>
              </div>
              <label class="relative inline-flex items-center cursor-pointer">
                <input type="hidden" name="audition_cycle[include_audition_availability_section]" value="0">
                <input type="checkbox" name="audition_cycle[include_audition_availability_section]" value="1"
                       <%= "checked" if @audition_cycle.include_audition_availability_section %>
                       class="sr-only peer"
                       data-action="change->availability-wizard#toggleAuditionSection"
                       data-availability-wizard-target="auditionAvailabilityToggle">
                <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-pink-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-pink-500"></div>
              </label>
            </div>

            <div data-availability-wizard-target="auditionAvailabilitySection" class="<%= 'hidden' unless @audition_cycle.include_audition_availability_section %> mt-4 pt-4 border-t border-gray-200">
              <% audition_sessions = @audition_cycle.audition_sessions.order(:start_at) %>
              <% if audition_sessions.any? %>
                <div class="bg-white border border-gray-200 rounded-lg p-3">
                  <p class="text-sm text-gray-600 mb-2"><%= pluralize(audition_sessions.size, "audition session") %> configured:</p>
                  <div class="space-y-1">
                    <% audition_sessions.first(3).each do |session| %>
                      <% duration = session.end_at.present? ? ((session.end_at - session.start_at) / 60).to_i : nil %>
                      <p class="text-sm text-gray-500">â€¢ <%= session.start_at.strftime("%b %-d at %-I:%M %p") %><%= " (#{duration} min)" if duration %></p>
                    <% end %>
                    <% if audition_sessions.size > 3 %>
                      <p class="text-sm text-gray-400">+ <%= audition_sessions.size - 3 %> more...</p>
                    <% end %>
                  </div>
                </div>
              <% else %>
                <div class="bg-amber-50 border border-amber-200 rounded-lg p-3">
                  <p class="text-sm text-amber-700">
                    <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>
                    No audition sessions configured yet.
                    <%= link_to "Go to Sessions", audition_sessions_manage_production_audition_cycle_path(@production, @audition_cycle), class: "text-pink-500 hover:text-pink-600 font-medium" %>
                  </p>
                </div>
              <% end %>

              <%# Require toggle %>
              <div class="mt-4 pt-4 border-t border-gray-200">
                <div class="flex items-center justify-between">
                  <span class="text-sm text-gray-700">Require audition session availability when signing up</span>
                  <label class="relative inline-flex items-center cursor-pointer">
                    <input type="hidden" name="audition_cycle[require_all_audition_availability]" value="0">
                    <input type="checkbox" name="audition_cycle[require_all_audition_availability]" value="1"
                           <%= "checked" if @audition_cycle.require_all_audition_availability %>
                           class="sr-only peer">
                    <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-pink-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-pink-500"></div>
                  </label>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="mt-6">
        <%= render partial: "shared/button", locals: { text: "Save Availability Settings", variant: "primary", type: "submit" } %>
      </div>
    <% end %>
  </div>

  <%# ==================== TAB 2: CUSTOM QUESTIONS ==================== %>
  <div data-tabs-target="panel" class="hidden">
    <p class="text-sm text-gray-600 mb-5">Add custom questions to collect additional information from auditionees. Questions appear at the bottom of the sign-up form.</p>
    <%= render partial: "questions" %>
  </div>

  <%# ==================== FORM REVIEW SECTION ==================== %>
  <div class="mt-8 pt-6 border-t border-gray-200">
    <div class="bg-white border border-gray-200 rounded-lg shadow-sm overflow-hidden">
      <div class="p-5">
        <div class="flex items-start gap-4">
          <div class="flex-shrink-0">
            <% if @audition_cycle.form_reviewed %>
              <div class="w-10 h-10 rounded-full bg-green-100 flex items-center justify-center">
                <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
              </div>
            <% else %>
              <div class="w-10 h-10 rounded-full bg-amber-100 flex items-center justify-center">
                <svg class="w-5 h-5 text-amber-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                </svg>
              </div>
            <% end %>
          </div>
          <div class="flex-1">
            <h3 class="text-md font-semibold text-gray-900 coustard-regular">Form Review Status</h3>
            <p class="text-sm text-gray-600 mt-1 mb-4">
              <% if @audition_cycle.form_reviewed %>
                You've marked this form as reviewed. Auditionees can now sign up with confidence.
              <% else %>
                Mark the form as reviewed once you've confirmed everything looks correct. This clears any "needs review" warnings.
              <% end %>
            </p>
            <%= form_with model: [:manage, @production, @audition_cycle],
                          url: manage_production_audition_cycle_path(@production, @audition_cycle),
                          method: :patch,
                          local: true do |form| %>
              <%= hidden_field_tag :redirect_to, "form" %>
              <%= hidden_field_tag :tab, params[:tab] || "0" %>
              <% if @audition_cycle.form_reviewed %>
                <%= form.hidden_field :form_reviewed, value: "0" %>
                <%= render partial: "shared/button", locals: { text: "Mark as Not Reviewed", variant: "outline", type: "submit" } %>
              <% else %>
                <%= form.hidden_field :form_reviewed, value: "1" %>
                <%= render partial: "shared/button", locals: { text: "Mark as Reviewed", variant: "primary", type: "submit" } %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Question Modal -->
  <%= render "shared/question_modal" %>
</div>

