<% content_for :title, "Payment Settings" %>

<div class="w-full">
  <%= render partial: "shared/notice", locals: { notice: notice, alert: alert } %>

  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Payments", my_payments_path]
    ],
    text: "Payment Settings",
    links: []
  } %>

  <div class="max-w-2xl">
    <!-- Venmo Section -->
    <div class="bg-white rounded-lg border border-gray-200 p-6 mb-6">
      <div class="flex items-start gap-4">
        <div class="w-12 h-12 rounded-lg bg-blue-100 flex items-center justify-center flex-shrink-0">
          <!-- Venmo Logo -->
          <svg class="w-7 h-7" viewBox="0 0 24 24" fill="#3D95CE">
            <path d="M19.5 3c.9 1.5 1.3 3.1 1.3 5.1 0 5.6-4.8 12.9-8.7 18H4.8L2.2 3.8l6.3-.6 1.5 12c1.4-2.3 3.1-5.9 3.1-8.4 0-1.9-.3-3.2-.9-4.3L19.5 3z"/>
          </svg>
        </div>
        <div class="flex-1">
          <h3 class="font-semibold text-gray-900 text-lg">Venmo</h3>
          <p class="text-sm text-gray-500 mt-1">Set up your Venmo account to receive payments directly from productions.</p>
        </div>
      </div>

      <div class="mt-6 pt-6 border-t border-gray-200">
        <% if @person.venmo_configured? %>
          <!-- Connected State -->
          <div class="flex items-center gap-3 mb-4">
            <div class="w-8 h-8 rounded-full bg-green-100 flex items-center justify-center">
              <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
            </div>
            <div>
              <div class="font-medium text-green-700">Connected</div>
              <div class="text-sm text-gray-500"><%= @person.formatted_venmo_identifier %></div>
            </div>
          </div>

          <!-- Edit Form (collapsed by default) -->
          <details class="mb-4">
            <summary class="cursor-pointer text-sm text-gray-600 hover:text-gray-900">Change Venmo info</summary>
            <div class="mt-4 p-4 bg-gray-50 rounded-lg">
              <%= form_with model: @person, url: my_payments_update_venmo_path, method: :patch, local: true, class: "space-y-4" do |f| %>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">How would you like to receive Venmo payments?</label>
                  <div class="space-y-2">
                    <label class="flex items-center gap-3 p-3 border border-gray-200 rounded-lg cursor-pointer hover:bg-white bg-white">
                      <%= f.radio_button :venmo_identifier_type, "PHONE", class: "h-4 w-4 text-pink-600 border-gray-300 focus:ring-pink-500 accent-pink-600", checked: @person.venmo_identifier_type == "PHONE" %>
                      <span class="text-sm font-medium text-gray-700">Phone Number</span>
                    </label>
                    <label class="flex items-center gap-3 p-3 border border-gray-200 rounded-lg cursor-pointer hover:bg-white bg-white">
                      <%= f.radio_button :venmo_identifier_type, "EMAIL", class: "h-4 w-4 text-pink-600 border-gray-300 focus:ring-pink-500 accent-pink-600", checked: @person.venmo_identifier_type == "EMAIL" %>
                      <span class="text-sm font-medium text-gray-700">Email Address</span>
                    </label>
                    <label class="flex items-center gap-3 p-3 border border-gray-200 rounded-lg cursor-pointer hover:bg-white bg-white">
                      <%= f.radio_button :venmo_identifier_type, "USER_HANDLE", class: "h-4 w-4 text-pink-600 border-gray-300 focus:ring-pink-500 accent-pink-600", checked: @person.venmo_identifier_type == "USER_HANDLE" %>
                      <span class="text-sm font-medium text-gray-700">Venmo Username (@handle)</span>
                    </label>
                  </div>
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">Your Venmo Identifier</label>
                  <%= f.text_field :venmo_identifier,
                      value: @person.venmo_identifier,
                      class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500",
                      placeholder: "Enter your phone, email, or @username" %>
                  <% if @person.errors[:venmo_identifier].any? %>
                    <p class="text-sm text-red-600 mt-1"><%= @person.errors[:venmo_identifier].first %></p>
                  <% end %>
                </div>

                <%= render "shared/button", text: "Update Venmo Settings", variant: "primary", size: "medium", type: :submit %>
              <% end %>
            </div>
          </details>

          <%= button_to my_payments_remove_venmo_path, method: :delete, data: { turbo_confirm: "Remove your Venmo information? You won't be able to receive automated payments until you add it again." }, class: "inline-block" do %>
            <%= render "shared/button", text: "Remove Venmo", variant: "ghost", size: "small" %>
          <% end %>

        <% else %>
          <!-- Setup Form -->
          <%= form_with model: @person, url: my_payments_update_venmo_path, method: :patch, local: true, class: "space-y-4" do |f| %>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">How would you like to receive Venmo payments?</label>

              <div class="space-y-2">
                <label class="flex items-center gap-3 p-3 border border-gray-200 rounded-lg cursor-pointer hover:bg-gray-50">
                  <%= f.radio_button :venmo_identifier_type, "PHONE", class: "h-4 w-4 text-pink-600 border-gray-300 focus:ring-pink-500 accent-pink-600" %>
                  <div>
                    <span class="text-sm font-medium text-gray-700">Phone Number</span>
                    <p class="text-xs text-gray-500">The phone number linked to your Venmo account</p>
                  </div>
                </label>

                <label class="flex items-center gap-3 p-3 border border-gray-200 rounded-lg cursor-pointer hover:bg-gray-50">
                  <%= f.radio_button :venmo_identifier_type, "EMAIL", class: "h-4 w-4 text-pink-600 border-gray-300 focus:ring-pink-500 accent-pink-600" %>
                  <div>
                    <span class="text-sm font-medium text-gray-700">Email Address</span>
                    <p class="text-xs text-gray-500">The email address linked to your Venmo account</p>
                  </div>
                </label>

                <label class="flex items-center gap-3 p-3 border border-gray-200 rounded-lg cursor-pointer hover:bg-gray-50">
                  <%= f.radio_button :venmo_identifier_type, "USER_HANDLE", class: "h-4 w-4 text-pink-600 border-gray-300 focus:ring-pink-500 accent-pink-600" %>
                  <div>
                    <span class="text-sm font-medium text-gray-700">Venmo Username</span>
                    <p class="text-xs text-gray-500">Your @username (e.g., @jane-doe-5)</p>
                  </div>
                </label>
              </div>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Your Venmo Identifier</label>
              <%= f.text_field :venmo_identifier,
                  class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500",
                  placeholder: "Enter your phone, email, or @username" %>
              <% if @person.errors[:venmo_identifier].any? %>
                <p class="text-sm text-red-600 mt-1"><%= @person.errors[:venmo_identifier].first %></p>
              <% end %>
            </div>

            <%= render "shared/button", text: "Save Venmo Settings", variant: "primary", size: "medium", type: :submit %>
          <% end %>
        <% end %>
      </div>
    </div>

    <!-- Information Section -->
    <div class="bg-blue-50 border border-blue-200 rounded-lg p-5">
      <h4 class="font-medium text-blue-900 mb-2 flex items-center gap-2">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        How Venmo Payouts Work
      </h4>
      <ul class="text-sm text-blue-800 space-y-2">
        <li><strong>1. Add your Venmo info</strong> - Enter your phone, email, or Venmo username above</li>
        <li><strong>2. Get paid automatically</strong> - When a production processes payouts, you receive money via Venmo</li>
        <li><strong>3. Track your earnings</strong> - View all your payment history in one place</li>
      </ul>
      <p class="text-xs text-blue-700 mt-3">
        Venmo payments are processed through PayPal's secure payment system. US only, USD only.
      </p>
    </div>

    <!-- Alternative Payment Methods -->
    <div class="mt-6 text-center">
      <p class="text-sm text-gray-500">
        Productions can also pay you via cash, Zelle, check, or other methods.
        Those payments will be tracked here once the production marks them as paid.
      </p>
    </div>
  </div>
</div>
