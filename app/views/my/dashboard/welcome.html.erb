<div class="min-h-screen bg-gradient-to-br from-pink-50 via-white to-slate-50">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12">

    <!-- Header with Logo -->
    <div class="text-center mb-8 sm:mb-12">
      <%= render "shared/cocoscout_logo", size: :large, class: "mx-auto mb-4" %>
      <h1 class="text-4xl sm:text-5xl font-bold text-slate-900 mb-3 coustard-regular">Welcome to CocoScout!</h1>
      <p class="text-lg sm:text-xl text-slate-600">Your home for auditions, shows, and all things performance</p>
    </div>

    <!-- Features Grid -->
    <div class="grid md:grid-cols-2 gap-6 mb-8" data-controller="my-welcome">

      <!-- Profile Card - First -->
      <%= link_to profile_path, class: "group", data: { action: "click->my-welcome#markWelcomed" } do %>
        <div class="bg-white border border-slate-200 rounded-lg p-6 shadow-sm hover:shadow-md hover:border-pink-200 transition-all">
          <div class="flex items-start gap-4">
            <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-pink-100 flex items-center justify-center group-hover:bg-pink-200 transition-colors">
              <svg class="w-6 h-6 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="text-lg font-semibold text-slate-900 mb-2 group-hover:text-pink-600 transition-colors">Manage Profile</h3>
              <p class="text-sm text-slate-600">Update your headshot, resume, and performance information.</p>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Audition Requests Card - Second -->
      <%= link_to my_audition_requests_path, class: "group", data: { action: "click->my-welcome#markWelcomed" } do %>
        <div class="bg-white border border-slate-200 rounded-lg p-6 shadow-sm hover:shadow-md hover:border-pink-200 transition-all">
          <div class="flex items-start gap-4">
            <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-pink-100 flex items-center justify-center group-hover:bg-pink-200 transition-colors">
              <svg class="w-6 h-6 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="text-lg font-semibold text-slate-900 mb-2 group-hover:text-pink-600 transition-colors">View Sign-ups</h3>
              <p class="text-sm text-slate-600">Track your audition submissions and application status.</p>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Auditions Card - Third -->
      <%= link_to my_auditions_path, class: "group", data: { action: "click->my-welcome#markWelcomed" } do %>
        <div class="bg-white border border-slate-200 rounded-lg p-6 shadow-sm hover:shadow-md hover:border-pink-200 transition-all">
          <div class="flex items-start gap-4">
            <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-pink-100 flex items-center justify-center group-hover:bg-pink-200 transition-colors">
              <svg class="w-6 h-6 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z" />
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="text-lg font-semibold text-slate-900 mb-2 group-hover:text-pink-600 transition-colors">View Auditions</h3>
              <p class="text-sm text-slate-600">Browse open auditions and discover new opportunities.</p>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Shows & Events Card - Fourth -->
      <%= link_to my_shows_path, class: "group", data: { action: "click->my-welcome#markWelcomed" } do %>
        <div class="bg-white border border-slate-200 rounded-lg p-6 shadow-sm hover:shadow-md hover:border-pink-200 transition-all">
          <div class="flex items-start gap-4">
            <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-pink-100 flex items-center justify-center group-hover:bg-pink-200 transition-colors">
              <svg class="w-6 h-6 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="text-lg font-semibold text-slate-900 mb-2 group-hover:text-pink-600 transition-colors">View Shows & Events</h3>
              <p class="text-sm text-slate-600">Keep track of rehearsals, performances, and important dates.</p>
            </div>
          </div>
        </div>
      <% end %>

    </div>    <!-- Quick Tips -->
    <div class="bg-gradient-to-br from-slate-50 to-white border border-slate-200 rounded-lg p-6 sm:p-8 shadow-sm mb-8">
      <h3 class="text-lg font-semibold text-slate-900 mb-4">Quick Tips</h3>
      <ul class="space-y-3">
        <li class="flex items-start gap-3">
          <svg class="w-5 h-5 text-pink-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span class="text-sm text-slate-700">Complete your profile with a headshot and resume for better audition opportunities</span>
        </li>
        <li class="flex items-start gap-3">
          <svg class="w-5 h-5 text-pink-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span class="text-sm text-slate-700">Check your email regularly for audition updates and casting notifications</span>
        </li>
        <li class="flex items-start gap-3">
          <svg class="w-5 h-5 text-pink-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span class="text-sm text-slate-700">Use the calendar view to see all your shows and events at a glance</span>
        </li>
        <li class="flex items-start gap-3">
          <svg class="w-5 h-5 text-pink-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span class="text-sm text-slate-700">CocoScout is free for performersâ€”no credit card required, ever</span>
        </li>
      </ul>
    </div>

    <!-- Get Started Button -->
    <div class="text-center">
      <%= button_to "Get Started", my_dismiss_welcome_path, method: :post, class: "inline-block rounded-lg px-8 py-4 bg-pink-500 hover:bg-pink-600 text-white text-lg font-semibold cursor-pointer transition shadow-md hover:shadow-lg" %>
      <p class="mt-4 text-sm text-slate-500">You can always find help in your dashboard</p>
    </div>

  </div>
</div>
