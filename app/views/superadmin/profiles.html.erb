<% content_for :title, "Profiles Monitor - Superadmin" %>

<div class="w-full px-5 pt-5">
  <%= render partial: "shared/notice", locals: { notice: notice } %>

  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
        ["Superadmin", superadmin_path]
    ],
    text: "Profiles Monitor",
    links: []
  } %>

  <!-- Overview Stats -->
  <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mt-4">
    <div class="border border-gray-200 rounded-lg p-4">
      <div class="text-2xl font-bold text-gray-900"><%= number_with_delimiter(@total_profiles) %></div>
      <div class="text-sm text-gray-500">Total Profiles</div>
      <div class="text-xs text-gray-400 mt-1">
        <%= number_with_delimiter(@active_profiles) %> active, <%= number_with_delimiter(@archived_profiles) %> archived
      </div>
    </div>
    <div class="border border-gray-200 rounded-lg p-4">
      <div class="text-2xl font-bold text-pink-600"><%= number_with_delimiter(@signed_in_24h) %></div>
      <div class="text-sm text-gray-500">Signed In (24h)</div>
      <div class="text-xs text-gray-400 mt-1">
        <%= number_with_delimiter(@signed_in_7d) %> (7d) · <%= number_with_delimiter(@signed_in_30d) %> (30d)
      </div>
    </div>
    <div class="border border-gray-200 rounded-lg p-4">
      <div class="text-2xl font-bold text-green-600"><%= number_with_delimiter(@created_today) %></div>
      <div class="text-sm text-gray-500">New Today</div>
      <div class="text-xs text-gray-400 mt-1">
        <%= number_with_delimiter(@created_this_week) %> (7d) · <%= number_with_delimiter(@created_this_month) %> (30d)
      </div>
    </div>
    <div class="border border-gray-200 rounded-lg p-4">
      <div class="text-2xl font-bold text-blue-600"><%= number_with_delimiter(@linked_to_users) %></div>
      <div class="text-sm text-gray-500">Linked to Users</div>
      <div class="text-xs text-gray-400 mt-1">
        <%= number_with_delimiter(@orphan_profiles) %> orphan profiles
      </div>
    </div>
  </div>

  <!-- Tabbed Interface -->
  <div class="mt-6" data-controller="tabs">
    <!-- Tab Navigation -->
    <div class="border-b border-gray-200">
      <nav class="-mb-px flex space-x-4" aria-label="Tabs">
        <button type="button"
                data-tabs-target="tab"
                data-action="click->tabs#select"
                data-index="0"
                class="cursor-pointer whitespace-nowrap border-b-2 py-2 px-3 text-sm font-medium transition-colors border-transparent text-gray-500 hover:text-gray-700">
          Completeness
        </button>
        <button type="button"
                data-tabs-target="tab"
                data-action="click->tabs#select"
                data-index="1"
                class="cursor-pointer whitespace-nowrap border-b-2 py-2 px-3 text-sm font-medium transition-colors border-transparent text-gray-500 hover:text-gray-700">
          Engagement
        </button>
        <button type="button"
                data-tabs-target="tab"
                data-action="click->tabs#select"
                data-index="2"
                class="cursor-pointer whitespace-nowrap border-b-2 py-2 px-3 text-sm font-medium transition-colors border-transparent text-gray-500 hover:text-gray-700">
          Recent Profiles
          <span class="ml-1 rounded-full bg-gray-100 px-2 py-0.5 text-xs font-medium text-gray-600">50</span>
        </button>
      </nav>
    </div>

    <!-- Tab Panels -->
    <div class="mt-4">
      <!-- Completeness Panel -->
      <div data-tabs-target="panel" class="hidden">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <!-- Left Column: Core Profile Elements -->
          <div class="border border-gray-200 rounded-lg overflow-hidden">
            <%= render "shared/card_header", title: "Core Profile Elements" do %>
              <p class="text-sm text-gray-500 mt-1">Essential profile completion metrics</p>
            <% end %>
            <div class="divide-y divide-gray-100">
              <!-- Headshots -->
              <div class="p-4 flex items-center justify-between">
                <div class="flex items-center gap-3">
                  <div class="w-10 h-10 rounded-lg bg-pink-100 flex items-center justify-center">
                    <svg class="w-5 h-5 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                  </div>
                  <div>
                    <div class="font-medium text-gray-900">Headshots</div>
                    <div class="text-xs text-gray-500"><%= number_with_delimiter(@with_headshots) %> with · <%= number_with_delimiter(@without_headshots) %> without</div>
                  </div>
                </div>
                <div class="text-right">
                  <div class="text-lg font-semibold text-pink-600"><%= @headshot_percent %>%</div>
                </div>
              </div>

              <!-- Resumes -->
              <div class="p-4 flex items-center justify-between">
                <div class="flex items-center gap-3">
                  <div class="w-10 h-10 rounded-lg bg-blue-100 flex items-center justify-center">
                    <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                  </div>
                  <div>
                    <div class="font-medium text-gray-900">Resumes</div>
                    <div class="text-xs text-gray-500"><%= number_with_delimiter(@with_resumes) %> with · <%= number_with_delimiter(@without_resumes) %> without</div>
                  </div>
                </div>
                <div class="text-right">
                  <div class="text-lg font-semibold text-blue-600"><%= @resume_percent %>%</div>
                </div>
              </div>

              <!-- Bio -->
              <div class="p-4 flex items-center justify-between">
                <div class="flex items-center gap-3">
                  <div class="w-10 h-10 rounded-lg bg-purple-100 flex items-center justify-center">
                    <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" />
                    </svg>
                  </div>
                  <div>
                    <div class="font-medium text-gray-900">Bio</div>
                    <div class="text-xs text-gray-500"><%= number_with_delimiter(@with_bio) %> with · <%= number_with_delimiter(@without_bio) %> without</div>
                  </div>
                </div>
                <div class="text-right">
                  <div class="text-lg font-semibold text-purple-600"><%= @bio_percent %>%</div>
                </div>
              </div>

              <!-- Payment Info -->
              <div class="p-4 flex items-center justify-between">
                <div class="flex items-center gap-3">
                  <div class="w-10 h-10 rounded-lg bg-green-100 flex items-center justify-center">
                    <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                  <div>
                    <div class="font-medium text-gray-900">Payment Info</div>
                    <div class="text-xs text-gray-500">
                      <%= number_with_delimiter(@with_venmo) %> Venmo · <%= number_with_delimiter(@with_zelle) %> Zelle
                    </div>
                  </div>
                </div>
                <div class="text-right">
                  <div class="text-lg font-semibold text-green-600"><%= @payment_percent %>%</div>
                </div>
              </div>
            </div>
          </div>

          <!-- Right Column: Extended Profile Elements -->
          <div class="border border-gray-200 rounded-lg overflow-hidden">
            <%= render "shared/card_header", title: "Extended Profile Content" do %>
              <p class="text-sm text-gray-500 mt-1">Additional profile features</p>
            <% end %>
            <div class="divide-y divide-gray-100">
              <!-- Videos -->
              <div class="p-4 flex items-center justify-between">
                <div class="flex items-center gap-3">
                  <div class="w-8 h-8 rounded-lg bg-red-100 flex items-center justify-center">
                    <svg class="w-4 h-4 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
                    </svg>
                  </div>
                  <div class="font-medium text-gray-900">Videos</div>
                </div>
                <div class="text-sm font-medium text-gray-900"><%= number_with_delimiter(@with_videos) %></div>
              </div>

              <!-- Performance Credits -->
              <div class="p-4 flex items-center justify-between">
                <div class="flex items-center gap-3">
                  <div class="w-8 h-8 rounded-lg bg-amber-100 flex items-center justify-center">
                    <svg class="w-4 h-4 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                    </svg>
                  </div>
                  <div class="font-medium text-gray-900">Performance Credits</div>
                </div>
                <div class="text-sm font-medium text-gray-900"><%= number_with_delimiter(@with_performance_credits) %></div>
              </div>

              <!-- Training Credits -->
              <div class="p-4 flex items-center justify-between">
                <div class="flex items-center gap-3">
                  <div class="w-8 h-8 rounded-lg bg-indigo-100 flex items-center justify-center">
                    <svg class="w-4 h-4 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                    </svg>
                  </div>
                  <div class="font-medium text-gray-900">Training Credits</div>
                </div>
                <div class="text-sm font-medium text-gray-900"><%= number_with_delimiter(@with_training_credits) %></div>
              </div>

              <!-- Skills -->
              <div class="p-4 flex items-center justify-between">
                <div class="flex items-center gap-3">
                  <div class="w-8 h-8 rounded-lg bg-teal-100 flex items-center justify-center">
                    <svg class="w-4 h-4 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
                    </svg>
                  </div>
                  <div class="font-medium text-gray-900">Skills</div>
                </div>
                <div class="text-sm font-medium text-gray-900"><%= number_with_delimiter(@with_skills) %></div>
              </div>

              <!-- Public Profiles -->
              <div class="p-4 flex items-center justify-between">
                <div class="flex items-center gap-3">
                  <div class="w-8 h-8 rounded-lg bg-gray-100 flex items-center justify-center">
                    <svg class="w-4 h-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                    </svg>
                  </div>
                  <div>
                    <div class="font-medium text-gray-900">Public Profiles</div>
                    <div class="text-xs text-gray-500"><%= number_with_delimiter(@with_public_key) %> have public key</div>
                  </div>
                </div>
                <div class="text-right">
                  <div class="text-sm font-medium text-gray-900"><%= number_with_delimiter(@public_profiles) %></div>
                  <div class="text-xs text-gray-500"><%= @public_percent %>%</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Engagement Panel -->
      <div data-tabs-target="panel" class="hidden">
        <!-- Row 1: Event & Audition Engagement -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-4">
          <!-- Registered for Events -->
          <div class="border border-gray-200 rounded-lg overflow-hidden">
            <%= render "shared/card_header", title: "Event Registrations" do %>
              <p class="text-sm text-gray-500 mt-1">Confirmed for an event</p>
            <% end %>
            <div class="p-4">
              <div class="text-4xl font-bold text-green-600"><%= number_with_delimiter(@registered_for_events) %></div>
              <div class="text-sm text-gray-500 mt-1"><%= @registered_for_events_percent %>% of active profiles</div>
              <div class="mt-4">
                <div class="w-full bg-gray-200 rounded-full h-2">
                  <div class="bg-green-500 h-2 rounded-full" style="width: <%= @registered_for_events_percent %>%"></div>
                </div>
              </div>
            </div>
          </div>

          <!-- Waitlisted -->
          <div class="border border-gray-200 rounded-lg overflow-hidden">
            <%= render "shared/card_header", title: "Waitlisted" do %>
              <p class="text-sm text-gray-500 mt-1">On a waitlist</p>
            <% end %>
            <div class="p-4">
              <div class="text-4xl font-bold text-amber-600"><%= number_with_delimiter(@registered_waitlisted) %></div>
              <div class="text-sm text-gray-500 mt-1"><%= @registered_waitlisted_percent %>% of active profiles</div>
              <div class="mt-4">
                <div class="w-full bg-gray-200 rounded-full h-2">
                  <div class="bg-amber-500 h-2 rounded-full" style="width: <%= @registered_waitlisted_percent %>%"></div>
                </div>
              </div>
            </div>
          </div>

          <!-- In-Person Auditions -->
          <div class="border border-gray-200 rounded-lg overflow-hidden">
            <%= render "shared/card_header", title: "In-Person Auditions" do %>
              <p class="text-sm text-gray-500 mt-1">Submitted request</p>
            <% end %>
            <div class="p-4">
              <div class="text-4xl font-bold text-purple-600"><%= number_with_delimiter(@submitted_in_person_auditions) %></div>
              <div class="text-sm text-gray-500 mt-1"><%= @submitted_in_person_percent %>% of active profiles</div>
              <div class="mt-4">
                <div class="w-full bg-gray-200 rounded-full h-2">
                  <div class="bg-purple-500 h-2 rounded-full" style="width: <%= @submitted_in_person_percent %>%"></div>
                </div>
              </div>
            </div>
          </div>

          <!-- Video Auditions -->
          <div class="border border-gray-200 rounded-lg overflow-hidden">
            <%= render "shared/card_header", title: "Video Auditions" do %>
              <p class="text-sm text-gray-500 mt-1">Submitted video</p>
            <% end %>
            <div class="p-4">
              <div class="text-4xl font-bold text-red-600"><%= number_with_delimiter(@submitted_video_auditions) %></div>
              <div class="text-sm text-gray-500 mt-1"><%= @submitted_video_percent %>% of active profiles</div>
              <div class="mt-4">
                <div class="w-full bg-gray-200 rounded-full h-2">
                  <div class="bg-red-500 h-2 rounded-full" style="width: <%= @submitted_video_percent %>%"></div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Row 2: Original Engagement Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <!-- Talent Pool Participation -->
          <div class="border border-gray-200 rounded-lg overflow-hidden">
            <%= render "shared/card_header", title: "Talent Pool Participation" do %>
              <p class="text-sm text-gray-500 mt-1">Profiles in talent pools</p>
            <% end %>
            <div class="p-4">
              <div class="text-4xl font-bold text-pink-600"><%= number_with_delimiter(@in_talent_pools) %></div>
              <div class="text-sm text-gray-500 mt-1"><%= @talent_pool_percent %>% of active profiles</div>
              <div class="mt-4">
                <div class="w-full bg-gray-200 rounded-full h-2">
                  <div class="bg-pink-500 h-2 rounded-full" style="width: <%= @talent_pool_percent %>%"></div>
                </div>
              </div>
            </div>
          </div>

          <!-- Group Membership -->
          <div class="border border-gray-200 rounded-lg overflow-hidden">
            <%= render "shared/card_header", title: "Group Membership" do %>
              <p class="text-sm text-gray-500 mt-1">Profiles in groups</p>
            <% end %>
            <div class="p-4">
              <div class="text-4xl font-bold text-blue-600"><%= number_with_delimiter(@in_groups) %></div>
              <div class="text-sm text-gray-500 mt-1">
                <% group_percent = @active_profiles.positive? ? (@in_groups.to_f / @active_profiles * 100).round(1) : 0 %>
                <%= group_percent %>% of active profiles
              </div>
              <div class="mt-4">
                <div class="w-full bg-gray-200 rounded-full h-2">
                  <div class="bg-blue-500 h-2 rounded-full" style="width: <%= group_percent %>%"></div>
                </div>
              </div>
            </div>
          </div>

          <!-- Sign-up Activity -->
          <div class="border border-gray-200 rounded-lg overflow-hidden">
            <%= render "shared/card_header", title: "New Profiles (14 Days)" do %>
              <p class="text-sm text-gray-500 mt-1">Daily profile creation</p>
            <% end %>
            <div class="p-4">
              <div class="flex items-end gap-1 h-16">
                <% max_count = [@daily_signups.map { |d| d[:count] }.max, 1].max %>
                <% @daily_signups.each do |day| %>
                  <div class="flex-1 bg-green-500 rounded-t transition-all hover:bg-green-600"
                       style="height: <%= (day[:count].to_f / max_count * 100).round %>%;"
                       title="<%= day[:date].strftime('%b %d') %>: <%= day[:count] %> profiles">
                  </div>
                <% end %>
              </div>
              <div class="flex justify-between text-xs text-gray-400 mt-2">
                <span><%= @daily_signups.first[:date].strftime('%b %d') %></span>
                <span><%= @daily_signups.last[:date].strftime('%b %d') %></span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Recent Profiles Panel -->
      <div data-tabs-target="panel" class="hidden">
        <div class="border border-gray-200 rounded-lg overflow-hidden">
          <%= render "shared/card_header", title: "Recent Profiles" do %>
            <p class="text-sm text-gray-500 mt-1">Last 50 profiles created</p>
          <% end %>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                  <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                  <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Public Key</th>
                  <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
                  <th scope="col" class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @recent_profiles.each do |person| %>
                  <tr class="hover:bg-gray-50">
                    <td class="px-4 py-3 whitespace-nowrap">
                      <div class="text-sm font-medium text-gray-900"><%= person.name %></div>
                    </td>
                    <td class="px-4 py-3 whitespace-nowrap">
                      <div class="text-sm text-gray-500"><%= person.email %></div>
                    </td>
                    <td class="px-4 py-3 whitespace-nowrap">
                      <% if person.public_key.present? %>
                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
                          <%= person.public_key %>
                        </span>
                      <% else %>
                        <span class="text-xs text-gray-400">—</span>
                      <% end %>
                    </td>
                    <td class="px-4 py-3 whitespace-nowrap">
                      <div class="text-sm text-gray-500"><%= time_ago_in_words(person.created_at) %> ago</div>
                    </td>
                    <td class="px-4 py-3 whitespace-nowrap text-right">
                      <%= link_to "View", person_detail_path(person), class: "text-sm text-pink-600 hover:text-pink-800" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
