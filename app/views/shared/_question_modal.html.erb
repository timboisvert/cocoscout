<div data-question-modal-target="modal" class="<%= @question.errors.any? ? '' : 'hidden' %> fixed inset-0 bg-black/60 backdrop-blur-sm overflow-y-auto h-full w-full z-50" data-action="click->question-modal#close">
  <div class="relative top-20 mx-auto p-5 border w-full max-w-2xl shadow-lg rounded-md bg-white" data-action="click->question-modal#stopPropagation">
    <div class="flex items-center justify-between pb-3 border-b border-gray-200">
      <div>
        <h3 class="text-lg font-semibold text-gray-900" data-question-modal-target="title"><%= @question.persisted? ? 'Edit Question' : 'Add a Question' %></h3>
        <p class="text-xs text-gray-500 mt-1" data-question-modal-target="description"></p>
      </div>
      <button type="button" class="text-gray-400 hover:text-gray-600" data-action="question-modal#close">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    <div class="mt-4">
      <%= form_with(url: "#", model: @question, data: { question_modal_target: "form" }) do |form| %>
        <input type="hidden" name="_method" value="<%= @question.persisted? ? 'patch' : 'post' %>" data-question-modal-target="methodInput">

        <div class="mb-4">
          <%= form.label :text, "Question Text", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <% if @question.errors[:text].any? %>
            <p class="text-sm text-pink-600 mb-2"><%= @question.errors[:text].first %></p>
          <% end %>
          <%= form.text_field :text,
            data: { question_modal_target: "textInput" },
            class: ["w-full px-3 py-2 border rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-pink-500", @question.errors[:text].any? ? "border-pink-500" : "border-gray-300"] %>
        </div>

        <div data-controller="form-toggle">
          <div class="flex gap-2 mb-4">
            <div class="flex-1">
              <%= form.label :question_type, "Question Type", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.select :question_type,
                QuestionTypes::Base.all_types.map { |type| [type.label, type.key] },
                {},
                {
                  class: ["w-full px-3 py-2 border rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-pink-500", @question.errors[:question_type].any? ? "border-pink-500" : "border-gray-300"],
                  data: {
                    question_modal_target: "typeSelect",
                    "form-toggle-target": "select",
                    action: "change->form-toggle#toggle"
                  }
                } %>
            </div>

            <div class="w-32">
              <%= form.label :required, "Required", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.select :required,
                [["No", false], ["Yes", true]],
                {},
                {
                  class: ["w-full px-3 py-2 border rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-pink-500", @question.errors[:required].any? ? "border-pink-500" : "border-gray-300"],
                  data: { question_modal_target: "requiredSelect" }
                } %>
            </div>
          </div>

          <div data-form-toggle-target="section" data-toggle-value="multiple,ranking" data-question-modal-target="optionsSection" class="<%= @question.question_type_class&.needs_options? ? '' : 'hidden' %> mb-4">
            <%= render partial: "manage/audition_cycles/multiple_options", locals: { form: form } %>
          </div>
        </div>

        <div class="flex justify-end gap-2 border-t border-gray-200 pt-4 mt-4">
          <%= render "shared/button", text: "Cancel", variant: "ghost-cancel", size: "small", type: :button, data: { action: "question-modal#close" } %>
          <%= render "shared/button", text: (@question.persisted? ? "Update Question" : "Add Question"), variant: "primary", size: "small", type: :submit, data: { question_modal_target: "submitButton" } %>
        </div>
      <% end %>
    </div>
  </div>
</div>
