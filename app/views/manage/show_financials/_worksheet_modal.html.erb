<%# Financial Worksheet Modal - for entering/editing financial data %>
<%
  other_revenue_items = @show_financials.other_revenue_details || []
  has_other_revenue_details = other_revenue_items.any?
  expense_items = @show_financials.expense_details || []
  has_expense_details = expense_items.any?
%>

<div id="financialWorksheet"
     class="hidden fixed inset-0 bg-black/60 backdrop-blur-sm z-50 overflow-y-auto"
     data-controller="financials-form"
     data-action="click->financials-form#closeWorksheet keydown.esc@window->financials-form#closeWorksheet">

  <div class="min-h-screen flex items-start justify-center p-4 pt-12 pb-20">
    <div class="bg-white w-full max-w-2xl rounded-lg shadow-xl" data-action="click->financials-form#stopPropagation">

      <!-- Header -->
      <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between sticky top-0 bg-white rounded-t-lg z-10">
        <div>
          <h2 class="text-lg font-semibold text-gray-900">Financial Data Worksheet</h2>
          <p class="text-sm text-gray-500"><%= show_display_name(@show) %></p>
        </div>
        <button type="button" data-action="click->financials-form#closeWorksheet" class="text-gray-400 hover:text-gray-600 p-2 -mr-2 cursor-pointer">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>

      <!-- Form Content -->
      <%= form_with model: @show_financials, url: manage_production_update_money_show_financials_path(@production, @show), method: :patch, data: { turbo: false, financials_form_target: "form" } do |form| %>

        <div class="p-6 space-y-6 max-h-[70vh] overflow-y-auto">

          <% if @show_financials.errors.any? %>
            <div class="bg-red-50 border border-red-200 rounded-lg p-4">
              <ul class="text-sm text-red-700 list-disc list-inside">
                <% @show_financials.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <!-- Revenue Type Selector -->
          <div class="bg-gray-50 rounded-lg p-4">
            <h3 class="font-semibold text-gray-900 mb-3 flex items-center gap-2">
              <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              Primary Revenue
            </h3>

            <!-- Revenue Type Toggle -->
            <div class="flex gap-2 mb-4">
              <label class="flex-1">
                <input type="radio" name="show_financials[revenue_type]" value="ticket_sales"
                       <%= @show_financials.ticket_sales? ? "checked" : "" %>
                       data-action="change->financials-form#toggleRevenueType"
                       class="sr-only peer">
                <div class="cursor-pointer rounded-lg border-2 border-gray-200 bg-white p-3 text-center transition-all peer-checked:border-pink-500 peer-checked:bg-pink-50">
                  <div class="font-medium text-gray-900">Ticket Sales</div>
                  <div class="text-xs text-gray-500">Revenue from selling tickets</div>
                </div>
              </label>
              <label class="flex-1">
                <input type="radio" name="show_financials[revenue_type]" value="flat_fee"
                       <%= @show_financials.flat_fee? ? "checked" : "" %>
                       data-action="change->financials-form#toggleRevenueType"
                       class="sr-only peer">
                <div class="cursor-pointer rounded-lg border-2 border-gray-200 bg-white p-3 text-center transition-all peer-checked:border-pink-500 peer-checked:bg-pink-50">
                  <div class="font-medium text-gray-900">Flat Fee</div>
                  <div class="text-xs text-gray-500">Paid a set amount for the show</div>
                </div>
              </label>
            </div>

            <!-- Ticket Sales Fields -->
            <div data-financials-form-target="ticketSalesFields" class="<%= @show_financials.flat_fee? ? 'hidden' : '' %>">
              <div class="grid grid-cols-2 gap-4">
                <div>
                  <%= form.label :ticket_count, "Tickets Sold", class: "block text-sm font-medium text-gray-700 mb-1" %>
                  <%= form.number_field :ticket_count, min: 0, class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500", placeholder: "0" %>
                </div>
                <div>
                  <%= form.label :ticket_revenue, "Ticket Revenue", class: "block text-sm font-medium text-gray-700 mb-1" %>
                  <div class="relative">
                    <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-500">$</span>
                    <%= form.number_field :ticket_revenue, min: 0, step: 0.01, class: "w-full rounded-lg border border-gray-300 pl-7 pr-3 py-2 focus:border-pink-500 focus:ring-pink-500", placeholder: "0.00" %>
                  </div>
                </div>
              </div>
            </div>

            <!-- Flat Fee Field -->
            <div data-financials-form-target="flatFeeFields" class="<%= @show_financials.ticket_sales? ? 'hidden' : '' %>">
              <%= form.label :flat_fee, "Flat Fee Amount", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <div class="relative">
                <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-500">$</span>
                <%= form.number_field :flat_fee, min: 0, step: 0.01, class: "w-full rounded-lg border border-gray-300 pl-7 pr-3 py-2 focus:border-pink-500 focus:ring-pink-500", placeholder: "0.00" %>
              </div>
              <p class="text-xs text-gray-500 mt-1">The guaranteed amount you were paid for this performance</p>
            </div>
          </div>

          <!-- Other Revenue -->
          <div class="bg-gray-50 rounded-lg p-4">
            <div class="flex items-center justify-between mb-3">
              <h3 class="font-semibold text-gray-900 flex items-center gap-2">
                <svg class="w-5 h-5 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                </svg>
                Other Revenue
              </h3>
              <button type="button"
                      class="inline-flex items-center gap-1 px-2 py-1 text-xs font-medium text-pink-600 hover:text-pink-700 hover:bg-pink-50 rounded transition-colors"
                      data-action="click->financials-form#openOtherRevenueModal">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                </svg>
                Add Item
              </button>
            </div>

            <% if has_other_revenue_details %>
              <div data-financials-form-target="otherRevenueItems" class="space-y-2 mb-3">
                <% other_revenue_items.each_with_index do |item, index| %>
                  <div class="flex items-center justify-between bg-white rounded-lg px-3 py-2" data-line-item data-index="<%= index %>">
                    <span class="text-sm text-gray-900"><%= item["description"].presence || "Item #{index + 1}" %></span>
                    <div class="flex items-center gap-2">
                      <span class="text-sm font-medium text-gray-900"><%= number_to_currency(item["amount"]) %></span>
                      <button type="button" class="text-gray-400 hover:text-red-500 p-1"
                              data-action="click->financials-form#removeOtherRevenueItem" data-index="<%= index %>">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                        </svg>
                      </button>
                    </div>
                    <input type="hidden" name="show_financials[other_revenue_details][<%= index %>][description]" value="<%= item["description"] %>">
                    <input type="hidden" name="show_financials[other_revenue_details][<%= index %>][amount]" value="<%= item["amount"] %>">
                  </div>
                <% end %>
              </div>
              <div class="flex items-center justify-between pt-2 border-t border-gray-200">
                <span class="text-sm font-medium text-gray-700">Total</span>
                <span data-financials-form-target="otherRevenueTotal" class="text-sm font-semibold text-gray-900"><%= number_to_currency(@show_financials.calculated_other_revenue) %></span>
              </div>
            <% else %>
              <div data-financials-form-target="otherRevenueItems"></div>
              <div data-financials-form-target="otherRevenueEmpty">
                <div class="relative">
                  <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-500">$</span>
                  <%= form.number_field :other_revenue, min: 0, step: 0.01, class: "w-full rounded-lg border border-gray-300 pl-7 pr-3 py-2 focus:border-pink-500 focus:ring-pink-500 bg-white", placeholder: "0.00" %>
                </div>
                <p class="text-xs text-gray-500 mt-1">Merchandise, concessions, donations, tips, etc.</p>
              </div>
              <div data-financials-form-target="otherRevenueTotalRow" class="hidden flex items-center justify-between pt-2 border-t border-gray-200">
                <span class="text-sm font-medium text-gray-700">Total</span>
                <span data-financials-form-target="otherRevenueTotal" class="text-sm font-semibold text-gray-900">$0.00</span>
              </div>
            <% end %>
          </div>

          <!-- Expenses -->
          <div class="bg-gray-50 rounded-lg p-4">
            <div class="flex items-center justify-between mb-3">
              <h3 class="font-semibold text-gray-900 flex items-center gap-2">
                <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"/>
                </svg>
                Expenses
              </h3>
              <button type="button"
                      class="inline-flex items-center gap-1 px-2 py-1 text-xs font-medium text-pink-600 hover:text-pink-700 hover:bg-pink-50 rounded transition-colors"
                      data-action="click->financials-form#openExpenseModal">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                </svg>
                Add Item
              </button>
            </div>

            <% if has_expense_details %>
              <div data-financials-form-target="expenseItems" class="space-y-2 mb-3">
                <% expense_items.each_with_index do |item, index| %>
                  <div class="flex items-center justify-between bg-white rounded-lg px-3 py-2" data-line-item data-index="<%= index %>">
                    <span class="text-sm text-gray-900"><%= item["description"].presence || "Item #{index + 1}" %></span>
                    <div class="flex items-center gap-2">
                      <span class="text-sm font-medium text-red-600"><%= number_to_currency(item["amount"]) %></span>
                      <button type="button" class="text-gray-400 hover:text-red-500 p-1"
                              data-action="click->financials-form#removeExpenseItem" data-index="<%= index %>">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                        </svg>
                      </button>
                    </div>
                    <input type="hidden" name="show_financials[expense_details][<%= index %>][description]" value="<%= item["description"] %>">
                    <input type="hidden" name="show_financials[expense_details][<%= index %>][amount]" value="<%= item["amount"] %>">
                  </div>
                <% end %>
              </div>
              <div class="flex items-center justify-between pt-2 border-t border-gray-200">
                <span class="text-sm font-medium text-gray-700">Total</span>
                <span data-financials-form-target="expensesTotal" class="text-sm font-semibold text-red-600"><%= number_to_currency(@show_financials.calculated_expenses) %></span>
              </div>
            <% else %>
              <div data-financials-form-target="expenseItems"></div>
              <div data-financials-form-target="expensesEmpty">
                <div class="relative">
                  <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-500">$</span>
                  <%= form.number_field :expenses, min: 0, step: 0.01, class: "w-full rounded-lg border border-gray-300 pl-7 pr-3 py-2 focus:border-pink-500 focus:ring-pink-500 bg-white", placeholder: "0.00" %>
                </div>
                <p class="text-xs text-gray-500 mt-1">Venue rental, supplies, etc.</p>
              </div>
              <div data-financials-form-target="expensesTotalRow" class="hidden flex items-center justify-between pt-2 border-t border-gray-200">
                <span class="text-sm font-medium text-gray-700">Total</span>
                <span data-financials-form-target="expensesTotal" class="text-sm font-semibold text-red-600">$0.00</span>
              </div>
            <% end %>
          </div>

          <!-- Notes -->
          <div class="bg-gray-50 rounded-lg p-4">
            <h3 class="font-semibold text-gray-900 mb-3 flex items-center gap-2">
              <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
              </svg>
              Notes
            </h3>
            <%= form.text_area :notes, rows: 2, class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500 bg-white", placeholder: "Any notes about this show's finances..." %>
          </div>

          <!-- Confirm Data Complete -->
          <div class="bg-gray-50 rounded-lg p-4">
            <label class="flex items-start gap-3 cursor-pointer">
              <%= form.check_box :data_confirmed, class: "mt-1 h-4 w-4 text-pink-600 border-gray-300 rounded focus:ring-pink-500 accent-pink-600" %>
              <div>
                <span class="font-medium text-gray-900">Confirm data is complete</span>
                <p class="text-sm text-gray-500 mt-0.5">Check this box if the data above is correct, even if revenue is $0.</p>
              </div>
            </label>
          </div>
        </div>

        <!-- Footer -->
        <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 flex items-center justify-between rounded-b-lg sticky bottom-0">
          <button type="button" data-action="click->financials-form#closeWorksheet" class="text-gray-600 hover:text-gray-900 text-sm font-medium">
            Cancel
          </button>
          <%= form.submit "Save Financial Data", class: "inline-flex items-center justify-center gap-2 font-medium rounded-lg transition-colors cursor-pointer whitespace-nowrap px-4 py-2 text-sm bg-pink-500 hover:bg-pink-600 text-white" %>
        </div>
      <% end %>

    </div>
  </div>

  <!-- Nested Modals for Line Items -->
  <!-- Other Revenue Modal -->
  <div data-financials-form-target="otherRevenueModal"
       class="hidden fixed inset-0 bg-black/60 backdrop-blur-sm z-[60] flex items-center justify-center p-4"
       data-action="click->financials-form#closeOtherRevenueModal">
    <div class="bg-white w-full max-w-md rounded-lg shadow-xl" data-action="click->financials-form#stopPropagation">
      <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
        <h2 data-financials-form-target="otherRevenueModalTitle" class="text-lg font-semibold text-gray-900">Add Revenue Item</h2>
        <button type="button" data-action="click->financials-form#closeOtherRevenueModal" class="text-gray-400 hover:text-gray-600 p-1 cursor-pointer">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>
      <div class="p-6 space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Description</label>
          <input type="text" data-financials-form-target="otherRevenueDescription"
                 class="w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500"
                 placeholder="e.g., Merchandise sales, Tips">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Amount</label>
          <div class="relative">
            <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-500">$</span>
            <input type="number" data-financials-form-target="otherRevenueAmount" min="0" step="0.01"
                   class="w-full rounded-lg border border-gray-300 pl-7 pr-3 py-2 focus:border-pink-500 focus:ring-pink-500"
                   placeholder="0.00">
          </div>
        </div>
        <input type="hidden" data-financials-form-target="otherRevenueEditIndex" value="">
      </div>
      <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 flex justify-end gap-3">
        <button type="button" data-action="click->financials-form#closeOtherRevenueModal" class="px-4 py-2 text-sm font-medium text-gray-700 hover:text-gray-900">Cancel</button>
        <button type="button" data-action="click->financials-form#saveOtherRevenueItem" class="px-4 py-2 text-sm font-medium text-white bg-pink-500 hover:bg-pink-600 rounded-lg">Save</button>
      </div>
    </div>
  </div>

  <!-- Expense Modal -->
  <div data-financials-form-target="expenseModal"
       class="hidden fixed inset-0 bg-black/60 backdrop-blur-sm z-[60] flex items-center justify-center p-4"
       data-action="click->financials-form#closeExpenseModal">
    <div class="bg-white w-full max-w-md rounded-lg shadow-xl" data-action="click->financials-form#stopPropagation">
      <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
        <h2 data-financials-form-target="expenseModalTitle" class="text-lg font-semibold text-gray-900">Add Expense Item</h2>
        <button type="button" data-action="click->financials-form#closeExpenseModal" class="text-gray-400 hover:text-gray-600 p-1 cursor-pointer">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>
      <div class="p-6 space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Description</label>
          <input type="text" data-financials-form-target="expenseDescription"
                 class="w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500"
                 placeholder="e.g., Venue rental, Equipment">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Amount</label>
          <div class="relative">
            <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-500">$</span>
            <input type="number" data-financials-form-target="expenseAmount" min="0" step="0.01"
                   class="w-full rounded-lg border border-gray-300 pl-7 pr-3 py-2 focus:border-pink-500 focus:ring-pink-500"
                   placeholder="0.00">
          </div>
        </div>
        <input type="hidden" data-financials-form-target="expenseEditIndex" value="">
      </div>
      <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 flex justify-end gap-3">
        <button type="button" data-action="click->financials-form#closeExpenseModal" class="px-4 py-2 text-sm font-medium text-gray-700 hover:text-gray-900">Cancel</button>
        <button type="button" data-action="click->financials-form#saveExpenseItem" class="px-4 py-2 text-sm font-medium text-white bg-pink-500 hover:bg-pink-600 rounded-lg">Save</button>
      </div>
    </div>
  </div>
</div>
