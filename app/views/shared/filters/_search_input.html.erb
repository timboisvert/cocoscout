<%#
  Inline Search Input Filter Component
  A compact search input that fits within the filter bar.

  Parameters:
    placeholder: String - Placeholder text (default: "Search...")
    value: String - Current search value
    name: String - Input name (default: "q")
    data_attributes: Hash (optional) - Additional data attributes for the input
%>
<%
  placeholder ||= "Search..."
  name ||= "q"
  value ||= ""
  data_attributes ||= {}
%>
<div class="flex items-center gap-2" data-controller="inline-search">
  <div class="relative">
    <input
      type="text"
      name="<%= name %>"
      value="<%= value %>"
      placeholder="<%= placeholder %>"
      class="w-48 h-8 px-3 pl-8 pr-8 rounded border border-gray-300 text-sm focus:ring-2 focus:ring-pink-500 focus:border-transparent"
      autocomplete="off"
      data-inline-search-target="input"
      data-action="input->inline-search#toggleClear keydown.enter->inline-search#submit"
      <% data_attributes.each do |key, val| %>
        data-<%= key.to_s.dasherize %>="<%= val %>"
      <% end %>
    />
    <svg class="absolute left-2.5 top-2 w-4 h-4 text-gray-400 pointer-events-none" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
    </svg>
    <button
      type="button"
      data-action="click->inline-search#clear"
      data-inline-search-target="clearBtn"
      class="absolute right-1.5 top-1.5 p-0.5 rounded-full hover:bg-gray-100 transition cursor-pointer <%= value.blank? ? 'hidden' : '' %>"
      title="Clear search"
    >
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4 text-gray-400 hover:text-gray-600">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </div>
</div>
