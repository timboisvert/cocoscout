<% content_for :title, "Talent Pools" %>

<div class="w-full">
  <%= render partial: "shared/notice", locals: { notice: notice } %>
  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Casting & Roles", manage_production_casting_path(@production)]
    ],
    text: "Talent Pool",
    links: [
      { text: "Create a Talent Pool", path: new_manage_production_talent_pool_path(@production) }
    ]
  } %>

  <p class="text-sm text-gray-500 pb-4">You can create any number of talent pools, each with its own group of people and groups.</p>

  <div>
    <div id="talent-pools" class="space-y-5">
        <% if @talent_pools.any? %>
          <% @talent_pools.each do |talent_pool| %>
            <div class="border border-gray-200 rounded-lg overflow-hidden">
              <div class="bg-gray-50 px-4 py-3 border-b border-gray-200 flex items-center justify-between">
                <h3 class="text-md font-semibold text-gray-900 coustard-regular"><%= talent_pool.name %></h3>

                <% if current_user_can_manage?(Current.production) %>
                  <div class="flex gap-2">
                    <%= link_to "Rename Pool", edit_manage_production_talent_pool_path(@production, talent_pool), class: "text-pink-500 text-xs underline" %>
                    <%= link_to "Delete Pool",
                          manage_production_talent_pool_path(@production, talent_pool),
                          data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this pool?" },
                          class: "text-pink-500 text-xs underline" %>
                  </div>
                <% end %>

              </div>
              <div class="p-4" data-controller="talent-pool-person" data-talent-pool-person-production-id-value="<%= @production.id %>" data-talent-pool-person-talent-pool-id-value="<%= talent_pool.id %>">

                <div id="talent-pool-members-list-<%= talent_pool.id %>">
                  <%= render 'manage/talent_pools/talent_pool_members_list', talent_pool: talent_pool %>
                </div>

              </div>

            </div>
          <% end %>
        <% else %>
          <p class="text-gray-500 text-sm">
            No talent pools have been created.
            <% if current_user_can_manage?(Current.production) %>
              <%= link_to "Add a Talent Pool", new_manage_production_talent_pool_path(@production), class: "text-pink-500 underline" %>
            <% end %>
          </p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Modal for adding members -->
  <% if current_user_can_manage?(Current.production) && @talent_pools.any? %>
    <div id="add-member-modal" class="hidden fixed inset-0 bg-black/60 backdrop-blur-sm overflow-y-auto h-full w-full z-50" data-controller="add-member-modal" data-production-id="<%= @production.id %>" data-action="click->add-member-modal#close">
      <div class="relative top-20 mx-auto p-5 border w-full max-w-md shadow-lg rounded-md bg-white" data-action="click->add-member-modal#stopPropagation">
        <div class="flex items-center justify-between pb-3 border-b border-gray-200">
          <h3 class="text-lg font-semibold text-gray-900" id="modal-title">Add Person or Group to Talent Pool</h3>
          <button type="button" class="text-gray-400 hover:text-gray-600" data-action="add-member-modal#close">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
        <div class="mt-4">
          <div data-controller="people-search"
              data-people-search-url-value="<%= search_people_manage_production_talent_pools_path(@production, format: :html) %>"
              data-people-search-result-partial-value=""
              data-people-search-talent-pool-id-value=""
              data-add-member-modal-target="searchController">
            <input type="text"
              id="member-search"
              class="w-full px-3 py-2 border border-gray-200 rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-pink-500"
              placeholder="Search People and Groups"
              data-people-search-target="input"
              data-action="input->people-search#search">
            <div class="mt-3 max-h-96 overflow-y-auto space-y-2" data-people-search-target="results"></div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
