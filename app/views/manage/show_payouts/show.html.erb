                        <path d="M19.5 3h-15A1.5 1.5 0 003 4.5v15A1.5 1.5 0 004.5 21h15a1.5 1.5 0 001.5-1.5v-15A1.5 1.5 0 0019.5 3zm-3.75 5.25l-1.5 7.5h-2.25l1.5-7.5h2.25zm-6 0v3h1.5v1.5h-1.5v3H7.5v-7.5h2.25z"/>
                      </svg>
                      Open in Venmo
                    </a>
                  <% end %>

                  <div class="grid grid-cols-2 gap-2">
                    <% PersonAdvance::PAYMENT_METHODS.each do |method| %>
                      <%= form_with url: manage_mark_paid_money_advance_path(@production, advance), method: :post do %>
                        <input type="hidden" name="payment_method" value="<%= method %>">
