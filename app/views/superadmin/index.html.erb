<% content_for :title, "Superadmin" %>

<div class="w-full px-5 pt-5">

  <%= render partial: "shared/notice", locals: { notice: notice } %>

  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [],
    text: "Superadmin",
    links: [
      { text: "Exit", path: manage_path }
    ]
  } %>

  <!-- Row 1: People (3/4) + Impersonate (1/4) -->
  <div class="grid grid-cols-1 lg:grid-cols-4 gap-4 mt-4">
    <!-- People Card (3/4 width) -->
    <div class="lg:col-span-3 border border-gray-200 rounded-lg overflow-hidden">
      <div class="flex items-center justify-between px-4 py-3 bg-gray-50 border-b border-gray-200">
        <h3 class="font-semibold text-gray-900 coustard-regular">People</h3>
        <%= link_to "View All ‚Üí", people_list_path, class: "text-sm text-pink-600 hover:text-pink-700" %>
      </div>
      <div class="p-4">
        <!-- Stats Row -->
        <div class="grid grid-cols-2 sm:grid-cols-5 gap-4 mb-6">
          <div class="text-center p-3 bg-gray-50 rounded-lg">
            <div class="text-2xl font-bold text-gray-900"><%= number_with_delimiter(@people_total) %></div>
            <div class="text-xs text-gray-500 mt-1">Total</div>
          </div>
          <div class="text-center p-3 bg-gray-50 rounded-lg">
            <div class="text-2xl font-bold text-pink-600"><%= @people_new_today %></div>
            <div class="text-xs text-gray-500 mt-1">Today</div>
          </div>
          <div class="text-center p-3 bg-gray-50 rounded-lg">
            <div class="text-2xl font-bold text-green-600"><%= @people_new_this_week %></div>
            <div class="text-xs text-gray-500 mt-1">This Week</div>
          </div>
          <div class="text-center p-3 bg-gray-50 rounded-lg">
            <div class="text-2xl font-bold text-blue-600"><%= @people_new_this_month %></div>
            <div class="text-xs text-gray-500 mt-1">This Month</div>
          </div>
          <div class="text-center p-3 bg-gray-50 rounded-lg">
            <div class="text-2xl font-bold <%= @people_growth_rate >= 0 ? 'text-green-600' : 'text-red-600' %>">
              <%= @people_growth_rate >= 0 ? '+' : '' %><%= @people_growth_rate %>%
            </div>
            <div class="text-xs text-gray-500 mt-1">vs Last Month</div>
          </div>
        </div>

        <!-- Chart Tabs -->
        <div data-controller="tabs">
          <nav class="flex space-x-1 border-b border-gray-200 mb-4">
            <button type="button" data-tabs-target="tab" data-index="0" data-action="tabs#select"
                    class="px-3 py-2 text-sm font-medium border-b-2 cursor-pointer bg-white text-pink-600 border-pink-600">
              Daily (30d)
            </button>
            <button type="button" data-tabs-target="tab" data-index="1" data-action="tabs#select"
                    class="px-3 py-2 text-sm font-medium border-b-2 cursor-pointer bg-gray-50 text-gray-500 border-transparent hover:text-gray-700">
              Weekly (12w)
            </button>
            <button type="button" data-tabs-target="tab" data-index="2" data-action="tabs#select"
                    class="px-3 py-2 text-sm font-medium border-b-2 cursor-pointer bg-gray-50 text-gray-500 border-transparent hover:text-gray-700">
              Monthly (12m)
            </button>
          </nav>

          <!-- Daily Chart -->
          <div data-tabs-target="panel">
            <div class="h-48" data-controller="bar-chart" data-bar-chart-data-value="<%= @people_daily_data.to_json %>" data-bar-chart-color-value="#ec4899" data-bar-chart-format-value="day">
              <canvas data-bar-chart-target="canvas"></canvas>
            </div>
          </div>

          <!-- Weekly Chart -->
          <div data-tabs-target="panel" class="hidden">
            <div class="h-48" data-controller="bar-chart" data-bar-chart-data-value="<%= @people_weekly_data.to_json %>" data-bar-chart-color-value="#22c55e" data-bar-chart-format-value="week">
              <canvas data-bar-chart-target="canvas"></canvas>
            </div>
          </div>

          <!-- Monthly Chart -->
          <div data-tabs-target="panel" class="hidden">
            <div class="h-48" data-controller="bar-chart" data-bar-chart-data-value="<%= @people_monthly_data.to_json %>" data-bar-chart-color-value="#3b82f6" data-bar-chart-format-value="month">
              <canvas data-bar-chart-target="canvas"></canvas>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Impersonate Card (1/4 width) -->
    <div class="border border-gray-200 rounded-lg overflow-hidden" data-controller="impersonate-search">
      <%= render "shared/card_header", title: "Impersonate" %>
      <div class="p-4">
        <% if session[:impersonate_user_id] %>
          <div class="mb-4 p-3 bg-yellow-50 border border-yellow-200 rounded-lg">
            <div class="text-sm text-yellow-800 mb-2">Currently impersonating</div>
            <%= render "shared/button", text: "Stop", path: stop_impersonating_user_path, method: :post, variant: "secondary", size: "small" %>
          </div>
        <% end %>

        <!-- Search Input -->
        <div class="relative">
          <input type="text"
                 placeholder="Search..."
                 autocomplete="off"
                 autocapitalize="none"
                 data-impersonate-search-target="input"
                 data-action="input->impersonate-search#search"
                 class="w-full shadow-sm rounded-lg border px-3 py-2 text-sm border-gray-400 focus:border-pink-500 focus:ring-pink-500">
          <div data-impersonate-search-target="spinner" class="hidden absolute right-3 top-1/2 -translate-y-1/2">
            <svg class="animate-spin h-4 w-4 text-pink-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
          </div>
        </div>

        <!-- Search Results -->
        <div data-impersonate-search-target="results" class="mt-2 hidden">
          <div class="border border-gray-200 rounded-lg divide-y divide-gray-100 max-h-48 overflow-y-auto">
          </div>
        </div>

        <!-- Recent Impersonations -->
        <% if @recent_impersonations.any? %>
          <div class="mt-3 pt-3 border-t border-gray-200">
            <h4 class="text-xs font-medium text-gray-500 mb-2">Recent</h4>
            <div class="space-y-1">
              <% @recent_impersonations.first(4).each do |recent| %>
                <%= button_to impersonate_user_path, method: :post, params: { email: recent["email"] }, class: "w-full text-left cursor-pointer group" do %>
                  <div class="p-2 border border-gray-200 rounded hover:border-pink-400 hover:bg-pink-50 transition-all flex items-center gap-2">
                    <div class="w-6 h-6 rounded-full bg-gray-200 flex items-center justify-center flex-shrink-0">
                      <span class="text-xs font-semibold text-gray-600"><%= recent["name"].to_s.first.upcase %></span>
                    </div>
                    <div class="min-w-0 flex-1">
                      <div class="font-medium text-xs text-gray-900 truncate"><%= recent["name"] %></div>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Row 2: Organizations -->
  <div class="border border-gray-200 rounded-lg overflow-hidden mt-4">
    <div class="flex items-center justify-between px-4 py-3 bg-gray-50 border-b border-gray-200">
      <h3 class="font-semibold text-gray-900 coustard-regular">Organizations</h3>
      <%= link_to "View All ‚Üí", organizations_list_path, class: "text-sm text-pink-600 hover:text-pink-700" %>
    </div>
    <div class="p-4">
      <div class="grid grid-cols-2 sm:grid-cols-4 lg:grid-cols-8 gap-4">
        <div class="text-center p-3 bg-gray-50 rounded-lg">
          <div class="text-2xl font-bold text-gray-900"><%= @organizations_total %></div>
          <div class="text-xs text-gray-500 mt-1">Total Orgs</div>
        </div>
        <div class="text-center p-3 bg-gray-50 rounded-lg">
          <div class="text-2xl font-bold text-green-600"><%= @organizations_new_this_week %></div>
          <div class="text-xs text-gray-500 mt-1">New This Week</div>
        </div>
        <div class="text-center p-3 bg-gray-50 rounded-lg">
          <div class="text-2xl font-bold text-blue-600"><%= @organizations_new_this_month %></div>
          <div class="text-xs text-gray-500 mt-1">New This Month</div>
        </div>
        <div class="text-center p-3 bg-gray-50 rounded-lg">
          <div class="text-2xl font-bold text-purple-600"><%= @organizations_with_productions %></div>
          <div class="text-xs text-gray-500 mt-1">With Productions</div>
        </div>
        <div class="text-center p-3 bg-gray-50 rounded-lg">
          <div class="text-2xl font-bold text-amber-600"><%= @organizations_active_30d %></div>
          <div class="text-xs text-gray-500 mt-1">Active (30d)</div>
        </div>
        <div class="text-center p-3 bg-gray-50 rounded-lg">
          <div class="text-2xl font-bold text-gray-700"><%= @total_productions %></div>
          <div class="text-xs text-gray-500 mt-1">Productions</div>
        </div>
        <div class="text-center p-3 bg-gray-50 rounded-lg">
          <div class="text-2xl font-bold text-gray-700"><%= number_with_delimiter(@total_shows) %></div>
          <div class="text-xs text-gray-500 mt-1">Total Events</div>
        </div>
        <div class="text-center p-3 bg-gray-50 rounded-lg">
          <div class="text-2xl font-bold text-pink-600"><%= number_with_delimiter(@upcoming_shows) %></div>
          <div class="text-xs text-gray-500 mt-1">Upcoming</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Row 3: Monitor Grid (4 columns) -->
  <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 mt-4">
    <!-- Data Monitor -->
    <%= link_to data_monitor_path, class: "block" do %>
      <div class="border border-gray-200 rounded-lg overflow-hidden hover:border-pink-500 transition-all h-full">
        <div class="p-4">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-lg bg-blue-100 flex items-center justify-center">
              <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4" />
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-gray-900">Data Monitor</h3>
              <p class="text-xs text-gray-500">Database tables & stats</p>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Queue Monitor -->
    <%= link_to queue_monitor_path, class: "block" do %>
      <div class="border border-gray-200 rounded-lg overflow-hidden hover:border-pink-500 transition-all h-full">
        <div class="p-4">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-lg bg-green-100 flex items-center justify-center">
              <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-gray-900">Queue Monitor</h3>
              <p class="text-xs text-gray-500">Jobs & failed tasks</p>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Cache Monitor -->
    <%= link_to cache_monitor_path, class: "block" do %>
      <div class="border border-gray-200 rounded-lg overflow-hidden hover:border-pink-500 transition-all h-full">
        <div class="p-4">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-lg bg-purple-100 flex items-center justify-center">
              <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-gray-900">Cache Monitor</h3>
              <p class="text-xs text-gray-500">Cache stats & clear</p>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Storage Monitor -->
    <%= link_to storage_monitor_path, class: "block" do %>
      <div class="border border-gray-200 rounded-lg overflow-hidden hover:border-pink-500 transition-all h-full">
        <div class="p-4">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-lg bg-amber-100 flex items-center justify-center">
              <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4" />
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-gray-900">Storage Monitor</h3>
              <p class="text-xs text-gray-500">S3 stats & cleanup</p>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Email Logs -->
    <%= link_to email_logs_path, class: "block" do %>
      <div class="border border-gray-200 rounded-lg overflow-hidden hover:border-pink-500 transition-all h-full">
        <div class="p-4">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-lg bg-pink-100 flex items-center justify-center">
              <svg class="w-5 h-5 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-gray-900">Email Logs</h3>
              <p class="text-xs text-gray-500">Sent emails & status</p>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Email Templates -->
    <%= link_to email_templates_path, class: "block" do %>
      <div class="border border-gray-200 rounded-lg overflow-hidden hover:border-pink-500 transition-all h-full">
        <div class="p-4">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-lg bg-indigo-100 flex items-center justify-center">
              <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z" />
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-gray-900">Email Templates</h3>
              <p class="text-xs text-gray-500">Manage templates</p>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <% if Rails.env.development? %>
      <!-- Dev Tools -->
      <%= link_to dev_tools_path, class: "block" do %>
        <div class="border border-amber-300 rounded-lg overflow-hidden hover:border-amber-500 transition-all bg-amber-50 h-full">
          <div class="p-4">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-lg bg-amber-200 flex items-center justify-center">
                <span class="text-lg">üõ†Ô∏è</span>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900">Dev Tools</h3>
                <p class="text-xs text-gray-600">Test users & activity</p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <!-- Change Email Address -->
  <div class="border border-gray-200 rounded-lg overflow-hidden mt-4">
    <%= render "shared/card_header", title: "Change Email Address" %>
    <div class="p-4">
      <p class="text-xs text-gray-500">This will update the user's email_address and their person's email to the new address.</p>
      <%= form_with url: change_email_user_path, method: :post, local: true, class: "flex flex-wrap gap-3 mt-2 items-end" do |f| %>
        <div class="flex-1 min-w-[200px]">
          <%= f.label :old_email, "Current Email", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.email_field :old_email, required: true, autocapitalize: "none", class: "block shadow-sm rounded-lg border px-3 py-2 w-full border-gray-400" %>
        </div>
        <div class="flex-1 min-w-[200px]">
          <%= f.label :new_email, "New Email", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.email_field :new_email, required: true, autocapitalize: "none", class: "block shadow-sm rounded-lg border px-3 py-2 w-full border-gray-400" %>
        </div>
        <%= f.submit "Change Email", class: "rounded-lg px-3.5 py-2.5 text-white bg-pink-500 hover:bg-pink-600 font-medium cursor-pointer" %>
      <% end %>
    </div>
  </div>
</div>