<div class="min-h-screen bg-white">
  <!-- Header -->
  <div class="flex flex-col items-center pt-6 sm:pt-10 pb-4">
    <%= render "shared/cocoscout_logo", size: :medium %>
    <h1 class="mt-3 text-3xl sm:text-4xl coustard-regular text-pink-500">CocoScout</h1>
  </div>

  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 pb-12">
    <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-start">

      <!-- Left Column: Invitation Info -->
      <div class="order-2 lg:order-1">
        <div class="lg:sticky lg:top-8">
          <div class="bg-gradient-to-br from-pink-50 to-white border border-pink-200 rounded-lg p-6 sm:p-8 shadow-sm">
            <h2 class="text-2xl sm:text-3xl font-bold text-slate-900 mb-3">Join <%= @invitation.group.name %></h2>
            <p class="text-slate-600 mb-6">
              <% if @invitation.invited_by.present? %>
                <span class="font-semibold text-pink-600"><%= @invitation.invited_by.name %></span> has invited you to join this group on CocoScout.
              <% else %>
                You've been invited to join this group on CocoScout.
              <% end %>
            </p>

            <!-- Group Details -->
            <div class="bg-white border border-pink-200 rounded-lg p-4 mb-6">
              <div class="flex gap-4">
                <% if @invitation.group.headshot&.attached? %>
                  <%= image_tag @invitation.group.headshot.variant(:thumb), class: "w-16 h-24 rounded object-cover flex-shrink-0 shadow-sm" %>
                <% else %>
                  <div class="w-16 h-24 rounded bg-gradient-to-br from-pink-400 to-purple-500 flex items-center justify-center text-white font-bold text-xl flex-shrink-0 shadow-sm">
                    <%= @invitation.group.name[0].upcase %>
                  </div>
                <% end %>
                <div class="flex-1 min-w-0">
                  <p class="text-lg font-semibold text-slate-900 mb-1"><%= @invitation.group.name %></p>
                  <% if @invitation.group.bio.present? %>
                    <p class="text-sm text-slate-600 line-clamp-3"><%= @invitation.group.bio %></p>
                  <% end %>
                </div>
              </div>
            </div>

            <!-- What You'll Get -->
            <div class="space-y-4">
              <div class="flex items-start gap-3">
                <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-pink-100 flex items-center justify-center">
                  <svg class="w-5 h-5 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-sm font-semibold text-slate-900">Shared profile</h3>
                  <p class="text-sm text-slate-600">Build a profile together with headshots, videos, and performance history</p>
                </div>
              </div>

              <div class="flex items-start gap-3">
                <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-pink-100 flex items-center justify-center">
                  <svg class="w-5 h-5 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-sm font-semibold text-slate-900">[Item #2]</h3>
                  <p class="text-sm text-slate-600">[Description]</p>
                </div>
              </div>

              <div class="flex items-start gap-3">
                <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-pink-100 flex items-center justify-center">
                  <svg class="w-5 h-5 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-sm font-semibold text-slate-900">Visibility</h3>
                  <p class="text-sm text-slate-600">Get discovered by casting directors and theaters together</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Right Column: Form -->
      <div class="order-1 lg:order-2">
        <div class="bg-white border border-slate-200 rounded-lg shadow-sm p-6 sm:p-8">
          <% if Current.user.present? %>
            <!-- Authenticated: Simple accept -->
            <h2 class="text-xl font-bold text-slate-900 mb-2">You're all set!</h2>
            <p class="text-sm text-slate-600 mb-6">Click below to accept the invitation and join <%= @invitation.group.name %>.</p>

            <%= form_with url: do_accept_group_invitation_path(@invitation.token), method: :post, local: true do |form| %>
              <div class="mb-4">
                <label class="block text-sm font-semibold text-slate-700 mb-2">
                  Signed in as
                </label>
              <div class="block rounded-lg border border-slate-300 bg-slate-50 px-4 py-3 text-slate-700">
                <%= Current.user.person.name %> (<%= Current.user.email %>)
              </div>
            </div>

            <div class="flex flex-col gap-3">
              <%= render "shared/button", text: "Accept invitation", variant: "primary", size: "medium", type: :submit %>
            </div>
          <% end %>            <div class="mt-6 pt-6 border-t border-slate-200">
              <p class="text-sm text-slate-600 text-center">
                Not you?
                <%= link_to "Sign out", signout_path, data: { turbo_method: :delete }, class: "font-semibold text-pink-500 hover:text-pink-600 transition" %>
                and create a new account
              </p>
            </div>
          <% else %>
            <!-- Not authenticated: Full signup form -->
            <h2 class="text-xl font-bold text-slate-900 mb-2">Create your account</h2>
            <p class="text-sm text-slate-600 mb-6">Set a password to join CocoScout</p>

            <%= form_with url: do_accept_group_invitation_path(@invitation.token), method: :post, local: true do |form| %>
              <div class="mb-6">
                <label class="block text-sm font-semibold text-slate-700 mb-2">
                  Email address
                </label>
                <div class="block rounded-lg border border-slate-300 bg-slate-50 px-4 py-3 text-slate-700">
                  <%= @invitation.email %>
                </div>
              </div>

              <div class="mb-6" data-controller="password-visibility password-strength">
                <label class="block text-sm font-semibold text-slate-700 mb-2">
                  Password
                </label>
                <div class="relative">
                  <%= form.password_field :password,
                        required: true,
                        minlength: 8,
                        autocomplete: "new-password",
                        placeholder: "Create a password (at least 8 characters)",
                        maxlength: 72,
                        class: "block w-full rounded-lg border #{ @user&.errors&.[](:password)&.any? ? 'border-pink-500' : 'border-slate-300' } px-4 py-3 text-slate-900 placeholder:text-slate-400 focus:border-pink-500 focus:ring-2 focus:ring-pink-500 focus:ring-offset-0 transition pr-12",
                        data: {
                          password_visibility_target: "input",
                          password_strength_target: "input",
                          action: "input->password-strength#checkStrength paste->password-strength#checkStrength change->password-strength#checkStrength"
                        }
                  %>
                  <button type="button"
                          data-action="password-visibility#toggle"
                          class="absolute right-3 top-1/2 -translate-y-1/2 text-slate-400 hover:text-slate-600 focus:outline-none transition">
                    <span data-password-visibility-target="icon">
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                      </svg>
                  </span>
                </button>
              </div>
              <div class="mt-2 bg-slate-50 rounded-md px-3 py-2.5 border border-slate-200">
                <p class="text-xs font-medium text-slate-700 mb-1.5">Password requirements:</p>
                <div class="space-y-1">
                  <div class="flex items-start gap-2" data-password-strength-target="lengthCheck">
                    <svg class="w-4 h-4 text-slate-400 mt-0.5 flex-shrink-0 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" opacity="0.3" />
                    </svg>
                    <span class="text-xs text-slate-600 transition-colors">At least 8 characters</span>
                  </div>
                  <div class="flex items-start gap-2" data-password-strength-target="uppercaseCheck">
                    <svg class="w-4 h-4 text-slate-400 mt-0.5 flex-shrink-0 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" opacity="0.3" />
                    </svg>
                    <span class="text-xs text-slate-600 transition-colors">One uppercase letter (A-Z)</span>
                  </div>
                  <div class="flex items-start gap-2" data-password-strength-target="lowercaseCheck">
                    <svg class="w-4 h-4 text-slate-400 mt-0.5 flex-shrink-0 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" opacity="0.3" />
                    </svg>
                    <span class="text-xs text-slate-600 transition-colors">One lowercase letter (a-z)</span>
                  </div>
                  <div class="flex items-start gap-2" data-password-strength-target="numberCheck">
                    <svg class="w-4 h-4 text-slate-400 mt-0.5 flex-shrink-0 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" opacity="0.3" />
                    </svg>
                    <span class="text-xs text-slate-600 transition-colors">One number (0-9)</span>
                  </div>
                  <div class="flex items-start gap-2" data-password-strength-target="specialCheck">
                    <svg class="w-4 h-4 text-slate-400 mt-0.5 flex-shrink-0 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" opacity="0.3" />
                    </svg>
                    <span class="text-xs text-slate-600 transition-colors">One special character (!@#$%)</span>
                  </div>
                </div>
              </div>

              <div class="flex flex-col gap-3 mt-6">
                <%= render "shared/button",
                    text: "Join CocoScout",
                    variant: "primary",
                    size: "medium",
                    type: :submit,
                    disabled: true,
                    classes: "!opacity-50 !cursor-not-allowed",
                    data: { password_strength_target: "submit" } %>
              </div>
            </div>
          <% end %>            <div class="mt-6 pt-6 border-t border-slate-200">
              <p class="text-sm text-slate-600 text-center">
                Already have an account?
                <%= link_to "Sign in", signin_path, class: "font-semibold text-pink-500 hover:text-pink-600 transition" %>
              </p>
            </div>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
