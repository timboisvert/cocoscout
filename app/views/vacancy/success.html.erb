<% content_for :title, "Confirmed" %>

<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md mx-auto text-center">
    <!-- Success Icon -->
    <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-green-100 mb-6">
      <svg class="h-8 w-8 text-green-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
      </svg>
    </div>

    <h1 class="text-2xl font-bold text-gray-900 mb-2">Got It!</h1>

    <p class="text-gray-600 mb-6">
      We acknowledge that you can't make it to this event. The production team will be notified and will find a replacement.
    </p>

    <div class="bg-white shadow rounded-lg p-4 mb-6">
      <div class="flex items-center justify-center gap-4">
        <% poster_url = safe_poster_url(@show) %>
        <% if poster_url %>
          <%= image_tag poster_url,
              alt: @show.production.name,
              class: "w-12 h-18 object-cover rounded-lg" %>
        <% end %>
        <div class="text-left">
          <h2 class="font-semibold text-gray-900"><%= @show.production.name %></h2>
          <p class="text-sm text-gray-600"><%= @show.date_and_time.strftime("%A, %B %d, %Y") %></p>
        </div>
      </div>
    </div>

    <%= render "shared/button",
        text: "Done",
        variant: "primary",
        type: :link,
        path: my_dashboard_path %>
  </div>
</div>
