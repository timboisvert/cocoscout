<div class="flex items-top justify-between mb-4 border-b-1 border-gray-200 pb-2">

  <div class="pt-1 coustard-regular">

    <% breadcrumbs.each do |name, path| %>
      <% if path %>
        <%= link_to name, path, class:"text-xl mb-1 mr-2 text-pink-500 hover:text-pink-600 underline" %>
        <span class="text-xl font-medium text-gray-500 mr-2"> /</span>
      <% else %>
        <span class="text-xl text-mb-1 mr-2"><%= name %> /</span>
      <% end %>
    <% end %>
    <span class="text-xl mb-1 mr-2"><%= text %></span>
  </div>

  <% if !Current.production_company.nil? && Current.user.manager? %>

    <% if links.count > 0 %>
      <div>
        <% links.each do |link| %>
          <%= render partial: "shared/link_button", locals: {text: link[:text], path: link[:path]} %>
        <% end %>
      </div>
    <% end %>

  <% end %>

</div>