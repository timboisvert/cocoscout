<% content_for :title, "Sign-ups" %>
<div class="w-full pb-24 lg:pb-24">
  <%= render partial: "shared/notice", locals: { notice: notice } %>
  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Auditions", manage_production_auditions_path(@production)],
      ["Sign-ups", manage_production_call_to_audition_audition_requests_path(@production, @call_to_audition)]
    ],
    text: @audition_request.person.name.truncate(40, omission: "..."),
    links: []
  } %>

  <div class="w-full" data-controller="tabs">
    <nav class="flex flex-wrap gap-2 border-b border-gray-200 mb-4">
      <% idx = 0 %>

      <button type="button" data-tabs-target="tab" data-index="<%= idx %>" data-action="tabs#select" class="px-3 lg:px-4 py-2 text-xs lg:text-sm font-medium bg-white border-b-2 text-pink-600 cursor-pointer whitespace-nowrap">Profile</button>
      <% idx += 1 %>

      <button type="button" data-tabs-target="tab" data-index="<%= idx %>" data-action="tabs#select" class="px-3 lg:px-4 py-2 text-xs lg:text-sm font-medium bg-gray-50 border-b-2 text-gray-500 cursor-pointer whitespace-nowrap">Resume</button>
      <% idx += 1 %>

      <% if @call_to_audition.audition_type == "video_upload" %>
        <button type="button" data-tabs-target="tab" data-index="<%= idx %>" data-action="tabs#select" class="px-3 lg:px-4 py-2 text-xs lg:text-sm font-medium bg-gray-50 border-b-2 text-gray-500 cursor-pointer whitespace-nowrap">Video</button>
        <% idx += 1 %>
      <% end %>

      <button type="button" data-tabs-target="tab" data-index="<%= idx %>" data-action="tabs#select" class="px-3 lg:px-4 py-2 text-xs lg:text-sm font-medium bg-gray-50 border-b-2 text-gray-500 cursor-pointer whitespace-nowrap">Sign-up Questions</button>
      <% idx += 1 %>

      <% if @call_to_audition.audition_type == "video_upload" %>
        <button type="button" data-tabs-target="tab" data-index="<%= idx %>" data-action="tabs#select" class="px-3 lg:px-4 py-2 text-xs lg:text-sm font-medium bg-gray-50 border-b-2 text-gray-500 cursor-pointer whitespace-nowrap">Casting</button>
      <% end %>

    </nav>

    <div data-tabs-target="panel">
      <%= render "shared/person_card", person: @person, show_delete_person: true, show_delete_signup: true %>
    </div>

    <div data-tabs-target="panel" class="hidden">
      <% if @person.resume.attached? && @person.resume.previewable? %>
        <div class="w-full">
          <%= image_tag @person.resume.preview(resize_to_limit: [1224, 1584]), class: "object-contain" %>
        </div>
      <% else %>
        <p class="text-center mt-10">No resume found</p>
      <% end %>
    </div>

    <% if @call_to_audition.audition_type == "video_upload" %>
      <div data-tabs-target="panel" class="hidden">
        <% if @audition_request.video_url.present? %>
          <div class="mt-2">
            <%= render "manage/audition_requests/video", audition_request: @audition_request %>
          </div>
          <div class="mt-2">
            <%= link_to "Edit Video",
                edit_video_manage_production_call_to_audition_audition_request_path(@production, @call_to_audition, @audition_request),
                class: "mt-1 font-medium rounded-lg text-sm px-5 h-10 py-2.5 text-center mb-0 inline-block text-white bg-pink-500 hover:bg-pink-600"
            %>
          </div>
        <% else %>
          <p class="text-center mt-10">No video uploaded</p>
        <% end %>
      </div>
    <% end %>

    <div data-tabs-target="panel" class="hidden">
      <% if @answers.any? %>
        <div class="mt-2">
          <%= render "manage/audition_requests/answers", answers: @answers %>
        </div>

        <% if Current.user.manager? %>
          <div class="mt-2">
            <%= link_to "Edit Answers",
                edit_answers_manage_production_call_to_audition_audition_request_path(@production, @call_to_audition, @audition_request),
                class: "mt-1 font-medium rounded-lg text-sm px-5 h-10 py-2.5 text-center mb-0 inline-block text-white bg-pink-500 hover:bg-pink-600"
            %>
          </div>
        <% end %>
      <% else %>
        <p class="text-center mt-10">No sign-up questions answered</p>
      <% end %>
    </div>

    <% if @call_to_audition.audition_type == "video_upload" %>
      <div data-tabs-target="panel" class="hidden">
        <div class="mt-2">
          <%= render "manage/casts/cast_membership_card", production: @production, person: @person %>
        </div>
      </div>
    <% end %>

  </div>
</div>


<% if Current.user.manager? %>
  <div class="fixed bottom-0 left-0 w-full lg:h-[84px] bg-white text-pink-500 p-2 border-t-4 border-pink-500 lg:pl-56">
    <div class="flex items-center gap-1 lg:gap-0">

      <!-- Previous button -->
      <div class="flex-shrink-0">
        <% if @audition_request.previous %>
          <%= link_to manage_production_call_to_audition_audition_request_path(@production, @call_to_audition, @audition_request.previous), class: "flex flex-col lg:flex-row items-center lg:gap-1" do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-6 w-6 lg:h-10 lg:w-10">
              <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
            </svg>
            <p class="text-xs hidden lg:block">Previous</p>
          <% end %>
        <% end %>
      </div>

      <!-- Status buttons -->
      <div class="flex-1 grid grid-cols-3 gap-1 lg:gap-3 px-1 lg:px-4">
          <% [:undecided, :accepted, :passed].each do |status| %>
            <% classes = "text-xs lg:text-lg font-bold px-1 py-2 lg:px-4 lg:py-3 text-center border rounded-lg border-gray-200 " %>
            <% if @audition_request.status == status.to_s %>
              <% classes += " bg-pink-500 text-white hover:bg-pink-600 hover:text-white" %>
            <% else %>
              <% classes += " bg-white text-pink-500 hover:bg-pink-600 hover:text-white" %>
            <% end %>
            <% count = @status_counts[status.to_s] || 0 %>
            <%= link_to set_status_manage_production_call_to_audition_audition_request_path(@production, @call_to_audition, @audition_request, status: status), class: classes, data: { turbo_method: :post } do %>
              <span class="w-full flex justify-center items-center">
                <span class="flex w-full justify-center items-center relative">
                  <span class="mx-auto"><%= manage_signup_status_name(status) %></span>
                  <span class="absolute right-0 top-1/2 -translate-y-1/2 text-[10px] lg:text-base font-normal px-0.5 lg:px-2"><%= count %></span>
                </span>
              </span>
            <% end %>
          <% end %>
      </div>

      <!-- Next button -->
      <div class="flex-shrink-0">
        <% if @audition_request.next %>
          <%= link_to manage_production_call_to_audition_audition_request_path(@production, @call_to_audition, @audition_request.next), class: "flex flex-col lg:flex-row items-center lg:gap-1" do %>
            <p class="text-xs hidden lg:block">Next</p>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-6 w-6 lg:h-10 lg:w-10">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
            </svg>
          <% end %>
        <% end %>
      </div>

    </div>
  </div>
<% end %>