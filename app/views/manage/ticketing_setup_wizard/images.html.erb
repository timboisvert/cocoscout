<%= render layout: "manage/ticketing_setup_wizard/wizard_layout", locals: { current_step: 6, step_name: "Images" } do %>
  <div class="text-center mb-6">
    <div class="w-16 h-16 bg-pink-100 rounded-full flex items-center justify-center mx-auto mb-4">
      <svg class="w-8 h-8 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
      </svg>
    </div>
    <h2 class="text-xl font-bold text-gray-900 coustard-regular">Event images</h2>
    <p class="text-gray-600 mt-2">Upload images for your event listings</p>
  </div>

  <%= form_with url: manage_ticketing_setup_wizard_save_images_path, method: :post, local: true, multipart: true do |form| %>
    <div class="space-y-6">
      <!-- Master Image -->
      <div class="bg-gray-50 rounded-lg p-5 border border-gray-200">
        <h3 class="text-sm font-semibold text-gray-900 mb-3">Master Event Image</h3>
        <p class="text-sm text-gray-600 mb-4">
          Upload a high-quality image and we'll automatically resize it for each provider.
          For best results, use at least <strong>2160 x 1080 pixels</strong> (2:1 ratio).
        </p>

        <div class="flex items-center gap-4">
          <% if @wizard_state[:master_image_uploaded] %>
            <div class="w-32 h-16 bg-gray-200 rounded-lg flex items-center justify-center overflow-hidden">
              <img src="<%= @wizard_state[:master_image_preview] %>" alt="Preview" class="object-cover w-full h-full">
            </div>
          <% else %>
            <div class="w-32 h-16 bg-gray-200 rounded-lg flex items-center justify-center">
              <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            </div>
          <% end %>
          <div class="flex-1">
            <input type="file"
                   name="master_image"
                   id="master_image"
                   accept="image/jpeg,image/png,image/webp"
                   class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-pink-50 file:text-pink-700 hover:file:bg-pink-100 cursor-pointer">
            <p class="mt-1 text-xs text-gray-500">JPG, PNG, or WebP. Max 10MB.</p>
          </div>
        </div>
      </div>

      <!-- Provider Requirements -->
      <div class="border border-gray-200 rounded-lg overflow-hidden">
        <div class="bg-gray-100 px-4 py-2.5 border-b border-gray-200">
          <h3 class="text-sm font-semibold text-gray-700">Provider Image Requirements</h3>
        </div>
        <div class="divide-y divide-gray-200">
          <% selected_providers = @wizard_state[:selected_providers] || [] %>

          <% if selected_providers.include?("eventbrite") %>
            <div class="px-4 py-3 flex items-start gap-3">
              <div class="w-8 h-8 bg-orange-100 rounded flex items-center justify-center flex-shrink-0">
                <span class="text-orange-600 font-bold text-xs">EB</span>
              </div>
              <div class="flex-1">
                <p class="text-sm font-medium text-gray-900">Eventbrite</p>
                <p class="text-xs text-gray-500 mt-0.5">2160 × 1080 pixels (2:1 ratio)</p>
              </div>
              <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
                Auto-resize
              </span>
            </div>
          <% end %>

          <% if selected_providers.include?("ticket_tailor") %>
            <div class="px-4 py-3 flex items-start gap-3">
              <div class="w-8 h-8 bg-purple-100 rounded flex items-center justify-center flex-shrink-0">
                <span class="text-purple-600 font-bold text-xs">TT</span>
              </div>
              <div class="flex-1">
                <p class="text-sm font-medium text-gray-900">Ticket Tailor</p>
                <p class="text-xs text-gray-500 mt-0.5">1200 × 630 pixels (1.9:1 ratio)</p>
              </div>
              <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
                Auto-resize
              </span>
            </div>
          <% end %>

          <% if selected_providers.include?("manual") %>
            <div class="px-4 py-3 flex items-start gap-3">
              <div class="w-8 h-8 bg-gray-100 rounded flex items-center justify-center flex-shrink-0">
                <span class="text-gray-600 font-bold text-xs">M</span>
              </div>
              <div class="flex-1">
                <p class="text-sm font-medium text-gray-900">Manual / Box Office</p>
                <p class="text-xs text-gray-500 mt-0.5">No image required</p>
              </div>
              <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-600">
                N/A
              </span>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Override Option -->
      <div class="border border-gray-200 rounded-lg p-4" data-controller="toggle-section">
        <div class="flex items-start gap-3">
          <input type="checkbox"
                 name="use_provider_overrides"
                 id="use_provider_overrides"
                 value="1"
                 <%= "checked" if @wizard_state[:use_provider_overrides] %>
                 data-toggle-section-target="toggle"
                 data-action="change->toggle-section#toggle"
                 class="h-5 w-5 text-pink-600 border-gray-300 rounded focus:ring-pink-500 accent-pink-500 mt-0.5">
          <div>
            <label for="use_provider_overrides" class="text-sm font-medium text-gray-900 cursor-pointer">
              Upload custom images per provider
            </label>
            <p class="text-xs text-gray-500 mt-0.5">
              Override the auto-resized master image with custom images for specific providers.
            </p>
          </div>
        </div>

        <div data-toggle-section-target="content" class="mt-4 pl-8 space-y-4 <%= @wizard_state[:use_provider_overrides] ? '' : 'hidden' %>">
          <% if selected_providers.include?("eventbrite") %>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1.5">
                Eventbrite Image (2160 × 1080)
              </label>
              <input type="file"
                     name="eventbrite_image"
                     accept="image/jpeg,image/png,image/webp"
                     class="block w-full text-sm text-gray-500 file:mr-4 file:py-1.5 file:px-3 file:rounded file:border-0 file:text-xs file:font-semibold file:bg-orange-50 file:text-orange-700 hover:file:bg-orange-100 cursor-pointer">
            </div>
          <% end %>

          <% if selected_providers.include?("ticket_tailor") %>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1.5">
                Ticket Tailor Image (1200 × 630)
              </label>
              <input type="file"
                     name="ticket_tailor_image"
                     accept="image/jpeg,image/png,image/webp"
                     class="block w-full text-sm text-gray-500 file:mr-4 file:py-1.5 file:px-3 file:rounded file:border-0 file:text-xs file:font-semibold file:bg-purple-50 file:text-purple-700 hover:file:bg-purple-100 cursor-pointer">
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="mt-8 flex justify-between">
      <%= link_to manage_ticketing_setup_wizard_venue_path do %>
        <%= render "shared/button", text: "Back", variant: "secondary", size: "medium" %>
      <% end %>
      <%= render "shared/button", text: "Next", variant: "primary", size: "medium", type: :submit %>
    </div>
  <% end %>
<% end %>
