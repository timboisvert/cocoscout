<div class="w-full max-w-2xl mx-auto">
  <!-- Page Header -->
  <div class="mb-6">
    <nav class="text-sm text-gray-500 mb-2">
      <%= link_to @shoutee.name, public_profile_path(@shoutee.public_key), class: "hover:text-pink-600" %> /
      <span class="text-gray-700">Give a Shoutout</span>
    </nav>
    <h1 class="text-2xl font-bold text-gray-900 coustard-regular">Give a Shoutout to <%= @shoutee.name %></h1>
    <p class="text-gray-600 text-sm mt-1">Write a kind message to show your appreciation!</p>
  </div>

  <!-- Recipient Preview -->
  <div class="bg-gray-50 border border-gray-200 rounded-lg p-4 mb-6">
    <div class="flex items-center gap-3">
      <% headshot = @shoutee.safe_headshot_variant(:thumb) %>
      <% if headshot %>
        <%= image_tag headshot, class: "w-12 h-12 rounded-full object-cover", alt: @shoutee.name %>
      <% else %>
        <div class="w-12 h-12 rounded-full bg-gradient-to-br from-pink-400 to-purple-500 flex items-center justify-center text-white font-bold text-lg">
          <%= @shoutee.initials %>
        </div>
      <% end %>
      <div>
        <p class="font-medium text-gray-900"><%= @shoutee.name %></p>
        <p class="text-xs text-gray-500">
          <% if @shoutee.is_a?(Group) %>
            Group
          <% else %>
            Person
          <% end %>
        </p>
      </div>
    </div>
  </div>

  <!-- Shoutout Form -->
  <div class="bg-white border border-gray-200 rounded-lg p-6">
    <%= form_with model: @shoutout, url: my_create_shoutout_path(shoutee_type: @shoutee.class.name, shoutee_id: @shoutee.id), local: true do |f| %>
      <% if @shoutout.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-4">
          <div class="flex gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-red-500 flex-shrink-0">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 11-18 0 9 9 0 0118 0zm-9 3.75h.008v.008H12v-.008z" />
            </svg>
            <div>
              <p class="text-sm font-medium text-red-800">Please fix the following errors:</p>
              <ul class="list-disc list-inside text-sm text-red-700 mt-1">
                <% @shoutout.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <div class="mb-4">
        <%= f.label :content, "Your Shoutout", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_area :content,
            rows: 6,
            placeholder: "Write something kind about #{@shoutee.name}...",
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-pink-500 focus:border-pink-500 resize-none" %>
        <p class="text-xs text-gray-500 mt-1">Maximum 2000 characters</p>
      </div>

      <div class="flex items-center justify-between">
        <%= link_to "Cancel", public_profile_path(@shoutee.public_key), class: "text-sm text-gray-500 hover:text-gray-700" %>
        <%= f.submit "Send Shoutout", class: "inline-flex items-center px-4 py-2 bg-pink-600 hover:bg-pink-700 text-white text-sm font-medium rounded-lg transition-colors cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
