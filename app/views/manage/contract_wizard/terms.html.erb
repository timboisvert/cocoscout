<%= render layout: "manage/contract_wizard/wizard_layout", locals: { step_name: "Terms" } do %>
  <h2 class="text-xl font-bold text-gray-900 mb-2 coustard-regular">Contract dates & terms</h2>
  <p class="text-gray-600 mb-6">Set the contract dates and add any notes or terms.</p>

  <%= form_with model: @contract, url: manage_terms_contract_wizard_path(@contract), method: :post, local: true do |form| %>
    <div class="space-y-5">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label for="contract_start_date" class="block text-sm font-medium text-gray-900 mb-1.5">
            Contract Start Date
            <span class="text-pink-500">*</span>
          </label>
          <%= form.date_field :contract_start_date,
            required: true,
            class: "block w-full px-3 py-2.5 bg-white border border-gray-300 rounded-lg shadow-sm text-gray-900 focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-pink-500 transition" %>
          <p class="mt-1 text-xs text-gray-500">When the contract period begins</p>
        </div>

        <div>
          <label for="contract_end_date" class="block text-sm font-medium text-gray-900 mb-1.5">
            Contract End Date
            <span class="text-pink-500">*</span>
          </label>
          <%= form.date_field :contract_end_date,
            required: true,
            class: "block w-full px-3 py-2.5 bg-white border border-gray-300 rounded-lg shadow-sm text-gray-900 focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-pink-500 transition" %>
          <p class="mt-1 text-xs text-gray-500">When the contract period ends</p>
        </div>
      </div>

      <div>
        <label for="notes" class="block text-sm font-medium text-gray-900 mb-1.5">
          Internal Notes
          <span class="text-gray-400 font-normal">(optional)</span>
        </label>
        <%= form.text_area :notes,
          rows: 3,
          placeholder: "Any internal notes about this contract...",
          class: "block w-full px-3 py-2.5 bg-white border border-gray-300 rounded-lg shadow-sm text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-pink-500 transition" %>
        <p class="mt-1 text-xs text-gray-500">Only visible to your team</p>
      </div>

      <div>
        <label for="terms" class="block text-sm font-medium text-gray-900 mb-1.5">
          Contract Terms
          <span class="text-gray-400 font-normal">(optional)</span>
        </label>
        <%= form.text_area :terms,
          rows: 6,
          placeholder: "Key terms and conditions of the contract...",
          class: "block w-full px-3 py-2.5 bg-white border border-gray-300 rounded-lg shadow-sm text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-pink-500 transition" %>
        <p class="mt-1 text-xs text-gray-500">Summary of key contract terms for reference</p>
      </div>
    </div>

    <div class="mt-8 flex justify-between">
      <%= render "shared/button", text: "Back", variant: "secondary", size: "medium", icon: "arrow-left", path: manage_payments_contract_wizard_path(@contract) %>
      <%= render "shared/button", text: "Next: Documents", variant: "primary", size: "medium", type: :submit %>
    </div>
  <% end %>
<% end %>
