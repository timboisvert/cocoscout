<% content_for :title, "Builder - #{@questionnaire.title}" %>

<div class="w-full mb-10" data-controller="questionnaire-builder">
  <!-- Fixed Top Bar -->
  <div class="sticky top-0 z-40 bg-white border-b border-gray-200 mb-6">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between py-4">
        <div class="flex items-center gap-4">
          <%= link_to manage_production_questionnaire_path(@production, @questionnaire), class: "text-gray-600 hover:text-gray-900" do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
            </svg>
          <% end %>
          <h1 class="text-xl font-semibold text-gray-900 coustard-regular"><%= @questionnaire.title %></h1>
        </div>
        <div class="flex items-center gap-4">
          <%= link_to "Preview", preview_manage_production_questionnaire_path(@production, @questionnaire), target: "_blank", class: "px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition text-sm font-medium" %>
        </div>
      </div>
    </div>
  </div>

  <!-- Notice -->
  <div id="notice">
    <%= render partial: "shared/notice", locals: { notice: notice } %>
  </div>

  <!-- Main Content -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Left Column: Header Text and Questions -->
    <div>
      <div class="bg-white border border-gray-200 rounded-lg shadow-sm overflow-hidden mb-6">
        <div class="bg-gray-50 px-4 py-3 border-b border-gray-200">
          <h3 class="text-md font-semibold text-gray-900 coustard-regular">Header Text</h3>
        </div>
        <div class="p-6">
          <div id="header_text_display" data-action="click->questionnaire-builder#editHeaderText" class="cursor-pointer hover:bg-gray-50 rounded-lg p-4 min-h-[100px] border border-dashed border-gray-300">
            <%= render partial: "manage/questionnaires/header_text_display", locals: { questionnaire: @questionnaire } %>
          </div>
        </div>
      </div>

      <!-- Questions List -->
      <div class="bg-white border border-gray-200 rounded-lg shadow-sm overflow-hidden">
        <div class="bg-gray-50 px-4 py-3 border-b border-gray-200 flex items-center justify-between">
          <h3 class="text-md font-semibold text-gray-900 coustard-regular">
            Questions
            <span class="ml-2 text-sm font-normal text-gray-600">(<%= @questions.count %>)</span>
          </h3>
          <%= link_to form_manage_production_questionnaire_path(@production, @questionnaire), class: "text-sm text-pink-500 hover:text-pink-600 font-medium" do %>
            Add Question
          <% end %>
        </div>
        <div class="p-6">
          <% if @questions.any? %>
            <div class="space-y-3" data-controller="question-order" data-question-order-url="<%= reorder_questions_manage_production_questionnaire_path(@production, @questionnaire) %>">
              <% @questions.each do |question| %>
                <div class="p-4 border border-gray-200 bg-white rounded-lg hover:border-gray-400 transition-all cursor-move" draggable="true" data-question-order-target="item" data-id="<%= question.id %>" data-action="dragstart->question-order#startDrag dragend->question-order#endDrag dragover->question-order#dragOver drop->question-order#drop touchstart->question-order#touchStart touchmove->question-order#touchMove touchend->question-order#touchEnd">
                  <div class="flex items-start gap-4">
                    <span class="text-gray-400 cursor-move mt-1" title="Drag to reorder">
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 9h16.5m-16.5 6.75h16.5" />
                      </svg>
                    </span>
                    <div class="flex-1">
                      <div class="flex items-center gap-2 mb-2">
                        <%= render partial: "manage/questionnaires/question_type_icon", locals: { question: question } %>
                        <p class="font-medium text-gray-900">
                          <%= question.text %>
                          <% if question.required %>
                            <span class="text-pink-500 text-xs">(required)</span>
                          <% end %>
                        </p>
                      </div>
                      <div class="flex gap-2 items-baseline">
                        <%= link_to "Edit", form_manage_production_questionnaire_path(@production, @questionnaire, question_id: question.id), class: "text-xs underline text-pink-500 hover:text-pink-600" %>
                        <%= button_to "Delete", destroy_question_manage_production_questionnaire_path(@production, @questionnaire, question_id: question.id), method: :delete, form: { data: { turbo_confirm: "Are you sure?" }, class: "inline" }, class: "text-xs underline text-pink-500 hover:text-pink-600 cursor-pointer border-0 bg-transparent p-0 font-normal leading-none" %>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-sm text-gray-600">
              No questions yet. <%= link_to "Add your first question", form_manage_production_questionnaire_path(@production, @questionnaire), class: "text-pink-500 hover:text-pink-600" %>
            </p>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Right Column: Availability Settings and Shows -->
    <div>
      <div class="bg-white border border-gray-200 rounded-lg shadow-sm overflow-hidden mb-6" id="availability_settings">
        <%= render partial: "manage/questionnaires/availability_settings", locals: { questionnaire: @questionnaire, production: @production } %>
      </div>

      <!-- Shows List -->
      <div class="bg-white border border-gray-200 rounded-lg shadow-sm overflow-hidden">
        <div class="bg-gray-50 px-4 py-3 border-b border-gray-200">
          <h3 class="text-md font-semibold text-gray-900 coustard-regular">Shows</h3>
        </div>
        <div class="p-6">
          <% if @shows.any? %>
            <div class="space-y-2">
              <% @shows.each do |show| %>
                <div class="p-3 border border-gray-200 rounded-lg">
                  <p class="text-sm font-medium text-gray-900">
                    <%= show.date_and_time&.strftime("%B %-d, %Y at %-I:%M %p") %>
                  </p>
                  <p class="text-xs text-gray-500">
                    <%= show.event_type&.titleize %> - <%= show.location&.name %>
                  </p>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-sm text-gray-600">No shows scheduled yet.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Edit Modal (hidden by default) -->
<div id="edit-modal" data-questionnaire-builder-target="modal" class="hidden fixed inset-0 z-50 overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true">
  <div class="flex items-center justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
    <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" data-action="click->questionnaire-builder#closeModal"></div>
    <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-3xl sm:w-full">
      <div data-questionnaire-builder-target="modalContent">
        <!-- Content will be inserted here -->
      </div>
    </div>
  </div>
</div>
