      # Get cast members for advances modal
      cast_assignments = @show.show_person_role_assignments.includes(:assignable).where(assignable_type: "Person")
      advance_cast_members = cast_assignments.map(&:assignable).compact.uniq

      # Get existing advances for these cast members for this show (grouped by person_id)
      # A person can have multiple advances, so we group them into arrays
      existing_show_advances = @production.person_advances
        .for_show(@show)
        .not_settled
        .where(person_id: advance_cast_members.map(&:id))
        .group_by(&:person_id)
    %>
    <%= render "manage/show_payouts/issue_advances_modal",
               show: @show,
               cast_members: advance_cast_members,
               existing_advances: existing_show_advances %>

  </div>
</div>

