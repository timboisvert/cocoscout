<%
  # Groups section for profile management
%>

<div id="groups" class="bg-white border border-gray-200 rounded-lg overflow-hidden mb-6" data-controller="profile-groups profile-section">
  <%= render "shared/section_header",
    title: "Groups",
    collapsible: true,
    visibility_toggle: false %>

  <div class="p-6 space-y-4" data-profile-section-target="content">
    <p class="text-sm text-gray-600 mb-4">
      Show the groups you're a part of on your public profile. Toggle the visibility for each group.
    </p>

    <!-- Current Groups List -->
    <div id="groups-list" class="space-y-3" data-profile-groups-target="list">
      <% active_memberships = entity.group_memberships.includes(:group).select { |m| m.group.archived_at.nil? } %>
      <% if active_memberships.any? %>
        <% active_memberships.each do |membership| %>
          <div class="flex flex-col sm:flex-row sm:items-center justify-between p-4 border border-gray-200 rounded-lg hover:border-gray-300 transition gap-3"
               data-membership-id="<%= membership.id %>"
               data-group-id="<%= membership.group.id %>">
            <div class="flex items-center gap-4">
              <% if membership.group.headshot&.attached? %>
                <%= image_tag membership.group.headshot.variant(:thumb), class: "w-12 h-12 rounded-lg object-cover" %>
              <% else %>
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-pink-400 to-purple-500 flex items-center justify-center text-white font-bold text-lg">
                  <%= membership.group.initials %>
                </div>
              <% end %>
              <div>
                <%= link_to edit_group_path(membership.group), class: "text-sm font-medium text-gray-900 hover:text-pink-600 transition-colors" do %>
                  <%= membership.group.name %>
                <% end %>
                <div class="text-xs text-gray-500">@<%= membership.group.public_key %></div>
              </div>
            </div>
            <div class="flex items-center gap-4">
              <div class="flex items-center gap-2">
                <span class="text-xs text-gray-500">Show on profile</span>
                <label class="relative inline-flex items-center cursor-pointer">
                  <input type="checkbox"
                         <%= 'checked' if membership.show_on_profile? %>
                         data-membership-id="<%= membership.id %>"
                         data-action="change->profile-groups#toggleVisibility"
                         class="sr-only peer">
                  <div class="w-9 h-5 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-pink-300 rounded-full peer peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-4 after:w-4 after:transition-all peer-checked:bg-pink-500"></div>
                </label>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <p class="text-sm text-gray-500">You aren't part of any groups yet.</p>
      <% end %>
    </div>

    <div class="mt-4 p-4 bg-pink-50 border border-pink-200 rounded-lg">
      <div class="flex gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-pink-600 flex-shrink-0">
          <path stroke-linecap="round" stroke-linejoin="round" d="M11.25 11.25l.041-.02a.75.75 0 011.063.852l-.708 2.836a.75.75 0 001.063.853l.041-.021M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-9-3.75h.008v.008H12V8.25z" />
        </svg>
        <div class="text-xs text-pink-800">
          <p class="font-medium mb-1">Don't see your group?</p>
          <p>You can <%= link_to "create a new group", new_group_path, class: "underline hover:text-pink-900" %> or ask an existing group member to invite you.</p>
        </div>
      </div>
    </div>
  </div>
</div>
