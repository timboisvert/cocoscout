<div data-controller="mobile-nav" class="fixed inset-x-0 top-0 z-30 border-b border-pink-100 bg-white lg:hidden">
  <div class="flex items-center justify-between px-4 py-3">
    <button type="button" data-action="mobile-nav#toggle" class="flex items-center">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 text-pink-500">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
      </svg>
    </button>
    <div class="absolute left-1/2 transform -translate-x-1/2 flex items-center gap-2">
      <%= link_to account_path, class: "flex items-center gap-2" do %>
        <%= image_tag "/icon.png", alt: "CocoScout", class: "h-6 w-6" %>
        <span class="mt-1 text-xl text-pink-500 coustard-regular">CocoScout</span>
      <% end %>
    </div>
    <div class="w-6"></div>
  </div>

  <div data-mobile-nav-target="panel" class="hidden fixed inset-0 top-[50px] bg-white overflow-y-auto">
    <div class="px-4 py-4">

      <!-- Impersonation Banner -->
      <% if impersonating? %>
        <div class="mb-4 rounded-lg border border-yellow-300 bg-yellow-50 p-4">
          <div class="text-xs font-semibold text-yellow-800 uppercase mb-1">Impersonating</div>
          <div class="text-sm font-medium text-yellow-900 mb-3"><%= Current.user.person&.name || Current.user.email_address %></div>
          <%= render "shared/button", text: "Stop", path: stop_impersonating_user_path, method: :post, variant: "secondary", size: "small", classes: "w-full" %>
        </div>
      <% end %>

      <!-- Account Navigation -->
      <div class="mb-6">
        <div class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-3">My Account</div>
        <div class="space-y-2">
          <%= link_to "Account", account_path, class: "block px-4 py-2.5 rounded-lg border border-gray-200 bg-white hover:bg-gray-50 transition text-sm font-medium text-gray-700" %>
          <%= link_to "Profiles", account_profiles_path, class: "block px-4 py-2.5 rounded-lg border border-gray-200 bg-white hover:bg-gray-50 transition text-sm font-medium text-gray-700" %>
          <%= link_to "Notifications", account_notifications_path, class: "block px-4 py-2.5 rounded-lg border border-gray-200 bg-white hover:bg-gray-50 transition text-sm font-medium text-gray-700" %>
          <%= link_to "Billing", account_billing_path, class: "block px-4 py-2.5 rounded-lg border border-gray-200 bg-white hover:bg-gray-50 transition text-sm font-medium text-gray-700" %>
        </div>
      </div>

      <!-- Quick Links -->
      <div class="mb-6">
        <div class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-3">Switch To</div>
        <div class="space-y-2">
          <%= link_to "Talent Dashboard", my_dashboard_path, class: "block px-4 py-2.5 rounded-lg border border-gray-200 bg-white hover:bg-gray-50 transition text-sm font-medium text-gray-700" %>
          <%= link_to "Production Dashboard", manage_path, class: "block px-4 py-2.5 rounded-lg border border-gray-200 bg-white hover:bg-gray-50 transition text-sm font-medium text-gray-700" %>
          <%= link_to "My Profile", profile_path, class: "block px-4 py-2.5 rounded-lg border border-gray-200 bg-white hover:bg-gray-50 transition text-sm font-medium text-gray-700" %>
        </div>
      </div>

      <!-- User -->
      <div class="border-t border-gray-200 pt-4 mt-4">
        <div class="flex items-center gap-3 mb-4">
          <% if Current.user.person&.headshot&.attached? %>
            <%= image_tag Current.user.person.headshot, class: "w-10 h-10 rounded-lg object-cover" %>
          <% else %>
            <div class="w-10 h-10 rounded-lg bg-pink-100 text-pink-500 flex items-center justify-center font-semibold">
              <%= Current.user.person&.name&.split&.map(&:first)&.join&.upcase || Current.user.email_address[0].upcase %>
            </div>
          <% end %>
          <div>
            <div class="text-sm font-medium text-gray-900"><%= Current.user.person&.name || Current.user.email_address %></div>
            <div class="text-xs text-gray-500"><%= Current.user.email_address %></div>
          </div>
        </div>
        <%= link_to "Sign Out", signout_path, data: { turbo_prefetch: false }, class: "block w-full text-center px-4 py-2.5 rounded-lg border border-gray-200 bg-white hover:bg-gray-50 transition text-sm font-medium text-gray-700" %>
      </div>
    </div>
  </div>
</div>
