<div class="min-h-screen bg-white">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12">

    <!-- Full-Width Header -->
    <div class="mb-8 sm:mb-10">
      <h1 class="text-3xl sm:text-4xl font-bold text-slate-900 mb-3 coustard-regular"><%= @production.name %></h1>
      <% if @audition_cycle.audition_type == "in_person" %>
        <p class="text-lg text-slate-600">Sign up for an in-person audition</p>
      <% elsif @audition_cycle.audition_type == "video_upload" %>
        <p class="text-lg text-slate-600">Video audition submission</p>
      <% end %>
    </div>

    <!-- Success Message -->
    <div class="bg-gradient-to-br from-green-50 to-white border border-green-200 rounded-lg p-6 sm:p-8 shadow-sm mb-6">
      <div class="flex items-start gap-4">
        <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-green-100 flex items-center justify-center">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
        </div>
        <div class="flex-1">
          <h2 class="text-xl font-bold text-slate-900 mb-2">Success!</h2>
          <div class="text-slate-700 prose prose-slate max-w-none">
            <% if @audition_cycle.success_text.present? %>
              <%= @audition_cycle.success_text %>
            <% else %>
              <p>Your audition request has been received.</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Next Steps -->
    <div class="bg-gradient-to-br from-slate-50 to-white border border-slate-200 rounded-lg p-6 sm:p-8 shadow-sm">
      <h3 class="text-lg font-semibold text-slate-900 mb-4">What happens next?</h3>
      <ul class="space-y-3">
        <li class="flex items-start gap-3">
          <svg class="w-5 h-5 text-pink-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          <span class="text-sm text-slate-700">You'll receive updates about your audition via email</span>
        </li>
        <li class="flex items-start gap-3">
          <svg class="w-5 h-5 text-pink-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <span class="text-sm text-slate-700">You can view your audition status anytime in your CocoScout dashboard</span>
        </li>
        <li class="flex items-start gap-3">
          <svg class="w-5 h-5 text-pink-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
          </svg>
          <span class="text-sm text-slate-700">Check your email for important notifications about casting decisions</span>
        </li>
      </ul>

      <div class="mt-6 pt-6 border-t border-slate-200">
        <%= link_to "Go to Dashboard", my_dashboard_path, class: "inline-block rounded-lg px-5 py-3 bg-pink-500 hover:bg-pink-600 text-white font-semibold cursor-pointer transition shadow-sm hover:shadow-md" %>
      </div>
    </div>

  </div>

  <!-- Coco Link -->
  <div class="w-16 pt-5 md:pt-0 fixed bottom-0 right-0 md:flex md:items-end md:justify-end">
    <a href="https://cocoscout.com/app" target="_blank" rel="noopener">
      <%= render "shared/cocoscout_logo", size: :small, class: "mr-5" %>
    </a>
  </div>
</div>