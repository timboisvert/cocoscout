  <% if has_right_panel %>
  </div> <%# Close flex wrapper for mobile stacking %>
  <% end %>

  <% if !has_right_panel %>
    <%# Legacy: No right panel - show role assignments inline and availability buttons on far right %>
    <% if role_assignments.any? %>
      <div class="flex-shrink-0 ml-4">
        <% role_assignments.each do |ra| %>
          <div class="flex items-center gap-2 text-xs">
            <span class="text-gray-500">Role:</span>
            <strong class="text-pink-500"><%= ra[:role_name] %></strong>
            <% if ra[:entity_type] == "Group" %>
              <span class="text-gray-400">(as <%= ra[:entity_name] %>)</span>
            <% end %>
          </div>
        <% end %>
      </div>
    <% elsif local_assigns[:roles].present? %>
      <%# Legacy support for simple role names array %>
      <div class="flex-shrink-0 ml-4">
        <% roles.each do |role_name| %>
          <span class="text-xs text-gray-500">Role:</span>
          <strong class="text-xs text-pink-500"><%= role_name %></strong>
        <% end %>
      </div>
    <% end %>

    <% if has_availability %>
      <%# Legacy Availability Buttons %>
      <div class="flex items-center gap-2 flex-shrink-0 ml-4">
        <div class="w-6 flex justify-center">
          <span data-availability-target="success" class="hidden text-green-600">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
              <path fill-rule="evenodd" d="M8.603 3.799A4.49 4.49 0 0 1 12 2.25c1.357 0 2.573.6 3.397 1.549a4.49 4.49 0 0 1 3.498 1.307 4.491 4.491 0 0 1 1.307 3.497A4.49 4.49 0 0 1 21.75 12a4.49 4.49 0 0 1-1.549 3.397 4.491 4.491 0 0 1-1.307 3.497 4.491 4.491 0 0 1-3.497 1.307A4.49 4.49 0 0 1 12 21.75a4.49 4.49 0 0 1-3.397-1.549 4.49 4.49 0 0 1-3.498-1.306 4.491 4.491 0 0 1-1.307-3.498A4.49 4.49 0 0 1 2.25 12c0-1.357.6-2.573 1.549-3.397a4.49 4.49 0 0 1 1.307-3.497 4.49 4.49 0 0 1 3.497-1.307Zm7.007 6.387a.75.75 0 1 0-1.22-.872l-3.236 4.53L9.53 12.22a.75.75 0 0 0-1.06 1.06l2.25 2.25a.75.75 0 0 0 1.14-.094l3.75-5.25Z" clip-rule="evenodd" />
            </svg>
          </span>
        </div>
        <div class="flex gap-0">
        <%
          [:available, :unavailable].each do |status|
            classes = "w-10 sm:w-24 text-xs sm:text-sm px-2 py-1.5 sm:px-3 sm:py-2 text-center border border-gray-200 cursor-pointer flex items-center justify-center"

            if status == :available
              classes += " rounded-l-lg border-r-0"
            elsif status == :unavailable
              classes += " rounded-r-lg"
            end

            if current_status == status.to_s
              classes += " bg-pink-500 text-white"
            else
              classes += " bg-white text-gray-700 hover:bg-gray-50"
            end

            desktop_content = status.to_s.humanize
        %>
          <%= link_to "#", class: classes, data: { action: "click->availability#setStatus", availability_status: status } do %>
            <span class="sm:hidden">
              <% if status == :available %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6.633 10.25c.806 0 1.533-.446 2.031-1.08a9.041 9.041 0 0 1 2.861-2.4c.723-.384 1.35-.956 1.653-1.715a4.498 4.498 0 0 0 .322-1.672V2.75a.75.75 0 0 1 .75-.75 2.25 2.25 0 0 1 2.25 2.25c0 1.152-.26 2.243-.723 3.218-.266.558.107 1.282.725 1.282m0 0h3.126c1.026 0 1.945.694 2.054 1.715.045.422.068.85.068 1.285a11.95 11.95 0 0 1-2.649 7.521c-.388.482-.987.729-1.605.729H13.48c-.483 0-.964-.078-1.423-.23l-3.114-1.04a4.501 4.501 0 0 0-1.423-.23H5.904m10.598-9.75H14.25M5.904 18.5c.083.205.173.405.27.602.197.4-.078.898-.523.898h-.908c-.889 0-1.713-.518-1.972-1.368a12 12 0 0 1-.521-3.507c0-1.553.295-3.036.831-4.398C3.387 9.953 4.167 9.5 5 9.5h1.053c.472 0 .745.556.5.96a8.958 8.958 0 0 0-1.302 4.665c0 1.194.232 2.333.654 3.375Z"/></svg>
              <% else %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7.498 15.25H4.372c-1.026 0-1.945-.694-2.054-1.715a12.137 12.137 0 0 1-.068-1.285c0-2.848.992-5.464 2.649-7.521C5.287 4.247 5.886 4 6.504 4h4.016a4.5 4.5 0 0 1 1.423.23l3.114 1.04a4.5 4.5 0 0 0 1.423.23h1.294M7.498 15.25c.618 0 .991.724.725 1.282A7.471 7.471 0 0 0 7.5 19.75 2.25 2.25 0 0 0 9.75 22a.75.75 0 0 0 .75-.75v-.633c0-.573.11-1.14.322-1.672.304-.76.93-1.33 1.653-1.715a9.04 9.04 0 0 0 2.86-2.4c.498-.634 1.226-1.08 2.032-1.08h.384m-10.253 1.5H9.7m8.075-9.75c.01.05.027.1.05.148.593 1.2.925 2.55.925 3.977 0 1.487-.36 2.89-.999 4.125m.023-8.25c-.076-.365.183-.75.575-.75h.908c.889 0 1.713.518 1.972 1.368.339 1.11.521 2.287.521 3.507 0 1.553-.295 3.036-.831 4.398-.306.774-1.086 1.227-1.918 1.227h-1.053c-.472 0-.745-.556-.5-.96a8.95 8.95 0 0 0 .303-.54"/></svg>
              <% end %>
            </span>
            <span class="hidden sm:inline"><%= desktop_content %></span>
          <% end %>
        <% end %>
        </div>
      </div>
    <% end %>

    <% if local_assigns[:entity_headshots].present? %>
      <div class="flex-shrink-0 flex gap-1 ml-4">
        <% entity_headshots.each do |ent| %>
          <% headshot_var = ent.safe_headshot_variant(:thumb) %>
          <% if headshot_var %>
            <%= image_tag headshot_var, class: "w-10 h-10 rounded-lg object-cover" %>
          <% else %>
            <div class="w-10 h-10 rounded-lg bg-gray-200 flex items-center justify-center text-gray-700 font-bold text-sm">
              <%= ent.respond_to?(:initials) ? ent.initials : ent.name[0..1].upcase %>
            </div>
          <% end %>
        <% end %>
      </div>
    <% elsif local_assigns[:show_entity_headshots] && local_assigns[:entity].present? %>
      <div class="flex-shrink-0 ml-2">
        <% headshot_var = entity.safe_headshot_variant(:thumb) %>
        <% if headshot_var %>
          <%= image_tag headshot_var, class: "w-10 h-10 rounded-lg object-cover" %>
        <% else %>
          <div class="w-10 h-10 rounded-lg bg-gray-200 flex items-center justify-center text-gray-700 font-bold text-sm">
            <%= entity.respond_to?(:initials) ? entity.initials : entity.name[0..1].upcase %>
          </div>
        <% end %>
      </div>
    <% end %>
  <% end %>
<% end %>

<% if has_link %>
  <%
    # Build data attributes string for linked rows
    link_data_attrs_str = data_attrs.map { |k, v| "data-#{k}=\"#{v}\"" }.join(" ")
  %>
  <%= link_to link_path, class: "block" do %>
    <div class="<%= row_classes %> relative" <%= link_data_attrs_str.html_safe %>>
      <%= content %>
      <% if can_show_vacancy %>
        <div class="absolute right-2 bottom-3 md:bottom-auto md:top-1/2 md:-translate-y-1/2 hidden group-hover:block"
             onclick="event.stopPropagation(); event.preventDefault(); window.location.href='<%= vacancy_link_for(cant_make_it_person, show) %>';">
          <%= render "shared/button", text: "Can't make it?", variant: "primary", size: "small" %>
        </div>
      <% end %>
    </div>
  <% end %>
<% else %>
  <div class="<%= row_classes %> relative" <%= data_attrs.map { |k, v| "data-#{k}=\"#{v}\"" }.join(" ").html_safe %>>
    <%= content %>
    <% if can_show_vacancy %>
      <div class="absolute right-2 bottom-3 md:bottom-auto md:top-1/2 md:-translate-y-1/2 hidden group-hover:block"
           onclick="event.stopPropagation(); event.preventDefault(); window.location.href='<%= vacancy_link_for(cant_make_it_person, show) %>';">
        <%= render "shared/button", text: "Can't make it?", variant: "primary", size: "small" %>
      </div>
    <% end %>
  </div>
<% end %>
