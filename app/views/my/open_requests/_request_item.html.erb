<%#
  Request Item - handles both availability and signup request types

  Required params:
    - item: Hash with :type (:availability or :signup), :show, :entity, :entity_type, :entity_key
      For availability: also :availability (ShowAvailability object or nil)
      For signup: also :instance (SignUpFormInstance), :registration (SignUpRegistration or nil), :declined (boolean)
%>

<% if item[:type] == :availability %>
  <%# Availability request - use show_row with availability panel %>
  <%= render partial: "shared/show_row", locals: {
    show: item[:show],
    show_location: true,
    show_production: true,
    show_linked: true,
    availability: item[:availability],
    entity_key: item[:entity_key],
    entity: item[:entity],
    has_groups: @groups.any?,
    right_panel: :availability
  } %>

<% elsif item[:type] == :signup %>
  <%# Sign-up request - styled EXACTLY like show_row with availability panel %>
  <%
    entity = item[:entity]
    # Determine current status for button styling
    signup_status = if item[:registration].present?
      'signup'
    elsif item[:declined]
      'decline'
    else
      'unset'
    end
  %>
  <div class="flex flex-col md:flex-row md:items-center gap-2 md:gap-0 w-full px-3 py-2 border rounded-lg hover:border-gray-400 transition-all group bg-white border-gray-200"
       data-controller="signup-button"
       data-signup-button-status-value="<%= signup_status %>">
    <%# Left Section: Date & Show Details (50% width) %>
    <div class="w-full md:w-1/2 flex items-center gap-4">
      <%# Date Box %>
      <div class="flex-shrink-0 w-14 text-center">
        <div class="text-xs font-semibold text-pink-600 uppercase"><%= item[:show].date_and_time.strftime("%b") %></div>
        <div class="text-2xl font-bold text-gray-900"><%= item[:show].date_and_time.strftime("%-d") %></div>
        <div class="text-xs text-gray-500"><%= item[:show].date_and_time.strftime("%a") %></div>
      </div>

      <%# Show Details %>
      <div class="flex-1 min-w-0">
        <div class="text-xs text-gray-400 mb-0"><%= item[:show].production.name %></div>
        <div class="flex items-center gap-2 flex-wrap">
          <span class="font-medium text-gray-900"><%= item[:show].display_name %></span>
        </div>
        <div class="text-xs text-gray-400 flex items-center gap-1 mt-0.5 flex-wrap">
          <span><%= item[:show].date_and_time.strftime("%-I:%M %p") %></span>
          <% if item[:show].location.present? %>
            <span class="text-gray-300">&bull;</span>
            <span class="truncate"><%= item[:show].location.name %></span>
          <% end %>
        </div>
      </div>
    </div>

    <%# Right Section: Sign-up panel (2/3 width to match availability) %>
    <div class="w-full md:w-2/3 md:border-l border-gray-200 md:pl-4 flex items-center gap-0 border-t md:border-t-0 mt-2 md:mt-0 pt-2 md:pt-0">
      <%# Sub-column 1: Headshot + Buttons %>
      <div class="flex items-center gap-3 flex-shrink-0 w-1/2">
        <%# Headshot %>
        <% headshot_variant = entity.safe_headshot_variant(:thumb) %>
        <% if headshot_variant %>
          <%= image_tag headshot_variant, class: "w-10 h-10 rounded-lg object-cover flex-shrink-0" %>
        <% else %>
          <div class="w-10 h-10 rounded-lg bg-gray-200 flex items-center justify-center text-gray-700 font-bold text-sm flex-shrink-0">
            <%= entity.respond_to?(:initials) ? entity.initials : entity.name[0..1].upcase %>
          </div>
        <% end %>
        <%# Buttons - styled exactly like availability %>
        <div class="flex-shrink-0">
          <div class="text-[10px] text-gray-400 uppercase tracking-wide mb-1">Sign-up</div>
          <div class="flex gap-0">
            <%# Sign up button %>
            <%
              signup_classes = "w-8 sm:w-20 text-xs py-1 sm:py-1.5 text-center border border-gray-200 cursor-pointer flex items-center justify-center rounded-l border-r-0"
              signup_classes += signup_status == 'signup' ? " bg-pink-500 text-white" : " bg-white text-gray-700 hover:bg-gray-50"
            %>
            <%= form_with url: my_request_sign_up_path(show_id: item[:show].id), method: :post, data: { turbo: false }, class: "inline" do |f| %>
              <%= f.hidden_field :person_id, value: entity.id %>
              <button type="submit" class="<%= signup_classes %>" data-signup-button-target="signupButton" data-action="click->signup-button#submitSignup">
                <span class="sm:hidden">
                  <%# Mobile: Check icon (hidden) %>
                  <span data-signup-button-target="signupCheck" class="hidden">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                  </span>
                  <%# Mobile: Thumbs up icon %>
                  <span data-signup-button-target="signupText">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6.633 10.25c.806 0 1.533-.446 2.031-1.08a9.041 9.041 0 0 1 2.861-2.4c.723-.384 1.35-.956 1.653-1.715a4.498 4.498 0 0 0 .322-1.672V2.75a.75.75 0 0 1 .75-.75 2.25 2.25 0 0 1 2.25 2.25c0 1.152-.26 2.243-.723 3.218-.266.558.107 1.282.725 1.282m0 0h3.126c1.026 0 1.945.694 2.054 1.715.045.422.068.85.068 1.285a11.95 11.95 0 0 1-2.649 7.521c-.388.482-.987.729-1.605.729H13.48c-.483 0-.964-.078-1.423-.23l-3.114-1.04a4.501 4.501 0 0 0-1.423-.23H5.904m10.598-9.75H14.25M5.904 18.5c.083.205.173.405.27.602.197.4-.078.898-.523.898h-.908c-.889 0-1.713-.518-1.972-1.368a12 12 0 0 1-.521-3.507c0-1.553.295-3.036.831-4.398C3.387 9.953 4.167 9.5 5 9.5h1.053c.472 0 .745.556.5.96a8.958 8.958 0 0 0-1.302 4.665c0 1.194.232 2.333.654 3.375Z"/></svg>
                  </span>
                </span>
                <span class="hidden sm:inline">
                  <span data-signup-button-target="signupCheck" class="hidden">✓</span>
                  <span data-signup-button-target="signupText">Sign up</span>
                </span>
              </button>
            <% end %>
            <%# Don't sign up button %>
            <%
              decline_classes = "w-8 sm:w-28 text-xs py-1 sm:py-1.5 text-center border border-gray-200 cursor-pointer flex items-center justify-center rounded-r"
              decline_classes += signup_status == 'decline' ? " bg-pink-500 text-white" : " bg-white text-gray-700 hover:bg-gray-50"
            %>
            <%= form_with url: my_request_decline_signup_path(show_id: item[:show].id), method: :post, data: { turbo: false }, class: "inline" do |f| %>
              <%= f.hidden_field :person_id, value: entity.id %>
              <button type="submit" class="<%= decline_classes %>" data-signup-button-target="declineButton" data-action="click->signup-button#submitDecline">
                <span class="sm:hidden">
                  <%# Mobile: Check icon (hidden) %>
                  <span data-signup-button-target="declineCheck" class="hidden">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                  </span>
                  <%# Mobile: Thumbs down icon %>
                  <span data-signup-button-target="declineText">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7.498 15.25H4.372c-1.026 0-1.945-.694-2.054-1.715a12.137 12.137 0 0 1-.068-1.285c0-2.848.992-5.464 2.649-7.521C5.287 4.247 5.886 4 6.504 4h4.016a4.5 4.5 0 0 1 1.423.23l3.114 1.04a4.5 4.5 0 0 0 1.423.23h1.294M7.498 15.25c.618 0 .991.724.725 1.282A7.471 7.471 0 0 0 7.5 19.75 2.25 2.25 0 0 0 9.75 22a.75.75 0 0 0 .75-.75v-.633c0-.573.11-1.14.322-1.672.304-.76.93-1.33 1.653-1.715a9.04 9.04 0 0 0 2.86-2.4c.498-.634 1.226-1.08 2.032-1.08h.384m-10.253 1.5H9.7m8.075-9.75c.01.05.027.1.05.148.593 1.2.925 2.55.925 3.977 0 1.487-.36 2.89-.999 4.125m.023-8.25c-.076-.365.183-.75.575-.75h.908c.889 0 1.713.518 1.972 1.368.339 1.11.521 2.287.521 3.507 0 1.553-.295 3.036-.831 4.398-.306.774-1.086 1.227-1.918 1.227h-1.053c-.472 0-.745-.556-.5-.96a8.95 8.95 0 0 0 .303-.54"/></svg>
                  </span>
                </span>
                <span class="hidden sm:inline">
                  <span data-signup-button-target="declineCheck" class="hidden">✓</span>
                  <span data-signup-button-target="declineText">Don't Sign Up</span>
                </span>
              </button>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
