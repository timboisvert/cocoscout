<%= render partial: "shared/top_menu", locals: {
  breadcrumbs: [
    ["Ticketing", manage_ticketing_index_path]
  ],
  text: @production.name,
  links: @links.any? ? [
    { text: "Link Event", path: manage_new_ticketing_production_link_path(@production) }
  ] : []
} %>

<div class="max-w-4xl mx-auto px-4 py-6 space-y-6">
  <% if flash[:alert] %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4 text-red-700">
      <%= flash[:alert] %>
    </div>
  <% end %>
  <% if flash[:notice] %>
    <div class="bg-green-50 border border-green-200 rounded-lg p-4 text-green-700">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <%# Production Header %>
  <div class="flex items-center gap-4">
    <% logo_variant = @production.safe_logo_variant(:small) %>
    <% if logo_variant %>
      <div class="w-16 h-16 rounded-lg overflow-hidden flex-shrink-0">
        <%= image_tag logo_variant, alt: @production.name, class: "w-full h-full object-cover" %>
      </div>
    <% else %>
      <div class="w-16 h-16 rounded-lg bg-pink-100 flex items-center justify-center flex-shrink-0">
        <span class="text-xl font-bold text-pink-600"><%= @production.initials %></span>
      </div>
    <% end %>
    <div>
      <h1 class="text-xl font-bold text-gray-900"><%= @production.name %></h1>
      <p class="text-sm text-gray-500">Ticketing Integration</p>
    </div>
  </div>

  <% if @links.any? %>
    <%# Summary Stats %>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      <div class="bg-white border border-gray-200 rounded-lg p-4">
        <p class="text-sm text-gray-500">Linked Events</p>
        <p class="text-2xl font-bold text-gray-900"><%= @stats[:total_links] %></p>
      </div>
      <div class="bg-white border border-gray-200 rounded-lg p-4">
        <p class="text-sm text-gray-500">Shows Synced</p>
        <p class="text-2xl font-bold text-gray-900"><%= @stats[:linked_shows] %></p>
      </div>
      <div class="bg-white border border-gray-200 rounded-lg p-4">
        <p class="text-sm text-gray-500">Tickets Sold</p>
        <p class="text-2xl font-bold text-gray-900"><%= number_with_delimiter(@stats[:tickets_sold]) %></p>
      </div>
      <div class="bg-white border border-gray-200 rounded-lg p-4">
        <p class="text-sm text-gray-500">Revenue</p>
        <p class="text-2xl font-bold text-gray-900"><%= number_to_currency(@stats[:net_revenue]) %></p>
      </div>
    </div>

    <%# Unlinked Shows Alert %>
    <% if @unlinked_shows.any? %>
      <div class="bg-pink-50 border border-pink-200 rounded-lg p-4">
        <div class="flex items-center justify-between">
          <div>
            <h4 class="text-sm font-medium text-pink-800">
              <%= pluralize(@unlinked_shows.count, "show") %> not linked to ticketing
            </h4>
            <p class="text-sm text-pink-700 mt-1">
              These shows don't have a matching ticketing event
            </p>
          </div>
          <% if @links.any? %>
            <%= link_to manage_match_ticketing_production_link_path(@production, @links.first),
                       class: "text-sm font-medium text-pink-800 hover:text-pink-900 underline" do %>
              Match Shows
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>

    <%# Linked Events List %>
    <div class="bg-white border border-gray-200 rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
        <h3 class="text-lg font-medium text-gray-900">Linked Events</h3>
        <%= link_to manage_new_ticketing_production_link_path(@production) do %>
          <%= render "shared/button", text: "Link Event", variant: "secondary", size: "small" %>
        <% end %>
      </div>

      <div class="divide-y divide-gray-200">
        <% @links.each do |link| %>
          <%= link_to manage_ticketing_production_link_path(@production, link), class: "block px-6 py-4 hover:bg-gray-50 transition-colors no-underline" do %>
            <div class="flex items-center justify-between">
              <div class="flex items-center gap-4">
                <div class="w-10 h-10 bg-gray-100 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z" />
                  </svg>
                </div>
                <div>
                  <p class="font-medium text-gray-900"><%= link.provider_event_name || link.provider_event_id %></p>
                  <p class="text-sm text-gray-500">
                    via <%= link.ticketing_provider.name %>
                    <% if link.last_synced_at %>
                      &middot; Last synced <%= time_ago_in_words(link.last_synced_at) %> ago
                    <% end %>
                  </p>
                </div>
              </div>

              <div class="flex items-center gap-4">
                <div class="text-right hidden md:block">
                  <p class="text-xs text-gray-400">Shows</p>
                  <p class="text-sm font-medium text-gray-900"><%= link.ticketing_show_links.count %></p>
                </div>
                <div class="text-right hidden md:block">
                  <p class="text-xs text-gray-400">Tickets</p>
                  <p class="text-sm font-medium text-gray-900"><%= number_with_delimiter(link.ticketing_show_links.sum(:tickets_sold)) %></p>
                </div>
                <% if link.sync_enabled? %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
                    Active
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
                    Paused
                  </span>
                <% end %>
                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>

  <% else %>
    <%# No Ticketing Connected State %>
    <div class="bg-white border border-gray-200 rounded-lg p-8 text-center">
      <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z" />
        </svg>
      </div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No Ticketing Connected</h3>
      <p class="text-gray-500 mb-6">
        Link this production to a ticketing event to start syncing ticket sales data.
      </p>

      <% if @available_providers.any? %>
        <%= link_to manage_new_ticketing_production_link_path(@production) do %>
          <%= render "shared/button", text: "Link Ticketing Event", variant: "primary", size: "medium" %>
        <% end %>
      <% else %>
        <p class="text-sm text-gray-500 mb-4">First, connect a ticketing platform to your organization.</p>
        <%= link_to manage_ticketing_wizard_path do %>
          <%= render "shared/button", text: "Connect Platform", variant: "primary", size: "medium" %>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
