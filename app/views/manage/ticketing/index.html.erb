<% content_for :title, "Ticketing" %>

<%
  ticketing_description = <<~HTML
    <p>
      Manage ticket sales across multiple platforms. Shows are automatically listed on all connected providers
      unless explicitly excluded. Review issues below and resolve them to ensure all shows are selling.
    </p>
  HTML

  ticketing_actions = [
    { icon: "cog", text: "Providers", description: "Connect ticketing platforms", path: manage_ticketing_providers_path },
    { icon: "users", text: "Seating Configurations", description: "Venue seating configurations", path: manage_seating_configurations_path },
    { icon: "calendar", text: "Shows", description: "Manage show ticketing", path: manage_show_ticketings_path },
    { icon: "chart-bar", text: "Sales", description: "View ticket sales", path: manage_ticket_sales_path }
  ]
%>

<div class="w-full mb-10">
  <%= render partial: "shared/notice", locals: { notice: notice, alert: alert } %>

  <%= render "shared/module_header",
    title: "Ticketing",
    description: ticketing_description,
    actions: ticketing_actions
  %>

  <%# Issues Alert Banner %>
  <% if @issue_counts[:total] > 0 %>
    <div class="bg-pink-50 border border-pink-200 rounded-lg p-4 mb-6">
      <div class="flex items-start gap-3">
        <span class="text-pink-600 mt-0.5">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
          </svg>
        </span>
        <div class="flex-1">
          <h3 class="font-medium text-pink-800">
            <%= @issue_counts[:total] %> <%= @issue_counts[:total] == 1 ? "issue" : "issues" %> need attention
          </h3>
          <div class="text-sm text-pink-700 mt-1 flex flex-wrap gap-x-4 gap-y-1">
            <% if @issue_counts[:missing_listings] > 0 %>
              <span><%= @issue_counts[:missing_listings] %> shows missing listings</span>
            <% end %>
            <% if @issue_counts[:sync_failed] > 0 %>
              <span><%= @issue_counts[:sync_failed] %> sync failures</span>
            <% end %>
            <% if @issue_counts[:auth_expired] > 0 %>
              <span><%= @issue_counts[:auth_expired] %> auth expired</span>
            <% end %>
            <% if @issue_counts[:setup_incomplete] > 0 %>
              <span><%= @issue_counts[:setup_incomplete] %> setups incomplete</span>
            <% end %>
          </div>
          <div class="mt-3 flex gap-2">
            <% if @issue_counts[:missing_listings] > 0 %>
              <%= button_to manage_ticketing_create_missing_listings_path, method: :post do %>
                <%= render "shared/button", text: "Create Missing Listings", variant: "primary", size: "small" %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <%# Provider Connection Status %>
  <% if @providers.any? %>
    <div class="flex flex-wrap gap-2 mb-6">
      <% @providers.each do |provider| %>
        <%
          # Status based on connection health, not sync recency
          is_connected = provider.credentials_healthy? && !provider.rate_limited?
          has_warning = provider.rate_limited? || (!provider.credentials_valid? && provider.credentials_error.blank?)
          has_error = !provider.credentials_valid? && provider.credentials_error.present?
        %>
        <%= link_to manage_ticketing_provider_path(provider), class: "inline-flex items-center gap-2 px-3 py-2 rounded-lg border #{is_connected ? 'bg-green-50 border-green-200' : has_error ? 'bg-red-50 border-red-200' : has_warning ? 'bg-amber-50 border-amber-200' : 'bg-gray-50 border-gray-200'} hover:shadow-sm transition-shadow" do %>
          <% if is_connected %>
            <span class="w-2 h-2 rounded-full bg-green-500"></span>
          <% elsif has_error %>
            <span class="w-2 h-2 rounded-full bg-red-500"></span>
          <% elsif has_warning %>
            <span class="w-2 h-2 rounded-full bg-amber-500"></span>
          <% else %>
            <span class="w-2 h-2 rounded-full bg-gray-400"></span>
          <% end %>
          <span class="text-sm font-medium text-gray-900"><%= provider.name %></span>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="bg-gray-50 rounded-lg border border-dashed border-gray-300 p-6 text-center mb-6">
      <p class="text-gray-600 mb-3">No ticketing providers connected yet.</p>
      <%= link_to manage_new_ticketing_provider_path do %>
        <%= render "shared/button", text: "Connect Provider", variant: "primary", size: "medium" %>
      <% end %>
    </div>
  <% end %>

  <%# Performance Metrics %>
  <% if @show_ticketings.any? %>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
      <div class="bg-white rounded-lg border border-gray-200 p-4">
        <div class="text-sm text-gray-500">Shows</div>
        <div class="text-2xl font-bold"><%= @metrics[:shows_count] %></div>
        <div class="text-xs text-gray-400">with ticketing</div>
      </div>
      <div class="bg-white rounded-lg border border-gray-200 p-4">
        <div class="text-sm text-gray-500">Tickets Sold</div>
        <div class="text-2xl font-bold text-green-600"><%= number_with_delimiter(@metrics[:total_sold]) %></div>
        <div class="text-xs text-gray-400">of <%= number_with_delimiter(@metrics[:total_capacity]) %> capacity</div>
      </div>
      <div class="bg-white rounded-lg border border-gray-200 p-4">
        <div class="text-sm text-gray-500">Total Revenue</div>
        <div class="text-2xl font-bold"><%= number_to_currency(@metrics[:total_revenue_cents] / 100.0) %></div>
        <div class="text-xs text-gray-400">from upcoming shows</div>
      </div>
      <div class="bg-white rounded-lg border border-gray-200 p-4">
        <div class="text-sm text-gray-500">Sell-through</div>
        <div class="text-2xl font-bold"><%= @metrics[:sell_through_percentage] %>%</div>
        <div class="flex items-center gap-2 mt-1">
          <div class="flex-1 h-1.5 bg-gray-200 rounded-full overflow-hidden">
            <div class="h-full bg-pink-500 rounded-full" style="width: <%= [@metrics[:sell_through_percentage], 100].min %>%"></div>
          </div>
        </div>
      </div>
    </div>

    <%# Recent activity callout %>
    <% if @metrics[:recent_sales_count] > 0 %>
      <div class="bg-green-50 border border-green-200 rounded-lg p-3 mb-6 flex items-center gap-3">
        <span class="text-green-600">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
          </svg>
        </span>
        <span class="text-sm text-green-800">
          <strong><%= @metrics[:recent_sales_count] %></strong> tickets sold in the last 7 days
          (<%= number_to_currency(@metrics[:recent_revenue_cents] / 100.0) %> revenue)
        </span>
      </div>
    <% end %>
  <% end %>

  <%# Issues Detail Section %>
  <% if @issue_counts[:total] > 0 %>
    <div class="mb-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Issues to Resolve</h3>

      <div class="space-y-3">
        <%# Missing Listings %>
        <% @dashboard_data[:issues][:missing_listings].first(5).each do |issue| %>
          <div class="bg-white rounded-lg border border-yellow-200 p-4">
            <div class="flex items-start justify-between">
              <div>
                <div class="flex items-center gap-2">
                  <span class="text-yellow-600">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                    </svg>
                  </span>
                  <span class="font-medium text-gray-900"><%= issue[:show].display_name %></span>
                </div>
                <p class="text-sm text-gray-600 mt-1"><%= issue[:message] %></p>
              </div>
              <span class="text-xs text-gray-500"><%= issue[:show].date_and_time.strftime("%b %d, %Y") %></span>
            </div>
          </div>
        <% end %>

        <%# Sync Failures %>
        <% @dashboard_data[:issues][:sync_failed].first(3).each do |issue| %>
          <div class="bg-white rounded-lg border border-pink-200 p-4">
            <div class="flex items-start justify-between">
              <div>
                <div class="flex items-center gap-2">
                  <span class="text-pink-600">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                  </span>
                  <span class="font-medium text-gray-900"><%= issue[:show].display_name %></span>
                  <span class="text-xs bg-pink-100 text-pink-700 px-1.5 py-0.5 rounded"><%= issue[:provider].name %></span>
                </div>
                <p class="text-sm text-pink-600 mt-1"><%= issue[:message] %></p>
              </div>
              <%= link_to "#" do %>
                <%= render "shared/button", text: "Retry", variant: "tertiary", size: "small" %>
              <% end %>
            </div>
          </div>
        <% end %>

        <%# Auth Expired %>
        <% @dashboard_data[:issues][:auth_expired].first(3).each do |issue| %>
          <div class="bg-white rounded-lg border border-pink-200 p-4">
            <div class="flex items-start justify-between">
              <div>
                <div class="flex items-center gap-2">
                  <span class="text-pink-600">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"/>
                    </svg>
                  </span>
                  <span class="font-medium text-gray-900"><%= issue[:provider].name %></span>
                </div>
                <p class="text-sm text-pink-600 mt-1"><%= issue[:message] %></p>
              </div>
              <%= link_to manage_edit_ticketing_provider_path(issue[:provider]) do %>
                <%= render "shared/button", text: "Re-authenticate", variant: "tertiary", size: "small" %>
              <% end %>
            </div>
          </div>
        <% end %>

        <%# Manual Action Required %>
        <% @dashboard_data[:issues][:manual_action_required].first(3).each do |issue| %>
          <div class="bg-white rounded-lg border border-pink-200 p-4">
            <div class="flex items-start justify-between">
              <div>
                <div class="flex items-center gap-2">
                  <span class="text-pink-600">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"/>
                    </svg>
                  </span>
                  <span class="font-medium text-gray-900"><%= issue[:show].display_name %></span>
                  <span class="text-xs bg-pink-100 text-pink-700 px-1.5 py-0.5 rounded"><%= issue[:provider].name %></span>
                </div>
                <p class="text-sm text-pink-600 mt-1"><%= issue[:message] %></p>
              </div>
              <%= link_to "#" do %>
                <%= render "shared/button", text: "View Details", variant: "tertiary", size: "small" %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <% if @issue_counts[:total] > 10 %>
        <div class="mt-3 text-center">
          <span class="text-sm text-gray-500">Showing first 10 of <%= @issue_counts[:total] %> issues</span>
        </div>
      <% end %>
    </div>
  <% end %>

  <%# Shows with Ticketing %>
  <div class="">
    <h3 class="text-lg font-medium text-gray-900 mb-4">Upcoming Shows</h3>

    <% if @show_ticketings.any? %>
      <div class="space-y-2">
        <% @show_ticketings.each do |ticketing| %>
          <%= render "manage/ticketing/dashboard_show_row",
            ticketing: ticketing,
            performance: @show_performance[ticketing]
          %>
        <% end %>
      </div>
    <% elsif @linked_events.blank? %>
      <div class="bg-gray-50 rounded-lg border border-dashed border-gray-300 p-8 text-center">
        <p class="text-gray-600 mb-3">No shows with ticketing set up yet.</p>
        <%= link_to manage_show_ticketings_path do %>
          <%= render "shared/button", text: "Set Up Ticketing", variant: "primary", size: "medium" %>
        <% end %>
      </div>
    <% end %>
  </div>

  <%# Linked Events (Monitor-only) %>
  <% if @linked_events.any? %>
    <div class="mt-8">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-medium text-gray-900">Linked Events</h3>
        <span class="text-sm text-gray-500">Sales pulled from ticketing providers</span>
      </div>

      <div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Show</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Provider</th>
              <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Sold</th>
              <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Available</th>
              <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Revenue</th>
              <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Last Synced</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% @linked_events.each do |event| %>
              <tr class="hover:bg-gray-50">
                <td class="px-4 py-3">
                  <div class="flex items-center gap-3">
                    <div>
                      <div class="font-medium text-gray-900"><%= event.show.display_name %></div>
                      <div class="text-sm text-gray-500"><%= event.show.date_and_time.strftime("%b %d, %Y at %I:%M %p") %></div>
                    </div>
                  </div>
                </td>
                <td class="px-4 py-3">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                    <%= event.ticketing_provider.name %>
                  </span>
                </td>
                <td class="px-4 py-3 text-right">
                  <span class="font-medium text-green-600"><%= event.tickets_sold %></span>
                </td>
                <td class="px-4 py-3 text-right text-gray-600">
                  <%= event.tickets_available %>
                </td>
                <td class="px-4 py-3 text-right font-medium">
                  <%= number_to_currency(event.revenue) %>
                </td>
                <td class="px-4 py-3 text-right text-sm text-gray-500">
                  <% if event.last_sales_synced_at %>
                    <%= time_ago_in_words(event.last_sales_synced_at) %> ago
                  <% else %>
                    <span class="text-gray-400">Never</span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>
</div>
