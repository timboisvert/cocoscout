<% content_for :title, "SMS Logs - Superadmin" %>

<div class="w-full px-5 pt-5">
  <%= render partial: "shared/notice", locals: { notice: notice } %>

  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
        ["Superadmin", superadmin_path]
    ],
    text: "SMS Logs",
    links: []
  } %>

  <!-- Filter form -->
  <div class="mt-4 bg-white border border-gray-200 rounded-lg p-4 mb-4">
    <%= form_with url: sms_logs_path, method: :get, class: "flex flex-wrap gap-4 items-end" do |f| %>
      <div class="flex-1 min-w-[150px]">
        <%= f.label :user_id, "Filter by User ID", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :user_id, value: params[:user_id], placeholder: "Enter user ID", class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-pink-500 focus:ring-pink-500" %>
      </div>

      <div class="flex-1 min-w-[150px]">
        <%= f.label :phone, "Filter by Phone", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :phone, value: params[:phone], placeholder: "Enter phone number", class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-pink-500 focus:ring-pink-500" %>
      </div>

      <div class="flex-1 min-w-[150px]">
        <%= f.label :sms_type, "Type", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :sms_type, options_for_select([["All Types", ""], ["Show Cancellation", "show_cancellation"], ["Vacancy Notification", "vacancy_notification"]], params[:sms_type]), {}, class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-pink-500 focus:ring-pink-500" %>
      </div>

      <div class="flex-1 min-w-[150px]">
        <%= f.label :status, "Status", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :status, options_for_select([["All Statuses", ""], ["Sent", "sent"], ["Failed", "failed"], ["Pending", "pending"]], params[:status]), {}, class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-pink-500 focus:ring-pink-500" %>
      </div>

      <div class="flex gap-2">
        <%= f.submit "Filter", class: "px-4 py-2 bg-pink-600 text-white rounded-lg hover:bg-pink-700 font-medium cursor-pointer" %>
        <%= link_to "Clear", sms_logs_path, class: "px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 font-medium" %>
      </div>
    <% end %>
  </div>

  <!-- SMS logs table -->
  <div class="bg-white border border-gray-200 rounded-lg overflow-hidden">
    <%= render "shared/card_header", title: "SMS History" do %>
      <% if params[:user_id].present? || params[:phone].present? || params[:sms_type].present? || params[:status].present? %>
        <span class="text-sm font-normal text-gray-600">(filtered)</span>
      <% end %>
    <% end %>

    <% if @sms_logs.empty? %>
      <div class="text-center py-12 text-gray-500">
        No SMS logs found.
      </div>
    <% else %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Sent At</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">User</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Phone</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Message</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @sms_logs.each do |log| %>
              <tr class="hover:bg-gray-50 cursor-pointer" onclick="window.location='<%= sms_log_path(log) %>'">
                <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-900">
                  <%= log.sent_at&.strftime("%b %d, %Y %I:%M %p") || log.created_at.strftime("%b %d, %Y %I:%M %p") %>
                </td>
                <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-900">
                  <% if log.user %>
                    <%= link_to log.user.email_address, sms_logs_path(user_id: log.user.id), class: "text-pink-600 hover:text-pink-800 font-medium", onclick: "event.stopPropagation()" %>
                    <div class="text-xs text-gray-500">ID: <%= log.user.id %></div>
                  <% else %>
                    <span class="text-gray-400">-</span>
                  <% end %>
                </td>
                <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-900">
                  <%= log.formatted_phone %>
                </td>
                <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-600">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                    <%= log.type_display %>
                  </span>
                </td>
                <td class="px-4 py-3 text-sm text-gray-900">
                  <div class="max-w-md truncate" title="<%= log.message %>">
                    <%= log.message.truncate(60) %>
                  </div>
                </td>
                <td class="px-4 py-3 whitespace-nowrap">
                  <% case log.status %>
                  <% when "pending" %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                      Pending
                    </span>
                  <% when "sent" %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      Sent
                    </span>
                  <% when "failed" %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                      Failed
                    </span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="px-4 py-3 bg-gray-50 border-t border-gray-200 text-sm text-gray-600">
        Showing <%= @sms_logs.count %> most recent SMS messages
      </div>
    <% end %>
  </div>

</div>
