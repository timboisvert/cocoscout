                        <% headshot_variant = item.payee.respond_to?(:safe_headshot_variant) ? item.payee.safe_headshot_variant(:thumb) : nil %>
                        <% if headshot_variant %>
                          <%= image_tag headshot_variant, alt: item.payee_name, class: "w-16 h-16 rounded-xl object-cover" %>
                        <% else %>
                          <div class="w-16 h-16 rounded-xl bg-pink-100 flex items-center justify-center text-pink-600 font-bold text-xl">
                            <%= item.payee_name[0].upcase %>
                          </div>
                        <% end %>
                        <div>
                          <div class="text-xl font-semibold text-gray-900"><%= item.payee_name %></div>
                          <div class="text-sm text-gray-500"><%= item.payee_type_label %></div>
                        </div>
                      </div>

                      <!-- Amount -->
                      <div class="bg-gray-50 rounded-xl p-4 mb-6 text-center">
                        <div class="text-sm text-gray-500 mb-1">Amount to Pay</div>
                        <% if total_advance_deduction > 0 %>
                          <div class="text-sm text-gray-400 line-through"><%= number_to_currency(total_amount) %></div>
                          <div class="text-4xl font-bold text-gray-900"><%= number_to_currency(total_net_amount) %></div>
                          <div class="text-xs text-amber-600 mt-1">−<%= number_to_currency(total_advance_deduction) %> advance deducted</div>
                        <% else %>
                          <div class="text-4xl font-bold text-gray-900"><%= number_to_currency(total_amount) %></div>
                        <% end %>
                        <% if items.size > 1 %>
                          <div class="text-xs text-gray-500 mt-2">
                            <% items.each do |li| %>
                              <div><%= li.is_individual_allocation? ? "Allocation" : "Performer" %>: <%= number_to_currency(li.net_amount) %></div>
                            <% end %>
                          </div>
                        <% end %>
                      </div>

                      <!-- Payment Info or Setup Needed -->
                      <% payment_info = item.payee_preferred_payment %>
                      <% if total_net_amount == 0 %>
                        <!-- Zero amount - just mark as complete -->
                        <div class="mb-6">
                          <div class="bg-gray-100 border border-gray-200 rounded-xl p-4 text-center">
                            <svg class="w-10 h-10 text-gray-400 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            <p class="text-gray-600 font-medium">No payment needed</p>
                            <p class="text-sm text-gray-500 mt-1">This performer's payout is $0.</p>
                          </div>
                        </div>

                        <div class="space-y-3">
                          <%= form_with url: manage_mark_line_item_paid_money_show_payout_path(@show, item_ids, payment_method: "n/a"), method: :post, local: true, data: { action: "submit->payment-actions#nextPayee" } do |_f| %>
                            <%= render "shared/button", text: "Mark as Complete", variant: "primary", size: "large", type: :submit, icon: "check", classes: "w-full bg-green-600 hover:bg-green-700" %>
                          <% end %>
                        </div>
                      <% elsif payment_info %>
                        <div class="mb-6">
                          <div class="text-sm text-gray-500 mb-2 text-center">Pay with <%= payment_info[:method].titleize %></div>
                          <% if payment_info[:method] == "venmo" %>
                            <div class="bg-blue-50 border border-blue-200 rounded-xl p-4">
                              <div class="flex items-center justify-center gap-3">
                                <svg class="w-8 h-8 text-blue-500" viewBox="0 0 24 24" fill="currentColor">
                                  <path d="M19.5 3c.9 1.5 1.3 3.1 1.3 5.1 0 5.6-4.8 12.9-8.7 18H4.8L2.2 3.8l6.3-.6 1.5 12c1.4-2.3 3.1-5.9 3.1-8.4 0-1.9-.3-3.2-.9-4.3L19.5 3z"/>
                                </svg>
                                <span class="text-2xl font-semibold text-blue-700"><%= payment_info[:identifier] %></span>
                              </div>
                            </div>
                          <% elsif payment_info[:method] == "zelle" %>
                            <div class="bg-purple-50 border border-purple-200 rounded-xl p-4">
                              <div class="flex items-center justify-center gap-3">
                                <svg class="w-8 h-8" viewBox="0 0 50 50" fill="none">
                                  <path d="M25 50c13.807 0 25-11.193 25-25S38.807 0 25 0 0 11.193 0 25s11.193 25 25 25z" fill="#6D1ED4"/>
                                  <path d="M32.5 14H19.8l-.3 3.2h8.3L17 32.5v3.5h13.2l.3-3.2h-8.8L32.5 17.5V14z" fill="white"/>
                                </svg>
                                <span class="text-2xl font-semibold text-purple-700"><%= payment_info[:identifier] %></span>
                              </div>
                            </div>
                          <% end %>
                        </div>

                        <!-- Instructions -->
                        <div class="bg-gray-50 border border-gray-200 rounded-lg p-3 mb-6">
                          <div class="flex items-start gap-2">
                            <svg class="w-5 h-5 text-gray-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a.75.75 0 000 1.5h.253a.25.25 0 01.244.304l-.459 2.066A1.75 1.75 0 0010.747 15H11a.75.75 0 000-1.5h-.253a.25.25 0 01-.244-.304l.459-2.066A1.75 1.75 0 009.253 9H9z" clip-rule="evenodd"/>
                            </svg>
                            <% if payment_info[:method] == "venmo" %>
                              <p class="text-sm text-gray-700">Open Venmo on your phone, send <strong><%= number_to_currency(total_net_amount) %></strong> to <strong><%= payment_info[:identifier] %></strong>, then mark as paid below.</p>
                            <% elsif payment_info[:method] == "zelle" %>
                              <p class="text-sm text-gray-700">Open your bank's Zelle, send <strong><%= number_to_currency(total_net_amount) %></strong> to <strong><%= payment_info[:identifier] %></strong>, then mark as paid below.</p>
                            <% end %>
                          </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="space-y-3">
                          <% if payment_info[:method] == "venmo" && item.payee.respond_to?(:venmo_identifier) %>
                            <%= render "shared/button",
                                text: "Open Venmo",
                                variant: "primary",
                                size: "large",
                                type: :button,
                                classes: "w-full bg-blue-500 hover:bg-blue-600",
                                data: {
                                  action: "click->payment-actions#openVenmo",
                                  venmo_handle: item.payee.venmo_identifier,
                                  venmo_amount: total_net_amount,
                                  venmo_note: "#{@production.name} - #{@show.date_and_time.strftime('%b %-d')}"
                                } %>
                          <% end %>

                          <%= form_with url: manage_mark_line_item_paid_money_show_payout_path(@show, item_ids, payment_method: payment_info[:method]), method: :post, local: true, data: { action: "submit->payment-actions#nextPayee" } do |_f| %>
                            <%= render "shared/button", text: "I Paid via #{payment_info[:method].titleize}", variant: "primary", size: "large", type: :submit, icon: "check", classes: "w-full bg-green-600 hover:bg-green-700" %>
                          <% end %>
                        </div>
                      <% else %>
                        <!-- No payment method configured -->
                        <div class="mb-6">
                          <div class="bg-gray-100 border border-gray-200 rounded-xl p-4 text-center">
                            <svg class="w-10 h-10 text-gray-400 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                            </svg>
                            <p class="text-gray-600 font-medium">No payment info on file</p>
                            <p class="text-sm text-gray-500 mt-1">Ask <%= item.payee_name.split.first %> to add their Venmo or Zelle in CocoScout, or pay them another way.</p>
                          </div>
                        </div>

                        <!-- Alternative Payment Methods -->
                        <div class="space-y-3">
                          <p class="text-sm text-gray-500 text-center">Mark as paid via:</p>
                          <div class="grid grid-cols-2 gap-2">
                            <% %w[venmo zelle cash check].each do |method| %>
                              <%= form_with url: manage_mark_line_item_paid_money_show_payout_path(@show, item_ids, payment_method: method), method: :post, local: true, data: { action: "submit->payment-actions#nextPayee" } do |_f| %>
                                <%= render "shared/button", text: method.titleize, variant: "secondary", size: "medium", type: :submit, classes: "w-full" %>
                              <% end %>
                            <% end %>
                          </div>
                        </div>
                      <% end %>
                    </div>

                    <!-- Footer Navigation -->
                    <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 flex items-center justify-between">
                      <% if index > 0 %>
                        <%= render "shared/button", text: "← Previous", variant: "ghost", size: "small", type: :button, data: { action: "click->payment-actions#previousPayee" } %>
                      <% else %>
                        <div></div>
                      <% end %>

                      <%= render "shared/button", text: "Skip for now →", variant: "ghost", size: "small", type: :button, data: { action: "click->payment-actions#nextPayee" } %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        <% elsif has_financials %>
          <%
            # Check if show has any performers assigned
            assignments = @show.show_person_role_assignments.includes(:assignable)
            show_performers = assignments.map(&:assignable).compact.uniq.select { |p| p.is_a?(Person) }
            has_cast = show_performers.any?
          %>
          <div class="text-center py-6">
            <% if has_cast %>
              <p class="text-gray-500 mb-3">Ready to calculate payouts based on the financial data.</p>
              <%= form_with url: manage_calculate_money_show_payout_path(@show), method: :post, local: true do %>
                <%= render "shared/button", text: "Calculate Payouts", variant: "primary", size: "medium", type: :submit %>
              <% end %>
            <% else %>
              <div class="bg-amber-50 border border-amber-200 rounded-lg p-4 text-left mb-4">
                <div class="flex gap-3">
                  <svg class="w-5 h-5 text-amber-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"/>
                  </svg>
                  <div>
                    <p class="text-sm text-amber-800 font-medium">No performers assigned</p>
                    <p class="text-sm text-amber-700 mt-1">This show has no cast members to pay. You can either:</p>
                    <ul class="text-sm text-amber-700 mt-2 ml-4 list-disc space-y-1">
                      <li><%= link_to "Add cast members", manage_show_path(@production, @show), class: "underline hover:text-amber-900" %> to this show</li>
                      <li>Close this show as non-paying (no payouts needed)</li>
                    </ul>
                  </div>
                </div>
              </div>
              <%= form_with url: manage_close_as_non_paying_money_show_payout_path(@show), method: :post, local: true do %>
                <%= render "shared/button", text: "Close as Non-Paying", variant: "secondary", size: "medium", type: :submit %>
              <% end %>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-6">
            <p class="text-gray-500">Enter financial data first to calculate payouts.</p>
          </div>
        <% end %>
      </div>
      <% end %>

    </div>

    <!-- Sidebar -->
    <div class="space-y-4">

      <!-- Actions -->
      <div class="bg-white rounded-lg border border-gray-200 p-5">
        <h3 class="font-semibold text-gray-900 mb-4">Actions</h3>
        <div class="space-y-3">
          <% if @show_payout.paid? %>
            <div class="flex items-center gap-3 p-3 bg-pink-50 rounded-lg">
