<% content_for :title, "Set Up Casting" %>

<div class="min-h-screen bg-gray-50 flex items-center justify-center py-12 px-4">
  <div class="max-w-2xl w-full">
    <!-- Header -->
    <div class="text-center mb-8">
      <div class="inline-flex items-center justify-center w-16 h-16 bg-pink-100 rounded-full mb-4">
        <svg class="w-8 h-8 text-pink-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 0 0 3.741-.479 3 3 0 0 0-4.682-2.72m.94 3.198.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0 1 12 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 0 1 6 18.719m12 0a5.971 5.971 0 0 0-.941-3.197m0 0A5.995 5.995 0 0 0 12 12.75a5.995 5.995 0 0 0-5.058 2.772m0 0a3 3 0 0 0-4.681 2.72 8.986 8.986 0 0 0 3.74.477m.94-3.197a5.971 5.971 0 0 0-.94 3.197M15 6.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm6 3a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Zm-13.5 0a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Z" />
        </svg>
      </div>
      <h1 class="text-3xl font-bold text-gray-900 coustard-regular">Set Up Casting</h1>
      <p class="text-gray-600 mt-2">Let's configure how you want to cast performers for <strong><%= @production.name %></strong></p>
    </div>

    <!-- Setup Form -->
    <%= form_with model: @production, url: complete_setup_manage_production_casting_settings_path(@production), method: :post do |form| %>
      <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
        <!-- Casting Source -->
        <div class="p-6 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-900 mb-2">Where do your performers come from?</h2>
          <p class="text-sm text-gray-600 mb-4">
            This sets the default casting source for all events. You can override this on individual events if needed.
          </p>

          <div class="space-y-3">
            <label class="flex items-start gap-3 p-4 border rounded-lg cursor-pointer hover:bg-gray-50 transition-colors border-gray-200 has-[:checked]:border-pink-500 has-[:checked]:bg-pink-50">
              <%= form.radio_button :casting_source, "talent_pool",
                  class: "h-4 w-4 mt-0.5 accent-pink-500 cursor-pointer",
                  checked: @production.casting_source.nil? || @production.casting_talent_pool? %>
              <div class="flex-1">
                <span class="block font-medium text-gray-900">Talent Pool</span>
                <span class="block text-sm text-gray-500 mt-0.5">
                  Build a pool of performers and cast them into shows.
                  <strong>Best for:</strong> theater companies, dance troupes, improv groups.
                </span>
              </div>
            </label>

            <label class="flex items-start gap-3 p-4 border rounded-lg cursor-pointer hover:bg-gray-50 transition-colors border-gray-200 has-[:checked]:border-pink-500 has-[:checked]:bg-pink-50">
              <%= form.radio_button :casting_source, "manual",
                  class: "h-4 w-4 mt-0.5 accent-pink-500 cursor-pointer" %>
              <div class="flex-1">
                <span class="block font-medium text-gray-900">Manual Entry</span>
                <span class="block text-sm text-gray-500 mt-0.5">
                  You add performers by name or email as needed.
                  <strong>Best for:</strong> guest artists, one-off events, collaborations.
                </span>
              </div>
            </label>

            <label class="flex items-start gap-3 p-4 border rounded-lg cursor-pointer hover:bg-gray-50 transition-colors border-gray-200 has-[:checked]:border-pink-500 has-[:checked]:bg-pink-50">
              <%= form.radio_button :casting_source, "hybrid",
                  class: "h-4 w-4 mt-0.5 accent-pink-500 cursor-pointer" %>
              <div class="flex-1">
                <span class="block font-medium text-gray-900">Hybrid</span>
                <span class="block text-sm text-gray-500 mt-0.5">
                  Combine talent pool and manual entry for maximum flexibility.
                  <strong>Best for:</strong> complex productions, festivals, mixed-format events.
                </span>
              </div>
            </label>
          </div>
        </div>

        <!-- Submit -->
        <div class="p-6 bg-gray-50 flex items-center justify-between">
          <%= link_to manage_production_path(@production), class: "text-sm text-gray-600 hover:text-gray-900" do %>
            ‚Üê Back to Production
          <% end %>
          <%= render "shared/button", text: "Complete Setup", variant: "primary", size: "medium", type: :submit %>
        </div>
      </div>
    <% end %>

    <!-- Skip Option -->
    <div class="text-center mt-6">
      <%= link_to "Skip for now", manage_production_path(@production), class: "text-sm text-gray-500 hover:text-gray-700 underline" %>
      <p class="text-xs text-gray-400 mt-1">You can set this up later from the Casting page</p>
    </div>
  </div>
</div>
