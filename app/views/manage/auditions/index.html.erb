<% content_for :title, "Auditions" %>

<div class="w-full mb-10">
  <%= render partial: "shared/notice", locals: { notice: notice } %>
  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Sign-ups", manage_signups_path],
      [@production.name, manage_signups_production_path(@production)]
    ],
    text: "Auditions",
    links: []
  } %>

  <% if @active_audition_cycle.present? %>
    <% if current_user_has_role?(@production) %>
    <!-- Active Call to Audition Info -->
    <div class="mb-6 bg-white border border-gray-200 rounded-lg shadow-sm overflow-hidden">
      <%= render "shared/card_header", title: "Active Audition Cycle" do %>
        <% if current_user_can_manage?(@production) %>
          <%= link_to manage_edit_signups_auditions_cycle_path(@production, @active_audition_cycle), class: "text-gray-400 hover:text-gray-600", title: "Settings" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          <% end %>
        <% end %>
      <% end %>
      <div class="p-4">
        <%
          # Check if casting has been completed
          has_casting_notifications = @active_audition_cycle.casting_finalized_at.present?
        %>

        <% if has_casting_notifications %>
          <div class="mb-4 p-4 bg-green-50 border border-green-200 rounded-lg">
            <div class="flex items-start gap-3">
              <div class="flex-shrink-0">
                <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div class="flex-1">
                <h4 class="text-sm font-semibold text-green-900 mb-1">Audition Process Complete</h4>
                <p class="text-sm text-green-800">
                  Casting notifications have been sent and this audition cycle is complete. You can now archive this audition cycle and start a new one if needed.
                </p>
              </div>
            </div>
          </div>
        <% end %>

        <%# Status and Configuration Summary %>
        <%
          if @active_audition_cycle.opens_at > Time.current
            status_text = "Opens Soon"
            status_class = "bg-pink-100 text-pink-700"
          elsif @active_audition_cycle.closes_at.present? && @active_audition_cycle.closes_at <= Time.current
            status_text = "Closed"
            status_class = "bg-gray-100 text-gray-600"
          else
            status_text = "Open"
            status_class = "bg-green-100 text-green-700"
          end
        %>

        <div class="flex flex-col sm:flex-row sm:items-start gap-4">
          <%# Left: Status and Details %>
          <div class="flex-1">
            <div class="flex items-center gap-3 mb-3">
              <span class="inline-flex items-center rounded px-2 py-1 text-xs font-semibold <%= status_class %>">
                <%= status_text %>
              </span>
              <span class="text-sm text-gray-500">
                <%= @active_audition_cycle.opens_at.strftime("%b %-d") %><% if @active_audition_cycle.closes_at.present? %> – <%= @active_audition_cycle.closes_at.strftime("%b %-d, %Y") %><% else %> (open-ended)<% end %>
              </span>
            </div>

            <div class="space-y-1.5 text-sm">
              <%# Audition Format %>
              <div class="flex items-center gap-2 text-gray-700">
                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
                </svg>
                <span>
                  <% if @active_audition_cycle.hybrid_auditions? %>
                    Video + In-Person Auditions
                  <% elsif @active_audition_cycle.video_only? %>
                    Video Submissions Only
                  <% else %>
                    In-Person Auditions
                  <% end %>
                </span>
              </div>

              <%# Sessions (if in-person) %>
              <% if @active_audition_cycle.accepts_in_person_auditions? %>
                <% session_count = @active_audition_cycle.audition_sessions.count %>
                <div class="flex items-center gap-2 text-gray-700">
                  <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                  <span><%= pluralize(session_count, "audition session") %> scheduled</span>
                </div>
              <% end %>

              <%# Form Review Status %>
              <div class="flex items-center gap-2 <%= @active_audition_cycle.form_reviewed ? 'text-green-600' : 'text-amber-600' %>">
                <% if @active_audition_cycle.form_reviewed %>
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  <span>Form reviewed</span>
                <% else %>
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                  </svg>
                  <span>Form needs review</span>
                <% end %>
              </div>
            </div>
          </div>

          <%# Right: Audition Requests Count %>
          <div class="flex items-center gap-2 sm:border-l sm:border-gray-200 sm:pl-4 sm:flex-col sm:items-start">
            <div class="text-xs font-semibold text-gray-500 uppercase tracking-wide sm:mb-1">Requests:</div>
            <div class="text-xl sm:text-3xl font-bold text-pink-600"><%= @active_audition_cycle.audition_requests.count %></div>
          </div>
        </div>
      </div>
    </div>
    <% end %>

    <!-- Audition Process Steps -->
    <div class="mb-6 bg-white border border-gray-200 rounded-lg shadow-sm overflow-hidden">
      <%= render "shared/card_header", title: "Audition Process" %>

      <div class="p-8">
        <div class="relative">
          <!-- Connecting line -->
          <div class="absolute left-8 top-8 bottom-8 w-0.5 bg-gray-200" style="height: calc(100% - 4rem);"></div>

          <div class="grid grid-cols-1 gap-12">

            <% if current_user_has_role?(@production) %>
            <!-- Step 1: Prepare -->
            <%= link_to manage_prepare_signups_auditions_cycle_path(@production, @active_audition_cycle), class: "no-underline" do %>
              <div class="relative flex flex-col items-start text-left group">
                <div class="flex items-start gap-6">
                  <div class="flex-shrink-0 w-16 h-16 rounded-full flex items-center justify-center z-10 ring-4 ring-white transition-all bg-pink-100">
                    <svg class="w-8 h-8 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                  </div>
                  <div class="flex-1">
                    <h4 class="text-lg font-semibold text-gray-900 group-hover:text-pink-500 transition-colors">Prepare</h4>

                    <p class="text-gray-600 text-sm mt-1">
                      <% if @active_audition_cycle.video_only? %>
                        Configure settings and customize audition form
                      <% elsif @active_audition_cycle.accepts_in_person_auditions? %>
                        Configure settings, plan sessions, and customize audition form
                      <% end %>
                    </p>

                    <% if @active_audition_cycle.accepts_in_person_auditions? && @active_audition_cycle.audition_sessions.any? %>
                      <% session_count = @active_audition_cycle.audition_sessions.count %>
                      <p class="text-xs text-green-600 font-medium mt-2">✓ <%= session_count %> audition <%= 'session'.pluralize(session_count) %> scheduled</p>
                    <% end %>

                    <% if @active_audition_cycle.form_reviewed %>
                      <p class="text-xs text-green-600 font-medium mt-2">✓ Audition form finalized</p>
                    <% end %>

                  </div>
                </div>
              </div>
            <% end %>
            <% end %>

            <!-- Step 2: Review -->
            <%= link_to manage_review_signups_auditions_cycle_path(@production, @active_audition_cycle), class: "no-underline" do %>
              <div class="relative flex flex-col items-start text-left group">
                <div class="flex items-start gap-6">
                  <div class="flex-shrink-0 w-16 h-16 rounded-full flex items-center justify-center z-10 ring-4 ring-white transition-all bg-pink-100">
                    <svg class="w-8 h-8 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
                    </svg>
                  </div>
                  <div class="flex-1">
                    <h4 class="text-lg font-semibold text-gray-900 group-hover:text-pink-500 transition-colors">Review</h4>
                    <p class="text-gray-600 text-sm mt-1"><%= @active_audition_cycle.video_only? ? 'Watch and evaluate auditions' : 'Review audition requests and schedule auditions' %></p>
                    <%
                      total_signups = @active_audition_cycle.audition_requests.count
                      # Count auditionables (people/groups) who are actually scheduled for auditions
                      scheduled_count = @active_audition_cycle.audition_sessions.joins(:auditions).select('auditions.auditionable_type', 'auditions.auditionable_id').distinct.count
                    %>
                    <% if total_signups > 0 %>
                      <p class="text-xs text-green-600 font-medium mt-2">✓ <%= total_signups %> <%= 'audition request'.pluralize(total_signups) %> received</p>
                    <% end %>
                    <% if scheduled_count > 0 %>
                      <p class="text-xs text-green-600 font-medium mt-2">✓ <%= scheduled_count %> <%= 'auditionee'.pluralize(scheduled_count) %> offered <%= 'an audition'.pluralize(scheduled_count) %></p>
                    <% end %>
                    <% if @active_audition_cycle.finalize_audition_invitations %>
                      <% notified_count = @active_audition_cycle.audition_requests.count %>
                      <p class="text-xs text-green-600 font-medium mt-2">✓ Audition decision notifications sent to <%= notified_count %> <%= 'auditionee'.pluralize(notified_count) %></p>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>

            <!-- Step 3: Run Auditions -->
            <% if @active_audition_cycle.accepts_in_person_auditions? %>
              <%= link_to manage_run_signups_auditions_cycle_path(@production, @active_audition_cycle), class: "no-underline" do %>
                <div class="relative flex flex-col items-start text-left group">
                  <div class="flex items-start gap-6">
                    <div class="flex-shrink-0 w-16 h-16 rounded-full flex items-center justify-center z-10 ring-4 ring-white transition-all bg-pink-100">
                      <svg class="w-8 h-8 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                      </svg>
                    </div>
                    <div class="flex-1">
                      <h4 class="text-lg font-semibold text-gray-900 group-hover:text-pink-500 transition-colors">Run Auditions</h4>
                      <p class="text-gray-600 text-sm mt-1">Conduct sessions and evaluate performances</p>
                      <%
                        completed_sessions = @active_audition_cycle.audition_sessions.where("end_at < ?", Time.current).count
                        if completed_sessions > 0
                      %>
                        <p class="text-xs text-green-600 font-medium mt-2">✓ <%= completed_sessions %> audition <%= 'session'.pluralize(completed_sessions) %> completed</p>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            <% end %>

            <% if current_user_has_role?(@production) %>
            <!-- Step 4: Casting -->
            <%= link_to manage_casting_signups_auditions_cycle_path(@production, @active_audition_cycle), class: "no-underline" do %>
              <div class="relative flex flex-col items-start text-left group">
                <div class="flex items-start gap-6">
                  <div class="flex-shrink-0 w-16 h-16 rounded-full flex items-center justify-center z-10 ring-4 ring-white transition-all bg-pink-100">
                    <svg class="w-8 h-8 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                  </div>
                  <div class="flex-1">
                    <h4 class="text-lg font-semibold text-gray-900 group-hover:text-pink-500 transition-colors">Casting</h4>
                    <p class="text-gray-600 text-sm mt-1">Send decisions and add people to casts</p>
                    <%
                      # Count unique auditionees added to casts during THIS audition cycle
                      cast_count = @active_audition_cycle.cast_assignment_stages.select(:assignable_type, :assignable_id).distinct.count
                      if cast_count > 0
                    %>
                      <p class="text-xs text-green-600 font-medium mt-2">✓ <%= cast_count %> <%= 'auditionee'.pluralize(cast_count) %> added to <%= cast_count == 1 ? 'a cast' : 'casts' %></p>
                    <% end %>
                    <%
                      # Check if casting was finalized
                      if @active_audition_cycle.casting_finalized_at.present?
                        finalized_stages = @active_audition_cycle.cast_assignment_stages.where(status: :finalized)
                        # Count total people/groups who auditioned to show how many were notified
                        audition_session_ids = @active_audition_cycle.audition_sessions.pluck(:id)
                        total_auditioned = Audition.where(audition_session_id: audition_session_ids).select(:auditionable_type, :auditionable_id).distinct.count

                        if finalized_stages.any?
                    %>
                      <p class="text-xs text-green-600 font-medium mt-2">✓ Casting decision notifications sent to <%= total_auditioned %> <%= 'person'.pluralize(total_auditioned) %></p>
                    <%
                        else
                    %>
                      <p class="text-xs text-green-600 font-medium mt-2">✓ Casting finalized with no new cast members added</p>
                      <p class="text-xs text-green-600 font-medium mt-2">✓ Casting decision notifications sent to <%= total_auditioned %> <%= 'person'.pluralize(total_auditioned) %></p>
                    <%
                        end
                      end
                    %>
                  </div>
                </div>
              </div>
            <% end %>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  <% else %>
    <%# Welcome state when no active audition cycle %>

    <% if @wizard_in_progress %>
      <%# Wizard in progress - show continue option %>
      <div class="bg-gradient-to-r from-pink-50 to-rose-50 border border-pink-200 rounded-lg p-5 mb-6">
        <div class="flex items-center justify-between flex-wrap gap-4">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-full bg-pink-100 flex items-center justify-center">
              <svg class="w-5 h-5 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div>
              <h3 class="text-base font-semibold text-pink-900">Audition Setup In Progress</h3>
              <p class="text-sm text-pink-700">You have an unfinished audition cycle setup.</p>
            </div>
          </div>
          <div class="flex items-center gap-3">
            <%= render partial: "shared/button", locals: { text: "Continue Setup", path: manage_signups_auditions_wizard_path(@production), variant: "primary", size: "small", icon: "arrow-right" } %>
            <%= link_to "Start Over", manage_signups_auditions_wizard_cancel_path(@production), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure? This will discard your progress." }, class: "text-sm text-pink-700 hover:text-pink-900 underline" %>
          </div>
        </div>
      </div>
    <% end %>

    <%# Main welcome card %>
    <div class="bg-gradient-to-br from-pink-50 via-white to-slate-50 border border-gray-200 rounded-lg shadow-sm overflow-hidden">
      <div class="p-6 sm:p-8">
        <%# Header %>
        <div class="text-center mb-6">
          <div class="inline-flex items-center justify-center w-14 h-14 rounded-full bg-pink-100 mb-3">
            <svg class="w-7 h-7 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
            </svg>
          </div>
          <h2 class="text-2xl font-bold text-slate-900 coustard-regular">Ready to Hold Auditions?</h2>
          <p class="text-slate-600 mt-2 max-w-lg mx-auto">Set up an audition cycle to start accepting and reviewing submissions for your production.</p>
        </div>

        <%# Features Grid %>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-6 max-w-2xl mx-auto">
          <div class="flex items-start gap-3 p-3 bg-white/60 rounded-lg">
            <div class="flex-shrink-0 w-8 h-8 rounded-full bg-pink-100 flex items-center justify-center">
              <svg class="w-4 h-4 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
              </svg>
            </div>
            <div>
              <p class="text-sm font-medium text-slate-800">Custom audition forms</p>
              <p class="text-xs text-slate-500">Add your own questions</p>
            </div>
          </div>
          <div class="flex items-start gap-3 p-3 bg-white/60 rounded-lg">
            <div class="flex-shrink-0 w-8 h-8 rounded-full bg-pink-100 flex items-center justify-center">
              <svg class="w-4 h-4 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
              </svg>
            </div>
            <div>
              <p class="text-sm font-medium text-slate-800">Video or in-person</p>
              <p class="text-xs text-slate-500">Flexible audition formats</p>
            </div>
          </div>
          <div class="flex items-start gap-3 p-3 bg-white/60 rounded-lg">
            <div class="flex-shrink-0 w-8 h-8 rounded-full bg-pink-100 flex items-center justify-center">
              <svg class="w-4 h-4 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
            </div>
            <div>
              <p class="text-sm font-medium text-slate-800">Track availability</p>
              <p class="text-xs text-slate-500">Know who can make your shows</p>
            </div>
          </div>
          <div class="flex items-start gap-3 p-3 bg-white/60 rounded-lg">
            <div class="flex-shrink-0 w-8 h-8 rounded-full bg-pink-100 flex items-center justify-center">
              <svg class="w-4 h-4 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <div>
              <p class="text-sm font-medium text-slate-800">Cast notifications</p>
              <p class="text-xs text-slate-500">Send results automatically</p>
            </div>
          </div>
        </div>

        <%# CTA Button %>
        <% if current_user_can_manage?(@production) %>
          <% unless @wizard_in_progress %>
            <div class="text-center">
              <%= render "shared/button",
                text: "Start New Audition Cycle",
                variant: "primary",
                size: "large",
                icon: "plus",
                type: :link,
                path: manage_signups_auditions_wizard_path(@production) %>
            </div>
          <% end %>
        <% else %>
          <p class="text-sm text-slate-500 text-center">Contact a production manager to start a new audition cycle.</p>
        <% end %>
      </div>
    </div>
  <% end %>

  <%# Archive bar - always show if user has role, even without active cycle %>
  <% if current_user_has_role?(@production) %>
  <div class="mt-8 p-4 bg-white border border-gray-200 rounded-lg shadow-sm">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
      <div>
        <p class="text-base font-semibold text-gray-700">Archive</p>
        <p class="text-sm text-gray-600">
          <% if @active_audition_cycle.present? %>
            End this audition cycle or view past cycles.
          <% else %>
            View past audition cycles.
          <% end %>
        </p>
      </div>
      <div class="flex flex-wrap items-center gap-x-4 gap-y-2">
        <% if @active_audition_cycle.present? && current_user_can_manage?(@production) %>
          <%= button_to "Archive This Audition Cycle", manage_archive_signups_auditions_cycle_path(@production, @active_audition_cycle), method: :patch, class: "text-sm text-pink-500 underline cursor-pointer whitespace-nowrap", data: { turbo_confirm: "Are you sure? This will close the current audition cycle and you can create a new one." } %>
        <% end %>
        <%= link_to "View Archive", manage_signups_auditions_archive_path(@production), class: "text-sm text-pink-500 underline whitespace-nowrap" %>
      </div>
    </div>
  </div>
  <% end %>
</div>
