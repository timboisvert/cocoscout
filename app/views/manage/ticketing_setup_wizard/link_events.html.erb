<%= render layout: "manage/ticketing_setup_wizard/wizard_layout", locals: { current_step: 3, step_name: "Link Events" } do %>
  <div class="text-center mb-6">
    <div class="w-16 h-16 bg-pink-100 rounded-full flex items-center justify-center mx-auto mb-4">
      <svg class="w-8 h-8 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
      </svg>
    </div>
    <h2 class="text-xl font-bold text-gray-900 coustard-regular">Link events to shows</h2>
    <p class="text-gray-600 mt-2">We've analyzed your provider events and matched them to your shows.</p>
  </div>

  <%# Summary stats %>
  <div class="grid grid-cols-3 gap-4 mb-6">
    <div class="bg-green-50 border border-green-200 rounded-lg p-3 text-center">
      <div class="text-2xl font-bold text-green-600"><%= @auto_linked.count + @already_linked.count %></div>
      <div class="text-sm text-green-700">Linked</div>
    </div>
    <div class="bg-amber-50 border border-amber-200 rounded-lg p-3 text-center">
      <div class="text-2xl font-bold text-amber-600"><%= @needs_review.count %></div>
      <div class="text-sm text-amber-700">Need Review</div>
    </div>
    <div class="bg-gray-50 border border-gray-200 rounded-lg p-3 text-center">
      <div class="text-2xl font-bold text-gray-600"><%= @no_match.count %></div>
      <div class="text-sm text-gray-700">No Match</div>
    </div>
  </div>

  <div class="mb-6 flex items-center justify-end">
    <%= form_with url: manage_ticketing_setup_wizard_fetch_events_path, method: :post, local: true, class: "inline" do %>
      <%= render "shared/button", text: "Re-fetch from providers", variant: "ghost", size: "small", icon: "refresh", type: :submit %>
    <% end %>
  </div>

  <%= form_with url: manage_ticketing_setup_wizard_save_links_path, method: :post, local: true do %>
    <%# Auto-linked events (success state) %>
    <% if @auto_linked.any? %>
      <div class="mb-6">
        <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide mb-3">
          <span class="inline-flex items-center gap-1 text-green-600">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
            Auto-linked
          </span>
        </h3>
        <div class="space-y-2">
          <% @auto_linked.each do |match| %>
            <div class="bg-green-50 border border-green-200 rounded-lg p-3 flex items-center justify-between">
              <div class="flex items-center gap-3">
                <span class="text-green-600">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                </span>
                <div>
                  <span class="font-medium text-gray-900"><%= match[:event].event_name %></span>
                  <span class="text-gray-400 mx-2">→</span>
                  <span class="text-gray-700"><%= match[:show].display_name %></span>
                </div>
              </div>
              <span class="text-xs text-green-600"><%= (match[:confidence] * 100).round %>% match</span>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <%# Events needing review %>
    <% if @needs_review.any? %>
      <div class="mb-6">
        <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide mb-3">
          <span class="inline-flex items-center gap-1 text-amber-600">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
            Needs your confirmation
          </span>
        </h3>
        <div class="space-y-3">
          <% @needs_review.each do |match| %>
            <% event = match[:event] %>
            <% suggested = match[:suggested_show] %>
            <div class="bg-amber-50 border border-amber-200 rounded-lg p-4">
              <div class="flex items-start gap-4">
                <%# Event info %>
                <div class="flex-1">
                  <div class="font-medium text-gray-900"><%= event.event_name %></div>
                  <div class="text-sm text-gray-500 mt-1">
                    <% if event.event_date.present? %>
                      <%= event.event_date.strftime("%b %d, %Y at %l:%M %p") %>
                    <% end %>
                    <% if event.venue_name.present? %>
                      • <%= event.venue_name %>
                    <% end %>
                  </div>
                </div>

                <%# Suggested match with dropdown %>
                <div class="flex-shrink-0 w-64">
                  <label class="block text-xs text-amber-700 mb-1">
                    Link to show (<%= (match[:confidence] * 100).round %>% likely)
                  </label>
                  <select name="links[<%= event.id %>]"
                          class="block w-full px-3 py-2 bg-white border border-amber-300 rounded-lg text-sm text-gray-900 focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-pink-500">
                    <option value="">Don't link</option>
                    <% @shows.each do |show| %>
                      <% is_suggested = suggested && suggested.id == show.id %>
                      <option value="<%= show.id %>" <%= "selected" if is_suggested %>>
                        <%= show.date_and_time.strftime("%b %d") %> — <%= show.display_name.truncate(30) %>
                        <%= " ★" if is_suggested %>
                      </option>
                    <% end %>
                  </select>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <%# No match events %>
    <% if @no_match.any? %>
      <div class="mb-6">
        <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide mb-3">
          <span class="inline-flex items-center gap-1 text-gray-500">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            No matching show found
          </span>
        </h3>
        <div class="space-y-3">
          <% @no_match.each do |event| %>
            <div class="bg-gray-50 border border-gray-200 rounded-lg p-4">
              <div class="flex items-start gap-4">
                <div class="flex-1">
                  <div class="font-medium text-gray-900"><%= event.event_name %></div>
                  <div class="text-sm text-gray-500 mt-1">
                    <% if event.event_date.present? %>
                      <%= event.event_date.strftime("%b %d, %Y at %l:%M %p") %>
                    <% end %>
                    <% if event.venue_name.present? %>
                      • <%= event.venue_name %>
                    <% end %>
                  </div>
                </div>

                <div class="flex-shrink-0 w-64">
                  <label class="block text-xs text-gray-500 mb-1">Link to show (optional)</label>
                  <select name="links[<%= event.id %>]"
                          class="block w-full px-3 py-2 bg-white border border-gray-300 rounded-lg text-sm text-gray-900 focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-pink-500">
                    <option value="">Don't link</option>
                    <% @shows.each do |show| %>
                      <option value="<%= show.id %>">
                        <%= show.date_and_time.strftime("%b %d") %> — <%= show.display_name.truncate(30) %>
                      </option>
                    <% end %>
                  </select>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <%# Empty state %>
    <% if @auto_linked.empty? && @needs_review.empty? && @no_match.empty? && @already_linked.empty? %>
      <div class="text-center py-12 bg-gray-50 rounded-lg border border-dashed border-gray-300">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
        </svg>
        <h3 class="mt-4 text-sm font-medium text-gray-900">No events found</h3>
        <p class="mt-2 text-sm text-gray-500">
          Click "Re-fetch from providers" to pull events, or create events on your ticketing platforms first.
        </p>
      </div>
    <% end %>

    <div class="mt-8 flex justify-between">
      <%= link_to manage_ticketing_setup_wizard_providers_path do %>
        <%= render "shared/button", text: "Back", variant: "secondary", size: "medium" %>
      <% end %>
      <%= render "shared/button", text: "Save & Finish", variant: "primary", size: "medium", type: :submit %>
    </div>
  <% end %>
<% end %>
