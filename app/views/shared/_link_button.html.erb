<%

    classes = "font-medium rounded-lg text-sm px-5 h-10 py-2.5 text-center mb-0 inline-block"

    if defined?(color)
        if color == "white"
            classes += " text-black bg-white hover:bg-gray-100"
        elsif color == "pink"
            classes += " text-white bg-pink-500 hover:bg-pink-600"
        end
    else
        classes += " text-white bg-pink-500 hover:bg-pink-600 focus:ring-4 focus:outline-none focus:ring-pink-300 dark:focus:ring-pink-800"
    end

%>

<%= link_to text, path, class:"#{classes}"%>
