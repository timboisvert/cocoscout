<%#
  Non-event signup item (shared_pool forms - read-only display)
  
  Required params:
    - item: Hash with :form, :production, :registrations, :people
%>

<%
  form = item[:form]
  production = item[:production]
  registrations = item[:registrations]
  people = item[:people]
  first_reg = registrations.first
%>

<div class="flex flex-col md:flex-row md:items-center gap-2 md:gap-0 w-full px-3 py-2 border rounded-lg bg-white border-gray-200 hover:border-gray-400 transition-all">
  <%# Left Section: Form Details (1/2 width to match event signups) %>
  <div class="w-full md:w-1/2 flex items-center gap-4">
    <%# Icon instead of date box %>
    <div class="flex-shrink-0 w-14 flex items-center justify-center">
      <div class="w-10 h-10 rounded-lg bg-pink-100 flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-pink-600">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 002.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 00-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 00.75-.75 2.25 2.25 0 00-.1-.664m-5.8 0A2.251 2.251 0 0113.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25zM6.75 12h.008v.008H6.75V12zm0 3h.008v.008H6.75V15zm0 3h.008v.008H6.75V18z" />
        </svg>
      </div>
    </div>

    <%# Form Details %>
    <div class="flex-1 min-w-0">
      <div class="flex items-center gap-2 flex-wrap">
        <span class="font-medium text-gray-900"><%= form.name %></span>
      </div>
      <div class="text-sm text-gray-600"><%= production.name %></div>
    </div>
  </div>

  <%# Right Section: Status & Actions (2/3 width to match event signups) %>
  <div class="w-full md:w-2/3 md:border-l border-gray-200 md:pl-4 flex items-center gap-3 border-t md:border-t-0 mt-2 md:mt-0 pt-2 md:pt-0">
    <div class="flex-1 min-w-0">
      <% if form.slot_generation_mode == 'open_list' %>
        <%# Open list - show status badge %>
        <% on_waitlist = registrations.any? { |r| r.status == 'waitlisted' } %>
        <div class="mb-1">
          <% if on_waitlist %>
            <span class="inline-flex items-center bg-amber-500 text-white px-2.5 py-1 text-sm font-medium rounded">On Waitlist</span>
          <% else %>
            <span class="inline-flex items-center bg-gray-500 text-white px-2.5 py-1 text-sm font-medium rounded">Signed up</span>
          <% end %>
        </div>
        <% if form.short_code.present? %>
          <%= link_to my_sign_up_form_path(form.short_code), class: "text-xs text-pink-500 hover:text-pink-600 underline" do %>
            View Registration
          <% end %>
        <% end %>
      <% else %>
        <%# Numbered/time-based slots - show slot info %>
        <div class="text-[10px] text-gray-400 uppercase tracking-wide">
          <%= registrations.size == 1 ? "Your Position" : "Your Positions" %>
        </div>
        <% if registrations.size == 1 %>
          <div class="text-sm font-medium text-gray-900"><%= first_reg.sign_up_slot&.display_name %></div>
        <% else %>
          <div class="text-sm font-medium text-gray-900">
            <%= registrations.map { |r| r.sign_up_slot&.display_name }.compact.join(", ") %>
          </div>
        <% end %>
      <% end %>
    </div>

    <%# Show headshot(s) if multiple people %>
    <% if people.size > 0 && @groups.any? %>
      <div class="flex flex-col gap-1 ml-3">
        <% people.each do |person| %>
          <% headshot = person.safe_headshot_variant(:thumb) %>
          <% if headshot %>
            <%= image_tag headshot, class: "w-8 h-8 rounded-lg object-cover", alt: person.preferred_name %>
          <% else %>
            <div class="w-8 h-8 rounded-lg bg-gray-200 flex items-center justify-center text-gray-700 font-bold text-xs">
              <%= person.initials %>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
