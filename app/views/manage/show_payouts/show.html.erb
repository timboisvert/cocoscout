<% content_for :title, "Payout: #{show_display_name(@show)} - #{@production.name}" %>

<%
  has_financials = @show_financials&.complete?
  has_line_items = @line_items.any?
  can_calculate = has_financials && @show_payout.draft?
%>

<div class="w-full mb-10">
  <%= render partial: "shared/notice", locals: { notice: notice, alert: alert } %>
  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Money", manage_production_money_index_path(@production)],
      ["Show Payouts", manage_production_money_show_payouts_path(@production)]
    ],
    text: show_display_name(@show),
    links: []
  } %>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">

      <!-- Show Info -->
      <div class="bg-white rounded-lg border border-gray-200 p-5">
        <div class="flex items-center justify-between">
          <div>
            <h2 class="font-semibold text-gray-900"><%= show_display_name(@show, include_date: false) %></h2>
            <p class="text-sm text-gray-500"><%= @show.date_and_time.strftime("%A, %B %-d, %Y at %-I:%M %p") %></p>
          </div>
          <div class="flex items-center gap-2">
            <% if @show.canceled? %>
              <span class="inline-flex items-center rounded-md px-3 py-1 text-sm font-medium bg-red-100 text-red-700">
                Canceled
              </span>
            <% end %>
            <span class="inline-flex items-center rounded-md px-3 py-1 text-sm font-medium <%= @show_payout.status_badge_class %>">
              <%= @show_payout.status_label %>
            </span>
          </div>
        </div>
      </div>

      <% if @show.canceled? && @show_payout.draft? %>
        <!-- Canceled Show Notice -->
        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
          <div class="flex gap-3">
            <svg class="w-5 h-5 text-red-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd"/>
            </svg>
            <div>
              <p class="text-sm text-red-800 font-medium">This show was canceled</p>
              <p class="text-sm text-red-700 mt-1">You can still process payouts for this show. Choose how you'd like to handle compensation:</p>
              <div class="mt-3 flex flex-wrap gap-2">
                <% if @show_payout.payout_scheme || @show_payout.has_overrides? %>
                  <%= form_with url: manage_production_calculate_money_show_payout_path(@production, @show), method: :post, local: true do %>
                    <%= render "shared/button", text: "Pay as Originally Planned", variant: "secondary", size: "small", type: :submit %>
                  <% end %>
                <% end %>
                <%= link_to manage_production_override_money_show_payout_path(@production, @show) do %>
                  <%= render "shared/button", text: "Set Custom Amounts", variant: "secondary", size: "small" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Financial Data -->
      <div class="bg-white rounded-lg border border-gray-200 p-5">
        <div class="flex items-center justify-between mb-4">
          <h3 class="font-semibold text-gray-900">Financial Data</h3>
          <% if @show_payout.can_edit? %>
            <%= link_to manage_production_edit_financials_money_show_payout_path(@production, @show) do %>
              <%= render "shared/button", text: @show_financials&.has_data? ? "Edit" : "Enter Data", variant: "secondary", size: "small" %>
            <% end %>
          <% end %>
        </div>

        <% if @show_financials&.has_data? %>
          <div class="grid grid-cols-2 sm:grid-cols-4 gap-4">
            <% if @show_financials.flat_fee? %>
              <div class="col-span-2">
                <div class="text-xs text-gray-500 uppercase tracking-wide">Flat Fee</div>
                <div class="text-xl font-semibold text-gray-900"><%= number_to_currency(@show_financials.flat_fee || 0) %></div>
              </div>
            <% else %>
              <div>
                <div class="text-xs text-gray-500 uppercase tracking-wide">Tickets Sold</div>
                <div class="text-xl font-semibold text-gray-900"><%= @show_financials.ticket_count %></div>
              </div>
              <div>
                <div class="text-xs text-gray-500 uppercase tracking-wide">Ticket Revenue</div>
                <div class="text-xl font-semibold text-gray-900"><%= number_to_currency(@show_financials.ticket_revenue) %></div>
              </div>
            <% end %>
            <div>
              <div class="text-xs text-gray-500 uppercase tracking-wide">Other Revenue</div>
              <div class="text-xl font-semibold text-gray-900"><%= number_to_currency(@show_financials.calculated_other_revenue) %></div>
            </div>
            <div>
              <div class="text-xs text-gray-500 uppercase tracking-wide">Expenses</div>
              <div class="text-xl font-semibold text-gray-900"><%= number_to_currency(@show_financials.calculated_expenses) %></div>
            </div>
          </div>

          <div class="mt-4 pt-4 border-t border-gray-200">
            <%
              # Calculate financial health metrics
              gross_revenue = @show_financials.total_revenue
              net_revenue = @show_financials.net_revenue
              total_expenses = @show_financials.calculated_expenses
              expense_ratio = gross_revenue > 0 ? (total_expenses / gross_revenue * 100).round(1) : 0
              profit_margin = gross_revenue > 0 ? (net_revenue / gross_revenue * 100).round(1) : 0
            %>
            <div class="grid grid-cols-2 sm:grid-cols-4 gap-4 mb-4">
              <div>
                <div class="text-xs text-gray-500 uppercase tracking-wide">Gross Revenue</div>
                <div class="text-lg font-semibold text-gray-900"><%= number_to_currency(gross_revenue) %></div>
              </div>
              <div>
                <div class="text-xs text-gray-500 uppercase tracking-wide">Total Expenses</div>
                <div class="text-lg font-semibold text-red-600"><%= number_to_currency(total_expenses) %></div>
              </div>
              <div>
                <div class="text-xs text-gray-500 uppercase tracking-wide">Net Revenue</div>
                <div class="text-lg font-semibold <%= net_revenue >= 0 ? 'text-green-600' : 'text-red-600' %>"><%= number_to_currency(net_revenue) %></div>
              </div>
              <div>
                <div class="text-xs text-gray-500 uppercase tracking-wide">Profit Margin</div>
                <div class="text-lg font-semibold <%= profit_margin >= 0 ? 'text-green-600' : 'text-red-600' %>"><%= profit_margin %>%</div>
              </div>
            </div>

            <% if expense_ratio > 0 || @show_payout.total_payout.to_f > 0 %>
              <div class="grid grid-cols-2 sm:grid-cols-3 gap-4 pt-3 border-t border-gray-100">
                <% if expense_ratio > 0 %>
                  <div>
                    <div class="text-xs text-gray-500 uppercase tracking-wide">Expense Ratio</div>
                    <div class="text-sm font-medium text-gray-700"><%= expense_ratio %>% of revenue</div>
                  </div>
                <% end %>
                <% if @show_payout.total_payout.to_f > 0 %>
                  <div>
                    <div class="text-xs text-gray-500 uppercase tracking-wide">Total Payouts</div>
                    <div class="text-sm font-medium text-gray-700"><%= number_to_currency(@show_payout.total_payout) %></div>
                  </div>
                  <div>
                    <div class="text-xs text-gray-500 uppercase tracking-wide">Retained</div>
                    <% retained = net_revenue - @show_payout.total_payout.to_f %>
                    <div class="text-sm font-medium <%= retained >= 0 ? 'text-gray-700' : 'text-red-600' %>"><%= number_to_currency(retained) %></div>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-6">
            <p class="text-gray-500 mb-3">Enter ticket sales and revenue data to calculate payouts.</p>
            <%= link_to manage_production_edit_financials_money_show_payout_path(@production, @show) do %>
              <%= render "shared/button", text: "Enter Financial Data", variant: "primary", size: "small" %>
            <% end %>
          </div>
        <% end %>
      </div>

      <!-- Payout Breakdown -->
      <div class="bg-white rounded-lg border border-gray-200 p-5" data-controller="payment-actions">
        <div class="flex items-center justify-between mb-4">
          <h3 class="font-semibold text-gray-900">Payout Breakdown</h3>
          <% if @show_payout.total_payout %>
            <span class="text-lg font-semibold text-pink-600">Total: <%= number_to_currency(@show_payout.total_payout) %></span>
          <% end %>
        </div>

        <% if has_line_items %>
          <%
            unpaid_count = @line_items.count { |li| !li.manually_paid? }
            paid_count = @line_items.count { |li| li.manually_paid? }
            stripe_ready_count = @line_items.count { |li| li.payee_stripe_ready? }
            needs_setup_count = @line_items.count { |li| !li.payee_stripe_ready? && !li.manually_paid? }
          %>

          <!-- Payment Summary Bar -->
          <% if @show_payout.approved? && unpaid_count > 0 %>
            <div class="bg-gray-50 rounded-lg p-4 mb-4">
              <div class="flex items-center justify-between flex-wrap gap-3">
                <div class="flex items-center gap-4 text-sm">
                  <span class="text-gray-600">
                    <span class="font-semibold text-gray-900"><%= paid_count %></span> paid
                  </span>
                  <span class="text-gray-600">
                    <span class="font-semibold text-amber-600"><%= unpaid_count %></span> pending
                  </span>
                  <% if needs_setup_count > 0 %>
                    <span class="text-gray-600">
                      <span class="font-semibold text-red-600"><%= needs_setup_count %></span> need payment setup
                    </span>
                  <% end %>
                </div>
                <div class="flex items-center gap-2">
                  <% if needs_setup_count > 0 %>
                    <%= form_with url: manage_production_send_payment_reminders_money_show_payout_path(@production, @show), method: :post, local: true, class: "inline" do %>
                      <%= render "shared/button", text: "Send Reminders", variant: "secondary", size: "small", type: :submit %>
                    <% end %>
                  <% end %>
                  <button type="button"
                          data-action="click->payment-actions#showBulkModal"
                          class="inline-flex items-center px-3 py-1.5 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50">
                    Mark All Offline
                  </button>
                </div>
              </div>
            </div>
          <% end %>

          <div class="overflow-x-auto">
            <table class="w-full">
              <thead>
                <tr class="border-b border-gray-200">
                  <th class="text-left text-xs font-medium text-gray-500 uppercase tracking-wide py-2">Payee</th>
                  <th class="text-right text-xs font-medium text-gray-500 uppercase tracking-wide py-2">Amount</th>
                  <th class="text-left text-xs font-medium text-gray-500 uppercase tracking-wide py-2 pl-4">Calculation</th>
                  <% if @show_payout.approved? || @show_payout.paid? %>
                    <th class="text-right text-xs font-medium text-gray-500 uppercase tracking-wide py-2">Status</th>
                  <% end %>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-100">
                <% @line_items.each do |item| %>
                  <tr class="<%= item.manually_paid? ? 'bg-green-50' : '' %>">
                    <td class="py-3">
                      <div class="flex items-center gap-2">
                        <% headshot_variant = item.payee.respond_to?(:safe_headshot_variant) ? item.payee.safe_headshot_variant(:thumb) : nil %>
                        <% if headshot_variant %>
                          <%= image_tag headshot_variant, alt: item.payee_name, class: "w-8 h-8 rounded-lg object-cover" %>
                        <% else %>
                          <div class="w-8 h-8 rounded-lg bg-pink-100 flex items-center justify-center text-pink-600 font-medium text-sm">
                            <%= item.payee_name[0].upcase %>
                          </div>
                        <% end %>
                        <div>
                          <div class="font-medium text-gray-900"><%= item.payee_name %></div>
                          <div class="text-xs text-gray-500 flex items-center gap-1">
                            <%= item.payee_type_label %>
                            <% if item.payee_stripe_ready? %>
                              <span class="inline-flex items-center" title="Stripe connected">
                                <svg class="w-3 h-3 text-purple-500" viewBox="0 0 24 24" fill="currentColor">
                                  <path d="M13.976 9.15c-2.172-.806-3.356-1.426-3.356-2.409 0-.831.683-1.305 1.901-1.305 2.227 0 4.515.858 6.09 1.631l.89-5.494C18.252.975 15.697 0 12.165 0 9.667 0 7.589.654 6.104 1.872 4.56 3.147 3.757 4.992 3.757 7.218c0 4.039 2.467 5.76 6.476 7.219 2.585.92 3.445 1.574 3.445 2.583 0 .98-.84 1.545-2.354 1.545-1.875 0-4.965-.921-6.99-2.109l-.9 5.555C5.175 22.99 8.385 24 11.714 24c2.641 0 4.843-.624 6.328-1.813 1.664-1.305 2.525-3.236 2.525-5.732 0-4.128-2.524-5.851-6.591-7.305z"/>
                                </svg>
                              </span>
                            <% end %>
                          </div>
                        </div>
                      </div>
                    </td>
                    <td class="py-3 text-right">
                      <span class="font-semibold <%= item.manually_paid? ? 'text-green-700' : 'text-gray-900' %>"><%= number_to_currency(item.amount) %></span>
                    </td>
                    <td class="py-3 pl-4">
                      <span class="text-sm text-gray-500"><%= item.calculation_explanation %></span>
                    </td>
                    <% if @show_payout.approved? || @show_payout.paid? %>
                      <td class="py-3 text-right">
                        <% if item.manually_paid? %>
                          <div class="flex items-center justify-end gap-2">
                            <div class="text-right">
                              <span class="inline-flex items-center rounded-md px-2 py-0.5 text-xs font-medium bg-green-100 text-green-700">
                                <%= item.payment_method_label || "Paid" %>
                              </span>
                              <% if item.paid_at %>
                                <div class="text-xs text-gray-400 mt-0.5"><%= item.paid_at.strftime("%b %-d") %></div>
                              <% end %>
                            </div>
                            <% unless @show_payout.paid? %>
                              <%= button_to manage_production_unmark_line_item_paid_money_show_payout_path(@production, @show, item),
                                  method: :delete,
                                  class: "text-gray-400 hover:text-gray-600",
                                  title: "Unmark as paid",
                                  data: { turbo_confirm: "Unmark #{item.payee_name} as paid?" } do %>
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                                </svg>
                              <% end %>
                            <% end %>
                          </div>
                        <% else %>
                          <div class="relative inline-block" data-controller="dropdown">
                            <button type="button"
                                    data-action="click->dropdown#toggle"
                                    class="text-xs text-gray-500 hover:text-gray-700 underline cursor-pointer">
                              Mark as paid
                            </button>
                            <div data-dropdown-target="menu"
                                 class="hidden absolute right-0 mt-1 w-48 bg-white border border-gray-200 rounded-lg shadow-lg z-10">
                              <div class="py-1">
                                <% ShowPayoutLineItem::PAYMENT_METHODS.reject { |m| m == "stripe" }.each do |method| %>
                                  <%= button_to manage_production_mark_line_item_paid_money_show_payout_path(@production, @show, item, payment_method: method),
                                      method: :post,
                                      class: "block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100",
                                      data: { turbo_confirm: "Mark #{item.payee_name} as paid via #{method.titleize}?" } do %>
                                    <%= method.titleize %>
                                  <% end %>
                                <% end %>
                              </div>
                            </div>
                          </div>
                        <% end %>
                      </td>
                    <% end %>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>

          <!-- Bulk Mark Offline Modal -->
          <div data-payment-actions-target="bulkModal"
               class="hidden fixed inset-0 bg-black/50 z-50 flex items-center justify-center">
            <div class="bg-white rounded-lg shadow-xl max-w-md w-full mx-4 p-6">
              <h3 class="text-lg font-semibold text-gray-900 mb-4">Mark All as Paid Offline</h3>
              <p class="text-sm text-gray-600 mb-4">This will mark all unpaid performers as paid via the selected method. Use this for historical records or when payments were made outside of CocoScout.</p>
              <%= form_with url: manage_production_mark_all_offline_money_show_payout_path(@production, @show), method: :post, local: true do |f| %>
                <div class="mb-4">
                  <label class="block text-sm font-medium text-gray-700 mb-1">Payment Method</label>
                  <select name="payment_method" class="w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500">
                    <option value="historical">Historical (pre-CocoScout)</option>
                    <option value="cash">Cash</option>
                    <option value="venmo">Venmo</option>
                    <option value="zelle">Zelle</option>
                    <option value="paypal">PayPal</option>
                    <option value="check">Check</option>
                    <option value="other">Other</option>
                  </select>
                </div>
                <div class="mb-4">
                  <label class="block text-sm font-medium text-gray-700 mb-1">Notes (optional)</label>
                  <input type="text" name="payment_notes" class="w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500" placeholder="e.g., Paid at venue after show">
                </div>
                <div class="flex items-center justify-end gap-3">
                  <button type="button"
                          data-action="click->payment-actions#hideBulkModal"
                          class="px-4 py-2 text-sm font-medium text-gray-700 hover:text-gray-900">
                    Cancel
                  </button>
                  <%= render "shared/button", text: "Mark All Paid", variant: "primary", size: "medium", type: :submit %>
                </div>
              <% end %>
            </div>
          </div>
        <% elsif has_financials %>
          <div class="text-center py-6">
            <p class="text-gray-500 mb-3">Ready to calculate payouts based on the financial data.</p>
            <%= form_with url: manage_production_calculate_money_show_payout_path(@production, @show), method: :post, local: true do %>
              <%= render "shared/button", text: "Calculate Payouts", variant: "primary", size: "medium", type: :submit %>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-6">
            <p class="text-gray-500">Enter financial data first to calculate payouts.</p>
          </div>
        <% end %>
      </div>

    </div>

    <!-- Sidebar -->
    <div class="space-y-4">

      <!-- Scheme Info -->
      <div class="bg-white rounded-lg border border-gray-200 p-5">
        <h4 class="text-sm font-medium text-gray-700 mb-2">Payout Scheme</h4>
        <% if @show_payout.has_overrides? %>
          <div class="flex items-center gap-2 text-amber-600 mb-2">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a.75.75 0 000 1.5h.253a.25.25 0 01.244.304l-.459 2.066A1.75 1.75 0 0010.747 15H11a.75.75 0 000-1.5h-.253a.25.25 0 01-.244-.304l.459-2.066A1.75 1.75 0 009.253 9H9z" clip-rule="evenodd"/>
            </svg>
            <span class="text-sm font-medium">Custom Rules</span>
          </div>
          <p class="text-sm text-gray-600 mb-3">This show has custom payout rules.</p>
          <% if @show_payout.can_edit? %>
            <div class="space-y-2">
              <%= link_to manage_production_override_money_show_payout_path(@production, @show) do %>
                <%= render "shared/button", text: "Edit Custom Rules", variant: "secondary", size: "small", classes: "w-full" %>
              <% end %>
              <%= form_with url: clear_manage_production_override_money_show_payout_path(@production, @show), method: :delete, local: true do %>
                <%= render "shared/button", text: "Use Default Scheme", variant: "ghost", size: "small", classes: "w-full", type: :submit %>
              <% end %>
            </div>
          <% end %>
        <% elsif @show_payout.payout_scheme %>
          <div class="font-medium text-gray-900"><%= @show_payout.payout_scheme.name %></div>
          <p class="text-sm text-gray-500 mt-1"><%= @show_payout.payout_scheme.rules_summary %></p>
          <% if @show_payout.can_edit? %>
            <div class="mt-3">
              <%= link_to manage_production_override_money_show_payout_path(@production, @show) do %>
                <%= render "shared/button", text: "Customize for this show", variant: "secondary", size: "small", classes: "w-full" %>
              <% end %>
            </div>
          <% end %>
        <% else %>
          <%
            available_schemes = @production.payout_schemes.order(:name)
          %>
          <% if available_schemes.any? %>
            <p class="text-sm text-gray-500 mb-3">Select a scheme to use for this show's payouts.</p>
            <%= form_with model: @show_payout, url: manage_production_money_show_payout_path(@production, @show), method: :patch, local: true do |f| %>
              <div class="space-y-3">
                <%= f.select :payout_scheme_id,
                    options_from_collection_for_select(available_schemes, :id, :name),
                    { prompt: "Choose a scheme..." },
                    class: "w-full rounded-lg border border-gray-300 px-3 py-2 text-sm focus:border-pink-500 focus:ring-pink-500" %>
                <%= render "shared/button", text: "Set Scheme", variant: "primary", size: "small", classes: "w-full", type: :submit %>
              </div>
            <% end %>
          <% else %>
            <p class="text-sm text-gray-500 mb-3">No payout schemes available. Create one to calculate payouts.</p>
            <%= link_to manage_production_presets_money_payout_schemes_path(@production) do %>
              <%= render "shared/button", text: "Create a Scheme", variant: "primary", size: "small", classes: "w-full" %>
            <% end %>
          <% end %>
        <% end %>
      </div>

      <!-- Actions -->
      <div class="bg-white rounded-lg border border-gray-200 p-5 space-y-3">
        <% if @show_payout.draft? %>
          <% if has_line_items %>
            <%= form_with url: manage_production_approve_money_show_payout_path(@production, @show), method: :post, local: true do %>
              <%= render "shared/button", text: "Approve Payout", variant: "primary", size: "small", classes: "w-full", type: :submit %>
            <% end %>
          <% end %>

          <% if has_financials %>
            <%= form_with url: manage_production_calculate_money_show_payout_path(@production, @show), method: :post, local: true do %>
              <%= render "shared/button", text: has_line_items ? "Recalculate" : "Calculate", variant: "secondary", size: "small", classes: "w-full", type: :submit %>
            <% end %>
          <% end %>

        <% elsif @show_payout.approved? %>
          <%= form_with url: manage_production_mark_paid_money_show_payout_path(@production, @show), method: :post, local: true do %>
            <%= render "shared/button", text: "Mark as Paid", variant: "primary", size: "small", classes: "w-full", type: :submit %>
          <% end %>
          <%= form_with url: manage_production_revert_to_draft_money_show_payout_path(@production, @show), method: :post, local: true, data: { turbo_confirm: "This will unlock the payout for editing. Continue?" } do %>
            <%= render "shared/button", text: "Revert to Draft", variant: "ghost", size: "small", classes: "w-full", type: :submit %>
          <% end %>

        <% elsif @show_payout.paid? %>
          <div class="text-center">
            <div class="text-green-600 font-medium mb-1">âœ“ Paid</div>
            <% if @show_payout.approved_at %>
              <div class="text-xs text-gray-500">
                Approved <%= time_ago_in_words(@show_payout.approved_at) %> ago
                <% if @show_payout.approved_by %>
                  by <%= @show_payout.approved_by.person&.name || @show_payout.approved_by.email_address %>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>

      <!-- Cast Summary -->
      <div class="bg-white rounded-lg border border-gray-200 p-5">
        <h4 class="text-sm font-medium text-gray-700 mb-2">Cast for This Show</h4>
        <%
          assignments = @show.show_person_role_assignments.includes(:assignable, :role)
          performer_count = assignments.count
        %>
        <div class="text-2xl font-semibold text-gray-900"><%= performer_count %></div>
        <div class="text-sm text-gray-500">performer<%= performer_count == 1 ? '' : 's' %> assigned</div>
      </div>

    </div>

  </div>
</div>
