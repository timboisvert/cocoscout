<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Email Logs</h1>
    <%= link_to "â† Back to God Mode", god_mode_path, class: "text-blue-600 hover:text-blue-800" %>
  </div>

  <!-- Filter form -->
  <div class="bg-white shadow rounded-lg p-4 mb-6">
    <%= form_with url: email_logs_path, method: :get, class: "flex gap-4 items-end" do |f| %>
      <div class="flex-1">
        <%= f.label :user_id, "Filter by User ID", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :user_id, value: params[:user_id], placeholder: "Enter user ID", class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <div class="flex-1">
        <%= f.label :recipient, "Filter by Recipient", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :recipient, value: params[:recipient], placeholder: "Enter email address", class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <div class="flex gap-2">
        <%= f.submit "Filter", class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
        <%= link_to "Clear", email_logs_path, class: "px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300" %>
      </div>
    <% end %>
  </div>

  <!-- Email logs table -->
  <div class="bg-white shadow rounded-lg overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Sent At</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">User</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Recipient</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Subject</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Mailer</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @email_logs.each do |log| %>
          <tr class="hover:bg-gray-50 cursor-pointer" onclick="window.location='<%= email_log_path(log) %>'">
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= log.sent_at&.strftime("%Y-%m-%d %H:%M:%S") || "Not sent" %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= link_to log.user.email_address, email_logs_path(user_id: log.user.id), class: "text-blue-600 hover:text-blue-800", onclick: "event.stopPropagation()" %>
              <div class="text-xs text-gray-500">ID: <%= log.user.id %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= log.recipient %>
            </td>
            <td class="px-6 py-4 text-sm text-gray-900">
              <div class="max-w-md truncate" title="<%= log.subject %>">
                <%= log.subject || "(no subject)" %>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <div class="text-xs">
                <div><%= log.mailer_class %></div>
                <div class="text-gray-500"><%= log.mailer_action %></div>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% case log.delivery_status %>
              <% when "sent" %>
                <span class="px-2 py-1 text-xs rounded-full bg-green-100 text-green-800">Sent</span>
              <% when "delivered" %>
                <span class="px-2 py-1 text-xs rounded-full bg-blue-100 text-blue-800">Delivered</span>
              <% when "failed" %>
                <span class="px-2 py-1 text-xs rounded-full bg-red-100 text-red-800">Failed</span>
              <% else %>
                <span class="px-2 py-1 text-xs rounded-full bg-gray-100 text-gray-800"><%= log.delivery_status %></span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <% if @email_logs.empty? %>
      <div class="text-center py-12 text-gray-500">
        No email logs found.
      </div>
    <% end %>
  </div>

  <div class="mt-4 text-sm text-gray-600">
    Showing <%= @email_logs.count %> most recent emails
    <% if params[:user_id].present? || params[:recipient].present? %>
      (filtered)
    <% end %>
  </div>
</div>
