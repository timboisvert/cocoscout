                                  <%= link_to manage_money_advance_path(advance.production, advance),
                                      class: "inline-flex items-center gap-1 px-1.5 py-0.5 rounded text-[10px] font-medium bg-pink-100 text-pink-700 hover:bg-pink-200" do %>
