<% content_for :title, "Sync Rules" %>

<%= render partial: "shared/top_menu", locals: {
  breadcrumbs: [
    ["Ticketing", manage_ticketing_index_path]
  ],
  text: "Sync Rules",
  links: [
    { text: "Add Sync Rule", path: manage_new_ticket_sync_rule_path }
  ]
} %>

<div class="w-full">
  <%= render partial: "shared/notice", locals: { notice: notice, alert: alert } %>

  <% if @rules.any? %>
    <div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Rule</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Provider</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Interval</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Next Sync</th>
            <th class="px-6 py-3"></th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @rules.each do |rule| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 font-medium text-gray-900"><%= rule.name %></td>
              <td class="px-6 py-4 text-gray-500"><%= rule.ticketing_provider.name %></td>
              <td class="px-6 py-4">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  <%= rule.rule_type.titleize %>
                </span>
              </td>
              <td class="px-6 py-4 text-gray-500">Every <%= rule.sync_interval_minutes %> min</td>
              <td class="px-6 py-4">
                <% if rule.active? %>
                  <span class="inline-flex items-center text-green-600">
                    <span class="w-2 h-2 rounded-full bg-green-500 mr-2"></span>
                    Active
                  </span>
                <% else %>
                  <span class="inline-flex items-center text-gray-400">
                    <span class="w-2 h-2 rounded-full bg-gray-400 mr-2"></span>
                    Inactive
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4 text-gray-500">
                <% if rule.next_sync_at && rule.active? %>
                  <% if rule.next_sync_at <= Time.current %>
                    <span class="text-yellow-600">Due now</span>
                  <% else %>
                    in <%= time_ago_in_words(rule.next_sync_at) %>
                  <% end %>
                <% else %>
                  â€”
                <% end %>
              </td>
              <td class="px-6 py-4 text-right">
                <%= link_to "View", manage_ticket_sync_rule_path(rule), class: "text-pink-600 hover:text-pink-800" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="bg-gray-50 rounded-lg border border-dashed border-gray-300 p-8 text-center">
      <p class="text-gray-600 mb-4">No sync rules yet. Create one to automatically sync ticket data.</p>
      <%= link_to manage_new_ticket_sync_rule_path do %>
        <%= render "shared/button", text: "Add Sync Rule", variant: "primary", size: "medium" %>
      <% end %>
    </div>
  <% end %>
</div>
