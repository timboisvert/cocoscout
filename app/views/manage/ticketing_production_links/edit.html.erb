<%= render partial: "shared/top_menu", locals: {
  breadcrumbs: [
    ["Money", manage_money_index_path],
    ["Financials", manage_money_production_financials_path(@production)],
    [@production.name, manage_money_production_financials_path(@production)],
    ["Ticketing", manage_money_ticketing_production_links_path(@production)],
    [@ticketing_production_link.provider_event_name || "Link", manage_money_ticketing_production_link_path(@production, @ticketing_production_link)]
  ],
  text: "Edit Ticketing Link"
} %>

<div class="max-w-2xl mx-auto px-4 py-6">
  <div class="bg-white shadow rounded-lg p-6">
    <%= form_with model: @ticketing_production_link,
                 url: manage_money_ticketing_production_link_path(@production, @ticketing_production_link),
                 method: :patch, class: "space-y-6" do |f| %>
      <% if @ticketing_production_link.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
          <ul class="text-sm text-red-700 list-disc list-inside">
            <% @ticketing_production_link.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <label class="block text-sm font-medium text-gray-700">Platform</label>
        <p class="text-sm text-gray-900 mt-1"><%= @provider.name %></p>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700">Event ID</label>
        <p class="text-sm text-gray-900 mt-1 font-mono">
          <%= @ticketing_production_link.provider_event_id %>
        </p>
        <p class="text-xs text-gray-500">Cannot be changed after creation</p>
      </div>

      <div>
        <label for="ticketing_production_link_provider_event_name" class="block text-sm font-medium text-gray-700">
          Event Name
        </label>
        <%= f.text_field :provider_event_name,
                        class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-pink-500 focus:ring-pink-500" %>
      </div>

      <div>
        <label for="ticketing_production_link_provider_event_url" class="block text-sm font-medium text-gray-700">
          Dashboard URL (optional)
        </label>
        <%= f.url_field :provider_event_url,
                       placeholder: "https://...",
                       class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-pink-500 focus:ring-pink-500" %>
      </div>

      <div class="border-t pt-6">
        <h4 class="text-sm font-medium text-gray-700 mb-3">Sync Settings</h4>

        <div class="space-y-3">
          <label class="flex items-center">
            <%= f.check_box :sync_ticket_sales,
                           class: "h-4 w-4 text-pink-600 border-gray-300 rounded focus:ring-pink-500 accent-pink-600" %>
            <span class="ml-2 text-sm text-gray-700">Sync ticket sales data</span>
          </label>

          <label class="flex items-center">
            <%= f.check_box :sync_enabled,
                           class: "h-4 w-4 text-pink-600 border-gray-300 rounded focus:ring-pink-500 accent-pink-600" %>
            <span class="ml-2 text-sm text-gray-700">Enable sync for this production</span>
          </label>
        </div>
      </div>

      <div class="flex items-center justify-end space-x-3 pt-4 border-t">
        <%= link_to "Cancel", manage_money_ticketing_production_link_path(@production, @ticketing_production_link),
                   class: "text-sm text-gray-500 hover:text-gray-700" %>
        <%= f.submit "Save Changes", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-pink-600 hover:bg-pink-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-pink-500 cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
