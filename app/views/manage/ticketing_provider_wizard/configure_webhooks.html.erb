<% content_for :title, "Configure Webhooks" %>

<div class="w-full mb-10">
  <%= render partial: "shared/notice", locals: { notice: notice, alert: alert } %>
  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Ticketing", manage_ticketing_index_path],
      ["Providers", manage_ticketing_providers_path],
      ["Connect", manage_ticketing_provider_wizard_select_path]
    ],
    text: "Configure Webhooks",
    links: []
  } %>

  <div class="max-w-3xl mx-auto mt-8">
    <!-- Progress indicator -->
    <div class="mb-8">
      <div class="flex items-center justify-center gap-4">
        <div class="flex items-center gap-2">
          <div class="w-8 h-8 rounded-full bg-green-500 text-white flex items-center justify-center text-sm font-medium">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
          </div>
          <span class="text-sm text-gray-500">Select Platform</span>
        </div>
        <div class="w-8 h-px bg-gray-300"></div>
        <div class="flex items-center gap-2">
          <div class="w-8 h-8 rounded-full bg-green-500 text-white flex items-center justify-center text-sm font-medium">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
          </div>
          <span class="text-sm text-gray-500">Enter Credentials</span>
        </div>
        <div class="w-8 h-px bg-gray-300"></div>
        <div class="flex items-center gap-2">
          <div class="w-8 h-8 rounded-full bg-pink-600 text-white flex items-center justify-center text-sm font-medium">3</div>
          <span class="text-sm font-medium text-pink-600">Configure Webhooks</span>
        </div>
        <div class="w-8 h-px bg-gray-300"></div>
        <div class="flex items-center gap-2">
          <div class="w-8 h-8 rounded-full bg-gray-200 text-gray-500 flex items-center justify-center text-sm font-medium">4</div>
          <span class="text-sm text-gray-500">Test & Complete</span>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-5 gap-8">
      <!-- Instructions sidebar -->
      <div class="lg:col-span-2 space-y-6">
        <% if @provider.provider_type == "ticket_tailor" %>
          <div class="bg-blue-50 border border-blue-200 rounded-lg p-5">
            <h3 class="font-semibold text-blue-900 mb-3 flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              Setting Up Webhooks
            </h3>
            <ol class="text-sm text-blue-800 space-y-3">
              <li class="flex gap-2">
                <span class="font-bold text-blue-600">1.</span>
                <span>Go to <strong>Settings</strong> → <strong>Webhooks</strong> in Ticket Tailor</span>
              </li>
              <li class="flex gap-2">
                <span class="font-bold text-blue-600">2.</span>
                <span>Click <strong>"Create New Webhook"</strong></span>
              </li>
              <li class="flex gap-2">
                <span class="font-bold text-blue-600">3.</span>
                <span>Paste the URL shown below</span>
              </li>
              <li class="flex gap-2">
                <span class="font-bold text-blue-600">4.</span>
                <span>Select events to listen for:</span>
              </li>
            </ol>
            <ul class="mt-2 ml-6 text-sm text-blue-700 list-disc list-inside">
              <li>order.completed</li>
              <li>order.refunded</li>
              <li>event.published</li>
              <li>event.updated</li>
            </ul>
            <ol class="text-sm text-blue-800 space-y-3 mt-3" start="5">
              <li class="flex gap-2">
                <span class="font-bold text-blue-600">5.</span>
                <span>Click <strong>"Show Signing Secret"</strong> and copy it</span>
              </li>
              <li class="flex gap-2">
                <span class="font-bold text-blue-600">6.</span>
                <span>Paste the signing secret below</span>
              </li>
            </ol>
          </div>

          <div class="bg-green-50 border border-green-200 rounded-lg p-5">
            <h4 class="font-semibold text-green-800 mb-2 flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
              </svg>
              Why Signing Secret?
            </h4>
            <p class="text-sm text-green-700">
              The signing secret is used to verify that webhook requests actually come from Ticket Tailor, 
              protecting your account from unauthorized requests.
            </p>
          </div>

          <div class="text-sm text-gray-500">
            <a href="https://developers.tickettailor.com/#webhooks" target="_blank" class="text-pink-600 hover:text-pink-700 flex items-center gap-1">
              Ticket Tailor Webhooks Documentation
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
              </svg>
            </a>
          </div>
        <% else %>
          <!-- Eventbrite webhooks -->
          <div class="bg-blue-50 border border-blue-200 rounded-lg p-5">
            <h3 class="font-semibold text-blue-900 mb-3 flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              Setting Up Webhooks
            </h3>
            <ol class="text-sm text-blue-800 space-y-3">
              <li class="flex gap-2">
                <span class="font-bold text-blue-600">1.</span>
                <span>Go to your <a href="https://www.eventbrite.com/account-settings/webhooks" target="_blank" class="underline">Eventbrite Webhooks settings</a></span>
              </li>
              <li class="flex gap-2">
                <span class="font-bold text-blue-600">2.</span>
                <span>Click <strong>"Add Webhook"</strong></span>
              </li>
              <li class="flex gap-2">
                <span class="font-bold text-blue-600">3.</span>
                <span>Paste the webhook URL shown below</span>
              </li>
              <li class="flex gap-2">
                <span class="font-bold text-blue-600">4.</span>
                <span>Select these actions:</span>
              </li>
            </ol>
            <ul class="mt-2 ml-6 text-sm text-blue-700 list-disc list-inside">
              <li>order.placed</li>
              <li>order.refunded</li>
              <li>event.published</li>
              <li>event.updated</li>
            </ul>
          </div>

          <div class="bg-amber-50 border border-amber-200 rounded-lg p-5">
            <h4 class="font-semibold text-amber-800 mb-2 flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              Optional for Eventbrite
            </h4>
            <p class="text-sm text-amber-700">
              Eventbrite webhook verification is optional. If you don't enter a secret, 
              we'll still accept webhooks but won't validate the signature.
            </p>
          </div>
        <% end %>
      </div>

      <!-- Form -->
      <div class="lg:col-span-3">
        <div class="bg-white rounded-lg border border-gray-200 shadow-sm p-6 space-y-6">
          <!-- Webhook URL to configure -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Your Webhook URL</label>
            <div class="flex items-center gap-2">
              <div class="flex-1 bg-gray-50 border border-gray-300 rounded-lg px-4 py-3 font-mono text-sm text-gray-700 break-all">
                <%= @webhook_url %>
              </div>
              <button type="button" 
                      onclick="navigator.clipboard.writeText('<%= @webhook_url %>'); this.textContent = 'Copied!'; setTimeout(() => this.textContent = 'Copy', 2000);"
                      class="flex-shrink-0 px-4 py-3 bg-gray-100 hover:bg-gray-200 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 transition-colors">
                Copy
              </button>
            </div>
            <p class="text-xs text-gray-500 mt-2">Copy this URL and add it as a webhook in your <%= @provider.provider_type == "ticket_tailor" ? "Ticket Tailor" : "Eventbrite" %> settings.</p>
          </div>

          <%= form_with model: @provider, url: manage_ticketing_provider_wizard_configure_webhooks_path, method: :post, class: "space-y-6" do |form| %>
            <% if @provider.errors.any? %>
              <div class="bg-red-50 border border-red-200 rounded-lg p-4">
                <ul class="list-disc list-inside text-red-700 text-sm">
                  <% @provider.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">
                Webhook Signing Secret
                <% if @provider.provider_type == "eventbrite" %>
                  <span class="font-normal text-gray-500">(optional)</span>
                <% end %>
              </label>
              <%= form.text_field :webhook_secret, 
                class: "w-full rounded-lg border border-gray-300 px-4 py-3 focus:border-pink-500 focus:ring-pink-500 font-mono text-sm", 
                placeholder: "Paste your signing secret here",
                required: @provider.provider_type == "ticket_tailor",
                autocomplete: "off" %>
              <p class="text-xs text-gray-500 mt-1">
                <% if @provider.provider_type == "ticket_tailor" %>
                  Found by clicking "Show Signing Secret" in your webhook settings
                <% else %>
                  Found in your Eventbrite webhook configuration
                <% end %>
              </p>
            </div>

            <div class="pt-4 flex items-center justify-between border-t border-gray-200">
              <button type="button" 
                      onclick="window.location.href='<%= manage_ticketing_provider_wizard_test_connection_path %>'"
                      class="text-sm text-gray-500 hover:text-gray-700">
                Skip for now →
              </button>
              <%= render "shared/button", text: "Continue →", variant: "primary", size: "medium", type: :submit %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
