<% voting_step = @wizard_state[:allow_in_person_auditions] ? 6 : 5 %>
<%= render layout: "manage/audition_cycle_wizard/wizard_layout", locals: { current_step: voting_step, step_name: "Voting" } do %>
  <h2 class="text-xl font-bold text-gray-900 mb-2 coustard-regular">Enable voting?</h2>
  <p class="text-gray-600 mb-6">Allow reviewers to vote on submissions to help with casting decisions.</p>

  <%= form_with url: manage_audition_wizard_production_save_voting_path(@production), method: :post, local: true do |form| %>
    <div class="space-y-4">
      <!-- Vote on Submissions -->
      <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg border border-gray-200">
        <div class="flex-1 mr-4">
          <p class="font-medium text-gray-900">Vote on Sign-ups</p>
          <p class="text-sm text-gray-500 mt-1">Reviewers can vote yes/no/maybe on each submission</p>
        </div>
        <label class="relative inline-flex items-center cursor-pointer">
          <input type="hidden" name="voting_enabled" value="0">
          <input type="checkbox" name="voting_enabled" value="1"
                 <%= "checked" if @wizard_state[:voting_enabled].nil? || @wizard_state[:voting_enabled] %>
                 class="sr-only peer">
          <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-pink-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-pink-500"></div>
        </label>
      </div>

      <!-- Vote on Auditions (only if in-person enabled) -->
      <% if @wizard_state[:allow_in_person_auditions] %>
        <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg border border-gray-200">
          <div class="flex-1 mr-4">
            <p class="font-medium text-gray-900">Vote on Scheduled Auditions</p>
            <p class="text-sm text-gray-500 mt-1">Reviewers can vote after watching live auditions</p>
          </div>
          <label class="relative inline-flex items-center cursor-pointer">
            <input type="hidden" name="audition_voting_enabled" value="0">
            <input type="checkbox" name="audition_voting_enabled" value="1"
                   <%= "checked" if @wizard_state[:audition_voting_enabled].nil? || @wizard_state[:audition_voting_enabled] %>
                   class="sr-only peer">
            <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-pink-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-pink-500"></div>
          </label>
        </div>
      <% end %>
    </div>

    <div class="mt-8 flex justify-between">
      <%= link_to manage_audition_wizard_production_reviewers_path(@production), class: "inline-flex items-center text-gray-600 hover:text-gray-900" do %>
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back
      <% end %>
      <%= render "shared/button", text: "Next", variant: "primary", size: "medium", type: :submit %>
    </div>
  <% end %>
<% end %>
