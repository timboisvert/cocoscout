<% content_for :title, "Questionnaires - #{@production.name}" %>

<div class="w-full mb-10">
  <%= render partial: "shared/notice", locals: { notice: notice } %>
  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [],
    text: "Questionnaires",
    links: [
      {text: "Create a Questionnaire", path: new_manage_production_questionnaire_path(@production)}
    ]
  } %>

  <%= render "shared/filters/filter_bar", filter_groups: [
    {
      label: "View",
      filters: [
        { text: "All", path: manage_production_questionnaires_path(@production, filter: "all"), active: @filter == "all" },
        { text: "Accepting Responses", path: manage_production_questionnaires_path(@production, filter: "accepting"), active: @filter == "accepting" },
        { text: "Archived", path: manage_production_questionnaires_path(@production, filter: "archived"), active: @filter == "archived" }
      ]
    },
    { separator: true }
  ] %>

  <% if @questionnaires.any? %>
    <div class="space-y-1">
      <% @questionnaires.each do |questionnaire| %>
        <%= link_to manage_production_questionnaire_path(@production, questionnaire), class: "block p-4 border border-gray-200 rounded-lg hover:bg-gray-50 bg-white transition-colors no-underline" do %>
          <div class="flex items-center justify-between">
            <div class="flex-1">
              <h3 class="text-md font-semibold text-gray-900"><%= questionnaire.title %></h3>
              <div class="flex items-center gap-4 mt-2 text-sm text-gray-600">
                <span>
                  <%= questionnaire.questionnaire_responses.count %> response<%= questionnaire.questionnaire_responses.count == 1 ? '' : 's' %>
                </span>
                <span>
                  <%= questionnaire.questionnaire_invitations.count %> invited
                </span>
                <% if questionnaire.archived_at.present? %>
                  <span class="inline-flex items-center rounded-md px-2 py-1 text-xs font-medium bg-gray-100 text-gray-700 ring-1 ring-inset ring-gray-600/20">
                    Archived
                  </span>
                <% else %>
                  <span class="inline-flex items-center rounded-md px-2 py-1 text-xs font-medium <%= questionnaire.accepting_responses ? 'bg-pink-50 text-pink-700 ring-1 ring-inset ring-pink-600/20' : 'bg-gray-50 text-gray-600 ring-1 ring-inset ring-gray-500/10' %>">
                    <%= questionnaire.accepting_responses ? 'Accepting Responses' : 'Not Accepting Responses' %>
                  </span>
                <% end %>
              </div>
            </div>
            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-500 text-sm">
      <% if @filter == "all" %>
          You haven't created any questionnaires.  <%= link_to "Create a questionnaire", new_manage_production_questionnaire_path(@production), class: "text-pink-500 underline" %>
      <% elsif @filter == "accepting" %>
          None of your questionnaires are currently accepting responses.
      <% elsif @filter == "archived" %>
          None of your questionnaires have been archived.
      <% end %>
    </p>
  <% end %>
</div>
