<%#
  Linkage Sync Section - Integrated into the casting progress bar
  Shows sync status between this show's cast and its linked shows.

  Parameters:
    - show: The current show
    - linked_shows: Array of linked Show objects
    - sync_info: Hash with sync status info from build_linkage_sync_info
    - production: The Production object
    - fully_cast: Boolean whether this show is 100% cast
%>

<div id="linkage-sync-section" class="mt-4 pt-4 border-t border-gray-200 lg:mt-0 lg:pt-0 lg:border-t-0 lg:border-l lg:pl-6 lg:flex-1">
  <div class="flex items-center justify-between gap-3">
    <div class="flex items-center gap-2">
      <% if sync_info[:all_in_sync] %>
        <div class="w-5 h-5 bg-green-500 rounded-full flex items-center justify-center flex-shrink-0">
          <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
          </svg>
        </div>
        <span class="text-sm text-gray-700">
          Synced with <%= linked_shows.count %> linked <%= "event".pluralize(linked_shows.count) %>
        </span>
      <% else %>
        <div class="w-5 h-5 bg-amber-500 rounded-full flex items-center justify-center flex-shrink-0">
          <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
          </svg>
        </div>
        <span class="text-sm text-gray-700">
          <%= linked_shows.count %> linked <%= "event".pluralize(linked_shows.count) %> out of sync
        </span>
      <% end %>
    </div>
    <% unless sync_info[:all_in_sync] %>
      <%= render "shared/button",
          text: "Sync Now",
          variant: "primary",
          size: "small",
          path: manage_casting_show_copy_to_linked_path(production, show_id: show.id),
          method: :post,
          data: { turbo_confirm: "This will copy this event's roles and cast to all #{linked_shows.count} linked events, replacing their current roles and assignments. Continue?" } %>
    <% end %>
  </div>
</div>
