<div data-controller="mobile-nav" class="fixed inset-x-0 top-0 z-30 border-b border-pink-100 bg-white lg:hidden">
  <div class="flex items-center justify-between px-4 py-3">
    <button type="button" data-action="mobile-nav#toggle" class="flex items-center">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 text-pink-500">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
      </svg>
    </button>
    <div class="absolute left-1/2 transform -translate-x-1/2 flex items-center gap-2">
      <%= link_to manage_path, class: "flex items-center gap-2" do %>
        <%= image_tag "/icon.png", alt: "CocoScout", class: "h-6 w-6" %>
        <span class="mt-1 text-xl text-pink-500 coustard-regular">CocoScout</span>
      <% end %>
    </div>
    <div class="w-6"></div>
  </div>

  <div data-mobile-nav-target="panel" class="hidden fixed inset-0 top-[50px] bg-white overflow-y-auto">
    <div class="px-4 py-4">

      <!-- Impersonation Banner -->
      <% if impersonating? %>
        <div class="mb-4 rounded-lg border border-yellow-300 bg-yellow-50 p-4">
          <div class="text-xs font-semibold text-yellow-800 uppercase mb-1">Impersonating</div>
          <div class="text-sm font-medium text-yellow-900 mb-3"><%= Current.user.person&.name || Current.user.email_address %></div>
          <%= button_to "Stop Impersonating", stop_impersonating_user_path, method: :post, class: "w-full rounded-lg bg-yellow-600 px-4 py-2 text-sm font-semibold text-white hover:bg-yellow-700" %>
        </div>
      <% end %>

      <!-- Production Section -->
      <% if Current.production.present? && !Current.production.new_record? %>
        <%
          # Check if user has multiple productions or can create new ones
          all_productions = Current.user.accessible_productions
          other_productions = all_productions.reject { |p| p.id == Current.production&.id }
          can_switch = other_productions.any? || Current.user.manager?
        %>
        <div class="mb-6">
          <div class="flex items-center justify-between mb-3">
            <div class="text-xs font-semibold text-gray-500 uppercase tracking-wider">Production Dashboard</div>
            <% if can_switch %>
              <%= link_to "Switch", select_production_path, class: "text-xs font-semibold text-pink-500 hover:text-pink-600" %>
            <% end %>
          </div>
          <%= link_to manage_production_path(Current.production), class: "block rounded-lg border-2 border-pink-200 bg-gradient-to-br from-pink-50 to-white p-4 hover:border-pink-300 transition mb-3" do %>
            <div class="flex items-center gap-3">
              <% logo_variant = Current.production.safe_logo_variant(:small) %>
              <% if logo_variant %>
                <%= image_tag logo_variant, alt: "#{Current.production.name} logo", class: "w-12 h-12 rounded object-cover flex-shrink-0" %>
              <% else %>
                <div class="w-12 h-12 rounded bg-pink-100 flex items-center justify-center text-pink-600 font-bold text-sm flex-shrink-0">
                  <%= Current.production.initials %>
                </div>
              <% end %>
              <div class="flex-1 min-w-0">
                <div class="text-sm font-semibold text-gray-900 truncate"><%= Current.production.name %></div>
                <div class="text-xs text-pink-600 font-medium">View Dashboard</div>
              </div>
            </div>
          <% end %>

          <div class="space-y-2">
            <%= link_to "Shows", manage_production_shows_path(Current.production), class: "block px-4 py-2.5 rounded-lg border border-gray-200 bg-white hover:bg-gray-50 transition text-sm font-medium text-gray-700" %>
            <%= link_to "Casting & Roles", manage_production_casting_path(Current.production), class: "block px-4 py-2.5 rounded-lg border border-gray-200 bg-white hover:bg-gray-50 transition text-sm font-medium text-gray-700" %>
            <%= link_to "Auditions", manage_production_auditions_path(Current.production), class: "block px-4 py-2.5 rounded-lg border border-gray-200 bg-white hover:bg-gray-50 transition text-sm font-medium text-gray-700" %>
            <%= link_to "Questionnaires", manage_production_questionnaires_path(Current.production), class: "block px-4 py-2.5 rounded-lg border border-gray-200 bg-white hover:bg-gray-50 transition text-sm font-medium text-gray-700" %>
            <%= link_to "Availability", manage_production_availability_index_path(Current.production), class: "block px-4 py-2.5 rounded-lg border border-gray-200 bg-white hover:bg-gray-50 transition text-sm font-medium text-gray-700" %>
            <%= link_to "Directory", manage_directory_path, class: "block px-4 py-2.5 rounded-lg border border-gray-200 bg-white hover:bg-gray-50 transition text-sm font-medium text-gray-700" %>
          </div>
        </div>
      <% end %>

      <!-- Organization Section -->
      <% if Current.organization.present? %>
        <div class="mb-6 pb-6 border-b border-gray-200">
          <div class="flex items-center justify-between mb-3">
            <div class="text-xs font-semibold text-gray-500 uppercase tracking-wider">Organization</div>
            <% if Current.user.organizations.count > 1 %>
              <%= link_to "Switch", select_organization_path, class: "text-xs font-semibold text-pink-500 hover:text-pink-600" %>
            <% end %>
          </div>
          <div class="rounded-lg border border-pink-200 bg-pink-50 p-4">
            <div class="text-sm font-semibold text-gray-900 mb-3"><%= Current.organization.name %></div>
            <div class="flex flex-col gap-2">
              <% if current_user_is_global_manager? %>
                <%= link_to "Manage Organization", manage_organization_path(Current.organization), class: "text-xs font-medium text-pink-600 hover:text-pink-700" %>
              <% end %>
              <%= link_to "All My Organizations", manage_organizations_path, class: "text-xs font-medium text-pink-600 hover:text-pink-700" %>
            </div>
          </div>
        </div>
      <% end %>

      <!-- User Profile Section -->
      <div class="mb-6 pb-6 border-b border-gray-200">
        <div class="flex items-center gap-3">
          <% if Current.user.person&.headshot&.attached? %>
            <%= image_tag Current.user.person.headshot, class: "w-12 h-12 rounded-lg object-cover flex-shrink-0" %>
          <% else %>
            <div class="w-12 h-12 rounded-lg bg-pink-100 text-pink-500 flex items-center justify-center font-semibold text-lg flex-shrink-0">
              <%= Current.user.person&.name&.split&.map(&:first)&.join&.upcase || Current.user.email_address[0].upcase %>
            </div>
          <% end %>
          <div class="flex-1 min-w-0">
            <div class="text-sm font-semibold text-gray-900 truncate"><%= Current.user.person&.name || Current.user.email_address %></div>
            <div class="text-xs text-gray-500 truncate"><%= Current.user.email_address %></div>
            <%= link_to "My Profile", profile_path, class: "text-xs text-pink-500 underline" %>
          </div>
        </div>
      </div>

      <!-- Footer Actions -->
      <div class="space-y-2">
        <%= link_to "Switch to Talent Dashboard", my_dashboard_path, data: { turbo: false }, class: "block text-center w-full px-4 py-3 rounded-lg bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold transition" %>

        <% if Current.user.superadmin? %>
          <%= link_to "Superadmin", superadmin_path, class: "block text-center w-full px-4 py-3 rounded-lg bg-purple-100 hover:bg-purple-200 text-purple-700 font-semibold transition" %>
        <% end %>

        <%= link_to "Sign Out", signout_path, data: { turbo_prefetch: false }, class: "block text-center w-full px-4 py-3 rounded-lg bg-pink-500 hover:bg-pink-600 text-white font-semibold transition" %>
      </div>
    </div>
  </div>
</div>
