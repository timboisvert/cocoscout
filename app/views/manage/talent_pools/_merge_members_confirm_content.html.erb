<div id="merge_members_modal_content" class="fixed inset-0 bg-black/60 backdrop-blur-sm overflow-y-auto h-full w-full z-50 flex items-center justify-center">
  <div class="relative p-5 border w-full max-w-lg shadow-lg rounded-md bg-white mx-4">
    <div class="flex items-center justify-between pb-3 border-b border-gray-200">
      <h3 class="text-lg font-semibold text-gray-900">Add Members</h3>
      <a href="<%= manage_production_casting_settings_path(@production, anchor: "talent-pool") %>" class="text-gray-400 hover:text-gray-600 cursor-pointer">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </a>
    </div>
    
    <div class="mt-4">
      <p class="text-sm text-gray-600">
        The following productions have talent pool members. Choose which members to add to the shared pool:
      </p>
      
      <form action="<%= update_shares_manage_production_talent_pools_path(@production) %>" method="post" accept-charset="UTF-8" data-turbo="false">
        <input type="hidden" name="_method" value="patch">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <%# Pass through the shared production IDs %>
        <% @shared_production_ids.each do |prod_id| %>
          <input type="hidden" name="shared_production_ids[]" value="<%= prod_id %>">
        <% end %>
        <% @productions_to_remove.each do |prod_id| %>
          <input type="hidden" name="productions_to_remove[]" value="<%= prod_id %>">
        <% end %>
        <input type="hidden" name="confirmed" value="1">
        
        <div class="mt-4 space-y-4 max-h-96 overflow-y-auto">
          <% @members_to_merge.each do |merge_info| %>
            <div class="border border-gray-200 rounded-lg overflow-hidden">
              <label class="flex items-center gap-3 px-4 py-3 bg-gray-50 border-b border-gray-200 cursor-pointer hover:bg-gray-100">
                <input type="checkbox" 
                       name="merge_production_ids[]" 
                       value="<%= merge_info[:production].id %>" 
                       checked
                       class="w-5 h-5 rounded border-gray-300 text-pink-600 accent-pink-600 focus:ring-pink-500 focus:ring-offset-0 cursor-pointer">
                <div class="flex-1">
                  <span class="text-sm font-medium text-gray-900"><%= merge_info[:production].name %></span>
                  <span class="text-xs text-gray-500 ml-2">
                    (<%= pluralize(merge_info[:people].count + merge_info[:groups].count, "member") %>)
                  </span>
                </div>
              </label>
              <div class="px-4 py-3">
                <div class="flex flex-wrap gap-2">
                  <% merge_info[:people].first(12).each do |person| %>
                    <div class="flex items-center gap-2 px-3 py-1.5 bg-white border border-gray-200 rounded">
                      <% headshot_variant = person.safe_headshot_variant(:thumb) %>
                      <% if headshot_variant %>
                        <%= image_tag headshot_variant, class: "w-6 h-6 rounded object-cover" %>
                      <% else %>
                        <div class="w-6 h-6 rounded bg-gray-200 flex items-center justify-center text-xs text-gray-500"><%= person.name.first.upcase %></div>
                      <% end %>
                      <span class="text-sm text-gray-700"><%= person.name %></span>
                    </div>
                  <% end %>
                  <% merge_info[:groups].first(5).each do |group| %>
                    <div class="flex items-center gap-2 px-3 py-1.5 bg-purple-50 border border-purple-200 rounded">
                      <div class="w-6 h-6 rounded bg-purple-200 flex items-center justify-center">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-3.5 h-3.5 text-purple-600">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 0 0 3.741-.479 3 3 0 0 0-4.682-2.72m.94 3.198.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0 1 12 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 0 1 6 18.719m12 0a5.971 5.971 0 0 0-.941-3.197m0 0A5.995 5.995 0 0 0 12 12.75a5.995 5.995 0 0 0-5.058 2.772m0 0a3 3 0 0 0-4.681 2.72 8.986 8.986 0 0 0 3.74.477m.94-3.197a5.971 5.971 0 0 0-.94 3.197M15 6.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm6 3a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Zm-13.5 0a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Z" />
                        </svg>
                      </div>
                      <span class="text-sm text-purple-700"><%= group.name %></span>
                    </div>
                  <% end %>
                  <% total = merge_info[:people].count + merge_info[:groups].count %>
                  <% shown = [merge_info[:people].count, 12].min + [merge_info[:groups].count, 5].min %>
                  <% if total > shown %>
                    <span class="inline-flex items-center px-3 py-1.5 rounded text-sm text-gray-500 bg-gray-50 border border-gray-200">
                      +<%= total - shown %> more
                    </span>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        
        <p class="mt-4 text-sm text-gray-500">
          Unchecked productions will join the shared pool but their current members will not be added.
        </p>
        
        <div class="flex justify-end gap-2 mt-6">
          <a href="<%= manage_production_casting_settings_path(@production, anchor: "talent-pool") %>" class="px-4 py-2 text-sm font-medium text-gray-700 hover:text-gray-900">
            Cancel
          </a>
          <%= render "shared/button", text: "Save Sharing Settings", variant: "primary", size: "small", type: :submit %>
        </div>
      </form>
    </div>
  </div>
</div>
