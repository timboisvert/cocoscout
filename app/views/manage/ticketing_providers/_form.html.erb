<%= form_with model: provider, url: provider.persisted? ? manage_ticketing_provider_path(provider) : manage_create_ticketing_provider_path, class: "space-y-6" do |form| %>
  <% if provider.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <ul class="list-disc list-inside text-red-700 text-sm">
        <% provider.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="bg-white rounded-lg border border-gray-200 p-6 space-y-4">
    <h3 class="font-medium text-gray-900 mb-4">Provider Details</h3>

    <div>
      <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :name, class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500", placeholder: "e.g., Eventbrite - Main Account" %>
    </div>

    <div>
      <%= form.label :provider_type, "Platform", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.select :provider_type, [["Eventbrite", "eventbrite"], ["Ticket Tailor", "ticket_tailor"]], {}, class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500" %>
    </div>

    <div>
      <%= form.label :status, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.select :status, [["Active", "active"], ["Inactive", "inactive"]], {}, class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500" %>
    </div>
  </div>

  <div class="bg-white rounded-lg border border-gray-200 p-6 space-y-4">
    <h3 class="font-medium text-gray-900 mb-4">API Credentials</h3>
    <p class="text-sm text-gray-500 mb-4">Enter your API credentials from your ticketing platform. These are encrypted and stored securely.</p>

    <div>
      <%= form.label :api_key, "API Key", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :api_key, class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500 font-mono text-sm", placeholder: "Your API key" %>
    </div>

    <div>
      <%= form.label :api_secret, "API Secret (optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :api_secret, class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500 font-mono text-sm", placeholder: "Your API secret" %>
    </div>
  </div>

  <% if provider.supports_webhooks? %>
    <div class="bg-white rounded-lg border border-gray-200 p-6 space-y-4" data-controller="toggle" data-toggle-initial-state-value="<%= provider.webhook_enabled? ? 'open' : 'closed' %>">
      <div class="flex items-center justify-between mb-2">
        <h3 class="font-medium text-gray-900">Webhooks</h3>
        <label class="relative inline-flex items-center cursor-pointer">
          <%= form.check_box :webhook_enabled, class: "sr-only peer", data: { action: "change->toggle#toggle" } %>
          <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-pink-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-pink-500"></div>
        </label>
      </div>
      <p class="text-sm text-gray-500">Enable webhooks to receive real-time updates when tickets are sold or events change.</p>

      <div data-toggle-target="content" class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Webhook URL</label>
          <div class="flex gap-2">
            <code class="flex-1 text-xs text-gray-600 bg-gray-50 rounded-lg border border-gray-200 p-3 break-all font-mono"><%= provider.webhook_url || "Save to generate URL" %></code>
            <% if provider.webhook_url.present? %>
              <button type="button" onclick="navigator.clipboard.writeText('<%= provider.webhook_url %>')" class="px-3 py-2 text-sm font-medium text-pink-600 hover:text-pink-800 border border-gray-200 rounded-lg hover:bg-gray-50">
                Copy
              </button>
            <% end %>
          </div>
          <p class="text-xs text-gray-500 mt-2">Add this URL in your <%= provider.provider_type.titleize.gsub("_", " ") %> webhook settings.</p>
        </div>

        <div>
          <%= form.label :webhook_secret, "Webhook Signing Secret", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :webhook_secret, class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500 font-mono text-sm", placeholder: "From your provider's webhook settings" %>
          <p class="text-xs text-gray-500 mt-1">Used to verify incoming webhook requests are authentic.</p>
        </div>
      </div>
    </div>
  <% end %>

  <div class="flex justify-between items-center">
    <% if provider.persisted? %>
      <%= link_to manage_ticketing_provider_path(provider) do %>
        <%= render "shared/button", text: "Cancel", variant: "ghost-cancel", type: :button %>
      <% end %>
    <% else %>
      <%= link_to manage_ticketing_providers_path do %>
        <%= render "shared/button", text: "Cancel", variant: "ghost-cancel", type: :button %>
      <% end %>
    <% end %>

    <%= render "shared/button", text: provider.persisted? ? "Save" : "Add Provider", variant: "primary", type: :submit %>
  </div>
<% end %>
