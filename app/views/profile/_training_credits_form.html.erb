<%
  # Training credits form section
  # Parameters:
  # - person_form: the form builder
%>

<div id="training" class="bg-white border border-gray-200 rounded-lg overflow-hidden mb-6" data-controller="profile-section">
  <%= render "shared/section_header",
    title: "Training & Education",
    collapsible: true,
    visibility_toggle: true,
    visibility_field_name: "person[profile_visibility_settings][training_visible]",
    visibility_checked: @person.training_credits_visible? %>

  <div class="p-6 space-y-4" data-profile-section-target="content">
    <p class="text-sm text-gray-600 mb-4">
      Add your training, education, and professional development.
    </p>

    <div id="training-credits-container" class="space-y-4">
      <%= person_form.fields_for :training_credits do |training_form| %>
        <%= render "my/profile/training_credit_fields", training_form: training_form %>
      <% end %>
    </div>

    <button type="button"
            id="add-training-credit"
            class="inline-flex items-center gap-2 px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg text-sm font-medium transition-colors">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
      </svg>
      Add Training/Education
    </button>

    <script>
      document.addEventListener('DOMContentLoaded', function() {
        document.getElementById('add-training-credit')?.addEventListener('click', function() {
          const container = document.getElementById('training-credits-container');
          const timestamp = new Date().getTime();

          const html = `
            <div class="border border-gray-200 rounded-lg p-4 training-credit-item">
              <input type="hidden" name="person[training_credits_attributes][${timestamp}][position]" value="">
              <input type="hidden" name="person[training_credits_attributes][${timestamp}][_destroy]" value="0" class="destroy-field">

              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div class="md:col-span-2">
                  <label class="block text-sm font-medium text-gray-700">Institution *</label>
                  <input type="text"
                         name="person[training_credits_attributes][${timestamp}][institution]"
                         placeholder="e.g., Juilliard School"
                         class="mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-pink-500 focus:ring-pink-500">
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-700">Program/Degree</label>
                  <input type="text"
                         name="person[training_credits_attributes][${timestamp}][program]"
                         placeholder="e.g., BFA Acting"
                         class="mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-pink-500 focus:ring-pink-500">
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-700">Location</label>
                  <input type="text"
                         name="person[training_credits_attributes][${timestamp}][location]"
                         placeholder="e.g., New York, NY"
                         class="mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-pink-500 focus:ring-pink-500">
                </div>

                <div class="grid grid-cols-2 gap-2">
                  <div>
                    <label class="block text-sm font-medium text-gray-700">Year Start</label>
                    <input type="number"
                           name="person[training_credits_attributes][${timestamp}][year_start]"
                           placeholder="2019"
                           min="1900"
                           max="2100"
                           class="mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-pink-500 focus:ring-pink-500">
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700">Year End</label>
                    <input type="number"
                           name="person[training_credits_attributes][${timestamp}][year_end]"
                           placeholder="2023"
                           min="1900"
                           max="2100"
                           class="mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-pink-500 focus:ring-pink-500">
                  </div>
                </div>

                <div class="md:col-span-2">
                  <label class="block text-sm font-medium text-gray-700">Notes (optional)</label>
                  <textarea name="person[training_credits_attributes][${timestamp}][notes]"
                            rows="2"
                            placeholder="Additional details..."
                            class="mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-pink-500 focus:ring-pink-500"></textarea>
                </div>
              </div>

              <div class="mt-3 flex justify-end">
                <button type="button"
                        class="text-red-600 hover:text-red-800 text-sm"
                        onclick="this.closest('.training-credit-item').querySelector('.destroy-field').value = '1'; this.closest('.training-credit-item').style.display = 'none';">
                  Remove
                </button>
              </div>
            </div>
          `;

          container.insertAdjacentHTML('beforeend', html);
        });
      });
    </script>
  </div>
</div>
