<div class="min-h-screen bg-white">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12">

    <!-- Full-Width Header -->
    <div class="mb-8 sm:mb-10">
      <h1 class="text-3xl sm:text-4xl font-bold text-slate-900 mb-3 coustard-regular"><%= @production.name %></h1>
      <% if @audition_cycle.hybrid_auditions? %>
        <p class="text-lg text-slate-600">Audition sign-up</p>
      <% elsif @audition_cycle.video_only? %>
        <p class="text-lg text-slate-600">Submit a video audition</p>
      <% else %>
        <p class="text-lg text-slate-600">Sign up for an in-person audition</p>
      <% end %>
    </div>

    <!-- Inactive Message -->
    <div class="bg-gradient-to-br from-slate-50 to-white border border-slate-300 rounded-lg p-6 sm:p-8 shadow-sm">
      <div class="flex items-start gap-4">
        <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-slate-200 flex items-center justify-center">
          <svg class="w-6 h-6 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="flex-1">
          <h2 class="text-xl font-bold text-slate-900 mb-2">Auditions not currently open</h2>
          <p class="text-slate-700">This production is not currently accepting audition submissions. Please contact the production team for more information about future audition opportunities.</p>
        </div>
      </div>
    </div>

  </div>

  <!-- Coco Link -->
  <div class="w-16 pt-5 md:pt-0 fixed bottom-0 right-0 md:flex md:items-end md:justify-end">
    <a href="https://cocoscout.com" target="_blank" rel="noopener">
      <%= render "shared/cocoscout_logo", size: :small, class: "mr-5" %>
    </a>
  </div>
</div>