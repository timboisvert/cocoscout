<% content_for :title, "Sign-ups" %>
<div class="w-full pb-24 lg:pb-24">
  <%= render partial: "shared/notice", locals: { notice: notice } %>
  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Auditions", manage_production_auditions_path(@production)],
      ["Review", review_manage_production_audition_cycle_path(@production, @audition_cycle)],
      [(@audition_cycle.audition_type == "video_upload" ? "Video Auditions" : "Sign-ups"), manage_production_audition_cycle_audition_requests_path(@production, @audition_cycle)]
    ],
    text: @requestable&.name&.truncate(40, omission: "...") || "Deleted",
    links: []
  } %>

  <div class="w-full" data-controller="tabs">
    <nav class="flex flex-wrap gap-2 border-b border-gray-200 mb-4">
      <% idx = 0 %>
      <button type="button" data-tabs-target="tab" data-index="<%= idx %>" data-action="tabs#select" class="px-3 lg:px-4 py-2 text-xs lg:text-sm font-medium bg-white border-b-2 text-pink-600 cursor-pointer whitespace-nowrap">Profile</button>
      <% idx += 1 %>
      <button type="button" data-tabs-target="tab" data-index="<%= idx %>" data-action="tabs#select" class="px-3 lg:px-4 py-2 text-xs lg:text-sm font-medium bg-gray-50 border-b-2 text-gray-500 cursor-pointer whitespace-nowrap">Resume</button>
      <% idx += 1 %>
      <% if @audition_cycle.audition_type == "video_upload" %>
        <button type="button" data-tabs-target="tab" data-index="<%= idx %>" data-action="tabs#select" class="px-3 lg:px-4 py-2 text-xs lg:text-sm font-medium bg-gray-50 border-b-2 text-gray-500 cursor-pointer whitespace-nowrap">Video</button>
        <% idx += 1 %>
      <% end %>
      <button type="button" data-tabs-target="tab" data-index="<%= idx %>" data-action="tabs#select" class="px-3 lg:px-4 py-2 text-xs lg:text-sm font-medium bg-gray-50 border-b-2 text-gray-500 cursor-pointer whitespace-nowrap">Availability</button>
      <% idx += 1 %>
      <button type="button" data-tabs-target="tab" data-index="<%= idx %>" data-action="tabs#select" class="px-3 lg:px-4 py-2 text-xs lg:text-sm font-medium bg-gray-50 border-b-2 text-gray-500 cursor-pointer whitespace-nowrap">Sign-up Questions</button>
      <% idx += 1 %>

    </nav>

    <div data-tabs-target="panel">
      <% if @requestable.is_a?(Person) %>
        <%= render "shared/person_card", person: @requestable, show_delete_signup: true, show_public_profile_link: false %>
      <% else %>
        <%= render "shared/group_card", group: @requestable, show_delete_signup: true, show_public_profile_link: false %>
      <% end %>
    </div>

    <div data-tabs-target="panel" class="hidden">
      <% if @requestable.nil? %>
        <p class="text-left text-gray-500 text-sm">This person/group is no longer available</p>
      <% else %>
        <%# Use ProfileResume for both Person and Group %>
        <% resume = @requestable.profile_resumes.first %>
        <% if resume&.file&.attached? %>
          <% if resume.file.content_type == 'application/pdf' && resume.file.representable? %>
            <div class="w-full">
              <%= image_tag resume.file.representation(resize_to_limit: [1224, 1584]), class: "object-contain" %>
            </div>
          <% elsif resume.file.content_type.start_with?('image/') %>
            <div class="w-full">
              <%= image_tag resume.file, class: "object-contain" %>
            </div>
          <% else %>
            <p class="text-left text-gray-500 text-sm">Resume preview not available</p>
          <% end %>
        <% else %>
          <p class="text-left text-gray-500 text-sm">No resume found</p>
        <% end %>
      <% end %>
    </div>

    <% if @audition_cycle.audition_type == "video_upload" %>
      <div data-tabs-target="panel" class="hidden">
        <% if @audition_request.video_url.present? %>
          <div class="mt-2">
            <%= render "manage/audition_requests/video", audition_request: @audition_request %>
          </div>
          <div class="mt-2">
            <%= link_to "Edit Video",
                edit_video_manage_production_audition_cycle_audition_request_path(@production, @audition_cycle, @audition_request),
                class: "mt-1 font-medium rounded-lg text-sm px-5 h-10 py-2.5 text-center mb-0 inline-block text-white bg-pink-500 hover:bg-pink-600"
            %>
          </div>
        <% else %>
          <p class="text-sm text-gray-500">No video uploaded</p>
        <% end %>
      </div>
    <% end %>

    <div data-tabs-target="panel" class="hidden">
      <% if @audition_cycle.include_availability_section && @shows.present? %>
        <div class="border border-gray-200 rounded-lg overflow-hidden mb-4">
          <div class="bg-gray-50 px-4 py-3 border-b border-gray-200">
            <h3 class="text-md font-semibold text-gray-900 coustard-regular">Show & Event Availability</h3>
          </div>
          <div class="p-2">
            <div class="space-y-1">
              <% @shows.each do |show| %>
                <% availability = @show_availabilities[show.id] %>
                <%= render partial: "shared/show_row", locals: {
                  show: show,
                  show_location: true,
                  show_production: false,
                  show_linked: false,
                  availability: availability,
                  entity_key: "show_#{show.id}",
                  entity: @requestable,
                  has_groups: false,
                  right_panel: :availability,
                  manage_context: true
                } %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <% if @audition_cycle.include_audition_availability_section && @audition_sessions.present? %>
        <div class="border border-gray-200 rounded-lg overflow-hidden mb-4">
          <div class="bg-gray-50 px-4 py-3 border-b border-gray-200">
            <h3 class="text-md font-semibold text-gray-900 coustard-regular">Audition Session Availability</h3>
          </div>
          <div class="p-2">
            <div class="space-y-1">
              <% @audition_sessions.each do |session| %>
                <% current_status = @audition_availability&.dig("#{session.id}") %>
                <div class="group relative flex items-stretch gap-0 px-3 py-2 border rounded-lg hover:border-gray-400 transition-all bg-white border-gray-200"
                     data-controller="availability"
                     data-availability-show-id-value="<%= session.id %>"
                     data-availability-status-value="<%= current_status || 'unset' %>"
                     data-availability-entity-key="audition_session"
                     data-availability-entity-id="<%= @requestable.id %>"
                     data-availability-entity-type="<%= @requestable.class.name %>"
                     data-availability-update-url-value="<%= update_audition_session_availability_manage_production_audition_cycle_audition_request_path(@production, @audition_cycle, @audition_request) %>"
                     data-availability-person-id-value="<%= @requestable.is_a?(Person) ? @requestable.id : nil %>">
                  <%# Left Section: Date & Details %>
                  <div class="w-1/2 flex items-center gap-4">
                    <%# Date Box %>
                    <div class="flex-shrink-0 w-14 text-center">
                      <div class="text-xs font-semibold text-pink-600 uppercase"><%= session.start_at.strftime("%b") %></div>
                      <div class="text-2xl font-bold text-gray-900"><%= session.start_at.strftime("%-d") %></div>
                      <div class="text-xs text-gray-500"><%= session.start_at.strftime("%a") %></div>
                    </div>

                    <%# Session Details %>
                    <div class="flex-1 min-w-0">
                      <div class="font-medium text-gray-900">Audition Session</div>
                      <div class="text-sm text-gray-600"><%= session.start_at.strftime("%l:%M %p") %></div>
                    </div>
                  </div>

                  <%# Right Panel: Availability Buttons %>
                  <div class="w-1/2 border-l border-gray-200 pl-4 flex items-center gap-3">
                    <% headshot_variant = @requestable.safe_headshot_variant(:thumb) %>
                    <% if headshot_variant %>
                      <%= image_tag headshot_variant, class: "w-10 h-10 rounded-lg object-cover flex-shrink-0" %>
                    <% else %>
                      <div class="w-10 h-10 rounded-lg bg-gray-200 flex items-center justify-center text-gray-700 font-bold text-sm flex-shrink-0">
                        <%= @requestable.respond_to?(:initials) ? @requestable.initials : @requestable.name[0..1].upcase %>
                      </div>
                    <% end %>
                    <div class="flex-1 min-w-0">
                      <div class="text-[10px] text-gray-400 uppercase tracking-wide mb-1">Availability</div>
                      <div class="flex gap-0">
                        <% [:available, :unavailable].each do |status| %>
                          <% classes = "w-8 sm:w-20 text-xs py-1 sm:py-1.5 text-center border border-gray-200 cursor-pointer flex items-center justify-center" %>
                          <% classes += status == :available ? " rounded-l border-r-0" : " rounded-r" %>
                          <% classes += current_status == status.to_s ? " bg-pink-500 text-white" : " bg-white text-gray-700 hover:bg-gray-50" %>
                          <%= link_to "#", class: classes, data: { action: "click->availability#setStatus", availability_status: status, availability_target: "#{status}Btn" } do %>
                            <span data-availability-target="<%= status %>Check" class="hidden">
                              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4">
                                <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 0 1 .143 1.052l-8 10.5a.75.75 0 0 1-1.127.075l-4.5-4.5a.75.75 0 0 1 1.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 0 1 1.05-.143Z" clip-rule="evenodd" />
                              </svg>
                            </span>
                            <span data-availability-target="<%= status %>Text">
                              <span class="sm:hidden">
                                <% if status == :available %>
                                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6.633 10.25c.806 0 1.533-.446 2.031-1.08a9.041 9.041 0 0 1 2.861-2.4c.723-.384 1.35-.956 1.653-1.715a4.498 4.498 0 0 0 .322-1.672V2.75a.75.75 0 0 1 .75-.75 2.25 2.25 0 0 1 2.25 2.25c0 1.152-.26 2.243-.723 3.218-.266.558.107 1.282.725 1.282m0 0h3.126c1.026 0 1.945.694 2.054 1.715.045.422.068.85.068 1.285a11.95 11.95 0 0 1-2.649 7.521c-.388.482-.987.729-1.605.729H13.48c-.483 0-.964-.078-1.423-.23l-3.114-1.04a4.501 4.501 0 0 0-1.423-.23H5.904m10.598-9.75H14.25M5.904 18.5c.083.205.173.405.27.602.197.4-.078.898-.523.898h-.908c-.889 0-1.713-.518-1.972-1.368a12 12 0 0 1-.521-3.507c0-1.553.295-3.036.831-4.398C3.387 9.953 4.167 9.5 5 9.5h1.053c.472 0 .745.556.5.96a8.958 8.958 0 0 0-1.302 4.665c0 1.194.232 2.333.654 3.375Z"/></svg>
                                <% else %>
                                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7.498 15.25H4.372c-1.026 0-1.945-.694-2.054-1.715a12.137 12.137 0 0 1-.068-1.285c0-2.848.992-5.464 2.649-7.521C5.287 4.247 5.886 4 6.504 4h4.016a4.5 4.5 0 0 1 1.423.23l3.114 1.04a4.5 4.5 0 0 0 1.423.23h1.294M7.498 15.25c.618 0 .991.724.725 1.282A7.471 7.471 0 0 0 7.5 19.75 2.25 2.25 0 0 0 9.75 22a.75.75 0 0 0 .75-.75v-.633c0-.573.11-1.14.322-1.672.304-.76.93-1.33 1.653-1.715a9.04 9.04 0 0 0 2.86-2.4c.498-.634 1.226-1.08 2.032-1.08h.384m-10.253 1.5H9.7m8.075-9.75c.01.05.027.1.05.148.593 1.2.925 2.55.925 3.977 0 1.487-.36 2.89-.999 4.125m.023-8.25c-.076-.365.183-.75.575-.75h.908c.889 0 1.713.518 1.972 1.368.339 1.11.521 2.287.521 3.507 0 1.553-.295 3.036-.831 4.398-.306.774-1.086 1.227-1.918 1.227h-1.053c-.472 0-.745-.556-.5-.96a8.95 8.95 0 0 0 .303-.54"/></svg>
                                <% end %>
                              </span>
                              <span class="hidden sm:inline"><%= status.to_s.humanize %></span>
                            </span>
                          <% end %>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <% if !@audition_cycle.include_availability_section && !@audition_cycle.include_audition_availability_section %>
        <p class="text-center mt-10 text-gray-500">No availability entered</p>
      <% end %>
    </div>

    <div data-tabs-target="panel" class="hidden">
      <% if @answers&.any? %>
        <div class="mt-2">
          <%= render "manage/audition_requests/answers", answers: @answers %>
        </div>

        <% if current_user_can_manage?(@production) %>
          <div class="mt-2">
            <%= link_to "Edit Answers",
                edit_answers_manage_production_audition_cycle_audition_request_path(@production, @audition_cycle, @audition_request),
                class: "mt-1 font-medium rounded-lg text-sm px-5 h-10 py-2.5 text-center mb-0 inline-block text-white bg-pink-500 hover:bg-pink-600"
            %>
          </div>
        <% end %>
      <% else %>
        <p class="text-center mt-10">No sign-up questions answered</p>
      <% end %>
    </div>

  </div>
</div>


<% if current_user_can_manage?(@production) %>
  <div class="fixed bottom-0 left-0 w-full lg:h-[84px] bg-white text-pink-500 p-2 border-t-4 border-pink-500 lg:pl-56">
    <div class="flex items-center gap-1 lg:gap-0">

      <!-- Previous button -->
      <div class="flex-shrink-0">
        <% if @audition_request.previous %>
          <%= link_to manage_production_audition_cycle_audition_request_path(@production, @audition_cycle, @audition_request.previous), class: "flex flex-col lg:flex-row items-center lg:gap-1" do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-6 w-6 lg:h-10 lg:w-10">
              <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
            </svg>
            <p class="text-xs hidden lg:block">Previous</p>
          <% end %>
        <% end %>
      </div>

      <!-- Status buttons -->
      <div class="flex-1 grid grid-cols-3 gap-1 lg:gap-3 px-1 lg:px-4">
          <% [:undecided, :accepted, :passed].each do |status| %>
            <% classes = "text-xs lg:text-lg font-bold px-1 py-2 lg:px-4 lg:py-3 text-center border rounded-lg border-gray-200 " %>
            <% if @audition_request.status == status.to_s %>
              <% classes += " bg-pink-500 text-white hover:bg-pink-600 hover:text-white" %>
            <% else %>
              <% classes += " bg-white text-pink-500 hover:bg-pink-600 hover:text-white" %>
            <% end %>
            <% count = @status_counts&.dig(status.to_s) || 0 %>
            <%= link_to set_status_manage_production_audition_cycle_audition_request_path(@production, @audition_cycle, @audition_request, status: status), class: classes, data: { turbo_method: :post } do %>
              <span class="w-full flex justify-center items-center">
                <span class="flex w-full justify-center items-center relative">
                  <span class="mx-auto"><%= manage_signup_status_name(status) %></span>
                  <span class="absolute right-0 top-1/2 -translate-y-1/2 text-[10px] lg:text-base font-normal px-0.5 lg:px-2"><%= count %></span>
                </span>
              </span>
            <% end %>
          <% end %>
      </div>

      <!-- Next button -->
      <div class="flex-shrink-0">
        <% if @audition_request.next %>
          <%= link_to manage_production_audition_cycle_audition_request_path(@production, @audition_cycle, @audition_request.next), class: "flex flex-col lg:flex-row items-center lg:gap-1" do %>
            <p class="text-xs hidden lg:block">Next</p>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-6 w-6 lg:h-10 lg:w-10">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
            </svg>
          <% end %>
        <% end %>
      </div>

    </div>
  </div>
<% end %>