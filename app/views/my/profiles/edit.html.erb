<% content_for :title, "Edit Profile - #{@profile.name}" %>

<div class="w-full max-w-2xl mx-auto">
  <%= render partial: "shared/notice", locals: { notice: notice, alert: flash[:alert] } %>

  <!-- Header -->
  <div class="mb-6">
    <%= link_to my_profiles_path, class: "inline-flex items-center gap-1 text-sm text-gray-500 hover:text-pink-600 mb-4" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Back to My Profiles
    <% end %>
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-bold text-gray-900 coustard-regular">Edit Profile</h1>
        <p class="text-sm text-gray-600 mt-1">
          Update the basic information for "<%= @profile.name %>".
        </p>
      </div>
      <% if @profile.default_profile? %>
        <span class="inline-flex items-center gap-1 px-3 py-1 text-sm font-medium text-pink-700 bg-pink-100 rounded-full">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
          </svg>
          Default Profile
        </span>
      <% end %>
    </div>
  </div>

  <!-- Form Card -->
  <div class="bg-white border border-gray-200 rounded-lg overflow-hidden mb-6">
    <div class="bg-gray-50 px-4 py-3 border-b border-gray-200">
      <h3 class="text-md font-semibold text-gray-900 coustard-regular">Profile Details</h3>
    </div>

    <div class="p-6">
      <%= form_with model: @profile, url: my_profile_path(@profile), method: :patch, class: "space-y-6" do |form| %>

        <% if @profile.errors.any? %>
          <div class="p-4 bg-red-50 border border-red-200 rounded-lg">
            <div class="flex gap-3">
              <svg class="w-5 h-5 text-red-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
              </svg>
              <div>
                <p class="text-sm font-medium text-red-800 mb-1">Please fix the following errors:</p>
                <ul class="list-disc list-inside text-sm text-red-700">
                  <% @profile.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>

        <%# Name %>
        <div>
          <%= form.label :name, "Profile Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :name, required: true, class: "w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-pink-500 focus:ring-pink-500" %>
          <p class="text-xs text-gray-500 mt-1">The name you want to appear on audition sign-ups and public profiles.</p>
        </div>

        <%# Pronouns %>
        <div>
          <%= form.label :pronouns, "Pronouns", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :pronouns, placeholder: "e.g., she/her, he/him, they/them", class: "w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-pink-500 focus:ring-pink-500" %>
        </div>

        <%# Email %>
        <div>
          <%= form.label :email, "Contact Email", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.email_field :email, class: "w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-pink-500 focus:ring-pink-500" %>
          <p class="text-xs text-gray-500 mt-1">Audition notifications for this profile will be sent here.</p>
        </div>

        <%# Bio %>
        <div>
          <%= form.label :bio, "Bio (optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_area :bio, rows: 3, placeholder: "Tell casting directors a bit about this persona...", class: "w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-pink-500 focus:ring-pink-500" %>
        </div>

        <%# Set as Default (only show if not already default) %>
        <% unless @profile.default_profile? %>
          <div class="flex items-start gap-3 p-4 bg-gray-50 rounded-lg border border-gray-200">
            <%= check_box_tag :set_as_default, "1", false, class: "mt-1 rounded border-gray-300 text-pink-600 focus:ring-pink-500", id: "set_as_default" %>
            <div>
              <%= label_tag :set_as_default, "Set as my default profile", class: "text-sm font-medium text-gray-700 cursor-pointer" %>
              <p class="text-xs text-gray-500 mt-0.5">Your default profile is automatically selected when signing up for auditions.</p>
            </div>
          </div>
        <% end %>

        <%# Actions %>
        <div class="flex items-center justify-end gap-3 pt-4 border-t border-gray-200">
          <%= link_to "Cancel", my_profiles_path, class: "px-4 py-2 text-sm font-medium text-gray-700 hover:text-gray-900" %>
          <%= form.submit "Save Changes", class: "px-4 py-2 text-sm font-medium text-white bg-pink-500 hover:bg-pink-600 rounded-lg cursor-pointer transition-colors" %>
        </div>

      <% end %>
    </div>
  </div>

  <!-- Full Profile Editor Link -->
  <div class="bg-white border border-gray-200 rounded-lg overflow-hidden mb-6">
    <div class="p-6">
      <div class="flex items-center justify-between">
        <div>
          <h4 class="text-sm font-semibold text-gray-900 mb-1">Full Profile Editor</h4>
          <p class="text-sm text-gray-600">Add headshots, resumes, performance credits, skills, and more.</p>
        </div>
        <%= link_to profile_path, class: "inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-pink-600 bg-pink-50 hover:bg-pink-100 rounded-lg transition-colors" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
          Edit Full Profile
        <% end %>
      </div>
    </div>
  </div>

  <%# Danger Zone %>
  <% unless @profile.default_profile? %>
    <div class="bg-white border border-red-200 rounded-lg overflow-hidden">
      <div class="bg-red-50 px-4 py-3 border-b border-red-200">
        <h3 class="text-md font-semibold text-red-800 coustard-regular">Danger Zone</h3>
      </div>
      <div class="p-6">
        <div class="flex items-center justify-between">
          <div>
            <h4 class="text-sm font-semibold text-gray-900 mb-1">Archive This Profile</h4>
            <p class="text-sm text-gray-600">Archived profiles won't appear in audition sign-ups but their history is preserved.</p>
          </div>
          <%= button_to "Archive Profile", archive_my_profile_path(@profile), method: :post, class: "px-4 py-2 text-sm font-medium text-red-600 border border-red-300 hover:bg-red-50 rounded-lg cursor-pointer transition-colors", data: { turbo_confirm: "Are you sure you want to archive this profile? It will no longer appear in audition sign-ups." } %>
        </div>
      </div>
    </div>
  <% end %>
</div>
