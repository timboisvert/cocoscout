<div class="min-h-screen bg-white">
  <!-- Header -->
  <div class="flex flex-col items-center pt-6 sm:pt-10 pb-4">
    <%= render "shared/cocoscout_logo", size: :medium %>
    <h1 class="mt-3 text-3xl sm:text-4xl coustard-regular text-pink-500">CocoScout</h1>
  </div>

  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 pb-12">
    <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-start">

      <!-- Left Column: Value Proposition -->
      <div class="order-2 lg:order-1">
        <div class="lg:sticky lg:top-8">
          <div class="bg-gradient-to-br from-pink-50 to-white border border-pink-200 rounded-lg p-6 sm:p-8 shadow-sm">
            <div class="inline-block bg-pink-100 text-pink-700 text-xs font-semibold px-3 py-1 rounded-full mb-3">
              FREE FOR PERFORMERS
            </div>
            <h2 class="text-2xl sm:text-3xl font-bold text-slate-900 mb-3">Join as a performer</h2>
            <p class="text-slate-600 mb-6">Your free CocoScout account gives you everything you need to audition, perform, and collaborate on shows.</p>

            <!-- For Performers -->
            <div class="mb-6">
              <ul class="space-y-3">
                <li class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-pink-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-sm text-slate-700"><strong>Sign up for auditions</strong> with a simple formâ€”no endless emails</span>
                </li>
                <li class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-pink-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-sm text-slate-700"><strong>View your show schedules</strong> in one centralized place</span>
                </li>
                <li class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-pink-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-sm text-slate-700"><strong>Connect with castmates</strong> and stay in the loop on updates</span>
                </li>
                <li class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-pink-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-sm text-slate-700"><strong>Track your performance history</strong> across all your shows</span>
                </li>
              </ul>
            </div>

            <!-- Divider -->
            <div class="my-6 border-t border-pink-200"></div>

            <!-- For Producers -->
            <div class="bg-white rounded-lg border border-slate-200 p-5">
              <div class="flex items-start gap-3 mb-3">
                <svg class="w-5 h-5 text-slate-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
                <div>
                  <h3 class="text-base font-semibold text-slate-900 mb-1">Producing your own shows or running a festival?</h3>
                  <p class="text-sm text-slate-600">Upgrade anytime to create productions, run auditions, coordinate casting, and manage your entire show from one place.</p>

                </div>
              </div>
            </div>

            <div class="mt-6 pt-6 border-t border-pink-200">
              <p class="text-sm text-slate-600 flex items-center gap-2">
                <svg class="w-4 h-4 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                </svg>
                Free for performers. No credit card required.
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Right Column: Signup Form -->
      <div class="order-1 lg:order-2">
        <div class="bg-white border border-slate-200 rounded-lg p-6 sm:p-8 shadow-sm">
          <h2 class="text-2xl font-bold text-slate-900 mb-2 text-center">Create your account</h2>
          <p class="text-sm text-slate-600 mb-6 text-center">Start collaborating on your next great show</p>

          <% if @user_exists_error %>
            <div class="mb-4 p-3 bg-pink-50 border border-pink-200 rounded-md text-sm text-pink-700">
              You already have a CocoScout account. Please <%= link_to "sign in", signin_path, class: "underline font-medium text-pink-600 hover:text-pink-700" %> to continue.
            </div>
          <% end %>

          <%= form_with(model: @user, url: handle_signup_path, class: "space-y-5") do |form| %>
            <div>
              <label for="user_email_address" class="block text-sm font-medium text-slate-700 mb-1">Email address</label>
              <%= form.email_field :email_address,
                  required: true,
                  autofocus: true,
                  autocomplete: "username",
                  autocapitalize: "none",
                  placeholder: "you@example.com",
                  value: params[:email_address],
                  class: "block shadow-sm rounded-md border border-gray-300 px-3 py-2.5 w-full focus:border-pink-500 focus:ring-pink-500" %>
            </div>

            <div data-controller="password-visibility">
              <% if @user&.errors&.[](:password)&.any? %>
                <label for="user_password" class="block text-sm font-medium text-pink-600 mb-1">Password must be at least 8 characters</label>
              <% else %>
                <label for="user_password" class="block text-sm font-medium text-slate-700 mb-1">Password</label>
              <% end %>
              <div class="relative">
                <%= form.password_field :password,
                    required: true,
                    autocomplete: "new-password",
                    placeholder: "Create a password",
                    maxlength: 72,
                    class: "block shadow-sm rounded-md border #{ @user&.errors&.[](:password)&.any? ? 'border-pink-500' : 'border-gray-300' } px-3 py-2.5 w-full pr-10 focus:border-pink-500 focus:ring-pink-500",
                    data: { password_visibility_target: "input" } %>
                <button type="button"
                        data-action="password-visibility#toggle"
                        class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-500 hover:text-gray-700 focus:outline-none">
                  <span data-password-visibility-target="icon">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                      <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                  </span>
                </button>
              </div>
            </div>

            <div class="pt-2">
              <%= render "shared/button", text: "Create Account", variant: "primary", size: "jumbo", type: :submit %>
            </div>

            <div class="text-center text-sm text-slate-600 pt-4">
              Already have an account? <%= link_to "Sign In", signin_path, class: "text-pink-600 hover:text-pink-700 font-medium underline" %>
            </div>
          <% end %>
        </div>

        <!-- Trust indicators -->
        <div class="mt-6 text-center">
          <p class="text-xs text-slate-500">
            By creating an account, you agree to our <%= link_to "Terms of Service", terms_path, class: "text-pink-600 hover:text-pink-700 underline", target: "_blank" %> and <%= link_to "Privacy Policy", privacy_path, class: "text-pink-600 hover:text-pink-700 underline", target: "_blank" %>
          </p>
        </div>
      </div>

    </div>
  </div>
</div>