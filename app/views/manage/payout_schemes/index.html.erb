<% content_for :title, "Payout Schemes" %>

<div class="w-full mb-10">
  <%= render partial: "shared/notice", locals: { notice: notice, alert: alert } %>
  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Money", manage_money_index_path]
    ],
    text: @show_archived ? "Archived Payout Schemes" : "Payout Schemes",
    links: @show_archived ? [
      { text: "View Active Schemes", path: manage_money_payout_schemes_path }
    ] : [
      { text: "Create from Preset", path: manage_presets_money_payout_schemes_path },
      { text: "New Custom Scheme", path: manage_new_money_payout_scheme_path }
    ]
  } %>

  <% if @payout_schemes.any? %>
    <div class="space-y-2">
      <% @payout_schemes.each do |scheme| %>
        <% defaults = scheme.payout_scheme_defaults %>
        <div class="bg-white rounded-lg border border-gray-200 p-5 hover:bg-gray-50 transition-colors flex items-center justify-between">
          <%= link_to manage_money_payout_scheme_path(scheme), class: "flex-1" do %>
            <div class="flex items-center gap-2 flex-wrap">
              <h3 class="font-semibold text-gray-900"><%= scheme.name %></h3>
              <% if @show_archived %>
                <span class="inline-flex items-center rounded-md px-2 py-0.5 text-xs font-medium bg-gray-100 text-gray-700">
                  Archived
                </span>
              <% elsif defaults.any? %>
                <% defaults.each do |d| %>
                  <span class="inline-flex items-center rounded-md px-2 py-0.5 text-xs font-medium bg-pink-100 text-pink-700">
                    <% if d.production.present? %>
                      <%= d.production.name %><%= " from #{d.effective_from.strftime('%-d %b')}" if d.effective_from.present? %>
                    <% else %>
                      Fallback<%= " from #{d.effective_from.strftime('%-d %b')}" if d.effective_from.present? %>
                    <% end %>
                  </span>
                <% end %>
              <% elsif scheme.is_default? %>
                <!-- Legacy: show old is_default badge -->
                <span class="inline-flex items-center rounded-md px-2 py-0.5 text-xs font-medium bg-gray-100 text-gray-700">
                  Default (legacy)<%= " from #{scheme.effective_from.strftime('%-d %b %Y')}" if scheme.effective_from.present? %>
                </span>
              <% end %>
              <% if scheme.organization_level? %>
                <span class="text-xs text-gray-500">Organization-wide</span>
              <% else %>
                <span class="text-xs text-gray-500"><%= scheme.production&.name %></span>
              <% end %>
            </div>
            <% if scheme.description.present? %>
              <p class="text-sm text-gray-600 mt-1"><%= scheme.description %></p>
            <% end %>
            <p class="text-sm text-gray-500 mt-2"><%= scheme.rules_summary %></p>
          <% end %>
          <% if @show_archived %>
            <%= form_with url: manage_unarchive_money_payout_scheme_path(scheme), method: :post, local: true, class: "ml-4" do %>
              <%= render "shared/button", text: "Restore", variant: "secondary", size: "small", type: :submit %>
            <% end %>
          <% else %>
            <svg class="w-5 h-5 text-gray-400 ml-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          <% end %>
        </div>
      <% end %>
    </div>

    <% if !@show_archived && @archived_count > 0 %>
      <div class="mt-6 text-center">
        <%= link_to manage_money_payout_schemes_path(archived: 1), class: "text-sm text-gray-500 hover:text-gray-700" do %>
          View <%= @archived_count %> archived scheme<%= @archived_count == 1 ? "" : "s" %>
        <% end %>
      </div>
    <% end %>
  <% else %>
    <div class="bg-gray-50 rounded-lg border border-dashed border-gray-300 p-8 text-center">
      <svg class="w-12 h-12 text-gray-400 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      <% if @show_archived %>
        <h3 class="text-lg font-medium text-gray-900 mb-2">No archived schemes</h3>
        <p class="text-gray-600 mb-4">You haven't archived any payout schemes yet.</p>
        <%= link_to manage_money_payout_schemes_path do %>
          <%= render "shared/button", text: "View Active Schemes", variant: "secondary", size: "medium" %>
        <% end %>
      <% else %>
        <h3 class="text-lg font-medium text-gray-900 mb-2">No payout schemes yet</h3>
        <p class="text-gray-600 mb-4">Create a scheme to define how performers get paid.</p>
        <%= link_to manage_presets_money_payout_schemes_path do %>
          <%= render "shared/button", text: "Choose a Preset", variant: "primary", size: "medium" %>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
