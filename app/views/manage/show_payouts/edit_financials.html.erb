<% content_for :title, "Enter Financial Data - #{show_display_name(@show)}" %>

<div class="w-full mb-10" data-controller="financials-form">
  <%= render partial: "shared/notice", locals: { notice: notice, alert: alert } %>
  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Money", manage_production_money_index_path(@production)],
      [show_display_name(@show), manage_production_money_show_payout_path(@production, @show)]
    ],
    text: "Financial Data",
    links: []
  } %>

  <!-- Show Info Header -->
  <div class="mb-6">
    <h2 class="font-semibold text-gray-900 text-lg coustard-regular"><%= show_display_name(@show, include_date: false) %></h2>
    <p class="text-sm text-gray-500"><%= @show.date_and_time.strftime("%A, %B %-d, %Y at %-I:%M %p") %></p>
    <% if @show.canceled? %>
      <span class="inline-flex items-center rounded-md px-2 py-0.5 text-xs font-medium bg-red-100 text-red-700 mt-1">Canceled</span>
    <% end %>
  </div>

  <%= form_with model: @show_financials, url: manage_production_update_financials_money_show_payout_path(@production, @show), method: :patch, data: { turbo: false, financials_form_target: "form" } do |form| %>

    <% if @show_financials.errors.any? %>
      <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
        <ul class="text-sm text-red-700 list-disc list-inside">
          <% @show_financials.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="max-w-xl space-y-6">
      <!-- Revenue Type Selector -->
      <div class="bg-white rounded-lg border border-gray-200 p-5">
        <h3 class="font-semibold text-gray-900 mb-4 flex items-center gap-2">
          <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          Primary Revenue
        </h3>

        <!-- Revenue Type Toggle -->
        <div class="flex gap-2 mb-4">
          <label class="flex-1">
            <input type="radio" name="show_financials[revenue_type]" value="ticket_sales"
                   <%= @show_financials.ticket_sales? ? "checked" : "" %>
                   data-action="change->financials-form#toggleRevenueType"
                   class="sr-only peer">
            <div class="cursor-pointer rounded-lg border-2 border-gray-200 p-3 text-center transition-all peer-checked:border-pink-500 peer-checked:bg-pink-50">
              <div class="font-medium text-gray-900">Ticket Sales</div>
              <div class="text-xs text-gray-500">Revenue from selling tickets</div>
            </div>
          </label>
          <label class="flex-1">
            <input type="radio" name="show_financials[revenue_type]" value="flat_fee"
                   <%= @show_financials.flat_fee? ? "checked" : "" %>
                   data-action="change->financials-form#toggleRevenueType"
                   class="sr-only peer">
            <div class="cursor-pointer rounded-lg border-2 border-gray-200 p-3 text-center transition-all peer-checked:border-pink-500 peer-checked:bg-pink-50">
              <div class="font-medium text-gray-900">Flat Fee</div>
              <div class="text-xs text-gray-500">Paid a set amount for the show</div>
            </div>
          </label>
        </div>

        <!-- Ticket Sales Fields -->
        <div data-financials-form-target="ticketSalesFields" class="<%= @show_financials.flat_fee? ? 'hidden' : '' %>">
          <div class="grid grid-cols-2 gap-4">
            <div>
              <%= form.label :ticket_count, "Tickets Sold", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.number_field :ticket_count, min: 0, class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500", placeholder: "0" %>
            </div>
            <div>
              <%= form.label :ticket_revenue, "Ticket Revenue", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <div class="relative">
                <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-500">$</span>
                <%= form.number_field :ticket_revenue, min: 0, step: 0.01, class: "w-full rounded-lg border border-gray-300 pl-7 pr-3 py-2 focus:border-pink-500 focus:ring-pink-500", placeholder: "0.00" %>
              </div>
            </div>
          </div>
        </div>

        <!-- Flat Fee Field -->
        <div data-financials-form-target="flatFeeFields" class="<%= @show_financials.ticket_sales? ? 'hidden' : '' %>">
          <%= form.label :flat_fee, "Flat Fee Amount", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <div class="relative">
            <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-500">$</span>
            <%= form.number_field :flat_fee, min: 0, step: 0.01, class: "w-full rounded-lg border border-gray-300 pl-7 pr-3 py-2 focus:border-pink-500 focus:ring-pink-500", placeholder: "0.00" %>
          </div>
          <p class="text-xs text-gray-500 mt-1">The guaranteed amount you were paid for this performance</p>
        </div>
      </div>

      <!-- Other Revenue -->
      <%
        other_revenue_items = @show_financials.other_revenue_details || []
        has_other_revenue_details = other_revenue_items.any?
      %>
      <div class="bg-white rounded-lg border border-gray-200 p-5">
        <div class="flex items-center justify-between mb-4">
          <h3 class="font-semibold text-gray-900 flex items-center gap-2">
            <svg class="w-5 h-5 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
            </svg>
            Other Revenue
          </h3>
          <%= render "shared/button",
              text: "Add Item",
              variant: "secondary",
              size: "small",
              icon: "plus",
              data: { action: "click->financials-form#openOtherRevenueModal" } %>
        </div>

          <% if has_other_revenue_details %>
            <!-- Line Items List -->
            <div data-financials-form-target="otherRevenueItems" class="space-y-2 mb-3">
              <% other_revenue_items.each_with_index do |item, index| %>
                <div class="flex items-center justify-between bg-gray-50 rounded-lg px-4 py-3" data-line-item data-index="<%= index %>">
                  <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium text-gray-900 truncate"><%= item["description"].presence || "Item #{index + 1}" %></p>
                  </div>
                  <div class="flex items-center gap-3">
                    <span class="text-sm font-semibold text-gray-900"><%= number_to_currency(item["amount"]) %></span>
                    <button type="button"
                            class="text-gray-400 hover:text-pink-600 p-1"
                            data-action="click->financials-form#editOtherRevenueItem"
                            data-index="<%= index %>"
                            data-description="<%= item["description"] %>"
                            data-amount="<%= item["amount"] %>">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
                      </svg>
                    </button>
                    <button type="button"
                            class="text-gray-400 hover:text-red-500 p-1"
                            data-action="click->financials-form#removeOtherRevenueItem"
                            data-index="<%= index %>">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                      </svg>
                    </button>
                  </div>
                  <!-- Hidden fields for form submission -->
                  <input type="hidden" name="show_financials[other_revenue_details][<%= index %>][description]" value="<%= item["description"] %>">
                  <input type="hidden" name="show_financials[other_revenue_details][<%= index %>][amount]" value="<%= item["amount"] %>">
                </div>
              <% end %>
            </div>
            <div class="flex items-center justify-between pt-3 border-t border-gray-200">
              <span class="text-sm font-medium text-gray-700">Total</span>
              <span data-financials-form-target="otherRevenueTotal" class="text-sm font-semibold text-gray-900"><%= number_to_currency(@show_financials.calculated_other_revenue) %></span>
            </div>
          <% else %>
            <!-- Empty State with Simple Amount Option -->
            <div data-financials-form-target="otherRevenueItems"></div>
            <div data-financials-form-target="otherRevenueEmpty">
              <div class="relative">
                <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-500">$</span>
                <%= form.number_field :other_revenue, min: 0, step: 0.01, class: "w-full rounded-lg border border-gray-300 pl-7 pr-3 py-2 focus:border-pink-500 focus:ring-pink-500", placeholder: "0.00" %>
              </div>
              <p class="text-xs text-gray-500 mt-1">Merchandise, concessions, donations, tips, etc. Or use "Add Item" for itemized tracking.</p>
            </div>
            <div data-financials-form-target="otherRevenueTotalRow" class="hidden flex items-center justify-between pt-3 border-t border-gray-200">
              <span class="text-sm font-medium text-gray-700">Total</span>
              <span data-financials-form-target="otherRevenueTotal" class="text-sm font-semibold text-gray-900">$0.00</span>
            </div>
          <% end %>
        </div>

      <!-- Expenses -->
      <%
        expense_items = @show_financials.expense_details || []
        has_expense_details = expense_items.any?
      %>
      <div class="bg-white rounded-lg border border-gray-200 p-5">
        <div class="flex items-center justify-between mb-4">
          <h3 class="font-semibold text-gray-900 flex items-center gap-2">
            <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"/>
            </svg>
            Expenses
          </h3>
          <%= render "shared/button",
              text: "Add Item",
              variant: "secondary",
              size: "small",
              icon: "plus",
              data: { action: "click->financials-form#openExpenseModal" } %>
        </div>

        <% if has_expense_details %>
          <!-- Line Items List -->
            <div data-financials-form-target="expenseItems" class="space-y-2 mb-3">
              <% expense_items.each_with_index do |item, index| %>
                <div class="flex items-center justify-between bg-gray-50 rounded-lg px-4 py-3" data-line-item data-index="<%= index %>">
                  <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium text-gray-900 truncate"><%= item["description"].presence || "Item #{index + 1}" %></p>
                  </div>
                  <div class="flex items-center gap-3">
                    <span class="text-sm font-semibold text-gray-900"><%= number_to_currency(item["amount"]) %></span>
                    <button type="button"
                            class="text-gray-400 hover:text-pink-600 p-1"
                            data-action="click->financials-form#editExpenseItem"
                            data-index="<%= index %>"
                            data-description="<%= item["description"] %>"
                            data-amount="<%= item["amount"] %>">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
                      </svg>
                    </button>
                    <button type="button"
                            class="text-gray-400 hover:text-red-500 p-1"
                            data-action="click->financials-form#removeExpenseItem"
                            data-index="<%= index %>">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                      </svg>
                    </button>
                  </div>
                  <!-- Hidden fields for form submission -->
                  <input type="hidden" name="show_financials[expense_details][<%= index %>][description]" value="<%= item["description"] %>">
                  <input type="hidden" name="show_financials[expense_details][<%= index %>][amount]" value="<%= item["amount"] %>">
                </div>
              <% end %>
            </div>
            <div class="flex items-center justify-between pt-3 border-t border-gray-200">
              <span class="text-sm font-medium text-gray-700">Total</span>
              <span data-financials-form-target="expensesTotal" class="text-sm font-semibold text-gray-900"><%= number_to_currency(@show_financials.calculated_expenses) %></span>
            </div>
          <% else %>
            <!-- Empty State with Simple Amount Option -->
            <div data-financials-form-target="expenseItems"></div>
            <div data-financials-form-target="expensesEmpty">
              <div class="relative">
                <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-500">$</span>
                <%= form.number_field :expenses, min: 0, step: 0.01, class: "w-full rounded-lg border border-gray-300 pl-7 pr-3 py-2 focus:border-pink-500 focus:ring-pink-500", placeholder: "0.00" %>
              </div>
              <p class="text-xs text-gray-500 mt-1">Venue rental, supplies, etc. Or use "Add Item" for itemized tracking.</p>
            </div>
            <div data-financials-form-target="expensesTotalRow" class="hidden flex items-center justify-between pt-3 border-t border-gray-200">
              <span class="text-sm font-medium text-gray-700">Total</span>
              <span data-financials-form-target="expensesTotal" class="text-sm font-semibold text-gray-900">$0.00</span>
            </div>
          <% end %>
        </div>

      <!-- Notes -->
      <div class="bg-white rounded-lg border border-gray-200 p-5">
        <h3 class="font-semibold text-gray-900 mb-4 flex items-center gap-2">
          <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
          Notes
        </h3>
        <%= form.text_area :notes, rows: 3, class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500", placeholder: "Any notes about this show's finances..." %>
      </div>

      <!-- Summary Preview -->
      <% if @show_financials.has_data? %>
        <div class="bg-gray-50 rounded-lg border border-gray-200 p-5">
          <h3 class="font-semibold text-gray-900 mb-3">Summary</h3>
          <div class="space-y-2 text-sm">
            <div class="flex justify-between">
              <span class="text-gray-600">Primary Revenue</span>
              <span class="font-medium text-gray-900"><%= number_to_currency(@show_financials.primary_revenue) %></span>
            </div>
            <% if @show_financials.calculated_other_revenue > 0 %>
              <div class="flex justify-between">
                <span class="text-gray-600">Other Revenue</span>
                <span class="font-medium text-gray-900"><%= number_to_currency(@show_financials.calculated_other_revenue) %></span>
              </div>
            <% end %>
            <% if @show_financials.calculated_expenses > 0 %>
              <div class="flex justify-between">
                <span class="text-gray-600">Expenses</span>
                <span class="font-medium text-red-600">-<%= number_to_currency(@show_financials.calculated_expenses) %></span>
              </div>
            <% end %>
            <div class="flex justify-between pt-2 border-t border-gray-300">
              <span class="font-medium text-gray-900">Net Revenue</span>
              <span class="font-semibold text-gray-900"><%= number_to_currency(@show_financials.net_revenue) %></span>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Confirm Data Complete (for $0 revenue scenarios) -->
      <div class="bg-gray-50 rounded-lg border border-gray-200 p-5">
        <label class="flex items-start gap-3 cursor-pointer">
          <%= form.check_box :data_confirmed, class: "mt-1 h-4 w-4 text-pink-600 border-gray-300 rounded focus:ring-pink-500 accent-pink-600" %>
          <div>
            <span class="font-medium text-gray-900">Confirm data is complete and accurate</span>
            <p class="text-sm text-gray-500 mt-0.5">Check this box if the data above is correct, even if revenue is $0. This is useful for free shows, canceled shows, or shows where no money changed hands.</p>
          </div>
        </label>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="flex items-center justify-between mt-8 pt-6 border-t border-gray-200 max-w-xl">
      <%= link_to manage_production_money_show_payout_path(@production, @show), class: "text-gray-600 hover:text-gray-900" do %>
        Cancel
      <% end %>
      <%= form.submit "Save Financial Data", class: "inline-flex items-center justify-center gap-2 font-medium rounded transition-colors cursor-pointer whitespace-nowrap px-4 py-2 text-sm bg-pink-500 hover:bg-pink-600 text-white" %>
    </div>

  <% end %>

  <!-- Mark as Non-Revenue Option (outside the form to avoid nested form issue) -->
  <% if EventTypes.revenue_event_default(@show.event_type) %>
    <div class="max-w-xl mt-6">
      <div class="bg-gray-50 rounded-lg border border-gray-200 p-5">
        <div class="flex items-center justify-between">
          <div>
            <h4 class="font-medium text-gray-900">This event didn't generate revenue</h4>
            <p class="text-sm text-gray-500 mt-0.5">Mark this as a non-revenue event to exclude it from payout calculations.</p>
          </div>
          <%= button_to "Mark as Non-Revenue", manage_production_mark_non_revenue_money_show_payout_path(@production, @show),
              method: :post,
              class: "inline-flex items-center px-3 py-1.5 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-pink-500 focus:ring-offset-2",
              data: { turbo_confirm: "Are you sure? This will mark this event as non-revenue and exclude it from payouts." } %>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Other Revenue Modal -->
  <div data-financials-form-target="otherRevenueModal"
       class="hidden fixed inset-0 bg-black/60 backdrop-blur-sm z-50 flex items-center justify-center p-4"
       data-action="click->financials-form#closeOtherRevenueModal keydown.esc@window->financials-form#closeOtherRevenueModal">
    <div class="bg-white w-full max-w-md rounded-lg shadow-xl" data-action="click->financials-form#stopPropagation">
      <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
        <h2 data-financials-form-target="otherRevenueModalTitle" class="text-lg font-semibold text-gray-900">Add Revenue Item</h2>
        <button type="button" data-action="click->financials-form#closeOtherRevenueModal" class="text-gray-400 hover:text-gray-600 p-1 cursor-pointer">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <div class="p-6 space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Description</label>
          <input type="text"
                 data-financials-form-target="otherRevenueDescription"
                 class="w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500"
                 placeholder="e.g., Merchandise sales, Tips, Donations">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Amount</label>
          <div class="relative">
            <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-500">$</span>
            <input type="number"
                   data-financials-form-target="otherRevenueAmount"
                   min="0"
                   step="0.01"
                   class="w-full rounded-lg border border-gray-300 pl-7 pr-3 py-2 focus:border-pink-500 focus:ring-pink-500"
                   placeholder="0.00">
          </div>
        </div>
        <input type="hidden" data-financials-form-target="otherRevenueEditIndex" value="">
      </div>
      <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 flex justify-end gap-3">
        <button type="button"
                data-action="click->financials-form#closeOtherRevenueModal"
                class="px-4 py-2 text-sm font-medium text-gray-700 hover:text-gray-900">
          Cancel
        </button>
        <%= render "shared/button", text: "Save", variant: "primary", size: "medium", data: { action: "click->financials-form#saveOtherRevenueItem", financials_form_target: "otherRevenueSaveButton" } %>
      </div>
    </div>
  </div>

  <!-- Expense Modal -->
  <div data-financials-form-target="expenseModal"
       class="hidden fixed inset-0 bg-black/60 backdrop-blur-sm z-50 flex items-center justify-center p-4"
       data-action="click->financials-form#closeExpenseModal keydown.esc@window->financials-form#closeExpenseModal">
    <div class="bg-white w-full max-w-md rounded-lg shadow-xl" data-action="click->financials-form#stopPropagation">
      <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
        <h2 data-financials-form-target="expenseModalTitle" class="text-lg font-semibold text-gray-900">Add Expense Item</h2>
        <button type="button" data-action="click->financials-form#closeExpenseModal" class="text-gray-400 hover:text-gray-600 p-1 cursor-pointer">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <div class="p-6 space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Description</label>
          <input type="text"
                 data-financials-form-target="expenseDescription"
                 class="w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500"
                 placeholder="e.g., Venue rental, Sound equipment, Props">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Amount</label>
          <div class="relative">
            <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-500">$</span>
            <input type="number"
                   data-financials-form-target="expenseAmount"
                   min="0"
                   step="0.01"
                   class="w-full rounded-lg border border-gray-300 pl-7 pr-3 py-2 focus:border-pink-500 focus:ring-pink-500"
                   placeholder="0.00">
          </div>
        </div>
        <input type="hidden" data-financials-form-target="expenseEditIndex" value="">
      </div>
