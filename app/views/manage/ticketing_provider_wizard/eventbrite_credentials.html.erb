<% content_for :title, "Connect Eventbrite" %>

<div class="w-full mb-10">
  <%= render partial: "shared/notice", locals: { notice: notice, alert: alert } %>
  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Ticketing", manage_ticketing_index_path],
      ["Providers", manage_ticketing_providers_path],
      ["Connect", manage_ticketing_provider_wizard_select_path]
    ],
    text: "Eventbrite",
    links: []
  } %>

  <div class="max-w-3xl mx-auto mt-8">
    <!-- Progress indicator -->
    <div class="mb-8">
      <div class="flex items-center justify-center gap-4">
        <div class="flex items-center gap-2">
          <div class="w-8 h-8 rounded-full bg-green-500 text-white flex items-center justify-center text-sm font-medium">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
          </div>
          <span class="text-sm text-gray-500">Select Platform</span>
        </div>
        <div class="w-8 h-px bg-gray-300"></div>
        <div class="flex items-center gap-2">
          <div class="w-8 h-8 rounded-full bg-pink-600 text-white flex items-center justify-center text-sm font-medium">2</div>
          <span class="text-sm font-medium text-pink-600">Enter Credentials</span>
        </div>
        <div class="w-8 h-px bg-gray-300"></div>
        <div class="flex items-center gap-2">
          <div class="w-8 h-8 rounded-full bg-gray-200 text-gray-500 flex items-center justify-center text-sm font-medium">3</div>
          <span class="text-sm text-gray-500">Configure Webhooks</span>
        </div>
        <div class="w-8 h-px bg-gray-300"></div>
        <div class="flex items-center gap-2">
          <div class="w-8 h-8 rounded-full bg-gray-200 text-gray-500 flex items-center justify-center text-sm font-medium">4</div>
          <span class="text-sm text-gray-500">Test & Complete</span>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-5 gap-8">
      <!-- Instructions sidebar -->
      <div class="lg:col-span-2 space-y-6">
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-5">
          <h3 class="font-semibold text-blue-900 mb-3 flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            How to get your Private Token
          </h3>
          <ol class="text-sm text-blue-800 space-y-3">
            <li class="flex gap-2">
              <span class="font-bold text-blue-600">1.</span>
              <span>Log in to your <a href="https://www.eventbrite.com/signin" target="_blank" class="underline hover:text-blue-600">Eventbrite account</a></span>
            </li>
            <li class="flex gap-2">
              <span class="font-bold text-blue-600">2.</span>
              <span>Go to <a href="https://www.eventbrite.com/account-settings/apps" target="_blank" class="underline hover:text-blue-600">Account Settings → Apps</a></span>
            </li>
            <li class="flex gap-2">
              <span class="font-bold text-blue-600">3.</span>
              <span>Under <strong>API Keys</strong>, click <strong>"Create API Key"</strong></span>
            </li>
            <li class="flex gap-2">
              <span class="font-bold text-blue-600">4.</span>
              <span>Fill out the application form with:</span>
            </li>
          </ol>
          <div class="mt-3 ml-6 text-sm text-blue-700 bg-blue-100 rounded p-3">
            <p><strong>Application Name:</strong> CocoScout</p>
            <p><strong>Application URL:</strong> https://cocoscout.com</p>
            <p><strong>Description:</strong> Cast management integration</p>
          </div>
          <ol class="text-sm text-blue-800 space-y-3 mt-3" start="5">
            <li class="flex gap-2">
              <span class="font-bold text-blue-600">5.</span>
              <span>Once approved, copy your <strong>Private Token</strong></span>
            </li>
          </ol>
        </div>

        <div class="bg-amber-50 border border-amber-200 rounded-lg p-5">
          <h4 class="font-semibold text-amber-800 mb-2 flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            API Key Approval
          </h4>
          <p class="text-sm text-amber-700">
            Eventbrite may take <strong>1-2 business days</strong> to approve your API key application. 
            You can continue this setup once you have your token.
          </p>
        </div>

        <div class="text-sm text-gray-500">
          <p class="mb-2">Need help? Check out:</p>
          <a href="https://www.eventbrite.com/platform/api" target="_blank" class="text-pink-600 hover:text-pink-700 flex items-center gap-1">
            Eventbrite API Documentation
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Form -->
      <div class="lg:col-span-3">
        <div class="bg-white rounded-lg border border-gray-200 shadow-sm p-6">
          <%= form_with model: @provider, url: manage_ticketing_provider_wizard_eventbrite_path, method: :post, class: "space-y-6" do |form| %>
            <% if @provider.errors.any? %>
              <div class="bg-red-50 border border-red-200 rounded-lg p-4">
                <ul class="list-disc list-inside text-red-700 text-sm">
                  <% @provider.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Connection Name</label>
              <%= form.text_field :name, 
                class: "w-full rounded-lg border border-gray-300 px-4 py-3 focus:border-pink-500 focus:ring-pink-500", 
                placeholder: "e.g., My Eventbrite Account",
                required: true %>
              <p class="text-xs text-gray-500 mt-1">A friendly name to identify this connection</p>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Private Token</label>
              <%= form.text_field :api_key, 
                class: "w-full rounded-lg border border-gray-300 px-4 py-3 focus:border-pink-500 focus:ring-pink-500 font-mono text-sm", 
                placeholder: "Your private token",
                required: true,
                autocomplete: "off" %>
              <p class="text-xs text-gray-500 mt-1">Found in your Eventbrite App settings under "Your personal OAuth token"</p>
            </div>

            <div class="pt-4 flex items-center justify-between border-t border-gray-200">
              <%= link_to manage_ticketing_provider_wizard_select_path do %>
                <%= render "shared/button", text: "← Back", variant: "ghost", size: "medium" %>
              <% end %>
              <%= render "shared/button", text: "Continue →", variant: "primary", size: "medium", type: :submit %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
