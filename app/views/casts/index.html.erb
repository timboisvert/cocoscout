<% content_for :title, "Casting" %>

<div class="w-full">
  <%= render partial: "shared/notice", locals: { notice: notice } %>
  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Productions", productions_path],
      [@production.name, production_path(@production)]
    ],
    text: "Casting",
    links: [
      { text: "+ Add a Cast", path: new_production_cast_path(@production) }
    ]
  } %>


  <div id="casts" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @casts.any? %>
      <% @casts.each do |cast| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">


          <%= cast.name %>
          <br>
          Todo: Show the members of the cast

          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
            <%= link_to "Edit", edit_production_cast_path(@production, cast), class: "w-full sm:w-auto text-center rounded-lg px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
            <%= button_to "Delete", production_cast_path(@production, cast), method: :delete, class: "w-full sm:w-auto rounded-lg px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No casts found. <%= link_to "+ Add a Cast", new_production_cast_path(@production), class: "text-pink-500 underline" %></p>
    <% end %>
  </div>
</div>
