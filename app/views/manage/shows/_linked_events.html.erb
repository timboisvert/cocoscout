<%# Linked Events Management Partial %>
<%# Shows the current linkage status with a button to open modal for editing %>

<%
  # Determine the primary show (explicitly set, or first by date as fallback)
  primary_show = show.linked? ? show.event_linkage.resolved_primary_show : nil
%>

<div data-controller="show-linkage" 
     data-show-linkage-show-id-value="<%= show.id %>"
     data-show-linkage-production-id-value="<%= production.id %>">

  <% if show.linked? %>
    <%# Show current linkage - read only display %>
    <div class="mb-6">
      <div class="flex items-center justify-between mb-4">
        <div>
          <h3 class="text-lg font-medium text-gray-900">This event is linked</h3>
          <p class="text-sm text-gray-500">
            This <%= show.event_type %> is linked with <%= show.event_linkage.shows.count - 1 %> other event<%= show.event_linkage.shows.count > 2 ? 's' : '' %>.
          </p>
        </div>
        <%= render "shared/button", 
                text: "Manage Linkage", 
                variant: "outline-pink", 
                size: "small",
                icon: "pencil",
                type: :button,
                data: { action: "click->show-linkage#openModal" } %>
      </div>

      <%# List linked events - read only %>
      <div class="border border-gray-200 rounded-lg overflow-hidden">
        <div class="bg-gray-50 px-4 py-2 border-b border-gray-200">
          <span class="text-sm font-medium text-gray-700">Linked Events (<%= show.event_linkage.shows.count %>)</span>
        </div>
        
        <% all_linked_shows = show.event_linkage.shows.order(:date_and_time) %>
        <% all_linked_shows.each do |linked_show| %>
          <% is_current = linked_show.id == show.id %>
          <% is_primary = linked_show.id == primary_show&.id %>
          <% event_name = linked_show.secondary_name.presence || linked_show.event_type.titleize %>
          
          <% row_content = capture do %>
            <div class="flex items-center gap-3">
              <div class="flex-shrink-0 w-12 text-center">
                <div class="text-xs font-semibold text-pink-600 uppercase"><%= linked_show.date_and_time.strftime("%b") %></div>
                <div class="text-lg font-bold text-gray-900"><%= linked_show.date_and_time.strftime("%-d") %></div>
              </div>
              <div>
                <div class="text-sm font-medium text-gray-900">
                  <%= event_name %>
                  <% if is_current %>
                    <span class="text-xs text-pink-600 font-normal">(this event)</span>
                  <% end %>
                  <% if is_primary %>
                    <span class="inline-flex items-center ml-1 px-1.5 py-0.5 rounded text-xs font-medium bg-pink-100 text-pink-700">Primary</span>
                  <% end %>
                </div>
                <div class="text-xs text-gray-500">
                  <%= linked_show.date_and_time.strftime("%A, %B %-d @ %-I:%M %p") %>
                  <% if linked_show.secondary_name.present? %>
                    <span class="mx-1">Â·</span>
                    <span class="text-gray-400"><%= linked_show.event_type.titleize %></span>
                  <% end %>
                </div>
              </div>
            </div>
            <% unless is_current %>
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            <% end %>
          <% end %>
          
          <% if is_current %>
            <div class="flex items-center justify-between px-4 py-3 border-b border-gray-100 last:border-b-0 ring-2 ring-inset ring-pink-200 bg-pink-50">
              <%= row_content %>
            </div>
          <% else %>
            <%= link_to edit_manage_production_show_path(production, linked_show), class: "flex items-center justify-between px-4 py-3 border-b border-gray-100 last:border-b-0 hover:bg-gray-50 transition-colors cursor-pointer block" do %>
              <%= row_content %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>

  <% else %>
    <%# Not linked - show empty state with button to open modal %>
    <div class="text-center py-8">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No linked events</h3>
      <p class="mt-1 text-sm text-gray-500">Link this event with other shows or rehearsals to manage them together.</p>
      <p class="mt-1 text-xs text-gray-400">Linked events share availability tracking.</p>
      
      <div class="mt-6">
        <%= render "shared/button", 
                text: "Link Events", 
                variant: "primary", 
                icon: "link",
                type: :button,
                data: { action: "click->show-linkage#openModal" } %>
      </div>
    </div>
  <% end %>

  <%# Modal for managing linkages %>
  <%= render "manage/shows/linked_events_modal", show: show, production: production %>
</div>
