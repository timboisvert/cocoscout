                                      class: "inline-flex items-center gap-1 px-1.5 py-0.5 rounded text-[10px] font-medium bg-amber-100 text-amber-700 hover:bg-amber-200" do %>
                                    <svg class="w-2.5 h-2.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                    </svg>
                                    −<%= number_to_currency(advance.remaining_balance) %> advance
                                  <% end %>
                                <% end %>
                              <% end %>
                            </div>
                          <% end %>
                        </div>
                      </div>
                    </td>
                    <td class="py-3 text-right">
                      <% if total_advance_deduction > 0 %>
                        <div class="text-right">
                          <span class="text-xs text-gray-400 line-through"><%= number_to_currency(total_amount) %></span>
                          <div class="font-semibold <%= all_paid ? 'text-green-700' : 'text-gray-900' %>"><%= number_to_currency(total_net_amount) %></div>
                          <span class="text-[10px] text-amber-600">−<%= number_to_currency(total_advance_deduction) %> advance repaid</span>
                        </div>
                      <% else %>
                        <span class="font-semibold <%= all_paid ? 'text-green-700' : 'text-gray-900' %>"><%= number_to_currency(total_amount) %></span>
                      <% end %>
                    </td>
                    <td class="py-3 pl-4 hidden sm:table-cell">
                      <div class="space-y-1">
                        <% items.each do |li| %>
                          <div class="text-sm text-gray-500">
                            <% if items.size > 1 && li.is_individual_allocation? %>
                              <span class="text-gray-600 font-medium">Allocation:</span>
                            <% elsif items.size > 1 %>
                              <span class="text-gray-600 font-medium">Performer:</span>
                            <% end %>
                            <%= li.calculation_explanation %>
                          </div>
                        <% end %>
                      </div>
                    </td>
                    <% if is_calculated || @show_payout.paid? %>
                      <td class="py-3 text-right">
                        <% if all_paid %>
                          <div class="flex items-center justify-end gap-2">
                            <div class="text-right">
                              <span class="inline-flex items-center rounded-md px-2 py-0.5 text-xs font-medium bg-green-100 text-green-700">
                                <%= item.payment_method_label || "Paid" %>
                              </span>
                              <% if item.paid_at %>
                                <div class="text-xs text-gray-400 mt-0.5"><%= item.paid_at.strftime("%b %-d") %></div>
                              <% end %>
                            </div>
                            <% unless @show_payout.paid? %>
                              <% items.each do |li| %>
                                <%= button_to manage_unmark_line_item_paid_money_show_payout_path(@show, li),
                                    method: :delete,
                                    class: "text-gray-400 hover:text-gray-600",
                                    title: "Unmark as paid",
                                    data: { turbo_confirm: "Unmark #{li.payee_name} as paid?" } do %>
                                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                                  </svg>
                                <% end %>
                              <% end %>
                            <% end %>
                          </div>
                        <% elsif any_pending %>
                          <div class="text-right">
                            <span class="inline-flex items-center rounded-md px-2 py-0.5 text-xs font-medium bg-gray-100 text-gray-700">
                              Processing
                            </span>
                            <div class="text-xs text-gray-400 mt-0.5">via <%= item.payment_method_label || "Venmo" %></div>
                          </div>
                        <% elsif any_failed %>
                          <div class="text-right">
                            <span class="inline-flex items-center rounded-md px-2 py-0.5 text-xs font-medium bg-red-100 text-red-700">
                              Failed
                            </span>
                            <% failed_item = items.find(&:payout_failed?) %>
