<%# Finalized cast view - read-only compact display %>
<%
  roles ||= show.available_roles.to_a
  assignments_by_role_id ||= show.show_person_role_assignments.group_by(&:role_id)
  people_by_id ||= {}
  groups_by_id ||= {}
  cancelled_vacancies_by_assignment = show.cant_make_it_vacancies_by_assignment
%>

<div class="bg-white border border-gray-200 rounded-lg overflow-hidden mb-6">
  <div class="bg-gray-50 px-4 py-3 border-b border-gray-200 flex items-center justify-between">
    <h2 class="text-sm font-semibold text-gray-800">Casting Finalized</h2>
    <span class="text-xs text-gray-500">
      Finalized <%= time_ago_in_words(show.casting_finalized_at) %> ago
    </span>
  </div>

  <div class="p-4">
    <p class="text-sm text-gray-600 mb-4">
      The cast for this show has been finalized and notifications have been sent.
    </p>

    <%# Compact cast list %>
    <div class="space-y-2 mb-6">
      <% roles.each do |role| %>
        <%
          assignments = assignments_by_role_id[role.id] || []
          assignment = assignments.first
        %>
        <%
          cant_make_it_vacancy = nil
          assignable = nil
          if assignment
            assignable = if assignment.assignable_type == "Person"
              people_by_id[assignment.assignable_id] || assignment.assignable
            else
              groups_by_id[assignment.assignable_id] || assignment.assignable
            end
            cant_make_it_vacancy = cancelled_vacancies_by_assignment[[role.id, assignable.class.name, assignable.id]]
          end
        %>
        <div class="flex items-center gap-3 p-2 <%= cant_make_it_vacancy ? 'border border-amber-300 bg-amber-50' : 'bg-gray-50' %> rounded-lg">
          <% if assignment %>
            <% headshot_variant = assignable.safe_headshot_variant(:thumb) %>
            <% if headshot_variant %>
              <%= image_tag headshot_variant, alt: assignable.name, class: "w-10 h-10 rounded-lg object-cover flex-shrink-0 #{cant_make_it_vacancy ? 'ring-2 ring-amber-400' : ''}" %>
            <% else %>
              <div class="w-10 h-10 rounded-lg <%= cant_make_it_vacancy ? 'bg-amber-100 text-amber-700 ring-2 ring-amber-400' : 'bg-gray-100 text-gray-700' %> flex items-center justify-center font-bold text-sm flex-shrink-0">
                <%= assignable.initials %>
              </div>
            <% end %>
            <div class="flex-1 min-w-0">
              <div class="font-medium text-gray-900 text-sm truncate"><%= assignable.name %></div>
              <div class="text-xs text-gray-500"><%= role.name %></div>
              <% if cant_make_it_vacancy %>
                <div class="flex items-center gap-1 text-amber-600 mt-0.5">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-3.5 h-3.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
                  </svg>
                  <span class="text-xs font-medium">
                    <% if cant_make_it_vacancy.active? %>
                      Can't make it – looking for replacement
                    <% elsif cant_make_it_vacancy.not_filling? %>
                      Can't make it – no replacement
                    <% elsif cant_make_it_vacancy.filled? %>
                      Can't make it – replaced
                    <% else %>
                      Can't make it
                    <% end %>
                  </span>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="w-10 h-10 rounded-lg bg-gray-200 flex items-center justify-center text-gray-400 text-sm flex-shrink-0">
              ?
            </div>
            <div class="flex-1 min-w-0">
              <div class="font-medium text-gray-400 text-sm">Not assigned</div>
              <div class="text-xs text-gray-400"><%= role.name %></div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <%# Make Changes button %>
    <div class="flex items-center gap-3">
      <% form_with url: manage_production_reopen_casting_path(production, show.id), method: :patch, class: "inline", data: { turbo_confirm: "Are you sure you want to reopen casting for this show? You can make changes and finalize again when ready." } do |f| %>
        <%= render "shared/button", text: "Make Changes", variant: "primary", size: "medium", type: :submit %>
      <% end %>
      <span class="text-xs text-gray-500">
        You'll need to finalize again after making changes.
      </span>
    </div>
  </div>
</div>
