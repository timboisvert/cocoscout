<% content_for :title, "Transfer Preview" %>

<div class="w-full">
  <%= render partial: "shared/notice", locals: { notice: notice } %>

  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Shows & Events", manage_shows_path],
      [@production.name, manage_production_shows_path(@production)],
      [@show.event_type.titleize, manage_show_path(@production, @show)],
      ["Transfer", manage_transfer_show_select_path(@production, @show)]
    ],
    text: "Confirm Transfer",
    links: []
  } %>

  <!-- Transfer Summary -->
  <div class="mt-5 bg-white border border-gray-200 rounded-lg overflow-hidden">
    <div class="p-6">
      <div class="flex items-center gap-4 justify-center">
        <!-- From Production -->
        <div class="text-center">
          <% if @production.logo.attached? %>
            <%= image_tag @production.logo.variant(:small), class: "w-16 h-16 rounded-lg object-cover mx-auto" %>
          <% else %>
            <div class="w-16 h-16 rounded-lg bg-gray-100 flex items-center justify-center mx-auto">
              <span class="text-gray-400 text-lg font-medium"><%= @production.name.first(2).upcase %></span>
            </div>
          <% end %>
          <div class="mt-2 font-medium text-gray-900"><%= @production.name %></div>
          <div class="text-xs text-gray-500">Current</div>
        </div>

        <!-- Arrow -->
        <div class="px-6">
          <svg class="w-8 h-8 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </div>

        <!-- To Production -->
        <div class="text-center">
          <% if @target_production.logo.attached? %>
            <%= image_tag @target_production.logo.variant(:small), class: "w-16 h-16 rounded-lg object-cover mx-auto border-2 border-pink-500" %>
          <% else %>
            <div class="w-16 h-16 rounded-lg bg-pink-100 flex items-center justify-center mx-auto border-2 border-pink-500">
              <span class="text-pink-600 text-lg font-medium"><%= @target_production.name.first(2).upcase %></span>
            </div>
          <% end %>
          <div class="mt-2 font-medium text-gray-900"><%= @target_production.name %></div>
          <div class="text-xs text-pink-600 font-medium">Destination</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Events Being Transferred -->
  <div class="mt-6 bg-white border border-gray-200 rounded-lg overflow-hidden">
    <%= render "shared/card_header", title: "Events Being Transferred (#{@shows_to_transfer.count})" %>

    <div class="divide-y divide-gray-200">
      <% @shows_to_transfer.sort_by(&:date_and_time).each do |show| %>
        <div class="p-4 flex items-center gap-4">
          <div class="w-10 h-10 rounded-lg bg-gray-100 flex items-center justify-center flex-shrink-0">
            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
          </div>
          <div class="flex-1 min-w-0">
            <div class="font-medium text-gray-900">
              <%= show.event_type.titleize %>
              <% if show.secondary_name.present? %>
                <span class="text-gray-500 font-normal">- <%= show.secondary_name %></span>
              <% end %>
              <% if show == @show %>
                <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-pink-100 text-pink-700">Selected</span>
              <% end %>
            </div>
            <div class="text-sm text-gray-500">
              <%= show.date_and_time.strftime("%A, %B %-d, %Y at %l:%M %p") %>
            </div>
          </div>
          <% if show.canceled %>
            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-600">Canceled</span>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Data Being Transferred -->
  <div class="mt-6 bg-white border border-gray-200 rounded-lg overflow-hidden">
    <%= render "shared/card_header", title: "Data Being Transferred" %>

    <div class="p-6">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <!-- Cast Members -->
        <div class="p-4 bg-gray-50 rounded-lg">
          <div class="flex items-center gap-2 mb-2">
            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
            </svg>
            <span class="font-medium text-gray-900">Cast Assignments</span>
          </div>
          <div class="text-2xl font-bold text-gray-900"><%= @transfer_summary[:cast_count] %></div>
          <div class="text-sm text-gray-500">role assignments across all events</div>
        </div>

        <!-- Custom Roles -->
        <% if @transfer_summary[:custom_roles_count] > 0 %>
          <div class="p-4 bg-gray-50 rounded-lg">
            <div class="flex items-center gap-2 mb-2">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
              </svg>
              <span class="font-medium text-gray-900">Custom Roles</span>
            </div>
            <div class="text-2xl font-bold text-gray-900"><%= @transfer_summary[:custom_roles_count] %></div>
            <div class="text-sm text-gray-500">show-specific roles</div>
          </div>
        <% end %>

        <!-- Sign-up Forms -->
        <% if @transfer_summary[:signup_forms_count] > 0 %>
          <div class="p-4 bg-gray-50 rounded-lg">
            <div class="flex items-center gap-2 mb-2">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
              </svg>
              <span class="font-medium text-gray-900">Sign-up Forms</span>
            </div>
            <div class="text-2xl font-bold text-gray-900"><%= @transfer_summary[:signup_forms_count] %></div>
            <div class="text-sm text-gray-500">forms linked to these events</div>
          </div>
        <% end %>

        <!-- Financials -->
        <% if @transfer_summary[:financials_count] > 0 %>
          <div class="p-4 bg-gray-50 rounded-lg">
            <div class="flex items-center gap-2 mb-2">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span class="font-medium text-gray-900">Financials</span>
            </div>
            <div class="text-2xl font-bold text-gray-900"><%= @transfer_summary[:financials_count] %></div>
            <div class="text-sm text-gray-500">show financials/payouts</div>
          </div>
        <% end %>

        <!-- Vacancies -->
        <% if @transfer_summary[:vacancies_count] > 0 %>
          <div class="p-4 bg-gray-50 rounded-lg">
            <div class="flex items-center gap-2 mb-2">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
              </svg>
              <span class="font-medium text-gray-900">Open Vacancies</span>
            </div>
            <div class="text-2xl font-bold text-gray-900"><%= @transfer_summary[:vacancies_count] %></div>
            <div class="text-sm text-gray-500">open role vacancies</div>
          </div>
        <% end %>
      </div>

      <% if @transfer_summary[:warnings].any? %>
        <div class="mt-6 p-4 bg-amber-50 border border-amber-200 rounded-lg">
          <div class="flex items-start gap-2">
            <svg class="w-5 h-5 text-amber-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
            </svg>
            <div>
              <div class="font-medium text-amber-800">Things to note:</div>
              <ul class="mt-1 text-sm text-amber-700 list-disc list-inside">
                <% @transfer_summary[:warnings].each do |warning| %>
                  <li><%= warning %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Confirm Form -->
  <%= form_with url: manage_transfer_show_path(@production, @show), method: :patch, class: "mt-6" do |f| %>
    <%= hidden_field_tag :target_production_id, @target_production.id %>
    <%= hidden_field_tag :recurring_scope, @recurring_scope %>
    <%= hidden_field_tag :linked_scope, @linked_scope %>

    <div class="bg-white border border-gray-200 rounded-lg overflow-hidden">
      <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 flex justify-between items-center">
        <%= render "shared/button", text: "Back", path: manage_transfer_show_select_path(@production, @show), variant: "ghost-cancel", size: "medium" %>
        <%= render "shared/button", text: "Transfer #{@shows_to_transfer.count == 1 ? 'Event' : "#{@shows_to_transfer.count} Events"}", variant: "primary", size: "medium", type: :submit %>
      </div>
    </div>
  <% end %>
</div>
