<% content_for :title, "Create Payroll Run" %>

<div class="w-full mb-10">
  <%= render partial: "shared/notice", locals: { notice: notice, alert: alert } %>

  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Money", manage_money_index_path],
      ["Payouts", manage_money_payouts_path],
      ["Payroll", manage_money_payroll_path]
    ],
    text: "Create Payroll Run",
    links: []
  } %>

  <div class="max-w-4xl">
    <%= form_with url: manage_create_money_payroll_run_path, method: :post, class: "space-y-6" do |f| %>
      <div class="bg-white rounded-lg border border-gray-200 p-6">
        <h3 class="font-semibold text-gray-900 mb-4">Pay Period</h3>

        <div class="grid grid-cols-2 gap-4 mb-6">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Period Start</label>
            <input type="date" name="payroll_run[period_start]"
                   value="<%= @period_start&.strftime('%Y-%m-%d') %>"
                   class="w-full border-gray-300 rounded-lg shadow-sm focus:ring-pink-500 focus:border-pink-500"
                   required />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Period End</label>
            <input type="date" name="payroll_run[period_end]"
                   value="<%= @period_end&.strftime('%Y-%m-%d') %>"
                   class="w-full border-gray-300 rounded-lg shadow-sm focus:ring-pink-500 focus:border-pink-500"
                   required />
          </div>
        </div>

        <div class="mb-6">
          <label class="block text-sm font-medium text-gray-700 mb-2">Notes (optional)</label>
          <textarea name="payroll_run[notes]" rows="2"
                    class="w-full border-gray-300 rounded-lg shadow-sm focus:ring-pink-500 focus:border-pink-500"
                    placeholder="e.g., January 2nd half payroll"></textarea>
        </div>
      </div>

      <%# Preview Section %>
      <% if @preview_items.present? %>
        <div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
          <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
            <h3 class="font-semibold text-gray-900">Preview: <%= @preview_items.size %> people will be included</h3>
            <div class="text-sm text-gray-500">
              Total: <span class="font-medium text-gray-900"><%= number_to_currency(@preview_items.sum { |_, data| data[:net] }) %></span>
            </div>
          </div>
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Person</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Shows</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Gross</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Advance Ded.</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Net</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <% @preview_items.each do |person, data| %>
                <tr>
                  <td class="px-6 py-4 text-sm text-gray-900"><%= person.respond_to?(:name) ? person.name : "Unknown" %></td>
                  <td class="px-6 py-4 text-sm text-gray-600 text-right"><%= data[:show_count] %></td>
                  <td class="px-6 py-4 text-sm text-gray-900 text-right"><%= number_to_currency(data[:gross]) %></td>
                  <td class="px-6 py-4 text-sm text-red-600 text-right">
                    <%= (data[:deductions] || 0) > 0 ? "-#{number_to_currency(data[:deductions])}" : "â€”" %>
                  </td>
                  <td class="px-6 py-4 text-sm font-medium text-gray-900 text-right"><%= number_to_currency(data[:net]) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="bg-amber-50 border border-amber-200 rounded-lg p-6 text-center">
          <div class="text-amber-700">
            <p class="font-medium">No unpaid payouts found in this period</p>
            <p class="text-sm mt-1">Adjust the date range or ensure there are shows with calculated payouts.</p>
          </div>
        </div>
      <% end %>

      <div class="flex items-center gap-4">
        <% if @preview_items.present? %>
          <%= f.submit "Create Payroll Run", class: "px-6 py-2 bg-pink-600 text-white rounded-lg hover:bg-pink-700 transition-colors cursor-pointer" %>
        <% else %>
          <button type="submit" disabled class="px-6 py-2 bg-gray-300 text-gray-500 rounded-lg cursor-not-allowed">Create Payroll Run</button>
        <% end %>
        <%= link_to "Cancel", manage_money_payroll_path, class: "px-4 py-2 text-gray-600 hover:text-gray-900" %>
      </div>
      </div>
    <% end %>
  </div>
</div>
