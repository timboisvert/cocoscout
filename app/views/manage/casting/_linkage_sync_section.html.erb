<%#
  Linkage Sync Section - Integrated into the casting progress bar
  Shows sync status between this show's cast and its linked shows.

  Parameters:
    - show: The current show
    - linked_shows: Array of linked Show objects
    - sync_info: Hash with sync status info from build_linkage_sync_info
    - production: The Production object
    - fully_cast: Boolean whether this show is 100% cast
%>

<div id="linkage-sync-section" class="border-t border-gray-200 p-4">
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 sm:gap-4">
    <div class="flex items-center gap-3">
      <% if sync_info[:all_in_sync] %>
        <%# Synced state - green indicator %>
        <div class="w-6 h-6 bg-green-500 rounded-full flex items-center justify-center flex-shrink-0">
          <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
          </svg>
        </div>
        <div>
          <div class="text-sm font-semibold text-gray-900">
            Synced with <%= linked_shows.count %> linked <%= "event".pluralize(linked_shows.count) %>
          </div>
          <div class="text-xs text-gray-500 mt-0.5">
            <% linked_shows.first(3).each_with_index do |ls, i| %>
              <%= ls.date_and_time.strftime("%b %-d") %><%= i < [linked_shows.count, 3].min - 1 ? ", " : "" %>
            <% end %>
            <% if linked_shows.count > 3 %>
              <span class="text-gray-400">+<%= linked_shows.count - 3 %> more</span>
            <% end %>
          </div>
        </div>
      <% else %>
        <%# Out of sync state - amber warning icon but normal text %>
        <div class="w-6 h-6 bg-amber-500 rounded-full flex items-center justify-center flex-shrink-0">
          <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
          </svg>
        </div>
        <div>
          <div class="text-sm font-semibold text-gray-900">
            <%= linked_shows.count %> linked <%= "event".pluralize(linked_shows.count) %> out of sync
          </div>
          <div class="text-xs text-gray-500 mt-0.5">
            <% if !sync_info[:roles_match] %>
              Syncing will replace roles and cast assignments on linked events
            <% else %>
              Cast assignments don't match across linked events
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <% unless sync_info[:all_in_sync] %>
      <%= button_to "Sync Now",
          manage_production_copy_cast_to_linked_path(production, show_id: show.id),
          method: :post,
          class: "inline-flex items-center gap-1.5 px-3 py-1.5 text-sm font-medium text-white bg-pink-500 rounded-md hover:bg-pink-600 transition-colors cursor-pointer",
          data: { turbo_confirm: "This will copy this event's roles and cast to all #{linked_shows.count} linked events, replacing their current roles and assignments. Continue?" } %>
    <% end %>
  </div>

  <% unless sync_info[:all_in_sync] %>
    <% if fully_cast %>
      <div class="mt-3 p-3 bg-amber-50 border border-amber-200 rounded-lg">
        <div class="flex items-start gap-2">
          <svg class="w-4 h-4 text-amber-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a.75.75 0 000 1.5h.253a.25.25 0 01.244.304l-.459 2.066A1.75 1.75 0 0010.747 15H11a.75.75 0 000-1.5h-.253a.25.25 0 01-.244-.304l.459-2.066A1.75 1.75 0 009.253 9H9z" clip-rule="evenodd" />
          </svg>
          <p class="text-sm text-amber-800">
            <strong>Sync required before finalizing.</strong>
            Roles and cast must be synced to all linked events before you can finalize and send notifications.
          </p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
