<% content_for :title, "Import Content Templates - Superadmin" %>

<div class="w-full px-5 pt-5">
  <%= render partial: "shared/notice", locals: { notice: notice } %>

  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
        ["Superadmin", superadmin_path],
        ["Content Templates", content_templates_path]
    ],
    text: "Import Templates",
    links: []
  } %>

  <div class="mt-4 max-w-2xl">
    <div class="bg-white border border-gray-200 rounded-lg p-6">
      <div class="mb-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Import Content Templates</h3>
        <p class="text-sm text-gray-600">
          Upload a JSON file exported from another CocoScout environment to replace all content templates.
        </p>
      </div>

      <div class="mb-6 p-4 bg-amber-50 border border-amber-200 rounded-lg">
        <div class="flex items-start gap-3">
          <svg class="w-5 h-5 text-amber-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
          </svg>
          <div class="text-sm text-amber-800">
            <p class="font-medium mb-1">Warning: This will replace all templates</p>
            <p>Importing will delete ALL existing content templates and replace them with the imported ones. This action cannot be undone.</p>
          </div>
        </div>
      </div>

      <%= form_with url: content_template_import_path, method: :post, multipart: true, class: "space-y-4" do |f| %>
        <div>
          <label for="file" class="block text-sm font-medium text-gray-700 mb-2">Select JSON File</label>
          <input type="file" name="file" id="file" accept=".json,application/json"
                 class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-medium file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100 cursor-pointer">
          <p class="mt-1 text-xs text-gray-500">Only .json files exported from CocoScout are supported</p>
        </div>

        <div class="pt-4 border-t border-gray-200 flex items-center gap-3">
          <button type="submit" class="px-4 py-2 bg-purple-600 text-white rounded-md hover:bg-purple-700 text-sm font-medium">
            Import Templates
          </button>
          <%= link_to "Cancel", content_templates_path, class: "px-4 py-2 text-gray-700 hover:text-gray-900 text-sm font-medium" %>
        </div>
      <% end %>
    </div>

    <div class="mt-6 bg-white border border-gray-200 rounded-lg p-6">
      <h4 class="text-sm font-semibold text-gray-900 mb-3">Import Process</h4>
      <ol class="text-sm text-gray-600 space-y-2 list-decimal list-inside">
        <li>The file is validated for correct JSON structure</li>
        <li>Each template is validated for required fields (key, name, subject, body)</li>
        <li>Channels and categories are validated against allowed values</li>
        <li>If all validations pass, existing templates are deleted</li>
        <li>New templates are imported from the file</li>
      </ol>
    </div>
  </div>
</div>
