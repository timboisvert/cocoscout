<% content_for :title, "Sign-ups" %>
<div class="w-full">
  <%= render partial: "shared/notice", locals: { notice: notice } %>
  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Auditions", manage_production_auditions_path(@production)],
      ["Review", review_manage_production_audition_cycle_path(@production, @audition_cycle)]
    ],
    text: (@audition_cycle.audition_type == "video_upload") ? "Video Auditions" : "Sign-ups",
    links: []
  } %>

  <%= render partial: "manage/auditions/lifecycle_panel", locals: { current_step: :review } %>

  <div class="space-y-1 mb-4">
    <% if @audition_requests.any? %>
      <% @audition_requests.each do |audition_request| %>
        <% requestable = audition_request.requestable %>
        <% vote_counts = audition_request.vote_counts if current_user_can_review?(@production) %>

        <%= link_to manage_production_audition_cycle_audition_request_path(@production, @audition_cycle, audition_request),
            class: "flex items-stretch px-3 py-2 border rounded-lg hover:border-gray-400 transition-all group bg-white border-gray-200",
            data: { turbo_prefetch: false } do %>

          <%# Left Section: Headshot & Name (50%) %>
          <div class="w-1/2 flex items-center gap-4">
            <% if requestable.present? %>
              <div class="flex-shrink-0">
                <% headshot_url = safe_headshot_url(requestable) %>
                <% if headshot_url %>
                  <%= image_tag headshot_url, class: "relative inline-block h-12 w-12 !rounded-lg object-cover object-center" %>
                <% else %>
                  <% if requestable.is_a?(Person) %>
                    <div class="w-12 h-12 rounded-lg bg-gray-100 flex items-center justify-center text-black font-bold">
                      <%= requestable.initials %>
                    </div>
                  <% else %>
                    <%# Group without headshot %>
                    <div class="w-12 h-12 rounded-lg bg-purple-100 flex items-center justify-center text-purple-600 font-bold">
                      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                      </svg>
                    </div>
                  <% end %>
                <% end %>
              </div>
              <div class="flex-1 min-w-0">
                <div class="font-medium text-gray-900 truncate">
                  <%= truncate(requestable.name, length: 50, omission: "...") %>
                </div>
              </div>
            <% else %>
              <div class="flex-shrink-0">
                <div class="w-12 h-12 rounded-lg bg-gray-300 flex items-center justify-center text-gray-600 font-bold">
                  ?
                </div>
              </div>
              <div class="flex-1 min-w-0">
                <div class="font-medium text-gray-500">[Deleted]</div>
              </div>
            <% end %>
          </div>

          <%# Right Section: Vote Counts in thirds (50%) %>
          <% if current_user_can_review?(@production) %>
            <div class="w-1/2 border-l border-gray-200 pl-4 grid grid-cols-3 items-center divide-x divide-gray-200">
              <div class="text-center px-2">
                <div class="text-xs text-gray-400 uppercase tracking-wide">Yes</div>
                <div class="text-lg font-bold text-pink-600"><%= vote_counts[:yes] %></div>
              </div>
              <div class="text-center px-2">
                <div class="text-xs text-gray-400 uppercase tracking-wide">No</div>
                <div class="text-lg font-bold text-pink-600"><%= vote_counts[:no] %></div>
              </div>
              <div class="text-center px-2">
                <div class="text-xs text-gray-400 uppercase tracking-wide">Not Sure</div>
                <div class="text-lg font-bold text-pink-600"><%= vote_counts[:maybe] %></div>
              </div>
            </div>
          <% end %>

        <% end %>
      <% end %>
    <% else %>

    <p class="text-gray-500 text-sm pt-2">
      No one has signed up for an audition yet.
    </p>
  <% end %>
</div>
