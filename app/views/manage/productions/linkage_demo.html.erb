<% content_for :title, "Event Linkage UI Demo" %>

<%
  require 'ostruct'
  
  # Build sample data for different scenarios
  # Scenario 1: Same month (e.g., "Dec 13-14")
  same_month_shows = [
    OpenStruct.new(id: 101, date_and_time: Time.zone.parse("2025-12-13 19:00"), event_type: "performance", linkage_role: "sibling"),
    OpenStruct.new(id: 102, date_and_time: Time.zone.parse("2025-12-14 14:00"), event_type: "performance", linkage_role: "sibling"),
    OpenStruct.new(id: 103, date_and_time: Time.zone.parse("2025-12-14 19:00"), event_type: "performance", linkage_role: "sibling"),
    OpenStruct.new(id: 104, date_and_time: Time.zone.parse("2025-12-12 18:00"), event_type: "rehearsal", linkage_role: "child"),
  ]
  same_month_linkage = OpenStruct.new(
    id: 1001,
    name: "Opening Weekend",
    display_name: "Opening Weekend",
    sibling_shows: same_month_shows.select { |s| s.linkage_role == "sibling" },
    child_shows: same_month_shows.select { |s| s.linkage_role == "child" },
    shows: same_month_shows
  )

  # Scenario 2: Different months (e.g., "Dec 28 – Jan 4")
  diff_month_shows = [
    OpenStruct.new(id: 201, date_and_time: Time.zone.parse("2025-12-28 19:00"), event_type: "performance", linkage_role: "sibling"),
    OpenStruct.new(id: 202, date_and_time: Time.zone.parse("2025-12-29 14:00"), event_type: "performance", linkage_role: "sibling"),
    OpenStruct.new(id: 203, date_and_time: Time.zone.parse("2026-01-03 19:00"), event_type: "performance", linkage_role: "sibling"),
    OpenStruct.new(id: 204, date_and_time: Time.zone.parse("2026-01-04 14:00"), event_type: "performance", linkage_role: "sibling"),
    OpenStruct.new(id: 205, date_and_time: Time.zone.parse("2025-12-27 18:00"), event_type: "rehearsal", linkage_role: "child"),
  ]
  diff_month_linkage = OpenStruct.new(
    id: 1002,
    name: "Holiday Run",
    display_name: "Holiday Run",
    sibling_shows: diff_month_shows.select { |s| s.linkage_role == "sibling" },
    child_shows: diff_month_shows.select { |s| s.linkage_role == "child" },
    shows: diff_month_shows
  )

  # Scenario 3: Single weekend with multiple shows same day
  single_day_shows = [
    OpenStruct.new(id: 301, date_and_time: Time.zone.parse("2025-12-20 14:00"), event_type: "performance", linkage_role: "sibling"),
    OpenStruct.new(id: 302, date_and_time: Time.zone.parse("2025-12-20 19:00"), event_type: "performance", linkage_role: "sibling"),
  ]
  single_day_linkage = OpenStruct.new(
    id: 1003,
    name: nil,
    display_name: "Dec 20",
    sibling_shows: single_day_shows.select { |s| s.linkage_role == "sibling" },
    child_shows: [],
    shows: single_day_shows
  )

  # Scenario 4: Long run spanning months
  long_run_shows = [
    OpenStruct.new(id: 401, date_and_time: Time.zone.parse("2025-11-15 19:00"), event_type: "performance", linkage_role: "sibling"),
    OpenStruct.new(id: 402, date_and_time: Time.zone.parse("2025-11-22 19:00"), event_type: "performance", linkage_role: "sibling"),
    OpenStruct.new(id: 403, date_and_time: Time.zone.parse("2025-12-06 19:00"), event_type: "performance", linkage_role: "sibling"),
    OpenStruct.new(id: 404, date_and_time: Time.zone.parse("2025-12-13 19:00"), event_type: "performance", linkage_role: "sibling"),
    OpenStruct.new(id: 405, date_and_time: Time.zone.parse("2025-12-20 19:00"), event_type: "performance", linkage_role: "sibling"),
    OpenStruct.new(id: 406, date_and_time: Time.zone.parse("2025-11-14 18:00"), event_type: "dress_rehearsal", linkage_role: "child"),
    OpenStruct.new(id: 407, date_and_time: Time.zone.parse("2025-12-05 18:00"), event_type: "rehearsal", linkage_role: "child"),
  ]
  long_run_linkage = OpenStruct.new(
    id: 1004,
    name: "Full Production Run",
    display_name: "Full Production Run",
    sibling_shows: long_run_shows.select { |s| s.linkage_role == "sibling" },
    child_shows: long_run_shows.select { |s| s.linkage_role == "child" },
    shows: long_run_shows
  )

  # Sample availabilities (empty for demo)
  sample_availabilities = {}
%>

<div class="max-w-6xl mx-auto py-8 px-4">
  <div class="mb-8">
    <%= link_to "← Back to Production", manage_production_path(@production), class: "text-pink-600 hover:text-pink-800 text-sm" %>
    <h1 class="text-3xl font-bold text-gray-900 mt-2">Event Linkage UI Demo - Option A Variations</h1>
    <p class="text-gray-600 mt-1">Accordion show list + Toggle availability with different date scenarios</p>
  </div>

  <%# Section 1: Show List Variations %>
  <div class="mb-12">
    <h2 class="text-xl font-bold text-gray-900 mb-2">Show List Display - Accordion Style</h2>
    <p class="text-gray-600 text-sm mb-6">Same design, different date scenarios</p>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <%# Same Month %>
      <div class="space-y-3">
        <h3 class="text-sm font-semibold text-gray-700">Same Month (Dec 13-14)</h3>
        <p class="text-gray-500 text-xs">3 performances + 1 rehearsal</p>
        <%= render "shared/event_linkage_accordion", event_linkage: same_month_linkage %>
      </div>
      
      <%# Different Months %>
      <div class="space-y-3">
        <h3 class="text-sm font-semibold text-gray-700">Spanning Months (Dec 28 – Jan 4)</h3>
        <p class="text-gray-500 text-xs">4 performances + 1 rehearsal</p>
        <%= render "shared/event_linkage_accordion", event_linkage: diff_month_linkage %>
      </div>
      
      <%# Single Day %>
      <div class="space-y-3">
        <h3 class="text-sm font-semibold text-gray-700">Single Day (Dec 20)</h3>
        <p class="text-gray-500 text-xs">2 performances same day (matinee + evening)</p>
        <%= render "shared/event_linkage_accordion", event_linkage: single_day_linkage %>
      </div>
      
      <%# Long Run %>
      <div class="space-y-3">
        <h3 class="text-sm font-semibold text-gray-700">Long Run (Nov 15 – Dec 20)</h3>
        <p class="text-gray-500 text-xs">5 performances + 2 rehearsals over 5 weeks</p>
        <%= render "shared/event_linkage_accordion", event_linkage: long_run_linkage %>
      </div>
    </div>
  </div>
  
  <hr class="border-gray-200 my-8">
  
  <%# Section 2: Availability Variations %>
  <div class="mb-12">
    <h2 class="text-xl font-bold text-gray-900 mb-2">Availability Input - Toggle Style</h2>
    <p class="text-gray-600 text-sm mb-6">
      Same design, different date scenarios
      <% if @sample_person %>
        <span class="text-gray-400">(showing for: <%= @sample_person.name %>)</span>
      <% end %>
    </p>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <%# Same Month %>
      <div class="space-y-3">
        <h3 class="text-sm font-semibold text-gray-700">Same Month (Dec 13-14)</h3>
        <%= render "shared/linked_availability_toggle", 
                   event_linkage: same_month_linkage, 
                   entity: @sample_person,
                   entity_key: "demo_1",
                   availabilities: sample_availabilities %>
      </div>
      
      <%# Different Months %>
      <div class="space-y-3">
        <h3 class="text-sm font-semibold text-gray-700">Spanning Months (Dec 28 – Jan 4)</h3>
        <%= render "shared/linked_availability_toggle", 
                   event_linkage: diff_month_linkage, 
                   entity: @sample_person,
                   entity_key: "demo_2",
                   availabilities: sample_availabilities %>
      </div>
      
      <%# Single Day %>
      <div class="space-y-3">
        <h3 class="text-sm font-semibold text-gray-700">Single Day (Dec 20)</h3>
        <%= render "shared/linked_availability_toggle", 
                   event_linkage: single_day_linkage, 
                   entity: @sample_person,
                   entity_key: "demo_3",
                   availabilities: sample_availabilities %>
      </div>
      
      <%# Long Run %>
      <div class="space-y-3">
        <h3 class="text-sm font-semibold text-gray-700">Long Run (Nov 15 – Dec 20)</h3>
        <%= render "shared/linked_availability_toggle", 
                   event_linkage: long_run_linkage, 
                   entity: @sample_person,
                   entity_key: "demo_4",
                   availabilities: sample_availabilities %>
      </div>
    </div>
  </div>

  <% if @event_linkage %>
    <hr class="border-gray-200 my-8">
    
    <%# Section 3: Real Data %>
    <div class="mb-12">
      <h2 class="text-xl font-bold text-gray-900 mb-2">With Real Production Data</h2>
      <p class="text-gray-600 text-sm mb-6">Using actual shows from "<%= @event_linkage.display_name %>"</p>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="space-y-3">
          <h3 class="text-sm font-semibold text-gray-700">Show List</h3>
          <%= render "shared/event_linkage_accordion", event_linkage: @event_linkage %>
        </div>
        
        <div class="space-y-3">
          <h3 class="text-sm font-semibold text-gray-700">Availability</h3>
          <%= render "shared/linked_availability_toggle", 
                     event_linkage: @event_linkage, 
                     entity: @sample_person,
                     entity_key: @sample_entity_key,
                     availabilities: @availabilities %>
        </div>
      </div>
    </div>
  <% end %>
</div>
