<%#
  Linkage Sync Status Bar
  Shows the sync status between this show's cast and its linked shows.

  Parameters:
    - show: The current show
    - linked_shows: Array of linked Show objects
    - sync_info: Hash with sync status info from build_linkage_sync_info
    - production: The Production object
%>

<% if sync_info.present? && linked_shows.any? %>
  <div class="bg-white border border-gray-200 rounded-lg overflow-hidden mb-6">
    <div class="px-4 py-3 flex items-center justify-between gap-4">
      <div class="flex items-center gap-3">
        <svg class="w-5 h-5 text-pink-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
        </svg>
        <div>
          <div class="text-sm font-semibold text-gray-900">
            Linked with <%= linked_shows.count %> other <%= "event".pluralize(linked_shows.count) %>
          </div>
          <% if sync_info[:all_in_sync] %>
            <div class="text-xs text-green-600 flex items-center gap-1">
              <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              All linked events have the same cast
            </div>
          <% elsif !sync_info[:roles_match] %>
            <div class="text-xs text-amber-600 flex items-center gap-1">
              <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
              </svg>
              Linked events have different roles configured
            </div>
          <% else %>
            <div class="text-xs text-amber-600 flex items-center gap-1">
              <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
              </svg>
              Casts are out of sync
            </div>
          <% end %>
        </div>
      </div>

      <% unless sync_info[:all_in_sync] %>
        <%= button_to "Copy cast to linked events",
            manage_casting_show_copy_to_linked_path(production, show_id: show.id),
            method: :post,
            class: "inline-flex items-center gap-1.5 px-3 py-1.5 text-xs font-medium text-white bg-pink-500 rounded-md hover:bg-pink-600 transition-colors cursor-pointer",
            data: { turbo_confirm: "This will copy this event's cast assignments to all #{linked_shows.count} linked events. Existing assignments on those events will be replaced. Continue?" } %>
      <% end %>
    </div>

    <%# Expandable details section %>
    <div data-controller="disclosure">
      <button type="button"
              data-action="click->disclosure#toggle"
              class="w-full px-4 py-2 flex items-center justify-between text-xs text-gray-500 hover:text-gray-700 hover:bg-gray-50 border-t border-gray-200 cursor-pointer transition-colors">
        <span>View linked events status</span>
        <svg data-disclosure-target="icon" class="w-4 h-4 text-gray-400 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
        </svg>
      </button>
      <div data-disclosure-target="content" class="hidden border-t border-gray-200 divide-y divide-gray-100">
        <% sync_info[:linked_shows_info].each do |info| %>
          <% linked_show = info[:show] %>
          <%= link_to manage_casting_show_cast_path(production, linked_show), class: "flex items-center gap-3 px-4 py-3 hover:bg-gray-50 transition-colors" do %>
            <div class="flex-shrink-0 w-10 text-center">
              <div class="text-[10px] font-semibold text-pink-600 uppercase leading-tight"><%= linked_show.date_and_time.strftime("%b") %></div>
              <div class="text-lg font-bold text-gray-900 leading-tight"><%= linked_show.date_and_time.strftime("%-d") %></div>
            </div>
            <div class="flex-1 min-w-0">
              <div class="text-sm font-medium text-gray-900 truncate">
                <%= linked_show.secondary_name.presence || linked_show.event_type.titleize %>
              </div>
              <div class="text-xs text-gray-500">
                <%= linked_show.date_and_time.strftime("%-I:%M %p") %>
                Â· <%= info[:cast_count] %>/<%= info[:role_names].count %> cast
              </div>
            </div>
            <div class="flex-shrink-0">
              <% if info[:in_sync] %>
                <span class="inline-flex items-center gap-1 px-2 py-1 text-xs font-medium text-green-700 bg-green-50 rounded-full">
                  <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  In sync
                </span>
              <% elsif !info[:roles_match] %>
                <span class="inline-flex items-center gap-1 px-2 py-1 text-xs font-medium text-amber-700 bg-amber-50 rounded-full">
                  <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
                  </svg>
                  Different roles
                </span>
              <% else %>
                <span class="inline-flex items-center gap-1 px-2 py-1 text-xs font-medium text-amber-700 bg-amber-50 rounded-full">
                  <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
                  </svg>
                  Cast differs
                </span>
              <% end %>
            </div>
            <svg class="w-4 h-4 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
