<%= form_with(model: cast_member, class: "contents") do |form| %>
  <% if cast_member.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(cast_member.errors.count, "error") %> prohibited this cast_member from being saved:</h2>

      <ul class="list-disc ml-6">
        <% cast_member.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :cast %>
    <%= form.collection_select :cast_id, Cast.all, :id, :display_name, prompt: "Select a Cast" %>
  </div>

  <div class="my-5">
    <%= form.label :person %>
    <%= form.collection_select :person_id, Person.all, :id, :stage_name, prompt: "Select a Person" %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-lg px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
