<%#
  Linked Availability Display - Option C: Compact Row with Modal Confirmation
  
  Single compact row showing linked group. Clicking availability button shows 
  a confirmation modal listing all events that will be affected before applying.
  Good for when you want users to explicitly confirm bulk changes.
  
  Required params:
    - event_linkage: EventLinkage object
    - entity: Person or Group to show availability for
    - entity_key: String key for entity (e.g., "person" or "group_123")
    - availabilities: Hash of { show_id => ShowAvailability }
  
  Optional params:
    - show_production: Show production name (default: false)
%>

<%
  show_production = local_assigns.fetch(:show_production, false)
  siblings = event_linkage.sibling_shows.order(:date_and_time)
  children = event_linkage.child_shows.order(:date_and_time)
  all_shows = siblings + children
  primary = siblings.first
  
  # Date range
  first_date = all_shows.first&.date_and_time
  last_date = all_shows.last&.date_and_time
  date_range = first_date && last_date ? 
    (first_date.to_date == last_date.to_date ? first_date.strftime("%b %-d") : "#{first_date.strftime("%b %-d")} â€“ #{last_date.strftime("%b %-d")}") : 
    ""
  
  # Determine overall status
  statuses = all_shows.map { |s| availabilities[s.id]&.status || 'unset' }
  all_same = statuses.uniq.size == 1
  overall_status = all_same ? statuses.first : 'mixed'
  
  modal_id = "availability-modal-#{event_linkage.id}-#{entity_key}"
%>

<div data-controller="linked-availability-modal" 
     data-linked-availability-modal-entity-key-value="<%= entity_key %>"
     data-linked-availability-modal-show-ids-value="<%= all_shows.map(&:id).to_json %>"
     data-linked-availability-modal-linkage-name-value="<%= event_linkage.display_name %>"
     data-linked-availability-modal-modal-id-value="<%= modal_id %>">
  
  <%# Compact Row %>
  <div class="flex items-center gap-4 px-4 py-3 bg-white border border-gray-200 rounded-lg hover:shadow-sm transition">
    <%# Status Indicator %>
    <div class="w-3 h-3 rounded-full flex-shrink-0
                <%= overall_status == 'available' ? 'bg-green-500' : overall_status == 'unavailable' ? 'bg-red-500' : overall_status == 'mixed' ? 'bg-yellow-500' : 'bg-gray-300' %>">
    </div>
    
    <%# Group Info %>
    <div class="flex-1 min-w-0">
      <div class="flex items-center gap-2">
        <span class="text-sm font-semibold text-gray-900 truncate"><%= event_linkage.display_name %></span>
        <span class="inline-flex items-center px-1.5 py-0.5 rounded text-xs font-medium bg-pink-100 text-pink-700">
          <%= all_shows.count %> events
        </span>
      </div>
      <div class="text-xs text-gray-500"><%= date_range %></div>
    </div>
    
    <%# Current Status %>
    <div class="flex-shrink-0">
      <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium
                   <%= overall_status == 'available' ? 'bg-green-100 text-green-800' : 
                       overall_status == 'unavailable' ? 'bg-red-100 text-red-800' : 
                       overall_status == 'mixed' ? 'bg-yellow-100 text-yellow-800' : 
                       'bg-gray-100 text-gray-600' %>"
            data-linked-availability-modal-target="statusBadge">
        <% if overall_status == 'mixed' %>
          Mixed
        <% else %>
          <%= overall_status.capitalize %>
        <% end %>
      </span>
    </div>
    
    <%# Action Buttons %>
    <div class="flex items-center gap-1 flex-shrink-0">
      <button type="button"
              data-action="click->linked-availability-modal#openModal"
              data-status="available"
              class="inline-flex items-center justify-center w-8 h-8 rounded-full border border-gray-300 text-green-600 hover:bg-green-50 hover:border-green-300 transition"
              title="Set all available">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
      </button>
      <button type="button"
              data-action="click->linked-availability-modal#openModal"
              data-status="unavailable"
              class="inline-flex items-center justify-center w-8 h-8 rounded-full border border-gray-300 text-red-600 hover:bg-red-50 hover:border-red-300 transition"
              title="Set all unavailable">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </div>
  
  <%# Confirmation Modal %>
  <div id="<%= modal_id %>" 
       class="hidden fixed inset-0 z-50 overflow-y-auto"
       data-linked-availability-modal-target="modal"
       aria-labelledby="modal-title" role="dialog" aria-modal="true">
    
    <%# Backdrop %>
    <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" 
         data-action="click->linked-availability-modal#closeModal"></div>
    
    <%# Modal Panel %>
    <div class="flex min-h-full items-center justify-center p-4">
      <div class="relative bg-white rounded-lg shadow-xl max-w-md w-full">
        <%# Header %>
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-semibold text-gray-900" id="modal-title">
            Confirm Availability Change
          </h3>
        </div>
        
        <%# Body %>
        <div class="px-6 py-4">
          <p class="text-sm text-gray-600 mb-4">
            Set <span class="font-medium" data-linked-availability-modal-target="statusText">availability</span> 
            for <strong><%= event_linkage.display_name %></strong>?
          </p>
          
          <p class="text-xs text-gray-500 mb-3">This will affect the following events:</p>
          
          <div class="max-h-48 overflow-y-auto border border-gray-200 rounded-md">
            <ul class="divide-y divide-gray-100">
              <% siblings.each do |show| %>
                <li class="flex items-center gap-2 px-3 py-2 text-sm">
                  <span class="w-2 h-2 bg-pink-400 rounded-full flex-shrink-0"></span>
                  <span class="text-gray-700"><%= show.date_and_time.strftime("%b %-d @ %-I:%M %p") %></span>
                  <span class="text-gray-400 text-xs">(<%= show.event_type.titleize %>)</span>
                </li>
              <% end %>
              <% children.each do |show| %>
                <li class="flex items-center gap-2 px-3 py-2 text-sm bg-gray-50">
                  <span class="w-2 h-2 bg-gray-400 rounded-full flex-shrink-0"></span>
                  <span class="text-gray-600"><%= show.date_and_time.strftime("%b %-d @ %-I:%M %p") %></span>
                  <span class="text-gray-400 text-xs">(<%= show.event_type.titleize %>)</span>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
        
        <%# Footer %>
        <div class="px-6 py-4 bg-gray-50 rounded-b-lg flex items-center justify-end gap-3">
          <button type="button" 
                  data-action="click->linked-availability-modal#closeModal"
                  class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 transition">
            Cancel
          </button>
          <button type="button"
                  data-action="click->linked-availability-modal#confirmStatus"
                  data-linked-availability-modal-target="confirmButton"
                  class="px-4 py-2 text-sm font-medium text-white bg-pink-600 border border-transparent rounded-md hover:bg-pink-700 transition">
            Confirm
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
