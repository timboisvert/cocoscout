<%
  # Get current values or defaults
  rules = payout_scheme.rules.presence || {}
  allocation = rules["allocation"] || []
  distribution = rules["distribution"] || { "method" => "equal" }
  dist_method = distribution["method"] || "equal"
  performer_overrides = rules["performer_overrides"] || {}

  # Find allocation values - get house percentage from allocation without person_id
  house_allocation = allocation.find { |s| s["type"] == "percentage" && s["person_id"].blank? }
  house_percentage = house_allocation&.dig("value") || 50
  has_expenses_first = allocation.any? { |s| s["type"] == "expenses_first" }

  # Extract individual allocations (percentage allocations to specific people)
  individual_allocations = allocation.select { |s| s["type"] == "percentage" && s["person_id"].present? }

  # Distribution values
  per_ticket_rate = distribution["per_ticket_rate"] || 1.0
  minimum = distribution["minimum"] || 25.0
  flat_amount = distribution["flat_amount"] || 50.0
  default_shares = distribution["default_shares"] || 1.0

  # Get available people from effective talent pool (may be shared)
  # payout_scheme may be organization-level (no production) or production-level
  production = payout_scheme.production
  talent_pool = production&.effective_talent_pool
  available_people = talent_pool&.people&.order(:name) || []

  # Get organization members for individual allocations (producers, staff, etc.)
  # Use people associated with the organization
  org_members = Current.organization.people.order(:name)
%>

<%= form_with model: payout_scheme, url: payout_scheme.persisted? ? manage_money_payout_scheme_path(payout_scheme) : manage_money_payout_schemes_path, method: payout_scheme.persisted? ? :patch : :post, local: true, data: { controller: "payout-scheme-form" } do |form| %>

  <% if payout_scheme.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
      <div class="flex">
        <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
        </svg>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">Please fix the following errors:</h3>
          <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
            <% payout_scheme.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div class="max-w-2xl space-y-6">

    <!-- Basic Info -->
    <div class="bg-white rounded-lg border border-gray-200 p-5">
      <h3 class="font-semibold text-gray-900 mb-4">Basic Info</h3>

      <div class="space-y-4">
        <div>
          <%= form.label :name, "Scheme Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :name, class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500", placeholder: "e.g., Standard Show Pay" %>
        </div>

        <div>
          <%= form.label :description, "Description (optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_area :description, rows: 2, class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500", placeholder: "Brief description of how this scheme works..." %>
        </div>
      </div>
    </div>

    <!-- Distribution Method -->
    <div class="bg-white rounded-lg border border-gray-200 p-5">
      <h3 class="font-semibold text-gray-900 mb-4">How Performers Get Paid</h3>

      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Distribution Method</label>
          <div class="space-y-2">
            <label class="flex items-start gap-3 p-3 rounded-lg border border-gray-200 cursor-pointer hover:bg-gray-50 has-[:checked]:border-pink-500 has-[:checked]:bg-pink-50">
              <input type="radio" name="rules[distribution][method]" value="equal" <%= "checked" if dist_method == "equal" %> class="mt-0.5" data-action="change->payout-scheme-form#updateMethod">
              <div>
                <div class="font-medium text-gray-900">Equal Split</div>
                <div class="text-sm text-gray-500">Divide performer pool equally among all performers</div>
              </div>
            </label>

            <label class="flex items-start gap-3 p-3 rounded-lg border border-gray-200 cursor-pointer hover:bg-gray-50 has-[:checked]:border-pink-500 has-[:checked]:bg-pink-50">
              <input type="radio" name="rules[distribution][method]" value="shares" <%= "checked" if dist_method == "shares" %> class="mt-0.5" data-action="change->payout-scheme-form#updateMethod">
              <div>
                <div class="font-medium text-gray-900">Share-Based</div>
                <div class="text-sm text-gray-500">Divide by configurable shares per person (e.g., lead gets 2 shares, ensemble gets 1)</div>
              </div>
            </label>

            <label class="flex items-start gap-3 p-3 rounded-lg border border-gray-200 cursor-pointer hover:bg-gray-50 has-[:checked]:border-pink-500 has-[:checked]:bg-pink-50">
              <input type="radio" name="rules[distribution][method]" value="per_ticket" <%= "checked" if dist_method == "per_ticket" %> class="mt-0.5" data-action="change->payout-scheme-form#updateMethod">
              <div>
                <div class="font-medium text-gray-900">Per-Ticket Rate</div>
                <div class="text-sm text-gray-500">Pay each performer a fixed amount per ticket sold</div>
              </div>
            </label>

            <label class="flex items-start gap-3 p-3 rounded-lg border border-gray-200 cursor-pointer hover:bg-gray-50 has-[:checked]:border-pink-500 has-[:checked]:bg-pink-50">
              <input type="radio" name="rules[distribution][method]" value="per_ticket_guaranteed" <%= "checked" if dist_method == "per_ticket_guaranteed" %> class="mt-0.5" data-action="change->payout-scheme-form#updateMethod">
              <div>
                <div class="font-medium text-gray-900">Per-Ticket with Minimum</div>
                <div class="text-sm text-gray-500">Per-ticket rate with a guaranteed minimum payout</div>
              </div>
            </label>

            <label class="flex items-start gap-3 p-3 rounded-lg border border-gray-200 cursor-pointer hover:bg-gray-50 has-[:checked]:border-pink-500 has-[:checked]:bg-pink-50">
              <input type="radio" name="rules[distribution][method]" value="flat_fee" <%= "checked" if dist_method == "flat_fee" %> class="mt-0.5" data-action="change->payout-scheme-form#updateMethod">
              <div>
                <div class="font-medium text-gray-900">Flat Fee</div>
                <div class="text-sm text-gray-500">Fixed amount per performer regardless of ticket sales</div>
              </div>
            </label>
          </div>
        </div>

        <!-- Method-specific options -->
        <div data-payout-scheme-form-target="sharesOptions" class="<%= dist_method == 'shares' ? '' : 'hidden' %> p-4 bg-gray-50 rounded-lg">
          <label class="block text-sm font-medium text-gray-700 mb-1">Default shares per person</label>
          <input type="number" name="rules[distribution][default_shares]" value="<%= default_shares %>" min="0.5" step="0.5" class="w-24 rounded-lg border border-gray-300 px-3 py-2">
          <p class="text-xs text-gray-500 mt-1">You can override shares per person for specific shows</p>
        </div>

        <div data-payout-scheme-form-target="perTicketOptions" class="<%= ['per_ticket', 'per_ticket_guaranteed'].include?(dist_method) ? '' : 'hidden' %> p-4 bg-gray-50 rounded-lg space-y-3">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Amount per ticket per performer</label>
            <div class="flex items-center gap-2">
              <span class="text-gray-500">$</span>
              <input type="number" name="rules[distribution][per_ticket_rate]" value="<%= per_ticket_rate %>" min="0.01" step="0.01" class="w-24 rounded-lg border border-gray-300 px-3 py-2">
            </div>
          </div>
          <div data-payout-scheme-form-target="minimumOption" class="<%= dist_method == 'per_ticket_guaranteed' ? '' : 'hidden' %>">
            <label class="block text-sm font-medium text-gray-700 mb-1">Minimum guaranteed payout</label>
            <div class="flex items-center gap-2">
              <span class="text-gray-500">$</span>
              <input type="number" name="rules[distribution][minimum]" value="<%= minimum %>" min="0" step="1" class="w-24 rounded-lg border border-gray-300 px-3 py-2">
            </div>
            <p class="text-xs text-gray-500 mt-1">Each performer gets at least this amount</p>
          </div>
        </div>

        <div data-payout-scheme-form-target="flatFeeOptions" class="<%= dist_method == 'flat_fee' ? '' : 'hidden' %> p-4 bg-gray-50 rounded-lg">
          <label class="block text-sm font-medium text-gray-700 mb-1">Flat amount per performer</label>
          <div class="flex items-center gap-2">
            <span class="text-gray-500">$</span>
            <input type="number" name="rules[distribution][flat_amount]" value="<%= flat_amount %>" min="0" step="1" class="w-24 rounded-lg border border-gray-300 px-3 py-2">
          </div>
        </div>
      </div>
    </div>

    <!-- Revenue Allocation (for all methods except flat_fee) -->
    <div data-payout-scheme-form-target="allocationSection" class="<%= dist_method == 'flat_fee' ? 'hidden' : '' %> bg-white rounded-lg border border-gray-200 p-5">
      <h3 class="font-semibold text-gray-900 mb-4">Revenue Allocation</h3>
      <p class="text-sm text-gray-600 mb-4">How is revenue split between house and performers?</p>

      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">House percentage</label>
          <div class="flex items-center gap-3">
            <input type="number" name="house_percentage" value="<%= house_percentage %>" min="0" max="100" class="w-20 rounded-lg border border-gray-300 px-3 py-2" data-payout-scheme-form-target="housePercentage" data-action="input->payout-scheme-form#updatePercentages">
            <span class="text-gray-500">%</span>
            <span class="text-gray-400 mx-2">â†’</span>
            <span class="text-sm text-gray-600">Performers get <span data-payout-scheme-form-target="performerPercentage" class="font-medium text-gray-900"><%= 100 - house_percentage %>%</span></span>
          </div>
          <p class="text-xs text-gray-500 mt-1" data-payout-scheme-form-target="allocationHint">
            <% if ['per_ticket', 'per_ticket_guaranteed'].include?(dist_method) %>
              Set to 0% if performers should be paid from total revenue
            <% else %>
              Remaining revenue after house take goes to performer pool
            <% end %>
          </p>
        </div>

        <label class="flex items-center gap-2">
          <input type="checkbox" name="expenses_first" value="1" <%= "checked" if has_expenses_first %> class="rounded border-gray-300 text-pink-500 focus:ring-pink-500 accent-pink-500">
          <span class="text-sm text-gray-700">Deduct expenses before splitting</span>
        </label>
      </div>

      <!-- Hidden fields to build allocation array -->
      <input type="hidden" name="rules[allocation][]" value='{"type":"percentage","value":50,"to":"house"}' data-payout-scheme-form-target="allocationJson">
    </div>

    <!-- Individual Allocations (percentage to specific people like producers) -->
    <% if org_members.any? %>
      <div data-payout-scheme-form-target="individualAllocationsSection" class="<%= dist_method == 'flat_fee' ? 'hidden' : '' %> bg-white rounded-lg border border-gray-200 p-5">
        <div class="flex items-center justify-between mb-4">
          <div>
            <h3 class="font-semibold text-gray-900">Individual Allocations</h3>
            <p class="text-sm text-gray-500">Give a percentage of revenue to specific people (e.g., producer gets 10%)</p>
          </div>
        </div>

        <div data-payout-scheme-form-target="individualAllocationsList" class="space-y-3">
          <% individual_allocations.each_with_index do |alloc, index| %>
            <% person = Person.find_by(id: alloc["person_id"]) %>
            <% next unless person %>
            <div class="flex items-center gap-3 p-3 bg-gray-50 rounded-lg" data-payout-scheme-form-target="individualAllocationRow">
              <div class="flex-1">
                <div class="font-medium text-gray-900"><%= person.name %></div>
                <input type="hidden" name="rules[individual_allocations][<%= index %>][person_id]" value="<%= person.id %>">
              </div>
              <div class="flex items-center gap-2">
                <input type="number" name="rules[individual_allocations][<%= index %>][percentage]" value="<%= alloc['value'] %>" min="0" max="100" step="0.5" class="w-20 rounded border border-gray-300 px-2 py-1 text-sm">
                <span class="text-sm text-gray-500">%</span>
              </div>
              <div class="flex-1">
                <input type="text" name="rules[individual_allocations][<%= index %>][label]" value="<%= alloc['label'] %>" placeholder="Label (optional)" class="w-full rounded border border-gray-300 px-2 py-1 text-sm">
              </div>
              <button type="button" data-action="click->payout-scheme-form#removeIndividualAllocation" class="text-gray-400 hover:text-red-500">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                </svg>
              </button>
            </div>
          <% end %>
        </div>

        <!-- Add new individual allocation -->
        <div class="mt-4 pt-4 border-t border-gray-200">
          <div class="flex items-end gap-3">
            <div class="flex-1">
              <label class="block text-sm font-medium text-gray-700 mb-1">Add allocation for</label>
              <select data-payout-scheme-form-target="individualAllocationPersonSelect" class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm">
                <option value="">Select a person...</option>
                <% org_members.each do |person| %>
                  <% next if individual_allocations.any? { |a| a["person_id"].to_s == person.id.to_s } %>
                  <option value="<%= person.id %>" data-name="<%= person.name %>"><%= person.name %></option>
                <% end %>
              </select>
            </div>
            <div class="flex items-center gap-2">
              <input type="number" data-payout-scheme-form-target="newAllocationPercentage" value="10" min="0" max="100" step="0.5" class="w-20 rounded border border-gray-300 px-2 py-1 text-sm">
              <span class="text-sm text-gray-500">%</span>
            </div>
            <div class="flex-1">
              <input type="text" data-payout-scheme-form-target="newAllocationLabel" placeholder="Label (optional)" class="w-full rounded border border-gray-300 px-2 py-1 text-sm">
            </div>
            <button type="button" data-action="click->payout-scheme-form#addIndividualAllocation" class="px-3 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg text-sm font-medium">
              Add
            </button>
          </div>
          <p class="text-xs text-gray-500 mt-2">These percentages are taken from revenue before the performer pool is calculated.</p>
        </div>
      </div>
    <% end %>

    <!-- Per-Performer Overrides -->
    <% if available_people.any? %>
      <div data-payout-scheme-form-target="overridesSection" class="<%= dist_method == 'equal' ? 'hidden' : '' %> bg-white rounded-lg border border-gray-200 p-5">
        <div class="flex items-center justify-between mb-4">
          <div>
            <h3 class="font-semibold text-gray-900">Per-Performer Exceptions</h3>
            <p class="text-sm text-gray-500">Override the default rate for specific people</p>
          </div>
        </div>

        <div data-payout-scheme-form-target="overridesList" class="space-y-3">
          <% performer_overrides.each do |person_id, override| %>
            <% person = available_people.find { |p| p.id.to_s == person_id.to_s } %>
            <% next unless person %>
            <div class="flex items-center gap-3 p-3 bg-gray-50 rounded-lg" data-payout-scheme-form-target="overrideRow">
              <div class="flex-1">
                <div class="font-medium text-gray-900"><%= person.name %></div>
                <input type="hidden" name="rules[performer_overrides][<%= person.id %>][person_id]" value="<%= person.id %>">
              </div>

              <!-- Per-ticket overrides -->
              <div data-payout-scheme-form-target="overridePerTicket" class="<%= ['per_ticket', 'per_ticket_guaranteed'].include?(dist_method) ? 'flex items-center gap-2' : 'hidden' %>">
                <span class="text-sm text-gray-500">$</span>
                <input type="number" name="rules[performer_overrides][<%= person.id %>][per_ticket_rate]" value="<%= override['per_ticket_rate'] %>" min="0" step="0.01" class="w-20 rounded border border-gray-300 px-2 py-1 text-sm" placeholder="rate">
                <span class="text-sm text-gray-500">/ticket</span>
              </div>

              <!-- Minimum override (per_ticket_guaranteed only) -->
              <div data-payout-scheme-form-target="overrideMinimum" class="<%= dist_method == 'per_ticket_guaranteed' ? 'flex items-center gap-2' : 'hidden' %>">
                <span class="text-sm text-gray-500">min $</span>
                <input type="number" name="rules[performer_overrides][<%= person.id %>][minimum]" value="<%= override['minimum'] %>" min="0" step="1" class="w-20 rounded border border-gray-300 px-2 py-1 text-sm" placeholder="min">
              </div>

              <!-- Shares override -->
              <div data-payout-scheme-form-target="overrideShares" class="<%= dist_method == 'shares' ? 'flex items-center gap-2' : 'hidden' %>">
                <input type="number" name="rules[performer_overrides][<%= person.id %>][shares]" value="<%= override['shares'] %>" min="0" step="0.5" class="w-20 rounded border border-gray-300 px-2 py-1 text-sm" placeholder="shares">
                <span class="text-sm text-gray-500">shares</span>
              </div>

              <!-- Flat amount override -->
              <div data-payout-scheme-form-target="overrideFlatAmount" class="<%= dist_method == 'flat_fee' ? 'flex items-center gap-2' : 'hidden' %>">
                <span class="text-sm text-gray-500">$</span>
                <input type="number" name="rules[performer_overrides][<%= person.id %>][flat_amount]" value="<%= override['flat_amount'] %>" min="0" step="1" class="w-20 rounded border border-gray-300 px-2 py-1 text-sm" placeholder="amount">
              </div>

              <button type="button" data-action="click->payout-scheme-form#removeOverride" class="text-gray-400 hover:text-red-500">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                </svg>
              </button>
            </div>
          <% end %>
        </div>

        <!-- Add new override -->
        <div class="mt-4 pt-4 border-t border-gray-200">
          <div class="flex items-end gap-3">
            <div class="flex-1">
              <label class="block text-sm font-medium text-gray-700 mb-1">Add exception for</label>
              <select data-payout-scheme-form-target="personSelect" class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm">
                <option value="">Select a person...</option>
                <% available_people.each do |person| %>
                  <% next if performer_overrides.key?(person.id.to_s) %>
                  <option value="<%= person.id %>" data-name="<%= person.name %>"><%= person.name %></option>
                <% end %>
              </select>
            </div>

            <!-- Per-ticket inputs for new override -->
            <div data-payout-scheme-form-target="newOverridePerTicket" class="<%= ['per_ticket', 'per_ticket_guaranteed'].include?(dist_method) ? 'flex items-center gap-2' : 'hidden' %>">
              <span class="text-sm text-gray-500">$</span>
              <input type="number" data-payout-scheme-form-target="newPerTicketRate" min="0" step="0.01" class="w-20 rounded border border-gray-300 px-2 py-1 text-sm" placeholder="rate">
              <span class="text-sm text-gray-500">/ticket</span>
            </div>

            <!-- Minimum input for new override -->
            <div data-payout-scheme-form-target="newOverrideMinimum" class="<%= dist_method == 'per_ticket_guaranteed' ? 'flex items-center gap-2' : 'hidden' %>">
              <span class="text-sm text-gray-500">min $</span>
              <input type="number" data-payout-scheme-form-target="newMinimum" min="0" step="1" class="w-20 rounded border border-gray-300 px-2 py-1 text-sm" placeholder="min">
            </div>

            <!-- Shares input for new override -->
            <div data-payout-scheme-form-target="newOverrideShares" class="<%= dist_method == 'shares' ? 'flex items-center gap-2' : 'hidden' %>">
              <input type="number" data-payout-scheme-form-target="newShares" min="0" step="0.5" class="w-20 rounded border border-gray-300 px-2 py-1 text-sm" placeholder="shares">
              <span class="text-sm text-gray-500">shares</span>
            </div>

            <!-- Flat amount input for new override -->
            <div data-payout-scheme-form-target="newOverrideFlatAmount" class="<%= dist_method == 'flat_fee' ? 'flex items-center gap-2' : 'hidden' %>">
              <span class="text-sm text-gray-500">$</span>
              <input type="number" data-payout-scheme-form-target="newFlatAmount" min="0" step="1" class="w-20 rounded border border-gray-300 px-2 py-1 text-sm" placeholder="amount">
            </div>

            <button type="button" data-action="click->payout-scheme-form#addOverride" class="px-3 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg text-sm font-medium">
              Add
            </button>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Form Actions -->
    <div class="flex items-center justify-between pt-4">
      <%= link_to manage_money_payout_schemes_path, class: "text-gray-600 hover:text-gray-900" do %>
        Cancel
      <% end %>
      <%= render "shared/button", text: payout_scheme.persisted? ? "Save Changes" : "Create Scheme", variant: "primary", size: "medium", type: :submit %>
    </div>

  </div>
<% end %>
