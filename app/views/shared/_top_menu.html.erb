<div class="flex items-top justify-between mb-4 border-b-1 border-gray-200 pb-2">

  <div class="pt-1 coustard-regular">

    <% breadcrumbs.each do |name, path| %>
      <% if path %>
        <%= link_to name, path, class:"text-md sm:text-xl mb-1 mr-2 text-pink-500 hover:text-pink-600 underline" %>
        <span class="text-md sm:text-xl font-medium text-gray-500 mr-2"> /</span>
      <% else %>
        <span class="text-md sm:text-xl mb-1 mr-2"><%= name %> /</span>
      <% end %>
    <% end %>
    <span class="text-md sm:text-xl mb-1 mr-2"><%= text %></span>
  </div>

  <% if (!controller.class.ancestors.include?(Manage::ManageController)) || (controller.class.ancestors.include?(Manage::ManageController) && current_user_can_manage?) %>
    <% if links.count > 0 %>
      <div>
        <% links.each do |link| %>
          <%
            # Check if this link requires global manager
            requires_global_manager = link[:global_manager_required] || false
            can_show_link = requires_global_manager ? current_user_is_global_manager? : current_user_can_manage?
          %>
          <% if can_show_link %>
            <%= render partial: "shared/link_button", locals: {text: link[:text], path: link[:path]} %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  <% end %>


</div>