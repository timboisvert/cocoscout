<% content_for :title, "Productions" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <%= render partial: "shared/top_menu", locals: {
    header_text: "Productions",
    links: [
      { name: "Add a Production", path: new_production_path }
    ]
  } %>

  <div class="relative flex w-full flex-col rounded-lg border border-slate-200 bg-white shadow-sm">
    <div class="flex min-w-[240px] flex-col gap-1 p-1.5">
      <% if @productions.any? %>
        <% @productions.each do |production| %>
          <%= render production %>
        <% end %>
      <% else %>
        <p class="text-center my-10">No productions found.</p>
      <% end %>
    </div>
  </div>
</div>
