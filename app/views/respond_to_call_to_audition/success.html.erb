<div class="w-full max-w-4xl">
  <h1 class="font-bold text-4xl"><%= @production.name %></h1>
  <h2 class="font-bold text-2xl pt-5">Audition sign-up form</h2>

  <% if @call_to_audition.header_text.present? %>
    <div class="pt-5">
      <%= @call_to_audition.header_text %>
    </div>
  <% end %>

  <div class="mt-10 bg-green-50 border border-green-200 rounded-lg p-5 flex items-center">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
      <path stroke-linecap="round" stroke-linejoin="round" d="m4.5 12.75 6 6 9-13.5" />
    </svg>
    <span class="ml-3">
      <% if @call_to_audition.success_text.present? %>
        <%= @call_to_audition.success_text %>
      <% else %>
        We have received your submission and will be in touch with next steps.
      <% end %>
    </span>
  </div>

</div>