<% content_for :title, "Prepare - Auditions" %>

<div class="w-full mb-10">
  <%= render partial: "shared/notice", locals: { notice: notice } %>
  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Auditions", manage_production_auditions_path(@production)]
    ],
    text: "Prepare",
    links: []
  } %>

  <%= render partial: "lifecycle_panel", locals: { current_step: :prepare } %>

  <%= render partial: "archived_banner" %>

  <% if @audition_cycle.present? && @audition_cycle.opening_soon_and_not_reviewed? %>
    <div class="mb-6 p-4 bg-yellow-50 border border-yellow-200 rounded-lg">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-yellow-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-yellow-800">
            Sign-up window opens in <%= distance_of_time_in_words(@audition_cycle.opens_at, Time.current) %>
          </p>
          <p class="text-sm text-yellow-700 mt-1">
            Please review and approve the sign-up form before the window opens.
            <%= link_to "Review Form", form_manage_production_audition_cycle_path(@production, @audition_cycle), class: "font-semibold underline" %>
          </p>
        </div>
      </div>
    </div>
  <% end %>

  <% if @audition_cycle.blank? %>
    <div class="mb-5 text-gray-500 text-sm">
      You aren't currently offering auditions for <%= @production.name %>
    </div>

    <% if current_user_can_manage?(@production) %>
      <%= render partial: "shared/button", locals: {text: "Offer Auditions", path: new_manage_production_audition_cycle_path(@production), variant: "primary"} %>
    <% end %>
  <% else %>
    <% audition_cycle = @audition_cycle %>

    <div class="bg-white border border-gray-200 rounded-lg shadow-sm overflow-hidden mb-6">
      <div class="bg-gray-50 px-4 py-3 border-b border-gray-200">
        <h3 class="text-md font-semibold text-gray-900 coustard-regular">Audition Settings</h3>
      </div>
      <div class="p-6">
        <p class="text-sm text-gray-500 mb-4">Configure audition type, dates, and basic settings for your audition process.</p>

        <%
          # Determine status
          if audition_cycle.opens_at > Time.current
            status = :upcoming
          elsif audition_cycle.closes_at.present? && audition_cycle.closes_at <= Time.current
            status = :closed
          else
            status = :open
          end
        %>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-3 mb-4">
          <div class="p-3 bg-gray-50 rounded-lg">
            <p class="text-xs text-gray-600 font-medium">Audition Type</p>
            <p class="text-sm font-semibold text-gray-900 mt-1">
              <% if audition_cycle.audition_type == "in_person" %>
                In-person Auditions
              <% elsif audition_cycle.audition_type == "video_upload" %>
                Video Upload Auditions
              <% end %>
            </p>
          </div>
          <div class="p-3 bg-gray-50 rounded-lg">
            <p class="text-xs text-gray-600 font-medium">Sign-up Window</p>
            <p class="text-sm font-semibold text-gray-900 mt-1">
              <%= audition_cycle.opens_at.strftime("%b %-d, %Y at %l:%M %p") %><% if audition_cycle.closes_at.present? %> - <%= audition_cycle.closes_at.strftime("%b %-d, %Y at %l:%M %p") %><% else %> (open-ended)<% end %>
              <% if status == :upcoming %>
                <% seconds_until = (audition_cycle.opens_at - Time.current).to_i %>
                <% if seconds_until > 0 && seconds_until < 172800 %>
                  <div class="text-xs text-pink-500 mt-1" data-controller="countdown" data-countdown-until-value="<%= audition_cycle.opens_at.utc.iso8601 %>">
                    Opens in <span data-countdown-target="clock"></span>
                  </div>
                <% elsif seconds_until > 0 %>
                  <span class="block text-xs text-pink-500 mt-1">Opens in <%= distance_of_time_in_words(Time.current, audition_cycle.opens_at) %></span>
                <% end %>
              <% elsif status == :open && audition_cycle.closes_at.present? %>
                <% seconds_until = (audition_cycle.closes_at - Time.current).to_i %>
                <% if seconds_until > 0 && seconds_until < 172800 %>
                  <div class="text-xs text-pink-500 mt-1" data-controller="countdown" data-countdown-until-value="<%= audition_cycle.closes_at.utc.iso8601 %>">
                    Closes in <span data-countdown-target="clock"></span>
                  </div>
                <% elsif seconds_until > 0 %>
                  <span class="block text-xs text-pink-500 mt-1">Closes in <%= distance_of_time_in_words(Time.current, audition_cycle.closes_at) %></span>
                <% end %>
              <% end %>
            </p>
          </div>
        </div>

      <% if current_user_can_manage?(@production) %>
        <%= render partial: "shared/button", locals: {text: (@audition_cycle.active ? "Edit Settings" : "View Settings"), path: edit_manage_production_audition_cycle_path(@production, audition_cycle), variant: "primary"} %>
      <% end %>
      </div>
    </div>

    <% if audition_cycle.audition_type == "in_person" %>
    <div class="bg-white border border-gray-200 rounded-lg shadow-sm overflow-hidden mb-6">
      <div class="bg-gray-50 px-4 py-3 border-b border-gray-200">
        <h3 class="text-md font-semibold text-gray-900 coustard-regular">Plan your Audition Sessions</h3>
      </div>
      <div class="p-6">
        <p class="text-sm text-gray-500 mb-6">Schedule when and where auditions will take place, and set how many people you want to audition at each session.</p>

      <% if @audition_cycle.audition_sessions.any? %>
        <div class="mb-4 space-y-3">
          <% @audition_cycle.audition_sessions.order(:start_at).each do |session| %>
            <div class="flex items-stretch px-3 py-2 border rounded-lg hover:border-gray-400 transition-all bg-white border-gray-200">
              <%# Left Section: Date & Session Details %>
              <div class="w-1/2 flex items-center gap-4">
                <%# Date Box %>
                <div class="flex-shrink-0 w-14 text-center">
                  <div class="text-xs font-semibold text-pink-600 uppercase"><%= session.start_at.strftime("%b") %></div>
                  <div class="text-2xl font-bold text-gray-900"><%= session.start_at.strftime("%-d") %></div>
                  <div class="text-xs text-gray-500"><%= session.start_at.strftime("%a") %></div>
                </div>

                <%# Session Details %>
                <div class="flex-1 min-w-0">
                  <div class="font-medium text-gray-900">
                    Audition Session
                  </div>
                  <div class="text-sm text-gray-600">
                    <%= session.start_at.strftime("%l:%M %p") %>
                    <% if session.location.present? %>
                      · <%= session.location.name %>
                    <% end %>
                  </div>
                </div>
              </div>

              <%# Right Section: Capacity %>
              <div class="w-1/2 border-l border-gray-200 pl-4 flex items-center">
                <div class="flex-1">
                  <div class="text-[10px] text-gray-400 uppercase tracking-wide">Capacity</div>
                  <div class="text-lg font-semibold text-gray-900"><%= session.maximum_auditionees.present? ? session.maximum_auditionees : "∞" %></div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500 text-sm mb-4">No sessions scheduled yet</p>
      <% end %>

      <% if current_user_can_manage?(@production) %>
        <%= render partial: "shared/button", locals: {text: (@audition_cycle.active ? "Manage Sessions" : "View Audition Sessions"), path: manage_production_audition_cycle_audition_sessions_path(@production, @audition_cycle), variant: "primary"} %>
      <% end %>
      </div>
    </div>
    <% end %>

    <div class="bg-white border border-gray-200 rounded-lg shadow-sm overflow-hidden mb-6">
      <div class="bg-gray-50 px-4 py-3 border-b border-gray-200">
        <h3 class="text-md font-semibold text-gray-900 coustard-regular">Pick your Audition Review Team</h3>
      </div>
      <div class="p-6">
        <p class="text-sm text-gray-500 mb-4">Identify who will get access to view and assess sign-ups and auditions.</p>

        <% reviewer_type = @audition_cycle.reviewer_access_type.presence || 'managers' %>
        <%= form_with url: update_reviewers_manage_production_audition_cycle_path(@production, @audition_cycle), method: :patch, local: true, data: { controller: "reviewer-selector" } do |form| %>
          <div class="mb-4">
            <label class="block font-semibold mb-2 text-sm">Who can review auditions?</label>
            <div class="space-y-2">
              <div>
                <div class="flex items-center">
                  <label class="flex items-center cursor-pointer">
                    <%= radio_button_tag :reviewer_access_type, 'managers', reviewer_type == 'managers', class: "mr-2 accent-pink-500 cursor-pointer", data: { action: "change->reviewer-selector#toggleSpecific" } %>
                    <span class="text-sm">Production Team</span>
                  </label>
                  <button type="button" class="ml-2 text-xs text-pink-500 hover:text-pink-600 underline cursor-pointer" data-action="click->reviewer-selector#toggleManagersList" data-reviewer-selector-target="managersToggle">
                    Show
                  </button>
                </div>
                <div class="hidden ml-6 mt-2 p-3 bg-gray-50 border border-gray-200 rounded-lg" data-reviewer-selector-target="managersList">
                  <% global_managers = Current.organization.organization_roles.where(company_role: %w[manager viewer]).includes(user: :default_person).map { |r| { user: r.user, role: "#{r.company_role.capitalize} (Global)" } } %>
                  <% production_team = @production.production_permissions.where(role: %w[manager viewer]).includes(user: :default_person).map { |p| { user: p.user, role: p.role.capitalize } } %>
                  <% all_team = (global_managers + production_team).uniq { |t| t[:user].id } %>
                  <div class="grid grid-cols-4 md:grid-cols-6 lg:grid-cols-8 xl:grid-cols-10 gap-3 w-full">
                    <% all_team.each do |team_member| %>
                      <% user = team_member[:user] %>
                      <% next unless user.person %>
                      <div class="relative group">
                        <div class="relative aspect-square rounded-lg overflow-hidden bg-gray-100 mb-2">
                          <% if user.person.headshot&.attached? %>
                            <%= image_tag user.person.safe_headshot_variant(:thumb),
                                  class: "w-full h-full object-cover",
                                  loading: "lazy",
                                  alt: user.person.name %>
                          <% else %>
                            <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-gray-100 to-gray-200">
                              <div class="text-2xl font-bold text-gray-500">
                                <%= user.person.name.split.map(&:first).join.upcase %>
                              </div>
                            </div>
                          <% end %>
                        </div>
                        <div class="text-xs font-medium text-gray-900 truncate" title="<%= user.person.name %>">
                          <%= user.person.name %>
                        </div>
                        <div class="text-[10px] text-gray-500 truncate">
                          <%= team_member[:role] %>
                        </div>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>

              <div>
                <div class="flex items-center">
                  <label class="flex items-center cursor-pointer">
                    <%= radio_button_tag :reviewer_access_type, 'all', reviewer_type == 'all', class: "mr-2 accent-pink-500 cursor-pointer", data: { action: "change->reviewer-selector#toggleSpecific" } %>
                    <span class="text-sm">Entire Talent Pool</span>
                  </label>
                  <button type="button" class="ml-2 text-xs text-pink-500 hover:text-pink-600 underline cursor-pointer" data-action="click->reviewer-selector#toggleTalentPoolList" data-reviewer-selector-target="talentPoolToggle">
                    Show
                  </button>
                </div>
                <div class="hidden ml-6 mt-2 p-3 bg-gray-50 border border-gray-200 rounded-lg max-h-96 overflow-y-auto" data-reviewer-selector-target="talentPoolList">
                  <div class="grid grid-cols-4 md:grid-cols-6 lg:grid-cols-8 xl:grid-cols-10 gap-3 w-full">
                    <% @talent_pool_people.each do |person| %>
                      <div class="relative group">
                        <%= link_to manage_person_path(person), data: { turbo_frame: "_top" }, class: "block" do %>
                          <div class="relative aspect-square rounded-lg overflow-hidden bg-gray-100 mb-2">
                            <% if person.headshot&.attached? %>
                              <%= image_tag person.safe_headshot_variant(:thumb),
                                    class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-200",
                                    loading: "lazy",
                                    alt: person.name %>
                            <% else %>
                              <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-gray-100 to-gray-200">
                                <div class="text-2xl font-bold text-gray-500">
                                  <%= person.name.split.map(&:first).join.upcase %>
                                </div>
                              </div>
                            <% end %>
                          </div>
                          <div class="text-xs font-medium text-gray-900 group-hover:text-pink-600 transition-colors truncate" title="<%= person.name %>">
                            <%= person.name %>
                          </div>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>

              <div>
                <label class="flex items-center cursor-pointer">
                  <%= radio_button_tag :reviewer_access_type, 'specific', reviewer_type == 'specific', class: "mr-2 accent-pink-500 cursor-pointer", data: { action: "change->reviewer-selector#toggleSpecific" } %>
                  <span class="text-sm">Specific People</span>
                </label>
              </div>
            </div>
          </div>

          <div class="<%= reviewer_type == 'specific' ? '' : 'hidden' %> ml-6" data-reviewer-selector-target="specificSection">
            <div class="border border-gray-300 rounded-lg p-3 bg-gray-50 max-h-96 overflow-y-auto">
              <div class="grid grid-cols-4 md:grid-cols-6 lg:grid-cols-8 xl:grid-cols-10 gap-3 w-full">
                <% @talent_pool_people.each do |person| %>
                  <% is_selected = @audition_cycle.reviewer_people.include?(person) %>
                  <label class="relative group cursor-pointer">
                    <div class="relative aspect-square rounded-lg overflow-hidden bg-gray-100 mb-2">
                      <%# Checkbox in top right corner %>
                      <div class="absolute top-1 right-1 z-10">
                        <%= check_box_tag 'person_ids[]', person.id, is_selected, class: "w-5 h-5 accent-pink-500 cursor-pointer rounded" %>
                      </div>
                      <% if person.headshot&.attached? %>
                        <%= image_tag person.safe_headshot_variant(:thumb),
                              class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-200",
                              loading: "lazy",
                              alt: person.name %>
                      <% else %>
                        <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-gray-100 to-gray-200">
                          <div class="text-2xl font-bold text-gray-500">
                            <%= person.name.split.map(&:first).join.upcase %>
                          </div>
                        </div>
                      <% end %>
                    </div>
                    <div class="text-xs font-medium text-gray-900 truncate" title="<%= person.name %>">
                      <%= person.name %>
                    </div>
                  </label>
                <% end %>
              </div>
            </div>
          </div>

          <% if current_user_can_manage?(@production) %>
            <div class="mt-4">
              <%= render partial: "shared/button", locals: { text: "Save Review Team", variant: "primary", type: "submit" } %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="bg-white border border-gray-200 rounded-lg shadow-sm overflow-hidden mb-6">
      <div class="bg-gray-50 px-4 py-3 border-b border-gray-200">
        <h3 class="text-md font-semibold text-gray-900 coustard-regular">Sign-up Form</h3>
      </div>
      <div class="p-6">
        <p class="text-sm text-gray-500 mb-4">Customize the questions and information you want to collect from auditionees. This form will be shared with everyone you invite to audition.</p>

        <div class="bg-gray-50 rounded-lg p-4 mb-4">
          <p class="text-sm text-gray-600 mb-1">Current Form Status</p>
          <% if audition_cycle.form_reviewed %>
            <div class="flex items-center">
              <svg class="w-5 h-5 text-green-600 mr-2" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path></svg>
              <span class="text-gray-700 font-semibold text-green-700">Reviewed and ready to share</span>
            </div>
          <% else %>
            <div class="flex items-center">
              <svg class="w-5 h-5 text-yellow-600 mr-2" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path></svg>
              <span class="text-gray-700 font-semibold text-yellow-700">Pending review</span>
            </div>
          <% end %>
        </div>

        <div class="flex flex-col sm:flex-row sm:space-x-2 gap-4 sm:gap-0">
          <% if current_user_can_manage?(@production) %>
            <%= render partial: "shared/button", locals: {text: (@audition_cycle.active ? "Edit Form" : "View Form"), path: form_manage_production_audition_cycle_path(@production, audition_cycle), variant: "primary"} %>
          <% end %>
          <%= render partial: "shared/button", locals: {text: "Preview Form", path: preview_manage_production_audition_cycle_path(@production, audition_cycle), variant: "primary"} %>
        </div>
      </div>
    </div>

  <% end %>
</div>
