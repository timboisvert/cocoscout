<%= render partial: "shared/top_menu", locals: {
  breadcrumbs: [
    ["Money", manage_money_index_path],
    ["Financials", manage_money_financials_path],
    [@production.name, manage_money_production_financials_path(@production)],
    ["Expenses", manage_money_financials_production_expenses_path(@production)]
  ],
  text: @production_expense.name,
  links: [
    { text: "Edit", path: manage_edit_money_financials_production_expense_path(@production, @production_expense), icon: "pencil" },
    { text: "Recalculate", path: manage_recalculate_money_financials_production_expense_path(@production, @production_expense), data: { turbo_method: :post, turbo_confirm: "Recalculate all non-override allocations?" }, color: "gray" }
  ]
} %>

<div class="max-w-4xl mx-auto px-4 py-8">
  <%# Summary Card %>
  <div class="bg-white rounded-lg border border-gray-200 p-6 mb-8">
    <div class="flex items-start justify-between mb-4">
      <div>
        <h1 class="text-2xl font-bold text-gray-900"><%= @production_expense.name %></h1>
        <% if @production_expense.description.present? %>
          <p class="text-gray-600 mt-1"><%= @production_expense.description %></p>
        <% end %>
      </div>
      <div class="text-right">
        <div class="text-2xl font-bold text-gray-900"><%= number_to_currency(@production_expense.total_amount) %></div>
        <div class="text-sm text-gray-500">Total</div>
      </div>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 pt-4 border-t border-gray-200">
      <div>
        <div class="text-xs text-gray-500 uppercase tracking-wide">Spread Method</div>
        <div class="text-sm font-medium text-gray-900"><%= @production_expense.spread_method.titleize.gsub("_", " ") %></div>
      </div>
      <div>
        <div class="text-xs text-gray-500 uppercase tracking-wide">Category</div>
        <div class="text-sm font-medium text-gray-900"><%= @production_expense.category&.titleize || "Other" %></div>
      </div>
      <div>
        <div class="text-xs text-gray-500 uppercase tracking-wide">Shows</div>
        <div class="text-sm font-medium text-gray-900"><%= @allocations.count %></div>
      </div>
      <div>
        <div class="text-xs text-gray-500 uppercase tracking-wide">Per Show</div>
        <div class="text-sm font-medium text-gray-900"><%= number_to_currency(@production_expense.per_show_amount) %></div>
      </div>
    </div>
  </div>

  <%# Allocations List %>
  <div class="bg-white rounded-lg border border-gray-200">
    <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
      <h2 class="text-lg font-semibold text-gray-900">Allocations</h2>
      <%
        unallocated = @production_expense.unallocated_amount
        has_overrides = @allocations.any?(&:is_override?)
      %>
      <% if unallocated != 0 %>
        <span class="text-sm <%= unallocated > 0 ? 'text-yellow-600' : 'text-red-600' %>">
          <%= unallocated > 0 ? "#{number_to_currency(unallocated)} unallocated" : "#{number_to_currency(unallocated.abs)} over-allocated" %>
        </span>
      <% end %>
    </div>

    <% if @allocations.any? %>
      <div class="divide-y divide-gray-200">
        <% @allocations.each do |allocation| %>
          <div class="px-6 py-4 flex items-center justify-between hover:bg-gray-50">
            <div class="flex-1">
              <div class="font-medium text-gray-900">
                <%= allocation.show.date_and_time.strftime("%b %d, %Y") %>
                &middot;
                <%= allocation.show.display_name %>
              </div>
              <div class="text-sm text-gray-500">
                <%= allocation.show.date_and_time.strftime("%l:%M %p").strip %>
                <% if allocation.show.location %>
                  &middot; <%= allocation.show.location.name %>
                <% end %>
              </div>
              <% if allocation.is_override? && allocation.override_reason.present? %>
                <div class="text-xs text-gray-400 mt-1">Override: <%= allocation.override_reason %></div>
              <% end %>
            </div>
            <div class="flex items-center gap-4">
              <div class="text-right">
                <div class="font-medium <%= allocation.is_override? ? 'text-pink-600' : 'text-gray-900' %>">
                  <%= number_to_currency(allocation.allocated_amount) %>
                  <% if allocation.is_override? %>
                    <span class="text-xs text-pink-500">(override)</span>
                  <% end %>
                </div>
              </div>
              <div class="flex items-center gap-1" data-controller="allocation-edit">
                <button type="button" data-action="click->allocation-edit#showForm" class="text-gray-400 hover:text-pink-600 p-1 cursor-pointer">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
                  </svg>
                </button>
                <% if allocation.is_override? %>
                  <%= button_to manage_override_money_financials_production_expense_allocation_path(@production, @production_expense, allocation),
                      method: :patch,
                      params: { clear_override: true },
                      data: { turbo_confirm: "Clear this override and recalculate?" },
                      class: "text-gray-400 hover:text-red-500 p-1 cursor-pointer" do %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                    </svg>
                  <% end %>
                <% end %>

                <%# Hidden inline edit form %>
                <div data-allocation-edit-target="form" class="hidden fixed inset-0 bg-black/60 backdrop-blur-sm z-50 flex items-center justify-center p-4" data-action="click->allocation-edit#hideForm">
                  <div class="bg-white w-full max-w-md rounded-lg shadow-xl" data-action="click->allocation-edit#stopPropagation">
                    <div class="px-6 py-4 border-b border-gray-200">
                      <h3 class="text-lg font-semibold text-gray-900">Override Allocation</h3>
                    </div>
                    <%= form_with url: manage_override_money_financials_production_expense_allocation_path(@production, @production_expense, allocation), method: :patch, local: true, class: "p-6 space-y-4" do %>
                      <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Amount</label>
                        <div class="relative">
                          <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-500">$</span>
                          <input type="number" name="allocated_amount" step="0.01" min="0"
                                 value="<%= allocation.allocated_amount %>"
                                 class="w-full rounded-lg border border-gray-300 pl-7 pr-3 py-2 focus:border-pink-500 focus:ring-pink-500">
                        </div>
                        <p class="text-xs text-gray-500 mt-1">Default: <%= number_to_currency(@production_expense.per_show_amount) %></p>
                      </div>
                      <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Reason (optional)</label>
                        <input type="text" name="override_reason"
                               value="<%= allocation.override_reason %>"
                               class="w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500"
                               placeholder="e.g., Reduced capacity show">
                      </div>
                      <div class="flex justify-end gap-3">
                        <button type="button" data-action="click->allocation-edit#hideForm" class="px-4 py-2 text-gray-600 hover:text-gray-800 cursor-pointer">
                          Cancel
                        </button>
                        <%= render "shared/button", text: "Save Override", variant: "primary", size: "medium", type: :submit %>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="p-8 text-center text-gray-500">
        No shows match the spread criteria.
        <%= link_to "Edit the expense", manage_edit_money_financials_production_expense_path(@production, @production_expense), class: "text-pink-600 hover:text-pink-700" %> to adjust the settings.
      </div>
    <% end %>
  </div>

  <%# Delete %>
  <div class="mt-8 text-center">
    <%= button_to manage_delete_money_financials_production_expense_path(@production, @production_expense),
        method: :delete,
        data: { turbo_confirm: "Delete this production expense and all its allocations?" },
        class: "text-red-500 hover:text-red-600 text-sm cursor-pointer" do %>
      Delete this expense
    <% end %>
  </div>
</div>
