<% content_for :title, "Email Log Details - God Mode" %>

<div class="w-full">
  <%= render partial: "shared/notice", locals: { notice: notice } %>

  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
        ["God Mode", god_mode_path],
        ["Email Logs", email_logs_path]
    ],
    text: "Email Details",
    links: []
  } %>

  <div class="mt-4 space-y-4">
    <!-- Email Metadata -->
    <div class="bg-white border border-gray-200 rounded-lg overflow-hidden">
      <div class="bg-gray-50 px-4 py-3 border-b border-gray-200">
        <h3 class="text-md font-semibold text-gray-900 coustard-regular">Email Information</h3>
      </div>

      <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">From User</label>
            <div>
              <%= link_to @email_log.user.email_address, email_logs_path(user_id: @email_log.user.id), class: "text-pink-600 hover:text-pink-800 font-medium" %>
              <span class="text-sm text-gray-500">(ID: <%= @email_log.user.id %>)</span>
            </div>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">To</label>
            <div class="text-gray-900"><%= @email_log.recipient %></div>
          </div>

          <div class="md:col-span-2">
            <label class="block text-sm font-medium text-gray-700 mb-1">Subject</label>
            <div class="text-gray-900"><%= @email_log.subject || "(no subject)" %></div>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Status</label>
            <div>
              <% case @email_log.delivery_status %>
              <% when "queued" %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  ⏳ Queued
                </span>
              <% when "sent" %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  ✓ Sent
                </span>
              <% when "delivered" %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  ✓ Delivered
                </span>
              <% when "failed" %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                  ✗ Failed
                </span>
              <% else %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                  <%= @email_log.delivery_status %>
                </span>
              <% end %>
            </div>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Mailer</label>
            <div class="text-gray-900">
              <%= @email_log.mailer_class %><% if @email_log.mailer_action.present? %>#<%= @email_log.mailer_action %><% end %>
            </div>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Sent At</label>
            <div class="text-gray-900">
              <%= @email_log.sent_at&.strftime("%B %d, %Y at %I:%M %p") || "Not sent" %>
            </div>
          </div>

          <% if @email_log.delivered_at.present? %>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Delivered At</label>
            <div class="text-gray-900">
              <%= @email_log.delivered_at.strftime("%B %d, %Y at %I:%M %p") %>
            </div>
          </div>
          <% end %>

          <div class="md:col-span-2">
            <label class="block text-sm font-medium text-gray-700 mb-1">Message ID</label>
            <div class="text-gray-600 text-sm font-mono break-all"><%= @email_log.message_id || "N/A" %></div>
          </div>
        </div>

        <% if @email_log.error_message.present? %>
        <div class="mt-6">
          <label class="block text-sm font-medium text-red-700 mb-1">Error Message</label>
          <div class="text-sm text-red-900 bg-red-50 p-4 rounded-lg border border-red-200">
            <%= @email_log.error_message %>
        </div>
      </div>
      <% end %>
    </div>

    <!-- Email Body -->
    <div class="px-6 py-4">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-lg font-semibold text-gray-900">Email Body</h2>
        <div class="flex gap-2">
          <button onclick="document.getElementById('raw-view').classList.add('hidden'); document.getElementById('rendered-view').classList.remove('hidden'); this.classList.add('bg-pink-600', 'text-white'); this.classList.remove('bg-gray-200', 'text-gray-700'); document.getElementById('raw-btn').classList.remove('bg-pink-600', 'text-white'); document.getElementById('raw-btn').classList.add('bg-gray-200', 'text-gray-700');"
                  class="px-3 py-1 text-sm rounded bg-pink-600 text-white">
            Rendered
          </button>
          <button id="raw-btn" onclick="document.getElementById('rendered-view').classList.add('hidden'); document.getElementById('raw-view').classList.remove('hidden'); this.classList.add('bg-pink-600', 'text-white'); this.classList.remove('bg-gray-200', 'text-gray-700'); this.previousElementSibling.classList.remove('bg-pink-600', 'text-white'); this.previousElementSibling.classList.add('bg-gray-200', 'text-gray-700');"
                  class="px-3 py-1 text-sm rounded bg-gray-200 text-gray-700">
            Raw
          </button>
        </div>
      </div>

      <!-- Rendered View -->
      <div id="rendered-view" class="border border-gray-200 rounded bg-white min-h-[300px]">
        <iframe
          id="email-iframe"
          class="w-full min-h-[600px] border-0"
          sandbox="allow-same-origin"
          srcdoc="<%= ERB::Util.html_escape(@email_log.body) %>"
        ></iframe>
      </div>

      <!-- Raw View -->
      <div id="raw-view" class="hidden border border-gray-200 rounded p-4 bg-gray-50 min-h-[300px]">
        <pre class="text-sm text-gray-800 whitespace-pre-wrap font-mono"><%= @email_log.body %></pre>
      </div>

      <% if @email_log.body.blank? %>
        <div class="text-center py-8 text-gray-500">
          No email body available
        </div>
      <% end %>
    </div>

    <!-- Footer -->
    <div class="border-t border-gray-200 px-6 py-4 bg-gray-50 text-sm text-gray-600">
      <div class="flex justify-between items-center">
        <div>
          Email Log ID: <%= @email_log.id %>
        </div>
        <div>
          Created: <%= @email_log.created_at.strftime("%B %d, %Y at %I:%M %p") %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Auto-resize iframe to fit content
  const iframe = document.getElementById('email-iframe');
  if (iframe) {
    iframe.onload = function() {
      try {
        const iframeDoc = iframe.contentDocument || iframe.contentWindow.document;
        const height = iframeDoc.body.scrollHeight;
        iframe.style.height = Math.max(height, 600) + 'px';
      } catch (e) {
        console.log('Could not resize iframe:', e);
      }
    };
  }
</script>
