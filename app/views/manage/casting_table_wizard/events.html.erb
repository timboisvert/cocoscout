<% content_for :title, "Create Casting Table - Select Events" %>

<div class="w-full">
  <%= render partial: "shared/notice", locals: { notice: notice, alert: alert } %>
  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Casting", manage_casting_path],
      ["Casting Tables", manage_casting_tables_path]
    ],
    text: "Create Casting Table",
    links: []
  } %>

  <div class="max-w-2xl mx-auto mt-8">
    <!-- Progress Steps -->
    <div class="mb-8">
      <div class="flex items-center justify-center">
        <div class="flex items-center">
          <div class="w-8 h-8 rounded-full flex items-center justify-center text-sm font-medium bg-pink-500 text-white">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          <span class="ml-2 text-sm font-medium text-pink-500 hidden sm:inline">Productions</span>
        </div>
        <div class="flex-1 h-0.5 mx-2 bg-pink-500"></div>
        <div class="flex items-center">
          <div class="w-8 h-8 rounded-full flex items-center justify-center text-sm font-medium bg-pink-500 text-white">2</div>
          <span class="ml-2 text-sm font-medium text-pink-600 hidden sm:inline">Events</span>
        </div>
        <div class="flex-1 h-0.5 mx-2 bg-gray-200"></div>
        <div class="flex items-center">
          <div class="w-8 h-8 rounded-full flex items-center justify-center text-sm font-medium bg-gray-200 text-gray-600">3</div>
          <span class="ml-2 text-sm font-medium text-gray-500 hidden sm:inline">Members</span>
        </div>
        <div class="flex-1 h-0.5 mx-2 bg-gray-200"></div>
        <div class="flex items-center">
          <div class="w-8 h-8 rounded-full flex items-center justify-center text-sm font-medium bg-gray-200 text-gray-600">4</div>
          <span class="ml-2 text-sm font-medium text-gray-500 hidden sm:inline">Review</span>
        </div>
      </div>
    </div>

    <!-- Step Content -->
    <div class="bg-white rounded-lg border border-gray-200 shadow-sm p-6 sm:p-8">
      <h2 class="text-xl font-bold text-gray-900 mb-2 coustard-regular">Which events are you casting?</h2>
      <p class="text-gray-600 mb-6">Select the shows/events you want to include in this casting table.</p>

      <%= form_with url: manage_casting_tables_save_events_path, method: :post, local: true, data: { controller: "multi-event-select" } do |form| %>
        <div class="space-y-6 max-h-[500px] overflow-y-auto">
          <% @productions.each do |production| %>
            <% shows = @shows_by_production[production.id] || [] %>
            <div class="border border-gray-200 rounded-lg overflow-hidden">
              <div class="bg-gray-50 px-4 py-3 border-b border-gray-200">
                <div class="flex items-center justify-between">
                  <h3 class="text-sm font-semibold text-gray-900"><%= production.name %></h3>
                  <span class="text-xs text-gray-500"><%= pluralize(shows.count, "show") %></span>
                </div>
              </div>
              <div class="divide-y divide-gray-100">
                <% if shows.any? %>
                  <% shows.each do |show| %>
                    <% disabled = @already_finalized_show_ids.include?(show.id) %>
                    <% is_selected = @selected_show_ids.include?(show.id) %>
                    <div class="flex items-stretch px-3 py-2 cursor-pointer transition-all hover:bg-gray-50 <%= 'opacity-50 pointer-events-none' if disabled %> <%= is_selected ? 'bg-pink-50' : 'bg-white' %>"
                         data-multi-event-select-target="row"
                         data-show-id="<%= show.id %>"
                         data-action="click->multi-event-select#toggle">
                      <input type="checkbox" name="show_ids[]" value="<%= show.id %>"
                             class="sr-only"
                             data-multi-event-select-target="input"
                             <%= "checked" if is_selected %>
                             <%= "disabled" if disabled %>>

                      <%# Date Box %>
                      <div class="flex-shrink-0 w-14 text-center mr-4">
                        <div class="text-xs font-semibold text-pink-600 uppercase"><%= show.date_and_time.strftime("%b") %></div>
                        <div class="text-2xl font-bold text-gray-900"><%= show.date_and_time.strftime("%-d") %></div>
                        <div class="text-xs text-gray-500"><%= show.date_and_time.strftime("%a") %></div>
                      </div>

                      <%# Show Details %>
                      <div class="flex-1 min-w-0 flex flex-col justify-center">
                        <div class="flex items-center gap-2 flex-wrap">
                          <span class="font-medium text-gray-900">
                            <%= show.secondary_name.presence || show.event_type.titleize %>
                          </span>
                        </div>
                        <div class="text-sm text-gray-600">
                          <%= show.date_and_time.strftime("%l:%M %p").strip %>
                          <% if show.location.present? %>
                            Â· <%= show.location.name %>
                          <% end %>
                        </div>
                        <% if disabled %>
                          <p class="text-xs text-red-500 mt-0.5">Already in a finalized casting table</p>
                        <% end %>
                      </div>

                      <%# Selection indicator %>
                      <div class="flex items-center ml-4" data-multi-event-select-target="checkmark">
                        <% if is_selected %>
                          <div class="w-6 h-6 rounded-full bg-pink-500 flex items-center justify-center">
                            <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                            </svg>
                          </div>
                        <% else %>
                          <div class="w-6 h-6 rounded-full border-2 border-gray-300"></div>
                        <% end %>
                      </div>
                    </div>
                  <% end %>
                <% else %>
                  <div class="px-4 py-3 text-sm text-gray-500">No upcoming shows with casting enabled</div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>

        <div class="mt-8 flex justify-between">
          <%= link_to "Back", manage_casting_tables_new_path, class: "text-gray-500 hover:text-gray-700 text-sm py-2" %>
          <%= render "shared/button", text: "Next", variant: "primary", size: "medium", type: :submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>
