<% content_for :title, "Change Email" %>

<div class="w-full max-w-2xl mx-auto">
  <div class="mb-6">
    <%= link_to edit_profile_path(@person), class: "inline-flex items-center text-sm text-gray-600 hover:text-pink-500" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-1">
        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
      </svg>
      Back to Profile
    <% end %>
  </div>

  <div class="bg-white border border-gray-200 rounded-lg overflow-hidden">
    <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
      <h1 class="text-xl font-semibold text-gray-900 coustard-regular">Change Email Address</h1>
    </div>

    <div class="p-6">
      <%= form_with(model: @person, url: update_email_profile_path(@person), method: :patch) do |f| %>
        <div class="space-y-6">
          <!-- Current Email -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Current Email</label>
            <div class="p-3 bg-gray-50 rounded-lg border border-gray-200">
              <div class="text-sm text-gray-600">
                <%= @person.email %>
              </div>
            </div>
          </div>

          <!-- New Email Input -->
          <div>
            <%= f.label :email, "New Email", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.email_field :email,
                value: @person.email,
                placeholder: "your.email@example.com",
                class: "block w-full rounded-lg border #{@person.errors[:email].any? ? 'border-pink-500' : 'border-gray-300'} px-3 py-2 shadow-sm focus:border-pink-500 focus:ring-pink-500" %>
            <% if @person.errors[:email].any? %>
              <p class="mt-2 text-sm text-pink-600"><%= @person.errors[:email].first %></p>
            <% end %>
            <p class="mt-2 text-xs text-gray-500">
              This will update the contact email for this profile. Organizations will use this email to contact you about casting and productions.
            </p>
            <p class="mt-1 text-xs text-gray-500">
              To change your login email address, go to your <%= link_to "Account Settings", account_path, class: "text-pink-500 hover:text-pink-600 underline" %>.
            </p>
          </div>

          <!-- Action Buttons -->
          <div class="flex items-center justify-end gap-3 pt-4 border-t border-gray-200">
            <%= link_to "Cancel", profile_path, class: "px-4 py-2 text-sm font-medium text-gray-700 hover:text-gray-900" %>
            <%= f.submit "Update Email", class: "px-6 py-2 bg-pink-500 hover:bg-pink-600 text-white rounded-lg text-sm font-medium transition-colors" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
