<%#
  Comments Section Component

  Styles for comments (comment_style):
    :inline   - Facebook-style: comments appear directly under post in gray area
    :collapsed - LinkedIn-style: collapsed by default, expand to see
    :modal    - Modern: button opens modal/drawer for full thread

  Styles for threads (thread_style):
    :flat     - All replies at same level, chronological
    :nested   - Replies indented under parent, tree view
    :sidebar  - Replies appear in right sidebar when expanded
%>

<%
  comment_style = local_assigns.fetch(:comment_style, :inline)
  thread_style = local_assigns.fetch(:thread_style, :flat)
  show_inline_reply = local_assigns.fetch(:show_inline_reply, true)

  current_person = defined?(Current) && Current.user ? Current.user.person : nil
%>

<% if comment_style == :inline %>
  <%# === STYLE A: Inline (Facebook-style) - Comments appear directly under post === %>
  <% if preview_replies.any? %>
    <div class="px-4 py-3 bg-gray-50 border-t border-gray-100 space-y-3">
      <% if hidden_reply_count > 0 %>
        <button class="text-sm font-medium text-gray-500 hover:text-gray-700 hover:underline">
          View <%= hidden_reply_count %> more <%= hidden_reply_count == 1 ? 'comment' : 'comments' %>
        </button>
      <% end %>

      <%= render "shared/messages/thread_display",
                 replies: preview_replies,
                 style: thread_style %>
    </div>
  <% end %>

  <% if show_inline_reply %>
    <div class="px-4 py-3 border-t border-gray-100 flex gap-3">
      <% if current_person %>
        <% headshot_variant = current_person.safe_headshot_variant(:thumb) %>
        <% if headshot_variant %>
          <%= image_tag headshot_variant, alt: current_person.name, class: "w-8 h-8 rounded-lg object-cover flex-shrink-0" %>
        <% else %>
          <div class="w-8 h-8 rounded-lg bg-gray-200 flex items-center justify-center text-gray-600 font-bold text-xs flex-shrink-0">
            <%= current_person.initials %>
          </div>
        <% end %>
      <% else %>
        <div class="w-8 h-8 rounded-lg bg-gray-200 flex-shrink-0"></div>
      <% end %>
      <div class="flex-1">
        <input type="text" placeholder="Write a comment..." class="w-full px-4 py-2 bg-gray-100 rounded-full text-sm focus:outline-none focus:ring-2 focus:ring-pink-500 focus:bg-white border border-transparent focus:border-gray-200">
      </div>
    </div>
  <% end %>

<% elsif comment_style == :collapsed %>
  <%# === STYLE B: Collapsed (LinkedIn-style) - Hidden by default === %>
  <% if replies.any? %>
    <div class="border-t border-gray-100" x-data="{ expanded: false }">
      <button
        @click="expanded = !expanded"
        class="w-full px-4 py-3 flex items-center justify-between text-sm text-gray-600 hover:bg-gray-50">
        <span class="flex items-center gap-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
          </svg>
          <span class="font-medium"><%= replies.count %> <%= replies.count == 1 ? 'comment' : 'comments' %></span>
        </span>
        <svg class="w-5 h-5 transition-transform" :class="expanded ? 'rotate-180' : ''" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
        </svg>
      </button>

      <div x-show="expanded" x-collapse class="bg-gray-50">
        <div class="px-4 py-3 space-y-3">
          <%= render "shared/messages/thread_display",
                     replies: replies.limit(10),
                     style: thread_style %>
        </div>

        <% if show_inline_reply %>
          <div class="px-4 py-3 border-t border-gray-200 flex gap-3">
            <% if current_person %>
              <% headshot_variant = current_person.safe_headshot_variant(:thumb) %>
              <% if headshot_variant %>
                <%= image_tag headshot_variant, alt: current_person.name, class: "w-8 h-8 rounded-lg object-cover flex-shrink-0" %>
              <% else %>
                <div class="w-8 h-8 rounded-lg bg-gray-200 flex items-center justify-center text-gray-600 font-bold text-xs flex-shrink-0">
                  <%= current_person.initials %>
                </div>
              <% end %>
            <% else %>
              <div class="w-8 h-8 rounded-lg bg-gray-200 flex-shrink-0"></div>
            <% end %>
            <textarea rows="1" placeholder="Add a comment..." class="flex-1 px-4 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-pink-500 resize-none"></textarea>
            <button class="px-4 py-2 bg-pink-600 text-white rounded-lg text-sm font-medium hover:bg-pink-700">
              Post
            </button>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <% if show_inline_reply %>
      <div class="px-4 py-3 border-t border-gray-100 flex gap-3">
        <div class="w-8 h-8 rounded-lg bg-gray-200 flex-shrink-0"></div>
        <textarea rows="1" placeholder="Be the first to comment..." class="flex-1 px-4 py-2 border border-gray-200 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-pink-500 resize-none"></textarea>
      </div>
    <% end %>
  <% end %>

<% elsif comment_style == :modal %>
  <%# === STYLE C: Modal/Drawer - Full thread in overlay === %>
  <div class="border-t border-gray-100" x-data="{ showThread: false }">
    <% if replies.any? %>
      <%# Preview: Just show reply count and avatars %>
      <button
        @click="showThread = true"
        class="w-full px-4 py-3 flex items-center gap-3 text-sm text-gray-600 hover:bg-gray-50">
        <%# Stack of participant avatars %>
        <div class="flex -space-x-2">
          <% replies.map(&:sender).uniq.first(3).each do |sender| %>
            <% sender_person = sender.is_a?(Person) ? sender : sender&.person %>
            <% if sender_person %>
              <% headshot_variant = sender_person.safe_headshot_variant(:thumb) %>
              <% if headshot_variant %>
                <%= image_tag headshot_variant, alt: sender_person.name, class: "w-6 h-6 rounded-lg ring-2 ring-white object-cover" %>
              <% else %>
                <div class="w-6 h-6 rounded-lg ring-2 ring-white bg-gray-200 flex items-center justify-center text-gray-600 font-bold text-[10px]">
                  <%= sender_person.initials %>
                </div>
              <% end %>
            <% end %>
          <% end %>
        </div>
        <span>
          <span class="font-medium"><%= replies.count %> <%= replies.count == 1 ? 'reply' : 'replies' %></span>
          <span class="text-gray-400">Â· Click to view thread</span>
        </span>
      </button>
    <% end %>

    <% if show_inline_reply %>
      <div class="px-4 py-3 border-t border-gray-100 flex gap-3">
        <% if current_person %>
          <% headshot_variant = current_person.safe_headshot_variant(:thumb) %>
          <% if headshot_variant %>
            <%= image_tag headshot_variant, alt: current_person.name, class: "w-8 h-8 rounded-lg object-cover flex-shrink-0" %>
          <% else %>
            <div class="w-8 h-8 rounded-lg bg-gray-200 flex items-center justify-center text-gray-600 font-bold text-xs flex-shrink-0">
              <%= current_person.initials %>
            </div>
          <% end %>
        <% else %>
          <div class="w-8 h-8 rounded-lg bg-gray-200 flex-shrink-0"></div>
        <% end %>
        <button
          @click="showThread = true"
          class="flex-1 px-4 py-2 bg-gray-100 rounded-full text-sm text-gray-500 text-left hover:bg-gray-200">
          Reply to thread...
        </button>
      </div>
    <% end %>

    <%# Thread Modal/Drawer %>
    <template x-teleport="body">
      <div
        x-show="showThread"
        x-transition:enter="transition ease-out duration-300"
        x-transition:enter-start="opacity-0"
        x-transition:enter-end="opacity-100"
        x-transition:leave="transition ease-in duration-200"
        x-transition:leave-start="opacity-100"
        x-transition:leave-end="opacity-0"
        class="fixed inset-0 bg-black/50 z-50 flex items-center justify-center"
        @click.self="showThread = false">
        <div
          x-transition:enter="transition ease-out duration-300"
          x-transition:enter-start="opacity-0 translate-y-4"
          x-transition:enter-end="opacity-100 translate-y-0"
          class="bg-white rounded-xl shadow-2xl max-w-2xl w-full max-h-[80vh] flex flex-col m-4">
          <%# Modal Header %>
          <div class="px-4 py-3 border-b border-gray-200 flex items-center justify-between">
            <h3 class="font-semibold text-gray-900">Thread</h3>
            <button @click="showThread = false" class="p-2 hover:bg-gray-100 rounded-lg">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
            </button>
          </div>

          <%# Scrollable Thread Content %>
          <div class="flex-1 overflow-y-auto p-4 space-y-4">
            <%= render "shared/messages/thread_display",
                       replies: replies.limit(50),
                       style: thread_style %>
          </div>

          <%# Reply Input %>
          <div class="p-4 border-t border-gray-200 flex gap-3">
            <div class="w-8 h-8 rounded-lg bg-gray-200 flex-shrink-0"></div>
            <input type="text" placeholder="Write a reply..." class="flex-1 px-4 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-pink-500">
            <button class="px-4 py-2 bg-pink-600 text-white rounded-lg text-sm font-medium hover:bg-pink-700">
              Send
            </button>
          </div>
        </div>
      </div>
    </template>
  </div>
<% end %>
