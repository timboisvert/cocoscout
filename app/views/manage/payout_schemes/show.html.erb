<% content_for :title, "#{@payout_scheme.name} - Payout Scheme" %>

<div class="w-full mb-10">
  <%= render partial: "shared/notice", locals: { notice: notice, alert: alert } %>
  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Money", manage_money_index_path],
      ["Payout Schemes", manage_money_payout_schemes_path]
    ],
    text: @payout_scheme.name,
    links: @payout_scheme.archived? ? [] : [
      { text: "Edit", path: manage_edit_money_payout_scheme_path(@payout_scheme) }
    ]
  } %>

  <% if @payout_scheme.archived? %>
    <div class="mb-4 flex items-center gap-3">
      <span class="inline-flex items-center rounded-md px-3 py-1 text-sm font-medium bg-gray-100 text-gray-700">
        Archived
      </span>
      <%= form_with url: manage_unarchive_money_payout_scheme_path(@payout_scheme), method: :post, local: true do %>
        <%= render "shared/button", text: "Restore Scheme", variant: "secondary", size: "small", type: :submit %>
      <% end %>
    </div>
  <% end %>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">

      <!-- Description -->
      <% if @payout_scheme.description.present? %>
        <div class="bg-white rounded-lg border border-gray-200 p-5">
          <p class="text-gray-600"><%= @payout_scheme.description %></p>
        </div>
      <% end %>

      <!-- Rules Summary -->
      <div class="bg-white rounded-lg border border-gray-200 p-5">
        <h3 class="font-semibold text-gray-900 mb-4">How It Works</h3>

        <div class="space-y-4">
          <!-- Allocation Steps -->
          <% if @payout_scheme.allocation_steps.any? %>
            <div>
              <h4 class="text-sm font-medium text-gray-700 mb-2">Revenue Allocation</h4>
              <div class="space-y-2">
                <% @payout_scheme.allocation_steps.each_with_index do |step, i| %>
                  <div class="flex items-center gap-2 text-sm">
                    <span class="flex-shrink-0 w-5 h-5 rounded-full bg-gray-100 text-gray-600 flex items-center justify-center text-xs font-medium"><%= i + 1 %></span>
                    <span class="text-gray-600">
                      <% case step["type"] %>
                      <% when "flat" %>
                        House gets <span class="font-medium text-gray-900"><%= number_to_currency(step["amount"]) %></span> flat
                      <% when "percentage" %>
                        <% if step["person_id"].present? %>
                          <% person = Person.find_by(id: step["person_id"]) %>
                          <% label = step["label"].presence || person&.name || "Person ##{step['person_id']}" %>
                          <span class="font-medium text-gray-900"><%= label %></span> gets <span class="font-medium text-gray-900"><%= step["value"] %>%</span> of revenue
                        <% else %>
                          House gets <span class="font-medium text-gray-900"><%= step["value"] %>%</span> of revenue
                        <% end %>
                      <% when "expenses_first" %>
                        Expenses are covered first
                      <% when "remainder" %>
                        Remainder goes to <span class="font-medium text-gray-900">performers</span>
                      <% end %>
                    </span>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>

          <!-- Distribution Method -->
          <div>
            <h4 class="text-sm font-medium text-gray-700 mb-2">Distribution to Performers</h4>
            <div class="text-sm text-gray-600">
              <% case @payout_scheme.distribution_method %>
              <% when "equal" %>
                Split <span class="font-medium text-gray-900">equally</span> among all performers
              <% when "shares" %>
                Split by <span class="font-medium text-gray-900">shares</span> (default: <%= @payout_scheme.distribution_config["default_shares"] || 1 %> share per person)
              <% when "per_ticket" %>
                <span class="font-medium text-gray-900"><%= number_to_currency(@payout_scheme.distribution_config["per_ticket_rate"]) %></span> per ticket per performer
              <% when "per_ticket_guaranteed" %>
                <span class="font-medium text-gray-900"><%= number_to_currency(@payout_scheme.distribution_config["per_ticket_rate"]) %></span> per ticket per performer, with a minimum of <span class="font-medium text-gray-900"><%= number_to_currency(@payout_scheme.distribution_config["minimum"]) %></span>
              <% when "flat_fee" %>
                <span class="font-medium text-gray-900"><%= number_to_currency(@payout_scheme.distribution_config["flat_amount"]) %></span> flat per performer
              <% end %>
            </div>
          </div>

          <!-- Performer Overrides -->
          <% if @payout_scheme.performer_overrides.present? && @payout_scheme.performer_overrides.any? %>
            <div>
              <h4 class="text-sm font-medium text-gray-700 mb-2">Per-Person Overrides</h4>
              <div class="text-sm text-gray-500">
                <%= @payout_scheme.performer_overrides.count %> custom override(s) configured
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Shows Using This Scheme -->
      <% if @show_payouts.any? %>
        <div class="bg-white rounded-lg border border-gray-200 p-5">
          <h3 class="font-semibold text-gray-900 mb-4">Recent Shows Using This Scheme</h3>
          <div class="space-y-2">
            <% @show_payouts.each do |sp| %>
              <%= link_to manage_money_show_payout_path(sp.show), class: "block p-3 rounded hover:bg-gray-50 transition-colors" do %>
                <div class="flex items-center justify-between">
                  <span class="text-gray-900"><%= show_display_name(sp.show) %></span>
                  <span class="text-sm <%= sp.display_status_class %> px-2 py-0.5 rounded"><%= sp.display_status_label %></span>
                </div>
                <div class="text-sm text-gray-500 mt-1">
                  <%= sp.show.date_and_time.strftime("%l:%M %p").strip %>
                  <% if sp.total_payout %>
                    Â· <%= number_to_currency(sp.total_payout) %>
                  <% end %>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>

    </div>

    <!-- Sidebar -->
    <div class="space-y-4">

      <!-- Default Status Card -->
      <div class="bg-white rounded-lg border border-gray-200 p-5">
        <h4 class="font-semibold text-gray-900 mb-3">Default For</h4>

        <% defaults = @payout_scheme.payout_scheme_defaults.includes(:production) %>
        <% if defaults.any? %>
          <div class="space-y-2 mb-4">
            <% defaults.each do |d| %>
              <div class="flex items-center justify-between text-sm">
                <span class="text-gray-700">
                  <% if d.production.present? %>
                    <%= d.production.name %>
                  <% else %>
                    <span class="text-pink-600 font-medium">All Productions</span> (fallback)
                  <% end %>
                </span>
                <% if d.effective_from.present? %>
                  <span class="text-xs text-gray-500">from <%= d.effective_from.strftime("%-d %b %Y") %></span>
                <% end %>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-sm text-gray-500 <%= @payout_scheme.archived? ? '' : 'mb-4' %>">Not set as default for any productions.</p>
        <% end %>

        <% unless @payout_scheme.archived? %>
          <!-- Update Defaults Form -->
          <details class="group">
            <summary class="cursor-pointer text-sm text-pink-600 hover:text-pink-700 font-medium flex items-center gap-1">
              <svg class="w-4 h-4 transition-transform group-open:rotate-90" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
              <%= defaults.any? ? "Change defaults" : "Set as default" %>
            </summary>

            <%= form_with url: manage_update_defaults_money_payout_scheme_path(@payout_scheme), method: :post, local: true, class: "mt-4 space-y-5" do |f| %>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Productions</label>
                <% productions = Current.organization.productions.order(:name) %>
                <div class="max-h-40 overflow-y-auto border border-gray-200 rounded-lg p-2 space-y-1">
                  <% productions.each do |prod| %>
                    <label class="flex items-center gap-2 text-sm cursor-pointer hover:bg-gray-50 p-1.5 rounded">
                      <input type="checkbox" name="production_ids[]" value="<%= prod.id %>"
                             <%= "checked" if @payout_scheme.default_for_production?(prod) %>
                             class="h-4 w-4 text-pink-600 border-gray-300 rounded focus:ring-pink-500 accent-pink-500">
                      <span class="text-gray-700"><%= prod.name %></span>
                    </label>
                  <% end %>
                </div>
                <p class="mt-1.5 text-xs text-gray-500">Select which productions use this scheme.</p>
              </div>

              <div class="pt-1 border-t border-gray-100">
                <label class="flex items-center gap-2 text-sm cursor-pointer py-1">
                  <input type="checkbox" name="org_level_fallback" value="1"
                         <%= "checked" if @payout_scheme.org_level_default? %>
                         class="h-4 w-4 text-pink-600 border-gray-300 rounded focus:ring-pink-500 accent-pink-500">
                  <span class="text-gray-700 font-medium">Organization-level fallback</span>
                </label>
                <p class="ml-6 text-xs text-gray-500">Used for any production without a specific default.</p>
              </div>

              <div class="pt-1 border-t border-gray-100">
                <label class="block text-sm font-medium text-gray-700 mb-2">Effective from (optional)</label>
                <input type="date" name="effective_from"
                       value="<%= defaults.first&.effective_from %>"
                       class="w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-pink-500 focus:ring-pink-500">
                <p class="mt-1.5 text-xs text-gray-500">Leave blank to apply immediately.</p>
              </div>

              <div class="pt-2">
                <%= render "shared/button", text: "Update Defaults", variant: "primary", size: "small", type: :submit %>
              </div>
            <% end %>
          </details>
        <% end %>
      </div>

      <!-- Actions Card -->
      <% unless @payout_scheme.archived? %>
        <div class="bg-white rounded-lg border border-gray-200 p-5 space-y-3">
          <%= link_to manage_edit_money_payout_scheme_path(@payout_scheme) do %>
            <%= render "shared/button", text: "Edit Scheme", variant: "secondary", size: "small", classes: "w-full" %>
          <% end %>

          <% if @payout_scheme.show_payouts.paid.none? %>
            <%= form_with url: manage_money_payout_scheme_path(@payout_scheme), method: :delete, local: true, data: { turbo_confirm: "Are you sure you want to delete this payout scheme?" } do %>
              <%= render "shared/button", text: "Delete Scheme", variant: "ghost", size: "small", classes: "w-full text-red-600", type: :submit %>
            <% end %>
          <% else %>
            <%= form_with url: manage_archive_money_payout_scheme_path(@payout_scheme), method: :post, local: true, data: { turbo_confirm: "Archive this payout scheme? It will be hidden from your schemes list but historical payouts will be preserved." } do %>
              <%= render "shared/button", text: "Archive Scheme", variant: "ghost", size: "small", classes: "w-full text-gray-600", type: :submit %>
            <% end %>
            <p class="text-xs text-gray-500 text-center">This scheme has been used for payouts and cannot be deleted.</p>
          <% end %>
        </div>
      <% end %>

    </div>

  </div>
</div>
