<% content_for :title, "Open Sign-ups" %>
<div class="w-full">
  <%= render partial: "shared/notice", locals: { notice: notice } %>
  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Sign-ups", manage_signups_path],
      [@production.name, manage_signups_production_path(@production)],
      ["Auditions", manage_signups_auditions_path(@production)],
      ["Review", manage_review_signups_auditions_cycle_path(@production, @audition_cycle)]
    ],
    text: @audition_cycle.video_only? ? "Video Auditions" : "Open Sign-ups",
    links: []
  } %>

  <%= render partial: "manage/auditions/lifecycle_panel", locals: { current_step: :review } %>

  <% if current_user_has_role?(@production) %>
    <div class="mb-4 p-4 bg-white border border-gray-200 rounded-lg shadow-sm">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-4">
          <div class="flex-shrink-0">
            <% if @audition_cycle.voting_enabled %>
              <span class="relative flex h-3 w-3">
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
                <span class="relative inline-flex rounded-full h-3 w-3 bg-green-500"></span>
              </span>
            <% else %>
              <span class="relative flex h-3 w-3">
                <span class="relative inline-flex rounded-full h-3 w-3 bg-gray-400"></span>
              </span>
            <% end %>
          </div>
          <div>
            <p class="text-base font-semibold <%= @audition_cycle.voting_enabled ? 'text-green-700' : 'text-gray-700' %>">
              Voting is <%= @audition_cycle.voting_enabled ? 'live' : 'paused' %>
            </p>
            <p class="text-sm text-gray-600">
              <% if @audition_cycle.voting_enabled %>
                <%= @audition_cycle.reviewer_count %> <%= 'reviewer'.pluralize(@audition_cycle.reviewer_count) %> can vote
              <% else %>
                Voting bar is hidden
              <% end %>
            </p>
          </div>
        </div>
        <label class="flex items-center gap-2 cursor-pointer"
               data-controller="toggle-voting"
               data-toggle-voting-cycle-id-value="<%= @audition_cycle.id %>"
               data-toggle-voting-enabled-value="<%= @audition_cycle.voting_enabled %>"
               data-toggle-voting-url-value="<%= manage_toggle_voting_signups_auditions_cycle_path(@production, @audition_cycle) %>">
          <span class="text-sm font-semibold <%= @audition_cycle.voting_enabled ? 'text-gray-700' : 'text-gray-400' %>">
            <%= @audition_cycle.voting_enabled ? 'Enabled' : 'Disabled' %>
          </span>
          <div class="relative inline-block w-10 h-6 transition duration-200 ease-in-out">
            <input type="checkbox"
                   <%= 'checked' if @audition_cycle.voting_enabled %>
                   data-action="change->toggle-voting#change"
                   class="sr-only peer">
            <div class="block w-10 h-6 rounded-full <%= @audition_cycle.voting_enabled ? 'bg-pink-500' : 'bg-gray-300' %> peer-focus:ring-2 peer-focus:ring-pink-300"></div>
            <div class="absolute left-1 top-1 bg-white w-4 h-4 rounded-full transition-transform <%= @audition_cycle.voting_enabled ? 'translate-x-4' : 'translate-x-0' %>"></div>
          </div>
        </label>
      </div>
    </div>
  <% end %>

  <div class="space-y-1 mb-4">
    <% if @audition_requests.any? %>
      <% @audition_requests.each do |audition_request| %>
        <% requestable = audition_request.requestable %>
        <% vote_counts = audition_request.vote_counts if current_user_can_review?(@production) %>

        <%= link_to manage_signups_auditions_cycle_request_path(@production, @audition_cycle, audition_request),
            class: "flex items-stretch px-3 py-2 border rounded-lg hover:border-gray-400 transition-all group bg-white border-gray-200",
            data: { turbo_prefetch: false } do %>

          <%# Left Section: Headshot & Name (50%) %>
          <div class="w-1/2 flex items-center gap-4">
            <% if requestable.present? %>
              <div class="flex-shrink-0">
                <% headshot_url = safe_headshot_url(requestable) %>
                <% if headshot_url %>
                  <%= image_tag headshot_url, class: "relative inline-block h-8 w-8 !rounded-md object-cover object-center" %>
                <% else %>
                  <% if requestable.is_a?(Person) %>
                    <div class="w-8 h-8 rounded-md bg-gray-100 flex items-center justify-center text-black text-xs font-bold">
                      <%= requestable.initials %>
                    </div>
                  <% else %>
                    <%# Group without headshot %>
                    <div class="w-8 h-8 rounded-md bg-purple-100 flex items-center justify-center text-purple-600 font-bold">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                      </svg>
                    </div>
                  <% end %>
                <% end %>
              </div>
              <div class="flex-1 min-w-0">
                <div class="text-sm font-medium text-gray-900 truncate">
                  <%= truncate(requestable.name, length: 50, omission: "...") %>
                </div>
              </div>
            <% else %>
              <div class="flex-shrink-0">
                <div class="w-8 h-8 rounded-md bg-gray-300 flex items-center justify-center text-gray-600 text-xs font-bold">
                  ?
                </div>
              </div>
              <div class="flex-1 min-w-0">
                <div class="text-sm font-medium text-gray-500">[Deleted]</div>
              </div>
            <% end %>
          </div>

          <%# Right Section: Vote Counts in thirds (50%) %>
          <% if current_user_can_review?(@production) && vote_counts %>
            <div class="w-1/2 border-l border-gray-200 pl-4 grid grid-cols-3 items-center divide-x divide-gray-200">
              <div class="text-center px-2">
                <div class="text-xs text-gray-400 uppercase tracking-wide">Yes</div>
                <div class="text-lg font-bold text-pink-600"><%= vote_counts[:yes] %></div>
              </div>
              <div class="text-center px-2">
                <div class="text-xs text-gray-400 uppercase tracking-wide">No</div>
                <div class="text-lg font-bold text-pink-600"><%= vote_counts[:no] %></div>
              </div>
              <div class="text-center px-2">
                <div class="text-xs text-gray-400 uppercase tracking-wide">Not Sure</div>
                <div class="text-lg font-bold text-pink-600"><%= vote_counts[:maybe] %></div>
              </div>
            </div>
          <% end %>

        <% end %>
      <% end %>
    <% else %>

    <p class="text-gray-500 text-sm pt-2">
      <% if @audition_cycle.video_only? %>
        No one has submitted a video audition yet.
      <% else %>
        No one has signed up for an audition yet.
      <% end %>
    </p>
  <% end %>

  <% if @archived_count && @archived_count > 0 %>
    <div class="mt-6 text-center">
      <%= link_to "View #{@archived_count} archived #{'sign-up'.pluralize(@archived_count)}", manage_archived_signups_auditions_cycle_requests_path(@production, @audition_cycle), class: "text-sm text-gray-500 hover:underline" %>
    </div>
  <% end %>
</div>
