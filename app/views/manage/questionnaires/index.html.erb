<% content_for :title, "Questionnaires - #{@production.name}" %>

<div class="w-full mb-10">
  <%= render partial: "shared/notice", locals: { notice: notice } %>
  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [],
    text: "Questionnaires",
    links: [
      {text: "New Questionnaire", path: new_manage_production_questionnaire_path(@production)}
    ]
  } %>

  <div class="flex w-full space-x-1 mb-4">
    <%= link_to "All",
            manage_production_questionnaires_path(@production, filter: "all"),
            data: { turbo_prefetch: false },
            class: "px-3 py-1 rounded-md border text-sm #{(@filter == "all") ? 'bg-pink-500 text-white border-pink-500' : 'bg-white text-gray-700 border-gray-200'}"
    %>
    <%= link_to "Accepting Responses",
            manage_production_questionnaires_path(@production, filter: "accepting"),
            data: { turbo_prefetch: false },
            class: "px-3 py-1 rounded-md border text-sm #{(@filter == "accepting") ? 'bg-pink-500 text-white border-pink-500' : 'bg-white text-gray-700 border-gray-200'}"
    %>
    <%= link_to "Archived",
            manage_production_questionnaires_path(@production, filter: "archived"),
            data: { turbo_prefetch: false },
            class: "px-3 py-1 rounded-md border text-sm #{(@filter == "archived") ? 'bg-pink-500 text-white border-pink-500' : 'bg-white text-gray-700 border-gray-200'}"
    %>
  </div>

  <% if @questionnaires.any? %>
    <div class="space-y-4">
      <% @questionnaires.each do |questionnaire| %>
        <%= link_to manage_production_questionnaire_path(@production, questionnaire), class: "block p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors no-underline" do %>
          <div class="flex items-center justify-between">
            <div class="flex-1">
              <h3 class="text-md font-semibold text-gray-900"><%= questionnaire.title %></h3>
              <div class="flex items-center gap-4 mt-2 text-sm text-gray-600">
                <span>
                  <%= questionnaire.questionnaire_responses.count %> response<%= questionnaire.questionnaire_responses.count == 1 ? '' : 's' %>
                </span>
                <span>
                  <%= questionnaire.questionnaire_invitations.count %> invited
                </span>
                <% if questionnaire.archived_at.present? %>
                  <span class="inline-flex items-center rounded-md px-2 py-1 text-xs font-medium bg-gray-100 text-gray-700 ring-1 ring-inset ring-gray-600/20">
                    Archived
                  </span>
                <% else %>
                  <span class="inline-flex items-center rounded-md px-2 py-1 text-xs font-medium <%= questionnaire.accepting_responses ? 'bg-pink-50 text-pink-700 ring-1 ring-inset ring-pink-600/20' : 'bg-gray-50 text-gray-600 ring-1 ring-inset ring-gray-500/10' %>">
                    <%= questionnaire.accepting_responses ? 'Accepting Responses' : 'Not Accepting Responses' %>
                  </span>
                <% end %>
              </div>
            </div>
            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <p class="text-gray-600 mb-4">No questionnaires yet</p>
      <%= link_to "Create your first questionnaire", new_manage_production_questionnaire_path(@production), class: "inline-block px-4 py-2 bg-pink-500 text-white rounded-lg hover:bg-pink-600 transition" %>
    </div>
  <% end %>
</div>
