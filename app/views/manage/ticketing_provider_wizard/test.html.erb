<%= render layout: "manage/ticketing_provider_wizard/wizard_layout", locals: { current_step: 3, step_name: "Test" } do %>
  <h2 class="text-xl font-semibold text-gray-900 mb-2">Connection Test</h2>

  <% if @connection_result[:success] %>
    <div class="bg-green-50 border border-green-200 rounded-lg p-6 mb-6">
      <div class="flex items-start">
        <div class="flex-shrink-0">
          <svg class="w-8 h-8 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="ml-4">
          <h3 class="text-lg font-medium text-green-800">Connection Successful!</h3>
          <div class="mt-2 text-sm text-green-700">
            <p>We successfully connected to your <%= @provider_info[:name] %> account.</p>
            <% if @connection_result[:account_name].present? %>
              <p class="mt-1">Account: <strong><%= @connection_result[:account_name] %></strong></p>
            <% end %>
            <% if @connection_result[:event_count].present? && @connection_result[:event_count] > 0 %>
              <p class="mt-1">Found <strong><%= @connection_result[:event_count] %></strong> events available to sync.</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="flex justify-between pt-4 border-t border-gray-200">
      <%= link_to manage_ticketing_wizard_credentials_path, class: "text-sm text-gray-500 hover:text-gray-700 flex items-center" do %>
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back
      <% end %>
      <%= link_to manage_ticketing_wizard_review_path do %>
        <%= render "shared/button", text: "Continue", variant: "primary", size: "medium" %>
      <% end %>
    </div>

  <% else %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-6 mb-6">
      <div class="flex items-start">
        <div class="flex-shrink-0">
          <svg class="w-8 h-8 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="ml-4">
          <h3 class="text-lg font-medium text-red-800">Connection Failed</h3>
          <div class="mt-2 text-sm text-red-700">
            <p>We couldn't connect to your <%= @provider_info[:name] %> account.</p>
            <% if @connection_result[:error].present? %>
              <p class="mt-2 font-mono text-xs bg-red-100 p-2 rounded"><%= @connection_result[:error] %></p>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="bg-gray-50 border border-gray-200 rounded-lg p-4 mb-6">
      <h4 class="text-sm font-medium text-gray-900 mb-2">Things to check:</h4>
      <ul class="text-sm text-gray-600 list-disc list-inside space-y-1">
        <li>Make sure your API key is correct and hasn't expired</li>
        <li>Check that your account has API access enabled</li>
        <li>Verify your account is in good standing</li>
      </ul>
    </div>

    <div class="flex justify-between pt-4 border-t border-gray-200">
      <%= link_to manage_ticketing_wizard_credentials_path, class: "text-sm text-gray-500 hover:text-gray-700 flex items-center" do %>
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Change Credentials
      <% end %>
      <%= form_with url: manage_ticketing_wizard_retry_path, method: :post, class: "inline" do %>
        <%= render "shared/button", text: "Retry", variant: "primary", size: "medium", type: :submit %>
      <% end %>
    </div>
  <% end %>
<% end %>
