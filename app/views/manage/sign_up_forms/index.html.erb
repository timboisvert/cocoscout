<% content_for :title, "Sign-ups - #{@production.name}" %>

<div class="w-full mb-10">
  <%= render partial: "shared/notice", locals: { notice: notice } %>
  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [],
    text: "Sign-ups",
    links: [
      {text: "Create a Sign-up Form", path: manage_sign_up_wizard_production_scope_path(@production)}
    ]
  } %>

  <% # Check if there's a wizard in progress %>
  <% wizard_state = session.dig(:sign_up_wizard, @production.id.to_s) %>
  <% if wizard_state.present? && wizard_state.any? %>
    <div class="bg-pink-50 border border-pink-200 rounded-lg p-4 mb-6">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-3">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
            </svg>
          </div>
          <div>
            <p class="text-sm font-medium text-pink-800">You have an unfinished sign-up form</p>
            <p class="text-xs text-pink-600 mt-0.5">
              <% scope_name = case wizard_state["scope"]
                 when "single_event" then "Single Event"
                 when "per_event" then "Per Event"
                 when "shared_pool" then "General Waitlist"
                 else "Sign-up Form"
                 end %>
              <%= scope_name %> form in progress
            </p>
          </div>
        </div>
        <div class="flex items-center gap-2">
          <%= render "shared/button", text: "Continue", variant: "primary", size: "small", path: manage_sign_up_wizard_production_scope_path(@production) %>
          <%= render "shared/button", text: "Discard", variant: "ghost", size: "small", path: manage_sign_up_wizard_production_cancel_path(@production), method: :delete, data: { turbo_confirm: "Discard your progress?" } %>
        </div>
      </div>
    </div>
  <% end %>

  <% if @sign_up_forms.any? %>
    <div class="space-y-1">
      <% @sign_up_forms.each do |form| %>
        <%= link_to manage_production_sign_up_form_path(@production, form), class: "block p-4 border border-gray-200 rounded-lg hover:bg-gray-50 bg-white transition-colors no-underline" do %>
          <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-2">
            <div class="flex-1 min-w-0">
              <h3 class="text-md font-semibold text-gray-900 truncate"><%= form.name %></h3>
              <div class="flex flex-wrap items-center gap-x-3 gap-y-1 mt-1 text-sm text-gray-600">
                <% if form.per_event? %>
                  <span><%= form.sign_up_form_instances.count %> event<%= form.sign_up_form_instances.count == 1 ? '' : 's' %></span>
                <% else %>
                  <span><%= form.sign_up_slots.count %> slot<%= form.sign_up_slots.count == 1 ? '' : 's' %></span>
                  <span><%= form.sign_up_registrations.active.count %> registration<%= form.sign_up_registrations.active.count == 1 ? '' : 's' %></span>
                <% end %>
                <% if form.single_event? && form.show.present? %>
                  <span class="text-gray-400">â€¢</span>
                  <span><%= form.show.name_with_date %></span>
                <% end %>
              </div>
            </div>
            <div class="flex items-center gap-2">
              <% if form.per_event? %>
                <span class="inline-flex items-center rounded-md px-2 py-1 text-xs font-medium bg-blue-50 text-blue-700 ring-1 ring-inset ring-blue-600/20">
                  Per Event
                </span>
              <% elsif form.shared_pool? %>
                <span class="inline-flex items-center rounded-md px-2 py-1 text-xs font-medium bg-purple-50 text-purple-700 ring-1 ring-inset ring-purple-600/20">
                  General Waitlist
                </span>
              <% end %>
              <% color = form.registration_status_color %>
              <span class="inline-flex items-center rounded-md px-2 py-1 text-xs font-medium bg-<%= color %>-50 text-<%= color %>-700 ring-1 ring-inset ring-<%= color %>-600/20">
                <%= form.registration_status_label %>
              </span>
              <svg class="w-5 h-5 text-gray-400 hidden sm:block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white border border-gray-200 rounded-lg p-8 text-center">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"/>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No sign-up forms yet</h3>
      <p class="mt-1 text-sm text-gray-500">Create a sign-up form to let people register for events, open mics, workshops, and more.</p>
      <div class="mt-6">
        <%= render "shared/button", text: "Create a Sign-up Form", variant: "primary", size: "medium", path: manage_sign_up_wizard_production_scope_path(@production) %>
      </div>
    </div>
  <% end %>
</div>
