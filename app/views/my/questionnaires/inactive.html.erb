<% content_for :title, "Questionnaire Inactive" %>

<div class="min-h-screen bg-white flex items-center justify-center px-4 py-12">
  <div class="w-full max-w-md text-center">
    <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-gray-100 mb-4">
      <svg class="w-8 h-8 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
      </svg>
    </div>
    
    <h1 class="text-3xl font-bold text-slate-900 mb-3 coustard-regular">Questionnaire Closed</h1>
    <p class="text-lg text-slate-600 mb-6">This questionnaire is no longer accepting responses.</p>

    <div class="bg-white border border-slate-200 rounded-lg shadow-sm p-6 mb-6">
      <h2 class="text-lg font-semibold text-slate-900 mb-2"><%= @production.name %></h2>
      <p class="text-sm text-slate-600"><%= @questionnaire.title %></p>
    </div>

    <%= link_to "Go to Dashboard", my_dashboard_path, class: "inline-block px-6 py-3 bg-pink-500 text-white rounded-lg hover:bg-pink-600 transition font-medium" %>
  </div>

  <!-- Coco Link -->
  <div class="w-16 pt-5 md:pt-0 fixed bottom-0 right-0 md:flex md:items-end md:justify-end">
    <%= link_to my_dashboard_path do %>
      <img src="<%= asset_path('cocoscout.png') %>" alt="CocoScout" class="object-contain select-none pointer-events-none mr-5" />
    <% end %>
  </div>
</div>
