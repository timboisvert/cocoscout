<% content_for :title, "Select Production" %>

<div class="min-h-screen bg-white">
  <!-- Header -->
  <div class="flex flex-col items-center pt-6 sm:pt-10 pb-4">
    <img src="<%= asset_path('cocoscout.png') %>" alt="CocoScout" class="w-20 sm:w-28 object-contain select-none pointer-events-none" />
    <h1 class="mt-3 text-3xl sm:text-4xl coustard-regular text-pink-500">CocoScout</h1>
  </div>

  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 pb-12">

    <% if @productions.any? %>
      <!-- Production Selection -->
      <div class="text-center mb-8">
        <h2 class="text-2xl sm:text-3xl font-bold text-slate-900 mb-2">Select a production</h2>
        <p class="text-slate-600">Choose which production you'd like to work on</p>
      </div>

      <div class="flex flex-wrap justify-center gap-6 max-w-5xl mx-auto">
        <% @productions.each do |production| %>
          <%= form_with url: set_production_path, method: :post, class: "w-full sm:w-80" do |form| %>
            <%= hidden_field_tag :id, production.id %>
            <button type="submit" class="group relative bg-white border-2 border-slate-200 rounded-lg p-6 hover:border-pink-500 hover:shadow-lg transition-all duration-200 text-left w-full cursor-pointer">
              <!-- Production Logo/Image -->
              <div class="aspect-video bg-gradient-to-br from-slate-50 to-slate-100 rounded-lg mb-4 flex items-center justify-center overflow-hidden">
                <% if production.logo.attached? %>
                  <%= image_tag production.logo, class: "w-full h-full object-cover" %>
                <% else %>
                  <div class="text-center">
                    <svg class="w-16 h-16 text-slate-300 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z" />
                    </svg>
                  </div>
                <% end %>
              </div>

              <!-- Production Info -->
              <div class="flex-grow">
                <h3 class="text-lg font-bold text-slate-900 mb-3 group-hover:text-pink-600 transition-colors">
                  <%= production.name %>
                </h3>

                <!-- Stats -->
                <div class="flex items-center gap-4 text-xs text-slate-500">
                  <div class="flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    <%= pluralize(production.shows.count, 'show & event') %>
                  </div>
                  <div class="flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                    <%= pluralize(production.casts.sum { |c| c.people.count }, 'cast member') %>
                  </div>
                </div>
              </div>
            </button>
          <% end %>
        <% end %>
      </div>

      <!-- Create New Production Link -->
      <% if Current.user.manager? %>
        <div class="text-center mt-8">
          <p class="text-sm text-slate-600 mb-3">Looking to start another production?</p>
          <%= link_to new_manage_production_path, class: "inline-flex items-center justify-center gap-2 px-6 py-3 bg-pink-600 hover:bg-pink-700 text-white font-semibold rounded-lg shadow-sm transition-colors" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
            Create another production
          <% end %>
        </div>
      <% end %>

      <!-- Organization Info -->
      <% if Current.organization.present? %>
        <div class="text-center mt-8">
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-slate-100 border border-slate-200 rounded-lg">
            <svg class="w-4 h-4 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
            <span class="text-sm font-medium text-slate-700">Organization: <span class="font-bold text-slate-900"><%= Current.organization.name %></span></span>
            <% if Current.user.organizations.count > 1 %>
              <%= link_to "Switch", select_organization_path, class: "ml-2 text-xs font-semibold text-pink-500 hover:text-pink-600" %>
            <% end %>
          </div>
        </div>
      <% end %>

    <% else %>
      <!-- No Productions - Empty State -->
      <div class="text-center py-12">
        <div class="w-16 h-16 bg-pink-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z" />
          </svg>
        </div>

        <h2 class="text-2xl font-bold text-slate-900 mb-2">No productions yet</h2>
        <p class="text-sm text-slate-600 mb-6">You don't have access to any productions in <%= Current.organization.name %>.</p>

        <% if Current.user.manager? %>
          <%= link_to new_manage_production_path, class: "inline-flex items-center justify-center gap-2 px-6 py-3 bg-pink-600 hover:bg-pink-700 text-white font-semibold rounded-lg shadow-sm transition-colors" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
            Create your first production
          <% end %>

          <!-- Organization Info -->
          <% if Current.organization.present? %>
            <div class="mt-8">
              <div class="inline-flex items-center gap-2 px-4 py-2 bg-slate-100 border border-slate-200 rounded-lg">
                <svg class="w-4 h-4 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
                <span class="text-sm font-medium text-slate-700">Organization: <span class="font-bold text-slate-900"><%= Current.organization.name %></span></span>
                <% if Current.user.organizations.count > 1 %>
                  <%= link_to "Switch", select_organization_path, class: "ml-2 text-xs font-semibold text-pink-500 hover:text-pink-600" %>
                <% end %>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 text-left max-w-md mx-auto">
            <p class="text-sm text-slate-700 mb-2">
              <strong>What you can do:</strong>
            </p>
            <ul class="text-sm text-slate-600 space-y-1 list-disc list-inside">
              <li>Ask a manager to create a production</li>
              <li>Wait to be added to an existing production</li>
              <li>Contact your organization owner for help</li>
            </ul>
          </div>

          <% if Current.user.organizations.count > 1 %>
            <div class="mt-6">
              <p class="text-sm text-slate-600 mb-3">Or switch to a different organization:</p>
              <%= link_to select_organization_path, class: "inline-flex items-center justify-center gap-2 px-6 py-3 bg-slate-600 hover:bg-slate-700 text-white font-semibold rounded-lg shadow-sm transition-colors" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
                </svg>
                Switch organization
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>

  </div>
</div>
