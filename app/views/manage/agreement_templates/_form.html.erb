<div class="bg-white rounded-lg border border-gray-200 overflow-hidden border-l-4 border-l-pink-400">
<%= form_with model: [:manage, agreement_template], class: "space-y-6 p-6", data: { turbo: false } do |f| %>
  <% if agreement_template.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <div class="flex">
        <svg class="w-5 h-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
        </svg>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">Please fix the following errors:</h3>
          <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
            <% agreement_template.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <h3 class="text-lg font-medium text-gray-900 mb-4">Template Details</h3>
    <div class="space-y-4">
      <div>
        <label for="agreement_template_name" class="block text-sm font-medium text-gray-700 mb-1">
          Template Name <span class="text-red-500">*</span>
        </label>
        <%= f.text_field :name,
            class: "w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-pink-500 focus:ring-pink-500",
            placeholder: "e.g., Burlesque Performer Agreement" %>
        <p class="mt-1 text-sm text-gray-500">A descriptive name to identify this template (e.g., by genre or payment type)</p>
      </div>

      <div>
        <label for="agreement_template_description" class="block text-sm font-medium text-gray-700 mb-1">
          Internal Description
        </label>
        <%= f.text_area :description,
            rows: 2,
            class: "w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-pink-500 focus:ring-pink-500",
            placeholder: "e.g., Use for burlesque productions with tip pool structure" %>
        <p class="mt-1 text-sm text-gray-500">Optional note for your team about when to use this template</p>
      </div>

      <div class="flex items-center gap-3">
        <%= f.check_box :active,
            class: "h-4 w-4 rounded border-gray-300 text-pink-600 focus:ring-pink-500 accent-pink-500" %>
        <%= f.label :active, "Active", class: "text-sm font-medium text-gray-700" %>
        <span class="text-sm text-gray-500">— Inactive templates won't appear when setting up new productions</span>
      </div>
    </div>
  </div>

  <div class="border-t border-gray-200 pt-6">
    <h3 class="text-lg font-medium text-gray-900 mb-4">Agreement Content</h3>
    <div class="mb-4 p-4 bg-pink-50 border border-pink-200 rounded-lg">
        <h4 class="text-sm font-medium text-pink-800 mb-2">Available Variables</h4>
        <p class="text-sm text-pink-700 mb-2">Use these placeholders in your agreement content. They'll be replaced with actual values when displayed to performers:</p>
        <div class="grid grid-cols-2 gap-2 text-sm">
          <div><code class="bg-pink-100 px-1 rounded">{{production_name}}</code> — Name of the production</div>
          <div><code class="bg-pink-100 px-1 rounded">{{organization_name}}</code> — Your organization name</div>
          <div><code class="bg-pink-100 px-1 rounded">{{performer_name}}</code> — The performer's name</div>
          <div><code class="bg-pink-100 px-1 rounded">{{current_date}}</code> — Today's date</div>
        </div>
      </div>

      <div>
        <label for="agreement_template_content" class="block text-sm font-medium text-gray-700 mb-1">
          Agreement Text <span class="text-red-500">*</span>
        </label>
        <%= f.rich_text_area :content,
            class: "w-full min-h-[400px]" %>
        <p class="mt-1 text-sm text-gray-500">
          Use the toolbar to format your agreement with headings, bold, lists, and more.
        </p>
      </div>

      <% if agreement_template.persisted? %>
        <div class="mt-4">
          <%= link_to preview_manage_agreement_template_path(agreement_template),
              class: "inline-flex items-center gap-2 text-sm text-pink-600 hover:text-pink-700" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
            </svg>
            Preview with sample data
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="flex items-center justify-between pt-6 border-t border-gray-200">
    <div>
      <% if agreement_template.persisted? && agreement_template.productions.empty? %>
        <%= link_to "Delete Template",
            manage_agreement_template_path(agreement_template),
            method: :delete,
            data: { turbo_confirm: "Are you sure you want to delete this template?" },
            class: "text-sm text-red-600 hover:text-red-700" %>
      <% elsif agreement_template.persisted? %>
        <span class="text-sm text-gray-500">
          Template in use by <%= agreement_template.productions.count %> <%= "production".pluralize(agreement_template.productions.count) %> — cannot delete
        </span>
      <% end %>
    </div>
    <div class="flex items-center gap-3">
      <%= link_to "Cancel", manage_agreement_templates_path, class: "text-sm text-gray-600 hover:text-gray-800" %>
      <%= render "shared/button", text: agreement_template.persisted? ? "Save Changes" : "Create Template", type: :submit, variant: "primary" %>
    </div>
  </div>
<% end %>
</div>