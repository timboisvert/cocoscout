                <!-- Payee Cards (one for each unpaid person) -->
                <% grouped_unpaid_payees.each_with_index do |items, index| %>
                  <%
                    item = items.first
                    total_amount = items.sum(&:amount)
                    total_net_amount = items.sum(&:net_amount)
                    total_advance_deduction = items.sum { |i| i.advance_deduction.to_f }
                    item_ids = items.map(&:id).join(",")
                  %>
