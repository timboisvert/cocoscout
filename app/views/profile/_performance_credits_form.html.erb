<%
  # Performance credits form section
  # Parameters:
  # - person_form: the form builder
%>

<div id="performance-history" class="bg-white border border-gray-200 rounded-lg overflow-hidden mb-6" data-controller="profile-section">
  <%= render "shared/section_header",
    title: "Performance History",
    collapsible: true,
    visibility_toggle: true,
    visibility_field_name: "person[profile_visibility_settings][performance_history_visible]",
    visibility_checked: @person.performance_credits_visible? %>

  <div class="p-6 space-y-4" data-profile-section-target="content">
    <p class="text-sm text-gray-600 mb-4">
      Add your performance credits organized by section (Improv, TV, Dance, Sketch, etc.). You can create custom section names.
    </p>

    <div id="performance-credits-container" class="space-y-4">
      <%= person_form.fields_for :performance_credits do |credit_form| %>
        <div class="border border-gray-200 rounded-lg p-4 performance-credit-item">
          <%= credit_form.hidden_field :id %>
          <%= credit_form.hidden_field :position %>
          <%= credit_form.hidden_field :_destroy, value: "0", class: "destroy-field" %>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <%= credit_form.label :section_name, "Section", class: "block text-sm font-medium text-gray-700" %>
              <%= credit_form.text_field :section_name,
                  placeholder: "e.g., Improv, TV, Dance, Sketch",
                  list: "section-suggestions",
                  class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-pink-500 focus:ring-pink-500" %>
            </div>

            <div>
              <%= credit_form.label :title, "Production Title *", class: "block text-sm font-medium text-gray-700" %>
              <%= credit_form.text_field :title,
                  placeholder: "e.g., Hamlet",
                  class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-pink-500 focus:ring-pink-500" %>
            </div>

            <div>
              <%= credit_form.label :role, "Role/Character", class: "block text-sm font-medium text-gray-700" %>
              <%= credit_form.text_field :role,
                  placeholder: "e.g., Hamlet",
                  class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-pink-500 focus:ring-pink-500" %>
            </div>

            <div>
              <%= credit_form.label :location, "Location", class: "block text-sm font-medium text-gray-700" %>
              <%= credit_form.text_field :location,
                  placeholder: "e.g., New York, NY",
                  class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-pink-500 focus:ring-pink-500" %>
            </div>

            <div class="grid grid-cols-2 gap-2">
              <div>
                <%= credit_form.label :year_start, "Year", class: "block text-sm font-medium text-gray-700" %>
                <%= credit_form.number_field :year_start,
                    placeholder: "2024",
                    min: 1900,
                    max: 2100,
                    class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-pink-500 focus:ring-pink-500" %>
              </div>
              <div>
                <%= credit_form.label :year_end, "To (optional)", class: "block text-sm font-medium text-gray-700" %>
                <%= credit_form.number_field :year_end,
                    placeholder: "2025",
                    min: 1900,
                    max: 2100,
                    class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-pink-500 focus:ring-pink-500" %>
              </div>
            </div>

            <div class="md:col-span-2">
              <%= credit_form.label :link_url, "Link (optional)", class: "block text-sm font-medium text-gray-700" %>
              <%= credit_form.text_field :link_url,
                  placeholder: "https://...",
                  class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-pink-500 focus:ring-pink-500" %>
            </div>

            <div class="md:col-span-2">
              <%= credit_form.label :notes, "Notes (optional)", class: "block text-sm font-medium text-gray-700" %>
              <%= credit_form.text_area :notes,
                  rows: 2,
                  placeholder: "Additional details...",
                  class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-pink-500 focus:ring-pink-500" %>
            </div>
          </div>

          <div class="mt-3 flex justify-end">
            <button type="button"
                    class="text-red-600 hover:text-red-800 text-sm"
                    onclick="this.closest('.performance-credit-item').querySelector('.destroy-field').value = '1'; this.closest('.performance-credit-item').style.display = 'none';">
              Remove Credit
            </button>
          </div>
        </div>
      <% end %>
    </div>

    <button type="button"
            id="add-performance-credit"
            class="inline-flex items-center gap-2 px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg text-sm font-medium transition-colors">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
      </svg>
      Add Performance Credit
    </button>

    <!-- Datalist for section suggestions -->
    <datalist id="section-suggestions">
      <% ProfileSkillsService.suggested_sections.each do |section| %>
        <option value="<%= section %>">
      <% end %>
    </datalist>

    <script>
      document.addEventListener('DOMContentLoaded', function() {
        document.getElementById('add-performance-credit')?.addEventListener('click', function() {
          const container = document.getElementById('performance-credits-container');
          const timestamp = new Date().getTime();

          const html = `
            <div class="border border-gray-200 rounded-lg p-4 performance-credit-item">
              <input type="hidden" name="person[performance_credits_attributes][${timestamp}][position]" value="">
              <input type="hidden" name="person[performance_credits_attributes][${timestamp}][_destroy]" value="0" class="destroy-field">

              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <label class="block text-sm font-medium text-gray-700">Section</label>
                  <input type="text"
                         name="person[performance_credits_attributes][${timestamp}][section_name]"
                         placeholder="e.g., Improv, TV, Dance, Sketch"
                         list="section-suggestions"
                         class="mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-pink-500 focus:ring-pink-500">
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-700">Production Title *</label>
                  <input type="text"
                         name="person[performance_credits_attributes][${timestamp}][title]"
                         placeholder="e.g., Hamlet"
                         class="mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-pink-500 focus:ring-pink-500">
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-700">Role/Character</label>
                  <input type="text"
                         name="person[performance_credits_attributes][${timestamp}][role]"
                         placeholder="e.g., Hamlet"
                         class="mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-pink-500 focus:ring-pink-500">
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-700">Location</label>
                  <input type="text"
                         name="person[performance_credits_attributes][${timestamp}][location]"
                         placeholder="e.g., New York, NY"
                         class="mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-pink-500 focus:ring-pink-500">
                </div>

                <div class="grid grid-cols-2 gap-2">
                  <div>
                    <label class="block text-sm font-medium text-gray-700">Year</label>
                    <input type="number"
                           name="person[performance_credits_attributes][${timestamp}][year_start]"
                           placeholder="2024"
                           min="1900"
                           max="2100"
                           class="mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-pink-500 focus:ring-pink-500">
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700">To (optional)</label>
                    <input type="number"
                           name="person[performance_credits_attributes][${timestamp}][year_end]"
                           placeholder="2025"
                           min="1900"
                           max="2100"
                           class="mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-pink-500 focus:ring-pink-500">
                  </div>
                </div>

                <div class="md:col-span-2">
                  <label class="block text-sm font-medium text-gray-700">Link (optional)</label>
                  <input type="text"
                         name="person[performance_credits_attributes][${timestamp}][link_url]"
                         placeholder="https://..."
                         class="mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-pink-500 focus:ring-pink-500">
                </div>

                <div class="md:col-span-2">
                  <label class="block text-sm font-medium text-gray-700">Notes (optional)</label>
                  <textarea name="person[performance_credits_attributes][${timestamp}][notes]"
                            rows="2"
                            placeholder="Additional details..."
                            class="mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-pink-500 focus:ring-pink-500"></textarea>
                </div>
              </div>

              <div class="mt-3 flex justify-end">
                <button type="button"
                        class="text-red-600 hover:text-red-800 text-sm"
                        onclick="this.closest('.performance-credit-item').querySelector('.destroy-field').value = '1'; this.closest('.performance-credit-item').style.display = 'none';">
                  Remove Credit
                </button>
              </div>
            </div>
          `;

          container.insertAdjacentHTML('beforeend', html);
        });
      });
    </script>
  </div>
</div>
