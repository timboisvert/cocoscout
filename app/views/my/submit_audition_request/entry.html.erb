<div class="min-h-screen bg-white">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12">

    <!-- Full-Width Header -->
    <div class="mb-8 sm:mb-10">
      <h1 class="text-3xl sm:text-4xl font-bold text-slate-900 mb-3 coustard-regular"><%= @production.name %></h1>
      <% if @audition_cycle.audition_type == "in_person" %>
        <p class="text-lg text-slate-600">Sign up for an in-person audition</p>
      <% elsif @audition_cycle.audition_type == "video_upload" %>
        <p class="text-lg text-slate-600">Submit a video audition</p>
      <% end %>
    </div>

    <!-- Two Column Layout: Header Text Box & Create Account Form -->
    <div class="grid lg:grid-cols-2 gap-8 lg:gap-12">

      <!-- Left Column: Instruction Text & About CocoScout -->
      <div class="space-y-6">
        <!-- Custom Instruction Text (if present) -->
        <% if @audition_cycle.instruction_text.present? %>
          <div class="bg-gradient-to-br from-slate-50 to-white border border-slate-200 rounded-lg p-6 sm:p-8 shadow-sm">
            <div class="prose prose-slate max-w-none text-slate-700">
              <%= @audition_cycle.instruction_text %>
            </div>
          </div>
        <% end %>

        <!-- About CocoScout -->
        <div class="bg-white border border-slate-200 rounded-lg p-6 sm:p-8 shadow-sm">
          <div class="flex items-start gap-4 mb-5">
            <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-pink-100 flex items-center justify-center">
              <svg class="w-6 h-6 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-slate-900 mb-2">About CocoScout</h3>
              <p class="text-sm text-slate-600 mb-3">
                <strong><%= @audition_cycle.production.organization.name %></strong> uses CocoScout to manage productions, auditions, and casting.
              </p>
              <p class="text-sm text-slate-600">
                Create your free CocoScout account to sign up for this audition. You'll be able to save and update your submission, view your audition status, and access future opportunities.
              </p>
            </div>
          </div>

          <!-- Benefits -->
          <div class="pt-5 border-t border-slate-200">
            <h4 class="text-sm font-semibold text-slate-900 mb-3">Your free account includes:</h4>
            <ul class="space-y-2.5">
              <li class="flex items-start gap-2.5">
                <svg class="w-5 h-5 text-green-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-sm text-slate-700">Save your audition materials in one place</span>
              </li>
              <li class="flex items-start gap-2.5">
                <svg class="w-5 h-5 text-green-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-sm text-slate-700">Track audition status and updates</span>
              </li>
              <li class="flex items-start gap-2.5">
                <svg class="w-5 h-5 text-green-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-sm text-slate-700">Access rehearsal schedules if cast</span>
              </li>
              <li class="flex items-start gap-2.5">
                <svg class="w-5 h-5 text-green-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-sm text-slate-700">Apply to future productions easily</span>
              </li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Right Column: Signup Form (Sticky) -->
      <div>
        <div class="lg:sticky lg:top-8">
          <div class="bg-white border border-slate-200 rounded-lg p-6 sm:p-8 shadow-sm">
            <h2 class="text-2xl font-bold text-slate-900 mb-2 text-center">Create your account</h2>
            <p class="text-sm text-slate-600 mb-6 text-center">Join CocoScout to sign up for this audition</p>

            <!-- Error Messages -->
            <% if @authentication_error %>
              <div class="mb-4 p-3 bg-pink-50 border border-pink-200 rounded-md text-sm text-pink-700">
                Sign in failed. Please enter the correct password.
              </div>
            <% end %>

            <% if @user_exists_error %>
              <div class="mb-4 p-3 bg-pink-50 border border-pink-200 rounded-md text-sm text-pink-700">
                You already have a CocoScout account. Please <%= link_to "sign in", signin_path, class: "underline font-medium text-pink-600 hover:text-pink-700" %> to continue.
              </div>
            <% end %>

            <%= form_with(model: @user, url: signup_path, class: "space-y-5") do |form| %>
              <div>
                <label for="user_email_address" class="block text-sm font-medium text-slate-700 mb-1">Email address</label>
                <%= form.email_field :email_address,
                    required: true,
                    autocomplete: "username",
                    autocapitalize: "none",
                    placeholder: "you@example.com",
                    value: params[:email_address],
                    class: "block shadow-sm rounded-md border border-gray-300 px-3 py-2.5 w-full focus:border-pink-500 focus:ring-pink-500" %>
              </div>

              <div data-controller="password-visibility">
                <% if @user&.errors&.[](:password)&.any? %>
                  <label for="user_password" class="block text-sm font-medium text-pink-600 mb-1">Password must be at least 8 characters</label>
                <% else %>
                  <label for="user_password" class="block text-sm font-medium text-slate-700 mb-1">Password</label>
                <% end %>
                <div class="relative">
                  <%= form.password_field :password,
                      required: true,
                      autocomplete: "new-password",
                      placeholder: "Create a password",
                      maxlength: 72,
                      class: "block shadow-sm rounded-md border #{ @user&.errors&.[](:password)&.any? ? 'border-pink-500' : 'border-gray-300' } px-3 py-2.5 w-full pr-10 focus:border-pink-500 focus:ring-pink-500",
                      data: { password_visibility_target: "input" } %>
                  <button type="button"
                          data-action="password-visibility#toggle"
                          class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-500 hover:text-gray-700 focus:outline-none">
                    <span data-password-visibility-target="icon">
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                      </svg>
                    </span>
                  </button>
                </div>
              </div>

              <div class="pt-2">
                <%= render "shared/button", text: "Create Account & Continue", variant: "primary", size: "jumbo", type: :submit, class: "w-full" %>
              </div>

              <div class="text-center text-sm text-slate-600 pt-4">
                Already have an account? <%= link_to "Sign In", signin_path, class: "text-pink-600 hover:text-pink-700 font-medium underline" %>
              </div>
            <% end %>
          </div>

          <!-- Trust indicators & CocoScout branding -->
          <div class="mt-6 text-center space-y-3">
            <p class="text-xs text-slate-500 flex items-center justify-center gap-1.5">
              <svg class="w-3.5 h-3.5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
              </svg>
              Free for performers. Secure & private.
            </p>

            <div class="flex items-center justify-center gap-2 pt-4">
              <%= render "shared/cocoscout_logo", size: :xsmall %>
              <span class="text-base font-semibold coustard-regular text-pink-500">CocoScout</span>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>