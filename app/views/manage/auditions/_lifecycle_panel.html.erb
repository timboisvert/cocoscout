<div class="mb-6 bg-white overflow-hidden">
  <% if !defined?(current_step) || current_step.nil? %>
    <%= render "shared/card_header", title: "Audition Process" %>
  <% end %>

  <div class="p-6">
    <!-- Mobile Timeline (dropdown style) -->
    <div class="md:hidden" data-controller="show-toggle" data-show-toggle-initial-open-value="false">
      <%
        steps = []
        if current_user_has_role?(@production)
          steps << { key: :prepare, label: "Prepare", path: prepare_manage_production_signups_auditions_cycle_path(@production, @audition_cycle), icon: "settings" }
        end
        steps << { key: :review, label: "Review", path: review_manage_production_signups_auditions_cycle_path(@production, @audition_cycle), icon: "clipboard" }
        if @production.audition_cycle&.accepts_in_person_auditions?
          steps << { key: :run, label: "Run Auditions", path: run_manage_production_signups_auditions_cycle_path(@production, @audition_cycle), icon: "star" }
        end
        if current_user_has_role?(@production)
          steps << { key: :communicate, label: "Casting", path: casting_manage_production_signups_auditions_cycle_path(@production, @audition_cycle), icon: "users" }
        end

        current_step_info = steps.find { |s| s[:key] == current_step } || steps.first
      %>

      <button
        type="button"
        data-action="click->show-toggle#toggle"
        class="w-full flex items-center justify-between px-4 py-3 bg-pink-50 border border-pink-300 rounded-lg hover:bg-pink-100 transition-colors"
      >
        <div class="flex items-center gap-2">
          <span class="text-xs font-semibold text-pink-600">Current Step:</span>
          <span class="text-sm font-bold text-pink-700"><%= current_step_info[:label] %></span>
        </div>
        <svg
          class="w-5 h-5 text-pink-600 transition-transform"
          data-show-toggle-target="icon"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
        </svg>
      </button>

      <div
        data-show-toggle-target="content"
        class="hidden mt-2 space-y-2 bg-white border border-gray-200 rounded-lg p-3"
      >
        <% steps.each do |step| %>
          <%= link_to step[:path], class: "no-underline block" do %>
            <div class="flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-pink-50 transition-colors <%= 'bg-pink-50 border border-pink-300' if step[:key] == current_step %>">
              <div class="flex-shrink-0 w-6 h-6 rounded-full flex items-center justify-center z-10 ring-1 transition-all <%= step[:key] == current_step ? 'bg-pink-500 ring-pink-500 text-white' : 'bg-pink-100 ring-pink-300 text-pink-500' %>">
                <% if step[:key] == :prepare %>
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                <% elsif step[:key] == :review %>
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
                  </svg>
                <% elsif step[:key] == :run %>
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                  </svg>
                <% elsif step[:key] == :communicate %>
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                <% end %>
              </div>
              <div class="flex-1">
                <h4 class="text-sm font-semibold <%= step[:key] == current_step ? 'text-pink-600' : 'text-gray-900' %>"><%= step[:label] %></h4>
              </div>
              <% if step[:key] == current_step %>
                <svg class="w-4 h-4 text-pink-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>

    <!-- Desktop Timeline (horizontal) -->
    <div class="hidden md:block">
      <div class="relative">
        <!-- Timeline line (hidden on mobile, shown on larger screens) -->
        <div class="absolute top-6 left-0 right-0 h-0.5 bg-gray-200" aria-hidden="true" style="left: 3rem; right: 3rem;"></div>

        <%
          # Calculate grid columns based on user role and audition type
          has_role = current_user_has_role?(@production)
          is_in_person = @production.audition_cycle&.accepts_in_person_auditions?
          if has_role
            col_count = is_in_person ? 4 : 3
          else
            col_count = is_in_person ? 2 : 1
          end
        %>
        <div class="grid grid-cols-1 md:grid-cols-<%= col_count %> gap-8">

        <% if current_user_has_role?(@production) %>
        <!-- Step 1: Prepare -->
        <%= link_to prepare_manage_production_signups_auditions_cycle_path(@production, @audition_cycle), class: "no-underline" do %>
          <div class="relative flex flex-col items-center text-center group <%= 'current-step' if defined?(current_step) && current_step == :prepare %>" style="<%= 'opacity: 1;' if defined?(current_step) && current_step == :prepare %>">
            <div class="flex-shrink-0 w-12 h-12 rounded-full flex items-center justify-center z-10 ring-4 mb-3 transition-all <%= defined?(current_step) && current_step == :prepare ? 'bg-pink-500 ring-pink-500 shadow-lg shadow-pink-500/50' : 'bg-pink-100 ring-white group-hover:ring-pink-500' %>">
              <svg class="w-6 h-6 <%= defined?(current_step) && current_step == :prepare ? 'text-white' : 'text-pink-500' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <h4 class="text-sm font-semibold mb-2 <%= defined?(current_step) && current_step == :prepare ? 'text-pink-600' : 'text-gray-900 group-hover:text-pink-500' %>">Prepare</h4>
            <p class="text-xs text-gray-500"><%= @production.audition_cycle&.video_only? ? 'Configure settings and customize audition form' : 'Configure settings, plan sessions, and customize audition form' %></p>
          </div>
        <% end %>
        <% end %>

        <!-- Step 2: Review -->
        <%= link_to review_manage_production_signups_auditions_cycle_path(@production, @audition_cycle), class: "no-underline" do %>
          <div class="relative flex flex-col items-center text-center group <%= 'current-step' if defined?(current_step) && current_step == :review %>" style="<%= 'opacity: 1;' if defined?(current_step) && current_step == :review %>">
            <div class="flex-shrink-0 w-12 h-12 rounded-full flex items-center justify-center z-10 ring-4 mb-3 transition-all <%= defined?(current_step) && current_step == :review ? 'bg-pink-500 ring-pink-500 shadow-lg shadow-pink-500/50' : 'bg-pink-100 ring-white group-hover:ring-pink-500' %>">
              <svg class="w-6 h-6 <%= defined?(current_step) && current_step == :review ? 'text-white' : 'text-pink-500' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
              </svg>
            </div>
            <h4 class="text-sm font-semibold mb-2 <%= defined?(current_step) && current_step == :review ? 'text-pink-600' : 'text-gray-900 group-hover:text-pink-500' %>">Review</h4>
            <p class="text-xs text-gray-500"><%= @production.audition_cycle&.video_only? ? 'Watch and evaluate auditions' : 'Accept or decline applications and schedule auditions' %></p>
          </div>
        <% end %>

        <!-- Step 3: Run Auditions (In-Person Only) -->
        <% if @production.audition_cycle&.accepts_in_person_auditions? %>
          <%= link_to run_manage_production_signups_auditions_cycle_path(@production, @audition_cycle), class: "no-underline" do %>
            <div class="relative flex flex-col items-center text-center group <%= 'current-step' if defined?(current_step) && current_step == :run %>" style="<%= 'opacity: 1;' if defined?(current_step) && current_step == :run %>">
              <div class="flex-shrink-0 w-12 h-12 rounded-full flex items-center justify-center z-10 ring-4 mb-3 transition-all <%= defined?(current_step) && current_step == :run ? 'bg-pink-500 ring-pink-500 shadow-lg shadow-pink-500/50' : 'bg-pink-100 ring-white group-hover:ring-pink-500' %>">
                <svg class="w-6 h-6 <%= defined?(current_step) && current_step == :run ? 'text-white' : 'text-pink-500' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                </svg>
              </div>
              <h4 class="text-sm font-semibold mb-2 <%= defined?(current_step) && current_step == :run ? 'text-pink-600' : 'text-gray-900 group-hover:text-pink-500' %>">Run Auditions</h4>
              <p class="text-xs text-gray-500">Conduct sessions and evaluate performances</p>
            </div>
          <% end %>
        <% end %>

        <% if current_user_has_role?(@production) %>
        <!-- Step 4: Casting -->
        <%= link_to casting_manage_production_signups_auditions_cycle_path(@production, @audition_cycle), class: "no-underline" do %>
          <div class="relative flex flex-col items-center text-center group <%= 'current-step' if defined?(current_step) && current_step == :communicate %>" style="<%= 'opacity: 1;' if defined?(current_step) && current_step == :communicate %>">
            <div class="flex-shrink-0 w-12 h-12 rounded-full flex items-center justify-center z-10 ring-4 mb-3 transition-all <%= defined?(current_step) && current_step == :communicate ? 'bg-pink-500 ring-pink-500 shadow-lg shadow-pink-500/50' : 'bg-pink-100 ring-white group-hover:ring-pink-500' %>">
              <svg class="w-6 h-6 <%= defined?(current_step) && current_step == :communicate ? 'text-white' : 'text-pink-500' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
            </div>
            <h4 class="text-sm font-semibold mb-2 <%= defined?(current_step) && current_step == :communicate ? 'text-pink-600' : 'text-gray-900 group-hover:text-pink-500' %>">Casting</h4>
            <p class="text-xs text-gray-500">Manage cast decisions and notify applicants</p>
            </div>
          <% end %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>