<% content_for :title, "Edit Email Template - Superadmin" %>

<div class="w-full px-5 pt-5">
  <%= render partial: "shared/notice", locals: { notice: notice } %>

  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
        ["Superadmin", superadmin_path],
        ["Email Templates", email_templates_path]
    ],
    text: "Edit: #{@template.name}",
    links: [
      { text: "Preview", path: email_template_preview_path(@template), color: "pink" }
    ]
  } %>

  <div class="mt-4">
    <%= render partial: "superadmin/email_template_form", locals: { template: @template, categories: @categories } %>
  </div>
</div>
