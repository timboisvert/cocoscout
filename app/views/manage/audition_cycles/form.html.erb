<% content_for :title, "Editing audition cycle" %>

<div class="w-full" data-controller="question-modal" data-create-path="<%= create_question_manage_production_audition_cycle_path(@production, @audition_cycle) %>" data-new-description="Custom Questions are shown at the bottom of the Audition sign-up form." data-has-errors="<%= @question.errors.any? %>">
  <%= render partial: "shared/notice", locals: { notice: notice } %>
  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Auditions", manage_production_auditions_path(@production)],
      ["Prepare", prepare_manage_production_audition_cycle_path(@production, @audition_cycle)]
    ],
    text: "Sign-up Form",
    links: [
      { text: "Preview Form", path: preview_manage_production_audition_cycle_path(@production, @audition_cycle), target: "_blank" }
    ]
  } %>

  <%= render partial: "manage/auditions/lifecycle_panel", locals: { current_step: :prepare } %>

  <!-- Section 1: Show & Event Availability -->
  <div class="mb-4 border border-gray-200 rounded-lg overflow-hidden" data-controller="show-toggle" data-show-toggle-initial-open-value="<%= params[:availability_open].present? || (params[:question_id].blank? && params[:questions_open].blank? && params[:audition_availability_open].blank? && params[:text_open].blank? && @question_error.blank?) %>">
    <div class="bg-gray-50 px-4 py-3 border-b border-gray-200 flex items-center justify-between cursor-pointer" data-action="click->show-toggle#toggle">
      <h3 class="text-md font-semibold text-gray-900 coustard-regular">Show & Event Availability</h3>
      <div data-show-toggle-target="icon"></div>
    </div>
    <div data-show-toggle-target="content">
      <%= form_with model: [:manage, @production, @audition_cycle], class: "contents" do |form| %>
        <%= hidden_field_tag :availability_open, "true" %>
        <div class="p-4" data-controller="availability-filter">
          <p class="text-sm text-gray-500 mb-4">Include a section on the sign-up form where auditionees can indicate their availability for scheduled events.</p>

          <div class="mb-1">
            <%= form.check_box :include_availability_section, class: "rounded accent-pink-500 border-gray-300 text-pink-600 focus:ring-pink-500", data: { action: "change->availability-filter#toggleSection", availability_filter_target: "enableCheckbox" } %>
            <%= form.label :include_availability_section, "Request availability in sign-up form", class: "ml-2 text-sm text-gray-700" %>
          </div>

          <div class="<%= @audition_cycle.include_availability_section == true ? '' : 'hidden' %>" data-availability-filter-target="eventSection">
            <div class="mb-4">
              <%= form.check_box :require_all_availability, class: "rounded accent-pink-500 border-gray-300 text-pink-600 focus:ring-pink-500" %>
              <%= form.label :require_all_availability, "Require auditionees to enter availability in order to submit sign-up form", class: "ml-2 text-sm text-gray-700" %>
            </div>

            <label class="text-sm font-medium text-gray-700 block mb-2">Include:</label>
            <div class="space-y-2">
              <div>
                <%= radio_button_tag "show_filter_mode", "all", @audition_cycle.availability_show_ids.blank?, class: "rounded-full accent-pink-500 border-gray-300 text-pink-600 focus:ring-pink-500", data: { action: "change->availability-filter#updateFilter" } %>
                <%= label_tag "show_filter_mode_all", "All Shows & Events", class: "ml-2 text-sm text-gray-700" %>
                <% if @shows.any? %>
                  <button type="button" class="ml-2 text-xs text-pink-500 underline cursor-pointer <%= @audition_cycle.availability_show_ids.present? ? 'hidden' : '' %>" data-action="click->availability-filter#toggleShowList" data-availability-filter-target="showListToggle">
                    Show Shows & Events (<span data-availability-filter-target="count"><%= @shows.count %></span>)
                  </button>
                <% end %>
              </div>

              <% if @shows.any? %>
                <div class="hidden ml-6 bg-gray-50 rounded-lg p-3 max-h-40 overflow-y-auto" data-availability-filter-target="showList">
                  <ul class="space-y-1 text-sm">
                    <% @shows.each do |show| %>
                      <li class="flex justify-between" data-show-id="<%= show.id %>">
                        <span class="text-gray-900">
                          <span class="inline-flex items-center rounded-md px-1.5 py-0.5 text-xs font-medium ring-1 ring-inset <%= event_type_badge_classes(show.event_type) %>">
                            <%= show.event_type.titleize %>
                          </span>
                          <%= show.date_and_time.strftime("%a, %b %-d at %-l:%M %p") %>
                          <% if show.secondary_name.present? %>
                            - <%= show.secondary_name %>
                          <% end %>
                        </span>
                      </li>
                    <% end %>
                  </ul>
                </div>
              <% end %>

              <div>
                <%= radio_button_tag "show_filter_mode", "specific", @audition_cycle.availability_show_ids.present?, class: "rounded-full accent-pink-500 border-gray-300 text-pink-600 focus:ring-pink-500", data: { action: "change->availability-filter#updateFilter" } %>
                <%= label_tag "show_filter_mode_specific", "Only specific shows & events", class: "ml-2 text-sm text-gray-700" %>
              </div>
            </div>

            <%= hidden_field_tag "audition_cycle[availability_show_ids][]", "" %>
            <div class="ml-6 mt-2 space-y-1 <%= @audition_cycle.availability_show_ids.present? ? '' : 'hidden' %>" data-availability-filter-target="checkboxes">
              <% @shows.each do |show| %>
                <div>
                  <%= check_box_tag "audition_cycle[availability_show_ids][]", show.id, @audition_cycle.availability_show_ids&.include?(show.id), id: "audition_cycle_availability_show_ids_#{show.id}", class: "rounded accent-pink-500 border-gray-300 text-pink-600 focus:ring-pink-500", data: { action: "change->availability-filter#updateShowList", availability_filter_target: "checkbox" } %>
                  <%= label_tag "audition_cycle_availability_show_ids_#{show.id}", class: "ml-2 text-sm text-gray-700 cursor-pointer" do %>
                    <span class="inline-flex items-center rounded-md px-1.5 py-0.5 text-xs font-medium ring-1 ring-inset <%= event_type_badge_classes(show.event_type) %>">
                      <%= show.event_type.titleize %>
                    </span>
                    <%= show.date_and_time.strftime("%a, %b %-d at %-l:%M %p") %>
                    <% if show.secondary_name.present? %>
                      <span class="text-gray-500">- <%= show.secondary_name %></span>
                    <% end %>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>

          <div class="border-t border-gray-200 pt-4 mt-4">
            <%= render "shared/button", text: "Save Availability Settings", variant: "primary", size: "medium", type: :submit %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Section 1.5: Audition Availability -->
  <div class="mb-4 border border-gray-200 rounded-lg overflow-hidden" data-controller="show-toggle" data-show-toggle-initial-open-value="<%= params[:audition_availability_open].present? %>">
    <div class="bg-gray-50 px-4 py-3 border-b border-gray-200 flex items-center justify-between cursor-pointer" data-action="click->show-toggle#toggle">
      <h3 class="text-md font-semibold text-gray-900 coustard-regular">Audition Availability</h3>
      <div data-show-toggle-target="icon"></div>
    </div>
    <div data-show-toggle-target="content">
      <%= form_with model: [:manage, @production, @audition_cycle], class: "contents" do |form| %>
        <%= hidden_field_tag :audition_availability_open, "true" %>
        <div class="p-4">
          <p class="text-sm text-gray-500 mb-4">Include a section on the sign-up form where auditionees can indicate their availability for scheduled audition sessions.</p>

          <div class="mb-1">
            <%= form.check_box :include_audition_availability_section, class: "rounded accent-pink-500 border-gray-300 text-pink-600 focus:ring-pink-500" %>
            <%= form.label :include_audition_availability_section, "Request audition availability in sign-up form", class: "ml-2 text-sm text-gray-700" %>
          </div>

          <div class="mb-4">
            <%= form.check_box :require_all_audition_availability, class: "rounded accent-pink-500 border-gray-300 text-pink-600 focus:ring-pink-500" %>
            <%= form.label :require_all_audition_availability, "Require auditionees to enter audition availability in order to submit sign-up form", class: "ml-2 text-sm text-gray-700" %>
          </div>

          <div class="border-t border-gray-200 pt-4 mt-4">
            <%= render "shared/button", text: "Save Audition Availability Settings", variant: "primary", size: "medium", type: :submit %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Section 2: Custom Questions -->
  <div class="mb-4 border border-gray-200 rounded-lg overflow-hidden" data-controller="show-toggle" data-show-toggle-initial-open-value="<%= params[:question_id].present? || params[:questions_open].present? || @question_error.present? %>">
    <div class="bg-gray-50 px-4 py-3 border-b border-gray-200 flex items-center justify-between cursor-pointer" data-action="click->show-toggle#toggle">
      <h3 class="text-md font-semibold text-gray-900 coustard-regular">Custom Questions</h3>
      <div data-show-toggle-target="icon"></div>
    </div>
    <div data-show-toggle-target="content">
      <div class="p-4">
        <p class="text-sm text-gray-500 mb-4">Add custom questions to your sign-up form.</p>
        <%= render partial: "questions" %>
      </div>
    </div>
  </div>

  <!-- Section 3: Text and Instructions -->
  <div class="mb-4 border border-gray-200 rounded-lg overflow-hidden" data-controller="show-toggle" data-show-toggle-initial-open-value="<%= params[:text_open].present? %>">
    <div class="bg-gray-50 px-4 py-3 border-b border-gray-200 flex items-center justify-between cursor-pointer" data-action="click->show-toggle#toggle">
      <h3 class="text-md font-semibold text-gray-900 coustard-regular">Text and Instructions</h3>
      <div data-show-toggle-target="icon"></div>
    </div>
    <div data-show-toggle-target="content">
      <%= form_with(model: [:manage, @production, @audition_cycle], class: "contents") do |form| %>
        <%= hidden_field_tag :text_open, "true" %>
        <div class="p-4 overflow-x-hidden">
          <div class="w-full max-w-4xl overflow-x-auto" data-controller="tabs">
      <nav class="flex space-x-2 border-b border-gray-200 mb-4">
        <% idx = 0 %>
        <button type="button" data-tabs-target="tab" data-index="<%= idx %>" data-action="tabs#select" class="px-4 py-2 text-sm font-medium bg-white border-b-2 text-pink-600 cursor-pointer">Instruction Text</button>
        <% idx += 1 %>
        <% if @audition_cycle.audition_type == "video_upload" %>
          <button type="button" data-tabs-target="tab" data-index="<%= idx %>" data-action="tabs#select" class="px-4 py-2 text-sm font-medium bg-gray-50 border-b-2 text-gray-500 cursor-pointer">Video Field Text</button>
          <% idx += 1 %>
        <% end %>
        <button type="button" data-tabs-target="tab" data-index="<%= idx %>" data-action="tabs#select" class="px-4 py-2 text-sm font-medium bg-gray-50 border-b-2 text-gray-500 cursor-pointer">Success Text</button>
      </nav>

      <%= hidden_field_tag :active_tab, params[:tab] || 0, data: { tabs_target: "hiddenField" } %>
      <div data-tabs-target="panel">
        <div class="my-5">
          <p class="text-sm text-gray-500 pb-5">At the top of the Sign-up form you can add text to describe the production, the audition process, cast expectations, etc.</p>
          <%= form.rich_text_area :instruction_text, class: ["block shadow-sm rounded-lg border px-3 py-2 mt-2 w-full max-h-96 overflow-auto min-w-0", {"border-gray-400": @audition_cycle.errors[:instruction_text].none?, "border-pink-500": @audition_cycle.errors[:instruction_text].any?}] %>
        </div>

        <div class="border-t border-gray-200 pt-5 mt-5">
          <%= render "shared/button", text: "Update", variant: "primary", size: "medium", type: :submit %>
          <%= render "shared/button", text: "Back", variant: "ghost-cancel", size: "medium", path: "javascript:history.back()", type: :button %>
        </div>
      </div>

      <% if @audition_cycle.audition_type == "video_upload" %>
        <div data-tabs-target="panel" class="hidden">
          <div class="my-5">
            <p class="text-sm text-gray-500 pb-5">Add text that gets shown with the video upload URL, which can be used to provide instructions on what the video should be, how it should be uploaded, etc.</p>
            <%= form.rich_text_area :video_field_text, class: ["block shadow-sm rounded-lg border px-3 py-2 mt-2 w-full max-h-96 overflow-auto min-w-0", {"border-gray-400": @audition_cycle.errors[:video_field_text].none?, "border-pink-500": @audition_cycle.errors[:video_field_text].any?}] %>
          </div>

          <div class="border-t border-gray-200 pt-5 mt-5">
            <%= render "shared/button", text: "Update", variant: "primary", size: "medium", type: :submit %>
            <%= render "shared/button", text: "Back", variant: "ghost-cancel", size: "medium", path: "javascript:history.back()", type: :button %>
          </div>
        </div>
      <% end %>

      <div data-tabs-target="panel" class="hidden">
        <div class="my-5">
          <p class="text-sm text-gray-500 pb-5">After an auditionee submits the Sign-up form, they're shown text that you can customize here.</p>
          <%= form.rich_text_area :success_text, class: ["block shadow-sm rounded-lg border px-3 py-2 mt-2 w-full max-h-96 overflow-auto min-w-0", {"border-gray-400": @audition_cycle.errors[:success_text].none?, "border-pink-500": @audition_cycle.errors[:success_text].any?}] %>
        </div>

        <div class="border-t border-gray-200 pt-5 mt-5">
          <%= render "shared/button", text: "Update Text", variant: "primary", size: "medium", type: :submit %>
          <%= render "shared/button", text: "Back", variant: "ghost-cancel", size: "medium", path: "javascript:history.back()", type: :button %>
        </div>
      </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Section 4: Form Review Status -->
  <div class="mb-4 border border-gray-200 rounded-lg overflow-hidden">
    <div class="bg-gray-50 px-4 py-3 border-b border-gray-200">
      <h3 class="text-md font-semibold text-gray-900 coustard-regular">Form Review Status</h3>
    </div>
    <div class="p-4">
      <p class="text-sm text-gray-500 mb-4">Mark the sign-up form as reviewed once you've confirmed all questions and settings are correct. This helps you keep track of what's ready to be shared.</p>
      <%= form_with url: manage_production_audition_cycle_path(@production, @audition_cycle), method: :patch, class: "contents", data: { turbo: false } do |form| %>
        <div class="flex items-center mb-4">
          <input type="hidden" name="audition_cycle[form_reviewed]" value="0" />
          <input type="checkbox" id="form_reviewed" name="audition_cycle[form_reviewed]" value="1" <%= @audition_cycle.form_reviewed ? 'checked' : '' %> class="rounded accent-pink-500 border-gray-300 text-pink-600 focus:ring-pink-500" />
          <label for="form_reviewed" class="ml-2 text-sm text-gray-700 cursor-pointer">I have reviewed the sign-up form and it's ready to be shared</label>
        </div>
        <div class="border-t border-gray-200 pt-4 mt-4">
          <%= render "shared/button", text: "Save Review Status", variant: "primary", size: "medium", type: :submit %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Question Modal -->
  <%= render "shared/question_modal" %>

</div>

