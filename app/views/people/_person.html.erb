<div id="<%= dom_id person %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">First name:</strong>
    <%= person.first_name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Middle name:</strong>
    <%= person.middle_name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Last name:</strong>
    <%= person.last_name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Suffix:</strong>
    <%= person.suffix %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Display name:</strong>
    <%= person.display_name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Email:</strong>
    <%= person.email %>
  </div>
</div>
