<%
  # Profile headshots form section
  # Parameters:
  # - entity: the person or group object

  entity_name = entity.is_a?(Person) ? 'person' : 'group'
  form_url = entity.is_a?(Person) ? update_profile_path : update_group_path(entity)
  form_id = entity.is_a?(Person) ? 'headshots-form' : 'group-headshots-form'
%>

<div id="headshots" class="bg-white border border-gray-200 rounded-lg overflow-hidden mb-6" data-controller="profile-section">
<%= form_with(model: entity, scope: entity_name, url: form_url, method: :patch, id: form_id, data: { turbo: true }) do |entity_form| %>
  <%= render "shared/section_header",
      entity: entity,
      title: "Headshots",
      collapsible: true,
      visibility_toggle: true,
      visibility_field: "headshots_visible",
      visibility_checked: entity.headshots_visible? %>

    <div class="p-6" data-profile-section-target="content">
      <p class="text-sm text-gray-600 mb-4">Upload multiple headshots for different looks and styles.</p>

      <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4" id="headshots-container" data-controller="profile-files">
      <%= entity_form.fields_for :profile_headshots do |headshot_form| %>
        <div class="headshot-item">
          <%= headshot_form.hidden_field :id %>
          <%= headshot_form.hidden_field :position %>
          <%= headshot_form.hidden_field :category, value: 'theatrical' %>
          <%= headshot_form.hidden_field :_destroy, value: "0", class: "destroy-field" %>
          <%= headshot_form.hidden_field :is_primary, class: "is-primary-field" %>

          <div class="relative group">
            <div class="aspect-[3/4] rounded-lg overflow-hidden border-2 border-gray-200 bg-gray-50 relative"
                 data-controller="modal">
              <% if headshot_form.object.image.attached? %>
                <%= image_tag headshot_form.object.image.variant(resize_to_limit: [300, 400]),
                    class: "w-full h-full object-cover cursor-pointer transition-opacity group-hover:opacity-75",
                    data: { action: "click->modal#open", modal_image_param: url_for(headshot_form.object.image) } %>
                <div class="absolute inset-0 bg-gradient-to-t from-black/40 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none"></div>
                <% if headshot_form.object.is_primary %>
                  <span class="primary-badge absolute top-2 right-2 bg-pink-500 text-white text-xs font-medium px-2 py-1 rounded">Primary</span>
                <% end %>
              <% end %>

              <!-- Floating controls at bottom -->
              <div class="absolute bottom-0 left-0 right-0 p-2 flex items-center justify-between gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                <% unless headshot_form.object.is_primary %>
                  <button type="button"
                          class="text-xs bg-pink-500 text-white hover:bg-pink-600 px-2 py-1 rounded cursor-pointer set-primary-btn"
                          data-action="click->profile-files#setPrimaryHeadshot"
                          data-headshot-id="<%= headshot_form.object.id || 'new' %>">
                    Set as Primary
                  </button>
                <% else %>
                  <span></span>
                <% end %>
                <button type="button"
                        class="text-xs bg-pink-500 text-white hover:bg-pink-600 px-2 py-1 rounded font-medium cursor-pointer"
                        data-action="click->profile-files#removeHeadshot">
                  Remove
                </button>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Add new headshot button -->
      <div class="aspect-[3/4] rounded-lg border-2 border-dashed border-gray-300 bg-gray-50 flex flex-col items-center justify-center cursor-pointer hover:border-pink-400 hover:bg-pink-50 transition-all" onclick="document.getElementById('headshot-file-input').click()">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10 text-gray-400 mb-2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
        </svg>
        <p class="text-xs font-medium text-gray-600">Add Headshot</p>
      </div>

      <input type="file"
             id="headshot-file-input"
             class="hidden"
             accept="image/*"
             data-action="change->profile-files#addHeadshot">
      </div>
    </div>

    <template id="headshot-template">
      <div class="headshot-item">
        <input type="hidden" name="<%= entity_name %>[profile_headshots_attributes][NEW_RECORD][position]" value="">
        <input type="hidden" name="<%= entity_name %>[profile_headshots_attributes][NEW_RECORD][category]" value="theatrical">
        <input type="hidden" name="<%= entity_name %>[profile_headshots_attributes][NEW_RECORD][_destroy]" value="0" class="destroy-field">
        <input type="hidden" name="<%= entity_name %>[profile_headshots_attributes][NEW_RECORD][is_primary]" value="0" class="is-primary-field">
        <input type="file" name="<%= entity_name %>[profile_headshots_attributes][NEW_RECORD][image]" style="display: none;" class="headshot-file-input">

        <div class="relative group">
          <div class="aspect-[3/4] rounded-lg overflow-hidden border-2 border-gray-200 bg-gray-50 relative">
            <img src="" class="w-full h-full object-cover">
            <div class="absolute inset-0 bg-gradient-to-t from-black/40 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none"></div>

            <!-- Floating controls at bottom -->
            <div class="absolute bottom-0 left-0 right-0 p-2 flex items-center justify-between gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
              <button type="button"
                      class="text-xs bg-pink-500 text-white hover:bg-pink-600 px-2 py-1 rounded cursor-pointer set-primary-btn"
                      data-action="click->profile-files#setPrimaryHeadshot"
                      data-headshot-id="new">
                Set as Primary
              </button>
              <button type="button"
                      class="text-xs bg-pink-500 text-white hover:bg-pink-600 px-2 py-1 rounded font-medium cursor-pointer"
                      data-action="click->profile-files#removeHeadshot">
                Remove
              </button>
            </div>
          </div>
        </div>
      </div>
    </template>
<% end %>
</div>
