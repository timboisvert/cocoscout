<%= render "shared/back_button", path: edit_manage_production_path(@production, anchor: "tab-4"), title: "Back to Production Settings" %>

<div class="max-w-4xl mx-auto">
  <div class="flex items-center justify-between mb-6">
    <div>
      <h1 class="text-2xl font-semibold coustard-regular">Agreement Signature Status</h1>
      <p class="text-gray-600"><%= @production.name %></p>
    </div>

    <% if @unsigned.any? %>
      <%= render "shared/button",
                 text: "Send Reminder to #{@unsigned.count} Unsigned",
                 path: send_agreement_reminders_manage_production_path(@production),
                 method: :post,
                 variant: "primary",
                 data: { turbo_confirm: "Send a reminder message to all #{@unsigned.count} #{'performer'.pluralize(@unsigned.count)} who haven't signed yet?" } %>
    <% end %>
  </div>

  <!-- Stats Card -->
  <div class="border border-gray-200 rounded-lg p-6 mb-6 bg-white">
    <div class="flex items-center gap-6">
      <div class="flex-1">
        <div class="flex items-center gap-4 mb-4">
          <div class="text-center">
            <div class="text-3xl font-bold text-green-600"><%= @stats[:signed] %></div>
            <div class="text-sm text-gray-600">Signed</div>
          </div>
          <div class="text-2xl text-gray-300">/</div>
          <div class="text-center">
            <div class="text-3xl font-bold text-gray-700"><%= @stats[:total] %></div>
            <div class="text-sm text-gray-600">Total</div>
          </div>
        </div>
        <div class="w-full bg-gray-200 rounded-full h-3">
          <div class="bg-green-500 h-3 rounded-full transition-all duration-300" style="width: <%= @stats[:percent] %>%"></div>
        </div>
        <p class="text-sm text-gray-500 mt-2"><%= @stats[:percent] %>% complete</p>
      </div>
    </div>
  </div>

  <!-- Unsigned Section -->
  <% if @unsigned.any? %>
    <div class="border border-yellow-200 rounded-lg overflow-hidden mb-6 bg-yellow-50">
      <div class="bg-yellow-100 px-4 py-3 border-b border-yellow-200 flex items-center gap-2">
        <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
        <h3 class="text-md font-semibold text-yellow-900 coustard-regular">Not Yet Signed (<%= @unsigned.count %>)</h3>
      </div>
      <div class="p-4">
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
          <% @unsigned.each do |person| %>
            <div class="p-3 bg-white border border-yellow-200 rounded-lg flex items-center gap-3">
              <%= render "shared/avatar", person: person, size: :sm %>
              <div class="flex-1 min-w-0">
                <div class="font-medium text-gray-900 truncate"><%= person.name %></div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Signed Section -->
  <% if @signed.any? %>
    <div class="border border-green-200 rounded-lg overflow-hidden bg-green-50">
      <div class="bg-green-100 px-4 py-3 border-b border-green-200 flex items-center gap-2">
        <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <h3 class="text-md font-semibold text-green-900 coustard-regular">Signed (<%= @signed.count %>)</h3>
      </div>
      <div class="p-4">
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
          <% @signed.each do |signature| %>
            <div class="p-3 bg-white border border-green-200 rounded-lg flex items-center gap-3">
              <%= render "shared/avatar", person: signature.person, size: :sm %>
              <div class="flex-1 min-w-0">
                <div class="font-medium text-gray-900 truncate"><%= signature.person.name %></div>
                <div class="text-xs text-gray-500">Signed <%= signature.signed_on %></div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <% if @signed.empty? && @unsigned.empty? %>
    <div class="border border-gray-200 rounded-lg p-8 text-center bg-white">
      <svg class="w-12 h-12 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
      </svg>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No Performers in Talent Pool</h3>
      <p class="text-gray-600">Add performers to the talent pool to track agreement signatures.</p>
    </div>
  <% end %>
</div>
