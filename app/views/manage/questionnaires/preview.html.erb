<% content_for :title, "Preview - #{@questionnaire.title}" %>

<div class="w-full mb-10">
  <%= render partial: "shared/notice", locals: { notice: notice } %>
  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Questionnaires", manage_production_questionnaires_path(@production)],
      [@questionnaire.title, manage_production_questionnaire_path(@production, @questionnaire)]
    ],
    text: "Preview Questionnaire",
    links: [
      {text: "Edit Questionnaire", path: form_manage_production_questionnaire_path(@production, @questionnaire)}
    ]
  } %>

  <!-- Shareable Link -->
  <div class="mb-6 p-4 bg-pink-50 border border-pink-200 rounded-lg" data-controller="clipboard">
    <div class="flex items-center gap-3">
      <p class="text-sm font-medium text-pink-900 whitespace-nowrap">Shareable Link:</p>
      <%= text_field_tag "", @questionnaire.respond_url, class: "flex-1 text-sm text-black bg-white shadow-sm rounded-lg border px-3 py-2 border-gray-400", readonly: true, data: { clipboard_target: "textField" }  %>
      <button type="button" class="px-3 py-2 bg-pink-500 text-white rounded-lg hover:bg-pink-600 transition text-sm flex items-center gap-2 cursor-pointer" data-action="click->clipboard#copy" data-clipboard-target="button">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 0 0 2.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 0 0-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 0 0 .75-.75 2.25 2.25 0 0 0-.1-.664m-5.8 0A2.251 2.251 0 0 1 13.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25ZM6.75 12h.008v.008H6.75V12Zm0 3h.008v.008H6.75V15Zm0 3h.008v.008H6.75V18Z" />
        </svg>
        Copy
      </button>
    </div>
  </div>

  <div class="bg-white border border-gray-200 rounded-lg shadow-sm p-6 pt-12">
    <div class="max-w-6xl mx-auto">

    <!-- Full-Width Header -->
    <div class="mb-8 sm:mb-10">
      <h1 class="text-3xl sm:text-4xl font-bold text-slate-900 mb-3 coustard-regular"><%= @production.name %></h1>
      <p class="text-lg text-slate-600"><%= @questionnaire.title %></p>
    </div>

    <!-- Two Column Layout: Instruction Text & Form -->
    <div class="grid lg:grid-cols-2 gap-8 lg:gap-12">

      <!-- Left Column: Instruction Text -->
      <div class="space-y-6">
        <% if @questionnaire.instruction_text.present? %>
          <div class="bg-gradient-to-br from-slate-50 to-white border border-slate-200 rounded-lg p-6 sm:p-8 shadow-sm">
            <div class="prose prose-slate max-w-none text-slate-700">
              <%= @questionnaire.instruction_text %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Right Column: Form -->
      <div>
        <%= form_with url: "#", method: :get, data: { turbo: false }, class: "space-y-4", onsubmit: "event.preventDefault(); alert('This is a preview - form submission is disabled'); return false;" do |form| %>

          <!-- Availability Section -->
          <% if @questionnaire.include_availability_section && @shows.present? %>
            <div class="bg-white border border-slate-200 rounded-lg shadow-sm p-5">
              <p class="text-sm text-gray-500 mb-4">
                Please indicate your availability for the following shows & events. <% if @questionnaire.require_all_availability %><span class="text-pink-500">(required)</span><% end %>
              </p>

              <div class="space-y-2">
                <% @shows.each do |show| %>
                  <div class="flex items-center justify-between py-3 border-b border-gray-100 last:border-b-0">
                    <div class="flex-1 min-w-0 mr-4">
                      <div class="text-sm font-semibold text-gray-900">
                        <%= show.date_and_time.strftime("%a, %b %-d, %Y") %> <span class="font-normal">at</span>
                        <%= show.date_and_time.strftime("%l:%M %p") %>
                      </div>
                      <div class="flex items-center gap-2 mt-1 flex-wrap">
                        <span class="inline-flex items-center rounded-md px-1.5 py-0.5 text-xs font-medium ring-1 ring-inset <%= case show.event_type
                          when "rehearsal" then "bg-blue-50 text-blue-700 ring-blue-600/10"
                          when "meeting" then "bg-green-50 text-green-700 ring-green-600/10"
                          else "bg-pink-50 text-pink-700 ring-pink-600/10"
                        end %>">
                          <%= show.event_type.titleize %>
                        </span>
                        <% if show.secondary_name.present? %>
                          <span class="text-xs text-gray-600"><%= show.secondary_name %></span>
                        <% end %>
                        <% if show.location.present? %>
                          <span class="text-xs text-gray-500"><%= show.location.name %></span>
                        <% end %>
                      </div>
                    </div>

                    <div class="flex-shrink-0">
                      <div class="inline-flex rounded-lg border border-gray-200 overflow-hidden">
                        <input type="radio" name="availability[<%= show.id %>]" value="available" id="preview_availability_<%= show.id %>_available" class="sr-only peer/available" disabled>
                        <label for="preview_availability_<%= show.id %>_available" class="w-10 sm:w-24 text-xs sm:text-sm px-2 py-1.5 sm:px-3 sm:py-2 text-center border border-gray-200 cursor-default flex items-center justify-center rounded-l-lg border-r-0 bg-white text-gray-700">
                          <span class="sm:hidden">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                            </svg>
                          </span>
                          <span class="hidden sm:inline">Available</span>
                        </label>
                        <input type="radio" name="availability[<%= show.id %>]" value="unavailable" id="preview_availability_<%= show.id %>_unavailable" class="sr-only peer/unavailable" disabled>
                        <label for="preview_availability_<%= show.id %>_unavailable" class="w-10 sm:w-24 text-xs sm:text-sm px-2 py-1.5 sm:px-3 sm:py-2 text-center border border-gray-200 cursor-default flex items-center justify-center rounded-r-lg bg-white text-gray-700">
                          <span class="sm:hidden">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                            </svg>
                          </span>
                          <span class="hidden sm:inline">Unavailable</span>
                        </label>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>

          <!-- Questions Section -->
          <% if @questions.any? %>
            <div class="bg-white border border-slate-200 rounded-lg shadow-sm p-5 space-y-5">
              <% @questions.each do |question| %>
                <div class="">
                  <label>
                    <%= question.text %>
                    <% if question.required %>
                      <span class="text-pink-500 text-sm">(required)</span>
                    <% end %>
                  </label>

                  <div class="mt-2">
                    <% type_class = question.question_type_class %>
                    <% if type_class %>
                      <% case type_class.key %>
                      <% when "text", "email", "phone", "url" %>
                        <input type="text" class="block shadow-sm rounded-lg border px-3 py-2 w-full border-gray-300" placeholder="Answer...">
                      <% when "textarea" %>
                        <textarea class="block shadow-sm rounded-lg border px-3 py-2 w-full border-gray-300" rows="4" placeholder="Answer..."></textarea>
                      <% when "yesno" %>
                        <div class="space-y-2">
                          <div class="flex items-center">
                            <input type="radio" name="question_<%= question.id %>" class="border-gray-300 text-pink-600">
                            <label class="ml-2 text-sm text-gray-700">Yes</label>
                          </div>
                          <div class="flex items-center">
                            <input type="radio" name="question_<%= question.id %>" class="border-gray-300 text-pink-600">
                            <label class="ml-2 text-sm text-gray-700">No</label>
                          </div>
                        </div>
                      <% when "multiple-single" %>
                        <div class="space-y-2">
                          <% question.question_options.each do |option| %>
                            <div class="flex items-center">
                              <input type="radio" name="question_<%= question.id %>" class="border-gray-300 text-pink-600">
                              <label class="ml-2 text-sm text-gray-700"><%= option.text %></label>
                            </div>
                          <% end %>
                        </div>
                      <% when "multiple-multiple" %>
                        <div class="space-y-2">
                          <% question.question_options.each do |option| %>
                            <div class="flex items-center">
                              <input type="checkbox" class="rounded border-gray-300 text-pink-600">
                              <label class="ml-2 text-sm text-gray-700"><%= option.text %></label>
                            </div>
                          <% end %>
                        </div>
                      <% when "ranking" %>
                        <div class="text-sm text-gray-500 mb-2">
                          <span class="hidden sm:inline">Drag to reorder</span>
                          <span class="sm:hidden">Use arrows to reorder options</span>
                        </div>
                        <div class="mt-2" data-controller="ranking" data-ranking-question-id-value="<%= question.id %>">
                          <div class="space-y-2" data-ranking-target="list" data-action="dragover->ranking#dragOver drop->ranking#drop">
                            <% question.question_options.each_with_index do |option, index| %>
                              <div class="flex items-center gap-2 p-3 bg-white border border-gray-300 rounded-lg cursor-move hover:bg-gray-50 transition"
                                   draggable="true"
                                   data-ranking-target="item"
                                   data-option-text="<%= option.text %>"
                                   data-action="dragstart->ranking#dragStart dragend->ranking#dragEnd dragover->ranking#dragOver drop->ranking#drop touchstart->ranking#touchStart touchmove->ranking#touchMove touchend->ranking#touchEnd">

                                <!-- Rank number -->
                                <div class="flex-shrink-0 w-8 h-8 flex items-center justify-center bg-pink-500 text-white font-semibold rounded-full text-sm"
                                     data-ranking-target="rank">
                                  <%= index + 1 %>
                                </div>

                                <!-- Option text -->
                                <div class="flex-1 font-medium text-gray-900">
                                  <%= option.text %>
                                </div>

                                <!-- Mobile controls (arrows) -->
                                <div class="flex gap-1 sm:hidden">
                                  <button type="button"
                                          class="p-2 text-gray-400 hover:text-gray-600 disabled:opacity-30 disabled:cursor-not-allowed"
                                          data-action="click->ranking#moveUp"
                                          <%= 'disabled' if index == 0 %>>
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7"/>
                                    </svg>
                                  </button>
                                  <button type="button"
                                          class="p-2 text-gray-400 hover:text-gray-600 disabled:opacity-30 disabled:cursor-not-allowed"
                                          data-action="click->ranking#moveDown"
                                          <%= 'disabled' if index == question.question_options.length - 1 %>>
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                                    </svg>
                                  </button>
                                </div>

                                <!-- Desktop drag handle -->
                                <div class="hidden sm:block text-gray-400">
                                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8h16M4 16h16"/>
                                  </svg>
                                </div>
                              </div>
                            <% end %>
                          </div>
                        </div>
                      <% end %>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>

          <!-- Submit Button -->
          <button type="submit" class="w-full rounded-lg px-4 py-3 text-white bg-pink-500 hover:bg-pink-600 font-semibold transition">
            Submit
          </button>
        <% end %>
      </div>

    </div>
    </div>
  </div>
</div>
