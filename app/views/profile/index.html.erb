<% content_for :title, "Edit Profile" %>

<!-- Main Content -->
<div class="w-full">
  <%= render partial: "shared/notice", locals: { notice: notice } %>

  <!-- Public Profile Card -->
  <div class="border border-gray-200 rounded-lg overflow-hidden mb-6">
    <div class="bg-gray-50 px-4 py-3 border-b border-gray-200">
      <h3 class="text-md font-semibold text-gray-900 coustard-regular">Public Profile</h3>
    </div>
    <div class="p-4">
      <div class="flex flex-col sm:flex-row gap-4">
        <div class="flex-1">
          <label class="block text-xs font-medium text-gray-500 uppercase mb-2">Your Profile URL</label>
          <div class="flex items-center gap-2 p-3 bg-gray-50 rounded-lg border border-gray-200">
            <div class="flex-1 overflow-hidden">
              <div class="text-sm font-mono text-gray-600 truncate">
                <%= public_profile_url(@person.public_key) %>
              </div>
            </div>
            <button onclick="navigator.clipboard.writeText('<%= public_profile_url(@person.public_key) %>')" class="text-pink-500 hover:text-pink-600 flex-shrink-0" title="Copy URL">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15.666 3.888A2.25 2.25 0 0013.5 2.25h-3c-1.03 0-1.9.693-2.166 1.638m7.332 0c.055.194.084.4.084.612v0a.75.75 0 01-.75.75H9a.75.75 0 01-.75-.75v0c0-.212.03-.418.084-.612m7.332 0c.646.049 1.288.11 1.927.184 1.1.128 1.907 1.077 1.907 2.185V19.5a2.25 2.25 0 01-2.25 2.25H6.75A2.25 2.25 0 014.5 19.5V6.257c0-1.108.806-2.057 1.907-2.185a48.208 48.208 0 011.927-.184" />
              </svg>
            </button>
          </div>
        </div>
        <div class="flex sm:flex-col gap-2">
          <%= link_to profile_preview_path, class: "flex items-center justify-center gap-2 px-4 py-2 bg-white border border-gray-300 hover:bg-gray-50 text-gray-700 rounded-lg text-sm font-medium transition-colors" do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span>Preview</span>
          <% end %>
          <%= link_to profile_public_path, class: "flex items-center justify-center gap-2 px-4 py-2 bg-white border border-gray-300 hover:bg-gray-50 text-gray-700 rounded-lg text-sm font-medium transition-colors" do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M7.217 10.907a2.25 2.25 0 100 2.186m0-2.186c.18.324.283.696.283 1.093s-.103.77-.283 1.093m0-2.186l9.566-5.314m-9.566 7.5l9.566 5.314m0 0a2.25 2.25 0 103.935 2.186 2.25 2.25 0 00-3.935-2.186zm0-12.814a2.25 2.25 0 103.933-2.185 2.25 2.25 0 00-3.933 2.185z" />
            </svg>
            <span>Share</span>
          <% end %>
          <button class="text-sm text-pink-500 hover:text-pink-600 font-medium px-4 py-2">
            Change URL
          </button>
        </div>
      </div>
    </div>
  </div>

  <%= form_with(model: @person, url: update_profile_path, method: :patch, class: "contents") do |person_form| %>

    <!-- Basic Information Section -->
    <div id="basic-info" class="bg-white border border-gray-200 rounded-lg overflow-hidden mb-6">
      <div class="bg-gray-50 px-4 py-3 border-b border-gray-200">
        <h3 class="text-md font-semibold text-gray-900 coustard-regular">Basic Information</h3>
      </div>
      <div class="p-6 space-y-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="md:col-span-2">
            <%= person_form.label :name, "Name", class: "block text-sm font-medium text-gray-700 #{@person.errors[:name].any? ? 'text-pink-600' : ''}" %>
            <span class="text-sm text-gray-500">(Your stage name or performing name)</span>
            <%= person_form.text_field :name, class: "mt-1 block w-full rounded-lg border #{@person.errors[:name].any? ? 'border-pink-500' : 'border-gray-300'} px-3 py-2 shadow-sm focus:border-pink-500 focus:ring-pink-500", data: { action: "blur->profile-auto-save#save" } %>
            <% if @person.errors[:name].any? %>
              <p class="mt-1 text-sm text-pink-600"><%= @person.errors[:name].first %></p>
            <% end %>
          </div>

          <div>
            <%= person_form.label :pronouns, "Pronouns", class: "block text-sm font-medium text-gray-700" %>
            <span class="text-sm text-gray-500">(optional)</span>
            <%= person_form.text_field :pronouns, placeholder: "e.g., she/her, he/him, they/them", class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-pink-500 focus:ring-pink-500", data: { action: "blur->profile-auto-save#save" } %>
          </div>
        </div>

        <div>
          <%= person_form.label :email, "Email", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1 relative">
            <%= person_form.email_field :email, disabled: true, class: "block w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm bg-gray-50 text-gray-500 cursor-not-allowed" %>
          </div>
          <p class="mt-1 text-xs text-gray-500">
            Email is linked to your account.
            <%= link_to "Change email address", "#", class: "text-pink-500 hover:text-pink-600 underline" %>
            (can only be changed once every 30 days)
          </p>
          <% if @person.errors[:email].any? %>
            <p class="mt-1 text-sm text-pink-600"><%= @person.errors[:email].first %></p>
          <% end %>
        </div>

        <!-- Privacy Settings moved here -->
        <div class="pt-4 border-t border-gray-200">
          <h4 class="text-sm font-semibold text-gray-900 mb-3">Privacy Settings</h4>
          <div class="flex items-center justify-between">
            <div class="flex-1">
              <p class="text-sm font-medium text-gray-700">Hide Contact Information</p>
              <p class="text-xs text-gray-500 mt-1">
                When enabled, your email and phone will not be visible on your public profile
              </p>
            </div>
            <label class="relative inline-flex items-center cursor-pointer ml-4">
              <%= person_form.check_box :hide_contact_info, class: "sr-only peer", data: { action: "change->profile-auto-save#save" } %>
              <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-pink-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-pink-500"></div>
            </label>
          </div>
        </div>
      </div>
    </div>

    <!-- Social Media & Links Section -->
    <div id="social-media" class="bg-white border border-gray-200 rounded-lg overflow-hidden mb-6">
      <div class="bg-gray-50 px-4 py-3 border-b border-gray-200">
        <h3 class="text-md font-semibold text-gray-900 coustard-regular">Social Media & Links</h3>
      </div>
      <div class="p-6">
        <div data-controller="socials">
          <div id="socials-fields" data-socials-target="list" class="space-y-2">
            <%= person_form.fields_for :socials do |social_form| %>
              <div class="flex items-center gap-2" data-socials-target="row"<% if social_form.object.persisted? %> data-socials-persisted="true"<% end %>>
                <%= social_form.hidden_field :id %>
                <%= social_form.hidden_field :_destroy, value: "0", data: { socials_target: "destroy" } %>
                <%= social_form.select :platform, Social.platforms.keys.map { |k| [k.titleize, k] }, {}, class: "rounded-lg border border-gray-300 px-3 py-2", data: { action: "change->profile-auto-save#save" } %>
                <%= social_form.text_field :handle, placeholder: "Username/Handle", class: "flex-1 rounded-lg border border-gray-300 px-3 py-2", data: { action: "blur->profile-auto-save#save" } %>
                <%= link_to "Remove", '#', class: "text-pink-500 underline text-sm", data: { action: "socials#remove" } %>
              </div>
            <% end %>
          </div>
          <%= link_to "Add Social", '#', class: "inline-block mt-2 text-pink-500 underline text-sm", data: { action: "socials#add" } %>
          <template id="socials-template">
            <div class="flex items-center gap-2 socials-fields-row" data-socials-target="row">
              <select name="" class="rounded-lg border border-gray-300 px-3 py-2">
                <% Social.platforms.keys.each do |platform| %>
                  <option value="<%= platform %>"><%= platform.titleize %></option>
                <% end %>
              </select>
              <input type="text" name="" class="flex-1 rounded-lg border border-gray-300 px-3 py-2" placeholder="Username/Handle" />
              <a href="#" class="text-pink-500 underline text-sm" data-action="click->socials#remove">Remove</a>
            </div>
          </template>
        </div>
      </div>
    </div>

    <!-- Legacy Headshot & Resume (for backward compatibility) -->
    <div id="legacy-files" class="hidden">
      <%= render "shared/person_form", person_form: person_form %>
    </div>

    <!-- Headshots Section -->
    <%= render "profile/headshots_form", person_form: person_form %>

    <!-- Resumes Section -->
    <%= render "profile/resumes_form_new", person_form: person_form %>

    <!-- New Profile Sections -->
      <%= render "shared/profile_videos_form_new", person_form: person_form %>
        <%= render "profile/performance_credits_form_new", person_form: person_form %>
        <%= render "profile/training_credits_form_new", person_form: person_form %>
        <%= render "profile/skills_form_new", person_form: person_form %>

      <!-- Privacy Settings -->
      <div id="privacy" class="bg-white border border-gray-200 rounded-lg overflow-hidden mb-6">
        <div class="bg-gray-50 px-4 py-3 border-b border-gray-200">
          <h3 class="text-md font-semibold text-gray-900 coustard-regular">Privacy Settings</h3>
        </div>
        <div class="p-6">
          <div class="flex items-center justify-between">
            <div class="flex-1">
              <%= person_form.label :hide_contact_info, "Hide contact information from public profile", class: "text-sm font-medium text-gray-700" %>
              <p class="text-xs text-gray-500 mt-1">
                When enabled, your email and social media links will not be visible on your public profile.
              </p>
            </div>
            <label class="relative inline-flex items-center cursor-pointer ml-4">
              <%= person_form.check_box :hide_contact_info, class: "sr-only peer" %>
              <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-pink-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-pink-500"></div>
            </label>
          </div>
        </div>
      </div>

  <!-- Save Button -->
  <div class="sticky bottom-0 bg-white border-t border-gray-200 py-4">
    <%= person_form.submit "Save Changes", class: "w-full sm:w-auto rounded-lg px-6 py-2.5 text-white bg-pink-500 hover:bg-pink-600 font-medium cursor-pointer transition-colors" %>
  </div>

  <% end %>
</div>

<!-- Image Modal -->
<div id="imageModal" class="hidden fixed inset-0 bg-black/60 backdrop-blur-sm z-50 flex items-center justify-center p-4" data-controller="modal" data-action="click->modal#close">
  <div class="relative max-w-6xl max-h-full" data-action="click->modal#stopPropagation">
    <button type="button" data-action="click->modal#close" class="absolute -top-12 right-0 text-white hover:text-pink-300 transition-colors cursor-pointer">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-8 h-8">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
    <img id="modalImage" src="" alt="Full size" class="max-w-full max-h-[90vh] object-contain rounded-lg shadow-2xl">
  </div>
</div>
