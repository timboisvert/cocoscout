<% content_for :title, "Share Profile" %>

<div class="w-full">
  <%= render partial: "shared/notice", locals: { notice: notice } %>

  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Edit Profile", profile_path]
    ],
    text: "Share Profile",
    links: [
      { text: "Edit Profile", path: profile_path, style: "secondary" },
      { text: "Preview", path: profile_preview_path, style: "secondary" }
    ]
  } %>

  <div class="max-w-2xl mx-auto">
    <div class="bg-white border border-gray-200 rounded-lg overflow-hidden mb-6">
      <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">Your Public Profile</h2>
      </div>

      <div class="p-6 space-y-6">
        <!-- Profile URL -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Your Profile URL</label>
          <div class="flex gap-2">
            <input type="text"
                   value="<%= @public_url %>"
                   readonly
                   id="profile-url"
                   class="flex-1 rounded-lg border border-gray-300 px-3 py-2 text-sm bg-gray-50">
            <button type="button"
                    onclick="copyProfileUrl()"
                    class="px-4 py-2 bg-pink-500 hover:bg-pink-600 text-white rounded-lg text-sm font-medium transition-colors flex items-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15.666 3.888A2.25 2.25 0 0013.5 2.25h-3c-1.03 0-1.9.693-2.166 1.638m7.332 0c.055.194.084.4.084.612v0a.75.75 0 01-.75.75H9a.75.75 0 01-.75-.75v0c0-.212.03-.418.084-.612m7.332 0c.646.049 1.288.11 1.927.184 1.1.128 1.907 1.077 1.907 2.185V19.5a2.25 2.25 0 01-2.25 2.25H6.75A2.25 2.25 0 014.5 19.5V6.257c0-1.108.806-2.057 1.907-2.185a48.208 48.208 0 011.927-.184" />
              </svg>
              Copy Link
            </button>
          </div>
          <p class="text-xs text-gray-500 mt-2">Share this link on your resume, email signature, or social media</p>
        </div>

        <!-- QR Code Section -->
        <div class="border-t border-gray-200 pt-6">
          <label class="block text-sm font-medium text-gray-700 mb-3">QR Code</label>
          <div class="flex flex-col items-center gap-4 p-6 bg-gray-50 rounded-lg">
            <div id="qrcode" class="bg-white p-4 rounded-lg shadow-sm"></div>
            <button type="button"
                    onclick="downloadQRCode()"
                    class="px-4 py-2 bg-gray-700 hover:bg-gray-800 text-white rounded-lg text-sm font-medium transition-colors flex items-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5M16.5 12L12 16.5m0 0L7.5 12m4.5 4.5V3" />
              </svg>
              Download QR Code
            </button>
            <p class="text-xs text-gray-500 text-center">Add this QR code to your resume or business cards</p>
          </div>
        </div>

        <!-- Quick Actions -->
        <div class="border-t border-gray-200 pt-6 flex gap-3">
          <%= link_to profile_preview_path, class: "flex-1 text-center px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg text-sm font-medium transition-colors" do %>
            Preview Profile
          <% end %>
          <%= link_to profile_path, class: "flex-1 text-center px-4 py-2 bg-pink-500 hover:bg-pink-600 text-white rounded-lg text-sm font-medium transition-colors" do %>
            Edit Profile
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- QR Code Library -->
<script src="https://cdn.jsdelivr.net/npm/qrcodejs@1.0.0/qrcode.min.js"></script>

<script>
  // Generate QR Code
  const qrcode = new QRCode(document.getElementById("qrcode"), {
    text: "<%= @public_url %>",
    width: 200,
    height: 200,
    colorDark: "#000000",
    colorLight: "#ffffff",
    correctLevel: QRCode.CorrectLevel.H
  });

  // Copy URL to clipboard
  function copyProfileUrl() {
    const input = document.getElementById('profile-url');
    input.select();
    document.execCommand('copy');

    // Show feedback
    const button = event.target.closest('button');
    const originalText = button.innerHTML;
    button.innerHTML = `
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
      </svg>
      Copied!
    `;

    setTimeout(() => {
      button.innerHTML = originalText;
    }, 2000);
  }

  // Download QR Code
  function downloadQRCode() {
    const canvas = document.querySelector('#qrcode canvas');
    if (canvas) {
      const url = canvas.toDataURL('image/png');
      const link = document.createElement('a');
      link.download = 'profile-qr-code.png';
      link.href = url;
      link.click();
    }
  }
</script>
