<% content_for :title, "Delete #{@production.name}" %>

<div class="w-full">
  <%= render partial: "shared/notice", locals: { notice: notice } %>

  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [
      ["Production Settings", edit_manage_production_path(@production)]
    ],
    text: "Delete Production",
    links: []
  } %>

  <div class="mt-5 border border-gray-200 rounded-lg overflow-hidden">
    <div class="bg-gray-50 px-4 py-3 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900 coustard-regular">Delete "<%= @production.name %>"</h2>
    </div>

    <div class="p-6">
      <div class="text-gray-700 text-sm pb-6 border-b border-gray-200">
        <p class="font-semibold text-red-600 mb-4">Warning: This action cannot be undone.</p>
        <p>Deleting this production will permanently remove all of the following data:</p>
      </div>

      <!-- What will be deleted -->
      <div class="mt-6 p-4 border border-gray-200 rounded-lg bg-gray-50">
        <h3 class="text-base font-semibold text-gray-900 mb-4">Data that will be permanently deleted:</h3>

        <ul class="space-y-3 text-sm text-gray-700">
          <li class="flex items-center">
            <svg class="w-5 h-5 text-red-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            <span><strong><%= @shows_count %></strong> shows and events (including all cast assignments and availability data)</span>
          </li>
          <li class="flex items-center">
            <svg class="w-5 h-5 text-red-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            <span><strong><%= @roles_count %></strong> roles defined for this production</span>
          </li>
          <li class="flex items-center">
            <svg class="w-5 h-5 text-red-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            <span><strong><%= @posters_count %></strong> production posters</span>
          </li>
          <li class="flex items-center">
            <svg class="w-5 h-5 text-red-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            <span><strong><%= @audition_cycles_count %></strong> audition cycles (including all audition sessions and submissions)</span>
          </li>
          <li class="flex items-center">
            <svg class="w-5 h-5 text-red-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            <span><strong><%= @questionnaires_count %></strong> questionnaires (including all responses)</span>
          </li>
          <li class="flex items-center">
            <svg class="w-5 h-5 text-red-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            <span>The production logo and all associated files</span>
          </li>
          <li class="flex items-center">
            <svg class="w-5 h-5 text-red-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            <span>All production-specific permissions for team members</span>
          </li>
        </ul>
      </div>

      <!-- What will NOT be deleted -->
      <div class="mt-6 p-4 border border-green-200 rounded-lg bg-green-50">
        <h3 class="text-base font-semibold text-gray-900 mb-4">Data that will NOT be affected:</h3>

        <ul class="space-y-3 text-sm text-gray-700">
          <li class="flex items-center">
            <svg class="w-5 h-5 text-green-600 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span>Your directory of people and groups</span>
          </li>
          <li class="flex items-center">
            <svg class="w-5 h-5 text-green-600 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span>Your organization's locations</span>
          </li>
          <li class="flex items-center">
            <svg class="w-5 h-5 text-green-600 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span>Other productions in your organization</span>
          </li>
          <li class="flex items-center">
            <svg class="w-5 h-5 text-green-600 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span>Team member accounts (they will still have access to other productions)</span>
          </li>
        </ul>
      </div>

      <!-- Delete Section -->
      <div class="mt-6 p-4 border border-red-200 rounded-lg bg-red-50">
        <div class="flex items-start mb-3">
          <svg class="w-5 h-5 text-red-600 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
          </svg>
          <h3 class="text-base font-semibold text-gray-900">Permanently Delete Production</h3>
        </div>
        <p class="text-sm text-gray-700 mb-4 ml-8">Type <strong>"<%= @production.name %>"</strong> to confirm deletion.</p>

        <%= form_with url: manage_production_path(@production), method: :delete, local: true, data: { controller: "confirm-delete" } do |f| %>
          <div class="ml-8 mb-4">
            <input type="text"
                   data-confirm-delete-target="input"
                   data-action="input->confirm-delete#checkMatch"
                   data-expected="<%= @production.name %>"
                   placeholder="Type production name to confirm"
                   class="block w-full max-w-md rounded-lg border border-gray-300 px-3 py-2 text-sm focus:border-pink-500 focus:ring-pink-500"
                   autocomplete="off">
          </div>
          <div class="ml-8">
            <%= render "shared/button",
                text: "Delete Production Permanently",
                variant: "danger",
                size: "medium",
                type: :submit,
                disabled: true,
                data: { "confirm-delete-target": "button" } %>
          </div>
        <% end %>
      </div>

      <!-- Cancel button -->
      <div class="mt-6">
        <%= render "shared/button",
            text: "Cancel and go back",
            variant: "secondary",
            size: "medium",
            path: edit_manage_production_path(@production, anchor: "tab-4") %>
      </div>
    </div>
  </div>
</div>
