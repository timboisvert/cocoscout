<% content_for :title, "Auditions" %>

<div class="w-full mb-10">
  <%= render partial: "shared/notice", locals: { notice: notice } %>
  <%= render partial: "shared/top_menu", locals: {
    breadcrumbs: [],
    text: "Auditions",
    links: []
  } %>

  <% if @active_audition_cycle.present? %>
    <!-- Active Call to Audition Info -->
    <div class="mb-6 bg-white border border-gray-200 rounded-lg shadow-sm overflow-hidden">
      <div class="bg-gray-50 px-4 py-3 border-b border-gray-200 flex justify-between items-center">
        <h3 class="text-md font-semibold text-gray-900 coustard-regular">Active Audition Cycle</h3>
        <% if current_user_can_manage?(@production) %>
          <%= button_to "Archive This Audition Cycle", archive_manage_production_audition_cycle_path(@production, @active_audition_cycle), method: :patch, class: "text-xs text-pink-500 underline cursor-pointer", data: { turbo_confirm: "Are you sure? This will close the current audition cycle and you can create a new one." } %>
        <% end %>
      </div>
      <div class="p-6">
        <%
          # Check if casting has been completed
          has_casting_notifications = @active_audition_cycle.casting_finalized_at.present?
        %>

        <% if has_casting_notifications %>
          <div class="mb-4 p-4 bg-green-50 border border-green-200 rounded-lg">
            <div class="flex items-start gap-3">
              <div class="flex-shrink-0">
                <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div class="flex-1">
                <h4 class="text-sm font-semibold text-green-900 mb-1">Audition Process Complete</h4>
                <p class="text-sm text-green-800">
                  Casting notifications have been sent and this audition cycle is complete. You can now archive this audition cycle and start a new one if needed.
                </p>
              </div>
            </div>
          </div>
        <% end %>

        <p class="text-sm text-gray-500 mb-4">Current audition cycle settings and statistics.</p>

        <%
          # Determine status
          if @active_audition_cycle.opens_at > Time.current
            status = :upcoming
          elsif @active_audition_cycle.closes_at.present? && @active_audition_cycle.closes_at <= Time.current
            status = :closed
          else
            status = :open
          end
        %>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-3 mb-4">
          <div class="p-3 bg-gray-50 rounded-lg">
            <p class="text-xs text-gray-600 font-medium">Audition Type</p>
            <p class="text-sm font-semibold text-gray-900 mt-1">
              <% if @active_audition_cycle.audition_type == "in_person" %>
                In-person Auditions
              <% elsif @active_audition_cycle.audition_type == "video_upload" %>
                Video Upload Auditions
              <% end %>
            </p>
          </div>
          <div class="p-3 bg-gray-50 rounded-lg">
            <p class="text-xs text-gray-600 font-medium">Sign-up Window</p>
            <p class="text-sm font-semibold text-gray-900 mt-1">
              <%= @active_audition_cycle.opens_at.strftime("%b %-d, %Y at %l:%M %p") %><% if @active_audition_cycle.closes_at.present? %> - <%= @active_audition_cycle.closes_at.strftime("%b %-d, %Y at %l:%M %p") %><% else %> (open-ended)<% end %>
              <% if status == :upcoming %>
                <% seconds_until = (@active_audition_cycle.opens_at - Time.current).to_i %>
                <% if seconds_until > 0 && seconds_until < 172800 %>
                  <div class="text-xs text-pink-500 mt-1" data-controller="countdown" data-countdown-until-value="<%= @active_audition_cycle.opens_at.utc.iso8601 %>">
                    Opens in <span data-countdown-target="clock"></span>
                  </div>
                <% elsif seconds_until > 0 %>
                  <span class="block text-xs text-pink-500 mt-1">Opens in <%= distance_of_time_in_words(Time.current, @active_audition_cycle.opens_at) %></span>
                <% end %>
              <% elsif status == :open && @active_audition_cycle.closes_at.present? %>
                <% seconds_until = (@active_audition_cycle.closes_at - Time.current).to_i %>
                <% if seconds_until > 0 && seconds_until < 172800 %>
                  <div class="text-xs text-pink-500 mt-1" data-controller="countdown" data-countdown-until-value="<%= @active_audition_cycle.closes_at.utc.iso8601 %>">
                    Closes in <span data-countdown-target="clock"></span>
                  </div>
                <% elsif seconds_until > 0 %>
                  <span class="block text-xs text-pink-500 mt-1">Closes in <%= distance_of_time_in_words(Time.current, @active_audition_cycle.closes_at) %></span>
                <% end %>
              <% end %>
            </p>
          </div>

          <% if status == :open %>
            <div class="p-3 bg-gray-50 rounded-lg">
              <p class="text-xs text-gray-600 font-medium">Sign-ups Received</p>
              <p class="text-sm font-semibold text-gray-900 mt-1"><%= @active_audition_cycle.audition_requests.count %></p>
            </div>
            <div class="p-3 bg-gray-50 rounded-lg">
              <p class="text-xs text-gray-600 font-medium">Sign-ups To Be Reviewed</p>
              <p class="text-sm font-semibold text-gray-900 mt-1"><%= @active_audition_cycle.audition_requests.where(status: [:unreviewed, :undecided]).count %></p>
            </div>
          <% elsif status == :closed && @active_audition_cycle.audition_type == 'in_person' %>
            <%
              # Only show these stats if auditions haven't happened yet
              last_session = @active_audition_cycle.audition_sessions.order(start_at: :desc).first
              auditions_not_yet_happened = last_session.nil? || last_session.start_at.nil? || last_session.start_at > Time.current

              if auditions_not_yet_happened
                scheduled_person_ids = @active_audition_cycle.audition_sessions.joins(:auditions).distinct.pluck('auditions.person_id')
                accepted_people_count = @active_audition_cycle.audition_requests.where(status: :accepted).count
                to_be_scheduled_count = @active_audition_cycle.audition_requests.where(status: :accepted, requestable_type: 'Person').where.not(requestable_id: scheduled_person_ids).count
            %>
              <div class="p-3 bg-gray-50 rounded-lg">
                <p class="text-xs text-gray-600 font-medium">Auditions Scheduled</p>
                <p class="text-sm font-semibold text-gray-900 mt-1"><%= scheduled_person_ids.count %></p>
              </div>
              <div class="p-3 bg-gray-50 rounded-lg">
                <p class="text-xs text-gray-600 font-medium">Auditions To Be Scheduled</p>
                <p class="text-sm font-semibold text-gray-900 mt-1"><%= to_be_scheduled_count %></p>
              </div>
            <% end %>
          <% end %>
        </div>

        <% if current_user_can_manage?(@production) %>
          <%= render partial: "shared/link_button", locals: {text: "Edit Settings", path: edit_manage_production_audition_cycle_path(@production, @active_audition_cycle)} %>
        <% end %>
      </div>
    </div>

    <!-- Audition Process Steps -->
    <div class="mb-6 bg-white border border-gray-200 rounded-lg shadow-sm overflow-hidden">
            <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900 coustard-regular">Audition Process</h3>
      </div>

      <div class="p-8">
        <div class="relative">
          <!-- Connecting line -->
          <div class="absolute left-8 top-8 bottom-8 w-0.5 bg-gray-200" style="height: calc(100% - 4rem);"></div>

          <div class="grid grid-cols-1 gap-12">

            <!-- Step 1: Prepare -->
            <%= link_to prepare_manage_production_audition_cycle_path(@production, @active_audition_cycle), class: "no-underline" do %>
              <div class="relative flex flex-col items-start text-left group">
                <div class="flex items-start gap-6">
                  <div class="flex-shrink-0 w-16 h-16 rounded-full flex items-center justify-center z-10 ring-4 ring-white transition-all bg-pink-100">
                    <svg class="w-8 h-8 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                  </div>
                  <div class="flex-1">
                    <h4 class="text-lg font-semibold text-gray-900 group-hover:text-pink-500 transition-colors">Prepare</h4>

                    <p class="text-gray-600 text-sm mt-1">
                      <% if @active_audition_cycle.audition_type == 'video_upload' %>
                        Configure settings and customize audition form
                      <% elsif @active_audition_cycle.audition_type == 'in_person' %>
                        Configure settings, plan sessions, and customize sign-up form
                      <% end %>
                    </p>

                    <% if @active_audition_cycle.audition_type == 'in_person' && @active_audition_cycle.audition_sessions.any? %>
                      <% session_count = @active_audition_cycle.audition_sessions.count %>
                      <p class="text-xs text-green-600 font-medium mt-2">✓ <%= session_count %> audition <%= 'session'.pluralize(session_count) %> scheduled</p>
                    <% end %>

                    <% if @active_audition_cycle.form_reviewed %>
                      <p class="text-xs text-green-600 font-medium mt-2">✓ <%= @active_audition_cycle.audition_type == 'video_upload' ? 'Audition form finalized' : 'Sign-up form finalized' %></p>
                    <% end %>

                  </div>
                </div>
              </div>
            <% end %>

            <!-- Step 2: Publicize -->
            <%= link_to publicize_manage_production_audition_cycle_path(@production, @active_audition_cycle), class: "no-underline" do %>
              <div class="relative flex flex-col items-start text-left group">
                <div class="flex items-start gap-6">
                  <div class="flex-shrink-0 w-16 h-16 rounded-full flex items-center justify-center z-10 ring-4 ring-white transition-all bg-pink-100">
                    <svg class="w-8 h-8 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z" />
                    </svg>
                  </div>
                  <div class="flex-1">
                    <h4 class="text-lg font-semibold text-gray-900 group-hover:text-pink-500 transition-colors">Publicize</h4>
                    <p class="text-gray-600 text-sm mt-1">Share sign-up link and collect applications</p>
                  </div>
                </div>
              </div>
            <% end %>

            <!-- Step 3: Review -->
            <%= link_to review_manage_production_audition_cycle_path(@production, @active_audition_cycle), class: "no-underline" do %>
              <div class="relative flex flex-col items-start text-left group">
                <div class="flex items-start gap-6">
                  <div class="flex-shrink-0 w-16 h-16 rounded-full flex items-center justify-center z-10 ring-4 ring-white transition-all bg-pink-100">
                    <svg class="w-8 h-8 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
                    </svg>
                  </div>
                  <div class="flex-1">
                    <h4 class="text-lg font-semibold text-gray-900 group-hover:text-pink-500 transition-colors">Review</h4>
                    <p class="text-gray-600 text-sm mt-1"><%= @active_audition_cycle.audition_type == 'video_upload' ? 'Watch and evaluate auditions' : 'Accept or decline sign-ups and schedule auditions' %></p>
                    <%
                      total_signups = @active_audition_cycle.audition_requests.count
                      # Count people who are actually scheduled for auditions
                      scheduled_count = @active_audition_cycle.audition_sessions.joins(:auditions).select('auditions.person_id').distinct.count
                    %>
                    <% if total_signups > 0 %>
                      <p class="text-xs text-green-600 font-medium mt-2">✓ <%= total_signups %> <%= 'sign-up'.pluralize(total_signups) %> received</p>
                    <% end %>
                    <% if scheduled_count > 0 %>
                      <p class="text-xs text-green-600 font-medium mt-2">✓ <%= scheduled_count %> <%= 'person'.pluralize(scheduled_count) %> offered <%= 'an audition'.pluralize(scheduled_count) %></p>
                    <% end %>
                    <% if @active_audition_cycle.finalize_audition_invitations %>
                      <% notified_count = @active_audition_cycle.audition_requests.count %>
                      <p class="text-xs text-green-600 font-medium mt-2">✓ Audition decision notifications sent to <%= notified_count %> <%= 'person'.pluralize(notified_count) %></p>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>

            <!-- Step 4: Run Auditions -->
            <% if @active_audition_cycle.audition_type != "video_upload" %>
              <%= link_to run_manage_production_audition_cycle_path(@production, @active_audition_cycle), class: "no-underline" do %>
                <div class="relative flex flex-col items-start text-left group">
                  <div class="flex items-start gap-6">
                    <div class="flex-shrink-0 w-16 h-16 rounded-full flex items-center justify-center z-10 ring-4 ring-white transition-all bg-pink-100">
                      <svg class="w-8 h-8 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                      </svg>
                    </div>
                    <div class="flex-1">
                      <h4 class="text-lg font-semibold text-gray-900 group-hover:text-pink-500 transition-colors">Run Auditions</h4>
                      <p class="text-gray-600 text-sm mt-1">Conduct sessions and evaluate performances</p>
                      <%
                        completed_sessions = @active_audition_cycle.audition_sessions.where("end_at < ?", Time.current).count
                        if completed_sessions > 0
                      %>
                        <p class="text-xs text-green-600 font-medium mt-2">✓ <%= completed_sessions %> audition <%= 'session'.pluralize(completed_sessions) %> completed</p>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            <% end %>

            <!-- Step 5: Casting -->
            <%= link_to casting_manage_production_audition_cycle_path(@production, @active_audition_cycle), class: "no-underline" do %>
              <div class="relative flex flex-col items-start text-left group">
                <div class="flex items-start gap-6">
                  <div class="flex-shrink-0 w-16 h-16 rounded-full flex items-center justify-center z-10 ring-4 ring-white transition-all bg-pink-100">
                    <svg class="w-8 h-8 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                  </div>
                  <div class="flex-1">
                    <h4 class="text-lg font-semibold text-gray-900 group-hover:text-pink-500 transition-colors">Casting</h4>
                    <p class="text-gray-600 text-sm mt-1">Send decisions and add people to casts</p>
                    <%
                      # Count unique people added to casts during THIS audition cycle
                      cast_people_count = @active_audition_cycle.cast_assignment_stages.select(:person_id).distinct.count
                      if cast_people_count > 0
                    %>
                      <p class="text-xs text-green-600 font-medium mt-2">✓ <%= cast_people_count %> <%= 'person'.pluralize(cast_people_count) %> added to <%= cast_people_count == 1 ? 'a cast' : 'casts' %></p>
                    <% end %>
                    <%
                      # Check if casting was finalized
                      if @active_audition_cycle.casting_finalized_at.present?
                        finalized_stages = @active_audition_cycle.cast_assignment_stages.where(status: :finalized)
                        # Count total people who auditioned to show how many were notified
                        audition_session_ids = @active_audition_cycle.audition_sessions.pluck(:id)
                        total_auditioned = Person.joins(:auditions).where(auditions: { audition_session_id: audition_session_ids }).distinct.count

                        if finalized_stages.any?
                    %>
                      <p class="text-xs text-green-600 font-medium mt-2">✓ Casting decision notifications sent to <%= total_auditioned %> <%= 'person'.pluralize(total_auditioned) %></p>
                    <%
                        else
                    %>
                      <p class="text-xs text-green-600 font-medium mt-2">✓ Casting finalized with no new cast members added</p>
                      <p class="text-xs text-green-600 font-medium mt-2">✓ Casting decision notifications sent to <%= total_auditioned %> <%= 'person'.pluralize(total_auditioned) %></p>
                    <%
                        end
                      end
                    %>
                  </div>
                </div>
              </div>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  <% else %>
    <div class="text-gray-500 text-sm mb-4">
      You can open an audition window, manage your sign-up form, review sign-ups, and run audition sessions. Start by offering auditions to begin the process.
    </div>

    <% if current_user_can_manage?(@production) %>
      <%= render partial: "shared/link_button", locals: {text: "Offer Auditions", path: new_manage_production_audition_cycle_path(@production)} %>
    <% end %>
  <% end %>

  <!-- Past Calls to Audition -->
  <div class="mt-8 bg-white border border-gray-200 rounded-lg shadow-sm overflow-hidden">
    <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-semibold text-gray-900 coustard-regular">Past Audition Cycles</h3>
    </div>
    <% if @past_audition_cycles.any? %>
      <div class="divide-y divide-gray-200">
        <% @past_audition_cycles.each do |audition_cycle| %>
          <%= link_to manage_production_audition_cycle_path(@production, audition_cycle), class: "block p-6 hover:bg-gray-50 transition-colors group" do %>
            <div class="flex justify-between items-start">
              <div>
                <h4 class="font-semibold text-gray-900 group-hover:text-pink-500 transition-colors">
                  <%= audition_cycle.audition_type.titleize %> Auditions
                </h4>
                <p class="text-sm text-gray-600 mt-1">
                  <%= audition_cycle.opens_at&.strftime("%b %d, %Y") %><% if audition_cycle.closes_at.present? %> - <%= audition_cycle.closes_at.strftime("%b %d, %Y") %><% else %> (open-ended)<% end %>
                </p>
              </div>
              <div class="text-sm text-gray-500">
                Archived
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="p-6 text-left text-gray-500 text-sm">
        This production hasn't offered auditions yet.
      </div>
    <% end %>
  </div>
</div>
